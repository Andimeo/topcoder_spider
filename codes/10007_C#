            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class RoyalTreasurer<br>{<br>  public int minimalArrangement(int[] A, int[] B)<br>  {<br>    Array.Sort(A);<br>    Array.Sort(B);<br>    int sum = 0;<br>    for (int i = 0; i &lt; A.Length; ++i)<br>      sum += A[i] * B[B.Length - i - 1];<br>      return sum;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>