            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br><br>public class ColumnDiagramPerimeter {<br>    public int getPerimiter(int[] a) {<br>        int res = a.Length*2;<br>        res += a[0];<br>        for (int i = 0; i &lt; a.Length - 1; i++)<br>            res += Math.Abs(a[i + 1] - a[i]);<br>        res += a[a.Length - 1];<br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>