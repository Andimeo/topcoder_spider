            using System;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class EquilibriumPoints<br>{<br>    double val(int[] x, int[] m, int n, double p)<br>    {<br>        double r = 0.0;<br>        for (int i = 0; i &lt;= n; ++i)<br>        {<br>            r -= (double)m[i] / Math.Pow(p - x[i], 2.0);<br>        }<br>        for (int i = n + 1; i &lt; x.Length; ++i)<br>        {<br>            r += (double)m[i] / Math.Pow(p - x[i], 2.0);<br>        }<br>        return r;<br>    }<br><br>    public double[] getPoints(int[] x, int[] m)<br>    {<br>        double[] result = new double[x.Length - 1];<br><br>        for (int i = 0; i + 1 &lt; x.Length; ++i)<br>        {<br>            double lo = x[i];<br>            double hi = x[i+1];<br>            while (hi - lo &gt; 1E-10)<br>            {<br>                double med = (lo + hi) / 2;<br>                double v = val(x,  m, i, med);<br>                if (v &lt; 0)<br>                    lo = med;<br>                else <br>                    hi = med;<br>            }<br>            result[i] = lo;<br>        }<br>        return result;<br>    }<br><br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>