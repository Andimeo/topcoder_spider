            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class GymTraining<br>{<br>  public int trainingTime(int needToTrain, int minPulse, int maxPulse, int trainChange, int restChange)<br>  {<br>    if(minPulse + trainChange &gt; maxPulse)<br>      return -1;<br>    <br>    int time = 0;<br>    int pulse = minPulse;<br>    while(needToTrain &gt; 0)<br>    {<br>      time++;<br>      if(pulse + trainChange &gt; maxPulse)<br>        pulse = Math.Max(pulse - restChange, minPulse);<br>      else<br>      {<br>        pulse += trainChange;<br>        needToTrain--;<br>      }<br>    }<br>    return time;  <br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>