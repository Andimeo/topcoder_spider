<td class="problemText" colspan="8" valign="middle" align="left">
            #include &lt;iostream&gt;<br> <br>using namespace std;<br> <br>class GymTraining {<br>public:<br>  int trainingTime(int need, int mi, int ma, int train, int rest) {<br>    int p=mi;<br>    <br>    if(p+train&gt;ma) return -1;<br>    <br>    int total=0;<br>    int work=0;<br>    while(work&lt;need) {<br>      total++;<br>      if(p+train&lt;=ma) {<br>        p+=train;<br>        work+=1;<br>      } else {<br>        p-=rest;<br>        if(p&lt;mi) p=mi;<br>      }<br>    <br>    }<br>    <br>    return total;<br>  }<br> <br>};<br></td>