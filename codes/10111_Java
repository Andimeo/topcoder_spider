            public class CorruptMages{<br>  public int minimalNumber(int[] power){<br>    int ans = 0;<br>    int count = 0;<br>    while(ans &lt; power.length){<br>      int max = 0;<br>      int maxIndex = 0;<br>      for(int i = 0; i &lt; power.length; i++){<br>        if(power[i] &gt; max){<br>          max = power[i];<br>          maxIndex = i;<br>        }<br>      }<br>      ans = ans + max + 1;<br>      power[maxIndex] = 0;<br>      //System.out.println(max);<br>      count++;<br>    }<br>    return count;<br>  }<br>}<br></td>