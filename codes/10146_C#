            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class KnockoutTourney<br>{<br>   public int meetRival(int N, int you, int rival)<br>   {<br>       int ret = 0;<br><br>       while (you != rival)<br>       {<br>           if (you % 2 == 1) you++;<br>           you /= 2;<br>           if (rival % 2 == 1) rival++;<br>           rival /= 2;<br>           ret++;<br>       }<br><br>       return ret;<br>   }<br><br><br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>