            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;queue&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br> <br>using namespace std;<br> <br> <br>class Xosceles {<br>public:<br>  vector &lt;string&gt; draw(int xCount) {<br>    vector &lt;string&gt; ans;<br>    ans.clear ();<br>    int cc=(int)sqrt (xCount);<br>    int odd=cc*cc;<br>    int even=cc*cc+cc;<br>    if (odd==xCount)<br>    {<br>      string ret;<br>      for (int i=0;i&lt;cc;i++)<br>      {<br>        ret.clear ();<br>        for (int j=i+1;j&lt;cc;j++)<br>        {<br>          ret.push_back ('.');<br>        }<br>        for (int j=0;j&lt;(2*i+1);j++)<br>        {<br>          ret.push_back ('X');<br>        }<br>        for (int j=i+1;j&lt;cc;j++)<br>        {<br>          ret.push_back ('.');<br>        }<br>        ans.push_back (ret);<br>      }  <br>    }<br>    if (even==xCount)<br>    {<br>      string ret;<br>      for (int i=0;i&lt;cc;i++)<br>      {<br>        ret.clear ();<br>        for (int j=i+1;j&lt;cc;j++)<br>        {<br>          ret.push_back ('.');<br>        }<br>        for (int j=0;j&lt;(2*i+2);j++)<br>        {<br>          ret.push_back ('X');<br>        }<br>        for (int j=i+1;j&lt;cc;j++)<br>        {<br>          ret.push_back ('.');<br>        }<br>        ans.push_back (ret);<br>      }<br>    }<br>    return (ans);            <br>  }<br>};<br> <br> <br> <br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>