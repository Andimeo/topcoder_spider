            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class Xosceles<br>{<br>  public String[] draw(int n)<br>  {<br>    String[] res = new String[0];<br>    int m = 0;<br>    int nc = n;<br>    int rc = 2;<br>    while(nc &gt; 0) {<br>      nc -= rc;<br>      rc += 2;<br>      m++;<br>    }<br>    if(nc != 0) {<br>      rc = 1;<br>      m = 0;<br>      nc = n;<br>      while(nc &gt; 0) {<br>        nc -= rc;<br>        rc += 2;<br>        m++;<br>      }<br>    }<br>    rc -= 2;<br>    if(nc != 0) return res;<br>    res = new String[m];<br>    for(int i = m-1; i &gt;= 0; i--) {<br>      res[i] = "";<br>      int p = m - i - 1;<br>      for(int j = 0; j &lt; p; j++) res[i] += ".";<br>      for(int j = 0; j &lt; rc; j++) res[i] += "X";<br>      for(int j = 0; j &lt; p; j++) res[i] += ".";<br>      rc -= 2;<br>    }<br>    return res;<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>