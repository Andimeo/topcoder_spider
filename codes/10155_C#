            using System;<br><br>public class DesignCalendar {<br>    int gcd(int a, int b)<br>    {<br>        while (b &gt; 0)<br>        {<br>            int t = a % b;<br>            a = b;<br>            b = t;<br>        }<br>        return a;<br>    }<br><br>    public int shortestPeriod(int dayLength, int yearLength) {<br>        return dayLength / gcd(dayLength, yearLength);<br>    }<br>    <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>