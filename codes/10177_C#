            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class ProductOfDigits<br>{<br>  public int smallestNumber(int N)<br>  {<br>    if ( N &lt; 10 ) return 1;<br>    <br>    int d = 0;<br>    for ( int i = 9; i &gt;= 2; i-- )<br>      while ( N % i == 0 ) {<br>        N /= i;<br>        d++;<br>      }<br>    if ( N == 1 ) return d;<br>    return -1;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>