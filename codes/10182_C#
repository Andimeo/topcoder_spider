            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class ThePalindrome<br>{<br>  bool ispal(string s) {<br>    for (int i = 0; i &lt; s.Length; ++i)<br>      if (s[i] != s[s.Length - i - 1]) return false;<br>      return true;<br>  }<br>  public int find(string s)<br>  {<br>    for (int i = 0; i &lt; s.Length; ++i) {<br>      if (ispal(s.Remove(0, i)))<br>        return s.Length + i;<br>    }<br>    throw new Exception();<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>