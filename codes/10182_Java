            public class ThePalindrome<br>{<br>  public int find(String s) {<br>    String ret="";<br>    String ss = "";<br>    StringBuilder sb = new StringBuilder(s);<br>    StringBuilder sb1 = new StringBuilder();      <br>    <br>    if (sb.reverse().toString().equals(s)) return s.length();<br>    <br>    for (int i = 0; i &lt; s.length(); i++) {<br>      ss += s.charAt(i);<br>      sb1 = new StringBuilder(ss);<br>      ret = s+sb1.reverse().toString();<br>      sb = new StringBuilder(ret);            <br>      if (ret.equals(sb.reverse().toString())) {        <br>        break;<br>      }      <br>    }    <br>    <br>    return ret.length();<br><br>  }<br><br><br>} // Powered by ExampleBuilder<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>