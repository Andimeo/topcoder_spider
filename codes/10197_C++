            // Cry as challenge phase is passing by<br><br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br><br>#include &lt;cmath&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstring&gt;<br><br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br><br>using namespace std;<br><br>#define FORC(it,v) for( __typeof((v).begin()) it = (v).begin(); it != (v).end(); ++it )<br><br>const int inf = 1000000000;<br><br>int graf[ 51 ][ 51 ];<br><br>class CommanderIdol<br>{ <br>public: <br>    int getMaxPopularity(vector &lt;string&gt; roads) <br>    {<br>        int n = roads.size();<br><br>        for( int i = 0; i &lt; n; ++i )<br>            for( int j = 0; j &lt; n; ++j )<br>                if( roads[i][j] == '-' )<br>                    graf[i][j] = inf;<br>                else<br>                    graf[i][j] = roads[i][j] - '0';<br><br>        for( int i = 0; i &lt; n; ++i )<br>            graf[i][i] = 0;<br><br>        for( int k = 0; k &lt; n; ++k )<br>            for( int i = 0; i &lt; n; ++i )<br>                for( int j = 0; j &lt; n; ++j )<br>                    graf[i][j] = min( graf[i][j], graf[i][k] + graf[k][j] );<br><br>        int maks = 0;<br><br>        for( int i = 0; i &lt; n; ++i )<br>            maks = max( maks, graf[0][i] );<br><br>        if( maks &gt;= inf ) return -1;<br><br>        int sum = 0;<br>            <br>        for( int i = 1; i &lt; n; ++i )<br>            sum += maks - graf[0][i];<br>        return sum;<br>    }<br><br><br><br>// ------------<br>    <br> <br>}; <br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>