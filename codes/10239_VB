            Imports Microsoft.VisualBasic<br>Imports System<br>Imports System.Collections<br>Imports System.Text<br>Imports System.Math<br>Public Class SuperSum<br>  Public Function binom07(ByVal n as Long, k as Long) As Long<br>    Dim Inverses() As Integer = {0, 1, 500000004, 333333336, 250000002, 400000003, 166666668, 142857144, _<br>    125000001, 111111112, 700000005, 818181824, 83333334, 153846155, _<br>    71428572, 466666670, 562500004, 352941179, 55555556, 157894738, _<br>    850000006, 47619048, 409090912, 739130440, 41666667, 280000002, _<br>    576923081, 370370373, 35714286, 758620695, 233333335, 129032259, _<br>    281250002, 939393946, 676470593, 628571433, 27777778, 621621626, _<br>    78947369, 717948723, 425000003, 658536590, 23809524, 395348840, _<br>    204545456, 822222228, 369565220, 404255322, 520833337, 448979595, _<br>    140000001, 784313731}<br>    Dim A As Long, B As Long<br>    <br>    If k = 0 Then<br>      Return 1<br>    Else<br>      A = (n - (k-1)) * Inverses(k) mod 1000000007<br>      B = binom07(n,k-1) mod 1000000007<br>      Return A*B mod 1000000007<br>    End If<br>  End Function<br>  Public Function calculate(ByVal k As Integer, ByVal n As Integer) As Integer<br>    return binom07(n+k,k+1)<br>  End Function<br>End Class<br></td>