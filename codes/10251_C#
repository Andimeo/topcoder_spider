            using System;<br> <br>public class LinearPolyominoCovering {<br>  public string findCovering(string region) {<br>        string t = "";<br>        string result = "";<br>        for (int i = 0; i &lt; region.Length; i++)<br>        {<br>            char c = region[i];<br>            if (c == '.')<br>            {<br>                int r = t.Length % 4;<br>                for (int j = 0; j &lt; t.Length / 4; j++)<br>                {<br>                    result += "AAAA";<br>                }<br>                if (r == 2) result += "BB";<br>                t = "";<br>                if (r != 2 &amp;&amp; r != 0) return "impossible";<br>                result += c;<br>            }<br>            else<br>            {<br>                t += c;<br>            }<br>        }<br>        int rt = t.Length % 4;<br>        if (rt != 2 &amp;&amp; rt != 0) return "impossible";<br>        for (int j = 0; j &lt; t.Length / 4; j++)<br>        {<br>            result += "AAAA";<br>        }<br>        if (rt == 2) result += "BB";<br>        return result;<br>  }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>