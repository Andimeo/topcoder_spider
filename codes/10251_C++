            #include&lt;cstdio&gt;<br>#include&lt;iostream&gt;<br>#include&lt;sstream&gt;<br>#include&lt;string&gt;<br>#include&lt;vector&gt;<br>#include&lt;map&gt;<br>#include&lt;stack&gt;<br>#include&lt;queue&gt;<br>#include&lt;cmath&gt;<br>#include&lt;utility&gt;<br>#include&lt;set&gt;<br>using namespace std;<br>class LinearPolyominoCovering<br>{<br> public:<br> string findCovering(string r)<br> {<br>  string t="",x="";<br>  for(int i=0;i&lt;r.size();)<br>  {<br>   if(i&lt;=r.size()-4 &amp;&amp; r.substr(i,4)=="XXXX")<br>   {<br>    t+="AAAA";<br>    i+=4;<br>    }<br>   else<br>   {<br>    t+=r[i];<br>    i++;<br>    }<br>   }<br>  for(int i=0;i&lt;t.size();)<br>  {<br>   <br>   if(i&lt;=t.size()-2 &amp;&amp; t.substr(i,2)=="XX")<br>   {<br>    x+="BB";<br>    i+=2;<br>    }<br>   else<br>   {<br>    x+=t[i];<br>    i++;<br>    }<br>   }<br>  bool found=false;<br>  for(int i=0;i&lt;x.size();i++)<br>  {<br>   if(x[i]=='X')<br>   found=true;<br>   }<br>   if(found)<br>   return "impossible";<br>   return x;<br>  }<br>};<br></td>