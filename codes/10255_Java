            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class WizardsAppointments<br>{<br>  public int scheduleAdjustment(int[] scheduledTimes, int[] arrivalTimes)<br>  {<br>    int l=scheduledTimes.length;<br>    int[] time=new int[l];<br>    for(int i=0;i&lt;l;i++)<br>      time[i]=scheduledTimes[i]-arrivalTimes[i];<br>    Arrays.sort(time);<br>    int begin,end;<br>    long min=0;<br>    for(int i=0;i&lt;l;i++)<br>      min+=Math.abs(time[i]-time[0]);<br>    begin=end=-time[0];<br>    <br>    for(int i=1;i&lt;l;i++)<br>    {<br>      long tmp=0;<br>      for(int j=0;j&lt;l;j++)<br>      {<br>        tmp+=Math.abs(time[j]-time[i]);<br>      }<br>      if(tmp==min)<br>      {<br>        end=-time[i];<br>      }<br>      else if(tmp&lt;min)<br>      {<br>        min=tmp;<br>        begin=end=-time[i];<br>      }<br>    }<br>    return begin-end+1;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>