            import java.util.*;<br> <br>public class MegaCoolNumbers {<br>    long MOD = 1000000007;<br>    Map&lt;Integer,Integer&gt;map=new HashMap&lt;Integer,Integer&gt;();<br>    public int count(int N, int A) {<br>        return c(N,A,-1, -1);<br>    }<br>    <br>    int c(int digits, int groups, int last, int dif) {<br>        int key = digits | ((groups+1)&lt;&lt;10) | ((last+1) &lt;&lt; 14)  | ((dif+1) &lt;&lt; 18);<br>        if (map.containsKey(key)) return map.get(key);<br>        long ret = 0;<br>        if (digits == 0) {<br>            if (groups==0) ret = 1;<br>            else ret = 0;<br>        } else if (groups &lt; 0) {<br>            ret = 0;<br>        } else {<br>            for (int i = Math.max(1,last); i &lt;= 9; i++) {<br>                int gn = groups;<br>                int dn = dif;<br>                if (last == -1 &amp;&amp; dif == -1) {<br>                    gn--;<br>                    dn = -1;<br>                } else if (dif == -1 || i-last==dif) {<br>                    dn = i-last;<br>                } else {<br>                    gn--;<br>                    dn = -1;<br>                }<br>                ret += c(digits-1,gn, i, dn);<br>                ret %= MOD;<br>            }<br>        }<br>        int r = (int)(ret%MOD);<br>        map.put(key,r);<br>        return r;<br>    }<br> <br> <br>}<br></td>