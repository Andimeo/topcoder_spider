            using System;<br><br>public class CellRemoval {<br>  public int cellsLeft(int[] parent, int deletedCell) {<br>        int root = -1;<br>        for (int i = 0; i &lt; parent.Length; ++i)<br>            if (parent[i] &lt; 0)<br>                root = i;<br>        return count(root, deletedCell, 1, parent);<br>  }<br><br>    private int count(int root, int deletedCell, int mulby, int[] parent)<br>    {<br>        if (root == deletedCell)<br>            mulby = 0;<br>        int res = 0;<br>        bool any = false;<br>        for (int i = 0; i &lt; parent.Length; ++i)<br>            if (parent[i] == root)<br>            {<br>                any = true;<br>                res += count(i, deletedCell, mulby, parent);<br>            }<br>        if (!any)<br>            res += mulby;<br>        return res;<br>    }<br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>