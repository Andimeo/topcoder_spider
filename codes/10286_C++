            #include &lt;iostream&gt;<br>using namespace std;<br><br>struct DiamondMining<br>{<br>  int largestDiamond(int sy, int sx, int cur, int th)<br>  {<br>    int a,b,c,d,best=0;<br>    bool field[755][755];<br>      for (a=0; a&lt;sy; a++,cout&lt;&lt;endl)<br>        for (b=0; b&lt;sx; b++)<br>        {<br>          cur=(cur*25173+13849)%65536;<br>          field[a][b]=(cur&gt;=th);<br>        }<br>      for (a=0; a&lt;sy; a++)<br>        for (b=0; b&lt;sx; b++)<br>          if (field[a][b])<br>          {<br>            if (!best)<br>              best=1;<br>            for (c=0; (b-c&gt;=0) &amp;&amp; (b+c&lt;sx) &amp;&amp; (a+c*2&lt;sy); c++)<br>            {<br>              if ((!field[a+c][b-c]) || (!field[a+c][b+c]))<br>                break;<br>              if (best&lt;c+1)<br>              {<br>                for (d=1; d&lt;=c; d++)<br>                  if ((!field[a+c+d][b-c+d]) || (!field[a+c+d][b+c-d]))<br>                    break;<br>                if (d&gt;c)<br>                  best=c+1;<br>              }<br>            }<br>          }<br>    return(best);<br>  }<br>};<br></td>