            #include&lt;vector&gt;<br>#include&lt;algorithm&gt;<br>#include&lt;cstdio&gt;<br>#include&lt;cmath&gt;<br>#include&lt;functional&gt;<br>#include&lt;sstream&gt;<br>#include&lt;iostream&gt;<br>using namespace std;<br>class SkiFriction<br>{<br>public:<br>int bestPosition(string sn, string pn)<br>{<br>int ls,lp,ret=0;<br>ls=sn.length();<br>lp=pn.length();<br>int s[50],p[50];<br>cout&lt;&lt;ls&lt;&lt;lp;<br>for(int a=0;a&lt;ls;a++)<br>{s[a]=sn[a]-48;cout&lt;&lt;s[a];}<br>for(int a=0;a&lt;lp;a++)<br>{p[a]=pn[a]-48;cout&lt;&lt;p[a];}<br>for(int a=0;a&lt;lp-ls;a++)<br>{int m=0;<br>for(int b=0;b&lt;ls;b++)<br>{<br>int k=s[b]+p[b+a];<br>if(k&gt;m)<br>m=k;<br>}<br>ret+=m;<br>}<br>return ret;<br>}};<br></td>