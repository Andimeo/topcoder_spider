            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class GroupedWordChecker<br>{<br>  static int grouped(string s)<br>    {<br>        char currentChar = ' ';<br>        List&lt;char&gt; seen = new List&lt;char&gt;();<br>        foreach (char item in s) {<br>            if (currentChar == item) continue;<br>            if (currentChar != item) {<br>                if (seen.Contains(item))<br>                    return 0;<br>                seen.Add(item);<br>                currentChar = item;<br>            }<br>        }<br>        return 1;<br>    }<br>  public int howMany(string[] words)<br>  {<br>    int sum = 0;<br>    foreach (string s in words) <br>      sum += grouped(s);<br>    return sum;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>