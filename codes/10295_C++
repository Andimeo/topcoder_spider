<td class="problemText" colspan="8" valign="middle" align="left">
            #include &lt;iostream&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br><br>using namespace std;<br><br>class GroupedWordChecker{<br>public:<br>  int howMany(vector &lt;string&gt; words)<br>  {<br>    int len=words.size();<br>    int i,j,k;<br>    char c;<br>    int ans=0;<br>    for(i=0;i&lt;len;i++)<br>    {<br>      int s=words[i].size();<br>      for(j=0;j&lt;s;j++)<br>      {<br>        k=j;<br>        c=(words[i])[k];<br>        while(c==(words[i])[++k]);<br>        for(++k;k&lt;s;k++)<br>          if(c==(words[i])[k])<br>            break;<br>        if(k&lt;s)<br>          break;<br>      }<br>      if(j==s)<br>        ans++;<br>    }<br>    return ans;<br>  }<br>};<br></td>