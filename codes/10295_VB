            Class GroupedWordChecker<br>    Public Function howMany(ByVal words As String()) As Integer<br>        Dim iCnt As Integer<br>        iCnt = 0<br><br>        Dim i As Integer<br>        For i = 0 To words.Length - 1<br>            If isA(words(i)) = True Then iCnt += 1<br>        Next<br><br>        Return iCnt<br><br>    End Function<br><br><br>    Private Function isA(ByVal words As String) As Boolean<br>        Dim i As Integer<br>        Dim j As Integer<br>        Dim flag As Boolean<br><br>        For i = 1 To words.Length<br>            flag = True<br><br>            For j = i To words.Length<br>                If Mid(words, i, 1) &lt;&gt; Mid(words, j, 1) Then flag = False<br>                If flag = False And Mid(words, i, 1) = Mid(words, j, 1) Then Return False<br>            Next<br>        Next<br><br>        Return True<br><br>    End Function<br>End Class<br></td>