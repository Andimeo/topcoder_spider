            using System;<br>using System.Collections;<br><br>public class CirclesCountry <br>{<br>  public int leastBorders(int[] X, int[] Y, int[] R, int x1, int y1, int x2, int y2) <br>  {<br>    int borders = 0;<br>    for (int i = 0; i &lt; X.Length; i++)<br>    {<br>      int xx = X[i] - x1;<br>      int yy = Y[i] - y1;<br>      int xxx = X[i] - x2;<br>      int yyy = Y[i] - y2;<br>      int sign1 = xx * xx + yy * yy - R[i] * R[i];<br>      int sign2 = xxx * xxx + yyy * yyy - R[i] * R[i];<br>      if (sign1 &lt; 0 &amp;&amp; sign2 &gt; 0 || sign2 &lt; 0 &amp;&amp; sign1 &gt; 0)<br>      {<br>        borders++;<br>      }<br>    }<br>    return borders;<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>