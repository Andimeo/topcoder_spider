            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class CirclesCountry<br>{<br>  public int leastBorders(int[] X, int[] Y, int[] R, int x1, int y1, int x2, int y2)<br>  {<br>    int n = 0;<br>    for(int i = 0; i &lt; X.length; i++)  {<br>      boolean inFirst = false;<br>      boolean inSecond = false;<br>      if(Math.hypot(X[i]-x1,Y[i]-y1) &lt;= R[i])<br>        inFirst = true;<br>      if(Math.hypot(X[i]-x2,Y[i]-y2) &lt;= R[i])<br>        inSecond = true;<br>      if(inFirst ^ inSecond)<br>        n++;<br>    }<br>    return n;<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>