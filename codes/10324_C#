            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br><br>public class DigitalCounter<br>{<br>  public long nextEvent(string current)<br>  {<br>    int n = current.Length;<br>    int[] start = new int[n];<br>    for (int i = 0; i &lt; n; i++)<br>    {<br>      start[i] = lit[current[n-i-1]-'0'];<br>      if (i &gt; 0) start[i] += start[i-1];<br>    }<br>    for (int i = 0; i &lt; n; i++)<br>    {<br>      int s = current[n-i-1]-'0';<br>      for (int j = s+1; j &lt;= 9; j++)<br>      {<br>        string res = make(i, start[i]-lit[j]);<br>        if (res != null)<br>        {<br>          string nw = current.Substring(0, n-i-1) + j + res;<br>          return long.Parse(nw) - long.Parse(current);<br>        }<br>      }<br>    }<br>    string m = 1 + make(n,start[n-1]);<br>    return long.Parse(m) - long.Parse(current);<br>  }<br>  <br>  string make(int d, int v)<br>  {<br>    if (d == 0 &amp;&amp; v == 0) return "";<br>    if (d * 2 &gt; v || d * 7 &lt; v) return null;<br>    for (int i = 0; i &lt; 10; i++)<br>    {<br>      string t = make(d-1, v-lit[i]);<br>      if (t != null) return i + t;<br>    }<br>    return null;<br>  }<br>  <br>  int[] lit = { 6, 2, 5, 5, 4, 5, 6, 3, 7, 5 };<br><br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>