            // By mirosuaf<br>#include &lt;algorithm&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cmath&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;string&gt;<br>#include &lt;utility&gt;<br>#include &lt;vector&gt;<br>#include &lt;queue&gt;<br>using namespace std;<br>#define VAR(a,b) typeof(b) a=(b)<br>#define REP(i,n) for(int _n=n, i=0;i&lt;_n;++i)<br>#define FOR(i,a,b) for(int i=(a),_b=(b);i&lt;=_b;++i)<br>#define FORD(i,a,b) for(int i=(a),_b=(b);i&gt;=_b;--i)<br>typedef long long LL;<br>const int INF = 1000000000;<br>typedef vector&lt;int&gt; VI; <br> <br> <br>class RepaintTheChessboard {<br>  public:<br>  int minimumChanges(vector &lt;string&gt; board) {<br>    int wynik=INF,w1,w2;<br> <br>    REP(i,board.size()) {<br>      REP(j,board[0].size()) {<br>        if (i+8&lt;=board.size() &amp;&amp; j+8&lt;=board[0].size()) {<br>          w1=0;w2=0;<br>          REP(x,8) {<br>            REP(y,8) {<br>              if ((x+y)%2==0 &amp;&amp; board[i+x][j+y]=='B') w1++;<br>              if ((x+y)%2==1 &amp;&amp; board[i+x][j+y]=='W') w1++;<br> <br>              if ((x+y)%2==0 &amp;&amp; board[i+x][j+y]=='W') w2++;<br>              if ((x+y)%2==1 &amp;&amp; board[i+x][j+y]=='B') w2++;<br>            }<br>          }<br>          wynik=min(wynik,min(w1,w2));<br>        }<br>      }<br>    }<br>  return wynik;<br>  }<br>  <br> <br>};<br> <br> <br> <br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>