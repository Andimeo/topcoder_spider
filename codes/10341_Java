            import java.util.*;<br><br>public class BestView {<br>    public int numberOfBuildings(int[] heights) {<br>        int res = 0;<br>        int n = heights.length;<br>        for (int i = 0; i &lt; n; i++) {<br>            int r = 0;<br>            int jj = -1;<br>            for (int j = i + 1; j &lt; n; j++) {<br>                if (jj == -1) {<br>                    r++;<br>                    jj = j;<br>                } else {<br>                    if (1L * (heights[j] - heights[i]) * (jj - i) &gt; 1L * (heights[jj] - heights[i]) * (j - i)) {<br>                        r++;<br>                        jj = j;<br>                    }<br>                }<br>            }<br>            jj = -1;<br>            for (int j = i - 1; j &gt;= 0; j--) {<br>                if (jj == -1) {<br>                    r++;<br>                    jj = j;<br>                } else {<br>                    if (1L * (heights[j] - heights[i]) * (i - jj) &gt; 1L * (heights[jj] - heights[i]) * (i - j)) {<br>                        r++;<br>                        jj = j;<br>                    }<br>                }<br>            }<br>            if (r &gt; res) res = r;<br>        }<br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>