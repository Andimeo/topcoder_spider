            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class ErdosNumber<br>{<br>  public String[] calculateNumbers(String[] ps)<br>  {<br>    HashMap&lt;String, Integer&gt; map = new HashMap&lt;String, Integer&gt;();<br>    HashSet&lt;String&gt; authors = new HashSet&lt;String&gt;();<br>    map.put("ERDOS", 0);<br>    int n = ps.length;<br>    for (int it = 0; it &lt;= n; ++it) {<br>      for (String s : ps) {<br>        String[] tt = s.split(" ");<br>        int min = 1000000000;<br>        for (String t : tt) {<br>          authors.add(t);<br>          if (map.containsKey(t) &amp;&amp; min &gt; map.get(t)) {<br>            min = map.get(t);<br>          }<br>        }<br>        if (min &lt; 1000000000) {<br>          for (String t : tt) {<br>            if (!map.containsKey(t) || map.get(t) &gt; min) {<br>              map.put(t, min + 1);<br>            }<br>          }<br>        }<br>      }<br>    }<br>    ArrayList&lt;String&gt; ret = new ArrayList&lt;String&gt;(authors);<br>    Collections.sort(ret);<br>    for (int i = 0; i &lt; ret.size(); ++i) {<br>      if (map.containsKey(ret.get(i))) {<br>        ret.set(i, ret.get(i) + " " + map.get(ret.get(i)));<br>      }<br>    }<br>    return ret.toArray(new String[ret.size()]);<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>