            using System;<br><br>public class BinaryFlips {<br>  public int minimalMoves(int A, int B, int K) {<br>        int step = 0;<br>        int left = A;<br>        int right = A;<br>        int S = A + B;<br>        while (left &gt; 0)<br>        {<br>            if (K &gt; S)<br>                return -1;<br>            if (step &gt; 1000000)<br>                return -1;<br>            int nleft = int.MaxValue;<br>            int nright = int.MinValue;<br>            int m2 = (left) % 2;<br>            if (left &lt; K)<br>            {<br>                int z = Math.Min(right, K - 1);<br>                if (z % 2 != m2)<br>                    --z;<br>                if (z &lt; 0)<br>                    z += 2;<br>                nleft = Math.Min(nleft, K - z);<br>            }<br>            if (right &gt;= K)<br>            {<br>                int z = Math.Max(left, K);<br>                if (z % 2 != m2)<br>                    ++z;<br>                if (z &gt; S)<br>                    z -= 2;<br>                nleft = Math.Min(nleft, z - K);<br>            }<br>            if (right &gt; S - K)<br>            {<br>                int z = Math.Max(left, S - K + 1);<br>                if (z % 2 != m2)<br>                    ++z;<br>                if (z &gt; S)<br>                    z -= 2;<br>                nright = Math.Max(nright, -K + 2 * S - z);<br>            }<br>            if (left &lt;= S - K)<br>            {<br>                int z = Math.Min(right, S - K);<br>                if (z % 2 != m2)<br>                    --z;<br>                if (z &lt; 0)<br>                    z += 2;<br>                nright = Math.Max(nright, z + K);<br>            }<br>            ++step;<br>            left = nleft;<br>            right = nright;<br>        }<br>        return step;<br>  }<br><br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>