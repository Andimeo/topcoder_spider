            #include&lt;vector&gt;<br>#include&lt;string&gt;<br>#include&lt;algorithm&gt;<br>#include&lt;cmath&gt;<br>#include&lt;utility&gt;<br>#include&lt;set&gt;<br>#include&lt;queue&gt;<br>#include&lt;map&gt;<br>#include&lt;cstdlib&gt;<br>#include&lt;cstdio&gt;<br>#include&lt;cstring&gt;<br>#include&lt;iostream&gt;<br>#include&lt;sstream&gt;<br>#include&lt;climits&gt;<br>#include&lt;sys/time.h&gt;<br>using namespace std;<br><br>#define REP(i,a,b) for(i=a;i&lt;b;i++)<br>#define rep(i,n) REP(i,0,n)<br><br>#define ll long long<br><br>int sol(ll a,ll sum,ll k){<br>  ll i, mx=0, rest, use;<br>  if(a==0) return 0;<br>  REP(i,1,210000){<br>    mx += k;<br><br>    if(mx &lt; a) continue;<br>    rest = mx-a;<br>    use = (sum-a)*(i/2);<br>    use+= a*((i-1)/2);<br>    use *= 2;<br>    if(rest%2==0 &amp;&amp; rest&lt;=use) return i;<br>  }<br>  return -1;<br>}<br><br>class BinaryFlips {<br>public:<br>int minimalMoves(int A, int B, int K) {<br>  return sol(A,A+B,K);<br>}<br><br><br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>