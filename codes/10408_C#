            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class PouringWater<br>{<br>  public int getMinBottles(int n, int k)<br>  {<br>    for(int x=0;; x++)<br>    {<br>      int t = n + x;<br>      int c = 0;<br>      for(int i=0; i&lt;25; i++)<br>      {<br>        if(((1 &lt;&lt; i) &amp; t) != 0)<br>        {<br>          c ++;<br>        }<br>      }<br>      if(c &lt;= k)<br>        return x;<br>    }      <br>    //return 0;<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>