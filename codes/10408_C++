            #include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;queue&gt;<br>#include &lt;map&gt;<br>#include &lt;math.h&gt;<br>#include &lt;cmath&gt;<br>#include &lt;algorithm&gt;<br><br>using namespace std;<br><br>class PouringWater<br>{<br>  public:<br>  int getMinBottles(int N, int K)<br>  {<br>    int base = N;<br>    while (1) {<br>      int tmp = N;<br>      int cnt = 0;<br>      while (tmp) { cnt += tmp%2; tmp/=2; }<br>      if (cnt&lt;=K) return N - base;<br>      N++;<br>    }<br>  };<br>};<br></td>