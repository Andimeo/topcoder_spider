            public class WordSpaces {<br> <br>  public int[] find(String sentence, String[] words) {<br>    int[] res = new int[words.length];<br>    for (int i=0; i&lt;words.length; i++) {<br>      res[i] = -1;<br>      for (int j=0; j&lt;sentence.length() &amp;&amp; res[i]==-1; j++) {<br>        for (int k=0; k&lt;=sentence.length(); k++) {<br>          int end = j+(k+1)*(words[i].length()-1);<br>          if (end&gt;=sentence.length()) {<br>            break;<br>          }<br>          boolean match = true;<br>          for (int m=0; m&lt;words[i].length(); m++) {<br>            if (words[i].charAt(m)!=sentence.charAt(j+(k+1)*m)) {<br>              match = false;<br>              break;<br>            }<br>          }<br>          if (match) {<br>            res[i] = j;<br>            break;<br>          }<br>        }<br>      }<br>    }<br>    return res;<br>  }<br>}<br></td>