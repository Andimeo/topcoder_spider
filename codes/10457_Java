            public class NumericalPerfectionLevel<br>{<br>    public int getLevel(long N) {<br>        int nFactors = findPrimeFactor(N) + 1;<br>        int result = 0;<br>        int pow = 1;<br>        while (Math.pow(4, pow) &lt;= nFactors) {<br>            result ++;<br>            pow ++;<br>        }<br>        return result;<br>    }<br>    <br>    private int findPrimeFactor(long N) {<br>        int result = 0;<br>        for (long factor = 2; factor &lt;= Math.sqrt(N); factor++) {<br>            if (N % factor == 0) {<br>                result = 1 + findPrimeFactor(N/factor);<br>                break;<br>            }<br>        }<br>        <br>        return result;<br>    }<br>}<br></td>