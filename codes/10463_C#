            using System;<br><br>public class PerfectPermutation {<br>  public int reorder(int[] P) {<br>        bool[] was = new bool[P.Length];<br>        int nc = 0;<br>        for (int i = 0; i &lt; P.Length; ++i)<br>        {<br>            if (!was[i])<br>            {<br>                int j = i;<br>                do<br>                {<br>                    was[j] = true;<br>                    j = P[j];<br>                } while (!was[j]);<br>                ++nc;<br>            }<br>        }<br>        return nc == 1 ? 0 : nc;<br>  }<br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>