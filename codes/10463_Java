            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class PerfectPermutation<br>{<br>  public int reorder(int[] a)<br>  {<br>    int n = a.length;<br>    boolean[] col = new boolean[n];<br>    int count = 0;<br>    for (int i = 0; i &lt; n; ++i) {<br>      if (!col[i]) {<br>        ++count;<br>        for (int j = i; !col[j]; j = a[j]) {<br>          col[j] = true;<br>        }<br>      }<br>    }<br>    return count == 1 ? 0 : count;<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>