            using System;<br>using System.Text;<br>using System.Collections;<br><br>public class Lexer {<br>  public class strLen : IComparer<br>  {<br>    public int Compare(object x, object y)<br>    {<br>      return x.ToString ().Length.CompareTo (y.ToString ().Length);<br>    }<br>  }<br>  public string[] tokenize(string[] tokens, string input) <br>   {<br>    ArrayList al = new ArrayList ();<br>    Array.Sort (tokens, new strLen());<br>    Array.Reverse (tokens);<br><br><br>    while (input.Length &gt; 0)<br>    {<br>      bool found = false;<br>      for (int i = 0; i &lt; tokens.Length; i++)<br>      {<br>        if (input.StartsWith (tokens[i]))<br>        {<br>          input = input.Substring (tokens[i].Length);<br>          found = true;<br>          al.Add (tokens[i]);<br>          break;<br>        }<br>      }<br>      if (!found)<br>        input = input.Substring (1);<br>    }<br><br><br>     return (string[])al.ToArray (typeof (string));<br>  }<br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>