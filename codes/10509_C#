            using System; <br>using System.Collections; <br>using System.Collections.Generic; <br>using System.Collections.Specialized; <br>using System.Text; <br>using System.Text.RegularExpressions; <br> <br>public class TheEncryptionDivTwo {<br><br>    public string encrypt(string message) <br>    {<br>        Dictionary&lt;char, char&gt; d = new Dictionary&lt;char, char&gt;();<br>        int idx = 0;<br>        for (int i = 0; i &lt; message.Length; i++)<br>        {<br>            if (!d.ContainsKey(message[i]))<br>            {<br>                d[message[i]] = (char)(idx + 'a');<br>                idx++;<br>            }<br>        }<br>        string ret = "";<br>        for (int i = 0; i &lt; message.Length; i++)<br>        {<br>            ret += d[message[i]];<br>        }<br>        return ret;<br>    }<br>    <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>