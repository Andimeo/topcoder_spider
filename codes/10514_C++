            #define _CRT_SECURE_NO_DEPRECATE <br>#include &lt;iostream&gt; <br>#include &lt;memory&gt; <br>#include &lt;vector&gt; <br>#include &lt;algorithm&gt; <br>#include &lt;string&gt; <br>#include &lt;utility&gt; <br>#include &lt;functional&gt; <br>#include &lt;cstdio&gt; <br>#include &lt;cstdlib&gt; <br>#include &lt;cstring&gt; <br>#include &lt;cmath&gt; <br>#include &lt;cassert&gt; <br>#include &lt;sstream&gt; <br> <br>using namespace std;<br> <br> <br>class TheLockDivOne<br>{<br>public:<br>  string check(int n, long long k)<br>  {<br>    if (n == 1)<br>      return (k == 1) ? "0" : "1";<br>    else<br>    {<br>      long long m = (long long)1 &lt;&lt; (n - 1);<br>      if (k &lt;= m)<br>        return "0" + check(n - 1, k);<br>      else<br>        if (k == m + 1)<br>          return "1" + check(n - 1, m);<br>        else<br>          return "1" + check(n - 1, k - m - 1);<br>    }<br>  }<br>  string password(int n, long long k)<br>  {<br>    if (n == 1)<br>      return (k == 1) ? "0" : "1";<br>    else<br>    {<br>      long long m = (long long)1 &lt;&lt; (n - 1);<br>      if (k &lt;= m)<br>        return "0" + password(n - 1, k);<br>      else<br>        if (k == m + 1)<br>          return "1" + check(n - 1, m);<br>        else<br>        {<br>          string s = "1" + check(n - 1, m);<br>          string t = "1" + password(n - 1, k - m - 1);<br>          return (s &gt; t) ? s : t;<br>        }<br>    }<br>  }<br>};<br></td>