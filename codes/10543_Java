            import java.util.Arrays;<br> <br>/**<br> * Built using CHelper plug-in<br> * Actual solution is at the top<br> */<br>public class EmoticonsDiv1 {<br>    static final int INF = (int) 1e9;<br> <br>    public int printSmiles(int smiles) {<br>        int[] best = new int[smiles + 1];<br>        Arrays.fill(best, INF);<br>        best[1] = 0;<br>        while (true) {<br>            boolean updated = false;<br>            for (int old = 1; old &lt;= smiles; ++old) if (best[old] &lt; INF) {<br>                for (int neww = 1; neww &lt;= smiles; ++neww) {<br>                    int fulls = 0;<br>                    if (neww - old &gt; 0)<br>                        fulls = (neww - old + old - 1) / old;<br>                    int cur = best[old] + 1 + fulls + (old * (fulls + 1) - neww);<br>                    if (cur &lt; best[neww]) {<br>                        best[neww] = cur;<br>                        updated = true;<br>                    }<br>                }<br>            }<br>            if (!updated) break;<br>        }<br>        return best[smiles];<br>    }<br>}<br></td>