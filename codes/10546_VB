            Public Class MountainRoad<br>    Public Function findDistance(ByVal start As Integer(), ByVal finish As Integer()) As Double<br>        Dim retVal As Double = 0.0<br>        Dim MinX As Double = Double.MaxValue<br>        Dim MaxX As Double = Double.MinValue<br>        For i As Integer = 0 To start.Length - 1<br>            If MinX &gt; start(i) Then<br>                MinX = start(i)<br>            End If<br>            If MaxX &lt; finish(i) Then<br>                MaxX = finish(i)<br>            End If<br>        Next<br>        Dim Distance As Double = MaxX - MinX<br>        retVal = Math.Sqrt(Distance * Distance / 2) * 2<br><br>        Return retVal<br>    End Function<br>End Class<br></td>