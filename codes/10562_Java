            public class RandomAppleEasy {<br>  <br>  public static double theRed(int[] red, int[] green) {<br>    <br>    long[][] grid = new long[501][501];<br>    <br>    // Number of ways to get these combos of apples =)<br>    // i = red, j = green<br>    for (int i=0; i&lt;=500; i++)<br>      for (int j=0; j&lt;=500; j++)<br>        grid[i][j] = 0;<br>    grid[0][0] = 1;<br>    <br>    // Add in each item.<br>    for (int item=0; item&lt;red.length; item++) {<br>      <br>      for (int i=500-red[item]; i&gt;=0; i--)<br>        for (int j=500-green[item]; j&gt;=0; j--)<br>          grid[i+red[item]][j+green[item]] += grid[i][j];<br>      <br>    }<br>    <br>    double denom = Math.pow(2,red.length)-1;<br>    <br>    double ans = 0;<br>    <br>    for (int i=1; i&lt;=500; i++)<br>      for (int j=1; j&lt;=500; j++) <br>        ans = ans + 1.0*grid[i][j]*i/(i+j)/denom;<br>      <br>    return ans;<br>    <br>  }<br>}<br></td>