            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class TextFrames {<br>    public string[] generateFrame(int width, int height, string phrase, int x1, int y1, int x2, int y2) {<br>        string[] ret = new string[y2 - y1];<br>        phrase += ".";<br>        for (int y = y1; y &lt; y2; ++y)<br>        {<br>            ret[y - y1] = "";<br>            for (int x = x1; x &lt; x2; ++x)<br>            {<br>                if (y == 0 || x == 0 || y == height - 1 || x == width - 1)<br>                {<br>                    if (y == 0) ret[y - y1] += phrase[x % phrase.Length];<br>                    else if (x == 0)<br>                    {<br>                        int ct = height - 1 - y;<br>                        int off = width + height - 1 + width - 2;<br>                        ret[y - y1] += phrase[(off + ct) % phrase.Length];<br>                    }<br>                    else if (y == height - 1)<br>                    {<br>                        int ct = width - 1 - x;<br>                        int off = width + height - 2;<br>                        ret[y - y1] += phrase[(off + ct) % phrase.Length];<br>                    }<br>                    else<br>                    {<br>                        int ct = y;<br>                        int off = width - 1;<br>                        ret[y - y1] += phrase[(off + ct) % phrase.Length];<br>                    }<br>                }<br>                else<br>                {<br>                    ret[y - y1] += ".";<br>                }<br>            }<br>        }<br>        return ret;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>