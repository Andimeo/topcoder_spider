            public class AgeEncoding {<br>  public double getRadix(int age, String candlesLine) {<br>    while (candlesLine.length() &gt; 1 &amp;&amp; candlesLine.charAt(0) == '0')<br>      candlesLine = candlesLine.substring(1);<br><br>    if (candlesLine.equals("0"))<br>      return -1;<br>    else if (candlesLine.equals("1"))<br>      return age &gt; 1 ? -1 : -2;<br>    char[] s = candlesLine.toCharArray();<br>    double lo = 0;<br>    double hi = 101;<br>    for (int i = 0; i &lt; 4000; i++) {<br>      double b = 0.5 * (lo + hi);<br>      double e = eval(b, s);<br>      if (e &lt; age)<br>        lo = b;<br>      else<br>        hi = b;<br>    }<br>    return lo == 0 ? -1 : lo;<br>  }<br><br>  private double eval(double b, char[] s) {<br>    double p = 1;<br>    double ret = 0;<br>    for (int i = s.length - 1; i &gt;= 0; i--) {<br>      if (s[i] == '1')<br>        ret += p;<br>      p *= b;<br>    }<br>    return ret;<br>  }<br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by moj 4.11 [modified TZTester]<br>// Powered by CodeProcessor<br></td>