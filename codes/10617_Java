            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class TheCardShufflingDivOne<br>{<br>  public int shuffle(int N, int left, int right)<br>  {<br>    int n = 0, num = 0;<br>    if (N%2==0)<br>    {<br>      n = 2; num = 1;<br>    } else<br>    {<br>      n = 1; num = 0;<br>    }<br>    while (n&lt;N)<br>    {<br>      int atLeft = (n+1)/2;<br>      int atRight = n/2;<br>      if (num&gt;=atRight)<br>      {<br>        //at left<br>        num-=atRight;<br>        num = atLeft - num - 1;<br>        num++;atLeft++;atRight++;<br>        num = (num+left)%atLeft;<br>        <br>        num = atLeft - num - 1;<br>        num*=2;<br>      } else<br>      {<br>        num = atRight - num - 1;<br>        num++;atLeft++;atRight++;<br>        num = (num+right)%atRight;<br>        <br>        num = atRight - num - 1;<br>        num = 1 + 2*num;<br>        //at right<br>      }<br>      n+=2;<br>    }<br>    return num+1;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>