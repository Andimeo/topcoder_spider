            public class TheCardShufflingDivTwo <br>{<br>    public int shuffle(int n, int m)<br>    {<br>        int ans=1;<br>        int[] a=new int[n],b=new int[n],l=new int[n],r=new int[n];<br>        int j=0,k=0;<br>        for(int i=1;i&lt;=n;i++)<br>        {<br>            if(i%2==0) l[j++]=i;<br>            else r[k++]=i;<br>        }<br>        for(int i=0;i&lt;j;i++)<br>            a[i]=l[i];<br>        for(int i=0;i&lt;k;i++)<br>            a[i+j]=r[i];<br>        for(int i=0;i&lt;m;i++)<br>            ans=a[ans-1];<br>        <br>        return ans;<br>    }<br>}<br></td>