            using System;<br>class RecursiveFigures<br>{<br>    public double getArea(int sideLength, int K)<br>    {<br>        double ans = 0.0;<br>        int n = sideLength;<br>        double r = n/2.0;<br>        for (int i = 1; i &lt;= K; i++)<br>        {<br>            double rr = r;<br>            ans = ans + rr * rr * (double)3.14159265258979323846264338327950288;<br>            double nextr;<br>            nextr = rr / Math.Sqrt(2.0);<br>            if (i != K)<br>            {<br>                ans = ans - (nextr * 2) * (nextr * 2);<br>            }<br>            r = nextr;<br>        }<br>        return ans;<br>    }<br>}<br></td>