            Public Class RecursiveFigures<br>Public Function getArea(ByVal sideLength As Integer, ByVal K As Integer) As Double<br>        Dim x1, x2, x3 As Integer<br>        Dim y1, y2, y3, y9 As Double<br>        y1 = sideLength<br>        y2 = y1 / 2<br>        y9 = Math.PI * y2 * y2<br>        Console.WriteLine(y9)<br>        For i1 As Integer = 2 To K<br>            y1 = Math.Sqrt(2) * y2<br>            y2 = y1 / 2<br>            y9 = y9 + (Math.PI * y2 * y2) - y1 * y1<br><br>        Next<br>        Return (y9)<br>        End Function<br>       End Class<br></td>