            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br> <br>public class NumberPyramids<br>{<br>  public int count (int baseLength, int top)<br>  {<br>    int n = baseLength;<br>    int mod = 1000000009;<br> <br>    if (n &gt; 25)<br>      return 0;<br> <br>    top -= 1 &lt;&lt; (n - 1);<br> <br>    if (top &lt; 0)<br>      return 0;<br> <br>    int[] cnt = new int[n];<br> <br>    cnt[0] = 1;<br> <br>    for (int i = 1; i &lt; n; ++i)<br>      for (int j = i; j &gt;= 1; --j)<br>        cnt[j] += cnt[j - 1];<br> <br>    long[] tot = new long[top + 1];<br>    tot[top] = 1;<br> <br>    foreach (int x in cnt)<br>    {<br>      for (int i = top - x; i &gt;= 0; --i)<br>        tot[i] = (tot[i] + tot[i + x]) % mod;<br>    }<br> <br>    return (int) tot[0];<br>  }<br> <br> <br> <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>