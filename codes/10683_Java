            import java.util.*;<br> <br>public class NumberPyramids {<br>    static final int MODULO = 1000000009;<br> <br>    public int count(int baseLength, int top) {<br>        if (baseLength &gt; 25)<br>            return 0;<br>        top -= 1 &lt;&lt; (baseLength - 1);<br>        if (top &lt; 0)<br>            return 0;<br>        int[][] c = new int[baseLength][baseLength];<br>        c[0][0] = 1;<br>        for (int i = 1; i &lt; baseLength; ++i) {<br>            c[i][0] = 1;<br>            for (int j = 1; j &lt; baseLength; ++j)<br>                c[i][j] = c[i - 1][j - 1] + c[i - 1][j];<br>        }<br>        int[] res = new int[top + 1];<br>        res[0] = 1;<br>        for (int i = 0; i &lt; baseLength; ++i) {<br>            int cur = c[baseLength - 1][i];<br>            for (int j = 0; j + cur &lt;= top; ++j) {<br>                res[j + cur] += res[j];<br>                if (res[j + cur] &gt;= MODULO)<br>                    res[j + cur] -= MODULO;<br>            }<br>        }<br>        return res[top];<br>    }<br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>