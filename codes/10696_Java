            import java.util.*;<br> <br>public class TheTriangleBothDivs {<br>    String res;<br> <br>    public String fix(String time) {<br>        res = "99:99";<br>        rec(time.toCharArray(), 0);<br>        return res;<br>    }<br> <br>    private void rec(char[] time, int at) {<br>        if (at &gt;= time.length) {<br>            int h = Integer.parseInt(new String(time, 0, 2));<br>            int m = Integer.parseInt(new String(time, 3, 2));<br>            char s = time[9];<br>            int delta = Integer.parseInt(new String(time, 10, 1));<br>            if (s == '-' &amp;&amp; delta == 0)<br>                return;<br>            if (h &gt; 23)<br>                return;<br>            if (m &gt; 59)<br>                return;<br>            if (s == '-')<br>                delta = -delta;<br>            String cur = String.format("%02d:%02d", (h - delta + 24) % 24, m);<br>            if (cur.compareTo(res) &lt; 0)<br>                res = cur;<br>        } else if (time[at] == '?') {<br>            String possible = "0123456789";<br>            if (at == 9) {<br>                possible = "+-";<br>            }<br>            for (char ch: possible.toCharArray()) {<br>                time[at] = ch;<br>                rec(time, at + 1);<br>                time[at] = '?';<br>            }<br>        } else {<br>            rec(time, at + 1);<br>        }<br>    }<br> <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>