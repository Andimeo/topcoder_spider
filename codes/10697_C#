            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class RabbitNumbering<br>{<br>  public int theCount(int[] maxNumber)<br>  {<br>    long a = 1;<br>    Array.Sort( maxNumber );<br>    <br>    for ( int i = 0; i &lt; maxNumber.Length; i++ ) {<br>      a = ( a * Math.Max( maxNumber[i] - i, 0 ) ) % 1000000007;<br>    }<br>    <br>    return (int) a;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>