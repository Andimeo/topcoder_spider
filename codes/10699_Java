            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class SilverDistance<br>{<br>  public int minSteps(int sx, int sy, int gx, int gy)<br>  {<br>    int ans = Integer.MAX_VALUE;<br>    for (int dy = 0; dy &lt;= 10000000; ++dy) {<br>      int x = gx - sx;<br>      int y = gy - sy - dy;<br>      if ((x + y) % 2 == 0) {<br>        int cur = Math.abs(x + y) / 2 + Math.abs(x - y) / 2 + Math.abs(dy);<br>        ans = Math.min(ans, cur);<br>      }<br>    }<br>    return ans;<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>