            import java.util.*;<br> <br>public class TheHexagonsDivOne {<br>    public long count(int n) {<br>        return rec(n, new int[7], 0, -1) / 6;<br>    }<br> <br>    private long rec(int n, int[] nkind, int at, int last) {<br>        if (at == 7) {<br>            if (valid(nkind)) {<br>                return eval(nkind, n, last);<br>            } else {<br>                return 0;<br>            }<br>        }<br>        long res = 0;<br>        for (int i = 0; i &lt;= last + 1; ++i) {<br>            nkind[at] = i;<br>            res += rec(n, nkind, at + 1, Math.max(i, last));<br>        }<br>        return res;<br>    }<br> <br>    private long eval(int[] nkind, int n, int last) {<br>        long res = 1;<br>        for (int w = 0; w &lt;= last; ++w) {<br>            int cnt = 0;<br>            for (int x : nkind)<br>                if (x == w) {<br>                    res *= (2 - cnt);<br>                    ++cnt;<br>                }<br>            res *= n - w;<br>        }<br>        return res;<br>    }<br> <br>    private boolean valid(int[] nkind) {<br>        for (int i = 0; i &lt; 6; ++i) {<br>            if (nkind[i] == nkind[6])<br>                return false;<br>            if (nkind[i] == nkind[(i + 1) % 6])<br>                return false;<br>        }<br>        return true;<br>    }<br> <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>