            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class MinimalDifference <br>{<br>    private int diffelo(int a)<br>    {<br>        string s = a.ToString();<br>        int ret = 0;<br>        for (int i = 0; i &lt; s.Length; i++)<br>        {<br>            ret += int.Parse(s[i].ToString());<br>        }<br>        return ret;<br>    }<br>    public int findNumber(int A, int B, int C) <br>  {<br>        int minr = int.MaxValue;<br>        int ans = 0;<br>        for (int i = A; i &lt;= B; i++)<br>        {<br>            int difi = Math.Abs(diffelo(C) - diffelo(i));<br>            if (difi &lt; minr)<br>            {<br>                minr = difi;<br>                ans = i;<br>            }<br>        }<br>        return ans;<br>  }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by r1cs1]<br>// Powered by CodeProcessor<br></td>