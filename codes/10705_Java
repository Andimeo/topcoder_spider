            public class MinimalDifference {<br> <br>  public int findNumber(int A, int B, int C) {<br>    int c = sum(C);<br>    int min = Integer.MAX_VALUE, tmp, res = 0;<br>    for (int i = A; i &lt;= B; i++){<br>      tmp = sum(i);<br>      if (Math.abs(tmp - c) &lt; min){<br>        res = i;<br>        min = Math.abs(tmp - c);<br>      }<br>    }<br>    return res;<br>  }<br>  public int sum(int a){<br>    int count = 0;<br>    while(a &gt; 0){<br>      count += a%10;<br>      a/=10;<br>    }<br>    return count;<br>  }<br> <br>}<br></td>