            using System; <br>using System.Collections.Generic; <br>using System.Text;<br> <br>public class AppleWord {<br>    public int minRep(string word)<br>    {<br>        int res = 0;<br>        word = word.ToLower();<br>        if(word.Length &lt; 5) return -1;<br>        if (word[0] != 'a') res++;<br>        if (word[word.Length - 1] != 'e') res++;<br>        if (word[word.Length - 2] != 'l') res++;<br>        for (int i = 1; i &lt;= word.Length - 3; i++)<br>        {<br>            if (word[i] != 'p') res++;<br>        }<br>        return res;<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>