            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class AppleWord<br>{<br>  public int minRep(String word)<br>  {<br>    char[] w = word.toUpperCase().toCharArray();<br>    if(w.length &lt; 1+2+1+1) return -1;<br>    int ret = 0;<br>    if(w[0] != 'A') ret++;<br>    if(w[w.length-2] != 'L') ret++;<br>    if(w[w.length-1] != 'E') ret++;<br>    for(int i = 1; i &lt; w.length-2; i++)<br>      if(w[i] != 'P') ret++;<br>    return ret;<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>