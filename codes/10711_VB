            Class AppleWord<br>        Public Function minRep(ByVal word As String) As Integer<br>            If word.Length &lt; 5 Then<br>                minRep = -1<br>                Exit Function<br>            End If<br><br>            Dim c As Integer = 0<br>            For i As Integer = 0 To word.Length - 1<br>                Dim s As String = word.Substring(i, 1)<br>                If i = 0 Then<br>                    If s &lt;&gt; "a" And s &lt;&gt; "A" Then c = c + 1<br>                ElseIf i = word.Length - 2 Then<br>                    If s &lt;&gt; "l" And s &lt;&gt; "L" Then c = c + 1<br>                ElseIf i = word.Length - 1 Then<br>                    If s &lt;&gt; "e" And s &lt;&gt; "E" Then c = c + 1<br>                Else<br>                    If s &lt;&gt; "p" And s &lt;&gt; "P" Then c = c + 1<br>                End If<br>            Next<br>            minRep = c<br>        End Function<br>    End Class<br></td>