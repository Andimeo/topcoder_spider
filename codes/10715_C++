            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;deque&gt;<br>#include &lt;queue&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cctype&gt;<br>#include &lt;string&gt;<br>#include &lt;cstring&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br> <br>using namespace std;<br> <br>#define FOR(i,a,b) for(__typeof(b) i=(a);i!=(b);i++)<br>#define REP(i,n) FOR(i,0,n)<br>#define EACH(i,a) FOR(i,a.begin(),a.end())<br>#define SZ(a) (int)a.size()<br>#define PB push_back<br>#define iss istringstream<br>#define ALL(a) a.begin(),a.end()<br>#define CLEAR(a) memset(a,0,sizeof(a))<br>#define ll long long<br> <br>class ConvexHexagons {<br>public:<br>  int find(int);<br>};<br> <br>const int MAXN = 500005, MOD = 1000000007;<br>inline ll pmod(ll x) {return (x &gt;= 0 ? (x%MOD) : (MOD - ((-x)%MOD))%MOD);}<br> <br>ll calc[MAXN], dp[MAXN];<br>inline ll f(ll m) {<br>  if (m&amp;1) {<br>    ll m2 = m &gt;&gt; 1;<br>    return pmod(m2 * (m2 + 1));<br>  }  else {<br>    ll m2 = m &gt;&gt; 1;<br>    return pmod(m2 * m2);<br>  }<br>}<br> <br>int ConvexHexagons::find(int N) {<br>  calc[2] = 1;<br>  for(ll i = 3 ; i &lt;= N ; i++) {<br>    calc[i] = pmod(calc[i - 1] + f(i) * 3 - (i &gt;&gt; 1) * 3 + ((i&amp;1) == 0 ? 1 : 0));<br>    dp[i] = pmod(calc[i -1] + dp[i-1]*3 - dp[i-2]*3 + dp[i-3]);<br>  }<br>  return dp[N];<br>}<br> <br> <br>//Powered by [KawigiEdit] 2.0!<br></td>