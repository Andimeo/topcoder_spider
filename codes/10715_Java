            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class ConvexHexagons<br>{<br>  final long MOD = 1000000007;<br>  <br>  public int find(int n)<br>  {<br>    long[] f = new long[Math.max(4, n + 1)];<br>    for (int i = 3; i &lt;= n; ++i) {<br>      long nn = i;<br>      f[i] = (((nn - 2) * (nn - 2) + 1) * (2 * (nn - 2) + 3)) / 8;<br>      f[i] %= MOD;<br>      f[i] = (f[i] + 3 * f[i - 1] - 3 * f[i - 2] + f[i - 3]) % MOD;<br>    }<br>    return (int)((f[n] + MOD) % MOD);<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>