            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class BouncingBalls<br>{<br>  public double expectedBounces(int[] x, int T)<br>  {<br>    Array.Sort(x);<br>    int n = x.Length;<br>    int m = 1 &lt;&lt; n;<br>    double s = 0;<br>    for(int i=0; i&lt;m; i++)<br>    {<br>      bool[] b = new bool[n];<br>      for(int j=0; j&lt;n; j++)<br>      {<br>        b[j] = ((i &amp; (1 &lt;&lt; j)) != 0);<br>      }      <br>      for(int j=0; j&lt;n; j++)<br>      {<br>        for(int k=j+1; k&lt;n; k++)<br>        {<br>          if(b[j] &amp;&amp; !b[k])<br>          {<br>            if(x[k] - x[j] &lt;= T * 2)<br>            {<br>              s ++;<br>            } <br>          }<br>        }<br>      }<br>    }<br>    return s / m;<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>