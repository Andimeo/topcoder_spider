            using System;<br><br>public class ColoringRectangle {<br>    public int chooseDisks(int width, int height, int[] red, int[] blue) {<br>        Array.Sort(red);<br>        Array.Sort(blue);<br>        int res = Math.Min(solve(width, height, red, blue), solve(width, height, blue, red));<br>        if (res == int.MaxValue)<br>            return -1;<br>        else<br>            return res;<br>    }<br><br>    private int solve(int width, int height, int[] red, int[] blue)<br>    {<br>        double covered = 0;<br>        int amount = 0;<br>        int rp = red.Length - 1;<br>        int bp = blue.Length - 1;<br>        int step = 0;<br>        while (covered &lt; width - 1e-8)<br>        {<br>            int cur;<br>            if (step == 0)<br>            {<br>                if (rp &lt; 0)<br>                    return int.MaxValue;<br>                cur = red[rp--];<br>                step = 1;<br>            }<br>            else<br>            {<br>                if (bp &lt; 0)<br>                    return int.MaxValue;<br>                cur = blue[bp--];<br>                step = 0;<br>            }<br>            if (cur &lt; height)<br>                return int.MaxValue;<br>            covered += Math.Sqrt(cur * cur - height * height);<br>            ++amount;<br>        }<br>        return amount;<br>    }<br>    <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>