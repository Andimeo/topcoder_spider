            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>    public class BunnyPuzzle<br>        {<br>            public int theCount(int[] bunnies)<br>            {<br>                int count = 0;<br>                for (int i = 0; i &lt; bunnies.Length-2; i++)<br>                {<br>                    if (bunnies[i + 1] - bunnies[i] &lt; bunnies[i + 2] - bunnies[i + 1])<br>                        count++;<br>                }<br>                for (int i = 2; i &lt; bunnies.Length; i++)<br>                {<br>                    if (bunnies[i] - bunnies[i-1] &lt; bunnies[i-1] - bunnies[i-2])<br>                        count++;<br>                }<br>                count += 2;<br>                return count;<br>            }<br> <br>        }<br>//Powered by [KawigiEdit] 2.0!<br></td>