<td class="problemText" colspan="8" valign="middle" align="left">
            #include &lt;sstream&gt;<br>#include &lt;queue&gt;<br>#include &lt;set&gt;<br>#include &lt;map&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cmath&gt;<br>#include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br><br>using namespace std;<br><br>class BunnyPuzzle<br>{<br>public:<br>int theCount(vector &lt;int&gt; bun)<br>{<br>    int cnt=0,i;<br>    for(i=0;i&lt;bun.size()-1;++i)<br>    {<br>        if(i+2 &gt;= bun.size() &amp;&amp; bun[i+1]*2-bun[i]&gt;bun[i+1] )<br>                ++cnt;<br>        else if(bun[i+1]*2-bun[i]&gt;bun[i+1] &amp;&amp; (bun[i+1]*2-bun[i])&lt;bun[i+2])<br>                ++cnt;<br><br>    }<br><br>    for(i=bun.size()-1;i&gt;0;--i)<br>    {<br>        if(i-2&lt;0 &amp;&amp; bun[i-1]*2-bun[i]&lt;bun[i-1] )<br>                ++cnt;<br>        else if(bun[i-1]*2-bun[i]&lt;bun[i-1] &amp;&amp; (bun[i-1]*2-bun[i])&gt;bun[i-2])<br>                ++cnt;<br>    }<br><br>    return cnt;<br><br>}<br>};<br></td>