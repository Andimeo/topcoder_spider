            using System;<br>using System.Collections.Generic;<br>using System.Text;<br><br>class ColorfulBoxesAndBalls<br>{<br>    public int getMaximum(int numRed, int numBlue, int onlyRed, int onlyBlue, int bothColors)<br>    {<br>        int numBoth = Math.Min(numRed, numBlue);<br>        int numOnlyRed = Math.Max((numRed - numBlue), 0);<br>        int numOnlyBlue = Math.Max((numBlue - numRed), 0);<br><br>        int score = numBoth * Math.Max ( (onlyRed + onlyBlue), (bothColors * 2) ) + numOnlyRed * onlyRed + numOnlyBlue * onlyBlue;<br>        return score;<br>    }<br>}<br></td>