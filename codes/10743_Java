<td class="problemText" colspan="8" valign="middle" align="left">
            public class ColorfulBoxesAndBalls {<br><br>  public int getMaximum(int numRed, int numBlue, int onlyRed, int onlyBlue, int bothColors) {<br>    int only = numRed * onlyRed + numBlue * onlyBlue;<br>    int both;<br>    if (numRed &gt;= numBlue) {<br>      both = numBlue * bothColors * 2 + (numRed - numBlue) * onlyRed;<br>    }<br>    else {<br>      both = numRed * bothColors * 2 + (numBlue - numRed) * onlyBlue; <br>    }<br>    <br>    return (only &gt;= both) ? only : both;<br>  }<br><br>}<br></td>