            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class TrappingRabbit<br>{<br>     public int findMinimumTime(int[] trapX, int[] trapY)<br>   {<br>      int result = Int32.MaxValue;;<br>      for (int i = 0; i &lt; trapX.Length; i++)<br>      {<br>         if (trapX[i] + trapY[i] - 2 &lt; result)<br>            result = trapX[i] + trapY[i] - 2;<br>      }<br>      return result;<br>   }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>