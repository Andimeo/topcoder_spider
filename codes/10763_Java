            public class SimpleGuess {<br> <br> public int getMaximum(int[] hints){<br>  int minodd =hints[0]; <br>  int maxodd =hints[0];<br>  int mineven =hints[0];<br>  int maxeven =hints[0];<br>  <br>  boolean bodd = true, beven = true;<br>  <br>  for(int i=0; i&lt;hints.length; i++){<br>   if(hints[i]%2 == 0){<br>    if(beven){<br>     mineven = hints[i];<br>     maxeven = hints[i];<br>     beven = false;<br>     continue;<br>    }<br>    if(mineven &gt; hints[i]){<br>     mineven = hints[i];<br>     continue;<br>    }<br>    if(maxeven &lt; hints[i]){<br>     maxeven = hints[i];<br>    }<br>   }else{<br>    if(bodd){<br>     minodd = hints[i];<br>     maxodd = hints[i];<br>     bodd = false;<br>     continue;<br>    }<br>    if(minodd &gt; hints[i]){<br>     minodd = hints[i];<br>     continue;<br>    }<br>    if(maxodd &lt; hints[i]){<br>     maxodd = hints[i];<br>    }<br>   }<br>  }<br>  <br>  int odd = 0, even = 0;<br>  if(minodd != maxodd){<br>   odd = (maxodd*maxodd - minodd*minodd)/4;<br>  }<br>  if(mineven != maxeven){<br>   even = (maxeven*maxeven - mineven*mineven)/4;<br>  }<br>  <br>  if(odd &gt; even){<br>   return odd;<br>  }else{<br>   return even;<br>  }<br> }<br><br>}<br></td>