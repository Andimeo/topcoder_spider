            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections.Generic;<br><br>public class RoadOrFlightEasy {<br>    public int minTime(int N, int[] roadTime, int[] flightTime, int K)<br>    {<br>        List&lt;int&gt; diff = new List&lt;int&gt;();<br>        int time = 0;<br>        for (int i = 0; i &lt; N; i++)<br>        {<br>            time += roadTime[i];<br>            diff.Add(flightTime[i] - roadTime[i]);<br>        }<br><br>        diff.Sort();<br><br>        for (int i = 0; i &lt; K; i++)<br>        {<br>            if (diff[i] &gt;= 0)<br>                break;<br>            time += diff[i];<br>        }<br>        return time;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>