            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class TheQuestionsAndAnswersDivOne<br>{<br>    private string[] answers;<br>    private int[] last;<br>    private int questions;<br> <br>    public int find(int questions, string[] answers)<br>    {<br>        this.answers = answers;<br>        this.last = new int[questions];<br>        for (int i = 0; i &lt; questions; i++)<br>            this.last[i] = -1;<br>        this.questions = questions;<br>        return brute(0, 0);<br>    }<br> <br>    public int brute(int q, int done)<br>    {<br>        if (done + answers.Length - q &lt; questions)<br>            return 0;<br>        if (q == answers.Length)<br>            return 1;<br>        int ret = 0;<br>        for (int i = 0; i &lt; questions; i++)<br>        {<br>            if (last[i] == -1 || answers[last[i]] == answers[q])<br>            {<br>                bool restore = false;<br>                if (last[i] == -1)<br>                {<br>                    restore = true;<br>                    last[i] = q;<br>                }<br>                ret += brute(q + 1, done + (restore ? 1 : 0));<br>                if (restore)<br>                {<br>                    last[i] = -1;<br>                }<br>            }<br>        }<br>        return ret;<br>    }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>