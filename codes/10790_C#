            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class FlatCatsBreeding {<br>    public int days(int D, int K, int T) {<br>        long cat = 1;<br>        for (int d = 0; ; d+=D)<br>        {<br>            if (cat &gt;= T) return d;<br>            cat *= K+1;<br>        }<br>        // return -1;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>