            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;queue&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br> <br>using namespace std;<br>#define mmin(a, b, c) min(a + b, c - a + c - b)<br> <br>class DistanceOnCube {<br>public:<br>  int calculate(int a, int x1, int y1, int z1, int x2, int y2, int z2) {<br>    int dx = abs(x1 - x2), dy = abs(y1 - y2), dz = abs(z1 - z2);<br>    if (dz == a)<br>      return min(mmin(x1, x2, a) + dy, mmin(y1, y2, a) + dx) + a;<br>    else if (dy == a)<br>      return min(mmin(x1, x2, a) + dz, mmin(z1, z2, a) + dx) + a;<br>    else if (dx == a)<br>      return min(mmin(z1, z2, a) + dy, mmin(y1, y2, a) + dz) + a;<br>    else<br>      return dx + dy + dz;<br>  }<br>};<br> <br> <br> <br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>