            using System;<br> <br>public class PalindromesCount {<br>  public int count(string A, string B) {<br>    int res = 0;<br>    for (int i = 0; i &lt;= A.Length; ++i)<br>    {<br>      if (Palindrome(A.Substring(0,i) + B + A.Substring(i)))<br>        ++res;<br>    }<br>    return res;<br>  }<br><br>  private bool Palindrome(string s)<br>  {<br>    for (int i = 0; i &lt; s.Length; ++i)<br>      if (s[i] != s[s.Length - i - 1])<br>        return false;<br>    return true;<br>  }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>