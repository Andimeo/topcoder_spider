            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class PalindromesCount<br>{<br>  final int oo=(int)1e9;<br>  <br>  <br>  <br>  public int count(String A, String B)<br>  {<br>    int res=0;<br>    <br>    for (int i=0; i&lt;=A.length(); ++i)<br>      if (pal(A.substring(0,i)+B+A.substring(i)))<br>        ++res;<br>    <br>    return res;<br>  }<br>  <br>  boolean pal(String s)<br>  {<br>    if (s.length()==0 || s.length()==1) return true;<br>    int len=s.length();<br>    if (s.charAt(0)!=s.charAt(len-1)) return false;<br>    return pal(s.substring(1, len-1));<br>  }<br> <br>  <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>