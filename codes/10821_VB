            Class NumberNeighbours<br><br>Public Function numPairs(ByVal numbers As Integer()) As Integer<br>        Dim tmp As String<br>        Dim counter As Integer = 0<br>        For i As Integer = 0 To numbers.Length - 1<br>            tmp = numbers(i)<br>            tmp = tmp.Replace("0", "")<br>            numbers(i) = Integer.Parse(tmp)<br>        Next<br>        For i As Integer = 0 To numbers.Length - 1<br>            For j As Integer = i + 1 To numbers.Length - 1<br>                If same(numbers(i), numbers(j)) Then<br>                    counter += 1<br>                End If<br>            Next<br>        Next<br>        Return counter<br>    End Function<br><br>    Private Function same(ByVal num1 As Integer, ByVal num2 As Integer) As Boolean<br>        Dim tmp1, tmp2 As String<br>        Dim ix As Integer<br>        tmp1 = num1<br>        tmp2 = num2<br>        If tmp1.Length &lt;&gt; tmp2.Length Then<br>            Return False<br>        End If<br>        For i As Integer = 0 To tmp1.Length - 1<br>            If Not tmp2.Contains(tmp1(i)) Then<br>                Return False<br>            Else<br>                ix = tmp2.IndexOf(tmp1(i))<br>                tmp2 = tmp2.Remove(ix, 1)<br>            End If<br>        Next<br>        Return True<br>    End Function<br>End Class<br></td>