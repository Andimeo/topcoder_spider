            using System;<br> <br>public class CarelessSecretary {<br>  const int MOD = 1000000007;<br>  public int howMany(int N, int K) {<br>    long[] fac = new long[N + 1];<br>    fac[0] = 1;<br>    for(int i = 1; i &lt;= N; ++i)<br>      fac[i] = (fac[i-1] * i) % MOD;<br>    int res = (int)fac[N];<br>    for (int set = 1; set &lt; (1 &lt;&lt; K); ++set)<br>    {<br>      int k = bitCount(set);<br>      int perms = get(N, k, fac);<br>      if (k % 2 == 0)<br>      {<br>        res += perms;<br>        if (res &gt;= MOD)<br>          res -= MOD;<br>      }<br>      else<br>      {<br>        res -= perms;<br>        if (res &lt; 0)<br>          res += MOD;<br>      }<br>    }<br>    return res;<br>  }<br><br>  private int get(int N, int k, long[] fac)<br>  {<br>    return (int)fac[N - k];<br>  }<br><br>  private int bitCount(int x)<br>  {<br>    return x == 0 ? 0 : 1 + bitCount(x &amp; (x - 1));<br>  }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>