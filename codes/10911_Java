            import java.util.*;<br>import java.math.*;<br> <br>public class FuzzyLife {<br>  static int[] dx = {1, 0, -1, 0, 1, 1, -1, -1};<br>  static int[] dy = {0, 1, 0, -1, 1, -1, 1, -1};<br>  <br>  int countGrid(char[][] grid) {<br>    int rv = 0;<br>    for (int x = -1; x &lt;= grid.length; ++x) {<br>      for (int y = -1; y &lt;= grid[0].length; ++y) {<br>        int count = 0;<br>        for (int d = 0; d &lt; dx.length; ++d) {<br>          int nx = x + dx[d];<br>          int ny = y + dy[d];<br>          if (nx &gt;= 0 &amp;&amp; nx &lt; grid.length &amp;&amp; ny &gt;= 0 &amp;&amp; ny &lt; grid[0].length &amp;&amp; grid[nx][ny] == '1') {<br>            ++count;<br>          }<br>        }<br>        if (count == 3 || count == 2 &amp;&amp; x &gt;= 0 &amp;&amp; x &lt; grid.length &amp;&amp; y &gt;= 0 &amp;&amp; y &lt; grid[0].length &amp;&amp; grid[x][y] == '1') {<br>          ++rv;<br>        }<br>      }<br>    }<br>    return rv;<br>  }<br>  <br>  public int survivingCells(String[] grid) {<br>    char[][] g = new char[grid.length][];<br>    for (int i = 0; i &lt; g.length; ++i) {<br>      g[i] = grid[i].toCharArray();<br>    }<br>    for (int i = 0; i &lt; g.length; ++i) {  <br>      for (int j = 0; j &lt; g[i].length; ++j) {<br>        if (g[i][j] == '?') {<br>          g[i][j] = '0';<br>          int c1 = countGrid(g);<br>          g[i][j] = '1';<br>          int c2 = countGrid(g);<br>          if (c1 &gt; c2) {<br>            g[i][j] = '0';<br>          }<br>        }<br>      }<br>    }<br>    return countGrid(g);<br>  }<br>  <br>  <br>}<br></td>