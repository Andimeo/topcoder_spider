            #include &lt;string&gt;<br>#include &lt;set&gt;<br><br>using namespace std;<br><br>class DoorsGame<br>{<br>  public: int determineOutcome( string doors, int trophy )<br>  {<br>    int i, n = doors.size(), sizeJohn, sizeGogo, sizeSaerto;<br>    set &lt;char&gt; stJohn, stGogo, stSaerto; set &lt;char&gt;::iterator it;<br>    for ( i = 0; i &lt; trophy; i++ )<br>      stJohn.insert( doors[i] );<br>    for ( ; i &lt; n; i++ )<br>      stGogo.insert( doors[i] );<br>    for ( it = stGogo.begin(); it != stGogo.end(); it++ )<br>      if ( stJohn.count( *it ) ) stSaerto.insert( *it );<br>    sizeJohn = stJohn.size();<br>    sizeGogo = stGogo.size();<br>    sizeSaerto = stSaerto.size();<br>    if ( sizeJohn &lt;= sizeGogo ) <br>      if ( sizeGogo - sizeJohn &gt;= sizeSaerto ) return 2 * sizeJohn - 1;<br>    if ( sizeGogo &lt; sizeJohn &amp;&amp; sizeJohn - sizeGogo &gt; sizeSaerto ) return -2 * sizeGogo;<br>    return 0;  <br>  }<br>};<br></td>