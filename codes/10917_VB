            Class LinearTravellingSalesman<br>  Public Function findMinimumDistance(ByVal x As Integer(), ByVal y As Integer()) As Integer<br>        Dim minx As Integer = 100000<br>        Dim miny As Integer = 100000<br>        Dim maxx As Integer = -100000<br>        Dim maxy As Integer = -100000<br>        Dim mind As Integer<br>        Dim maxd As Integer<br>        For i As Integer = 0 To x.Length - 1<br>            If x(0) = x(1) Then<br>                If miny &gt; y(i) Then<br>                    miny = y(i)<br>                    mind = i<br>                End If<br>                If maxy &lt; y(i) Then<br>                    maxy = y(i)<br>                    maxd = i<br>                End If                <br>            Else<br>                If minx &gt; x(i) Then<br>                    minx = x(i)<br>                    mind = i<br>                End If<br>                If maxx &lt; x(i) Then<br>                    maxx = x(i)<br>                    maxd = i<br>                End If<br>            End If<br>        Next<br>        Dim a As Double() = New Double(x.Length) {}<br>        For i As Integer = 0 To x.Length - 1<br>            If x(0) &lt;&gt; x(1) Then<br>                a(i) = (x(i) - x(mind)) / (x(maxd) - x(mind))<br>            Else : a(i) = (y(i) - y(mind)) / (y(maxd) - y(mind))<br>            End If<br>        Next<br>        Array.Sort(a, 0, x.Length)<br>        Dim res As Integer = 0<br>        For i As Integer = 1 To x.Length - 1<br>            res += Math.Abs((x(mind) + (a(i) * (x(maxd) - x(mind)))) - (x(mind) + (a(i - 1) * (x(maxd) - x(mind))))) + _<br>             Math.Abs((y(mind) + (a(i) * (y(maxd) - y(mind)))) - (y(mind) + (a(i - 1) * (y(maxd) - y(mind)))))<br>        Next<br>        Return res<br>    End Function<br>End Class<br></td>