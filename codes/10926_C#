            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class CrazyLine {<br>  public static int maxCrazyness(int[] heights) {<br>    int res;<br>    List&lt;int&gt; h = new List&lt;int&gt;(heights);<br>    h.Sort();<br><br>    if (h.Count &lt; 2) return 0;<br><br>    res = Math.Abs(h[h.Count - 1] - h[0]);<br>    int a = h[0];<br>    int b = h[h.Count - 1];<br>    h.RemoveAt(0);<br>    h.RemoveAt(h.Count - 1);<br><br>    while (h.Count &gt; 0)<br>    {<br>      int a0 = Math.Abs(a - h[0]);<br>      int ac = Math.Abs(a - h[h.Count - 1]);<br>      int b0 = Math.Abs(b - h[0]);<br>      int bc = Math.Abs(b - h[h.Count - 1]);<br><br>      List&lt;int&gt; tmp = new List&lt;int&gt;();<br>      tmp.Add(a0);<br>      tmp.Add(ac);<br>      tmp.Add(b0);<br>      tmp.Add(bc);<br>      tmp.Sort();<br>      tmp.Reverse();<br><br>      if (tmp[0] == a0)<br>      {<br>        res += a0;<br>        a = h[0];<br>        h.RemoveAt(0);<br>      } else<br><br>      if (tmp[0] == ac)<br>      {<br>        res += ac;<br>        a = h[h.Count - 1];<br>        h.RemoveAt(h.Count - 1);<br>      } else<br><br>      if (tmp[0] == b0)<br>      {<br>        res += b0;<br>        b = h[0];<br>        h.RemoveAt(0);<br>      } else<br><br>      if (tmp[0] == bc)<br>      {<br>        res += bc;<br>        b = h[h.Count - 1];<br>        h.RemoveAt(h.Count - 1);<br>      }<br>    }<br><br>    return res;<br>  }<br><br>  /*<br>  public static void Main()<br>  {<br>    int[] heights = { 5, 10, 25, 40, 25 };<br>    Console.WriteLine(maxCrazyness(heights));<br>    Console.ReadLine();<br>  }<br>   /**/<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>