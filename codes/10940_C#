            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class ColorfulTilesEasy<br>{<br>  public int theMin(string room)<br>  {<br>    int count = 0;<br>  <br>    for(int i=1; i&lt;room.Length; i++) {<br>      if(room[i] == room[i-1]) {<br>        count += 1;<br>        i += 1;<br>      }<br>    }<br>    <br>    return count;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>