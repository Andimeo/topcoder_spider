            #include &lt;algorithm&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cmath&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;string&gt;<br>#include &lt;utility&gt;<br>#include &lt;vector&gt;<br>using namespace std;<br>typedef long long LL;<br> <br>int L;<br> <br>const int MOD = 1000000007;<br> <br>int cache[1002][1002];<br> <br>inline int add(int x,int y) { return (x+y)%MOD; }<br>inline int mul(int x,int y) { return LL(x)*LL(y)%MOD; }<br> <br>int f(int n, int a) {<br>  int &amp;res = cache[n][a];<br>  if(res != -1) return res;<br>  if(n==0) { res=1; return res; }<br>  if(a==n) { res=0; return res; }<br>  res = 0;<br>  if(a+1==L) res = add(res, mul(4, f(n-L, 0)));<br>  else if(a+1&gt;L) res = add(res, mul(3, f(n-L, a-L+1)));<br>  res = add(res, f(n, a+1));<br>  return res;<br>}<br> <br>struct PuyoPuyo {<br>int theCount(int L1, int N) {<br>  L = L1;<br>  memset(cache, -1, sizeof(cache));<br>  return f(N,0);<br>}<br> <br>};<br> <br>// Powered by FileEdit<br> <br>// Powered by TomekAI<br>// Powered by TZTester 1.01 [25-Feb-2003]<br> <br>// Powered by CodeProcessor<br></td>