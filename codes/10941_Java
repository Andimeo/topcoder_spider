            import java.util.*;<br> <br>public class PuyoPuyo {<br>    static final long MOD = 1000000007;<br> <br>    public int theCount(int L, int N) {<br>        if (N % L != 0)<br>            return 0;<br>        int am = N / L;<br>        long[][] ways = new long[am + 2][N + L + 1];<br>        ways[0][0] = 1;<br>        for (int done = 0; done &lt;= am; ++done)<br>            for (int pos = 0; pos &lt;= N; ++pos)<br>                if (ways[done][pos] != 0) {<br>                    if (pos == done * L) {<br>                        ways[done + 1][pos + 1] = (ways[done + 1][pos + 1] + 4 * ways[done][pos]) % MOD;<br>                    } else {<br>                        ways[done + 1][pos + 1] = (ways[done + 1][pos + 1] + 3 * ways[done][pos]) % MOD;<br>                        ways[done][pos + 1] = (ways[done][pos + 1] + ways[done][pos]) % MOD;<br>                    }<br>                }<br>        return (int) ways[am][N];<br>    }<br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>