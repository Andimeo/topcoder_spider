            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class MissingParentheses<br>{<br>  public int countCorrections(string par)<br>  {<br>    int ret = 0;<br>    int open = 0;<br>    for(int i = 0; i &lt; par.Length; i++)<br>      {<br>        if(par[i] == '(')<br>    {<br>      open++;<br>    }<br>        else<br>    {<br>      open--;<br>      if(open &lt; 0)<br>        {<br>          ret++;<br>          open++;<br>        }<br>    }<br>      }<br>    return ret + open;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>