            using System;<br>using System.Collections.Generic;<br><br>public class SnowPlow {<br>  bool[] vis;<br>  private int n;<br>  private string[] roads;<br><br>  public int solve(string[] roads) {<br>    this.roads = roads;<br>    n = roads.Length;<br>    vis = new bool[n];<br>    dfs(0);<br>    int sum = 0;<br>    for (int i = 0; i &lt; n; i++)<br>    {<br>      for (int j = 0; j &lt; n; j++)<br>      {<br>        int t = roads[i][j] - '0';<br>        if (t &gt; 0 &amp;&amp; (!vis[i] || !vis[j]))<br>          return -1;<br>        sum += t;<br>      }<br>    }<br>    return sum;<br>  }<br><br>  private void dfs(int cur)<br>  {<br>    if (vis[cur]) return;<br>    vis[cur] = true;<br>    for (int i = 0; i &lt; n; i++)<br>    {<br>      if (roads[cur][i] &gt; '0')<br>        dfs(i);<br>    }<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br></td>