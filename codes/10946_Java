            import java.util.*;<br><br>public class SnowPlow {<br>  boolean[][] a;<br>  boolean[] u;<br><br>  public int solve(String[] roads) {<br>    a = new boolean[roads.length][roads.length];<br>    u = new boolean[roads.length];<br>    int res = 0;<br>    for (int i = 0; i &lt; roads.length; i++) {<br>      for (int j = 0; j &lt; roads[i].length(); j++) {<br>        int x = roads[i].charAt(j) - '0';<br>        if (x &gt; 0) {<br>          res += x;<br>          a[i][j] = true;<br>        }<br>      }<br>    }<br>    dfs(0);<br>    for (int i = 0; i &lt; roads.length; i++) {<br>      for (int j = 0; j &lt; roads.length; j++) {<br>        if (a[i][j] &amp;&amp; !u[i]) {<br>          return -1;<br>        }<br>      }<br>    }<br>    return res;<br>  }<br><br>  void dfs(int x) {<br>    if (u[x])<br>      return;<br>    u[x] = true;<br>    for (int i = 0; i &lt; a.length; i++) {<br>      if (a[x][i])<br>        dfs(i);<br>    }<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>