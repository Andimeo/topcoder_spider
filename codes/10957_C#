            ï»¿using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br><br>public class CountingSeries {<br>    public long countThem(long a, long b, long c, long d, long upperBound) {<br>        long res = 0;<br>        if (upperBound &gt;= a)<br>            res = (upperBound - a) / b + 1;<br>        if (d == 1)<br>        {<br>            if (c &lt;= upperBound)<br>            {<br>                res++;<br>                if (c &lt;= upperBound &amp;&amp; c &gt;= a &amp;&amp; (c - a) % b == 0)<br>                    res--;<br>            }<br>        }<br>        else<br>        {<br>            for (; ; )<br>            {<br>                <br>                if (c &gt; upperBound)<br>                    break;<br>                if (c &lt;= upperBound &amp;&amp; c &gt;= a &amp;&amp; (c - a) % b == 0)<br>                {<br>                }<br>                else<br>                res++;<br>                c=c*d;<br>            }<br>                <br>            <br>        }<br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>