            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;math.h&gt;<br>template &lt;class T&gt; T MIN(T a, T b) { if(a &lt; b) return a; else return b; }<br>using namespace std;<br>#define  SZ(a)    (int)(a).size()<br>class OneRegister <br>{<br>  string ret;<br>  int S;<br>  void dg(string str, int i)<br>  {<br>    if(i == S)<br>    {<br>      if(SZ(str)) ret = SZ(ret) == 0 ? str : (SZ(ret) &gt; SZ(str) ? str : (SZ(ret) &lt; SZ(str) ? ret : MIN(ret, str)));<br>    }<br>    if(i &gt; 1)<br>    {<br>      bool even = i % 2 == 0;<br>      int temp = sqrt(i);<br>      while(temp * temp &lt; i) temp++;<br>      bool square = temp * temp == i;<br>      if(even) dg("+" + str, i &gt;&gt; 1);<br>      if(square) dg("*" + str, temp);<br>    }<br>  }<br>public:<br>  string getProgram(int s, int t)<br>  {<br>    if(s == t) return "";<br>    if(t == 1) return "/";<br>    S = s;<br>    ret = "";<br>    dg("", t);<br>    string str1 = ret;<br>    S = 1;<br>    ret = "";<br>    dg("", t);<br>    string str2 = ret;<br>    if(SZ(str2)) str2 = "/" + str2;<br>    ret = str1;<br>    if(SZ(str2)) ret = SZ(ret) == 0 ? str2 : (SZ(ret) &gt; SZ(str2) ? str2 : (SZ(ret) &lt; SZ(str2) ? ret : MIN(ret, str2)));<br>    return SZ(ret) == 0 ? ":-(" : ret;<br>  }<br>};<br></td>