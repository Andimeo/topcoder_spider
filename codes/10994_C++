            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;deque&gt;<br>#include &lt;queue&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cctype&gt;<br>#include &lt;string&gt;<br>#include &lt;cstring&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br><br>using namespace std;<br><br>#define SIZE(X) ((int)(X.size()))<br>template&lt;class T&gt; inline void checkmin(T &amp;a,T b){if(b&lt;a) a=b;}<br><br>class RepresentableNumbers<br>{<br>public:<br>  int getNext(int n)<br>  {<br>    vector&lt;int&gt; A;<br>    int p5[10];<br>    for (int i=0;i&lt;10;i++) p5[i]=(i==0)?1:(p5[i-1]*5);<br>    for (int L=1;L&lt;=8;L++)<br>      for (int s=0;s&lt;p5[L];s++)<br>      {<br>        int value=0;<br>        for (int i=0,m=s;i&lt;L;i++,m/=5)<br>          value=value*10+(m%5)*2+1;<br>        A.push_back(value);<br>      }<br>    A.push_back(111111111);<br>    sort(A.begin(),A.end());<br>    int R=2100000000;<br>    int k=SIZE(A);<br>    for (int i=0;i&lt;SIZE(A);i++)<br>    {<br>      for (;k-1&gt;=0 &amp;&amp; A[k-1]+A[i]&gt;=n;k--);<br>      if (k&lt;SIZE(A)) checkmin(R,A[i]+A[k]);<br>    }<br>    return R;<br>  }<br>};<br></td>