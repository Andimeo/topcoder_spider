            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br> <br>using namespace std;<br> <br>class KiwiJuiceEasy {<br>public:<br>  vector &lt;int&gt; thePouring(vector &lt;int&gt;, vector &lt;int&gt;, vector &lt;int&gt;, vector &lt;int&gt;);<br>};<br> <br>vector &lt;int&gt; KiwiJuiceEasy::thePouring(vector &lt;int&gt; capacities, vector &lt;int&gt; bottles, vector &lt;int&gt; fromId, vector &lt;int&gt; toId) {<br>  int i,n;<br>  vector&lt;int&gt;res;n=fromId.size();<br>  <br>  <br>  for (i=0;i&lt;n;i++)<br>  {<br>    if (capacities[toId[i]]-bottles[toId[i]]&lt;=bottles[fromId[i]])//need less give<br>    {<br>      bottles[fromId[i]]-=(capacities[toId[i]]-bottles[toId[i]]);<br>      bottles[toId[i]]=capacities[toId[i]];<br>    }<br>    else <br>    {<br>      bottles[toId[i]]=bottles[fromId[i]]+bottles[toId[i]];<br>      bottles[fromId[i]]=0;<br>    }<br>  }<br>  return bottles;<br>  <br>}<br> <br> <br>//Powered by [KawigiEdit] 2.0!<br></td>