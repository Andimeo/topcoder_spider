            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections.Generic;<br><br>public class CarrotJumping {<br>    const double Eps = 1E-9;<br><br>    private const int MOD = 1000000007;<br><br>    public int theJump(int init) {<br>        long n = init;<br>        int r = 0;<br>        while (r &lt;= 300000 &amp;&amp; n != 0 || r &lt;= 1)<br>        {<br>            n = (2*n + 1)%MOD;<br>            ++r;<br>        }<br>        if (n != 0) return -1;<br>        int res = 0;<br>        switch (r % 3)<br>        {<br>            case 0:<br>                res = r/3;<br>                break;<br>            case 1:<br>                res =  r/3 + 1;<br>                break;<br>            case 2:<br>                res = r/3 + 1;<br>                break;<br>        }<br>        return res &gt; 100000 ? -1 : res;<br>    }<br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>