            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class CarrotJumping<br>{<br>  final int mod = 1000000007;<br>  <br>  public int theJump(int init)<br>  {<br>    int k = 0;<br>    init = (init*2+1)%mod;<br>    k++;<br>    while (k&lt;=300005)<br>    {<br>      init = (init*2+1)%mod;<br>      k++;<br>      if (init == 0)<br>        break;<br>    }<br>    if (init!=0)<br>      return -1;<br>    int ans = 0;<br>    while (k%3!=0)<br>    {<br>      k-=2;<br>      ans++;<br>    }<br>    ans+=k/3;<br>    if (ans&gt;100000)<br>      return -1;<br>    return ans;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>