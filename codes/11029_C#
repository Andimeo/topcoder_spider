            using System;<br>              public class TheCoffeeTimeDivTwo<br>        {<br>            public int find(int n, int[] tea)<br>            {<br>                bool[] map = new bool[n + 1];<br>                for (int i = 0; i &lt; tea.Length; i++)<br>                {<br>                    map[tea[i]] = true;<br>                }<br>                bool[] already = new bool[n + 1];<br>                int indexTea=n, indexCoffee=n, curcount = 0, last=0;<br>                int result = 0;<br><br>                while (indexTea &gt;0)<br>                {<br>                    if (map[indexTea])<br>                    {<br>                        curcount++;<br>                        if (curcount==1) last = indexTea;<br>                        if (curcount==7)<br>                        {<br>                            result += 75 + last * 2;<br>                            curcount = 0;<br>                        }<br>                    }<br>                    indexTea--;<br>                }<br>                if (curcount &gt; 0)<br>                {<br>                    result += 47 + 4 * curcount + last*2;<br>                    curcount = 0;<br>                }<br><br><br>                while (indexCoffee &gt; 0)<br>                {<br>                    if (!map[indexCoffee])<br>                    {<br>                        curcount++;<br>                        if (curcount == 1) last = indexCoffee;<br>                        if (curcount == 7)<br>                        {<br>                            result += 75 + last*2;<br>                            curcount = 0;<br>                        }<br>                    }<br>                    indexCoffee--;<br>                }<br>                if (curcount &gt; 0)<br>                {<br>                    result += 47 + 4 * curcount + last*2;<br>                }<br><br>                return  result;<br>            }<br>            <br>        }<br></td>