            #include &lt;iostream&gt;<br>#include &lt;vector&gt;<br><br>using namespace std;<br><br>class TheAirTripDivTwo<br>{<br>      public:<br>      int find ( vector &lt;int&gt; flights , int fuel )<br>      {<br>        <br>          int cnt = 0;<br>          int add = flights[0];<br>          <br>          for(int i = 0 ; i &lt; flights.size() ; i++){<br>                  if ( add &lt;= fuel ) {<br>                     cnt++;<br>                  }<br>                  add = add + flights[i + 1];<br>          }<br>          return cnt;<br>       }<br>};<br></td>