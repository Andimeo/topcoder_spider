            import java.util.*;<br>public class TheAirTripDivTwo<br>{<br>   public int find(int[] flights, int fuel)<br>   {<br>        int len=flights.length;<br>        int i,j,k=0;<br>        j=0;<br>        for(i=0;i&lt;len;i++)<br>        {<br>            if(fuel&gt;=flights[i])<br>            {<br>                fuel-=flights[i];<br>                j++;<br>            }<br>            else<br>              {<br>                 break;<br>              }<br>        }<br>        return j;<br>   }<br>}<br></td>