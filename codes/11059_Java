            import java.util.*;<br><br>public class SignalIntelligence {<br>  public long encrypt(int[] numbers) {<br>    Map&lt;Integer, Integer&gt; numberMap=new TreeMap&lt;Integer, Integer&gt;();<br>    for(int number: numbers) {<br>      if(numberMap.containsKey(number)) {<br>        numberMap.put(number, numberMap.get(number)+1);<br>      } else {<br>        numberMap.put(number, 1);<br>      }<br>    }<br>    <br>    long ret=Long.MAX_VALUE;<br>    for(int lastNum: numberMap.keySet()) {<br>      long cur=0;<br>      for(Map.Entry&lt;Integer, Integer&gt; entry: numberMap.entrySet()) {<br>        int number=entry.getKey();<br>        int occurrence=entry.getValue();<br>        if(lastNum==number) --occurrence;<br>        <br>        for(int i=0;i&lt;occurrence;i++) {        <br>          cur+=number+1;<br>          cur=Long.highestOneBit(cur)*2-1;<br>        }<br>      }<br>      ret=Math.min(ret, cur+lastNum);<br>    }<br>    <br>    return ret;<br>  }<br>}<br></td>