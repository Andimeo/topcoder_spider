            using namespace std;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;stdio.h&gt;<br>#include &lt;stdlib.h&gt;<br> <br>class NoZero {<br>public:<br>    int to_index( int x ) {<br>  if (x == 0)<br>      return 0;<br>  return to_index( x / 10 ) * 9 + (x % 10);<br>    }<br> <br>    int from_index( int x ) {<br>  if (x == 0)<br>      return 0;<br>  int d = x % 9;<br>  if (d == 0) d = 9;<br>  return from_index( (x - d) / 9 ) * 10 + d;<br>    }<br> <br>    int subtract(int big, int small) {<br>  return from_index( to_index( big ) - to_index( small ) );<br>    }<br>};<br> <br> <br>// Powered by FileEdit<br></td>