            import java.math.BigInteger;<br>import java.util.*;<br> <br>public class TheJackpotDivOne {<br>  public long[] find(long[] money, long jackpot) {<br>        while (true) {<br>            Arrays.sort(money);<br>            if (money[0] == money[money.length - 1])<br>                break;<br>            BigInteger total = BigInteger.ZERO;<br>            for (long x : money)<br>                total = total.add(BigInteger.valueOf(x));<br>            long add = total.divide(BigInteger.valueOf(money.length)).longValue() - money[0] + 1;<br>            if (add &gt;= jackpot) {<br>                money[0] += jackpot;<br>                jackpot = 0;<br>                break;<br>            } else {<br>                money[0] += add;<br>                jackpot -= add;<br>            }<br>        }<br>        long each = jackpot / money.length;<br>        long rem = jackpot % money.length;<br>        for (int i = 0; i &lt; money.length; ++i) {<br>            money[i] += each;<br>            if (rem &gt; 0) {<br>                --rem;<br>                money[i] += 1;<br>            }<br>        }<br>        Arrays.sort(money);<br>        return money.clone();<br>  }<br> <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>