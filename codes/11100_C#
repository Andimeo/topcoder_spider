            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class CoinMachinesGame<br>{<br>  public int maxGames(int coins, int[] need, int[] give)<br>  {<br>    int N = need.Length;<br>    for (int i = 0; i &lt; N; ++i)<br>      give[i] = need[i] - give[i];<br>    Array.Sort(give, need);<br>    int res = 0;<br>    for (int i = 0; i &lt; N; ++i)<br>    {<br>      if (coins &gt;= need[i])<br>      {<br>        int p = ((coins - need[i]) / give[i]) + 1;<br>        res += p;<br>        coins -= give[i] * p;<br>      }<br>    }<br>    return res;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.8 (beta) modified by pivanof!<br></td>