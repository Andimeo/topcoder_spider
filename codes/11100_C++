            #include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br><br>using namespace std;<br><br>class CoinMachinesGame<br>{<br>  pair&lt;int,int&gt; data[50];<br>  int n;<br><br>public:<br>  int maxGames(int coins, vector &lt;int&gt; need, vector &lt;int&gt; give)<br>  {<br>    n = 0;<br>    for (int i = 0; i &lt; need.size(); i ++)<br>      data[n ++] = make_pair(need[i] - give[i], need[i]);<br>    <br>    sort(data, data + n);<br>    <br>    int games = 0;<br>    <br>    for (int i = 0; i &lt; n; i ++)<br>    {<br>      if (coins &gt;= data[i].second)<br>      {<br>        games += (coins - data[i].second) / data[i].first + 1;<br>        coins -= data[i].first * ((coins - data[i].second) / data[i].first + 1);<br>      }<br>    }<br>    <br>    return games;<br>  }<br>};<br></td>