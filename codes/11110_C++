            #include &lt;iostream&gt;<br>using namespace std;<br> <br>int a[2000200], d[2000200], b[2000200];<br> <br>struct LockersDivOne {<br>  int lastOpened(int n) {<br>    for (int i = 1; i &lt;= n; i++)<br>      a[i] = i;<br>    int l = 0;<br>    while (n &gt; 1) {<br>      l++;<br>      int i = 1;<br>      while (i &lt;= n) {<br>        d[i] = l;<br>        i += l + 1;<br>      }<br>      int m = 0;<br>      for (int i = 1; i &lt;= n; i++)<br>        if (d[i] != l)<br>          b[++m] = a[i];<br>      n = m;<br>      for (int i = 1; i &lt;= n; i++)<br>        a[i] = b[i];<br>    }<br>    return a[1];<br>  }<br>};<br></td>