            import java.util.*;<br><br>public class LockersDivOne {<br>    public int lastOpened(int N) {<br>        return doit(N, 2);<br>    }<br><br>    private int doit(int n, int each) {<br>        if (n == 1) return 1;<br>        int thisTime = (n - 1) / each + 1;<br>        int res = doit(n - thisTime, each + 1);<br>        int blocks = (res - 1) / (each - 1);<br>        int rem = (res - 1) % (each - 1);<br>        return blocks * each + rem + 2;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>