            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class PermutationSignature {<br>    public int[] reconstruct(string signature)<br>    {<br>        int[] res = new int[signature.Length + 1];<br>        int i,j;<br>        for (i = 1; i &lt;= signature.Length+1; i++)<br>        {<br>            for (j = 0; j &lt; signature.Length; j++)<br>            {<br>                if (res[j] == 0 &amp;&amp; (signature[j] == 'I' || res[j + 1] != 0)) break;<br>            }<br>            res[j] = i;<br>        }<br>        return res;<br>    }<br><br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>