<td class="problemText" colspan="8" valign="middle" align="left">
            #include &lt;cstdio&gt;<br>using namespace std;<br><br>class  DigitHoles<br>{<br>      public: <br>      int numHoles(int n)<br>           <br>             {<br>                int i,ans=0;<br>                <br>                if (n==0)  { ans=1; }<br>                <br>                else {<br>                 while (n&gt;0)<br>                 {<br>                   i=n%10;<br>                    if (i==8) ans=ans+2;<br>                    if (i==4 || i==6 || i==0 || i==9) ans=ans+1;<br>                    n=n/10;<br>                 } }<br>                 <br>              return ans;<br>             <br>                }<br>      };<br></td>