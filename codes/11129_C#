            using System;<br> <br>public class NumberMagicEasy<br>{<br>  public int theNumber(string answer)<br>  {<br>    int[] A = {1, 2, 3, 4, 5, 6, 7, 8};<br>    int[] B = {1, 2, 3, 4, 9, 10, 11, 12};<br>    int[] C = {1, 2, 5, 6, 9, 10, 13, 14};<br>    int[] D = {1, 3, 5, 7, 9, 11, 13, 15};<br>    for(int i=1; i&lt;=100; i++) {<br>      if(Check(A, i) != answer[0]) continue;<br>      if(Check(B, i) != answer[1]) continue;<br>      if(Check(C, i) != answer[2]) continue;<br>      if(Check(D, i) != answer[3]) continue;<br>      return i;<br>    }<br>    return 0;<br>  }<br>  <br>  char Check(int[] A, int number) {<br>    foreach(int a in A) {<br>      if(a == number) return 'Y';<br>    }<br>    return 'N';<br>  }<br> <br> <br>}<br></td>