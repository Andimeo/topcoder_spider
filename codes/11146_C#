            using System;<br><br>public class AfraidOfEven<br>{<br>    public int[] restoreProgression(int[] seq)<br>    {<br>        for (int p1 = 0; p1 &lt; 40; p1++)<br>            for (int p2 = 0; p2 &lt; 40; p2++)<br>            {<br>                long[] r = new long[seq.Length];<br>                r[0] = seq[0] * (1L &lt;&lt; p1);<br>                r[1] = seq[1] * (1L &lt;&lt; p2);<br>                long d = r[1] - r[0];<br>                bool ok = true;<br>                for (int i = 2; i &lt; r.Length; i++)<br>                {<br>                    long cur = r[i - 1] + d;<br>                    if (cur % seq[i] != 0)<br>                    {<br>                        ok = false;<br>                        break;<br>                    }<br>                    cur /= seq[i];<br>                    if ((cur &amp; (cur - 1)) != 0)<br>                    {<br>                        ok = false;<br>                        break;<br>                    }<br>                    r[i] = cur * seq[i];<br>                }<br>                if (ok)<br>                {<br>                    int[] ret = new int[r.Length];<br>                    for (int i = 0; i &lt; ret.Length; i++)<br>                        ret[i] = (int)r[i];<br>                    return ret;<br>                }<br>            }<br>        throw new Exception();<br><br>    }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>