            import java.util.*;<br><br>public class AfraidOfEven {<br>    public int[] restoreProgression(int[] _seq) {<br>        long[] seq = new long[_seq.length];<br>        for (int i = 0; i &lt; seq.length; ++i) seq[i] = _seq[i];<br>        for (long first = seq[0];; first *= 2) {<br>            for (long second = seq[1]; second &lt;= Integer.MAX_VALUE; second *= 2) {<br>                long delta = second - first;<br>                boolean ok = true;<br>                for (int i = 0; i &lt; seq.length; ++i) {<br>                    long cur = first + delta * i;<br>                    if (cur % seq[i] != 0) {<br>                        ok = false;<br>                        break;<br>                    }<br>                    cur /= seq[i];<br>                    if ((cur &amp; (cur - 1)) != 0) {<br>                        ok = false;<br>                        break;<br>                    }<br>                }<br>                if (ok) {<br>                    int[] res = new int[seq.length];<br>                    for (int i = 0; i &lt; seq.length; ++i) {<br>                        res[i] = (int) (first + delta * i);<br>                    }<br>                    return res;<br>                }<br>            }<br>        }<br>    }<br>}<br><br><br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>