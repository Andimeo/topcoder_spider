            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class SlimeXSlimesCity <br>{<br>  const int INF = 987654321;<br><br>  public int merge(int[] population) <br>  {<br>        Array.Sort(population);<br>        return calc(population, population.Length);        <br>  }<br><br>    public int calc(int[] population, int n) {<br>        if (n == 1) {<br>            return 1;<br>        }<br><br>        long sum = 0;<br>        for (int i = 0; i &lt; n - 1; i++) {<br>            sum += population[i];<br>        }<br><br>        if (sum &gt;= population[n - 1]) {<br>            return 1 + calc(population, n-1);<br>        }<br>        else<br>            return 1;<br>    }<br><br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>