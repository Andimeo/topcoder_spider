            import java.util.*;<br> <br>public class SlimeXSlimesCity {<br>  public int merge(int[] population) {<br>    int res = 0;<br>        for (int i = 0; i &lt; population.length; ++i) {<br>            List&lt;Integer&gt; others = new ArrayList&lt;Integer&gt;();<br>            for (int j = 0; j &lt; population.length; ++j)<br>                if (i != j) others.add(population[j]);<br>            Collections.sort(others);<br>            long cur = population[i];<br>            ++res;<br>            for (int x : others) {<br>                if (cur &lt; x) {<br>                    --res;<br>                    break;<br>                }<br>                cur += x;<br>            }<br>        }<br>    return res;<br>  }<br> <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>