            using System;<br>using System.Collections.Generic;<br>using System.Text;<br>class ShuffleSort {<br><br>  public double shuffle(int[] cards){<br>    Array.Sort(cards);<br>    return computeExpected(cards, 0) + 1;<br>  }<br><br>  double computeExpected(int[] cards, int start) {<br>    if(start == cards.Length - 1) return 0.0;<br>    int count = 0;<br>    for(int n = start; n &lt; cards.Length; n++) if(cards[n] == cards[start]) count++;<br>    double expectedWithNoShuffle = count / (double)(cards.Length - start);<br>    double expectedWithShuffle = 1.0 - expectedWithNoShuffle;<br>    double nextExpected = computeExpected(cards, start + 1);<br>    return expectedWithNoShuffle * nextExpected + expectedWithShuffle * (1.0 / expectedWithNoShuffle + nextExpected);<br>  }<br>}<br></td>