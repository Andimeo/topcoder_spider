            /**<br> * <br> */<br>public class ShuffleSort {<br><br>  int [] cards;<br>  int [] values = new int[50];<br>  int cardsLeft;<br>  <br>  public double shuffle(int[] cards) {<br>    this.cards = cards;<br>    cardsLeft = cards.length;<br>    <br>    initValues();<br>    <br>    return countAvg();<br>  }<br>  <br><br><br>  private void initValues() {<br>    for (int value: cards) {<br>      values[value-1]++;<br>    }<br>  }<br><br>  private double countAvg() {<br>    int i = 0;<br>    double result = 0;<br>    int allCards = cardsLeft;<br>    while (cardsLeft &gt; 0) {<br>      if (values[i] == 0) {<br>        i++;<br>      } else {<br>        result += ((double)cardsLeft) / values[i];<br>        values[i]--;<br>        cardsLeft--;<br>      }<br>      <br>    }<br>  <br>    return result - allCards + 1;<br>  }<br><br>}<br></td>