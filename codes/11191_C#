            using System;<br>class BuyingFlowers {<br>  int rc=10000*10000;<br>  int sz=0;<br>  int[] r,l;<br>  void tr(int st,int sumR,int sumL) {<br>   if(st==sz) {<br>    if(Math.Abs(sumR-sumL)&gt;1) return;<br>    int g=sumR+sumL;<br>    int a=Convert.ToInt16(Math.Round(Math.Sqrt(g)));<br>    while(g/a&gt;a) a++;<br>    do {<br>     int b=g/a;<br>     if((a*b)==g) {<br>      int t=Math.Abs(a-b); if(rc&gt;t) rc=t; return;<br>     } else a--;<br>    } while(true);<br>   }<br>   sumR+=r[st]; sumL+=l[st];<br>   for(int i=st+1;i&lt;=sz;i++) tr(i,sumR,sumL);<br>  }<br>  public int buy(int[] roses,int[] lilies) {<br>   r=roses;<br>   l=lilies;<br>   sz=roses.Length;<br>   for(int i=0;i&lt;sz;i++) tr(i,0,0);<br><br>   if(rc==10000*10000) return -1; else return rc;<br>  }<br> }<br>    <br></td>