            #include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;cmath&gt;<br>#define rep(i,n) for (int i=0 ; i&lt;n ; i++)<br>using namespace std;<br> int l , a[20]={0} , R[20] , li[20] , Rse , SUM , RET=1000000 ;<br>class BuyingFlowers<br>{<br>public:<br>  void build (int k){<br>     if (k==l){<br>       Rse=0; SUM=0;<br>       rep(i,l)<br>       if (a[i]==1){<br>         Rse+=R[i]; SUM+=li[i];<br>       }<br>       int mx=Rse , mn=Rse;<br>       if (mx&lt;SUM) mx=SUM;<br>       else mn=SUM;<br>       if (mx==mn || mx==mn+1){<br>         int q=mx+mn , w=(int)sqrt(q) , i;<br>         int p=0;<br>         for (i=w ; p==0 &amp;&amp; i&gt;0; i--)<br>         if (q%i==0){<br>           p=1;<br>           int y=q/i;<br>           if (y-i&lt;RET) RET=y-i;<br>         }<br>       }<br>     } else {<br>       int g;<br>       for (g=0 ; g&lt;2 ; g++){<br>         a[k]=g;<br>         k++;<br>         build(k);<br>         k--;<br>       }<br>    } <br>  }<br>  int buy(vector &lt;int&gt; r, vector &lt;int&gt; L){<br>   l=r.size();<br>    int i;<br>    for (i=0 ; i&lt;l ; i++){<br>      R[i]=r[i]; li[i]=L[i];<br>    }<br>    build(0);<br>    if (RET!=1000000) return RET;<br>    else return -1;<br>  }<br><br>};<br></td>