            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class BuyingFlowers<br>{<br>  public int buy(int[] r, int[] l)<br>  {<br>    int t=r.length;<br>        int iters=1&lt;&lt;t;<br>        int min=Integer.MAX_VALUE;<br>        for(int i=1;i&lt;iters;i++)<br>        {<br>            int arr1[]=find(r,l,i);<br>            int fin=find(arr1[0],arr1[1]);<br>            if(fin&lt;min)<br>            {<br>                min=fin;<br>            }<br>        }<br>        if(min==Integer.MAX_VALUE)<br>            return -1;<br>        return min;<br>  }<br>  public static int find(int a,int b)<br>  {<br>    if(Math.abs(a-b)&lt;=1)<br>    {<br>      int ans=Integer.MAX_VALUE;<br>      int k=a+b;<br>      for(int i=1;i&lt;=Math.sqrt(k);i++)<br>        if(k%i==0)<br>        {<br>          ans=k/i-i;<br>        }<br>      return ans;<br>    }<br>    return Integer.MAX_VALUE;<br>  }        <br>  public static int[] find(int r[],int l[], int i)<br>  {<br>    int ret[]=new int[2];<br>    int j=0;<br>    while(i!=0)<br>    {<br>      int k=i%2;<br>      if(k==1)<br>      {<br>        ret[0]+=r[j];<br>        ret[1]+=l[j];<br>      }<br>      i/=2;<br>      j++;<br>    }<br>    return ret;<br>  }      <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>