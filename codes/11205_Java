            public class TheBoringGameDivOne {<br><br>  public int[] find(int sj, int kj, int sb, int kb, int sf, int kf) {<br><br>    // 4 candidates;<br>    int kill[][] = {<br>      { 1, 1, 0 },<br>      { 1, 0, 1 },<br>      { 0, 1, 1 },<br>      { 0, 0, 1 }<br>    };<br><br>    // 9 candidates;<br>    int score[][][] = {<br>      { { 0, 0, 2 }, { -1, 0, 1 }, { 0, -1, 1 } },<br>      { { 0, 0, 0 }, { 0, 1, 1 } },<br>      { { 0, 0, 0 }, { 1, 0, 1 } },<br>      { { 1, 0, 0 }, { 0, 1, 0 } }<br>    };<br><br>    int inf = 10000000;<br>    int min = inf;<br>    int max = -1;<br><br>  MAIN:<br>    for(int c=0; c&lt;=kb; ++c) {<br>      int a = kb - c;<br>      int b = kj - a;<br>      if( b &lt; 0 ) { continue; }<br>      int d = kf - b - c;<br>      if( d &lt; 0 ) { continue; }<br>      int SF = sf - a;<br>      if( SF &lt; 0 ) { continue; }<br>      if( SF + d != sj + sb + a ) { continue; }<br>      for(int b2=0; b2&lt;=Math.min(b, SF); ++b2) {<br>        for(int c2=0; c2&lt;=Math.min(c, SF-b2); ++c2) {<br>          int a1 = SF - b2 - c2;<br>          int SJ = sj - c2;<br>          int SB = sb - b2;<br>          int A = a - a1;<br>          int D = d;<br>          if( D != A + SJ + SB ) { continue; }<br>          if( -A &lt;= SJ &amp;&amp; SJ &lt;= D &amp;&amp; -A &lt;= SB &amp;&amp; SB &lt;= D ) {<br>            min = Math.min(min, a + b + c + d);<br>            max = Math.max(max, a + b + c + d);<br>            continue MAIN;<br>          }<br>        }<br>      }<br>    }<br><br>    if( max == -1 ) { return new int[0]; }<br>    return new int[] { min, max };<br><br>  }<br><br>}<br></td>