            import java.util.ArrayList;<br>import java.util.List;<br><br>public class FoxSequence {<br>    public String isValid(int[] seq) {<br>        List&lt;Integer&gt; diffs = new ArrayList&lt;Integer&gt;();<br>        for (int i = 0; i + 1 &lt; seq.length; ++i) {<br>            int diff = seq[i + 1] - seq[i];<br>            if (diffs.isEmpty() || diffs.get(diffs.size() - 1) != diff)<br>                diffs.add(diff);<br>        }<br>        if (diffs.size() == 4 &amp;&amp; diffs.get(0) &gt; 0 &amp;&amp; diffs.get(1) &lt; 0 &amp;&amp; diffs.get(2) &gt; 0 &amp;&amp; diffs.get(3) &lt; 0)<br>            return "YES";<br>        if (diffs.size() == 5 &amp;&amp; diffs.get(0) &gt; 0 &amp;&amp; diffs.get(1) &lt; 0 &amp;&amp; diffs.get(2) == 0 &amp;&amp; diffs.get(3) &gt; 0 &amp;&amp; diffs.get(4) &lt; 0)<br>            return "YES";<br>        return "NO";<br>    }<br>}<br></td>