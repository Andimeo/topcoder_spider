            public class NetworkXMessageRecovery {<br>  boolean[][] graph;<br>  boolean[] use;<br>  public String recover(String[] messages) {<br>    graph = new boolean[52][52];<br>    use = new boolean[52];<br>    for(int i = 0; i &lt; messages.length; ++i){<br>      String msg = messages[i];<br>      char ch = msg.charAt(0);<br>      int tmp;<br>      if (ch&gt;='A' &amp;&amp; ch &lt;='Z')<br>        tmp = ch-'A';<br>      else <br>        tmp = ch-'a'+26;<br>      use[tmp] = true;<br>      for(int j = 1; j &lt; msg.length(); ++j) {<br>        char ch1 = msg.charAt(j-1);<br>        char ch2 = msg.charAt(j);<br>        int s, t;<br>        if (ch1&gt;='A' &amp;&amp; ch1 &lt;='Z')<br>          s = ch1-'A';<br>        else <br>          s = ch1-'a'+26;<br>        if (ch2&gt;='A' &amp;&amp; ch2 &lt;='Z')<br>          t = ch2-'A';<br>        else <br>          t = ch2-'a'+26;<br>        graph[s][t] = true;<br>        use[s]= true; use[t]=true;<br>      }<br>    }<br>    <br>    String str = "";<br>    while(true) {<br>      boolean done = true;<br>      for (int i = 0; i &lt; 52; ++i) {<br>        if (use[i] &amp;&amp; inDegree(i) == 0) {<br>          str += code(i);<br>          delete(i);<br>          use[i] = false;<br>          done = false;break;<br>        }<br>      }<br>      if(done)break;<br>    }<br>    return str;<br>  }<br>  <br>  int inDegree(int i) {<br>    int in = 0;<br>    for (int j = 0; j &lt; 52; j++)<br>      if(graph[j][i])<br>        ++in;<br>    return in;<br>  }<br>  <br>  void delete(int i) {<br>    for (int j = 0; j &lt; 52; j++)<br>      graph[i][j] = false;<br>  }<br>  <br>  char code (int i) {<br>    if(i&gt;=0 &amp;&amp; i &lt;26)<br>      return (char) (i+'A');<br>    else<br>      return (char) (i-26+'a');<br>  }<br>}<br></td>