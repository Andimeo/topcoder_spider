            using System;<br>using System.Collections.Generic;<br>using System.Text;<br>public class SlimeXSlimeRancher2<br>{<br>    public static int train(int[] atts)<br>    {<br>        int r = 0;<br>        int num = atts[0];<br>        for (int i = 0; i &lt; atts.Length; i++)<br>        {<br>            int a = atts[i];<br>            if (a &gt; num)<br>            {<br>                num = atts[i];<br>            }<br>        }<br>        for (int j = 0; j &lt; atts.Length; j++)<br>        {<br>            r = Math.Abs(num - atts[j]) + r;<br>        }<br>        return r;<br>    }<br>}<br></td>