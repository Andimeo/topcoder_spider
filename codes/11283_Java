            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class FoxProgression<br>{<br>  public int theCount(int[] seq)<br>  {<br>    if(seq.length==1) return -1;<br>    <br>    int arr[]=new int[seq.length];<br>    for(int i=0;i&lt;seq.length;i++) arr[i]=seq[i];<br>    Arrays.sort(arr);<br>    if(arr[0]==arr[arr.length-1]) return 1;<br>    boolean ar=true;<br>    boolean gm=true;<br>    int d=seq[1]-seq[0];<br>    int r=seq[1]/seq[0];<br>    System.out.println(r);<br>    for(int i=0;i&lt;seq.length-1;i++)<br>     {<br>     if(seq[i+1]-seq[i]!=d) ar=false;<br>     }<br>     if(r==0) gm=false;<br>     for(int i=0;i&lt;seq.length-1;i++)<br>     {<br>     if(seq[i]*r!=seq[i+1]) gm=false;<br>     }<br>     if(ar &amp;&amp; gm) return 2;<br>     if(ar || gm) return 1;<br>     return 0;<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.7 (beta) modified by pivanof!<br></td>