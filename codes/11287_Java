            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class MarbleDecoration<br>{<br>  public int maxLength(int R, int G, int B)<br>  {<br>    int [] a={R,G,B};<br>    Arrays.sort(a);<br>    int max=a[2];<br>    int min=a[1];<br>    int count =min*2;<br>    if(max &gt; min)<br>      count++;<br>      return count;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>