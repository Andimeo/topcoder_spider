            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class ColoredStrokes {<br>    public int getLeast(string[] picture) {<br>        int res = 0;<br>        int H = picture.Length, W = picture[0].Length;<br>        int[,] col = new int[H, W];<br>        for(int i=0; i&lt;H; ++i)<br>            for (int j = 0; j &lt; W; ++j)<br>            {<br>                if (picture[i][j] == '.') col[i, j] = 0;<br>                if (picture[i][j] == 'B') col[i, j] = 1;<br>                if (picture[i][j] == 'R') col[i, j] = 2;<br>                if (picture[i][j] == 'G') col[i, j] = 3;<br>            }<br>        for (int i = 0; i &lt; H; ++i)<br>        {<br>            for (int j = 0; j &lt; W; ++j)<br>            {<br>                if ((col[i, j] &amp; 1) != 0)<br>                {<br>                    for (int k = i; k &lt; H &amp;&amp; col[k, j] % 2 == 1; ++k)<br>                        col[k, j] -= 1;<br>                    res++;<br>                }<br>                if ((col[i, j] &amp; 2) != 0)<br>                {<br>                    for (int k = j; k &lt; W &amp;&amp; ((col[i, k] &amp; 2) != 0); ++k)<br>                        col[i, k] -= 2;<br>                    res++;<br>                }<br>            }<br>        }<br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>