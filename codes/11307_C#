            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class CarrotBoxesEasy<br>{<br>    public int findMax(int[] carrots)<br>    {<br>        int max = carrots[0];<br>        int idx = 0;<br> <br>        for (int i = 1; i &lt; carrots.Length; i++)<br>        {<br>            if (carrots[i] &gt; max) { max = carrots[i]; idx = i; }<br>        }<br>        return idx;<br>    }<br> <br>    public int theIndex(int[] carrots, int K)<br>    {<br>        int eat = 0, index = -1;<br>        while (eat &lt; K)<br>        {<br>            index = findMax(carrots);<br>            carrots[index]--;<br>            eat++;<br>        }<br>        return index;<br>    }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>