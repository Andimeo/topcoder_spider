            using System;<br> <br>public class VendingMachine<br>{<br>  public int [,] items;<br>  public int [] sum;<br>  public int motor, time;<br>  int column=0;<br>  int r,c;<br> <br>  public void putcolumn(int i)<br>  {<br>    int x;<br> <br>    x = Math.Min( ((i-column) + c ) % c, ((column-i) + c) % c);<br>    column = i;<br>    motor+=x;<br>  }<br> <br>  void expensive()<br>  {<br>    int i, max = 0;<br> <br>    for(i=1; i&lt;c; i++)<br>      if (sum[i]&gt;sum[max]) max = i;<br>    <br>    putcolumn(max);  <br>  }<br> <br>  public int motorUse(string[] prices, string[] purchases)<br>  {<br>    int i,j;<br>    char [] sep = { ' ' };<br>    char [] sep2 = { ',', ':'};<br>    <br>    r = prices.Length;<br>    c = prices[0].Split(sep).Length;<br> <br>    items = new int[c,r];<br>    sum = new int[c];<br> <br>    for(i=0; i&lt;r; i++)<br>    {<br>      string [] x = prices[i].Split(sep);<br>      for (j=0; j&lt;c; j++)<br>      {<br>        items[j,i] = int.Parse(x[j]);        <br>        sum[j] += items[j,i];<br>      }<br>    }<br>    <br>    motor = 0;<br> <br>    expensive();<br>    time = 0;<br> <br>    for(i=0; i&lt;purchases.Length; i++)<br>    {<br>      string [] z = purchases[i].Split(sep2);<br>      int shelf = int.Parse(z[0]);<br>      int col = int.Parse(z[1]);<br>      int xtime = int.Parse(z[2]);<br>      <br>      if (xtime-time &gt;= 5)<br>        expensive();<br> <br>      putcolumn(col);<br>      if (items[col,shelf] == 0) return -1;<br>      sum[col] -= items[col,shelf];<br>      items[col,shelf] = 0;<br>      time = xtime;      <br>    }<br>    expensive();<br> <br>    return motor;<br>    <br>    <br> <br>    <br> <br>    <br>    <br>  }<br> <br>}<br></td>