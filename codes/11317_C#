            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class AdditionGame<br>{<br>    public int getMaximumPoints(int A, int B, int C, int N)<br>    {<br>        int ret = 0;<br>        for (int step = 0; step &lt; N; ++step)<br>        {<br>            if (A == 0 &amp;&amp; B == 0 &amp;&amp; C == 0) break;<br>            int val = Math.Max(A, Math.Max(B, C));<br>            ret += val;<br>            if (val == A)<br>            {<br>                --A;<br>                continue;<br>            }<br>            if (val == B)<br>            {<br>                --B;<br>                continue;<br>            }<br>            if (val == C)<br>            {<br>                --C;<br>                continue;<br>            }<br>        }<br>        return ret;<br>    }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>