            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class AdditionGame<br>{<br>  public int getMaximumPoints(int A, int B, int C, int N)<br>  {<br>    int[] a = new int[]{A, B, C};<br>    int res = 0;<br>    for (int i = 0; i &lt; N; i++) {<br>      Arrays.sort(a);<br>      res += a[2];<br>      if (a[2] &gt;= 1) a[2]--;<br>    }<br>    return res;<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>