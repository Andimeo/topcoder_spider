            #include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;utility&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cmath&gt;<br>#include &lt;functional&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;numeric&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;queue&gt;<br>#include &lt;stack&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>using namespace std;<br> <br>#define FOR(i,a,b)  for(int i=(a);i&lt;(b);++i)<br>#define F(i,a)      FOR(i,0,a)<br>#define ALL(x)      x.begin(),x.end()<br>#define PB          push_back<br>#define S           size()<br> <br>class Filtering{<br>    public:<br>    vector &lt;int&gt; designFilter(vector &lt;int&gt; sizes, string outcome) {<br> <br>        vector&lt;pair &lt;int,char&gt; &gt; v;<br>        vector&lt;int&gt; res;<br> <br>        for(int c=0;c&lt;outcome.S;c++)<br>        v.push_back(make_pair(sizes[c],outcome[c]));<br> <br>        sort(ALL(v));<br>        int aux=0,em=0,fin=0;<br> <br>        for(int c=0;c&lt;v.size();c++)<br>        {<br>        if(v[c].second=='A' &amp;&amp; aux==0){aux=1;em=v[c].first;}<br>        if(v[c].second=='R' &amp;&amp; aux==1){aux=2;fin=v[c-1].first;}<br>        if(v[c].second=='A' &amp;&amp; aux==2)return res;<br>        }<br> <br>        if(fin==0)fin=v[v.S-1].first;<br>        if(aux==0)return res;<br> <br>        res.push_back(em);<br>        res.push_back(fin);<br> <br>        return res;<br>    }<br> <br>};<br></td>