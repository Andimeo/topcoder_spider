            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;queue&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br><br>using namespace std;<br><br><br>class ColorfulRabbits {<br>public:<br>  int getMinimum(vector &lt;int&gt; r) {<br>    int n=r.size();<br>    map&lt;int,int&gt; mp;<br>    for(int i=0; i&lt;n; i++){<br>        mp[r[i]]++;<br>    }<br>    int res=0;<br>    for(map&lt;int,int&gt;::iterator it=mp.begin(); it!=mp.end(); it++){<br>        int a=it-&gt;first+1;<br>        res+=(it-&gt;second/a) *a;<br>        if(it-&gt;second%a!=0) res+=a;<br>        }<br>        return res;<br>  }<br>};<br></td>