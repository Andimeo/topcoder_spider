            public class ColorfulRabbits {<br>  public int getMinimum(int[] replies) {<br>    int[] quantity = new int[1000001];<br>    for (int reply : replies)<br>      quantity[reply]++;<br>    int totalRabbits = 0;<br>    for (int i = 0; i &lt;= 1000000; i++) {<br>      if (quantity[i] == 0)<br>        continue;<br>      totalRabbits += ((quantity[i] + i) / (i + 1)) * (i + 1);<br>    }<br>    return totalRabbits;<br>  }<br><br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by moj 4.15 [modified TZTester]<br>// Powered by CodeProcessor<br></td>