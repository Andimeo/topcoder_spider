            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class WhiteSpaceEditing<br>{<br>  public int getMinimum(int[] lines)<br>  {<br>        int ret = lines.Length - 1;<br>        ret+= getMin(new List&lt;int&gt;(lines));<br>        return ret;<br>  }<br> <br>    private int getMin(List&lt;int&gt; lines)<br>    {<br>        if (lines.Count == 0) return 0;<br>        int min = int.MaxValue;<br>        for (int i = 0; i &lt; lines.Count; i++)<br>        {<br>            min = Math.Min(lines[i],min);<br>        }<br>        int ret = min;<br>        for (int i = 0; i &lt; lines.Count; i++)<br>        {<br>            lines[i] -= min;<br>        }<br>        int idx = 0;<br>        List&lt;int&gt; newlist = new List&lt;int&gt;();<br>        while (idx&lt;lines.Count)<br>        {<br>            if (lines[idx] == 0)<br>            {<br>                ret += getMin(newlist);<br>                newlist = new List&lt;int&gt;();<br>            }<br>            else<br>            {<br>                newlist.Add(lines[idx]);<br>            }<br>            idx++;<br>        }<br>        ret += getMin(newlist);<br>        return ret;<br>    }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>