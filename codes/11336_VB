            Public Class GogoXBallsAndBinsEasy<br> Public Function solve(ByVal T As Integer()) As Integer<br>        Dim stepcout As Integer = 0<br>        Dim length As Integer = T.Length<br>        Dim start As Integer = 0<br>        Dim endint As Integer = length - 1<br>        If Not length Mod 2 = 0 Then<br>            For index As Integer = 1 To (length - 1) / 2<br>                stepcout = stepcout + T(endint) - T(start)<br>                endint = endint - 1<br>                start = start + 1<br>            Next<br>        Else<br>            For index As Integer = 1 To length / 2<br>                stepcout = stepcout + T(endint) - T(start)<br>                endint = endint - 1<br>                start = start + 1<br>            Next<br>        End If<br>        Return stepcout<br>    End Function<br>End Class<br></td>