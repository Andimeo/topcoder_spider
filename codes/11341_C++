            #include &lt;sstream&gt;<br>#include &lt;queue&gt;<br>#include &lt;set&gt;<br>#include &lt;map&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cmath&gt;<br>#include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br><br>using namespace std;<br><br><br>class SRMCards<br>{<br>public:<br>  int maxTurns(vector &lt;int&gt; c)<br>  {<br>      int ran=c.size();<br>      int count=0;<br>      int k;<br>      sort(c.begin(),c.end());<br>      for(k=0;k&lt;ran;k++)<br>      {<br>          if((c[k]+1)==c[k+1]) k++;<br>          count++;<br>      }<br><br>       return count;<br>  }<br>};<br></td>