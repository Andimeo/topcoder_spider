            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class TheProgrammingContestDivTwo<br>{<br>  public int[] find(int T, int[] requiredTime)<br>  {<br>    int solved=0;<br>    int pen=0;int curtime=0;<br>    Array.Sort(requiredTime);<br>    for(int i=0;i&lt;requiredTime.Length;i++)<br>    {<br>      curtime+=requiredTime[i];<br>      if(curtime&gt;T)break;<br>      solved++;<br>      pen+=curtime;<br>    }<br>    return new int[]{solved,pen};<br>      <br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>