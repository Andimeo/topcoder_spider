            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class TrafficCongestion {<br>    public int theMinCars(int treeHeight)<br>    {<br>        long ret = 0;<br>        long mod = 1000000007;<br>        if (treeHeight % 2 == 1)<br>        {<br>            long now = 1;<br>            for (int i = 1; i &lt;= treeHeight; i += 2)<br>            {<br>                ret += now;<br>                ret %= mod;<br>                now *= 4;<br>                now %= mod;<br>            }<br>        }<br>        else<br>        {<br>            ret = 1;<br>            long now = 2;<br>            for (int i = 2; i &lt;= treeHeight; i += 2)<br>            {<br>                ret += now;<br>                ret %= mod;<br>                now *= 4;<br>                now %= mod;<br>            }<br>        }<br>        return (int)ret;<br>    }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] Modified for C# by ysn<br>// Powered by CodeProcessor<br></td>