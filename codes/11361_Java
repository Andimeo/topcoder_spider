            /**<br> * Built using CHelper plug-in<br> * Actual solution is at the top<br> * @author Niyaz Nigmatullin<br> */<br>public class TrafficCongestion {<br>    public int theMinCars(int n) {<br>        long ans = 1;<br>        final int MOD = 1000000007;<br>        for (int i = 1; i &lt;= n; i++) {<br>            if ((i &amp; 1) == 1) {<br>                ans = (ans + MOD - 1) * 2 + 1;<br>            } else {<br>                ans = ans * 2 + 1;<br>            }<br>            ans %= MOD;<br>        }<br>        return (int) ans;<br>    }<br>}<br></td>