            import java.util.Arrays;<br>public class SRMRoomAssignmentPhase<br>{<br>  public int countCompetitors(int[] rate,int k)<br>  {<br>     int my=rate[0],pos=0,i=0,j;<br>     Arrays.sort(rate);<br>     for(j=rate.length-1;i&lt;(rate.length/2);i++)<br>     {<br>       int t=rate[i];<br>       rate[i]=rate[j];<br>       rate[j]=t;<br>       j--;<br>     }<br>     while(rate[pos]!=my)<br>     {<br>       pos++;<br>     }<br>     pos++;<br>     int my_room=(pos%k);<br>     if(my_room==0){my_room=k;}<br>     int pred=(pos-1)/k;<br>     if((pos-1)&gt;k){<br>     int inc=(pos-1)%k;<br>     if(inc&gt;=my_room){pred++;}<br>     }<br>     return pred;<br>  }<br>}<br></td>