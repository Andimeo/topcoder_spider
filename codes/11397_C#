            public class PerfectSequences<br>    {<br>        private System.Int64 CalcSum(int index, int[] items)<br>        {<br>            System.Int64 sum = 0;<br>            for (int i = 0; i &lt; items.Length; i++)<br>            {<br>                if (i == index)<br>                    continue;<br><br>                sum += items[i];<br>            }<br><br>            return sum;<br>        }<br><br>        private System.Int64 CalcMult(int index, int[] items)<br>        {<br>            System.Int64 mult = 1;<br>            for (int i = 0; i &lt; items.Length; i++)<br>            {<br>                if (i == index)<br>                    continue;<br><br>                mult *= items[i];<br>            }<br><br>            return mult;<br>        }<br><br>        public string fixIt(int[] items)<br>        {<br>            for (int i = 0; i &lt; items.Length; i++)<br>            {<br>                System.Int64 s = CalcSum(i, items);<br>                System.Int64 m = CalcMult(i, items);<br><br>                if (m == 1)<br>                {<br>                    if (items.Length == 1)<br>                        return "Yes";<br><br>                    continue;<br>                }<br><br>                System.Int64 v = s / (m - 1);<br>                if (v &gt;= 0 &amp;&amp; v + s == v * m &amp;&amp; v != items[i])<br>                    return "Yes";<br>            }<br><br>            return "No";<br>        }<br>    }<br></td>