            public class PerfectSequences {<br> <br>  public String fixIt(int[] seq) {<br>    int len = seq.length;<br>    if(len == 1) {<br>      return "Yes";<br>    }<br>    for(int i : seq) {<br>      if(i &lt; 0) {<br>        return "No";<br>      }<br>    }<br>    double sum = 0;<br>    double prod = 1;<br>    for(int i : seq) {<br>      sum += i;<br>      prod *= i;<br>    }<br>    if(Math.abs(sum - prod) &lt; 10e-7) {<br>      return "No";<br>    }<br> <br>    for(int i = 0; i &lt; len; i++) {<br>      sum = 0;<br>      prod = 1;<br>      for(int j = 0; j &lt; len; j++) {<br>        if(i == j) {<br>          continue;<br>        }<br>        sum += seq[j];<br>        prod *= seq[j];<br>      }<br>      if(sum / (prod - 1) &gt;= 0 &amp;&amp; sum % (prod - 1) == 0) {<br>        System.out.println(sum + ", " + prod + ", " + sum / (prod - 1));<br>        return "Yes";<br>      }<br>    }<br>    return "No";<br>  }<br> <br>}<br></td>