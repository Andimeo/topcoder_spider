            using System;<br>using System.Collections.Generic;<br>using System.Text;<br>   public  class SentenceCapitalizerInator<br>    {<br>       public String fixCaps(String paragraph) {<br>           string newPara = "";<br>           for (int i = 0; i &lt; paragraph.Length;i++ )<br>           {<br>               if (i == 0) {<br>                   newPara += Convert.ToChar(paragraph[i] - 'a'+'A' );                  <br>               }<br>               else if (paragraph[i] == '.' &amp;&amp; i &lt; paragraph.Length - 1) {<br>                   newPara += ". ";<br>                   newPara += Convert.ToChar(paragraph[i + 2] - 'a' + 'A');<br>                   i += 2;<br>               }<br>               else{<br>               newPara+=Convert.ToChar(paragraph[i]);<br>               }<br>               <br>           }<br>           return newPara;<br>       }<br><br>    }<br></td>