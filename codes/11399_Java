            public class SentenceCapitalizerInator<br>{<br>   public  String fixCaps(String paragraph)<br>    {<br>        int i=0;<br>        String s="";<br>        char ch[]=new char[paragraph.length()];<br>        ch=paragraph.toCharArray();<br>        while(ch[i]==' ')<br>            i++;<br>        ch[i]=(char)(ch[i]-32);<br>        i++;<br>        for(;i&lt;ch.length;i++)<br>        {<br>            if(ch[i]=='.')<br>            {<br>                if(i==ch.length-1)<br>                    break;<br>                i++;<br>                 while(ch[i]==' ')<br>                  i++;<br>                  ch[i]=(char)(ch[i]-32);<br>            }<br>        }<br><br>        s=new String(ch);<br>        return s;<br><br><br><br><br>    }<br><br>     <br>}<br></td>