            public class CubeAnts {<br><br> public int getMinimumSteps(int[] pos)<br>  {<br>   for (int i=0;i&lt;pos.Length;i++)if (pos[i] == 6) return 3;<br>   for (int i=0;i&lt;pos.Length;i++)if ((pos[i]==2)||(pos[i]==5)||(pos[i]==7)) return 2;<br>   for (int i=0;i&lt;pos.Length;i++)if ((pos[i]==1)||(pos[i]==3)||(pos[i]==4)) return 1;<br>   return 0;<br> }<br>}<br></td>