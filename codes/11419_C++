            #include &lt;cstdio&gt;<br>#include &lt;vector&gt;<br>using namespace std;<br><br>typedef pair&lt;int,int&gt; ii;<br><br>#define INF 2000000000<br><br>int move[] = {0,1,2,1,1,2,3,2};<br><br>class CubeAnts{<br>      public : int getMinimumSteps(vector &lt;int&gt; p){<br>             int min_move = -INF;<br>             for (int i=0; i&lt;p.size(); i++){<br>                 int x = p[i];<br>                 <br>                 if ( move[x] &gt; min_move ) min_move = move[x];    <br>             }       <br>             <br>             return min_move;<br>      }      <br>};<br></td>