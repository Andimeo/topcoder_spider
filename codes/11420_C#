            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class MuddyRoad {<br>    int len;<br>    double[] r;<br>    double[] p;<br>    bool[] used;<br>    public double getExpectedValue(int[] road)<br>    {<br>        len = road.Length;<br>        r = new double[len];<br>        p = new double[len];<br>        used = new bool[len];<br>        int i;<br>        for (i = 0; i &lt; len; i++) r[i] = road[i] / 100.0;<br>        return saiki(0);<br>    }<br><br>    double saiki(int a)<br>    {<br>        if (a &gt;= len - 2) return 0;<br>        if (used[a]) return p[a];<br>        used[a] = true;<br>        double res = 0;<br>        res += (1 - r[a + 1]) * saiki(a + 1);<br>        res += r[a + 1] * saiki(a + 2);<br>        res += r[a + 1] * r[a + 2];<br>        return p[a] = res;<br>    }<br><br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>