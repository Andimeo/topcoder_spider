            using System;<br>using System.Text;<br>using System.Collections.Generic;<br>using System.Diagnostics;<br><br>public class KindAndCruel {<br>    public int crossTheField(string field, int K, int C) {<br>        int n = field.Length;<br>        bool[,] can = new bool[n, (K + 1) * (C + 1) * (n + 1) + 1];<br>        can[0,0] = true;<br>        for (int t = 1; t &lt; K * C * n + 1; ++t)<br>        {<br>            for (int i = 0; i &lt; n; ++i)<br>            {<br>                can[i,t] = can[i,t - 1] || i &gt; 0 &amp;&amp; can[i - 1,t - 1] || i &lt; n - 1 &amp;&amp; can[i + 1,t - 1];<br>                if (field[i] == 'K' &amp;&amp; t % K == 0) can[i,t] = false;<br>                if (field[i] == 'C' &amp;&amp; t % C != 0) can[i,t] = false;<br>            }<br>            if (can[n - 1,t]) return t;<br>        }<br>        return -1;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>