            public class TheTicketsDivTwo<br>{<br>    private double prob;<br><br>    public double find(int n, int m, int k)<br>    {<br>        prob = 0;<br><br>        R(m, n, 1, k);<br><br>        return prob;<br>    }<br><br>    public void R(int loc, int n, double coeff, int Krem)<br>    {<br>        if (Krem == 0)<br>        {<br>            if (loc == 1)<br>                prob += coeff;<br><br>            return;<br>        }<br><br>        if (n == 1)<br>        {<br>            prob += coeff;<br>            return;<br>        }<br><br><br>        if (loc == 1)<br>        {<br>            prob += coeff / 6;<br>            <br>            // nothing for 1/3<br><br>            R(n, n, coeff / 2, Krem - 1);<br><br>        }<br>        else<br>        {<br>            R(loc - 1, n, coeff / 2, Krem -1);<br><br>            R(loc - 1, n-1, coeff / 3, Krem -1);<br><br>        }<br><br><br><br><br>    }<br>}<br></td>