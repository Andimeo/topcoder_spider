            #include &lt;cstdio&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;cassert&gt;<br>#include &lt;cstring&gt;<br>#include &lt;utility&gt;<br>#include &lt;queue&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;algorithm&gt;<br>using namespace std;<br><br>class DivideAndShift{<br>public:<br>    int gao(int s){<br>        int m=0;<br>        for(int i=2;i&lt;=2000;i++){<br>            if(s%i) continue;<br>            m++;<br>            s/=i--;<br>        }<br>        if(s!=1) m++;<br>        return m;<br>    }<br>    int getLeast(int n, int m){<br>        int ans=1000000000;<br>        ans=min(ans,min(m-1,n-m+1));<br>        for(int i=n-1;i&gt;=1;i--){<br>            if(n%i) continue;<br>            int l=(m-1)/i*i+1,r=l+i-1;<br>            ans=min(ans,gao(n/i)+min(m-l,r-m+1));<br>        }<br>        return ans;<br>    }<br>};<br></td>