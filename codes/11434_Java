            import java.util.*;<br> <br>public class DivideAndShift {<br>  public int getLeast(int N, int M) {<br>        --M;<br>        int res = Integer.MAX_VALUE;<br>        for (int last = 1; last &lt;= N; ++last) {<br>            if (N % last != 0) continue;<br>            int cur = numDivisors(N / last) + Math.min(M % last, last - M % last);<br>            res = Math.min(res, cur);<br>        }<br>    return res;<br>  }<br> <br>    private int numDivisors(int x) {<br>        int res = 0;<br>        for (int i = 2; i * i &lt;= x; ++i) {<br>            while (x % i == 0) {<br>                x /= i;<br>                ++res;<br>            }<br>        }<br>        if (x &gt; 1) ++res;<br>        return res;<br>    }<br> <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>