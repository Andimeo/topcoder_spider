            using System;<br> <br> <br>public class CandyShop<br>{<br>  public int countProbablePlaces(int[] X, int[] Y, int[] R)<br>  {<br>    int result = 0;<br>    for(int i=-300; i&lt;=300; i++) {<br>      for(int j=-300; j&lt;=300; j++) {<br>        result++;<br>        for(int t=0; t&lt;X.Length; t++) {<br>          if(Math.Abs(i - X[t]) + Math.Abs(j - Y[t]) &gt; R[t]) {<br>            result--;<br>            break;<br>          }<br>        }<br>      }<br>    }<br>    return result;<br>  }<br> <br> <br>}<br></td>