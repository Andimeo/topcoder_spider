            #include &lt;iostream&gt; <br>#include &lt;sstream&gt; <br>#include &lt;string&gt; <br>#include &lt;vector&gt; <br>#include &lt;deque&gt; <br>#include &lt;queue&gt; <br>#include &lt;set&gt; <br>#include &lt;map&gt; <br>#include &lt;algorithm&gt; <br>#include &lt;functional&gt; <br>#include &lt;utility&gt; <br>#include &lt;cmath&gt; <br>#include &lt;cstdlib&gt; <br>#include &lt;ctime&gt; <br><br>using namespace std;<br>int ABS(int a)<br>{<br>  if(a&lt;0)<br>  return -a;<br>  return a;<br>}<br>class CandyShop<br>{<br>        public:<br>        int countProbablePlaces(vector &lt;int&gt; X, vector &lt;int&gt; Y, vector &lt;int&gt; R)<br>        {<br>                int n=X.size();<br>                int mp[500][500];<br>                memset(mp,0,sizeof(mp));<br>                for(int i=0;i&lt;n;i++)<br>                {<br>          int sx=X[i]+200;<br>          int sy=Y[i]+200;<br>          for(int j=0;j&lt;500;j++)<br>            for(int k=0;k&lt;500;k++)<br>              if(ABS(j-sx)+ABS(k-sy)&lt;=R[i])<br>                mp[j][k]++;<br>        }<br>        int ans=0;<br>        for(int j=0;j&lt;500;j++)<br>          for(int k=0;k&lt;500;k++)<br>            if(mp[j][k]==n)<br>              ans++;<br>        return ans;<br>        }<br>  };<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>