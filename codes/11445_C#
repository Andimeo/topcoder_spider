            public class PalindromizationDiv2<br>    {<br>        public int getMinimumCost(int X)<br>        {<br>            int plus = X;<br>            int minus = X;<br>            while (!IsPA(plus) &amp;&amp; !IsPA(minus))<br>            {<br>                plus++;<br>                minus--;<br>            }<br><br>            int a = plus - X;<br>            int b = X - minus;<br><br>            return a &lt; b ? a : b;<br>        }<br><br>        private bool IsPA(int x)<br>        { <br>            string sX = x.ToString();<br>            string sX2 = "";<br>            for (int i = sX.Length - 1; i &gt;= 0; i--)<br>            {<br>                sX2 += sX[i];<br>            }<br>            if (sX == sX2)<br>            {<br>                return true;<br>            }<br><br>            return false;<br>        }<br>    }<br></td>