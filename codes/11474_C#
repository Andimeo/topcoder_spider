            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections.Generic;<br><br>public class ConvexSequence<br>{<br>  public long getMinimum(int[] a)<br>  {<br>        long res = 0;<br>      int oper = 0;<br>        while (true)<br>        {<br>            bool stop = true;<br>            for (int i = 1; i &lt; a.Length - 1; ++i)<br>            {<br>                if (a[i - 1] + a[i + 1] &lt; 2*a[i])<br>                {<br>                    int diff = a[i] - (a[i - 1] + a[i + 1])/2;<br>                    a[i] -= diff;<br>                    res += diff;<br>                    stop = false;<br>                    ++oper;<br>                }<br>            }<br>            if (stop)<br>                break;<br>        }<br>        <br>        return res;<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>