            Imports Microsoft.VisualBasic<br>Imports System<br>Imports System.Collections<br>Imports System.Collections.Generic<br>Imports System.Text<br>Imports System.Math<br>Imports Weight = System.Int32<br>Public Class ConvexSequence<br>    Public a(55) As Long<br>    Public N As Integer<br>    Public Temp(55) As Long<br>    Public Function TmpSolve(ByVal M As Integer) As Long<br>        Dim ax As Long = 0<br>        TmpSolve = 0<br>        Dim i As Integer, j As Integer<br>        For i = 0 To M - 1<br>            '[\u20986][\u26469][\u12427][\u12384][\u12369][\u22823][\u12365][\u12356]ax[\u12434][\u27714][\u12417][\u12427]<br>            Dim tax As Long = 9999999999999L<br>            For j = i To M - 1<br>                tax = Min(tax, Temp(j) \ (j - i + 1))<br>            Next<br> <br>            TmpSolve += Temp(i) - tax<br>            For j = i To M - 1<br>                Temp(j) -= tax<br>            Next<br>        Next<br>    End Function<br> <br>    Public Function Solve(ByVal s As Integer, ByVal e As Integer) As Long<br>        Solve = 0<br>        Dim i As Integer, j As Integer<br>        For i = s To e - 1<br>            Solve += a(i)<br>        Next<br>        For i = 0 To s - 1<br>            Temp(i) = a(i)<br>        Next<br>        Array.Reverse(Temp, 0, s)<br>        Solve += TmpSolve(s)<br> <br>        For i = e To N - 1<br>            Temp(i - e) = a(i)<br>        Next<br> <br>        Solve += TmpSolve(N - e)<br>    End Function<br>    Public Function getMinimum(ByVal a_ As Integer()) As Long<br> <br>        Dim i As Integer, j As Integer<br>        N = a_.Length<br>        If N &lt;= 2 Then Return 0<br>        For i = 0 To N - 1<br>            a(i) = a_(i)<br>        Next<br>        Dim MinVal As Long = Integer.MaxValue<br>        Dim s As Integer, e As Integer<br>        For i = 0 To N - 1<br>            MinVal = Min(MinVal, a(i))<br> <br>        Next<br> <br>        For i = 0 To N - 1<br>            a(i) -= MinVal<br>            If i Then Temp(i - 1) = a(i)<br>        Next<br>        getMinimum = Long.MaxValue<br>        For s = 0 To N - 1<br>            For e = s + 1 To N<br>                getMinimum = Min(getMinimum, Solve(s, e))<br>            Next<br>        Next<br>    End Function<br> <br>End Class<br></td>