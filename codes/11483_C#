            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br><br>public class GameOfLifeDivTwo {<br>    public string theSimulation(string init, int T) {<br>        string res = init;<br>        StringBuilder thenew = new StringBuilder(init);<br>        int x = 0;<br><br>        for (int t = 0; t &lt; T; t++)<br>        {<br>            for (int i = 0; i &lt; init.Length; i++)<br>            {<br>                x = 0;<br>                if (res[i] == '1')<br>                    x++;<br><br>                if (i &gt; 0 &amp;&amp; i &lt; init.Length - 1)<br>                {<br>                    if (res[i - 1] == '1')<br>                        x++;<br>                    if (res[i + 1] == '1')<br>                        x++;<br>                }<br><br>                if (i == 0)<br>                {<br>                    if (res[i + 1] == '1')<br>                        x++;<br>                    if (res[res.Length - 1] == '1')<br>                        x++;<br>                }<br><br>                if (i == init.Length - 1)<br>                {<br>                    if (res[i - 1] == '1')<br>                        x++;<br>                    if (res[0] == '1')<br>                        x++;<br>                }<br><br>                if (x &gt;= 2)<br>                    thenew[i] = '1';<br>                else<br>                    thenew[i] = '0';<br>            }<br>            res = thenew.ToString();<br>        }<br><br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>