            using System;<br>using System.Text;<br>using System.Collections.Generic;<br>using System.Diagnostics;<br><br>public class Zoo {<br>    public long theCount(int[] answers) {<br>        int c1 = 0, c2 = 0;<br>        Array.Sort(answers);<br>        foreach (int n in answers)<br>        {<br>            if (n == c1)<br>            {<br>                c1++;<br>                continue;<br>            }<br>            if (n == c2)<br>            {<br>                c2++;<br>                continue;<br>            }<br>            return 0;<br>        }<br><br>        long res = 1L &lt;&lt; (Math.Min(c1, c2));<br>        if (c1 != c2) res *= 2;<br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>