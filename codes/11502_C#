            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class YetAnotherIncredibleMachine<br>{<br>  public int countWays(int[] platformMount, int[] platformLength, int[] balls)<br>  {<br>    long ret = 1;<br>    for(int i = 0; i &lt; platformMount.Length; i++)<br>      {<br>        int left = platformMount[i] - platformLength[i];<br>        int right = platformMount[i] + platformLength[i];<br>        for(int j = 0; j &lt; balls.Length; j++)<br>    {<br>      if(balls[j] == platformMount[i]) return 0;<br>      if(balls[j] &lt; platformMount[i])<br>        left = Math.Max(left, balls[j] + 1);<br>      if(balls[j] &gt; platformMount[i])<br>        right = Math.Min(right, balls[j] - 1);<br>    }<br>        long over = right - left;<br>        if(over &lt; platformLength[i]) return 0;<br>        ret = (ret * (long)(over - platformLength[i] + 1)) % 1000000009;<br>      }<br>    return (int)ret;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>