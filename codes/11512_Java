            import java.math.*;<br>import java.util.*;<br>import static java.lang.Math.*;<br>import static java.math.BigInteger.*;<br>import static java.util.Arrays.*;<br>import static java.util.Collections.*;<br>public class Chimney {<br>    static String debug(Object... os){<br>  String res=null;<br>  return res;<br>    }<br>    public int countWays(long n) {<br>      long[][] mat= new long[9][9];<br>      mat[0][1]=1;<br>      mat[1][2]=mat[1][3]=2;<br>      mat[2][8]=1;<br>      mat[3][5]=1;mat[3][8]=2;<br>      mat[4][1]=2;mat[4][7]=2;<br>      mat[5][4]=1;<br>      mat[6][5]=1;<br>      mat[7][3]=mat[7][6]=1;<br>      mat[8][0]=4;mat[8][4]=1;<br>      mat = pow(mat,n*4);<br>      return  (int)mat[0][0];<br>    }<br> <br>  private long[][] pow(long[][] A,long n){<br>    if(n==1)return A;<br>    long[][] A2 = pow(A,n/2);<br>    if(n%2==0)return mul(A2,A2);<br>    return mul(A2,mul(A2,A));<br>  }<br>  int M = 1000000007;<br>  private long[][] mul(long[][] A,long[][] B){<br>    int n = A.length;<br>    long[][] C = new long[n][n];<br>    for(int i=0;i&lt;n;i++)for(int j=0;j&lt;n;j++)for(int k=0;k&lt;n;k++){<br>      C[i][j] += A[i][k] * B[k][j] % M;<br>      if(C[i][j] &gt;= M)C[i][j] -= M;<br>    }<br>    return C;<br>  }<br> <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>