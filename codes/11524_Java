            public class NetworkXZeroOne {<br> public String reconstruct(String message){<br>  String result = "";<br>  int len = message.length();<br>  if (len &lt; 2 || len &gt; 50)<br>   return "";<br>  if (!message.replace("o", "").replace("x", "").replace("?", "").equals(""))<br>   return "";<br>  <br>  int index_o = message.indexOf("o") + 1;<br>  int index_x = message.indexOf("x") + 1;<br>  if (index_o &gt;= 1){<br>   String tmp = "";<br>   if (index_o % 2 == 1)<br>    tmp = "ox";<br>   else<br>    tmp = "xo";<br>   <br>   for (int i = 1; i &lt;= len / 2; i++)<br>    result += tmp;<br>   <br>   if (len % 2 == 1){<br>    if (index_o % 2 == 1)<br>     result += "o";<br>    else<br>     result += "x";<br>   }<br>  }else if (index_x &gt;= 0 ){<br>   String tmp = "";<br>   if (index_x % 2 == 1)<br>    tmp = "xo";<br>   else<br>    tmp = "ox";<br>   <br>   for (int i = 1; i &lt;= len / 2; i++)<br>    result += tmp;<br>   <br>   if (len % 2 == 1){<br>    if (index_x % 2 == 1)<br>     result += "x";<br>    else<br>     result += "o";<br>   }<br>  }<br>  <br>  return result;<br> }<br>}<br></td>