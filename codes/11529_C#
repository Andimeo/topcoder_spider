            public class EllysDirectoryListing<br>    {<br>        public string[] getFiles(string[] files)<br>        {<br>            int sz = files.Length;<br>            int c = 0;<br>            while ((files[sz - 1] != "." &amp;&amp; files[sz - 2] != ".") || (files[sz - 1] != ".." &amp;&amp; files[sz - 2] != ".."))<br>            {<br>                int i = 0;<br>                while (files[i] != "." &amp;&amp; files[i] != "..")<br>                {<br>                    i++;<br>                }<br> <br>                int p = sz - 1;<br>                if (c % 2 == 1)<br>                {<br>                    p--;<br>                }<br>                string f = files[i];<br>                files[i] = files[p];<br>                files[p] = f;<br> <br>                c++;<br>            }<br> <br>            return files;<br>        }<br>    }<br></td>