            public class EllysDirectoryListing {<br> <br>    public String[] getFiles(String[] files) {<br>        int size = files.length;<br>        if ((files[size-1].equals(".") &amp;&amp; files[size-2].equals("..")) ||<br>            (files[size-1].equals("..") &amp;&amp; files[size-2].equals("."))) return files;<br>        for (int i=0;i&lt;size;i++) {<br>            if (files[i].equals(".")||files[i].equals("..")) {<br>                String tmp = files[size-1];files[size-1]=files[i];files[i]=tmp;<br>                break;<br>            }<br>        }<br>        if ((files[size-1].equals(".") &amp;&amp; files[size-2].equals("..")) ||<br>            (files[size-1].equals("..") &amp;&amp; files[size-2].equals("."))) return files;<br>        for (int i=0;i&lt;size-1;i++) {<br>            if (files[i].equals(".")||files[i].equals("..")) {<br>                String tmp = files[size-2];files[size-2]=files[i];files[i]=tmp;<br>                break;<br>            }<br>        }<br>        return files;<br>    }<br>}<br></td>