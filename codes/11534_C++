            #include&lt;string&gt;<br>#include&lt;algorithm&gt;<br>#include&lt;vector&gt;<br>#include&lt;set&gt;<br>#include&lt;map&gt;<br><br>  using namespace std;<br>class MonochromaticBoard<br>{<br>  public : int theMin(vector &lt;string&gt; a)<br>  {<br>     int i,j,s=0,y,r,n=0,t;<br>     for(i=0;i&lt;a.size();i++)<br>       for(j=0;j&lt;a[0].size();j++)<br>         if(a[i][j]=='B')s++;<br>      if(s==a.size()*a[0].size())<br>      {<br>        if(a.size()&gt;a[0].size())return a[0].size();<br>          else return a.size();<br>      }   <br>     s=0; <br>     for(i=0;i&lt;a.size();i++)<br>         if(a[i][0]=='B')<br>         {<br>           r=0;<br>           for(y=0;y&lt;a[0].size();y++)<br>             if(a[i][y]=='W'){r=1;break;}<br>           if(r==0)<br>           {s++;<br>           for(y=0;y&lt;a[0].size();y++)<br>             if(a[i][y]=='B'){a[i][y]='Q';}<br>           }<br>         }<br>     for(j=0;j&lt;a[0].size();j++)<br>     for(i=0;i&lt;a.size();i++)<br>         if(a[i][j]=='B')<br>         {<br>           r=0;<br>           for(y=0;y&lt;a.size();y++)<br>             if(a[y][j]=='W'){r=1;break;}<br>           if(r==0)<br>           {<br>           n=0;<br>           for(y=0;y&lt;a.size();y++)<br>             if(a[y][j]=='B' || a[y][j]=='Q')n++;<br>           t=0;  <br>           for(y=0;y&lt;a.size();y++)<br>             if(a[y][j]=='B')t++;<br>           if(t&gt;0)<br>           {s++;           for(y=0;y&lt;a.size();y++)<br>             if(a[y][j]=='B'){a[y][j]='Q';}<br>}<br>           }<br>         }<br>     return s;  <br>  }<br>};<br></td>