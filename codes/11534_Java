            import java.util.*;<br><br>public class MonochromaticBoard {<br>    public int theMin(String[] board) {<br>        int res = 0;<br>        boolean ok = false;<br>        int[] row = new int[board.length];<br>        int[] column = new int[board[0].length()];<br>        for (int i = 0 ; i &lt; board.length ; i++) {<br>            for (int j = 0 ; j &lt; board[i].length() ; j++) {<br>                if (board[i].charAt(j) == 'W') {<br>                    ok = true;<br>                } else {<br>                    row[i]++;<br>                    column[j]++;<br>                }<br>            }<br>        }<br>        if (!ok) return Math.min(board.length , board[0].length());<br>        for (int i = 0 ; i &lt; board.length ; i++)<br>            if (row[i] == board[0].length()) res++;<br>        for (int i = 0 ; i &lt; board[0].length() ; i++)<br>            if (column[i] == board.length) res++;<br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>