<td class="problemText" colspan="8" valign="middle" align="left">
            #include &lt;iostream&gt;<br><br>using namespace std;<br><br>class RedAndGreen<br>{<br>public:<br>int twoDiff(int A[],int B[],int n)<br>{<br>int i,ans=0;<br>for(i=0;i&lt;n;i++)<br>{<br>ans+=A[i]^B[i];<br>}<br>return ans;<br>}<br><br>int minPaints(string x)<br>{<br>int i,sol;<br>int inp[51];<br>int n=x.length();<br>for(i=0;i&lt;n;i++)<br>{<br>inp[i]=1;<br>if(x[i]=='R')<br>inp[i]=0;<br>}<br>int all[51];<br>fill(all,all+n,1);<br>int ans=twoDiff(all,inp,n);<br>for(i=0;i&lt;n;i++)<br>{<br>all[i]=0;<br>sol=twoDiff(all,inp,n);<br>if(sol&lt;ans)<br>ans=sol;<br>}<br>return ans;<br>}<br><br>};<br></td>