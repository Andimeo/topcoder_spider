            public class RedAndGreen {<br>public  int minPaints(String row) {<br>int len = row.length();<br>char[][] array = new char[len+1][len];<br>int j  = len;<br>int i,k,m;<br>for(i =0;i&lt;len+1;i++) {<br> for( k = 0 ;k &lt; j ;k++) {<br> array[i][k] = 'R';}<br> j--;<br>}<br>for( i=0;i&lt;len+1;i++) {<br>for(m=0;m&lt;len;m++) {<br>if(array[i][m] == 'R') continue;<br>else array[i][m] = 'G';<br>}<br>}<br><br>int ans = 52;<br>int counter = 0;<br>for(i=0;i&lt;len+1;i++) {<br> for(j=0;j&lt;len;j++) {<br> if(row.charAt(j) != array[i][j] ) counter++;<br> }<br> if(counter&lt;ans) ans = counter;<br> counter = 0;<br> }<br> return ans;<br> }<br> }<br></td>