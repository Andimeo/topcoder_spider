            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class FoxAndIntegers<br>{<br>    public int[] get(int AminusB, int BminusC, int AplusB, int BplusC)<br>    {<br>        for (int a = -100; a &lt; 100; a++)<br>        {<br>            for (int b = -100; b &lt; 100; b++)<br>            {<br>                for (int c = -100; c &lt; 100; c++)<br>                {<br>                    if (a - b == AminusB &amp;&amp; b - c == BminusC &amp;&amp;<br>                            a + b == AplusB &amp;&amp; b + c == BplusC)<br>                    {<br>                        return new int[] { a, b, c };<br>                    }<br>                }<br>            }<br>        }<br> <br>        return new int[] { };<br>    }<br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>