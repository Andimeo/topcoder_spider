            public class LongestSequence {<br>  public int maxLength(int[] C) {<br>        if (allPositive(C)) return -1;<br>        if (allNegative(C)) return -1;<br>        for (int res = 1;; ++res) {<br>            boolean[] reach = new boolean[res + 1];<br>            for (int x : C)<br>                if (x &gt; 0 &amp;&amp; x &lt; reach.length) mark(reach, C, x);<br>            if (reach[0]) return res - 1;<br>        }<br>  }<br> <br>    private void mark(boolean[] reach, int[] c, int x) {<br>        if (reach[x]) return;<br>        reach[x] = true;<br>        for (int y : c) {<br>            int z = x + y;<br>            if (z &gt;= 0 &amp;&amp; z &lt; reach.length)<br>                mark(reach, c, z);<br>        }<br>    }<br> <br>    private boolean allNegative(int[] c) {<br>        for (int x : c) if (x &gt; 0) return false;<br>        return true;<br>    }<br> <br>    private boolean allPositive(int[] c) {<br>        for (int x : c) if (x &lt; 0) return false;<br>        return true;<br>    }<br> <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>