            public class PointErasingTwo {<br> <br> boolean isPointInsideRectangle(int x0, int y0, int x1, int y1, int px, int py){<br>  return (x0 &lt; px &amp;&amp; px &lt; x1 &amp;&amp; ((y0 &lt; py &amp;&amp; py &lt; y1) || (y0 &gt; py &amp;&amp; py &gt; y1)));<br>}<br>  public int getMaximum(int[] y) { <br>  int i,j,k;<br>  int ctr=0;<br>  int ans = 0;<br>  int N = y.length;<br>  for(i=0;i&lt;N-2;i++) {<br>   for(j=i+2;j&lt;N;j++) {<br>    for(k=i+1;k&lt;j;k++) {  <br>      if(isPointInsideRectangle(i, y[i], j, y[j], k, y[k])) {<br>       ctr++;<br>      }<br>    }<br>    if(ctr &gt; ans ) ans = ctr;<br>    ctr = 0;<br>   }<br>  }<br>  return ans;<br> }<br>}<br></td>