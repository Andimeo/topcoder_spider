            class MagicCandy<br>{<br>    public :<br>    int whichOne(int n)<br>    {<br>        int i , j = 1 , x = 1 , k = 1;<br>        for (i = 1 ; 1 ; ++i)<br>        {<br>            if (k + j - 1 &gt;= n) break;<br>            x += i;<br>            k += j;<br>            if (k + j - 1 &gt;= n) break;<br>            x += i;<br>            k += j;<br>            ++j;<br>        }<br>        return x;<br>    }<br>};<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>