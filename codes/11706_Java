            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class MagicCandy<br>{<br>  public int whichOne(int n)<br>  {<br>    Set&lt;Integer&gt; square = new HashSet&lt;Integer&gt;();<br>    int ret = n;<br>    for(int i = 1; i * i &lt;= 1000000000; i++)<br>      square.add(i*i);<br>    while(n &gt; 0)    {<br>      if(square.contains(n))<br>        ret--;<br>      n -= (int)Math.sqrt(n);<br>    }<br>    return ret+1;<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.8 (beta) modified by pivanof!<br></td>