            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections.Generic;<br><br>public class MinCostPalindrome<br>{<br>  public int getMinimum(string s, int oCost, int xCost)<br>  {<br>    int res = 0;<br>    for (int i = 0; i &lt; (s.Length / 2); i++)<br>    {<br>      if (s[i] == '?' || s[s.Length - i - 1] == '?')<br>      {<br>        if (s[i] == s[s.Length - i - 1])<br>        {<br>          res += Math.Min(xCost, oCost) * 2;<br>        }<br>        else<br>        {<br>          if (s[i] == 'o' || s[s.Length - i - 1] == 'o')<br>          {<br>            res += oCost;<br>          }<br>          else<br>          {<br>            res += xCost;<br>          }<br>        }<br>      }<br>      else if (s[i] != s[s.Length - i - 1])<br>      {<br>        res = -1;<br>        break;<br>      }<br>    }<br>    return res;<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>