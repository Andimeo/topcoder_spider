            public class MinCostPalindrome {<br> <br>  public static int getMinimum(String s, int oCost, int xCost) {<br>    int cost = 0;<br>    for (int i=0; i&lt;s.length()/2; i++) {<br>      if (s.charAt(i) == '?' || s.charAt(s.length()-i - 1) == '?') {<br>        if (s.charAt(i) == '?' &amp;&amp; s.charAt(s.length()-i - 1) != '?') {<br>          cost += (s.charAt(s.length()-i - 1) == 'o')?oCost:xCost;<br>        } else if (s.charAt(i) != '?' &amp;&amp; s.charAt(s.length()-i - 1) == '?') {<br>          cost += (s.charAt(i) == 'o')?oCost:xCost;<br>        } else {<br>          cost += ((oCost&lt;xCost)?oCost:xCost) * 2; <br>        }<br>        <br>        <br>      } else if (s.charAt(i) != s.charAt(s.length()-i - 1))<br>        return -1;<br>    }<br>    return cost;<br>  }<br>  <br>}<br></td>