            Public Class MinCostPalindrome<br>    Public Function getMinimum(ByVal s As String, ByVal oCost As Integer, ByVal xCost As Integer) As Integer<br>        Dim res As Integer = 0<br>        For i As Integer = 0 To (s.Length / 2) - 1<br>            If s(i) = "?" Then<br>                If s(s.Length - i - 1) = "x" Then<br>                    res += xCost<br>                ElseIf s(s.Length - i - 1) = "o" Then<br>                    res += oCost<br>                Else<br>                    res += 2 * Math.Min(oCost, xCost)<br>                End If<br>            ElseIf s(s.Length - i - 1) = "?" Then<br>                If s(i) = "x" Then<br>                    res += xCost<br>                Else<br>                    res += oCost<br>                End If<br>            Else<br>                If s(i) &lt;&gt; s(s.Length - i - 1) Then Return -1<br>            End If<br>        Next<br><br>        Return res<br>    End Function<br>End Class<br></td>