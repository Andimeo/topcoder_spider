            using System;<br>using System.Collections;<br>public class Com<br>{<br>  public double x;<br>  public double y;<br>  public Com(double a,double b)<br>  {<br>    x=a;y=b;<br>  }<br>}<br>public class Mandelbrot<br>{<br>  public int iterations(int max, double a, double b)<br>  {<br>    Com c = new Com(a,b);<br>    for(int i =0;i&lt;=max;i++)<br>    {<br>      Com temp = Calc(i,c);<br>      if(Math.Sqrt(temp.x*temp.x+temp.y*temp.y)&gt;2)<br>        return i;<br>    }<br>    return -1;<br>  }<br>  public Com Calc(int n,Com c)<br>  {<br>    if(n ==0)<br>      return c;<br>    Com temp = Calc(n-1,c);<br>    return new Com(temp.x*temp.x-temp.y*temp.y+c.x,2*temp.x*temp.y+c.y);<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>