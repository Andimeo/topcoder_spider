            #line 2 "Mandelbrot.cpp"<br>#include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;ctype.h&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br> <br>using namespace std;<br> <br>class Mandelbrot {<br>  public:<br>  int iterations(int max, double a, double b) {<br>        int i = 0;<br>        double cr, ci;<br>        cr = a; ci = b;<br>        while( hypot( a, b ) &lt; 2 &amp;&amp; i &lt;= max ) {<br>            double zr, zi; <br>            zr = a * a - b * b + cr;<br>            zi = 2 * a * b + ci;<br>            a = zr;<br>            b = zi;<br>            ++i;<br>        }<br>        if( i == max + 1 ) return -1;<br>        return i;<br>        <br>  }<br> <br>  <br> <br> <br>};<br> <br> <br> <br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>