            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br> <br>        public class LeftOrRight<br>        {<br>            public int reach(string moves)<br>            {<br>                int max = 0;<br>                int ret = 0;<br>                foreach (char move in moves)<br>                {<br>                    if (move == 'L')<br>                    {<br>                        ret++;<br>                        max = Math.Max(Math.Abs(ret), max);<br>                    }<br>                    else<br>                    {<br>                        ret--;<br>                        max = Math.Max(Math.Abs(ret), max);<br>                    }<br> <br>                }<br>                return max;<br>            }<br>            public int maxDistance(string program)<br>            {<br>                string left = program.Replace('?', 'L');<br>                string right = program.Replace('?', 'R');<br>                return Math.Max(reach(left), reach(right));<br>            }<br>        }<br></td>