            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br>using namespace std;<br><br>class LeftOrRight<br>{<br>      public:<br>             int maxDistance(string s)<br>             {<br>                 int i,r = 0, l = 0,lmax = 0;<br>                 string a;<br>                 a = s;<br>                 for (i = 0; i &lt; a.size(); i++) {<br>                     if (a[i] == '?') {<br>                         a[i] = 'R';<br>                     }<br>                 }<br>                 int rmax = 0;<br>                 for (i = 0; i &lt; a.size(); i++) {<br>                     if (a[i] == 'R') {<br>                         r++;<br>                     } else {<br>                         r--;<br>                     }<br>                     rmax = max(rmax, r);<br>                 }a="";<br>                  a = s;<br>                  for (i = 0; i &lt; a.size(); i++) {<br>                     if (a[i] == '?') {<br>                         a[i] = 'L';<br>                     }<br>                 }<br>                 cout&lt;&lt;a&lt;&lt;endl;<br>                 for (i = 0; i &lt; a.size(); i++) {<br>                     if (a[i] == 'L') {<br>                         l++;<br>                     } else {<br>                         l--;<br>                     }<br>                     lmax = max(lmax, l);<br>                 }<br><br>                 return max(rmax, lmax);<br>             }<br>};<br></td>