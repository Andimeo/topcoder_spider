            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class LeftOrRight<br>{<br>  public int maxDistance(String program)<br>  {<br>    int n = program.length();<br>    int pos = 0, d = 0;<br>    int ans = 0;<br>    for(int i=0;i&lt;n;i++)<br>      {<br>      if (program.charAt(i)=='L')<br>        pos++;<br>      if (program.charAt(i)=='R')<br>        pos--;<br>      if (program.charAt(i)=='?')<br>        d++;<br>        ans = Math.max(ans,Math.abs(pos)+d);<br>      }<br>      return ans;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>