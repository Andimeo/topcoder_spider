            Imports System.Collections<br>Imports System.Collections.Generic<br>Imports System.Text<br><br><br>'easy<br>Public Class LeftOrRight<br>    Public Function maxDistance(ByVal program As String) As Integer<br>        Dim max_l As Integer = 0<br>        Dim max_r As Integer = 0<br>        Dim l As Integer = 0<br>        Dim r As Integer = 0<br><br>        For i As Integer = 0 To program.Length - 1<br><br>            Dim s As String = Mid(program, i + 1, 1)<br>            If s = "L" Then<br>                l -= 1<br>                r -= 1<br>            ElseIf s = "R" Then<br>                l += 1<br>                r += 1<br>            ElseIf s = "?" Then<br>                l -= 1<br>                r += 1<br>            End If<br>            If l &lt; max_l Then<br>                max_l = l<br>            End If<br>            If r &gt; max_r Then<br>                max_r = r<br>            End If<br><br>        Next<br><br>        Return System.Math.Max(max_l * -1, max_r)<br>    End Function<br>End Class<br></td>