            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br><br>public class PairingPawns<br>{<br>    public int savedPawnCount(int[] start)<br>    {<br>        int res;<br><br>        for (int i = start.Length - 1; i &gt; 0; i--)<br>        {<br>            start[i - 1] += start[i] / 2;<br>        }<br><br>        res = start[0];<br><br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>