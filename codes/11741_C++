<td class="problemText" colspan="8" valign="middle" align="left">
            #include&lt;iostream&gt;<br>#include&lt;vector&gt;<br>#include&lt;cstring&gt;<br>#include&lt;algorithm&gt;<br>#include&lt;string&gt;<br>#include&lt;cmath&gt;<br>#include&lt;math.h&gt;<br>using namespace std;<br>  <br>class PairingPawns { <br>        public: <br>        int savedPawnCount(vector &lt;int&gt; a)  { <br>           int n=a.size();<br>           int i;<br>           for(i=n-1;i&gt;=1;i--){<br>           a[i-1]+=a[i]/2;<br>           }<br>           if(a[0]&lt;=0)<br>           return 0;<br>           else<br>           return a[0];<br>            } <br>        };<br></td>