            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class PairingPawns<br>{<br>  public int savedPawnCount(int[] start)<br>  {<br>    for (int i=start.length-1; i&gt;0; i--) {<br>      while (start[i] &gt; 1) {<br>        start[i] -= 2;<br>        start[i-1] += 1;<br>      }<br>    }<br>    return start[0];<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>