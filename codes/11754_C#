            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class DengklekMakingChains {<br>    public int maxBeauty(string[] chains)<br>    {<br>        int ret = 0;<br>        foreach (string s in chains)<br>        {<br>            int now = 0;<br>            foreach (char c in s)<br>            {<br>                if (c == '.')<br>                {<br>                    now = 0;<br>                }<br>                else<br>                {<br>                    now += getpoint(c);<br>                    ret = Math.Max(now, ret);<br>                }<br>            }<br>        }<br>        int all = 0;<br>        int[] point = new int[chains.Length];<br>        int count = 0;<br>        foreach (string s in chains)<br>        {<br>            int now = 0;<br>            if (s[0] != '.' &amp;&amp; s[1] != '.' &amp;&amp; s[2] != '.')<br>            {<br>                foreach (char c in s)<br>                {<br>                    now += getpoint(c);<br>                }<br>            }<br>            point[count] = now;<br>            all += now;<br>            count++;<br>        }<br>        int i, j, k;<br>        for (i = 0; i &lt; chains.Length; i++)<br>        {<br>            for (j = 0; j &lt; chains.Length; j++)<br>            {<br>                if (i == j) continue;<br>                int now = all;<br>                if (point[i] == 0)<br>                {<br>                    for (k = 0; k &lt; 3; k++)<br>                    {<br>                        if (chains[i][k] == '.') break;<br>                        now += getpoint(chains[i][k]);                        <br>                    }<br>                }<br>                if (point[j] == 0)<br>                {<br>                    for (k = 3 - 1; k &gt;= 0; k--)<br>                    {<br>                        if (chains[j][k] == '.') break;<br>                        now += getpoint(chains[j][k]);      <br>                    }<br>                }<br>                ret = Math.Max(ret, now);<br>            }<br>        }<br><br>        return ret;<br>    }<br>    int getpoint(char c)<br>    {<br>        return c - '0';<br>    }<br><br>    <br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>