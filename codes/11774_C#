            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class NoRepeatPlaylist {<br>    public int numPlaylists(int N, int M, int P)<br>    {<br>        long[] dp = new long[N + 2];<br>        long mod = 1000000007;<br>        dp[0] = 1;<br>        for (int i = 0; i &lt; P; i++)<br>        {<br>            long[] nextdp = new long[N + 2];<br>            for (int j = 0; j &lt; N + 1; j++)<br>            {<br>                nextdp[j] = (nextdp[j] + dp[j] * Math.Max(j - Math.Min(M, i), 0)) % mod;<br>                nextdp[j + 1] = (nextdp[j + 1] + dp[j] * (N - j)) % mod;<br>            }<br>            dp = (long[])nextdp.Clone();<br>        }<br>        return (int)dp[N];<br>    }<br><br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>