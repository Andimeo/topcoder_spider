            import java.util.*;<br>public class NoRepeatPlaylist {<br>  final int modulo = 1000000007;<br>    public int numPlaylists(int N, int M, int P) {<br>        long[][] dp = new long[P+1][N+1];<br>        dp[0][0] = 1;<br>        for ( int i = 1; i &lt;= P; i ++ )<br>          for ( int j = 1; j &lt;= N; j ++ ){<br>            if ( j &gt; M )<br>              dp[i][j] = ( dp[i][j] + dp[i-1][j] * ( j - M ) ) % modulo;<br>            dp[i][j] = ( dp[i][j] + dp[i-1][j-1] * ( N - j + 1 ) ) % modulo;<br>          }<br>        long ret = dp[P][N];<br>        <br>        return ( int )ret;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>