            Imports System.Collections.Generic<br>Imports System.Array<br> <br>Public Class NoRepeatPlaylist<br>    Private Const MODULO As Long = 1000000007 ' check if it is 1000000009<br>    Public Function numPlaylists(ByVal N As Integer, ByVal M As Integer, ByVal P As Integer) As Integer<br>        Dim dp(P, N) As Long ' dp(i, j) := sublist of i songs with distinct j songs.<br>        dp(0, 0) = 1<br>        For i As Integer = 1 To P<br>            For j As Integer = 1 To Math.Min(i, N) ' j &lt;= i by definition.<br>                dp(i, j) = ((N - j + 1) * dp(i - 1, j - 1) + Math.Max((j - M), 0) * dp(i - 1, j)) Mod MODULO<br>            Next<br>        Next<br>        Return CInt(dp(P, N) Mod MODULO)<br>    End Function<br>    ' be careful. overflow!<br>End Class<br></td>