            #include&lt;iostream&gt;<br>#include&lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;string&gt;<br><br>using namespace std;<br>class PikachuEasy<br>{     <br>      public:<br>             string check(string s)<br>         {<br>                   int i, res = 0;<br>             string a, b;<br>             for (i = 0; i &lt; s.size(); i++) {<br>               a = s.substr(i,2);<br>               b = s.substr(i,3);<br>               if ((a == "pi") || (a == "ka")) {<br>                i++;<br>                     }<br>             else if (b == "chu") {<br>              i = i + 2;<br>             } else {<br>             res = 1;<br>             break;<br>                    }<br>         }<br>               if (res == 1) {<br>          return "NO";<br>        }<br>         if (res == 0) {<br>                       return "YES";<br>          }<br>      }<br>};<br></td>