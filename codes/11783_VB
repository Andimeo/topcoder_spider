            Public Class PikachuEasy<br>        Public Function check(word As String) As String<br>            Do While Len(word) &gt; 0<br>              if Len(word) = 1 then return "NO"<br>              if Left(word,2) = "pi" then <br>                word = Right(word, len(word)-2)<br>                Continue Do<br>              end if<br>              if Left(word,2) = "ka" then <br>                word = Right(word, len(word)-2)<br>                Continue Do<br>              end if<br>              if Len(word) &lt; 3 then return "NO"<br>              if Left(word,3) = "chu" then <br>                word = Right(word, len(word)-3)<br>                Continue Do<br>              end if<br>              return "NO"<br>            Loop<br>            <br>            Return "YES"<br>        End Function<br>    End Class<br></td>