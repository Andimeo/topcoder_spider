            public class CasketOfStarEasy {<br>  <br>  public static int maxEnergy(int[] weight) {<br>    if (weight.length == 3) {<br>      return weight[0] * weight[2];<br>    }<br>    int max = 0;<br>    for (int i=1; i&lt;weight.length-1; i++) {<br>      int[] newW = new int[weight.length-1];<br>      int c = 0;<br>      for (int j=0; j&lt;weight.length; j++) {<br>        if (i!=j) {<br>          newW[c] = weight[j];<br>          c++;<br>        }<br>      }<br>      int temp = weight[i-1] * weight[i+1] + maxEnergy(newW);<br>      if (temp &gt; max)<br>        max = temp;<br>    }<br>    return max;<br>  }<br>  <br>}<br></td>