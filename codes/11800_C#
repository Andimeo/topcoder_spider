            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class BinaryPolynomialDivTwo<br>{<br>  public int countRoots(int[] a)<br>  {<br>    int n = a.Length;<br>                long sum1 = 0, sum2 = 0;<br>                <br>                for (int i = 0; i &lt; n; i++ )<br>                {<br>                    sum1 += a[i]*(int) Math.Pow(0, i);<br> <br>                    sum2 += a[i]*(int) Math.Pow(1, i);<br>                }<br>                sum1 %= 2;<br>                sum2 %= 2;<br> <br>                switch (sum1 + sum2)<br>                {<br>                    case 0:<br>                        return 2;<br>                    case 1:<br>                        return 1;<br>                    case 2:<br>                        return 0;<br>                }<br>                return 0;<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>