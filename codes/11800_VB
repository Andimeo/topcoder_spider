            Public Class BinaryPolynomialDivTwo<br>        Public Function countRoots(a As Integer()) As Integer<br>            Dim i As Integer, res As Long, x0 as integer, x1 as integer<br>            <br>            For i = 0 to a.length()-1<br>              if i = 0 then<br>                x0 = x0 + a(0)<br>                x1 = x1 + a(0)<br>              else<br>                'x0 = x0 + a(i) * <br>                x1 = x1 + a(i)<br>              end if                <br>            next<br>            <br>            if x0 mod 2 = 0 then res = res +1<br>            if x1 mod 2 = 0 then res = res +1<br>            Return res<br>        End Function<br>    End Class<br></td>