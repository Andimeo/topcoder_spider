            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class ImportantSequence<br>{<br>  public int getCount(int[] b, String operators)<br>  {<br>    int n = b.length;<br>    int[] a = new int[n];<br>    long add = 0, sign = 1;<br>    long min = 1;<br>    long max = Long.MAX_VALUE;<br>    for (int i = 0; i &lt; n; ++i) {<br>      if (operators.charAt(i) == '-') {<br>        add -= b[i];<br>      } else {<br>        add = b[i] - add;<br>        sign = -sign;<br>      }<br>      if (sign == 1) {<br>        min = Math.max(min, 1 - add);<br>      } else {<br>        max = Math.min(max, add - 1);<br>      }<br>    }<br>    return max == Long.MAX_VALUE ? -1 : min &lt;= max ? (int)(max - min + 1) : 0;<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>