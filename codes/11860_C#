            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class FoxAndDoraemon<br>{<br>  public int minTime(int[] workCost, int splitCost)<br>  {<br>    List&lt;int&gt; list = new List&lt;int&gt;(workCost);<br>    while (list.Count != 1)<br>    {<br>      list.Sort();<br>      list.Add(list[1] + splitCost);<br>      list.RemoveAt(0);<br>      list.RemoveAt(0);<br>    }<br>    return list[0];<br>  <br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>