            import java.util.*;<br><br>public class FoxAndDoraemon {<br><br>  public int minTime(int[] workCost, int splitCost) {<br>    List&lt;Integer&gt; times = new ArrayList&lt;Integer&gt;();<br>    for (int i : workCost) {<br>      times.add(i);<br>    }<br>    <br>    while (times.size() &gt; 1) {<br>      Collections.sort(times);<br>      int t1 = times.get(0);<br>      int t2 = times.get(1);<br>      times.remove(1);<br>      times.remove(0);<br>      times.add(Math.max(t1, t2)+ splitCost);<br>    }<br>    return times.get(0);<br>  }<br><br>}<br></td>