            public class EllysLamps<br>    {<br>        public int getMin(string lamps)<br>        {<br>            int cnt = 0;<br>            for (int i = 0; i &lt; lamps.Length - 1; ++i)<br>            {<br>                if (lamps.Substring(i, 2) == "YN" || lamps.Substring(i, 2) == "NY")<br>                {<br>                    cnt++;<br>                    ++i;<br>                }<br>                else if (i &lt; lamps.Length - 2 &amp;&amp; lamps.Substring(i, 3) == "YYY")<br>                {<br>                    cnt++;<br>                    i += 2;<br>                }<br>            }<br>            return cnt;<br>        }<br>    }<br></td>