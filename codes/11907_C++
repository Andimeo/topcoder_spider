            //in the name of ALLAH <br>#include&lt;iostream&gt;<br>#include&lt;string&gt;<br>#include&lt;cstring&gt;<br>#include&lt;cmath&gt;<br>#include&lt;algorithm&gt;<br>#include&lt;vector&gt;<br>#include&lt;set&gt;<br>#include&lt;map&gt;<br>#include&lt;stack&gt;<br>#include&lt;queue&gt;<br>using namespace std;<br><br>class EllysTSP<br>{<br>  public: int getMax(string places)<br>  {<br>    int V,C;<br>    V=C=0;<br>    for(int i=0;i&lt;places.length();i++)<br>    {<br>      if(places[i]=='V') V++; else C++;<br>    }<br>    if(C==V) return V+C;<br>    else return 2*min(V,C)+1;<br>  }<br>};<br><br>//AmzMohammad<br></td>