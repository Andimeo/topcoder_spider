            public class EllysTSP {<br> <br>  public int getMax(String places) {<br> <br>    if(places.length()&gt;1){<br>      int v=0, c=0;<br>      for(int i=0; i&lt;places.length(); i++)<br>        if(places.charAt(i)=='V') <br>          v++;<br>        else<br>          c++;<br>      if(c==v){<br>        return c+v;<br>      }else<br>        if(c&gt;v){<br>          if(2*v+1&lt;=places.length())<br>            return 2*v+1;<br>          else<br>            return 2*v;<br>        }else{<br>          if(2*c+1&lt;=places.length())<br>            return 2*c+1;<br>          else<br>            return 2*c;        <br>        }          <br>    }<br>    return 1;<br>  }<br> <br>}<br></td>