            /**<br> * Built using CHelper plug-in<br> * Actual solution is at the top<br> * @author Egor Kulikov (egor@egork.net)<br> */<br>public class PatrolRoute {<br>  private static final long MOD = 1000000007;<br><br>  public int countRoutes(int X, int Y, int minT, int maxT) {<br>    long[] countX = go(X);<br>    long[] countY = go(Y);<br>    long answer = 0;<br>    for (int i = 0; i &lt; X; i++) {<br>      for (int j = 0; j &lt; Y; j++) {<br>        int time = 2 * (i + j);<br>        if (time &gt;= minT &amp;&amp; time &lt;= maxT)<br>          answer += countX[i] * countY[j] % MOD;<br>      }<br>    }<br>    answer *= 6;<br>    return (int) (answer % MOD);<br>  }<br><br>  private long[] go(int upTo) {<br>    long[] result = new long[upTo];<br>    for (int i = 0; i &lt; upTo; i++) {<br>      for (int j = i + 2; j &lt; upTo; j++)<br>        result[j - i] += j - i - 1;<br>    }<br>    return result;<br>  }<br><br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by moj 4.15 [modified TZTester]<br>// Powered by CodeProcessor<br></td>