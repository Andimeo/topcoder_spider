            #include &lt;iostream&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;limits&gt;<br>#include &lt;string&gt;<br>#include &lt;sstream&gt;<br>#include &lt;vector&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;numeric&gt;<br>#include &lt;cmath&gt;<br>#include &lt;stack&gt;<br>using namespace std;<br> <br>#define forl(i, s, t) for(__typeof(s) i = s; i != t; i++)<br> <br>class BoardSplitting {<br>public:<br>  int minimumCuts(int desiredLength, int desiredCount, int actualLength) {<br>    int cuts = 0;<br>    int rem = actualLength;<br>    <br>    while(desiredCount--) {<br>      while(rem &lt; desiredLength) {<br>        rem += actualLength;<br>      }<br>      rem -= desiredLength;<br>      if(rem) cuts++;<br>    }<br>    <br>    return cuts;<br>  }<br>};<br></td>