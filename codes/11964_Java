            public class BallAndHats {<br> <br>  public int getHat(String hats, int numSwaps) {<br>    if(numSwaps==0)<br>      return hats.indexOf('o');<br>    else<br>      if(numSwaps==1){<br>        int pos=hats.indexOf('o');<br>        switch(pos){<br>        case 0: return 1;<br>        case 1: return 0;<br>        case 2: return 1;<br>        }<br>      }else{<br>        int[] counts=new int[3];<br>        int pos=hats.indexOf('o');<br>        counts[pos]++;<br>        int likely=0;<br>        boolean edge=(pos==1 ? false : true);<br>        for(int i=0; i&lt;numSwaps; i++){<br>          if(edge){<br>            likely=1;<br>            edge=false;<br>          }else{<br>            likely=0;<br>            edge=true;<br>          }<br>        }<br>        return likely;<br>      }<br>    return 0;<br>  }  <br> <br>}<br></td>