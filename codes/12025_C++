            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br> <br>using namespace std;<br> <br>class StrIIRec {<br>public:<br>  string recovstr(int, int, string);<br>};<br> <br>string StrIIRec::recovstr(int n, int minInv, string minStr) {<br>  int i, was[255], c, j, x, y;<br>  memset(was,0,sizeof(was));<br>  string st = "", w;<br>  for (i=0;i&lt;n;i++) {<br>    for (c=0;c&lt;n;c++) {<br>      if (was[c]) continue;<br>      w = st+(char)(c+97);<br>      for (j=n-1;j&gt;=0;j--)<br>        if (!was[j] &amp;&amp; j != c) w += (char)(j+97);<br>      if (w &lt; minStr) continue;<br>      j = 0;<br>      for (x=0;x&lt;n;x++)<br>        for (y=x+1;y&lt;n;y++)<br>          if (w[x] &gt; w[y]) j++;<br>      if (j &lt; minInv) continue;<br>      st += (char)(c+97);<br>      was[c] = 1;<br>      break;<br>    }<br>    if (st == "") break;<br>  }<br>  return st;<br>}<br> <br> <br>//Powered by [KawigiEdit] 2.0!<br></td>