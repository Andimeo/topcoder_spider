            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class StrIIRec<br>{<br>  public String recovstr(int n, int minInv, String minStr)<br>  {<br>    String results = "";<br>    boolean[] added = new boolean[n];<br>    Arrays.fill(added, false);<br>    for (int length = 0; length &lt; n; ++length)<br>      for (int i = 0; i &lt; n; ++i)<br>        if (!added[i])<br>        {<br>          String test = results + (char)('a' + i);<br>          for (int j = n - 1; j &gt;= 0; --j)<br>            if (i != j &amp;&amp; !added[j])<br>              test += (char)('a' + j);<br>          if (test.compareTo(minStr) &gt;= 0)<br>          {<br>            int inv = 0;<br>            for (int a = 0; a &lt; n; ++a)<br>              for (int b = a + 1; b &lt; n; ++b)<br>                if (test.charAt(a) &gt; test.charAt(b))<br>                  ++inv;<br>            if (inv &gt;= minInv)<br>            {<br>              added[i] = true;<br>              results += (char)('a' + i);<br>              break;<br>            }<br>          }<br>        }<br>    return results;<br>  }<br>}<br></td>