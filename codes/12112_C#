            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class LittleElephantAndBooks<br>{<br>  public int getNumber(int[] pages, int number)<br>  {<br>    Array.Sort(pages);<br>    int sum=0;<br>    for(int i=0;i&lt;number;i++)<br>    {<br>      if(i==number-1)<br>      sum+=pages[i+1];else sum+=pages[i];<br>    }return sum;<br>    <br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>