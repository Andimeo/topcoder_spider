            #include&lt;iostream&gt;<br>#include&lt;vector&gt;<br>#include&lt;algorithm&gt;<br>using namespace std;<br><br><br>class LittleElephantAndBooks<br>{<br>public:<br>    int getNumber(vector &lt;int&gt; pages, int number)<br>    {<br>        sort(pages.begin(),pages.end());<br>        int count=0;<br>        int i;<br>        for(i=0;i&lt;number-1;i++)<br>        {<br>            count+=pages[i];<br>        }<br>        count+= pages[number];<br>        return count;<br><br>    }<br>};<br></td>