            using System;<br>using System.Threading.Tasks;<br>using System.Linq;  <br><br> public class LittleElephantAndDouble<br>    {<br>       public string getAnswer(int[] A)<br>        {<br>           int max = A.Max();<br>           for(int i=0; i&lt;A.Length; ++i)<br>           {<br>               if ( A[i] == max )<br>                   continue;<br><br>               while ( A[i] &lt; max)<br>                   A[i] *=2;<br><br>               if (A[i] != max )<br>                   return "NO";<br>           }<br><br>           return "YES";<br>        }<br>    }<br></td>