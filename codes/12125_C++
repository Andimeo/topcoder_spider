            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br><br>using namespace std;<br><br>class EasyConversionMachine<br>{<br>        public:<br>        string isItPossible(string originalWord, string finalWord, int k)<br>        {<br>                int i;<br>                int c=0;<br>                for (i = 0;i&lt;originalWord.size();i++){<br>                        if(originalWord[i] != finalWord[i]){<br>                                c++;<br>                        }<br>                }<br>                if(c&gt;k)return "IMPOSSIBLE";<br>                if(k == c || (k-c)%2==0){<br>                        return ("POSSIBLE");<br>                } else {<br>                        return ("IMPOSSIBLE");<br>                }<br>        }<br>};<br></td>