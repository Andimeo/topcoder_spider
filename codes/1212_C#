            using System;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class ShipBoxes {<br>    long cost(long a, long b, long c) {<br>  long x1 = 4 * a * b + 2 * b * c + 2 * a * c;<br>  long x2 = 2 * a * b + 4 * b * c + 2 * a * c;<br>  long x3 = 2 * a * b + 2 * b * c + 4 * a * c;<br>  return Math.Min(x1, Math.Min(x2, x3));<br>    }<br><br>    public int bestCost(int[] box1, int[] box2) {<br>  int[][] p = new int[6][];<br>  p[0] = new int[]{0, 1, 2};<br>  p[1] = new int[]{0, 2, 1};<br>  p[2] = new int[]{1, 0, 2};<br>  p[3] = new int[]{1, 2, 0};<br>  p[4] = new int[]{2, 0, 1};<br>  p[5] = new int[]{2, 1, 0};<br>  long res = long.MaxValue;<br>  for (int i1 = 0; i1 &lt; 6; ++i1)<br>      for (int i2 = 0; i2 &lt; 6; ++i2) {<br>    int[] p1 = p[i1];<br>    int[] p2 = p[i2];<br>    long a = box1[p1[0]] + box2[p2[0]];<br>    long b = Math.Max(box1[p1[1]], box2[p2[1]]);<br>    long c = Math.Max(box1[p1[2]], box2[p2[2]]);<br>    long cur = cost(a, b, c);<br>    if (cur &lt; res)<br>        res = cur;<br>      }<br>  return (int) res;<br>    }<br>}<br><br><br>// Powered by FileEdit<br></td>