            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class ColorfulBricks<br>{<br>  public int countLayouts(string bricks)<br>  {<br>    int[] colors = new int[26];<br>    foreach (char c in bricks) colors[c - 'A']++;<br>    int d = 0;<br>    for (int i = 0; i &lt; 26; i++) <br>      if (colors[i] != 0) d++;<br>    int ans = 0;<br>    if (d == 1) ans = 1;<br>    if (d == 2) ans = 2;<br>    return ans;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>