            import java.util.HashMap;<br>import java.util.Map;<br> <br>public class ColorfulBricks {<br> <br>  public int countLayouts(String bricks) {<br>    Map&lt;Character,Integer&gt; cols=new HashMap&lt;Character,Integer&gt;();<br>    for(int i=0; i&lt;bricks.length(); i++)<br>      if(cols.get(bricks.charAt(i))==null)<br>        cols.put(bricks.charAt(i),1);<br>      else<br>        cols.put(bricks.charAt(i),cols.get(bricks.charAt(i))+1);<br>    <br>    if(cols.keySet().size()&gt;2)      <br>      return 0;<br>    else<br>    if(cols.keySet().size()==2)<br>      return 2;<br>    else<br>      return 1;<br>  }<br> <br>}<br></td>