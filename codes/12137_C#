            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class ColorfulChocolates {<br>    public int maximumSpread(string chocolates, int maxSwaps)<br>    {<br>        int ret = 0;<br>        for (int i = 0; i &lt; 26; i++)<br>        {<br>            char c = (char)('A' + i);<br>            List&lt;int&gt; l = new List&lt;int&gt;();<br>            for (int j = 0; j &lt; chocolates.Length; j++)<br>      {<br>                if (chocolates[j] == c) l.Add(j);<br>      }<br>            int[] ar = l.ToArray();<br>            for (int j = 0; j &lt; ar.Length; j++)<br>            {<br>                for (int k = j; k &lt; ar.Length; k++)<br>                {<br>                    int center = (j + k) / 2;<br>                    int sum = 0;<br>                    for (int m = j; m &lt;= k; m++)<br>                    {<br>                        sum += Math.Abs(Math.Abs(ar[m] - ar[center]) - Math.Abs(m - center));<br>                    }<br><br>                    if (sum &lt;= maxSwaps) ret = Math.Max(ret, k - j + 1);<br>                }<br>            }<br>        }<br>        return ret;<br>    }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>