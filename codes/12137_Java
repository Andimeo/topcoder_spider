            import java.util.*;<br>import static java.lang.Math.*;<br>import static java.util.Arrays.*;<br> <br>public class ColorfulChocolates {<br>  <br>  public int maximumSpread(String chocolates, int maxSwaps) {<br>    char[] cs = chocolates.toCharArray();<br>    int n = cs.length;<br>    int res = 0;<br>    for (int s = 0; s &lt; n; s++) {<br>      for (int t = s + 1; t &lt;= n; t++) {<br>        for (int p = 0; p &lt; n; p++) {<br>          int k = s, tmp = 0;<br>          for (int i = p; i &lt; n &amp;&amp; k &lt; t; i++) if (cs[i] == cs[p]) {<br>            tmp += abs(k - i);<br>            k++;<br>          }<br>          if (k &gt;= t &amp;&amp; tmp &lt;= maxSwaps) {<br>            res = max(res, t - s);<br>          }<br>        }<br>      }<br>    }<br>    debug(res);<br>    return res;<br>  }<br>  <br>  void debug(Object...os) {<br>    System.err.println(deepToString(os));<br>  }<br>  <br>}<br></td>