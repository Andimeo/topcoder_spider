            Imports Microsoft.VisualBasic<br>Imports System<br>Imports System.Collections<br>Imports System.Text<br>Imports System.Collections.Generic<br>Imports System.Math<br> <br>Public Class ColorfulChocolates<br>    Public chocolates As New List(Of Integer)<br> <br>    Public Function GetValue(ByVal x As Integer) As Integer<br>        If x &lt; 0 Or chocolates.Count &lt;= x Then<br>            Return -1<br>        End If<br>        Return chocolates(x)<br>    End Function<br>    Public Function maximumSpread(ByVal _chocolates As String, ByVal maxSwaps As Integer) As Integer<br>        Dim i As Integer, j As Integer, k As Integer<br>        For i = 0 To _chocolates.Length - 1<br>            chocolates.Add(Asc(_chocolates(i)) - Asc("A"c))<br>        Next<br>        Dim N As Integer = chocolates.Count<br>        maximumSpread = 0<br>        For i = 0 To N<br>            ' [\u25407][\u20837][\u20301][\u32622]<br>            For j = 0 To 25<br>                Dim Cnt As Integer = 0, Swaps As Integer = 0<br>                Dim Sum1 As Integer = 0, Sum2 As Integer = 0<br>                Dim res As New List(Of Integer)<br>                '[\u12354][\u12431][\u12379][\u12427][\u12418][\u12398]<br>                For k = 0 To N<br>                    If GetValue(i + k) = j Then<br>                        res.Add(Sum1)<br>                    Else<br>                        Sum1 += 1<br>                    End If<br>                    If GetValue(i - k - 1) = j Then<br>                        res.Add(Sum2)<br>                    Else<br>                        Sum2 += 1<br>                    End If<br>                Next<br>                res.Sort()<br>                For Each t As Integer In res<br>                    If Swaps + t &gt; maxSwaps Then<br>                        Exit For<br>                    End If<br>                    Swaps += t<br>                    Cnt += 1<br>                Next<br>                maximumSpread = Max(maximumSpread, Cnt)<br>    