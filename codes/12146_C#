            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class FoxPaintingBalls<br>{<br>  public long theMax(long R, long G, long B, int N)<br>  {<br>        if (N == 1)<br>            return R + G + B;<br>        long NN = N * (long)(N + 1) / 6;<br>        long res = Math.Min(Math.Min(R, G), B) / NN;<br>    if (N % 3 != 1)<br>            return res;<br>        return Math.Min(res, (R + G + B) / ((NN * 3) + 1));<br>  }<br>   <br>}<br>//Powered by KawigiEdit 2.1.8 (beta) modified by pivanof!<br></td>