            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class FoxPaintingBalls<br>{<br>  public long theMax(long R, long G, long B, int N)<br>  {<br>    if(N == 1)  {<br>      return R + G + B;<br>    }<br>    boolean three = (N%3==0 || (N+1)%3==0);<br>    if(three)  {<br>      long num = tri(N);<br>      num /= 3;<br>      return Math.min(R/num, Math.min(G/num, B/num));<br>    }<br>    else  {<br>      long num = tri(N);<br>      num /= 3;<br>      long min = 0;<br>      long max = Math.min(R/num, Math.min(G/num, B/num));<br>      while(min != max)  {<br>        long mid = (min+max)/2;<br>        if(min == mid)<br>          mid++;<br>        if(num * mid &gt; R || num * mid &gt; G || num * mid &gt; B)  {<br>          max = mid-1;<br>          continue;<br>        }<br>        long additional = R + G + B - 3*num*mid;<br>        if(additional &gt;= mid)<br>          min = mid;<br>        else<br>          max = mid-1;<br>      }<br>      return min;<br>    }<br>  }<br>  <br>  public long tri(int n)  {<br>    long ret = n;<br>    ret *= n+1;<br>    ret /= 2;<br>    return ret;<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.8 (beta) modified by pivanof!<br></td>