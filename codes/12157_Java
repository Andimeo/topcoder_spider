            import java.util.*;<br><br>public class BallRemoval {<br>    public String canLeave(String label) {<br>      char[] c = label.toCharArray();<br>      int n = label.length();<br>      boolean[][] can = new boolean[n + 1][n + 1];<br>      for (int i = 0; i &lt;= n; i++) {<br>        can[i][i] = true;<br>      }<br>      for (int l = 2; l &lt;= n; l += 2) {<br>        for (int i = 0; i &lt; n; i++) {<br>          int j = i + l;<br>          if (j &gt; n) {<br>            break;<br>          }<br>          for (int k = i + 1; k &lt; j; k++) {<br>            if (can[i + 1][k] &amp;&amp; can[k + 1][j] &amp;&amp; ((i &gt; 0 &amp;&amp; c[i] == '&gt;') || (k &lt; n - 1 &amp;&amp; c[k] == '&lt;'))) {<br>              can[i][j] = true;<br>            }<br>          }<br>        }<br>      } <br>      String res = "";<br>      for (int i = 0; i &lt; n; i++) {<br>        if (can[0][i] &amp;&amp; can[i + 1][n]) {<br>          res += 'o';<br>        } else {<br>          res += '.';<br>        }<br>      }<br>      return res;<br>    }<br>}<br><br><br>// Powered by FileEdit<br></td>