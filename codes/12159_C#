            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class TheBrickTowerEasyDivOne {<br>    public int find(int redCount, int redHeight, int blueCount, int blueHeight)<br>    {<br>        if (redHeight == blueHeight)<br>        {<br>            if (redCount == blueCount) return redCount * 2;<br>            else return Math.Min(redCount, blueCount) * 2 + 1;<br>        }<br>        else<br>        {<br>            if (redCount == blueCount) return redCount * 3;<br>            else return Math.Min(redCount, blueCount) * 3 + 1;<br>        }<br>    }<br><br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>