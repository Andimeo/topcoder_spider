            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class TheBrickTowerEasyDivOne<br>{<br>  public int find(int redCount, int redHeight, int blueCount, int blueHeight)<br>  {<br>    if (redHeight == blueHeight) {<br>      return 2 * Math.min(redCount, blueCount) + (redCount != blueCount ? 1 : 0);<br>    }<br>    int ce = Math.min(redCount, blueCount);<br>    <br>    return ce + (ce + (redCount &gt; ce ? 1 : 0)) + (ce + (blueCount &gt; ce ? 1 : 0));<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>