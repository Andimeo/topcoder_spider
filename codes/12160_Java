            import java.util.HashMap;<br>public class TheBrickTowerEasyDivTwo{<br>    HashMap&lt;Integer, Integer&gt; hmap = new HashMap&lt;Integer, Integer&gt;();<br>    void findHelper(int lr,  int rh, int lb, int bh, int ch, boolean isLastRed) {<br>      if(ch!=0)hmap.put(ch, 1);<br>        if(isLastRed &amp;&amp; lb&gt;0) {<br>            findHelper(lr,  rh,  lb-1, bh, ch+bh, false);<br>            }<br>        if(!isLastRed &amp;&amp; lr &gt;0) {<br>            findHelper(lr-1,  rh,  lb, bh, ch+rh, true);<br>        }<br>    }<br> public   int find(int redCount, int redHeight, int blueCount, int blueHeight) {<br>        hmap = new HashMap&lt;Integer, Integer&gt;();<br>        findHelper(redCount, redHeight, blueCount, blueHeight, 0, true);<br>        findHelper(redCount, redHeight, blueCount, blueHeight, 0, false);<br>        return hmap.size();<br>    }<br>}<br></td>