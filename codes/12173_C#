            using System;<br>using System.Collections.Generic;<br><br>class LeftRightDigitsGame<br>{<br>  public string minNumber(string digits)<br>  {<br>    int minInd = digits.Length - 1;<br>    for (int i = digits.Length - 2; i &gt;= 0; i--)<br>    {<br>      if (isSmaller(digits[i], digits[minInd]))<br>        minInd = i;<br>    }<br>    return digits[minInd] + minNumberNF(digits.Substring(0, minInd)) + digits.Substring(minInd + 1);<br>  }<br>  <br>  public string minNumberNF(string digits)<br>  {<br>    if (digits.Length == 0)<br>      return digits;<br>    int minInd = digits.Length - 1;<br>    for (int i = digits.Length - 2; i &gt;= 0; i--)<br>    {<br>      if (digits[i] &lt; digits[minInd])<br>        minInd = i;<br>    }<br>    return digits[minInd] + minNumberNF(digits.Substring(0, minInd)) + digits.Substring(minInd + 1);<br>  }<br>  <br>  bool isSmaller(char c1, char c2)<br>  {<br>    if (c2 == '0')<br>      return true;<br>    if (c1 == '0')<br>      return false;<br>    return c1 &lt; c2;<br>  }<br>}<br></td>