            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class ChocolateBar<br>{<br>        public int maxLength(string letters)<br>        {<br>            int max = 0;<br>            string t = "";<br>            for(int i = 0; i &lt; letters.Length; i++)<br>                for (int j = 1; (i + j -1) &lt; letters.Length; j++)<br>                {<br>                    t = letters.Substring(i, j);<br>                    if (clear(t))<br>                        max = Math.Max(max, j);<br>                }<br>            return max;<br>        }<br>        public bool clear(string str)<br>        {<br>            bool[] ch = new bool[30];<br>            for (int i = 0; i &lt; str.Length; i++)<br>                if (ch[str[i] - 'a'])<br>                    return false;<br>                else<br>                    ch[str[i] - 'a'] = true;<br> <br>            return true;<br>        }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.8 (beta) modified by pivanof!<br></td>