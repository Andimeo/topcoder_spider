<td class="problemText" colspan="8" valign="middle" align="left">
            public class ChocolateBar {<br>  <br>  public int maxLength(String letters){<br>    int[] chars = new int[26];<br>    int currentLen=1;<br>    int maxLen = 0;<br>    int prev_index = 0;<br>    <br>    for(int i=0; i &lt; chars.length; i++){<br>      chars[i] = -1;<br>    }<br> <br>    chars[letters.charAt(0)-'a'] = 0;<br>    for(int i=1; i &lt; letters.length(); i++){<br>      prev_index = chars[letters.charAt(i)-'a'];      <br>      if(prev_index==-1 || i-prev_index &gt; currentLen){<br>        currentLen++;<br>      }else{<br>        if(currentLen &gt; maxLen){<br>          maxLen = currentLen;<br>        }<br>        currentLen = i - prev_index;<br>      }<br>      chars[letters.charAt(i)-'a'] = i;<br>    }<br>    if(currentLen &gt; maxLen){<br>      maxLen = currentLen;        <br>    }<br>    return maxLen;    <br>  }<br>}<br></td>