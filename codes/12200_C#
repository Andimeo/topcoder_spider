            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class BlockTower<br>{<br>  public int getTallest(int[] h)<br>  {<br>    int n = h.Length;<br>    int max = 0;<br>    for (int i = 0; i &lt;= n; i++)<br>    {<br>      int l = 0;<br>      for (int j = 0;j &lt; i;j++)<br>        if (h[j] % 2 == 0) l += h[j];<br>      for (int j = i;j &lt; n;j++)<br>        if (h[j] % 2 == 1) l += h[j];<br>        <br>      max = Math.Max(max, l);<br>    }<br>    return max;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>