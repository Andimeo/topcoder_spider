            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class HyperKnight<br>{<br>    bool test(long x,long y,long numRows,long numCols)<br>    {<br>        if (x&lt;0)<br>        {<br>            return false;<br>        }<br>        if (y&lt;0)<br>        {<br>            return false;<br>        }<br>        if (x&gt;=numRows)<br>        {<br>            return false;<br>        }<br>        if (y&gt;=numCols)<br>        {<br>            return false;<br>        }<br>        return true;<br>    }<br>  public long countCells(int a, int b, int numRows, int numColumns, int k)<br>  {<br>      if (a&gt;b)<br>      {<br>          int temp = a;<br>          a = b;<br>          b = temp;<br>      }<br>        long[] x = new long[6];<br>        long[] y = new long[6];<br>        x[0] = 0;<br>      y[0] = 0;<br>        x[1] = a;<br>        x[2] = b;<br>        x[3] = numRows - b;<br>        x[4] = numRows - a;<br>        x[5] = numRows;<br>        y[1] = a;<br>        y[2] = b;<br>        y[3] = numColumns - b;<br>        y[4] = numColumns - a;<br>        y[5] = numColumns;<br>      long ret = 0;<br>        for (int i = 0; i &lt; 5; i++)<br>      {<br>          for (int j = 0; j &lt; 5; j++)<br>          {<br>              int cnt = 0;<br>                if (test(x[i] - a, y[j] - b, numRows, numColumns))<br>                {<br>                    ++cnt;<br>                }<br>                if (test(x[i] - a, y[j] + b, numRows, numColumns))<br>                {<br>                    ++cnt;<br>                }<br>                if (test(x[i] + a, y[j] - b, numRows, numColumns))<br>                {<br>                    ++cnt;<br>                }<br>                if (test(x[i] + a, y[j] + b, numRows, numColumns))<br>                {<br>                    ++cnt;<br>                }<br>                if (test(x[i] - b, y[j] - a, numRows, numColumns))<br>                {<br>                    ++cnt;<br>                }<br>                if (test(x[i] - b, y[j] + a, numRows, numColumns))<br>                {<br>                    ++cnt;<br>                }<br>                if (test(x[i] + b, y[j] - a, numRows, numColumns))<br>                {<br>                    ++cnt;<br>                }<br>                if (test(x[i] + b, y[j] + a, numRows, numColumns))<br>                {<br>                    ++cnt;<br>                }<br>              if (cnt==k)<br>              {<br>                  ret = ret + (x[i + 1] - x[i])*(y[j + 1] - y[j]);<br>              }<br> <br>          }<br>      }<br>      return ret;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.8 (beta) modified by pivanof!<br></td>