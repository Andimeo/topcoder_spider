            #include &lt;algorithm&gt;<br>#include &lt;bitset&gt;<br>#include &lt;cassert&gt;<br>#include &lt;cctype&gt;<br>#include &lt;climits&gt;<br>#include &lt;cmath&gt;<br>#include &lt;complex&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstring&gt;<br>#include &lt;ctime&gt;<br>#include &lt;deque&gt;<br>#include &lt;functional&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iterator&gt;<br>#include &lt;limits&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;numeric&gt;<br>#include &lt;queue&gt;<br>#include &lt;set&gt;<br>#include &lt;sstream&gt;<br>#include &lt;stack&gt;<br>#include &lt;string&gt;<br>#include &lt;utility&gt;<br>#include &lt;vector&gt;<br>using namespace std;<br>typedef vector&lt;int&gt; VI;<br>typedef vector&lt;string&gt; VS;<br>typedef pair&lt;int,int&gt; PI;<br>typedef vector&lt;PI&gt; VPI;<br>typedef unsigned long long ull;<br>typedef long long ll;<br>//typedef vector&lt;int&gt;::const_iterator IT;<br>#define FOR(i, n) for(typeof(n) i=0;i&lt;(n);++i)<br>#define REP(i,s,n) for(typeof(n) i=s;i&lt;=n;++i)<br>#define ZMAX(a,b) (((a)&gt;(b))?(a):(b))<br>#define ZMIN(a,b) (((a)&lt;(b))?(a):(b))<br>#define ZABS(a) ((a&gt;=0)?(a):(-(a)))<br>#define SZ(x) ((int)(x).size())<br>#define LOOP(i,x) FOR(i,SZ(x))<br>#define IT(it,x) FOR(typeof((x).begin()) it = (x).begin();it!=(x).end();++it)<br>#define ALL(x) (x).begin(), (x).end()<br>#define ST first<br>#define ND second<br>#define MP make_pair<br>#define PB push_back<br>#define MX max_element<br>#define MN min_element<br>using namespace std;<br>  class SurroundingGameEasy<br>{<br>public:<br>int score(vector &lt;string&gt; c, vector &lt;string&gt; b, vector &lt;string&gt; s)<br>{<br>int ret=0,cost=0,ben=0;<br>int n=SZ(s[0]);<br>string temp(n+2,'o');<br>VS v;<br>v.PB(temp);<br>FOR(i,SZ(s))<br>{<br><br>    stringstream ss;<br>    ss&lt;&lt;"o"&lt;&lt;s[i]&lt;&lt;"o";<br>    v.PB(ss.str());<br>}<br>v.PB(temp);<br><br><br>FOR(i,SZ(s))<br>    FOR(j,SZ(s[i]))<br>        if(s[i][j]=='o')<br>            cost+=c[i][j]-'0';<br><br><br>REP(i,1,SZ(v)-2)<br>{<br>    REP(j,1,SZ(v[0])-2)<br>    {<br>        if(v[i][j]=='o' || (v[i][j-1]=='o' &amp;&amp; v[i][j+1]=='o'  &amp;&amp; v[i-1][j]=='o' &amp;&amp; v[i+1][j]=='o'))<br>            ben+=b[i-1][j-1]-'0';<br>    }<br>}<br><br>ret=ben-cost;<br><br><br>return ret;<br>}<br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by moj 4.15 [modified TZTester]<br>// Powered by CodeProcessor<br></td>