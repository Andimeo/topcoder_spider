            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class SurroundingGameEasy<br>{<br>  public int score(String[] cost, String[] benefit, String[] stone)<br>  {<br>  int  ans = 0;<br>  int n = cost.length;<br>  int m = cost[0].length();<br>  for(int i=0;i&lt;n;i++)<br>  for(int j=0;j&lt;m;j++)<br>  {<br>  boolean dom = (stone[i].charAt(j)=='o');<br>  if (dom)<br>    ans-=cost[i].charAt(j)-'0';<br>    <br>  boolean dom2=true;<br>  dom2 &amp;= ((i==0)||((stone[i-1].charAt(j)=='o')));<br>  dom2 &amp;= ((i==n-1)||((stone[i+1].charAt(j)=='o')));<br>  dom2 &amp;= ((j==0)||((stone[i].charAt(j-1)=='o')));<br>  dom2 &amp;= ((j==m-1)||((stone[i].charAt(j+1)=='o')));<br>  <br>  if (dom||dom2)<br>     ans+=benefit[i].charAt(j)-'0';<br>  <br>  }<br>  return ans;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>