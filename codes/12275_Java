            import java.util.Arrays;<br> <br>/**<br> * Built using CHelper plug-in<br> * Actual solution is at the top<br> * @author rais.fathin38<br> */<br>public class ValueHistogram {<br>  public String[] build(int[] values) {<br>        int n = values.length;<br>        int freq[] = new int[10];<br>        Arrays.fill(freq, 0);<br>        int max = -1;<br>        for(int i = 0; i &lt; n; i++) ++freq[values[i]];<br>        for(int i = 0; i &lt; 10; i++) max = Math.max(max, freq[i]);<br>        String ret[] = new String[max+1];<br>        String tmp = "";<br>        for(int i = 0; i &lt; 10; i++) tmp += "."; ret[0] = tmp;<br>        for(int i = max; i &gt;= 1; i--) {<br>            tmp = "";<br>            for(int j = 0; j &lt; 10; j++)<br>                if(freq[j] &gt;= i) tmp += "X";<br>                else tmp += ".";<br>            ret[max-i+1] = tmp;<br>        }<br>        return ret;<br>  }<br>}<br></td>