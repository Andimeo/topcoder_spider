            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br><br>using namespace std;<br>class TypingDistance<br>{<br>public:<br>  int minDistance(string keyboard, string word){<br>    int dis=0,x,y;<br>    <br>    for(int i =0;i&lt;word.size()-1;i++){<br>      x=0;<br>      y=0;<br>      if(word[i+1]!='\0'){<br>        <br>        while(keyboard[x]!=word[i]){<br>          x++;<br>        }<br>        while(keyboard[y]!=word[i+1]){<br>          y++;<br>        }<br>        <br>        if ( x &gt; y)<br>        dis=dis+(x-y);<br>        else<br>          dis=dis+(y-x);<br>      }<br>    }<br>    return dis;<br>  }<br>};<br></td>