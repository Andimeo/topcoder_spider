            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class PastingPaintingDivOne<br>{<br>  public long[] countColors(String[] cb, int T)<br>  {<br>    long[] ans = new long[3];<br>    String cols = "RGB";<br>    for (int i = 0; i &lt; cb.length; ++i) {<br>      for (int j = 0; j &lt; cb[0].length(); ++j) {<br>        if (cb[i].charAt(j) != '.') {<br>          int t = 1;<br>          while (t &lt; T &amp;&amp; i - t &gt;= 0 &amp;&amp; j - t &gt;= 0 &amp;&amp; cb[i - t].charAt(j - t) == '.') {<br>            ++t;<br>          }<br>          if (i - t &lt; 0 || j - t &lt; 0) {<br>            t = T;<br>          }<br>          ans[cols.indexOf(cb[i].charAt(j))] += t;<br>        }<br>      }<br>    }<br>    return ans;<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.8 (beta) modified by pivanof!<br></td>