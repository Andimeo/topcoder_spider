            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class PastingPaintingDivTwo<br>{<br>  public long countColors(string[] clipboard, int T)<br>    {<br>        int diff = 0, i, j, k;<br>        long result = 0;<br>        char[,] canvas;<br>        canvas = new char[101,101];<br> <br>        for (i = 0; i &lt; 101; i++)<br>        {<br>            for (j = 0; j &lt; 101; j++)<br>                canvas[i, j] = '.';<br>        }<br> <br>        for (k = 0; k &lt; Math.Min(clipboard.Length, T); k++)<br>        {<br>            diff = 0;<br>            for (i = 0; i &lt; clipboard.Length; i++)<br>            {<br>                for (j = 0; j &lt; clipboard[i].Length; j++)<br>                {<br>                    if (canvas[i + k, j + k] == '.' &amp;&amp; clipboard[i][j] == 'B')<br>                    {<br>                        canvas[i + k, j + k] = 'B';<br>                        result++;<br>                        diff++;<br>                    }<br>                }<br>            }<br>        }<br> <br>        if (T &lt; clipboard.Length)<br>            return result;<br>        else<br>            return result + (long)(T - clipboard.Length) * (long)diff;<br>    }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>