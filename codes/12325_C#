            using System;<br>public class FauxPalindromes<br>{<br>  public string classifyIt(string word)<br>  {<br>    if(ispal(word))<br>      return "PALINDROME";<br>    string t = ""+word[0];<br>    <br>    for(int i=1;i&lt;word.Length;i++)<br>    {<br>      if(word[i]!=t[t.Length-1])<br>        t = t+word[i];<br>    }<br>    if(ispal(t))<br>      return "FAUX";<br>    return "NOT EVEN FAUX";<br>  }<br>  public bool ispal(string s)<br>  {<br>    char[] charArray = s.ToCharArray();<br>      Array.Reverse( charArray );<br> <br>    return s.Equals(new string(charArray));<br>  }<br>}<br></td>