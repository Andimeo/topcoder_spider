            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class FoxAndHandle<br>{<br>  public string lexSmallestName( string S )<br>  {<br>    int n = S.Length;<br>    int[] cnt = new int[26];<br>    for ( int i = 0; i &lt; n; ++i ) cnt[S[i] - 'a']++;<br>    for ( int i = 0; i &lt; 26; ++i ) cnt[i] /= 2;<br>    int p = 0;<br>    string res = "";<br>    for ( int z = 0; z &lt; n / 2; ++z )<br>    {<br>      for ( int i = 0; i &lt; 26; ++i )<br>        if ( cnt[i] &gt; 0 )<br>        {<br>          --cnt[i];<br>          bool ok = true;<br>          int j = p;<br>          while ( j &lt; n &amp;&amp; S[j] != 'a' + i ) ++j;<br>          if ( j &lt; n )<br>          {<br>            int[] tmp = new int[26];<br>            for ( int k = j + 1; k &lt; n; ++k ) tmp[S[k] - 'a']++;<br>            for ( int k = 0; k &lt; 26; ++k )<br>              if ( tmp[k] &lt; cnt[k] )<br>              {<br>                ok = false;<br>                break;<br>              }<br>          }<br>          else ok = false;<br><br>          if ( ok )<br>          {<br>            p = j + 1;<br>            res += (char)( 'a' + i );<br>            break;<br>          }<br>          else<br>          {<br>            ++cnt[i];<br>          }<br>        }<br>    }<br>    return res;<br>  }<br><br>}<br><br><br> <br>// Powered by moj 4.16 [modified TZTester]<br>// Powered by CleanSharp 1.0<br>// Powered by CodeProcessor<br></td>