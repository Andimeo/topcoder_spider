            /**<br> * Built using CHelper plug-in<br> * Actual solution is at the top<br> */<br>public class PenguinSledding {<br>  public long countDesigns(int numCheckpoints, int[] checkpoint1, int[] checkpoint2) {<br>        long res = 1;<br>        for (int root = 1; root &lt;= numCheckpoints; ++root) {<br>            int deg = 0;<br>            for (int i = 0; i &lt; checkpoint1.length; ++i)<br>                if (checkpoint1[i] == root) ++deg;<br>            for (int i = 0; i &lt; checkpoint2.length; ++i)<br>                if (checkpoint2[i] == root) ++deg;<br>            if (deg == 0) continue;<br>            res += (1L &lt;&lt; deg) - 1;<br>        }<br>        res -= checkpoint1.length;<br>        boolean[][] g = new boolean[numCheckpoints][numCheckpoints];<br>        for (int i = 0; i &lt; checkpoint1.length; ++i) {<br>            g[checkpoint1[i] - 1][checkpoint2[i] - 1] = true;<br>            g[checkpoint2[i] - 1][checkpoint1[i] - 1] = true;<br>        }<br>        for (int a = 0; a &lt; numCheckpoints; ++a)<br>            for (int b = a + 1; b &lt; numCheckpoints; ++b)<br>                for (int c = b + 1; c &lt; numCheckpoints; ++c)<br>                    if (g[a][b] &amp;&amp; g[b][c] &amp;&amp; g[a][c])<br>                        ++res;<br>        return res;<br>  }<br>}<br></td>