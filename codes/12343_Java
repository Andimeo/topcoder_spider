            /**<br> * Built using CHelper plug-in<br> * Actual solution is at the top<br> * @author rais.fathin38<br> */<br>public class AlternateColors {<br>  public String getColor(long r, long g, long b, long k) {<br>        long min = Math.min(r, Math.min(g, b));<br>        if(k &lt;= min*3L) {<br>            k %= 3;<br>            if(k == 1) return "RED";<br>            else if(k == 2) return "GREEN";<br>            else return "BLUE";<br>        } else {<br>            k -= 3L*min;<br>            r -= min;<br>            g -= min;<br>            b -= min;<br>            if(r == 0 &amp;&amp; g == 0) {<br>                return "BLUE";<br>            } else if(r == 0 &amp;&amp; b == 0) {<br>                return "GREEN";<br>            } else if(g == 0 &amp;&amp; b == 0) {<br>                return "RED";<br>            } else if(r == 0) {<br>                long min2 = Math.min(g, b);<br>                if(k &lt;= min2*2L) {<br>                    k %= 2;<br>                    if(k == 1) return "GREEN";<br>                    else return "BLUE";<br>                } else if(g == min2) {<br>                    return "BLUE";<br>                } else {<br>                    return "GREEN";<br>                }<br>            } else if(g == 0) {<br>                long min2 = Math.min(r, b);<br>                if(k &lt;= min2*2L) {<br>                    k %= 2;<br>                    if(k == 1) return "RED";<br>                    else return "BLUE";<br>                } else if(r == min2) {<br>                    return "BLUE";<br>                } else {<br>                    return "RED";<br>                }<br>            } else if(b == 0) {<br>                long min2 = Math.min(r, g);<br>                if(k &lt;= min2*2L) {<br>                    k %= 2;<br>                    if(k == 1) return "RED";<br>                    else return "GREEN";<br>                } else if(r == min2) {<br>                    return "GREEN";<br>                } else {<br>                    return "RED";<br>                }<br>            }<br>        }<br>        return "FAIL";<br>  }<br>}<br></td>