            /**<br> * Built using CHelper plug-in<br> * Actual solution is at the top<br> * @author Egor Kulikov (egor@egork.net)<br> */<br>public class AlternateColors2 {<br>  public long countWays(int n, int k) {<br>    long answer = 0;<br>    long remaining = n - k;<br>    if (k % 3 == 1) {<br>      answer += (remaining + 2) * (remaining + 1) / 2;<br>    }<br>    for (int i = 0; i &lt; k - 1; i += 3) {<br>      if (((k - i) &amp; 1) == 1)<br>        answer += 2 * (remaining + 1);<br>      answer += (((k - i - 2) &gt;&gt; 1)) * 2;<br>      answer++;<br>    }<br>    return answer;<br>  }<br>}<br></td>