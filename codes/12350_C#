            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class MonstersValley<br>{<br>  public int minimumPrice(long[] dread, int[] price)<br>  {<br>        int N = dread.Length;<br>        // Higest dread leaving [pos,paid]<br>        long[,] highestDread = new long[N + 1, 2*N + 1];<br> <br>        highestDread[1, price[0]] = dread[0];<br>        for (int i = 2; i &lt;= N; i++)<br>        {<br>            for (int paid = 0; paid &lt; 2*N-1; paid++)<br>            {<br>                if (highestDread[i - 1, paid] &gt; 0)<br>                {<br>                    if (highestDread[i - 1, paid] &gt;= dread[i - 1])<br>                    {<br>                        highestDread[i, paid] = Math.Max(highestDread[i, paid], highestDread[i - 1, paid]);<br>                    }<br>                    highestDread[i, paid + price[i - 1]] = Math.Max(highestDread[i, paid + price[i - 1]], highestDread[i - 1, paid] + dread[i - 1]);<br>                }<br>            }<br>        }<br> <br>        for (int paid = 0; paid &lt; 2*N+1; paid++)<br>        {<br>            if (highestDread[N, paid] &gt; 0) return paid;<br>        }<br>        return -1;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>