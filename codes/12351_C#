            public class MonstersValley2<br>  {<br>    public int minimumPrice(int[] dread, int[] price)<br>        {<br>            return next(0, 0, 0, dread, price);<br>        }<br>        <br>        private int next(long cd, int cp, int num, int[] dread, int[] price)<br>        {<br>            if (num == dread.Length) return cp;<br><br>            int tt1 = 0;<br>            int tt2 = 0;<br>            if (cd &lt; dread[num])<br>            {<br>                cd += dread[num];<br>                cp += price[num];<br>                return next(cd, cp, num + 1, dread, price);<br>            }<br>            else<br>            {<br>                tt1 = next(cd, cp, num + 1, dread, price);<br><br>                cd += dread[num];<br>                cp += price[num];<br>                tt2 = next(cd, cp, num + 1, dread, price);<br><br>                return tt1 &gt; tt2 ? tt2 : tt1;<br>            }<br>        }<br>  }<br></td>