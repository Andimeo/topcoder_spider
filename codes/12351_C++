            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br> <br>using namespace std;<br> <br>class MonstersValley2 {<br>public:<br>  int minimumPrice(vector &lt;int&gt;, vector &lt;int&gt;);<br>};<br> <br>int MonstersValley2::minimumPrice(vector &lt;int&gt; d, vector &lt;int&gt; p) {<br>  int n=d.size(),ans=2*n;<br>  for(int mask=0;mask&lt;(1&lt;&lt;n);++mask) {<br>    int ok=1,pr=0; long long sum=0;<br>    for(int j=0;j&lt;n;++j)<br>      if (mask&amp;(1&lt;&lt;j)) pr+=p[j],sum+=d[j];<br>      else {<br>        if (sum&lt;d[j]) {<br>          ok=0;<br>          break;<br>        }<br>      }<br>    if (ok) ans=min(ans,pr);<br>  }<br>  return ans;<br>}<br> <br> <br>//Powered by [KawigiEdit] 2.0!<br></td>