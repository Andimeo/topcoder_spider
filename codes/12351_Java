            /**<br> * Built using CHelper plug-in<br> * Actual solution is at the top<br> * @author rais.fathin38<br> */<br>public class MonstersValley2 {<br>  public int minimumPrice(int[] dread, int[] price) {<br>        int n = dread.length;<br>        int ret = Integer.MAX_VALUE;<br>        for(int bitmask = 0; bitmask &lt; (1 &lt;&lt; n); bitmask++) {<br>            long total = 0;<br>            int cost = 0;<br>            boolean can = true;<br>            for(int j = 0; j &lt; n; j++) {<br>                if((bitmask &amp; (1 &lt;&lt; j)) &gt; 0) {<br>                    total += (long)dread[j];<br>                    cost += price[j];<br>                } else {<br>                    if(dread[j] &gt; total) {<br>                        can = false;<br>                        break;<br>                    }<br>                }<br>            }<br>            if(can) ret = Math.min(ret, cost);<br>        }<br>        return ret;<br>  }<br>}<br></td>