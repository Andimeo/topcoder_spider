            class PenguinPals<br>    {<br>        public int findMaximumMatching(string str)<br>        {<br>            int wynik=0;<br>            bool now = true;<br><br>            while (now)<br>            {<br>                now = false;<br>                for (int i = 0; i &lt; str.Length &amp;&amp; str.Length&gt;1; i++)<br>                {<br>                    if (i == str.Length - 1)<br>                    {<br>                        if (str[i] == str[0])<br>                        {<br>                            str=str.Remove(i, 1);<br>                            str=str.Remove(0, 1);<br>                            wynik++;<br>                            now = true;<br>                        }<br>                    }<br>                    else<br>                    {<br>                        if (str[i] == str[i + 1])<br>                        {<br>                            str = str.Remove(i, 2);<br>                            wynik++;<br>                            i--;<br>                            now = true;<br>                        }<br>                    }<br>                }<br>            }<br><br>            if (str.Length &gt; 1)<br>            {<br>                wynik += (str.Length - 2) / 2;<br>            }<br><br>            return wynik;<br>        }<br>    }<br></td>