            // Paste me into the FileEdit configuration dialog<br><br>#include &lt;cmath&gt;<br>#include &lt;ctime&gt;<br>#include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>using namespace std;<br><br>class PenguinPals {<br>public:<br>   int findMaximumMatching( string colors ) {<br>     int n = colors.size();<br>     if (n &lt; 2) return 0;<br>     for (int i = 0; i &lt; n; i++)<br>     {<br>       int j = (i + 1) % n;<br>       if (colors[i] == colors[j])<br>       {<br>         string ns = "";<br>         for (int k = 0; k &lt; n; k++)<br>         {<br>           if ((k != i) &amp;&amp; (k != j)) ns += colors[k];<br>         }<br>         return findMaximumMatching(ns) + 1;<br>       }<br>     }<br>     return n / 2 - 1;<br>   }<br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by moj 4.16 [modified TZTester]<br>// Powered by CodeProcessor<br></td>