            public class TheDevice {<br><br>  public int minimumAdditional(String[] a) {<br>    int n = a.length;<br>    int m = a[0].length();<br>    int[] c = new int[m];<br>    for (int i = 0; i &lt; n; i++)<br>      for (int j = 0; j &lt; m; j++)<br>        c[j] += a[i].charAt(j) - '0';<br><br>    int ans = 0;<br>    for (int i = 0; i &lt; m; i++) {<br>      int n0 = 1 - n + c[i];<br>      int n1 = 2 - c[i];<br>      ans = Math.max(ans, Math.max(0, n0) + Math.max(0, n1));<br>    }<br>    return ans;<br>  }<br><br>}<br></td>