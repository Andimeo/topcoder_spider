            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class HouseBuilding<br>{<br>  public int getMinimum(string[] area)<br>  {<br>        int best = int.MaxValue;<br>        for (int d = 0; d &lt; 9; ++d)<br>        {<br>            int cost = 0;<br>            for (int i = 0; i &lt; area.Length; ++i)<br>            {<br>                for (int j = 0; j &lt; area[i].Length; ++j)<br>                {<br>                    int x = area[i][j] - '0';<br>                    if (x &lt; d)<br>                    {<br>                        cost += d - x;<br>                    }<br>                    else if (x &gt; d + 1)<br>                    {<br>                        cost += x - (d + 1);<br>                    }<br>                }<br>            }<br>            if (best &gt; cost)<br>                best = cost;<br>        }<br>        return best;<br>    }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.8 (beta) modified by pivanof!<br></td>