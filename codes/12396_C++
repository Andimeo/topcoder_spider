            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;queue&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br>#include &lt;cstring&gt;<br>#include &lt;climits&gt;<br> <br>using namespace std;<br>#define abS(a) ((a)&lt;0?-(a):(a))<br>vector&lt;int&gt; pos;<br>class HouseBuilding {<br>public:<br>  int check(int val){<br>    int cnt=0;<br>    for(int i=0;i&lt;pos.size();i++){<br>      cnt+=min(abS(pos[i]-val),abS(pos[i]-val-1));<br>    }<br>    return cnt;<br>  }<br>  int getMinimum(vector &lt;string&gt; area) {<br>    pos.clear();<br>    for(int i=0;i&lt;area.size();i++){<br>      for(int j=0;j&lt;area[i].length();j++){<br>        pos.push_back(area[i][j]-'0');<br>      }<br>    }<br>    int res=INT_MAX;<br>    sort(pos.begin(),pos.end());<br>    for(int i=0;i&lt;=9;i++){<br>      res=min(res,check(i));<br>    }<br>    return res;<br>  }<br>};<br> <br> <br> <br>//Powered by KawigiEdit 2.1.8 (beta) modified by pivanof!<br></td>