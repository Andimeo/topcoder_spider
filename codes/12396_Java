            import java.util.*;<br>import static java.lang.Math.*;<br><br>public class HouseBuilding {<br><br>  public int getMinimum(String[] area) {<br>    int best = Integer.MAX_VALUE;<br>    for (int a = 0; a &lt;= 8; a++) {<br>      int b = a + 1;<br>      int sum = 0;<br>      for (String s : area) {<br>        for (char c : s.toCharArray()) {<br>          int x = c - '0';<br>          int t = min(abs(x-a), abs(b-x));<br>          sum += t;<br>        }<br>      }<br>      best = min(best, sum);<br>    }<br>    return best;<br>  }<br><br>}<br></td>