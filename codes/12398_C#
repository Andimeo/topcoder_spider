            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class BallsSeparating<br>{<br>  public int minOperations(int[] red, int[] green, int[] blue)<br>  {<br>    if(red.Length &lt; 3) return -1;<br>    int res = int.MaxValue;<br>    for(int i = 0; i &lt; red.Length; i++)<br>    {<br>      for(int j = 0; j &lt; red.Length; j++)<br>      {<br>        if(i == j) continue;<br>        for(int k = 0; k &lt; red.Length; k++)<br>        {<br>          if(i == k || j == k) continue;<br>          int cur = 0;<br>          for(int g = 0; g &lt; red.Length; g++)<br>          {<br>            if(g == i)<br>            {<br>              cur += blue[g];<br>              cur += green[g];<br>            }<br>            else if(g == j)<br>            {<br>              cur += red[g];<br>              cur += green[g];<br>            }<br>            else if(g == k)<br>            {<br>              cur += red[g];<br>              cur += blue[g];<br>            }<br>            else<br>            {<br>              cur += red[g];<br>              cur += green[g];<br>              cur += blue[g];<br>              cur -= Math.Max(red[g], Math.Max(green[g], blue[g]));<br>            }<br>          }<br>          res = Math.Min(res, cur);<br>        }<br>      }<br>    }<br>    return res;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>