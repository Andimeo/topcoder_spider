            import java.util.Arrays;<br> <br>/**<br> * Built using CHelper plug-in<br> * Actual solution is at the top<br> */<br>public class BallsSeparating {<br>    static final int INF = (int) 1e9;<br> <br>    public int minOperations(int[] red, int[] green, int[] blue) {<br>        int[] best = new int[8];<br>        Arrays.fill(best, INF);<br>        best[0] = 0;<br>        for (int i = 0; i &lt; red.length; ++i) {<br>            int[] nbest = new int[8];<br>            Arrays.fill(nbest, INF);<br>            for (int j = 0; j &lt; 8; ++j) {<br>                nbest[j | 1] = Math.min(nbest[j | 1], best[j] + green[i] + blue[i]);<br>                nbest[j | 2] = Math.min(nbest[j | 2], best[j] + red[i] + blue[i]);<br>                nbest[j | 4] = Math.min(nbest[j | 4], best[j] + green[i] + red[i]);<br>            }<br>            best = nbest;<br>        }<br>        int res = best[7];<br>        if (res &gt;= INF / 2) res = -1;<br>        return res;<br>    }<br>}<br></td>