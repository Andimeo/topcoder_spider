            /**<br> * Built using CHelper plug-in<br> * Actual solution is at the top<br> */<br>public class RobotHerbDiv2 {<br>    public int getdist(int T, int[] a) {<br>        int x = 0;<br>        int y = 0;<br>        int dir = 0;<br>        int[] dx = {0,1,0,-1};<br>        int[] dy = {1,0,-1,0};<br>        for(int t=0;t&lt;T;t++)<br>        for(int i=0;i&lt;a.length;i++) {<br>            x+=dx[dir]*a[i];<br>            y+=dy[dir]*a[i];<br>            dir=(dir+a[i])%4;<br>        }<br>        return Math.abs(x)+Math.abs(y);<br>    }<br>}<br></td>