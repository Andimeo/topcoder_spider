            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br> <br>using namespace std;<br>typedef long long int lint;<br>const int MAX = 64;<br> <br>int n, vis[MAX];<br>vector &lt;int&gt; ar[MAX];<br>lint curr;<br> <br>class CentaurCompanyDiv2 {<br>public:<br>  long long count(vector &lt;int&gt;, vector &lt;int&gt;);<br>};<br> <br>lint dfs(int u){<br>  lint ans = 1;<br>  vis[u] = 1;<br>  for(int i=0;i&lt;(int)ar[u].size();i++){<br>    int v = ar[u][i];<br>    if(!vis[v]) ans *= (dfs(v)+1);<br>  }<br>  if(u != 1) curr += ans;<br>  return ans;<br>}<br> <br>long long CentaurCompanyDiv2::count(vector &lt;int&gt; a, vector &lt;int&gt; b) {<br>  n = (int)a.size() +1;<br>  for(int i=1;i&lt;=n;i++){<br>    ar[i].clear();<br>    vis[i] = 0;<br>  }<br>  for(int i=0;i&lt;n-1;i++){<br>    ar[a[i]].push_back(b[i]);<br>    ar[b[i]].push_back(a[i]);<br>  }<br>  <br>  curr = 0;<br>  lint res = dfs(1);<br>  return res + curr + 1;<br>}<br> <br> <br>//Powered by [KawigiEdit] 2.0!<br></td>