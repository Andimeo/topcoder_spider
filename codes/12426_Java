            import java.util.ArrayList;<br>import java.util.Arrays;<br> <br>public class CentaurCompanyDiv2 {<br>  ArrayList&lt;Integer&gt;[] g;<br>  int n;<br>  boolean[] vis;<br>  long[] dp;<br>  <br>  long solve(int u){<br>    if(dp[u]!=-1) return dp[u];<br>    vis[u] = true;<br>    dp[u] = 1;<br>    for(Integer c : g[u]){<br>      if(vis[c]) continue;<br>      long tmp = solve(c);<br>      dp[u] += dp[u]*tmp;<br>    }<br>    return dp[u];<br>  }<br>  <br>  public long count(int[] a, int[] b) {<br>    n = a.length+1;<br>    vis = new boolean[n];<br>    g = new ArrayList[n];<br>    for(int i=0; i&lt;n; i++) g[i] = new ArrayList&lt;Integer&gt;();<br>    for(int i=0; i&lt;n-1; i++){<br>      g[a[i]-1].add(b[i]-1);<br>      g[b[i]-1].add(a[i]-1);<br>    }<br>    dp = new long[n];<br>    Arrays.fill(dp, -1);<br>    solve(0);<br>    long ret = 1;<br>    for(int i=0; i&lt;n; i++) ret+=dp[i];<br>    return ret;<br>  }<br> <br>}<br></td>