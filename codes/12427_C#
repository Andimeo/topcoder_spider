            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class RobotHerb<br>{<br>  long[] dx = new long[] { 1, 0, -1, 0 };<br>  long[] dy = new long[] { 0, 1, 0, -1 };<br> <br>  public long getdist(int T, int[] a)<br>  {<br>    // 4 times<br>    long x = 0;<br>    long y = 0;<br>    long d = 0;<br>    for(int i = 0; i &lt; 4; i++)<br>    {<br>      for(int j = 0; j &lt; a.Length; j++)<br>      {<br>        x += a[j] * dx[d];<br>        y += a[j] * dy[d];<br>        d = (d + a[j]) % 4;<br>      }<br>    }<br>    x *= (long)T / 4;<br>    y *= (long)T / 4;<br>    // T % 4 times<br>    for(int i = 0; i &lt; T % 4; i++)<br>    {<br>      for(int j = 0; j &lt; a.Length; j++)<br>      {<br>        x += a[j] * dx[d];<br>        y += a[j] * dy[d];<br>        d = (d + a[j]) % 4;<br>      }<br>    }<br>    return Math.Abs(x) + Math.Abs(y);<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>