            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class NextOrPrev<br>{<br>    struct moji<br>    {<br>        public char s, g;<br>        public int i;<br><br>        public moji(char a, char b, int I)<br>        {<br>            s = a;<br>            g = b;<br>            i = I;<br>        }<br>    }<br><br>  public int getMinimum(int nextCost, int prevCost, string start, string goal) <br>  {<br>        moji[] m = new moji[start.Length];<br>        for (int f = 0; f &lt; m.Length; f++)<br>        {<br>            m[f] = new moji(start[f],goal[f],f);<br>        }<br>        Array.Sort(m, delegate(moji a, moji b) { return a.s - b.s; });<br><br>        int sum=0,s;<br>        for (int f = 0; f &lt; m.Length-1; f++)<br>        {<br>            if (m[f].g - m[f + 1].g &gt; 0) return -1;<br>            else <br>            {<br>                s = (m[f].s-m[f].g);<br>                sum += (s &gt; 0 ? prevCost : nextCost) * Math.Abs(s);<br>            }<br>        }<br>        s = (m[m.Length - 1].s - m[m.Length - 1].g);<br>        sum += (s &gt; 0 ? prevCost : nextCost) * Math.Abs(s);<br><br>            return sum;<br>  }<br><br><br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] Modified for C# by ysn<br>// Powered by CodeProcessor<br></td>