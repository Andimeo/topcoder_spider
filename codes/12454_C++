            #include&lt;vector&gt;<br>#include&lt;string&gt;<br>#include&lt;algorithm&gt;<br>using namespace std;<br> <br>class NextOrPrev{<br>  public:<br>  int getMinimum(int ne,int pr,string st,string go){<br>    int i,j,k,n;<br>    n=st.length();<br>    for(i=0;i&lt;n;i++)<br>      for(j=0;j&lt;n;j++)<br>        if((st[i]&lt;st[j] &amp;&amp; go[i]&gt;go[j]) || (st[i]&gt;st[j] &amp;&amp; go[i]&lt;go[j]))<br>          return -1;<br>    int ans=0;<br>    for(i=0;i&lt;n;i++)<br>      if(st[i]&lt;go[i])ans+=(((int)go[i])-((int)st[i]))*ne;<br>      else ans+=(((int)st[i])-((int)go[i]))*pr;<br>    return ans;<br>  }<br>};<br></td>