            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class TheArray<br>{<br>  public int find(int n, int d, int first, int last)<br>  {<br>    int r = Math.Max(first, last);<br>    for (int i = 1; i &lt; n - 1; i++)<br>    {<br>      int t = Math.Min(first + i * d, last + (n - i - 1) * d);<br>      if (t &gt; r) r = t;<br>    }<br>    return r;<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>