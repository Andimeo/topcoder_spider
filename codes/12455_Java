            public class TheArray {<br>  public static int find(int n, int d, int first, int last) {<br>    int ans = -10000;<br>    for(int i=0; i&lt;n; i++) {<br>      ans = Math.max(ans, <br>          Math.min(first+i*d, last+(n-1-i)*d));<br>    }<br>    return ans;<br>  }<br>}<br></td>