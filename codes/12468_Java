            import java.util.*;<br>@SuppressWarnings("unchecked")<br> <br>public class SkiResorts<br>{<br>    public long minCost(String[] road, int[] altitude)<br>    {<br>        int n = road.length;<br> <br>        long[][] best = new long[n][n];<br>        for(long[] i : best)<br>            Arrays.fill(i, Long.MAX_VALUE/2);<br>        for(int i = 0;i &lt; n;i++)<br>            best[0][i] = Math.abs(altitude[0]-altitude[i]);<br>        boolean[][] visited = new boolean[n][n];<br> <br>        int[][] diff = new int[n][n];<br>        for(int i = 0;i &lt; n;i++)<br>            for(int j = 0;j &lt; n;j++)<br>                diff[i][j] = Math.abs(altitude[i]-altitude[j]);<br> <br>        while (true)<br>        {<br>            int x = -1, y = -1;<br> <br>            for(int i = 0;i &lt; n;i++)<br>                for(int j = 0;j &lt; n;j++)<br>                    if(!visited[i][j])<br>                        if(x == -1 || best[i][j] &lt; best[x][y])<br>                        {<br>                            x = i;<br>                            y = j;<br>                        }<br>            if(x == -1) break;<br>            visited[x][y] = true;<br> <br>            for(int toAt = 0;toAt &lt; n;toAt++)<br>                for(int alt = 0;alt &lt; n;alt++)<br>                    if(!visited[toAt][alt])<br>                        if(road[x].charAt(toAt) == 'Y')<br>                            if(altitude[y] &gt;= altitude[alt])<br>                                if(best[toAt][alt] &gt; best[x][y]+diff[toAt][alt])<br>                                    best[toAt][alt] = best[x][y]+diff[toAt][alt];<br>        }<br> <br>        long res = Long.MAX_VALUE/2;<br>        for(long i : best[n-1])<br>            res = Math.min(res, i);<br> <br>        return res == Long.MAX_VALUE/2 ? -1 : res;<br>    }<br> <br> <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>