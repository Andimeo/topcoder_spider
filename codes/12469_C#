            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class SkiResortsEasy<br>{<br>  public int minCost(int[] a)<br>  {<br>        int n = a.Length;<br>        int sum = 0;<br>        for (int i = 0; i &lt; n-1; i++)<br>        {<br>            if (a[i + 1] &gt; a[i])<br>            {<br>                sum += (a[i + 1] - a[i]);<br>                a[i + 1] = a[i];<br>            }<br>        }<br>        return sum;<br>    <br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>