            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class TeamContest<br>{<br>  public int worstRank(int[] strength)<br>  {<br>        int n = strength.Length;<br>        if (n == 3) return 1;<br> <br>        int min = 1000000, max = 0;<br>        for (int i = 0; i &lt; 3; ++i)<br>        {<br>            if (strength[i] &lt; min) min = strength[i];<br>            if (strength[i] &gt; max) max = strength[i];<br>        }<br>        int my = min + max;<br> <br>        int[] s = new int[n - 3];<br>        for (int i = 3; i &lt; n; ++i)<br>            s[i - 3] = strength[i];<br>        Array.Sort(s);<br>        int l = 0, r = n - 4, rank = 1;<br>        while (l &lt; r)<br>        {<br>            while (l &lt; r &amp;&amp; s[l] + s[r] &lt;= my) ++l;<br>            if (l &gt;= r - 1) break;<br>            ++rank;<br>            r -= 1;<br>            l += 2;<br>        }<br>        return rank;<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>