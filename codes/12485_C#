            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br> <br>public class TheNumberGameDiv2<br>{<br>  int minMove = -1;<br>  string a;<br>  string b;<br>  <br>  public int minimumMoves(int A, int B)<br>  {<br>    a = A.ToString();<br>    b = B.ToString();<br>    <br>    Calc(a, 0, false);<br>    <br>    return minMove;<br>  }<br>  <br>  void Calc(string input, int num, bool hasReversed)<br>  {<br>    if (input.Length &lt;= 0) return;<br>    <br>    if (input == b)<br>    {<br>      if (minMove == -1) minMove = int.MaxValue;<br>      <br>      minMove = Math.Min(num, minMove);<br>      return;<br>    }<br>    <br>    if (!hasReversed)<br>    {<br>      Calc(Reverse(input), num + 1, true);<br>    }<br>    Calc(CutOneChar(input), num + 1, false);    <br>  }<br>  <br>  string Reverse(string input)<br>  {<br>    char[] charArray = input.ToCharArray();<br>    Array.Reverse(charArray);<br>    return new string(charArray);<br>  }<br>  <br>  string CutOneChar(string input)<br>  {<br>    return input.Remove(input.Length - 1);<br>  }<br>  <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>