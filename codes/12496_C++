            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;cstring&gt;<br>#include &lt;vector&gt;<br>#include &lt;cmath&gt;<br>#include &lt;algorithm&gt;<br>using namespace std;<br><br><br>class TheNumberGameDivOne{<br>public:<br>    string find(long long n) {<br>        if (n % 2 == 1) return "Brus";<br>        long long p = 1;<br>        int a = 0;<br>        while (p &lt; n) {<br>            ++a;<br>            p = p &lt;&lt; 1;      <br>        }<br>        if (p == n) {<br>            if (a % 2 == 1)  return "Brus";      <br>        }<br>        return "John";<br>    }<br>};<br></td>