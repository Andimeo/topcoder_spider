            using System;<br> <br>public class FruitTrees {<br>  public int gcd(int a, int b)<br>  {<br>    while (b != 0)<br>      {<br>  a %= b;<br>  if (a == 0) return Math.Abs(b);<br>  b %= a;<br>      }<br>    return Math.Abs(a);<br>  }<br>  <br>  public int f(int g, int k)<br>  {<br>    k %= g;<br>    if (k &lt; 0)<br>      k += g;<br>    return Math.Min(k, g - k);<br>  }<br>  public int maxDist(int apple, int kiwi, int grape) {<br>    int g1 = gcd(apple, kiwi);<br>    int g2 = gcd(kiwi, grape);<br>    int g3 = gcd(apple, grape);<br>    int rec = 0;<br>    for (int k = 0; k &lt; kiwi; ++k)<br>      for (int g = 0; g &lt; grape; ++g)<br>        {<br>  <br>    int x1 = f(g1, k);<br>    int x2 = f(g2, k - g);<br>    int x3 = f(g3, g);<br>    int y = Math.Min(Math.Min(x1, x2), x3);<br>    rec = Math.Max(rec, y);<br>        }<br>    return rec;<br>  }<br>  <br> <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>