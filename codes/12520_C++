            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br> <br>using namespace std;<br> <br>#define forn(i, n) for (int i = 0; i &lt; (int)(n); i++)<br> <br>class FruitTrees {<br>public:<br>  int maxDist(int, int, int);<br>};<br> <br>inline int dist( int d, int g )<br>{<br>  d = abs(d) % g;<br>  return min(d, g - d);<br>}<br> <br>int FruitTrees::maxDist(int a, int b, int c)<br>{<br>  int gab = __gcd(a, b);<br>  int gac = __gcd(a, c);<br>  int gbc = __gcd(b, c);<br>  int xa = 0;<br>  int res = 0;<br>  forn(xb, b)<br>    forn(xc, c)<br>      res = max(res, min(dist(xa - xb, gab), min(dist(xa - xc, gac), dist(xb - xc, gbc))));<br>  return res;<br>}<br></td>