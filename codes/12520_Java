            import static java.lang.Math.abs;<br>import static java.lang.Math.max;<br>import static java.lang.Math.min;<br> <br>public class FruitTrees {<br> <br>  public int maxDist(int apple, int kiwi, int grape) {<br>    int best = 0;<br>    <br>    int ak = gcd(apple, kiwi);<br>    int ag = gcd(apple, grape);<br>    int kg = gcd(kiwi, grape);<br>    for (int k = 0; k &lt; kiwi; k++) {<br>      for (int g = 0; g &lt; grape; g++) {<br>        int cur1 = get(k, ak);<br>        int cur2 = get(g, ag);<br>        int cur3 = get(abs(k - g), kg);<br>        int cur = min(min(cur1, cur2), cur3);<br>        best = max(best, cur);<br>      }<br>    }<br>    return best;<br>  }<br>  <br>  static int get(int a, int b) {<br>    a %= b;<br>    return min(a, b - a);<br>  }<br> <br>  static int gcd(int a, int b) {<br>    while (a &gt; 0 &amp;&amp; b &gt; 0) {<br>      if (a &gt; b) {<br>        a %= b;<br>      } else {<br>        b %= a;<br>      }<br>    }<br>    return a + b;<br>  }<br>}<br></td>