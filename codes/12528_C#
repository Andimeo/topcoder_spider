            using System;<br>using System.Collections.Generic;<br>using System.Linq;<br><br>public class TriangleXor<br>{<br>    public int theArea(int W)<br>    {<br>        double res = (W + 1.0)*W;<br>        int sgn = -1;<br>        for (int i = 1; i &lt; W+1; i++)<br>        {<br>            int cnt = W + 1 - i;<br>            double height = (W*1.0)/(W + i);<br>            res = res + sgn*height*cnt*W*2;<br>            sgn = -sgn;<br>        }<br>        res = res*0.5;<br>        int ret = (int)res;<br>        return ret;<br>    }<br>}<br></td>