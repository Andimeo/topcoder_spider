            /**<br> * Built using CHelper plug-in<br> * Actual solution is at the top<br> */<br>public class TriangleXor {<br>    public int theArea(int W) {<br>        double res = 0.0;<br>        double fixedPart = 0.0;<br>        for (int bottom = 0; bottom &lt;= W; ++bottom) {<br>            double cur = 0.0;<br>            switch (bottom % 2) {<br>                case 0:<br>                    cur = fixedPart + 1.0 - bottom / (double) (bottom + W);<br>                    break;<br> <br>                case 1:<br>                    fixedPart += bottom / (double) (bottom + W) - (bottom - 1) / (double) (bottom - 1 + W);<br>                    cur = fixedPart;<br>                    break;<br>            }<br>            res += 2 * cur - 1.0;<br>        }<br>        res *= 0.5 * W;<br>        return (int) Math.floor(res);<br>    }<br>}<br></td>