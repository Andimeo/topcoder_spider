            class TriangleXor:<br>    def theArea(_, W):<br>        def h(n):<br>            if n == 0: return 0<br>            return 1 / (1.0/n + 1.0/W) / W<br> <br>        ans = 0<br>        if W % 2 == 0:<br>            ans += W / 4.0<br> <br>        for i in xrange(1, W, 2):<br>            B = W / 0.5 * (0.5-h(i))<br>            ans += B * (h(i+1) - h(i-1)) / 2.0<br> <br>        for i in xrange(0, W, 2):<br>            ans += (0.5 - ((i+1) * h(i+1) / 2.0 - i * h(i) / 2.0)) * 2<br> <br>        return int(ans)<br></td>