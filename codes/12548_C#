            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class DancingFoxes<br>{<br>  public int minimalDays(string[] friendship)<br>  {<br>      int N = friendship.Length;<br>    int[,] dist = new int[N,N];<br>      for (int i = 0; i &lt; N; i++)<br>      {<br>          for (int j = 0; j &lt; N; j++)<br>          {<br>              if (friendship[i][j]=='Y')<br>              {<br>                  dist[i, j] = 1;<br>              }<br>              else<br>              {<br>                  dist[i, j] = 100000;<br>              }<br>          }<br>      }<br>      for (int i = 0; i &lt; N; i++)<br>      {<br>          for (int j = 0; j &lt; N; j++)<br>          {<br>              for (int k = 0; k &lt; N; k++)<br>              {<br>                  dist[j, k] = Math.Min(dist[j, k], dist[j, i] + dist[i, k]);<br>              }<br>          }<br>      }<br>      if (dist[0, 1]&gt;100)<br>      {<br>          return -1;<br>      }<br>        return get(dist[0, 1] + 1);<br>  }<br> <br>    int get(int cur)<br>    {<br>        if (cur&lt;=2)<br>        {<br>            return 0;<br>        }<br>        return get(cur - cur/3) + 1;<br>    }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.8 (beta) modified by pivanof!<br></td>