            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;sstream&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br> <br>//#include &lt;functional&gt;<br>//#include &lt;map&gt;<br>//#include &lt;set&gt;<br>//#include &lt;numeric&gt;<br>//#include &lt;queue&gt;<br>//#include &lt;stack&gt;<br>//#include &lt;list&gt;<br> <br>using namespace std;<br> <br>class TimeSlicing {<br>  public:<br>  long long howMany(int N, int K) <br>  {<br>    wait = K;<br>    for(int i=0;i&lt;32;i++)<br>    {<br>      for(int j=0;j&lt;32;j++)<br>      {<br>        for(int k=0;k&lt;32;k++)<br>        {<br>          for(int m=0;m&lt;32;m++)<br>          memo[i][j][k][m] = -1;<br>        }<br>      }<br>    }<br> <br>    return place(N-1,N,K,K-1);<br>  }<br> <br>  int wait;<br>  long long memo[32][32][32][32];<br>  long long place(int aleft,int bleft,int await,int bwait)<br>  {<br>    if(memo[aleft][bleft][await][bwait] != -1)<br>    {<br>      return memo[aleft][bleft][await][bwait];<br>    }<br>    if(aleft == 0 &amp;&amp; bleft == 1) {  return 1; }  <br>    long long sum = 0;<br>    if(bwait &gt; 0 &amp;&amp; aleft &gt; 0)<br>    {<br>      sum += place(aleft-1,bleft,wait,bwait-1);<br>    }<br>    if((aleft == 0 || await &gt; 0) &amp;&amp; bleft &gt; 0)<br>    {<br>      sum += place(aleft,bleft-1,await-1,wait);  <br>    }<br>    memo[aleft][bleft][await][bwait] = sum;<br>    return sum;<br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>