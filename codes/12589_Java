            import java.math.*;<br>import java.util.*;<br>import static java.util.Arrays.*;<br>import static java.lang.Character.*;<br>import static java.lang.Double.*;<br>import static java.lang.Integer.*;<br>import static java.lang.Math.*;<br>public class BlackAndWhiteSolitaire {<br>  public int minimumTurns(String s) {<br>    int n = s.length();<br>    String a = "";<br>    String b = "";<br>    for(int i=0;i&lt;n;i++) if(i%2==0) a = a + "B"; else a += "W";<br>    for(int i=0;i&lt;n;i++) if(i%2==1) b = b + "B"; else b += "W";<br>    <br>    int c=0,d=0;<br>    for(int i=0;i&lt;n;i++) if(s.charAt(i) != a.charAt(i)) ++c;<br>    for(int i=0;i&lt;n;i++) if(s.charAt(i) != b.charAt(i)) ++d;<br>    <br>    return min(c,d);<br>  }<br>  <br> <br>  void p(Object... o) {<br>          System.out.println(deepToString(o));<br>      }<br> <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br>//SRM 581, Room 40<br>//2013-06-04 09:10 Local Time<br></td>