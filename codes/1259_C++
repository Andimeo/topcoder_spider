            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;sstream&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br> <br>//#include &lt;functional&gt;<br>//#include &lt;map&gt;<br>//#include &lt;set&gt;<br>//#include &lt;numeric&gt;<br>//#include &lt;queue&gt;<br>//#include &lt;stack&gt;<br>//#include &lt;list&gt;<br> <br>using namespace std;<br> <br>class ZigZag {<br>  public:<br>  int longestZigZag(vector &lt;int&gt; sequence) <br>  {<br>    if(sequence.size() == 1) return 1;<br>    vector&lt;int&gt; v(sequence.size()-1);<br>    for(int i=1;i&lt;sequence.size();i++)<br>    {<br>      v[i-1] = sequence[i] - sequence[i-1];<br>    }<br>    //    dir is first nonzero<br>    int ii=0;<br>    while( ii &lt; v.size() &amp;&amp; v[ii] == 0)<br>    ii++;<br>    if(ii == v.size()) return 1;<br>    int dir = v[ii];<br>    int len = 2;<br>    for(int i=ii+1;i&lt;v.size();i++)<br>    {<br>      if(v[i] * dir &lt; 0)<br>      {<br>        dir *= -1;  <br>        len++;<br>      }<br>    }<br>    return len;<br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>