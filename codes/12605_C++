            #include&lt;iostream&gt;<br>#include&lt;vector&gt;<br>#include&lt;algorithm&gt;<br><br><br>using namespace std;<br><br><br>bool compare(int x,int y){<br>  return x&gt;y;<br>}<br><br>int fati[100];<br><br>class SpaceWarDiv2{<br>public:<br>  int minimalFatigue(vector&lt;int&gt;a,vector&lt;int&gt;b,vector&lt;int&gt;c){<br>    vector&lt;int&gt;bod;<br>    sort(a.begin(),a.end(),compare);<br>    int i,j;<br>    for(i=0;i&lt;b.size();i++){<br>      for(j=0;j&lt;c[i];j++)bod.push_back(b[i]);<br>    }<br>    sort(bod.begin(),bod.end());<br>  //  for(j=0;j&lt;bod.size();j++)cout&lt;&lt;bod[j]&lt;&lt;' ';<br>    while(bod.size()){<br>      int temp=bod[bod.size()-1];<br>      bod.pop_back();<br>      int min_fat=100000000,min_pos=-1;<br>      for(i=0;i&lt;a.size();i++){<br>        if(min_fat&gt;fati[i] &amp;&amp; a[i]&gt;=temp){<br>          min_pos=i;<br>          min_fat=fati[i];<br>        }<br>      }<br>      if(min_pos==-1){<br>        return -1;<br>      }<br>      fati[min_pos]++;<br>    }<br>    int max=-1;<br>    for(i=0;i&lt;a.size();i++)max=fati[i]&gt;max?fati[i]:max;<br>    return max;<br>  }<br>};<br></td>