            public class PiecewiseLinearFunction {<br> <br>  int N;<br>  int[] Y;<br> <br>  public int maximumSolutions(int[] Y_) {<br>    Y = Y_;<br>    N = Y.length;<br>    for (int i = 0; i &lt; N - 1; ++i) {<br>      if (Y[i] == Y[i + 1]) return -1;<br>    }<br>    int ans = 0;<br>    for (int i = 0; i &lt; N; ++i) {<br>      ans = Math.max(ans, count(Y[i] - 0.5));<br>      ans = Math.max(ans, count(Y[i]));<br>      ans = Math.max(ans, count(Y[i] + 0.5));<br>    }<br>    return ans;<br>  }<br> <br>  int count(double v) {<br>    int c = 0;<br>    for (int i = 0; i &lt; N; ++i) {<br>      if (Y[i] == v) ++c;<br>    }<br>    for (int i = 0; i &lt; N - 1; ++i) {<br>      int min = Math.min(Y[i], Y[i + 1]);<br>      int max = Math.max(Y[i], Y[i + 1]);<br>      if (min &lt; v &amp;&amp; v &lt; max) ++c;<br>    }<br>    return c;<br>  }<br> <br>}<br></td>