            public class TeamsSelection<br>{<br>    public string simulate(int[] preference1, int[] preference2)<br>    {<br>        int n = preference1.Length;<br>        bool[] chosen = new bool[n];<br><br>        char[] res = new char[n];<br><br>        for (int i = 0; i &lt; n; i++)<br>        {<br>            if (i % 2 == 0)<br>            {<br>                int j = 0;<br>                while (chosen[preference1[j] - 1]) j++;<br>                chosen[preference1[j] - 1] = true;<br>                res[preference1[j] - 1] = '1';<br>            }<br>            else<br>            {<br>                int j = 0;<br>                while (chosen[preference2[j] - 1]) j++;<br>                chosen[preference2[j] - 1] = true;<br>                res[preference2[j] - 1] = '2';<br>            }<br>        }<br><br>        return new string(res);<br>    }<br>}<br></td>