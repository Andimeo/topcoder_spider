            #include&lt;iostream&gt;<br>#include&lt;cstring&gt;<br>#include&lt;vector&gt;<br>#include &lt;string&gt;<br>using namespace std;<br>class TeamsSelection{<br>  public:<br>  string simulate(vector&lt;int&gt; a,vector&lt;int&gt; b){<br>  int j,k,i,d=0;<br>  string s;<br>  int n = a.size();<br>  int c[n+1];<br>  int x=0,y=0;<br>  j=k=0;<br>  memset(c,-1,sizeof(c));<br>  while(1){<br>    while(j&lt;=n){<br>    <br>      if(c[a[j]-1] == -1 ){ <br>        c[a[j]-1] = 1;<br>        j++;<br>        d++;<br>          break;<br>        }<br>        j++;<br>      <br>    }<br>    if(d==n){<br>      break;<br>    }    <br>    while(k&lt;n){<br>      <br>      if(c[b[k]-1] ==-1){<br>        c[b[k]-1]=2;  <br>        k++;<br>        d++;<br>        break;<br>      }<br>      k++;<br>    }<br>  <br>  }<br>  for ( i = 0; i &lt; n; i++ ) s.push_back((char)(c[i]+48));<br>    return s;<br>}<br>};<br></td>