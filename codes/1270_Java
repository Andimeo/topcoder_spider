            import java.util.*;<br>public class TileMatch {<br>  int n;<br>  void print() {<br>    System.out.println();<br>    for (int i=0; i&lt;n; i++) {<br>      for (int j=0; j&lt;n; j++) System.out.print(p[j][i]?'X':'-');<br>      System.out.println();<br>    }<br>    System.out.println();<br>  }<br>  boolean[][] p;<br>  boolean[][] q;<br>  <br>  boolean rot(int r, int x) {<br>    switch (r) {<br>      case 0: return p[x][0];<br>      case 1: return p[n-1][x];<br>      case 2: return p[n-1-x][n-1];<br>      case 3: return p[0][n-1-x];<br>    }<br>    System.out.println("huh?");<br>    return false;<br>  }<br>  <br>  void rotate() {<br>    for (int x=0; x&lt;n; x++) for (int y=0; y&lt;n; y++) {<br>      q[x][y] = p[y][n-1-x];<br>    }<br>    <br>    boolean[][] t = q;<br>    q=p;<br>    p=t;<br>  }<br>  <br>  public int uncolor(String[] pattern) {<br>    n = pattern.length;<br>    <br>    p = new boolean[n][n];<br>    for (int y=0; y&lt;n; y++) for (int x=0; x&lt;n; x++) {<br>      if (pattern[y].charAt(x)=='X') p[x][y]=true;<br>    }<br>    <br>    q = new boolean[n][n];<br>    <br>    int changes = 0;<br>    boolean ok = false;<br>    while (!ok) {<br>      ok = true;<br>    for (int bigrot=0; bigrot&lt;4; bigrot++) {<br>      for (int x=1; x&lt;n-1; x++) if (p[x][0]) {<br>        boolean err =false;<br>        for (int r=0; r&lt;4; r++) {<br>          boolean err2 = true;<br>          for (int d=-1; d&lt;=1; d++) {<br>            if (rot(r, n-1-x+d)) err2 = false;<br>          }<br>          if (err2) err = true;<br>        }<br>        if (err) {<br>          ok = false;<br>          p[x][0] = false;<br>          changes++;<br>        }<br>      }<br>      <br>      if (p[0][0]) {<br>        boolean topok = true;<br>        boolean sideok = true;<br>        for (int r=0; r&lt;4; r++) {<br>          if (!rot(r,0) &amp;&amp; !rot(r,1)) sideok = false;<br>          if (!rot(r,n-1) &amp;&amp; !rot(r,n-2)) topok = false;<br>        }<br>        if (!topok &amp;&amp; !sideok) {<br>          ok = false;<br>          p[0][0] = false;<br>          changes++;<br>        }<br>      }<br>//      print();<br>//      System.out.println("rotate");<br>      rotate();<br>//      print();<br>    }<br>    }<br>    <br>    return changes;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>