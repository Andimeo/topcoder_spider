            import java.util.*;<br>public class GearsDiv2 {<br>   final int oo = 1 &lt;&lt; 30;<br>   int[][] dp = new int[55][4];<br>   int get(char c) {<br>      return c == 'R' ? 1 : 0; <br>   }<br>   String rev(String s) {<br>      return new StringBuilder(s).reverse().toString(); <br>   }<br>   int doit(int k, int p, String s) {<br>      if(k == s.length()) return 0;<br>      if(dp[k][p] != -1) return dp[k][p];<br>      int c = get(s.charAt(k)), r = 1 + doit(k + 1, 2, s);<br>      if(c != p || p == 2) <br>         r = Math.min(r, doit(k + 1, c, s)); <br>      return dp[k][p] = r;<br>   }<br>   public int getmin(String s) {<br>      int  n = s.length(), c = get(s.charAt(n - 1));<br>      for(int i = 0; i &lt; dp.length; ++i) Arrays.fill(dp[i], -1);<br>      int a = doit(0, c, s);<br>      String t = rev(s);<br>      for(int i = 0; i &lt; dp.length; ++i) Arrays.fill(dp[i], -1);<br>      int b = doit(0, get(t.charAt(n - 1)), t);<br>      return Math.min(a, b);<br>   }<br>}<br></td>