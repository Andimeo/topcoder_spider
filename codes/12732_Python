            class GearsDiv2:<br>  def getmin(self, Directions):<br>    st=Directions[0]<br>    n=len(Directions)<br>    if st=='R':<br>      comp='L'<br>    else:<br>      comp='R'<br>    <br>    i=0<br>    while i&lt;n and Directions[i]!=comp:<br>      i+=1;<br>    if i==n:<br>      return (n+1)/2<br>    <br>    offset=i<br>    <br>    prev=st<br>    cnt=0<br>    for j in xrange(n):<br>      t=(j+offset)%n<br>      if prev=='E':<br>        prev=Directions[t]<br>      elif prev=='L' and Directions[t]=='R':<br>        prev='R'<br>      elif prev=='R' and Directions[t]=='L':<br>        prev='L'<br>      else:<br>        cnt+=1<br>        prev='E'<br>    return cnt<br></td>