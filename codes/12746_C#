            using System;<br>using System.Text;<br>using System.Collections;<br>using System.Diagnostics;<br>using System.Collections.Generic;<br>public class TheTree<br>{<br>    public int maximumDiameter(int[] cnt)<br>    {<br>        int res = 0;<br>        for (int i = 0; i &lt; cnt.Length; i++)<br>        {<br>            res = Math.Max(res, Get(i, cnt));<br>        }//for i<br>        return res;<br>    }<br><br>    private int Get(int s, int[] cnt)<br>    {<br>        int res = 0;<br>        bool flg = true;<br>        for (int i = s; i &lt; cnt.Length; i++)<br>        {<br>            if (cnt[i] == 1)<br>            {<br>                flg = false;<br>            }//if<br>            res += (flg ? 2 : 1);<br>        }//for i<br>        return res;<br>    }<br><br>}//TheTree<br><br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] modified for C# by onigiri[25-Feb-2013]<br>// Powered by CodeProcessor<br></td>