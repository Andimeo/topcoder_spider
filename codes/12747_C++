            #line 74 "PackingSquares.cpp"<br>// @author peter50216<br>// #includes {{{<br>#include&lt;stdio.h&gt;<br>#include&lt;stdlib.h&gt;<br>#include&lt;string.h&gt;<br>#include&lt;functional&gt;<br>#include&lt;math.h&gt;<br>#include&lt;assert.h&gt;<br>#include&lt;stdarg.h&gt;<br>#include&lt;time.h&gt;<br>#include&lt;limits.h&gt;<br>#include&lt;ctype.h&gt;<br>#include&lt;string&gt;<br>#include&lt;map&gt;<br>#include&lt;set&gt;<br>#include&lt;queue&gt;<br>#include&lt;algorithm&gt;<br>#include&lt;vector&gt;<br>#include&lt;iostream&gt;<br>#include&lt;sstream&gt;<br>using namespace std;<br>// }}}<br>// #defines {{{<br>#define FOR(i,c) for(__typeof((c).begin()) i=(c).begin();i!=(c).end();i++)<br>#define SZ(x) ((int)(x).size())<br>#define REP(i,n) for(int i=0;i&lt;(n);i++)<br>#define REP1(i,a,b) for(int i=(a);i&lt;=(b);i++)<br>#define PER(i,n) for(int i=(n)-1;i&gt;=0;i--)<br>#define PER1(i,a,b) for(int i=(a);i&gt;=(b);i--)<br>#define MP make_pair<br>#define PB push_back<br>#define MS0(x) memset(x,0,sizeof(x))<br>#define MS1(x) memset(x,-1,sizeof(x))<br>#define F first<br>#define S second<br>typedef pair&lt;int,int&gt; PII;<br>typedef long long LL;<br>// }}}<br><br>struct cmp{<br>    bool operator()(int a,int b){return a&gt;b;}<br>};<br>class PackingSquares {<br>public:<br>    long long leastArea(vector &lt;int&gt; a) {<br>        set&lt;int,cmp&gt; all;<br>        all.insert(a[SZ(a)-1]);<br>        PER(i,SZ(a)-1){<br>            int x=a[i];<br>            set&lt;int,cmp&gt;::iterator it=all.lower_bound(x);<br>            long long ar=(1LL&lt;&lt;(2*x));<br>            while(it!=all.end()){<br>                if(ar&lt;(1LL&lt;&lt;(2*(*it))))break;<br>                set&lt;int,cmp&gt;::iterator it2=it;<br>                it++;<br>                ar-=(1LL&lt;&lt;(2*(*it2)));<br>                all.erase(it2);<br>            }<br>            all.insert(x);<br>        }<br>        long long ans=0;<br>        FOR(it,all){<br>            ans+=(1LL&lt;&lt;(2*(*it)));<br>        }<br>        return ans;<br>    }<br><br>};<br>// vim: fdm=marker:commentstring=\ \"\ %s:autoread<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>