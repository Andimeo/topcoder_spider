            #include&lt;iostream&gt;<br>#include&lt;vector&gt;<br>#include&lt;cmath&gt;<br>using namespace std;<br>class TheArithmeticProgression<br>{<br>public:<br>    double minimumChange(int a, int b, int c)<br>    {<br>        double b1= (double)(a+c)/2.0;<br>        double ans= abs(b1-b);<br><br>        return (double)ans;<br><br>    }<br>};<br></td>