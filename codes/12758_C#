            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class LittleElephantAndBalls {<br>    public int getNumber(string S)<br>    {<br>        int ret = 0;<br>        Dictionary&lt;char, int&gt; dic = new Dictionary&lt;char, int&gt;();<br>        dic['R'] = 0;<br>        dic['G'] = 1;<br>        dic['B'] = 2;<br>        int[] ar = new int[3];<br>        foreach (var item in S)<br>        {<br>            ret += ar[0] + ar[1] + ar[2];<br>            ar[dic[item]] = Math.Min(2, ar[dic[item]] + 1);<br>        }<br>        return ret;<br>    }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] Modified for C# by ysn<br>// Powered by CodeProcessor<br></td>