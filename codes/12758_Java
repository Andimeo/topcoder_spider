            /**<br> * Built using CHelper plug-in<br> * Actual solution is at the top<br> */<br>public class LittleElephantAndBalls {<br>    public int getNumber(String S) {<br>        int nr = 0;<br>        int ng = 0;<br>        int nb = 0;<br>        int res = 0;<br>        for (int i = 0; i &lt; S.length(); ++i) {<br>            char ch = S.charAt(i);<br>            res += Math.min(nr, 2) + Math.min(ng, 2) + Math.min(nb, 2);<br>            if (ch == 'R') ++nr;<br>            if (ch == 'G') ++ng;<br>            if (ch == 'B') ++nb;<br>        }<br>        return res;<br>    }<br>}<br></td>