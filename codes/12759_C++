            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;queue&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br> <br>using namespace std;<br>#define REP(i,s,e)   for (int i = int(s); i &lt; int(e); i++)<br>#define pb    push_back<br>#define all(c)   (c).begin(), (c).end()<br>class LittleElephantAndPermutationDiv2 {<br>public:<br>  long long getNumber(int N, int K) {<br>    vector&lt;int&gt; v;<br>    REP(i,0,N) v.pb(i+1);<br>    long long ans=0;<br>    do{<br>      int sum=0;<br>      REP(i,0,N){<br>        int a=max(i+1,v[i]);<br>        sum+=a;<br>      }<br>      if(sum&gt;=K) ans++;<br>      //cout&lt;&lt;sum&lt;&lt;endl;<br>    }while(next_permutation(all(v)));<br>    REP(i,2,N+1) ans*=i;<br>    return ans;<br>  }<br>};<br> <br> <br> <br>//Powered by KawigiEdit 2.1.8 (beta) modified by pivanof!<br></td>