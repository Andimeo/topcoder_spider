            public class WolfDelaymaster {<br>  public String check(String str) {<br>    char[] a = str.toCharArray();<br>    int index = 0, n = a.length;<br>    while (index &lt; n) {<br>      int[] cnt = new int[4];<br>      while (index &lt; n &amp;&amp; a[index] == 'w') {<br>        index++;<br>        cnt[0]++;<br>      }<br>      while (index &lt; n &amp;&amp; a[index] == 'o') {<br>        index++;<br>        cnt[1]++;<br>      }<br>      while (index &lt; n &amp;&amp; a[index] == 'l') {<br>        index++;<br>        cnt[2]++;<br>      }<br>      while (index &lt; n &amp;&amp; a[index] == 'f') {<br>        index++;<br>        cnt[3]++;<br>      }<br>      if (cnt[0] != cnt[1] || cnt[1] != cnt[2] || cnt[2] != cnt[3])<br>        return "INVALID";<br>    }<br>    return "VALID";<br>  }<br>}<br></td>