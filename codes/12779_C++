            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br> <br>using namespace std;<br> <br>class MayTheBestPetWin {<br>public:<br>  int calc(vector &lt;int&gt;, vector &lt;int&gt;);<br>};<br> <br>int c[123];<br>int f[2000010];<br> <br>int MayTheBestPetWin::calc(vector &lt;int&gt; A, vector &lt;int&gt; B) {<br>  int n = A.size();<br>  for (int i = 0; i &lt; n; i++) c[i] = A[i] + B[i];<br>  int tot = 0;<br>  f[0] = 1;<br>  for (int i = 0; i &lt; n; i++) {<br>    for (int j = tot + 1; j &lt;= tot + c[i]; j++) f[j] = 0;<br>    for (int j = tot; j &gt;= 0; j--) {<br>      if (f[j]) f[j + c[i]] = 1;<br>    }<br>    tot += c[i];<br>  }<br>  int dec = 0;<br>  for (int i = 0; i &lt; n; i++) dec += A[i];<br>  int ans = (int)1e9;<br>  for (int i = 0; i &lt;= tot; i++) {<br>    if (f[i]) {<br>      int d1 = i;<br>      int d2 = tot - i;<br>      if (d2 &gt; d1) d1 = d2;<br>      if (d1 &lt; ans) ans = d1;<br>    }<br>  }<br>  return ans - dec;<br>}<br> <br> <br>//Powered by [KawigiEdit] 2.0!<br></td>