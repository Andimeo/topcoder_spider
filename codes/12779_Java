            import java.util.Arrays;<br><br>public class MayTheBestPetWin {<br>  public int calc(int[] A, int[] B) {<br>    int n = A.length;<br>    int S = 0, T = 0;<br>    for(int i = 0;i &lt; n;i++){<br>      S += A[i];<br>      T += B[i];<br>    }<br>    <br>    boolean[] dp = new boolean[S+T+1];<br>    dp[0] = true;<br>    for(int i = 0;i &lt; n;i++){<br>      for(int j = S+T-A[i]-B[i];j &gt;= 0;j--){<br>        if(dp[j]){<br>          dp[j+A[i]+B[i]] = true;<br>        }<br>      }<br>    }<br>    <br>    int min = Integer.MAX_VALUE;<br>    for(int i = 0;i &lt;= S+T;i++){<br>      if(dp[i]){<br>        min = Math.min(min, Math.max(Math.abs(i-S), Math.abs(-i+T)));<br>      }<br>    }<br>    return min;<br>  }<br><br>  void tr(Object... o) { System.out.println(Arrays.deepToString(o)); }<br>}<br></td>