            public class RaiseThisBarn {<br>  public int calc(String str) {<br>    char[] a = str.toCharArray();<br>    int cnt = 0, n = a.length;<br>    for (int i = 0; i &lt; n; i++)<br>      if (a[i] == 'c')<br>        cnt++;<br>    if (cnt % 2 != 0)<br>      return 0;<br>    int index = 0, i = 0;<br>    while (index &lt; cnt / 2)<br>      if (a[i++] == 'c')<br>        index++;<br>    int length = 0;<br>    for (int j = i; j &lt; n; j++) {<br>      if (a[j] == 'c')<br>        break;<br>      length++;<br>    }<br>    return length + (cnt == 0 ? -1 : 1);<br>  }<br>}<br></td>