            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class LittleElephantAndBallsAgain<br>{<br>  public int getNumber(string S)<br>  {<br>    int max=0;<br>    for(int i=0;i&lt;S.Length;i++)<br>    {<br>      char c=S[i];<br>      int count=0;<br>      for(int j=i;j&lt;S.Length;j++)<br>      {<br>        if(S[j]==c)count++;<br>        else break;<br>      }<br>      max=Math.Max(max,count);<br>    }<br>    return S.Length-max;<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>