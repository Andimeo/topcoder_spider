            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class LittleElephantAndIntervalsDiv1<br>{<br>  public long getNumber(int M, int[] L, int[] R)<br>  {<br>        int[] ballcol = new int[M];<br>        int N = L.Length;<br>        for (int i = 0; i &lt; N; i++)<br>        {<br>            for (int j = L[i]-1; j &lt;= R[i]-1; j++)<br>            {<br>                ballcol[j] = i + 1;<br>            }<br>        }<br> <br>        long res = 1;<br>        HashSet&lt;int&gt; h = new HashSet&lt;int&gt;();<br>        for (int i = 0; i &lt; M; i++)<br>        {<br>            int col = ballcol[i];<br>            if (col!=0 &amp;&amp; !h.Contains(col))<br>            {<br>                res *= 2;<br>                h.Add(col);<br>            }<br>        }<br> <br>        return res;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>