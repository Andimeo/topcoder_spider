            /**<br> * Built using CHelper plug-in<br> * Actual solution is at the top<br> */<br>public class LittleElephantAndIntervalsDiv1 {<br>    public long getNumber(int M, int[] L, int[] R) {<br>        int[] color = new int[M + 1];<br>        int n = L.length;<br>        for (int i = 0; i &lt; n; ++i)<br>            for (int j = L[i]; j &lt;= R[i]; ++j)<br>                color[j] = i + 1;<br>        boolean[] seen = new boolean[n + 1];<br>        for (int x : color) seen[x] = true;<br>        long res = 1;<br>        for (int i = 1; i &lt;= n; ++i) if (seen[i]) res *= 2;<br>        return res;<br>    }<br>}<br></td>