            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class LittleElephantAndIntervalsDiv2<br>{<br>  public int getNumber(int M, int[] L, int[] R)<br>  {<br>        int[] c = new int[M + 1];<br>        int n = L.Length;<br>        for (int i = 0; i &lt; n; i++)<br>            for (int j = L[i]; j &lt;= R[i]; j++)<br>                c[j] = i+1;<br>        int[] u = new int[n + 1];<br>        int cnt = 0;<br>        for (int i = 1; i &lt;= M; i++)<br>        {<br>            if (c[i] &gt; 0)<br>            {<br>                if (u[c[i]] == 0) cnt++;<br>                u[c[i]] = 1;<br>            }<br>        }<br>        int pow2 = (int)Math.Pow(2, cnt);<br>        return pow2;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>