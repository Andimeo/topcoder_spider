            import java.util.*;<br>import java.math.*;<br><br>public class LittleElephantAndIntervalsDiv2<br>{<br>  public static int getNumber(int M, int[] L, int[] R)<br>  {<br>    int[] array = new int[M];<br>    for (int i = 0; i &lt; L.length; i++)<br>    {<br>      for (int k = L[i] - 1; k &lt;= R[i] - 1; k++)<br>        array[k] = i + 1;<br>    }<br>    Set&lt;Integer&gt; found = new HashSet&lt;Integer&gt; ();<br>    for (int i = 0; i &lt; array.length; i++)<br>      found.add(array[i]);<br>    found.remove(0);<br>    int count = 1;<br>    for (int i = found.size(); i &gt; 0; i--)<br>      count *= 2;<br>    return count;<br>  }<br><br>}<br></td>