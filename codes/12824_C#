            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class TheShuttles<br>{<br>  public int getLeastCost(int[] cnt, int baseCost, int seatCost)<br>  {<br>    int ret = int.MaxValue;<br>    for (int i=1; i&lt;=100; i++)<br>      ret = Math.Min(ret, FindMin(cnt, baseCost, seatCost, i));<br> <br>    return ret;<br>  }<br> <br>  int FindMin(int[] cnt, int baseCost, int seatCost, int numSeats)<br>  {<br>    int ans = 0;<br>    for (int i = 0; i &lt; cnt.Length; i++)<br>      ans += (int)Math.Ceiling(1.0 * cnt[i] / numSeats) * (baseCost + numSeats * seatCost);<br> <br>    return ans;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.8 (beta) modified by pivanof!<br></td>