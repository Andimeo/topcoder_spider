            using System;<br>public class ColorfulRoad<br>{<br>  public int getMin(string road)<br>  {<br>    int n = road.Length;<br>    long [] price = new long[n];<br>    <br>    for (int i=0;i&lt;n-1;i++) price[i]=Int32.MaxValue;<br>    price[n-1] = 0;<br>    <br>    for (int i=n-1;i&gt;=1;i--)<br>    {<br>      int prev = getPrev(road[i]);<br>      for (int j=i-1;j&gt;=0;j--)<br>      {<br>        if (prev  == road[j])<br>        {<br>          long curprice = price[j];<br>          long newprice = price[i]+(i-j)*(i-j);<br>          if (newprice&lt;curprice) price[j] = newprice;<br>        }<br>      }<br>    }<br>    <br>    if (price[0]==Int32.MaxValue) return -1;<br>    else return (int)price[0];<br>    <br>    <br>  }<br>  <br>  public char getPrev(char a)<br>  {<br>    if (a=='B') return 'G';<br>    if (a=='G') return 'R';<br>    if (a=='R') return 'B';<br>    <br>    return 'x';<br>    <br>  }<br>}<br></td>