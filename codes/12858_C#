            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class WinterAndMandarins<br>{<br>  public int getNumber(int[] bags, int K)<br>  {<br>        Array.Sort(bags);<br>        int ans = int.MaxValue;<br>        for (int i = 0; i + K - 1 &lt; bags.Length; i++)<br>            ans = Math.Min(ans, bags[i + K - 1] - bags[i]);<br> <br>        return ans;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.8 (beta) modified by pivanof!<br></td>