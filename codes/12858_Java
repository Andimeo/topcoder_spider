            import java.util.Arrays;<br> <br>public class WinterAndMandarins {<br> <br>  public int getNumber(int[] bags, int K) {<br>    Arrays.sort(bags);<br>    int min=Integer.MAX_VALUE;<br>    for(int i=0;i+K-1&lt;bags.length;i++){<br>      int diff=bags[i+K-1]-bags[i];<br>      min=Math.min(diff,min);<br>    }<br>    return min;<br>  }<br> <br>  public static void main(String[] a){<br>    long start = System.nanoTime();<br>    WinterAndMandarins obj = new WinterAndMandarins();<br>    int res = obj.getNumber(new int[]{10, 20, 30},2);<br>    System.out.println("ret: "+res);<br>    System.out.println((System.nanoTime() - start)/1000000);<br>  }<br>}<br></td>