            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class WinterAndCandies<br>{<br>  public int getNumber(int[] type)<br>  {<br>        int[] f = new int[51];<br>        foreach (var e in type)<br>            f[e]++;<br> <br>        int ans = 0;<br>        int product = 1;<br>        for (int i=1; i&lt;51; i++)<br>        {<br>            if (f[i] == 0) break;<br> <br>            product *= f[i];<br>            ans += product;<br>        }<br> <br>        return ans;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.8 (beta) modified by pivanof!<br></td>