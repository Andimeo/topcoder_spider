            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class ErasingCharacters<br>{<br>  public string simulate(string s)<br>  {<br>    int n = s.Length;<br>    if (n &lt; 2)<br>      return s;<br>      <br>    for (int i = 0;i &lt; n - 1;i++)<br>      if (s[i] == s[i+1])<br>        return simulate(s.Remove(i, 2));<br>    return s;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>