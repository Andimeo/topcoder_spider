            using System;<br>using System.Collections;<br>using System.Text;<br><br>public class Spirals {<br>  <br>  int curValue;<br>  <br>  int[] dx = new int[] {1, 0, -1,  0};<br>  int[] dy = new int[] {0, 1,  0, -1};<br>  <br>  char getNextValue()<br>  {<br>    int result = curValue;<br>    curValue = (curValue + 1) % 10;<br>    return (char) (result + '0');<br>  }<br>  <br>    public string[] draw(int width, int height, int startx, int starty) {<br>      curValue = 0;<br>      <br>        char[,] table = new char[width, height];<br>      <br>      for (int x = 0; x &lt; width; x++)<br>        for (int y = 0; y &lt; height; y++)<br>          table[x, y] = '.';<br>      <br>      int curx = startx;<br>      int cury = starty;<br><br>      int side = 1;<br>      int counter = 0;<br>      <br>      int dir = 0;<br><br>      table[curx, cury] = getNextValue();<br>      <br>      for (;;)<br>      {<br>        curx += dx[dir];<br>        cury += dy[dir];<br>        <br>        if (curx &lt; 0 || curx &gt;= width || cury &lt; 0 || cury &gt;= height)<br>          break;<br>        <br>        table[curx, cury] = getNextValue();<br>        <br>        counter++;<br>        if (counter == side)<br>        {<br>          if (dir == 1 || dir == 3)<br>            side++;<br>          dir = (dir + 1) % 4;<br>          counter = 0;<br>        }<br>      }<br>      <br>      string[] result = new string[height];<br>      for (int i = 0; i &lt; height; i++)<br>      {<br>        StringBuilder builder = new StringBuilder();<br>        for (int j = 0; j &lt; width; j++)<br>          builder.Append(table[j, i]);<br>        result[i] = builder.ToString();<br>      }<br>      <br>      return result;<br>    }<br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>