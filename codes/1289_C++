            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br><br>using namespace std;<br><br><br>const int dr[4] = { 0, 1, 0, -1 };<br>const int dc[4] = { 1, 0, -1, 0 }; <br><br>struct Spirals {<br>   vector &lt;string&gt; draw( int width, int height, int startx, int starty ) {<br>      vector&lt;string&gt; a( height, string( width, '.' ) );<br><br>      int r = starty;<br>      int c = startx;<br>      int d = 0;<br>      int i = 0;<br>      int k = 1;<br>      int t = 0;<br>      int num = 0;<br>      while( r &gt;= 0 &amp;&amp; r &lt; height &amp;&amp; c &gt;= 0 &amp;&amp; c &lt; width ) {<br>         a[r][c] = num+'0';<br>         num = (num+1)%10;<br>         <br>         r += dr[d];<br>         c += dc[d];<br>         <br>         if( ++i == k ) {<br>            i = 0;<br>            d = (d+1)%4;<br>            if( ++t == 2 ) {<br>               t = 0;<br>               ++k;<br>            }<br>         }<br>      }<br><br>      return a;<br>   }<br><br><br><br><br><br><br>   <br> <br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by moj 3.0 beta 7 [modified TZTester]<br>// Powered by CodeProcessor<br></td>