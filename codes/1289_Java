            import java.util.*;<br>public class Spirals {<br>  char[][] c;<br>  int cx, cy;<br>  char cc;<br>  <br>  public boolean move(int dx, int dy, int l) {<br>    for (int i=0; i &lt; l; i++) {<br>      if (cx &lt; 0 || cx &gt;= c[0].length ||<br>        cy &lt; 0 || cy &gt;= c.length) return false;<br>      c[cy][cx] = cc;<br>      cx += dx; cy += dy;<br>      if (cc == '9') cc = '0'; else cc++;<br>    }<br>    return true;<br>  }<br>  <br>    public String[] draw(int w, int h, int sx, int sy) {<br>        String[] res = new String[h];<br>        c = new char[h][w];<br>        <br>        for (int i=0; i &lt; h; i++)<br>          for (int j=0; j &lt; w; j++)<br>            c[i][j] = '.';<br>        <br>        cx = sx; cy = sy; cc = '0';<br>        <br>        for (int l=1; l &lt;= 100; l += 2) {<br>          if (!move(1, 0, l)) break;<br>          if (!move(0, 1, l)) break;<br>          if (!move(-1, 0, l+1)) break;<br>          if (!move(0, -1, l+1)) break;          <br>        }       <br>        <br>        for (int i=0; i &lt; h; i++) {<br>          res[i] = "";<br>          for (int j=0; j &lt; w; j++)<br>            res[i] += c[i][j];<br>        }<br>        return res;<br>    }<br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>