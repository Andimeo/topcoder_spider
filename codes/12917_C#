            using System;<br>using System.Collections.Generic;<br>using System.Linq;<br><br>public class PowerOfThree<br>{<br>    public string ableToGet(int x, int y)<br>    {<br>        x = Math.Abs(x);<br>        y = Math.Abs(y);<br>        while (x&gt;0||y&gt;0)<br>        {<br>            if (x%3==y%3)<br>            {<br>                return "Impossible";<br>            }<br>            if (x%3==0)<br>            {<br>                if (y%3==1)<br>                {<br>                    x /= 3;<br>                    y = (y - 1)/3;<br>                }<br>                else if (y%3==2)<br>                {<br>                    x /= 3;<br>                    y = (y + 1) / 3;<br>                }<br>            }<br>            else if (y%3==0)<br>            {<br>                if (x%3==1)<br>                {<br>                    x = (x - 1)/3;<br>                    y = y/3;<br>                }<br>                else if (x%3==2)<br>                {<br>                    x = (x + 1) / 3;<br>                    y = y / 3;<br>                }<br>            }<br>            else<br>            {<br>                return "Impossible";<br>            }<br>        }<br>        return "Possible";<br>    }<br>}<br></td>