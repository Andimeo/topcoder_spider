            using System;<br>using System.IO;<br>using System.Collections.Generic;<br>using System.Text;<br> <br>public class MiddleCode {<br>  public string encode(string s) {<br>        StringBuilder o = new StringBuilder(s);<br>        StringBuilder r = new StringBuilder(s.Length);<br> <br>      while (o.Length &gt; 0)<br>        {<br>            int mid = o.Length / 2;<br> <br>          if (o.Length % 2 == 0)<br>          {<br>              if (o[mid-1] &lt; o[mid])<br>              {<br>                  r.Append(o[mid - 1]);<br>                  o.Remove(mid - 1, 1);<br>              }<br>              else<br>              {<br>                  r.Append(o[mid]);<br>                  o.Remove(mid, 1);<br>              }<br>          }<br>          else<br>          {<br>              r.Append(o[mid]);<br>              o.Remove(mid, 1);<br>          }<br>      }<br> <br>    return r.ToString();<br>  }<br> <br>}<br>// Powered by Greed 2.0-beta<br></td>