            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br><br>using namespace std;<br><br>struct MiddleCode {<br>  string encode (string s) {<br>    string res;<br>    while (!s.empty()) {<br>      if (s.size() == 2) {<br>        char q = min (s[0], s[1]), w = max (s[0], s[1]);<br>        res += (q);<br>        res += (w);<br>        s.erase (0, 2);<br>        break;<br>      }<br>      if (s.size() == 1) {<br>        res += s[0];<br>        s.erase (0, 1);<br>        break;<br>      }<br>      if (s.size() % 2 == 1) {<br>        res += s[s.size() / 2];<br>        s.erase (s.size() / 2, 1);<br>      } else {<br>        char q = min (s[s.size() / 2], s[s.size() / 2 - 1]), w = max (s[s.size() / 2], s[s.size() / 2 - 1]);<br>        res += q;<br>        res += w;<br>        s.erase (s.size() / 2 - 1, 2);<br>      }<br>    }<br>    return res;<br>  }<br>};<br></td>