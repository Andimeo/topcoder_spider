            /**<br> * Built using CHelper plug-in<br> * Actual solution is at the top<br> * @author nasko<br> */<br>public class MiddleCode {<br>    public String encode(String s) {<br> <br>        String t = "";<br>        StringBuilder sb = new StringBuilder(s);<br>        while(sb.length() &gt; 0) {<br> <br>            if(sb.length() % 2 !=0) {<br>                char c = sb.charAt(sb.length()/2);<br>                t += c;<br>                sb.deleteCharAt(sb.length()/2);<br>            } else {<br>                char c1 = sb.charAt(sb.length()/2);<br>                char c2 = sb.charAt(sb.length()/2 - 1);<br>                if(c1 &lt;= c2) {<br>                    sb.deleteCharAt(sb.length()/2);<br>                    t += c1;<br>                } else {<br>                    t += c2;<br>                    sb.deleteCharAt(sb.length()/2-1);<br>                }<br>            }<br>        }<br>        return t;<br> <br>    }<br>}<br></td>