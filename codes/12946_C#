            using System;<br>using System.Collections.Generic;<br>using System.Linq;<br><br>public class MaxMinTreeGame<br>{<br>    public int findend(int[] edges, int[] costs)<br>    {<br>        int N = costs.Length;<br>        int[] deg = new int[N];<br>        for (int i = 0; i &lt; edges.Length; i++)<br>        {<br>            deg[i + 1]++;<br>            deg[edges[i]]++;<br>        }<br>        return costs.Select((i, j) =&gt; new {i, j}).Where(ob =&gt; deg[ob.j] == 1).Max(ob =&gt; ob.i);<br>    }<br>}<br></td>