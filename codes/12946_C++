            #include &lt;cstdio&gt;<br>#include &lt;iostream&gt;<br>#include &lt;cstring&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;cmath&gt;<br>#include &lt;vector&gt;<br>#include &lt;queue&gt;<br>#include &lt;string&gt;<br>using namespace std ;<br> <br><br>class MaxMinTreeGame<br>{<br> public:<br> int findend(vector &lt;int&gt; edges, vector &lt;int&gt; costs)<br> {<br>  int n = costs.size();<br>  int ans = 0;<br>  int a[55];<br>  memset(a,0,sizeof(a));<br>  for(int i = 0;i &lt; n-1;i++)<br>  {<br>    a[i+1]++;<br>    a[edges[i]]++;<br>  }<br>  for(int i = 0;i &lt; n;i++)<br>    if(a[i] == 1)<br>      ans = max(ans,costs[i]);<br>  return ans;<br> }<br> <br> <br><br>};<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>