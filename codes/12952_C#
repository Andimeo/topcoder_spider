            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class PowerOfThreeEasy<br>{<br>  public string ableToGet(int x, int y)<br>  {<br>      var x3 = new List&lt;int&gt;();<br>      var y3 = new List&lt;int&gt;();<br>      To3(x, x3);<br>      To3(y, y3);<br> <br>      return Compare(x3, y3) ? "Possible" : "Impossible";<br>  }<br> <br>    private bool Compare(List&lt;int&gt; x, List&lt;int&gt; y)<br>    {<br>        for (int i = 0; i &lt; Math.Max(x.Count, y.Count); i++)<br>        {<br>            var dx = x.Count &gt; i ? x[i] : 0;<br>            var dy = y.Count &gt; i ? y[i] : 0;<br>            if (dx + dy != 1)<br>            {<br>                return false;<br>            }<br>        }<br>        return true;<br>    }<br> <br>    private void To3(int x, List&lt;int&gt; acc)<br>    {<br>        if (x == 0)<br>        {<br>            return;<br>        }<br>        acc.Add(x % 3);<br>        To3(x / 3, acc);<br>    }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>