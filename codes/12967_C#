            using System;<br>using System.IO;<br>using System.Collections.Generic;<br>using System.Text;<br> <br>public class PalindromicSubstringsDiv2 {<br>  public int count(string[] S1, string[] S2) {<br>        StringBuilder a = new StringBuilder();<br>        StringBuilder b = new StringBuilder();<br>        StringBuilder s = new StringBuilder();<br> <br>      foreach (string s1 in S1)<br>      {<br>          a.Append(s1);<br>      }<br>      foreach (string s2 in S2)<br>      {<br>          b.Append(s2);<br>      }<br> <br>      s.Append(a);<br>      s.Append(b);<br> <br>      string str = s.ToString();<br> <br>      int num = 0;<br>        for (int c = 0; c &lt; str.Length; c++) // The center of the substring.<br>        {<br> <br>            int lo = c;<br>            int hi = c;<br>            while (lo &gt;= 0 &amp;&amp; hi &lt; str.Length &amp;&amp; str[lo] == str[hi])<br>            {<br>                num++;<br>                lo--;<br>                hi++;<br>            }<br> <br>            lo = c;<br>            hi = c + 1;<br>            while (lo &gt;= 0 &amp;&amp; hi &lt; str.Length &amp;&amp; str[lo] == str[hi])<br>            {<br>                num++;<br>                lo--;<br>                hi++;<br>            }<br>        }<br> <br>      return num;<br>  }<br> <br>}<br>// Powered by Greed 2.0-beta<br></td>