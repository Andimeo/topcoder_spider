            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class EllysScrabble<br>{<br>  public string getMin(string letters, int maxDistance)<br>  {<br>    int N = letters.Length;<br>    bool[] used = new bool[N];<br>    char[] res = new char[N];<br>    for (int i = 0; i &lt; N; i++)<br>    {<br>      if (i &gt;= maxDistance &amp;&amp; !used[i - maxDistance])<br>      {<br>        used[i - maxDistance] = true;<br>        res[i] = letters[i - maxDistance];<br>        continue;<br>      }<br>      int x = -1;<br>      for (int j = Math.Max(0, i - maxDistance); j &lt; N &amp;&amp; j &lt;= i + maxDistance; j++)<br>      {<br>        if (used[j]) continue;<br>        else if (x == -1) x = j;<br>        else if (letters[j] &lt; letters[x]) x = j;<br>      }<br>      used[x] = true;<br>      res[i] = letters[x];<br>    }<br>    return new string(res);<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>