            #include &lt;vector&gt;<br>using namespace std;<br>bool ok(int x, vector&lt;int&gt; a, vector&lt;int&gt; b) {<br>  if (x &lt; 1 || x &gt; 1000000000) return false;<br>  int s = int(a.size());<br>  for(int i = 0; i &lt; s; ++i) {<br>    if (a[i] + b[i] == x || a[i] - b[i] == x) continue;<br>    else return false;<br>  }<br>  return true;<br> <br>}<br>class EllysNumberGuessing {<br>public: int getNumber(vector&lt;int&gt; a, vector&lt;int&gt; b) {<br>int c1 = a[0] - b[0];<br>int c2 = a[0] + b[0];<br>if (ok(c1, a, b) &amp;&amp; ok(c2, a, b)) {<br>return -1;<br>} else if (ok(c1, a, b)) return c1;<br>else if (ok(c2, a, b)) return c2;<br>else return -2;<br>}<br>};<br></td>