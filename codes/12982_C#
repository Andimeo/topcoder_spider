            using System;<br><br>class MinimumSquareEasy {  <br><br>  public long minArea(int[] x, int[] y)<br>    {<br>      int n = x.Length;<br>      long res = long.MaxValue;<br>      for(int i = 0; i &lt; n; ++i)<br>      {<br>        for(int j = i + 1; j &lt; n; ++j)<br>        {<br>          int t;<br>          if (i == 0)<br>          {<br>            if (j == 1) t = 2;<br>            else t = 1;<br>          }<br>          else t = 0;<br>          int minx = x[t], miny = y[t], maxx = x[t], maxy = y[t];<br>          for(int k = 0; k &lt; n; ++k)<br>          {<br>            if (k == i || k == j) continue;<br>            minx = Math.Min(x[k], minx);<br>            miny = Math.Min(y[k], miny);<br>            maxx = Math.Max(x[k], maxx);<br>            maxy = Math.Max(y[k], maxy);<br>          }<br>          t = Math.Max(maxx - minx, maxy - miny) + 2;<br>          res = Math.Min(res, Convert.ToInt64(t) * t);<br>        }<br>      }<br>      return res;<br>    }<br>    }<br></td>