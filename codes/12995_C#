            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class PackingBallsDiv2<br>{<br>  public int minPacks(int R, int G, int B)<br>  {<br>    int boxes = 0;<br>            while (R &gt; 3)<br>            {<br>                R -= 3;<br>                boxes++;<br>            }<br>            while (G &gt; 3)<br>            {<br>                G -= 3;<br>                boxes++;<br>            }<br>            while (B &gt; 3)<br>            {<br>                B -= 3;<br>                boxes++;<br>            }<br>            while (R &gt; 0 || G &gt; 0 || B &gt; 0)<br>            {<br>                int count = 0;<br>                if (R &gt; 0)<br>                {<br>                    R--; <br>                    count++;<br>                }<br>                if (G &gt; 0)<br>                {<br>                    G--;<br>                    count++;<br>                }<br>                if (B &gt; 0)<br>                {<br>                    B--;<br>                    count++;<br>                }<br>                if (count == 1)<br>                {<br>                    if (R &gt; 0)<br>                    {<br>                        R--;<br>                        count++;<br>                    }<br>                    if (G &gt; 0)<br>                    {<br>                        G--;<br>                        count++;<br>                    }<br>                    if (B &gt; 0)<br>                    {<br>                        B--;<br>                        count++;<br>                    }<br>                }<br>                boxes++;<br>            }<br>            return boxes;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>