            #include &lt;iostream&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;map&gt;<br>#include &lt;list&gt;<br>#include &lt;set&gt;<br>#include &lt;queue&gt;<br>#include &lt;stack&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstring&gt;<br>#include &lt;bits/stdc++.h&gt;<br>#include &lt;cmath&gt;<br>#include &lt;climits&gt;<br>#define inf 99999<br>#define fr(i ,a ,b) for(int i = a; i &lt; b; i++)<br>#define rev(i, a, b) for(int i = b; i &gt;= a; i--)<br>#define fre(i, a, b) for(int i = a; i &lt;= b; i++)<br>#define inp(n) scanf("%d", &amp;n)<br>#define inpf(n) scanf("%f", &amp;n)<br>#define inpl(n) scanf("%lld", &amp;n)<br>#define out(n) printf("%d\n", n)<br>#define outl(n) printf("%lld\n", n)<br>#define ll long long int<br>#define sz size()<br>using namespace std;<br>class PackingBallsDiv2 {<br>  public:<br><br>    int check(int R, int G, int B, int t, int u, int v, int result) {<br>        result = result + (R / 3 + G / 3 + B / 3);<br>        if (t == 0 &amp;&amp; u == 0 &amp;&amp; v == 0) {<br>                return result;<br>        }<br><br>        if ((t == 0 &amp;&amp; u == 0) || (u == 0 &amp;&amp; v == 0) || (t == 0 &amp;&amp; v == 0)) {<br>                return result + 1;<br>        }<br>        if ((t == 0 &amp;&amp; u == 1 &amp;&amp; v == 1) || (t == 1 &amp;&amp; u == 1 &amp;&amp; v == 0) ||(t == 1 &amp;&amp; u == 0 &amp;&amp; v == 1)) {<br>                return result + 1;<br>        }<br>        else {<br>            return result + 2;<br>        }<br>    }<br>  int minPacks(int R, int G, int B) {<br>      int m = (R &lt; G)? R : G;<br>        m = (m &lt; B)? m : B;<br>        int result = m;<br>        int t, u, v;<br>        R = R - m;<br>        G = G - m;<br>        B = B - m;<br>        t = R % 3;<br>        u = G % 3;<br>        v = B % 3;<br>        return check(R, G, B,t, u , v, result);<br>  }<br><br>};<br></td>