            import java.util.*;<br> <br>public class PackingBallsDiv2 {<br>    int[][][] memo = new int[101][101][101];<br> <br>    int f(int r, int g, int b) {<br>        r = Math.max(r, 0);<br>        g = Math.max(g, 0);<br>        b = Math.max(b, 0);<br>        if (memo[r][g][b] &gt; 0) return memo[r][g][b];<br>        if (r + g + b == 0) return 0;<br>        int res = 1 + f(r - 1, g - 1, b - 1);<br>        if (r &gt; 0)<br>            res = Math.min(res, 1 + f(r - 3, g, b));<br>        if (g &gt; 0)<br>            res = Math.min(res, 1 + f(r, g - 3, b));<br>        if (b &gt; 0)<br>            res = Math.min(res, 1 + f(r, g, b - 3));<br>        memo[r][g][b] = res;<br>        return res;<br>    }<br> <br>    public int minPacks(int R, int G, int B) {<br>        for (int i = 0; i &lt; 101; ++i)<br>            for (int j = 0; j &lt; 101; ++j)<br>                for (int k = 0; k &lt; 101; ++k)<br>                    memo[i][j][k] = -1;<br> <br>        return f(R, G, B);<br>    }<br>}<br></td>