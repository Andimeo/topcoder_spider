            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class MagicalStringDiv1<br>{<br>  public int getLongest(String S)<br>  {<br>    final int n = S.length();<br>    char a[] = S.toCharArray();<br>    <br>    for ( int k = n; k &gt;= 0; --k ) {<br>      int cnt = 0;<br>      for ( int i = 0; i &lt; n; ++i )<br>        if ( cnt &lt; k &amp;&amp; a[i] == '&gt;' )<br>          cnt++;<br>        else if ( cnt &gt;= k &amp;&amp; a[i] == '&lt;' )<br>          cnt++;<br>      if ( cnt &gt;= 2*k )<br>        return 2*k;<br>    }<br>    return 0;<br>  }<br>  <br>  void println ( Object o ) { System.out.println(o); }<br>  void print ( Object o ) { System.out.print(o); }<br>  void println ( ) { System.out.println(); }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>