            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class TaroFriends {<br>    public int getNumber(int[] coordinates, int X)<br>    {<br>        Array.Sort(coordinates);<br>        long ret = int.MaxValue;<br>        for (int i = 0; i &lt;= coordinates.Length; i++)<br>        {<br>            List&lt;long&gt; l = new List&lt;long&gt;();<br>            for (int j = 0; j &lt; coordinates.Length; j++)<br>            {<br>                if (j &gt;= i) l.Add((long)coordinates[j] - X);<br>                else l.Add((long)coordinates[j] + X);<br>            }<br>            long[] ar = l.ToArray();<br>            Array.Sort(ar);<br>            ret = Math.Min(ret, ar[ar.Length - 1] - ar[0]);<br><br>        }<br><br>        return (int)ret;<br>    }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] Modified for C# by ysn<br>// Powered by CodeProcessor<br></td>