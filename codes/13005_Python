            import math,string,itertools,fractions,heapq,collections,re,array,bisect,random<br> <br>class TaroFriends:<br>    def getNumber(self, coordinates, X):<br>        c = [x for x in coordinates]<br>        c.sort()<br>        n = len(c)<br>        res = c[n - 1] - c[0]<br>        for i in range(n - 1):<br>            ll = min(c[0] + X, c[i + 1] - X)<br>            rr = max(c[n - 1] - X, c[i] + X)<br>            res = min(res, rr - ll)<br>        return res<br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br>#Powered by KawigiEdit-pf 2.3.0!<br></td>