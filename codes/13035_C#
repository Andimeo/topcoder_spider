            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class TheMatrix {<br>    public int MaxArea(string[] board)<br>    {<br>        int h = board.Length;<br>        int w = board[0].Length;<br><br>        int[,] count = new int[h, w];<br>        for (int i = 0; i &lt; h; i++)<br>        {<br>            count[i, w - 1] = 1;<br>            for (int j = w - 2; j &gt;= 0; j--)<br>            {<br>                if (board[i][j] != board[i][j + 1]) count[i, j] = count[i, j + 1] + 1;<br>                else count[i, j] = 1;<br>            }<br>        }<br><br>        int ret = 0;<br><br>        for (int i = 0; i &lt; h; i++)<br>        {<br>            for (int j = 0; j &lt; w; j++)<br>            {<br>                int maxlen = count[i, j];<br>                ret = Math.Max(ret, maxlen);<br><br>                for (int k = i + 1; k &lt; h; k++)<br>                {<br>                    if (board[k][j] == board[k - 1][j]) break;<br>                    maxlen = Math.Min(maxlen, count[k, j]);<br>                    ret = Math.Max(ret, maxlen * (k - i + 1));<br>                }<br>            }<br>        }<br><br>        return ret;<br>    }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] Modified for C# by ysn<br>// Powered by CodeProcessor<br></td>