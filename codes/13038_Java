            public class InterestingNumber {<br><br>  String not = "Not interesting";<br>  String yes = "Interesting";<br>  <br>  public String isInteresting(String x) {<br>    int[] count = new int[10];<br>    <br>    for(int i=0; i&lt;x.length(); i++) {<br>      count[x.charAt(i)-'0']++;<br>    }<br>    <br>    for(int c: count) {<br>      if(c!=0 &amp;&amp; c!=2) {<br>        return not;<br>      }<br>    }<br>    <br>    boolean[] checked = new boolean[10];<br>    <br>    for(int i=0; i&lt;x.length(); i++) {<br>      if(!checked[x.charAt(i)-'0']) {<br>        checked[x.charAt(i)-'0'] = true;<br>        int num = x.charAt(i)-'0';<br>        if(i+1+num&gt;=x.length() || x.charAt(i+1+num)!=x.charAt(i)) {<br>          return not;<br>        }<br>      }<br>    }<br>    <br>    return yes;<br>  }<br><br>}<br></td>