            #include&lt;iostream&gt;<br>using namespace std;<br><br>class EmoticonsDiv2<br>{public:<br>  bool isprime(int a)<br>  {<br>    if(a&lt;2)return false;<br>    for(int i=2;i*i&lt;=a;i++)<br>    if(a%i==0)return false;<br>    return true;<br>  }<br>  int printSmiles(int smiles)<br>  {  <br>    int ans=0;<br>    if(isprime(smiles)==true)return smiles;<br>    <br>    for(int i=2;i&lt;=smiles;i++)<br>    {<br>      while(smiles%i==0)<br>      {<br>        ans+=i;<br>        smiles=smiles/i;<br>      }<br>    }<br>    return ans;<br>    <br>    <br>  }<br>};<br></td>