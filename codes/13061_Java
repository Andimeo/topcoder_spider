            import java.util.Arrays;<br><br>public class ColorfulCoins {<br><br>    final long MAX = (long) 1e9 + 10;<br><br>    long pow(long x, long y) {<br>        long res = 1;<br>        for (int i = 0; i &lt; y; i++) {<br>            res = res * x;<br>            res = Math.min(res, MAX);<br>            if (res == MAX)<br>                return res;<br>        }<br>        return res;<br>    }<br><br>    public int minQueries(long[] values) {<br>        int n = values.length - 1;<br>        if (n == 0)<br>            return 1;<br>        long[] mul = new long[n];<br>        for (int i = 0; i &lt; n; i++)<br>            mul[i] = values[i + 1] / values[i];<br>        Arrays.sort(mul);<br>        int l = 0, r = 10;<br>        while (r - l &gt; 1) {<br>            int m = (l + r) &gt;&gt; 1;<br>            long[] cnt = new long[n];<br>            for (int i = 0; i &lt; n; i++)<br>                cnt[i] = pow(mul[i], m);<br>            boolean ok = true;<br>            for (int i = 0; i &lt; n; i++)<br>                if (cnt[i] - 1 &lt; i + 1)<br>                    ok = false;<br>            if (ok) {<br>                r = m;<br>            } else {<br>                l = m;<br>            }<br>        }<br>        return r;<br>    }<br><br>}<br></td>