            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;algorithm&gt;<br>using namespace std;<br><br>class TorusSailingEasy {<br>public:<br>  double expectedTime(int N, int M, int goalX, int goalY) {<br>    int x=0, y=0, pos=0, neg=0;<br>    if (goalX == 0 &amp;&amp; goalY ==0)<br>      return 0;<br>    // try 1,1:<br>    while (true) {<br>      x = (x+1)%N; y = (y+1)%M; pos++;<br>      if (x==0 &amp;&amp; y==0)<br>        return -1;<br>      if (x==goalX &amp;&amp; y==goalY)<br>        break;<br>    }<br>    // try -1,-1<br>    x=0;y=0;<br>    while (true) {<br>      x = (x-1+N)%N; y = (y-1+M)%M; neg++;<br>      if (x==0 &amp;&amp; y==0)<br>        return -1;<br>      if (x==goalX &amp;&amp; y==goalY)<br>        break;<br>    }<br>    return pos*neg;<br>  }<br>};<br></td>