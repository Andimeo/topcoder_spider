            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class TorusSailingEasy<br>{<br>  public double expectedTime(int N, int M, int goalX, int goalY)<br>  {<br>    int x = 0, y = 0;<br>    int cnt = 0;<br>    int goalValue = -1; <br>    <br>    do {<br>      cnt++;<br>      x = (x + 1) % N;<br>      y = (y + 1) % M;<br>      <br>      if (goalX == x &amp;&amp; goalY == y)<br>        goalValue = cnt;<br>        <br>    } while (x != 0 || y != 0);<br>    <br>    if (goalValue == -1)<br>      return -1;<br>    else {<br>      return (cnt - goalValue) * goalValue;<br>    }<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>