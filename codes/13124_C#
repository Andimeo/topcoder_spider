            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class WakingUp<br>{<br>  public int maxSleepiness(int[] period, int[] start, int[] volume, int D)<br>  {<br>        int steps = 5040;<br>        int minSleepiness = 0;<br>        int s = 0;<br>        int N = period.Length;<br> <br>        for (int i = 0; i &lt; N; i++)<br>        {<br>            if (period[i] == start[i]) start[i] = 0;<br>        }<br>        for (int t = 1; t &lt;= steps; t++)<br>        {<br>            s += D;<br>            for (int i = 0; i &lt; N; i++)<br>            {<br>                if (t % period[i] == start[i])<br>                {<br>                    s -= volume[i];<br>                }<br>            }<br>            minSleepiness = Math.Min(minSleepiness, s);<br>        }<br> <br>        for (int t = 1; t &lt;= steps; t++)<br>        {<br>            s += D;<br>            for (int i = 0; i &lt; N; i++)<br>            {<br>                if (t % period[i] == start[i])<br>                {<br>                    s -= volume[i];<br>                }<br>            }<br>            if (s &lt; minSleepiness) return -1;<br>        }<br> <br>        return -minSleepiness;<br> <br>    }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>