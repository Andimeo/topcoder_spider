            #include &lt;bits/stdc++.h&gt;<br> <br>using namespace std;<br> <br>typedef vector&lt;int&gt; vi;<br>typedef vector&lt;string&gt; vs;<br>typedef long long ll;<br>typedef complex&lt;double&gt; pnt;<br>typedef pair&lt;int, int&gt; pii;<br> <br>#define RA(x) begin(x), end(x)<br>#define SZ(x) ((int) (x).size())<br> <br>template&lt;class T&gt; T gcd(T a, T b) { return b ? gcd(b, a % b) : a; }<br> <br>class WakingUp<br>{<br>public:<br>    int maxSleepiness(vector &lt;int&gt; P, vector &lt;int&gt; S, vector &lt;int&gt; V, int D)<br>    {<br>        int cur = 0;<br>        int low = 0;<br>        int N = SZ(P);<br>        int period = 1;<br>        for (int i = 0; i &lt; N; i++)<br>            period = period / gcd(P[i], period) * P[i];<br> <br>        for (int i = 1; i &lt;= period; i++)<br>        {<br>            cur += D;<br>            for (int j = 0; j &lt; N; j++)<br>                if (i % P[j] == S[j] % P[j])<br>                    cur -= V[j];<br>            low = min(low, cur);<br>        }<br>        if (cur &lt; 0)<br>            return -1;<br>        else<br>            return -low;<br>    }<br>};<br> <br> <br> <br>// Powered by FileEdit<br></td>