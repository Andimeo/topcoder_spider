            public class WakingUp {<br>  <br>  static final int LCM = (2 * 2 * 2) * (3 * 3) * 5 * 7;<br><br>  public int maxSleepiness(int[] period, int[] start, int[] volume, int D) {<br>    int n = period.length;<br>    int delta = 0;<br>    for (int i = 0; i &lt; n; i++) {<br>      delta += (LCM / period[i]) * volume[i];<br>    }<br>    if (delta &gt; LCM * D) {<br>      return -1;<br>    }<br>    <br>    int curDecr = 0;<br>    int maxDecr = 0;<br>    for (int i = 1; i &lt;= LCM; i++) {<br>      curDecr -= D;<br>      for (int j = 0; j &lt; n; j++) {<br>        if ((i - start[j]) % period[j] == 0) {<br>          curDecr += volume[j];<br>        }<br>      }<br>      maxDecr = Math.max(maxDecr, curDecr);<br>    }<br>    <br>    return maxDecr;<br>  }<br><br>}<br></td>