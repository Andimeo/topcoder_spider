            # Single Round Match 616 - WakingUp (250 points) by vexorian :<br> <br>def gcd(a,b):<br>    while b != 0:<br>        (a,b) = (b, a%b)<br>    return a<br>    <br>def lcm(x,y):<br>    return x * (y / gcd(x,y))<br> <br>class WakingUp:<br> def maxSleepiness(self, period, start, volume, D):<br>    # LCM is at most 2520<br>    x = reduce(lcm, period)<br>    sleep = 0<br>    alarms = zip(period, start, volume)<br>    n = 10**10<br>    for i in xrange(1, x+1):<br>        n = min(n, sleep)<br>        sleep += D<br>        n = min(n, sleep)<br>        for (p,s,v) in alarms:<br>            if i % p == s % p:<br>                sleep -= v<br>                n = min(n, sleep)<br>    if sleep &lt; 0:<br>        return -1<br>                <br>    return -n<br> <br># Powered by Greed 2.0-RC-vex<br></td>