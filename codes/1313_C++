            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;set&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br> <br>using namespace std;<br> <br>typedef vector &lt;int&gt; VI;<br>typedef vector &lt;string&gt; VS;<br> <br>class FormatAmt<br>{<br>public:<br>  string amount(int dollars, int cents)<br>  {<br>    string r;<br>    if (dollars==0)<br>      r="0";<br>    else<br>    {<br>      ostringstream os;<br>      os &lt;&lt; dollars;<br>      string s=os.str();<br>      for (int i=0; i&lt;s.size(); i++)<br>      {<br>        r=s[s.size()-i-1]+r;<br>        if (i % 3 == 2 &amp;&amp; i&lt;s.size()-1)<br>          r=","+r;<br>      }<br>    }<br>    r=r+".";<br>    <br>    ostringstream os2;<br>    os2 &lt;&lt; cents;<br>    if (cents&lt;10)<br>      r=r+"0";<br>    r=r+os2.str();<br> <br>    r="$"+r;<br>    return r;<br>  }<br>};<br></td>