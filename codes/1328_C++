            #line 2 "LongestRun.cpp"<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;numeric&gt;<br>#include &lt;set&gt;<br>#include &lt;map&gt;<br>using namespace std;<br><br>class LongestRun <br>{<br>  public:<br>    int m(string s,char c)<br>    {<br>      for(int i=0;i&lt;s.size(); i++)<br>        if(s[i] != c)<br>          return 0;<br>      return s.size();<br>    }<br>    int b(string s,char c)<br>    {<br>      for(int i=0;i&lt;s.size(); i++)<br>        if(s[i] != c)<br>          return i;<br>      return s.size();<br>    }<br>    int e(string s,char c)<br>    {<br>      reverse(s.begin(),s.end());<br>      for(int i=0;i&lt;s.size(); i++)<br>        if(s[i] != c)<br>          return i;<br>      return s.size();<br>    }<br>  int runLength(vector &lt;string&gt; collection) <br>  {<br>    int best=0;<br>    for(int i=0;i&lt;collection.size();i++)<br>    {<br>      for(char c='A';c&lt;='Z';c++)<br>      {<br>        int count=0;<br>        for(int j=0;j&lt;collection[i].size();j++)<br>        {<br>          if(count &gt; best) best=count;<br>          if(collection[i][j]==c) count++;<br>          else count=0;<br>        }<br>        <br>        if(count &gt; best) best=count;<br>      }<br>    }<br>    for(char c='A';c&lt;='Z';c++)<br>    {<br>      <br>      int begin1=0,begin2=0;<br>      int bi=-1,ei=-1;<br>      int end1=0,end2=0;<br>      int mid=0;<br>      for(int i=0;i&lt;collection.size();i++)<br>      {<br>        int mm=m(collection[i],c);<br>        int bb= b(collection[i],c);<br>        int ee = e(collection[i],c);<br>        if(mm&gt;0)<br>        {<br>          mid += mm;<br>        }<br>        else<br>        {<br>          if(bb &gt; begin1)<br>          {<br>            begin2 = begin1;<br>            begin1 = bb;<br>            bi = i;<br>          }<br>          else if(bb &gt; begin2)<br>          {<br>            begin2 = bb;<br>          }<br>          if(ee &gt; end1)<br>          {<br>            end2 = end1;<br>            end1 = ee;<br>            ei = i;<br>          }<br>          else if(ee &gt; end2)<br>          {<br>            end2 = ee;<br>          }<br>        }<br>      }<br>      int sum;<br>      if(bi == ei &amp;&amp; bi != -1)<br>      {<br>        sum= max(begin1 + end2,begin2+end1) + mid;<br>      }<br>      else<br>      {<br>        sum = begin1 + end1 + mid;<br>      }<br>      if(sum &gt; best)<br>      {<br>      //  cerr&lt;&lt;"found best at "&lt;&lt;c&lt;&lt; " "&lt;&lt;sum&lt;&lt;endl;<br>        best=sum;<br>      }<br>    }<br>    return best;<br>  }<br>};<br><br><br><br>// Powered by FileEdit<br></td>