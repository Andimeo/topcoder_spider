            import java.util.*;<br> <br>public class LongestRun{<br>  String ALPHA = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";<br>  public int runLength( String[] s ){<br>    int[][] start = new int[26][s.length];<br>    int[][] end = new int[26][s.length];<br>    int[] all = new int[26];<br>    int[] within = new int[26];<br>    int i,j,k;<br>    for( i=0; i&lt;26; i++ ){<br>      all[i] = 0;<br>      within[i] = 0;<br>      for( j=0; j&lt;s.length; j++ ){<br>        for( k=0; k&lt;s[j].length() &amp;&amp; s[j].charAt(k)==('A'+i); k++ );<br>        if( k==s[j].length() ){<br>          all[i] += s[j].length();<br>          start[i][j] = 0;<br>        }else{<br>          start[i][j] = k;<br>        }<br>        for( k=s[j].length()-1; k&gt;=0 &amp;&amp; s[j].charAt(k)==('A'+i); k-- );<br>        if( k&gt;=0 ){<br>          end[i][j] = s[j].length()-k-1;<br>        }else{<br>          end[i][j] = 0;<br>        }<br>        StringTokenizer st = new StringTokenizer( s[j], ALPHA.substring(0,i)+ALPHA.substring(i+1) );<br>        while( st.hasMoreTokens() ){<br>          within[i] = Math.max( within[i], st.nextToken().length() );<br>        }<br>        //System.out.println( (char)('A'+i) + " " + j + " " + start[i] + " " + end[i] + " " + all[i] + " " + within[i] );<br>      }<br>    }<br>    int best = 0;<br>    for( i=0; i&lt;26; i++ ){<br>      best = Math.max( best, within[i] );<br>      for( j=0; j&lt;s.length; j++ ){<br>        for( k=0; k&lt;j; k++ ){<br>          best = Math.max( best, start[i][j] + end[i][k] + all[i] );<br>          best = Math.max( best, start[i][k] + end[i][j] + all[i] );<br>        }<br>      }<br>    }<br>    return best;<br>  }<br> <br> <br>}<br> <br>// Powered by PopsEdit<br>// Powered by CodeProcessor<br></td>