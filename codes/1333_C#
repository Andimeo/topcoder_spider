            using System;<br>using System.Collections;<br> <br>public class Substitute<br>{<br>  int val(string k,char l)<br>  {<br>    int pos = k.IndexOf(l);<br>    if (pos==-1) return -1;<br>    if (pos==k.Length-1) return 0;<br>    return pos+1;<br>  }<br> <br>  public int getValue(string key, string code)<br>  {<br>    int res=0;<br> <br>    for (int i=0;i&lt;code.Length;i++)<br>    if (val(key,code[i])!=-1)<br>    {<br>      res*=10;<br>      res+=val(key,code[i]);      <br>    }<br>    return res;<br>  }<br>}<br></td>