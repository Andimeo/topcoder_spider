            #include &lt;string&gt;<br>#include &lt;strstream&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>using namespace std;<br> <br>struct name<br>{<br>  string s;<br>  int pos;<br>};<br> <br>string ln(const name &amp;n1)<br>{<br>  istrstream in(n1.s.c_str());<br>  <br>  string s;<br>  while (in &gt;&gt; s);<br>  for (int i = 0; i &lt; s.size(); i++)<br>  if (s[i] &gt;= 'a' &amp;&amp; s[i] &lt;= 'z')<br>    s[i] += 'A' - 'a';<br> <br>  return s;<br>}<br> <br>bool operator&lt;(const name &amp;n1, const name &amp;n2)<br>{<br>  if (ln(n1) != ln(n2))<br>    return ln(n1) &lt; ln(n2);<br>  else<br>    return n1.pos &gt; n2.pos;<br>}<br> <br>class NameSort<br>{<br>public:<br> <br>vector&lt;string&gt; newList(vector&lt;string&gt; list)<br>{<br>  vector &lt;name&gt; people;<br>  int i;<br> <br>  for (i = 0; i &lt; list.size(); i++)<br>  {<br>    name newname;<br>    newname.s = list[i];<br>    newname.pos = i;<br>    people.push_back(newname);<br>  }<br> <br>  sort(people.begin(), people.end());<br>  <br>  vector &lt;string&gt; result;<br>  for (i = 0;  i &lt; people.size(); i++)<br>    result.push_back(people[i].s);<br> <br>  return result;<br>}<br> <br>};<br></td>