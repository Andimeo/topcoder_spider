<td class="problemText" colspan="8" valign="middle" align="left">
            using System;<br> <br>public class WidgetRepairs<br>{<br> <br>  public int days (int[] arrivals, int numPerDay)<br>  {<br>    int remainder = 0;<br>    int freedays = 0;<br>    foreach (int arrival in arrivals)<br>    {<br>      if (arrival == 0 &amp;&amp; remainder == 0)<br>        freedays++;<br>      <br>      remainder = (arrival + remainder) - numPerDay;  <br>      remainder = Math.Max(remainder, 0);<br>    }<br> <br>    int extradays = 0;<br>    while (remainder &gt; 0)<br>    {<br>      extradays++;<br>      remainder -= numPerDay;<br>    }<br> <br>    return arrivals.Length - freedays + extradays;<br> <br>  }<br>}<br></td>