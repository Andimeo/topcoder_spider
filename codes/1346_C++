            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;ext/algorithm&gt;<br>#include &lt;ext/numeric&gt;<br>using namespace std;<br>using namespace __gnu_cxx;<br>class WidgetRepairs<br>{<br>public:<br>  int days(vector &lt;int&gt; arrivals, int numPerDay);<br>// {{{<br>  <br><br>// }}}<br>};<br><br>int WidgetRepairs::days(vector &lt;int&gt; arrivals, int numPerDay)<br>{<br>  int numPending = 0;<br>  int running = 0;<br>  <br>  for(int i=0; i&lt;arrivals.size(); i++)<br>  {<br>    numPending += arrivals[i];<br>    <br>    if(numPending &gt; 0) {<br>      numPending -= numPerDay;<br>      if(numPending&lt;0) numPending = 0;<br>      running++;<br>    }<br>  }<br>  while(numPending &gt; 0) {<br>    numPending -= numPerDay;<br>    running++;<br>  }<br>  <br>  return running;<br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>