            using System ;<br> <br>public class GoldenChain<br>{<br>  public int minCuts(int[] sections)<br>  {<br>    System.Array.Sort(sections) ;<br> <br>    System.Console.WriteLine("{0} : {1}", sections[0], sections[sections.Length - 1]) ;<br> <br>    int remains = sections.Length ;<br> <br>    int k = 0  ;<br> <br>    int result = 0 ;<br> <br>    while(remains &gt; 0)<br>    {<br>      if(sections[k] == 0)<br>      {<br>        remains = remains - 1 ;<br>        k = k + 1 ;<br>      }<br>      else<br>      {<br>        remains = remains - 1 ;<br>        sections[k] -= 1 ;<br>        result += 1 ;<br>      }<br>    }<br> <br>    return result ;<br>  }<br>}<br></td>