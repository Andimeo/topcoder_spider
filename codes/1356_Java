            public class Intersect<br>{<br>  public int area(int[] x, int[] y)<br>  {<br>    int lowx = -10001, lowy = -10001, hix=10001, hiy = 10001, tmp;<br>    for(int i = 0; i &lt; x.length; i+=2)<br>    {<br>      if(x[i] &gt; x[i + 1])<br>      {<br>        tmp = x[i];<br>        x[i] = x[i + 1];<br>        x[i + 1] = tmp;<br>      }<br>      if(y[i] &gt; y[i + 1])<br>      {<br>        tmp = y[i];<br>        y[i] = y[i + 1];<br>        y[i + 1] = tmp;<br>      }<br> <br>      if(x[i] &gt; hix || x[i + 1] &lt; lowx || y[i] &gt; hiy || y[i + 1] &lt; lowy)<br>        return(0);<br>      else<br>      {<br>        if(x[i] &gt; lowx)<br>          lowx = x[i];<br>        if(x[i + 1] &lt; hix)<br>          hix = x[i + 1];<br>        if(y[i] &gt; lowy)<br>          lowy = y[i];<br>        if(y[i + 1] &lt; hiy)<br>          hiy = y[i + 1];<br>        <br>      }<br>    }<br>    <br>    return((hix - lowx) * (hiy - lowy));<br>  }<br>}<br></td>