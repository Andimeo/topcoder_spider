            using System;<br>using System.Collections;<br>using System.Globalization;<br>using System.Text;<br>using System.Text.RegularExpressions;<br><br>public class Surveyor <br>{<br>  public int area( string direction, int[] length )<br>  {<br>    int n = direction.Length;<br>    int[] x = new int[n + 1];<br>    int[] y = new int[n + 1];<br>    int result = 0;<br>    for( int j = 0; j &lt; n; j++ )<br>    {<br>      switch( direction[j] )<br>      {<br>        case 'N': <br>          x[j + 1] = x[j];<br>          y[j + 1] = y[j] - length[j];<br>          break;<br>        case 'S':<br>          x[j + 1] = x[j];<br>          y[j + 1] = y[j] + length[j];<br>          break;<br>        case 'W':<br>          x[j + 1] = x[j] - length[j];<br>          y[j + 1] = y[j];<br>          break;<br>        case 'E': <br>          x[j + 1] = x[j] + length[j];<br>          y[j + 1] = y[j];<br>          break;<br>      }<br>      result += (x[j + 1] - x[j]) * (y[j + 1] + y[j]);<br>    }    <br>    return Math.Abs(result / 2);<br>  }<br><br>  NumberFormatInfo nfi = new CultureInfo( "en-US", false ).NumberFormat;<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>