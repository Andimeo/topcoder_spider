            /**<br> *  agh, 24.02.2004<br> */<br><br>import java.math.*;<br>import java.util.*;<br><br>public class Surveyor<br>{<br>    public int area(String direction, int[] length)<br>    {<br>        int N = direction.length() + 1;<br><br>        int[] x = new int[N];<br>        int[] y = new int[N];<br><br>        x[0] = 0;<br>        y[0] = 0;<br><br>        int s = 0;<br><br>        for (int i = 0; i &lt; direction.length(); i++)<br>        {<br>            x[i + 1] = x[i];<br>            y[i + 1] = y[i];<br>            switch (direction.charAt(i))<br>            {<br>                case 'N' :<br>                    y[i + 1] = y[i] + length[i];<br>                    break;<br>                case 'S' :<br>                    y[i + 1] = y[i] - length[i];<br>                    break;<br>                case 'E' :<br>                    x[i + 1] = x[i] + length[i];<br>                    break;<br>                case 'W' :<br>                    x[i + 1] = x[i] - length[i];<br>                    break;<br>            }<br>            s += (x[i + 1] - x[i]) * y[i];<br>        }<br><br>        return Math.abs(s);<br>    }<br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>