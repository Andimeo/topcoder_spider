            import java.util.*;<br>public class FryingHamburgers {<br>  public int howLong(int panSize, int hamburgers) {<br>          int none = hamburgers;<br>          int one = 0;<br>          for (int tm=0;;tm+=5) {<br>            if (none == 0 &amp;&amp; one == 0) return tm;<br>            int a = Math.min(panSize,none);<br>            none -= a;<br>            int b = Math.min(panSize - a, one);<br>            one -= b;<br>            one += a;<br>          }<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>