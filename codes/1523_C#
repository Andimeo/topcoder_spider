            using System;<br>using System.Collections;<br>public class InterestingDigits {<br>  public int[] digits(int b) {<br>    ArrayList res = new ArrayList();<br>    for (int i = 2; i &lt; b; ++i) {<br>      bool ok = true;<br>      for (int c = 1; c &lt; 1000; ++c) {<br>        ok = ok &amp;&amp; check(c*i, i, b);<br>        if (!ok)<br>          break;<br>      }<br>      if (ok)<br>        res.Add(i);<br>    }<br>    int[] r = new int[res.Count];<br>    res.CopyTo(r);<br>    return r;<br>  }<br>  bool check(int num, int d, int b) {<br>    int sum = 0;<br>    while (num &gt; 0) {<br>      sum += num % b;<br>      num /= b;<br>    }<br>    return sum % d == 0;<br>  }<br>}<br><br><br>// Powered by FileEdit<br></td>