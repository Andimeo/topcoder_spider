            import java.util.*;<br>public class Champagne {<br>  StringTokenizer st;<br>  int maxH = 0;<br> <br>  int[] glasses = new int[1000];<br> <br>  int maxCap = (int)Math.pow(2, 21);<br> <br>  void pour(int quant, int glass, int row) {<br>    if (row &gt; maxH)<br>      return;<br>    if(glasses[glass] + quant &lt;= maxCap) {<br>      glasses[glass] += quant;<br>      return;<br>    }<br>    quant += glasses[glass];<br>    quant -= maxCap;<br>    glasses[glass] = maxCap;<br>    pour(quant/2, glass+row, row+1);<br>    pour(quant/2, glass+row+1, row+1);<br>  }<br> <br>  int gcd(int n1, int n2)<br>  { <br>    if (n2 == 0) return n1;<br>    else return gcd(n2,n1%n2);<br>  }<br> <br>  public String howMuch(int height, int glass, int units) {<br>    maxH = height;<br>    pour(units * maxCap / 2, 1, 1);<br>    int gcd = gcd(glasses[glass], maxCap);<br>    return "" + glasses[glass]/gcd + "/" + maxCap/gcd;<br>  }<br>}<br> <br> <br>// Powered by FileEdit<br></td>