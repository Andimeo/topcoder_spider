            import java.util.*;<br>public class Pricing {<br>  public int maxSales(int[] p) {<br>    Arrays.sort(p);<br>    int e = p.length;<br>    int ret = -1;<br>    for (int a=0;a&lt;p.length;a++) {<br>      for (int b=a;b&lt;p.length;b++) {<br>        for (int c=b;c&lt;p.length;c++) {<br>          for (int d=c;d&lt;p.length;d++) {<br>            if (a != b &amp;&amp; b != c &amp;&amp; c != d) {<br>              ret = Math.max(ret,(p[d]*(e-d))+(p[c]*(d-c))+(p[b]*(c-b))+(p[a]*(b-a)));<br>            }<br>          }  <br>        }  <br>      }      <br>    }<br>    if (e &lt; 4) {<br>      for (int f=0;f&lt;e;f++) {<br>        ret += p[f];<br>      }<br>      ret++;<br>    }<br>    return ret;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>