            using System; using System.Collections; public class TeamPhoto { public int minDiff(int[] height) {<br>int N = height.Length;<br>int i;<br>int coach = height[0];<br>int c1 = height[1];<br>int c2 = height[2];<br> <br>int[] players = new int[N-3];<br>for (i=3; i&lt;N; i++) players[i-3] = height[i];<br>Array.Sort(players);<br> <br>int[] x = new int[N];<br>int L0 = (N-3)/2;<br>int R0 = (N-3)-L0;<br>int best = 999999999;<br>for (int split=0; split&lt;=1; split++)<br> for (int sides=0; sides&lt;=1; sides++)<br>  for (int lSlope=0; lSlope&lt;=1; lSlope++)<br>   for (int rSlope=0; rSlope&lt;=1; rSlope++)<br>    {<br>    int L = (split==0) ? L0 : R0;<br>    int R = (split==0) ? R0 : L0;<br> <br>    x[0] = (sides==0) ? c1 : c2;<br>    x[N-1] = (sides==0) ? c2 : c1;<br> <br>    for (i=0; i&lt;L; i++) x[i+1] = (lSlope==0) ? players[i] : players[L-1-i];<br>    x[L+1] = coach;<br>    for (i=0; i&lt;R; i++) x[i+L+2] = (rSlope == 0) ? players[L+i] : players[L+R-1-i];<br> <br>    int cur = 0;<br>    for (i=1; i&lt;N; i++) cur += Math.Abs(x[i] - x[i-1]);<br> <br>    // Console.Write("{0}:", cur);<br>    // foreach (int y in x) Console.Write(" {0}", y);<br>    // Console.WriteLine();<br> <br>    best = Math.Min(best, cur);<br>    }<br> <br>return best;<br>}}<br></td>