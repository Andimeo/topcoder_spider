            import java.util.*;<br>public class TeamPhoto {<br>  int min = Integer.MAX_VALUE;<br>  public int minDiff(int[] height) {<br>    int[] sh = new int[height.length-3];<br>    for (int i=0; i&lt;sh.length; i++) sh[i]=height[i+3];<br>    Arrays.sort(sh);<br>    go(height[0], height[1], height[2], false, sh);<br>    go(height[0], height[2], height[1], false, sh);<br>    go(height[0], height[1], height[2], true, sh);<br>    go(height[0], height[2], height[1], true, sh);<br>    <br>    return min;<br>  }<br>  <br>  void go(int coach, int assist1, int assist2, boolean swap, int[] rest) {<br>    int size1 = rest.length/2;<br>    int size2 = rest.length-size1;<br>    <br>    if (swap) size1=size2;<br>    <br>    int diff;<br>    diff = getdiff(assist1, rest[0], rest[size1-1], coach) + getdiff(coach, rest[size1], rest[rest.length-1], assist2); <br>    if (diff &lt; min) min = diff;<br>  <br>  }<br>  <br>  int getdiff(int p1, int m1, int m2, int p2) {<br>    int d1 = Math.abs(p1-m1) + Math.abs(m1-m2) + Math.abs(m2-p2);<br>    int d2 = Math.abs(p1-m2) + Math.abs(m1-m2) + Math.abs(m1-p2);<br>    <br>    return Math.min(d1,d2);<br>  }<br>  <br>}<br> <br>// Powered by PopsEdit<br></td>