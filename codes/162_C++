            #include &lt;iostream&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br> <br>using namespace std; <br> <br>class HowEasy<br>{<br> <br>public:<br>  int pointVal(string s)<br>  {<br>    int wsum = 0;<br>    int wc = 0;<br>    for(int i = 0; i&lt;s.length(); ++i)<br>    {<br>      string w; <br>      bool bword = true; bool bval = false;<br>      while(i&lt;s.length() &amp;&amp; s.at(i) == ' ' ) i++;<br>      while(i&lt;s.length() &amp;&amp; s.at(i) != ' ') <br>      {<br>        if((s.at(i) == '.' &amp;&amp; (i+1 != s.length() &amp;&amp; s.at(i+1) != ' '))  || <br>           (isdigit(s.at(i)) ))<br>          bword = false;<br>        else if(s.at(i) != '.')<br>        {  <br>          bval = true;<br>          w += s.at(i);<br>        }<br>        i++;  <br>      }<br>      if(bword)<br>      {<br>        wsum += w.length();<br>      }<br>      if(bval &amp;&amp; bword)<br>      {<br>        wc++;<br>      }<br>      <br>    <br>    }<br>    cout &lt;&lt; wsum &lt;&lt; " " &lt;&lt; wc;<br>    if(wc == 0) return 250;<br>    if (wsum/wc &lt;= 3) return 250;<br>    if (wsum/wc &lt;= 5) return 500;<br>    return 1000;<br>  }<br>};<br></td>