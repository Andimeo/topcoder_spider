            import java.util.*;<br> <br>public class HowEasy<br>{ public int pointVal(String s)<br>  { StringTokenizer st=new StringTokenizer(s, " ");<br>    int numwords=0, totallen=0;<br>    while (st.hasMoreTokens())<br>    { String w=st.nextToken();<br>      if (w.charAt(w.length()-1)=='.')<br>        w=w.substring(0, w.length()-1);<br>      int l=w.length();<br>      if (l&lt;1)<br>        continue;<br>      int i;<br>      for (i=0; i&lt;l; i+=1)<br>      { char c=w.charAt(i);<br>        if (!(c&gt;='A' &amp;&amp; c&lt;='Z' ||<br>              c&gt;='a' &amp;&amp; c&lt;='z'))<br>          break; }<br>      if (i!=l)<br>        continue;<br>      numwords+=1;<br>      totallen+=l; }<br>    System.out.println("numwords="+numwords+", totallen="+totallen);<br>    if (numwords==0)<br>      return 250;<br>    int avg=totallen/numwords;<br>    if (avg&lt;=3)<br>      return 250;<br>    else if (avg&lt;=5)<br>      return 500;<br>    else<br>      return 1000; } }<br></td>