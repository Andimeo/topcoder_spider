            #include &lt;set&gt;<br> <br>class SquareDigits {<br>public:<br>  int smallestResult( int foo ) {<br>    set&lt; int &gt; nums;<br>    int cstart = -1;<br>    while( nums.find( foo ) == nums.end() ) {<br>      cstart++;<br>//      printf( "started %d", cstart );<br>      int cv = cstart;<br>      while( 1 ) {<br>        int accum = 0;<br>        while( cv ) {<br>          accum += ( cv % 10 ) * ( cv % 10 );<br>          cv /= 10;<br>        }<br>        if( nums.find( accum ) != nums.end() )<br>          break;<br>        nums.insert( accum );<br>        cv = accum;<br>//        printf( "inserted %d", accum );<br>      }<br>    }<br>    return cstart;<br>  }<br>};<br></td>