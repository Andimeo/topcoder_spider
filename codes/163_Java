            import java.util.*;<br> <br>public class SquareDigits<br>{ public int S(int n)<br>  { String s=""+n;<br>    int r=0;<br>    for (int i=0; i&lt;s.length(); i+=1)<br>    { int d=s.charAt(i)-'0';<br>      r+=d*d; }<br>    return r; }<br> <br>  public boolean inS(int n, int x)<br>  { Hashtable ht=new Hashtable();<br>    Integer obj=new Integer(0);<br>    while (true)<br>    { int s=S(x);<br>      if (s==n)<br>        return true;<br>      Integer is=new Integer(s);<br>      if (ht.containsKey(is))<br>        break;<br>      ht.put(is, obj);<br>      x=s; }<br>    return false; }<br> <br>  public int smallestResult(int n)<br>  { int r=0;<br>    while (!inS(n, r))<br>      r+=1;<br>    return r; }<br> <br>  public static void main(String[] args)<br>  { System.out.println((new SquareDigits()).smallestResult(1));<br>    System.out.println((new SquareDigits()).smallestResult(19));<br>    System.out.println((new SquareDigits()).smallestResult(85));<br>    System.out.println((new SquareDigits()).smallestResult(112)); } }<br></td>