            using System;<br>using System.Collections;<br>using System.Text.RegularExpressions;<br> <br>public class CCipher <br>{<br>  public string decode( string cipherText, int shift )<br>  {<br>    string result = "";<br>    for( int i = 0; i &lt; cipherText.Length; i++ )<br>    {<br>      char c = cipherText[i];<br>      int val = c - 'A';<br>      val -= shift;<br>      if( val &lt; 0 ) val += 26;<br>      c = (char)( 'A' + val );<br>      result += c;<br>    }<br>    return result;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>