            public class Quipu<br>{<br>  public int readKnots( String knots )<br>  {<br>    StringBuffer sb = new StringBuffer();<br>    int cont = 0;<br>    for (int i = 0; i &lt; knots.length(); i++ ) {<br>      if (knots.charAt(i) == 'X') {<br>        cont++;<br>      } else {<br>        sb.append( (char)('0' + cont) );<br>        cont = 0;<br>      }<br>    }<br>    return Integer.parseInt( sb.toString() );<br>  }<br>}<br></td>