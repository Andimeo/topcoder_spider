            #include&lt;iostream&gt;<br>#include&lt;vector&gt;<br>#include&lt;map&gt;<br>#include&lt;bitset&gt;<br>#include&lt;utility&gt;<br>#include&lt;algorithm&gt;<br>#include&lt;cstdlib&gt;<br>#include&lt;cstdio&gt;<br>#include&lt;cstring&gt;<br>#include&lt;cmath&gt;<br>#include&lt;string&gt;<br>#include&lt;sstream&gt;<br> <br>using namespace std;<br> <br>#define min(a,b) ((a)&lt;(b)?(a):(b))<br>#define max(a,b) ((a)&gt;(b)?(a):(b))<br> <br>class YahtzeeScore<br>{<br>public:<br> <br>  int maxPoints(vector &lt;int&gt; toss)<br>  {<br>    vector&lt;int&gt; :: iterator it;<br> <br>    int arr[10],i,max;<br> <br>    memset(arr,0,sizeof(arr));<br> <br>    for(it=toss.begin();it!=toss.end();it++)<br>      arr[*it]++;<br> <br>    max=0;<br>    <br>    for(i=1;i&lt;=6;i++)<br>      if(arr[i]*i&gt;max)<br>      {<br>        max=i*arr[i];<br>        <br>      }<br> <br>    return max;<br>  }<br>};<br></td>