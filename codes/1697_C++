            #line 108 "PowerOutage.cpp"<br>#include &lt;stdlib.h&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>using namespace std;<br><br>#ifdef __GNUC__<br>typedef long long lint;<br>#else<br>typedef __int64 lint;<br>#endif<br><br>class PowerOutage<br>{ <br>public: <br>  int estimateTimeOut(vector &lt;int&gt; fj, vector &lt;int&gt; tj, vector &lt;int&gt; dl) <br>  {<br>   vector&lt;int&gt; wl(50);<br>   int k=fj.size();<br>   int i,j;<br><br>   int sm=0;<br>   for(i=0;i&lt;k;i++) sm+=dl[i];<br>   int ml=0;<br>   wl[0]=0;<br>   for(i=1;i&lt;50;i++)<br>   {<br>    for(j=0;j&lt;k;j++)<br>     if(tj[j]==i)<br>     {<br>      wl[i]=wl[fj[j]]+dl[j];<br>      break;<br>     }<br>    ml=max(ml,wl[i]);<br>   }<br>   return 2*sm-ml;<br>  } <br> <br> <br>}; <br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>