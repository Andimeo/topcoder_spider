            using System;<br>using System.Collections;<br>public class LeaguePicks {<br>  public int[] returnPicks(int position, int friends, int picks) {<br>    ArrayList a = new ArrayList();<br>    int cur = 1;<br>    int d = 1;<br>    for (int i = 1; i &lt;= picks; ++i) {<br>      if (cur == position)<br>        a.Add(i);<br>      cur += d;<br>      if (cur &gt; friends || cur &lt; 1) {<br>        d = -d;<br>        cur += d;<br>      }<br>    }<br>    int[] res = new int[a.Count];<br>    a.CopyTo(res);<br>    return res;<br>  }<br>}<br><br><br>// Powered by FileEdit<br></td>