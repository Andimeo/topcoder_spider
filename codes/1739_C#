            using System;<br> <br>  public class Birthday<br>  {<br>    public string getNext(string date, string[] birthdays)<br>    {<br>      DateTime today = Convert.ToDateTime(date + "/" + DateTime.Now.Year);<br>      int todayMonth = today.Month;<br>      int todayDay = today.Day;<br>      int todayYear = today.Year;<br> <br>      double shortest = double.MaxValue;<br>      string shortestName = "";<br> <br>      foreach(string birthday in birthdays)<br>      {<br>        int thisMonth = Convert.ToInt32(birthday.Substring(0,2));<br>        int thisDay = Convert.ToInt32(birthday.Substring(3,2));<br>        string thisName = birthday.Substring(6);<br>        int thisYear;<br> <br> <br>        if(thisMonth &gt; todayMonth || (thisMonth == todayMonth &amp;&amp; thisDay &gt;= todayDay))<br>        {<br>          thisYear = todayYear;<br>        }<br>        else<br>        {<br>          thisYear = todayYear + 1;<br>        }<br> <br>        DateTime thisBirthday = new DateTime(thisYear, thisMonth, thisDay);<br> <br>        TimeSpan diff = thisBirthday - today;<br>        if(diff.TotalDays &lt; shortest)<br>        {<br>          shortest = diff.TotalDays;<br>          shortestName = birthday.Substring(0,5);<br>        }<br>        <br>      }<br>      return shortestName;<br>    }<br>  }<br></td>