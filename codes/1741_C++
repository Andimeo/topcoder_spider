            #include &lt;string&gt;<br> <br>using namespace std;<br> <br>class DivisorDigits<br>{<br>  public:<br>    int howMany(int number);<br>};<br> <br>int DivisorDigits::howMany(int number)<br>{<br>  int i, size;<br>  int n;<br>  int count;<br>  char s[10];<br> <br>  sprintf(s, "%d", number);<br>  size = strlen(s);<br>  count = 0;<br>  for (i = 0; i &lt; size; i++)<br>  {<br>    if (s[i] != '0')<br>    {<br>      n = s[i] - '0';<br>      if ((number % n) == 0)<br>      {<br>        count++;<br>      }<br>    }<br>  }<br> <br>  return count;<br>}<br></td>