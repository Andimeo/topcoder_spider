            using System;<br>using System.Collections;<br>public class UserId {<br>  private string fix(string s) {<br>    s = s.Replace("'", "");<br>    s = s.Replace(" ", "");<br>    s = s.ToLower();<br>    return(s);<br>  }<br>  private bool bad(string s) {<br>    for (int i = 0; i &lt; 26; i++) {<br>      char c = (char)(i + 'a');<br>      s = s.Replace(c + "", "");<br>    }<br>    return(s != String.Empty);<br>  }<br>  private bool found(string s, string[] all) {<br>    bool ret = false;<br>    <br>    for (int i = 0; i &lt; all.Length; i++) {<br>      if (s == all[i]) {<br>        ret = true;<br>        break;<br>      }<br>    }<br>    return(ret);<br>  }<br>  public string id(string[] inUse, string first, string middle, string last) {<br>    string ret = "BAD DATA";<br>    <br>    first = fix(first);<br>    middle = fix(middle);<br>    last = fix(last);<br>    if (!bad(first) &amp;&amp; !bad(middle) &amp;&amp; !bad(last) &amp;&amp; first.Length &gt;= 2 &amp;&amp; last.Length &gt;= 2) {<br>      string u = first[0] + last;<br>      if (u.Length &gt; 8) {<br>        u = u.Substring(0,8);<br>      }<br>      if (!found(u, inUse)) {<br>        return(u);<br>      }<br>      if (middle.Length &gt; 0) {<br>        u = middle[0] + last;<br>        u = first[0] + u;<br>        if (u.Length &gt; 8) {<br>          u = u.Substring(0,8);<br>        }<br>        if (!found(u, inUse)) {<br>          return(u);<br>        }<br>      }<br>      for (int i = 1; i &lt;= 99; i++) {<br>        u = first[0] + last;<br>        if (u.Length &gt; 6) {<br>          u = u.Substring(0,6);<br>        }<br>        u = u + i.ToString("00");<br>        if (!found(u, inUse)) {<br>          return(u);<br>        }<br>      }<br>    }<br>    <br>    return(ret);<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>