<td class="problemText" colspan="8" valign="middle" align="left">
            public class Justifier<br>{<br>  public string[] justify(string[] textIn)<br>  {<br>    int longestLength = 0;<br> <br>    foreach (string sample in textIn)<br>    {<br>      if (sample.Length &gt; longestLength)<br>        longestLength = sample.Length;<br>    }<br> <br>    string[] output = new string[textIn.Length];<br> <br>    for (int i = 0; i &lt; output.Length; i++)<br>    {<br>      int toPad = longestLength - textIn[i].Length;<br> <br>      string tmp = "";<br>      while (toPad-- &gt; 0)<br>        tmp += " ";<br> <br>      tmp += textIn[i];<br> <br>      output[i] = tmp;<br>    }<br> <br>    return output;<br>  }<br>}<br></td>