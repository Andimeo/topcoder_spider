            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>using namespace std;<br>using namespace __gnu_cxx;<br>class Justifier<br>{<br>public:<br>  vector &lt;string&gt; justify(vector &lt;string&gt; textIn);<br>// {{{<br>  <br><br>// }}}<br>};<br><br>vector &lt;string&gt; Justifier::justify(vector &lt;string&gt; textIn)<br>{<br>  int longest = 0;<br>  <br>  for(int i=0; i&lt;textIn.size(); i++)<br>  {<br>    if(textIn[i].length() &gt; longest)<br>      longest = textIn[i].length();<br>  }<br>  <br>  vector&lt;string&gt; ret(textIn.size());<br>  <br>  for(int i=0; i&lt;textIn.size(); i++)<br>  {<br>    ret[i] = "";<br>    for(int j=0; j&lt;longest - textIn[i].size(); j++)<br>      ret[i] += ' ';<br>    ret[i] += textIn[i];<br>  }<br>  <br>  return ret;<br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>