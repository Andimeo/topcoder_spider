            import java.util.*;<br><br>public class Justifier<br>{<br>    public String[] justify(String[] textIn)<br>    {<br>        int n = 0;<br><br>        for(int i = 0; i &lt; textIn.length; i++)<br>        {<br>            if(textIn[i].length() &gt; n)<br>            {<br>                n = textIn[i].length();<br>            }<br>        }<br><br>        for(int i = 0; i &lt; textIn.length; i++)<br>        {<br>            for(int j = textIn[i].length(); j &lt; n; j++)<br>            {<br>                textIn[i] = " " + textIn[i];<br>            }<br>        }<br><br>        return textIn;<br>    }<br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>