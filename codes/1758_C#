            using System;<br>public class ASeries<br>  {<br>        public ASeries(){ }<br>    public int longest(int[] values)<br>    {<br>      int n = values.GetLength(0);<br>      Array.Sort(values);<br>      int i,j,k,l,m,p=0, max=1;<br>      for(i=0; i&lt;n; i++)<br>        for(j=i+1; j&lt;n; j++)<br>        {<br>          k = values[j] - values[i];<br>          l = values[j];<br>          p=2;<br>          for(m=j+1; m&lt;n; m++) <br>          {<br>            if(values[m] - l == k) <br>            {<br>              l+= k;<br>              p++;<br>            }<br>          }<br>          if(p&gt;max) { max = p; }<br>        }<br>      return max;<br>    }<br>  }<br></td>