            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>using namespace std;<br> <br>class ASeries {<br>  public:<br>  int longest(vector &lt;int&gt; values) {<br>    int longestVal=2;<br>    sort(values.begin(),values.end());<br>    for(int i=0;i&lt;values.size();i++){<br>      for(int j=i+1;j&lt;values.size();j++){<br>        int number=2,d;<br>        d=values[j]-values[i];<br>        int val=values[j]+d;<br>        int k=j;<br>        while(find(values.begin()+k+1,values.end(),val)!=values.end())<br>        {<br>          val+=d;<br>          number++;<br>          k++;<br>        }<br>        longestVal=max(number,longestVal);<br>        <br>      }<br>    }<br>    return longestVal;<br>  }<br>  <br>};<br> <br> <br>// Powered by PopsEdit<br></td>