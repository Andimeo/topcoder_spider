            import java.util.*;<br>public class ASeries {<br>  public int longest(int[] values) {<br>    Arrays.sort(values);<br>    int res =-1;<br>    for (int i = 0; i &lt; values.length; i++)  {<br>      for (int j = i+1; j &lt; values.length; j++)  {<br>        int d = values[j] - values[i];<br>        int c = 0;<br>        for (int k = j+1; k &lt; values.length; k++)  if (values[k] == values[j]+(1+c)*d)  c++;<br>        res = Math.max(res, c);<br>      };<br>    };<br>    return res+2;<br>  }<br> <br>}<br> <br>// Powered by PopsEdit<br></td>