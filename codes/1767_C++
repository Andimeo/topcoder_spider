            #include &lt;cmath&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>using namespace std;<br> <br>class Gems {<br>public:<br>  int n,m;<br>  char a[100][100];<br> <br>  int f(int r,int c) {<br>  int i,j,x;<br>  x=0;<br>  for (i=r;i&gt;=0 &amp;&amp; a[i][c]==a[r][c];i--) x++;<br>  for (i=r+1;i&lt;n &amp;&amp; a[i][c]==a[r][c];i++) x++;<br>  if (x&gt;=3) return 1; else x=0;<br>  for (j=c;j&gt;=0 &amp;&amp; a[r][j]==a[r][c];j--) x++;<br>  for (j=c+1;j&lt;m &amp;&amp; a[r][j]==a[r][c];j++) x++;<br>  if (x&gt;=3) return 1; else return 0;<br>  };<br> <br>  int numMoves(vector &lt;string&gt; board) {<br>  int i,j,ans; ans=0;<br>  char ch;<br>  n=board.size(); m=board[0].size();<br>  for (i=0;i&lt;n;i++) for (j=0;j&lt;m;j++) a[i][j]=board[i][j];<br>  for (i=0;i&lt;n*m-1;i++) for (j=i+1;j&lt;n*m;j++) if ((abs(i/m-j/m)==1 &amp;&amp; (i%m==j%m)) || ((i/m==j/m) &amp;&amp; abs(i%m-j%m)==1)) {<br>    ch=a[i/m][i%m]; a[i/m][i%m]=a[j/m][j%m]; a[j/m][j%m]=ch;<br>    if (f(i/m,i%m) || f(j/m,j%m)) ans++;<br>    ch=a[i/m][i%m]; a[i/m][i%m]=a[j/m][j%m]; a[j/m][j%m]=ch;<br>    }<br>  return ans;<br>  };<br>};<br></td>