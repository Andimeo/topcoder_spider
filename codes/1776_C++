            #include&lt;iostream&gt;<br>#include&lt;stdio.h&gt;<br>#include&lt;vector&gt;<br>#include&lt;algorithm&gt;<br>using namespace std;<br> <br>const int maxn=60;<br> <br>class DequeSort<br>{<br>public:<br>  int minDeques(vector &lt;int&gt; data);<br>};<br> <br>int DequeSort::minDeques(vector &lt;int&gt; data)<br>{<br>  int mark[maxn],hash[maxn];<br>  memset(mark,0,sizeof(mark));<br>  memset(hash,0,sizeof(hash));<br>  int n=0;<br>  vector&lt;int&gt;::const_iterator pos;<br>  vector&lt;int&gt; coll;<br>  for (pos=data.begin();pos!=data.end();pos++)<br>    n++;<br>  coll=data;<br>  if (n==0) return 0;<br>  sort(coll.begin(),coll.end());<br>  int ans=0;  <br>  int i;<br>  for (i=0;i&lt;n;i++)<br>  {<br>    int j,temp=-1;<br>    for (j=0;j&lt;n;j++)<br>      if (data[i]==coll[j] &amp;&amp; hash[j]==0) temp=j;<br>    hash[temp]=1;<br>    bool isok=false;<br>    if (temp-1&gt;=0)<br>      if (mark[temp-1]==1)<br>        isok=true;<br>    if (temp+1&lt;n)<br>      if (mark[temp+1]==1)<br>        isok=true;<br>    if (!isok) ans++;<br>    mark[temp]=1;<br>  }<br>  return ans;<br>}<br></td>