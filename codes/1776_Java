            import java.util.*;<br> <br>public class DequeSort {<br>  public int minDeques(final int[] data) {<br>    final int[] sorted = new int[data.length];<br>    for (int i = 0; i &lt; data.length; ++i)<br>      sorted[i] = data[i];<br>    <br>    Arrays.sort(sorted);<br>    for (int i = 0; i &lt; sorted.length; ++i) {<br>      for (int j = 0; j &lt; sorted.length; ++j) {<br>        if (sorted[i] == data[j]) {<br>          sorted[i] = j;<br>          break;<br>        }<br>      }<br>    }<br>    <br>    int deques = 1;<br>    boolean decreasing = true;<br>    for (int i = 1; i &lt; sorted.length; ++i) {<br>      if (decreasing) {<br>        if (sorted[i] &gt; sorted[i - 1])<br>          decreasing = false;<br>      } else {<br>        if (sorted[i] &lt; sorted[i - 1]) {<br>          decreasing = true;<br>          ++deques;<br>        }<br>      }<br>    }<br>    <br>    return deques;<br>  }<br>}<br></td>