            public class TCMLParser {<br>  public String replaceTag(String tag, int code, String p) {<br>    String r = new String();<br>    boolean t = false;<br>    for(int i=0;i&lt;p.length();i++) {<br>      if(p.charAt(i) == '&lt;') t=true;<br>      if(p.charAt(i) == '&gt;') t=false;<br>      if(t &amp;&amp; p.substring(i).toLowerCase().indexOf(tag.toLowerCase()) == 0) {<br>        r += ""+code;<br>        i += tag.length()-1;<br>      } else {<br>        r += p.charAt(i);<br>      }<br>    }<br>    return r;<br>  }<br>}<br></td>