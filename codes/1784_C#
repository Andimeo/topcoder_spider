            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br><br>public class ThePriceIsRight {<br>    public int[] howManyReveals(int[] pp) {<br>        int[] m = new int[pp.Length];<br>        int[] w = new int[pp.Length];<br>        for ( int i = 0; i != pp.Length ; i++ ) {<br>            m[i]=1;<br>            w[i]=1;<br>            for ( int j = i-1; j &gt;= 0 ; j-- ) {<br>                if ( pp[j] &lt;= pp[i] ) {<br>                    if ( m[j]+1 &gt; m[i] ) {<br>                        m[i] = m[j]+1;<br>                        w[i] = w[j];<br>                    } else if ( m[j]+1 == m[i] ) {<br>                        w[i] += w[j];<br>                    }<br>                }<br>            }<br><br>        }<br>        int M = 0, W = 0;<br>        for ( int i = 0 ; i != m.Length ; i++) {<br>            if ( m[i] &gt; M ) {<br>                M = m[i];<br>                W = w[i];<br>            } else if ( m[i] == M ) {<br>                W += w[i];<br>            }<br>        }<br>        return new int[] { M, W };<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>