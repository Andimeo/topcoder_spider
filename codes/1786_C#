            using System;<br>using System.Collections;<br>public class Salary {<br>  public int howMuch(string[] arrival, string[] departure, int wage) {<br>    int ret = 0;<br>    <br>    bool[] sec = new bool[24*60*60];<br>    <br>    for (int i = 0; i &lt; arrival.Length; i++) {<br>      string[] arr = arrival[i].Split(":".ToCharArray());<br>      string[] dep = departure[i].Split(":".ToCharArray());<br>      <br>      int ai = int.Parse(arr[0]) * 60 * 60 + int.Parse(arr[1]) * 60 + int.Parse(arr[2]);<br>      int di = int.Parse(dep[0]) * 60 * 60 + int.Parse(dep[1]) * 60 + int.Parse(dep[2]);<br>      <br>      for (int j = ai; j &lt; di; j++) {<br>        sec[j] = true;<br>      }<br>    }<br>    <br>    int s1 = 6 * 60 * 60;<br>    int s2 = 18 * 60 * 60;<br>    for (int j = 0; j &lt; s1; j++) {<br>      if (sec[j]) ret += 3;<br>    }<br>    for (int j = s1; j &lt; s2; j++) {<br>      if (sec[j]) ret += 2;<br>    }<br>    for (int j = s2; j &lt; sec.Length; j++) {<br>      if (sec[j]) ret += 3;<br>    }<br>    <br>    long ll = (long) ret * (long) wage / (2 * 60 * 60);<br>    ret = (int) ll;<br> <br>    return (ret);<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>