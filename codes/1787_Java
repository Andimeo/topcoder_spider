            public class HourGlass<br>{<br>  public int a, b, res[], n;<br>  public int[] measurable(int a, int b)<br>  {<br>    this.a = a;<br>    this.b = b;<br>    res = new int[10];<br>    for(int i=0;i&lt;10;i++) res[i] = -1;<br>    n = 0;<br>    rec(0, 0, 0);<br>    for(int i=0;i&lt;9;i++)<br>    for(int j=i+1;j&lt;10;j++)<br>    if(res[i]&gt;res[j])<br>    {<br>      n = res[i];<br>      res[i] = res[j];<br>      res[j] = n;<br>    }<br>    return res;<br>  }<br> <br>  public void rec(int x, int y, int time)<br>  {<br>    if(n&gt;=11) return;<br>    n++;<br>    if((x==0 || y==0)&amp;&amp;time!=0)<br>    {<br>      //System.out.println(time);<br>      boolean found = false;<br>      for(int i=0;i&lt;10;i++) if(res[i]==time){found = true;break;}<br>      if(!found)<br>      {<br>      for(int i=0;i&lt;10;i++)<br>      if(res[i]==-1)<br>      {<br>        res[i] = time;<br>        found = true;<br>        break;<br>      }<br>      if(!found)<br>      {<br>      int index = 0;<br>      for(int i=1;i&lt;10;i++)<br>        if(res[i]&gt;res[index]) index = i;<br>      //if(res[index]==15) System.out.println(time);<br>      if(time&lt;res[index])res[index] = time;<br>      }<br>      }<br>    }<br> <br>    if(x==0 &amp;&amp; y==0)<br>    {<br>      rec(0, 0, time+a);<br>      rec(0, 0, time+b);<br>      if(a&gt;b) rec(a-b, 0, time+b);<br>      else rec(0, b-a, time+a);<br>    }<br>    else<br>    if(x==0)<br>    {<br>      rec(0, 0, time+y);<br>      if(a&gt;y) rec(a-y, 0, time+y);<br>      else rec(0, y-a, time+a);<br>      if(a&gt;b-y) rec(a-(b-y), 0, time+b-y);<br>      else rec(0, b-y-a, time+a);<br>    }<br>    else<br>    if(y==0)<br>    {<br>      rec(0, 0, time+x);<br>      if(b&gt;x) rec(0, b-x, time+x);<br>      else rec(x-b, 0, time+b);<br>      if(b&gt;a-x) rec(0, b-(a-x), time+a-x);<br>      else rec(a-x-b, 0, time+b);<br>    }<br>    n--;<br>  }<br>}<br></td>