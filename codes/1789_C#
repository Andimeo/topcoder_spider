            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br><br>public class BaseMystery {<br>    int gx( int b, string s ) {<br>        int res = 0;<br>        foreach ( char c in s ) {<br>            res *= b;<br>            int d = "0123456789ABCDEFGHIJKLMNO".IndexOf(c);<br>            if ( d &gt;= b ) return -1;<br>            res += d;<br>        }<br>        return res;<br>    }<br>    public int[] getBase(string eq) {<br>        ArrayList al = new ArrayList();<br>        string[] t = eq.Split("+=".ToCharArray());<br>        for ( int b = 2 ; b &lt;= 20 ; b++ ) {<br>            int A = gx( b, t[0]);<br>            int B = gx( b, t[1]);<br>            int C = gx( b, t[2]);<br>            if ( A!=-1&amp;&amp;B!=-1&amp;&amp;C!=-1&amp;&amp;A+B==C)<br>                al.Add(b);<br>        }<br>        return (int[])al.ToArray(typeof(int));<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>