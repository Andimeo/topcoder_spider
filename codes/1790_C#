            using System;<br>using System.Text;<br>using System.Collections;<br>/*<br> * Init lower and upper bound<br>Repeat<br>  x = (lower bound + upper bound)/2  (round down if necessary)<br>  Make guess x<br>  If x is too low, set lower bound to x+1<br>  If x is too high, set upper bound to x-1<br>Until x is correct<br>*/<br>public class GuessTheNumber {<br>     public int noGuesses(int upper, int answer) {<br><br>     int lower=1,tmp=-1,cnt=0;<br><br>     while(tmp!=answer)<br>      {<br>      tmp=(int)((lower+upper)/2);<br>       if(tmp&gt;answer){<br>        upper=tmp-1;<br>       }<br>       else if(tmp&lt;answer)<br>         lower=tmp+1;<br>       cnt++;<br>     }<br>       return cnt;<br>     }<br>}<br><br><br><br>// Powered by FileEdit<br></td>