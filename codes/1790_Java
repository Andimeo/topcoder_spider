            public class GuessTheNumber<br> {<br>   public int noGuesses( int upper , int answer)<br>   {<br>     int guess = 0, num = 1;<br>     int lower = 1;<br>     guess = ( lower + upper)/2;<br>     while( guess != answer )<br>     {<br>       num++;<br>       if( guess == answer )<br>       break; <br>       if( guess &lt; answer)<br>       {<br>         lower = guess+1;<br>         guess = (lower+upper)/2;<br>         continue;<br>       }<br>       if( guess &gt; answer)<br>       {<br>         upper = guess-1;<br>         guess = (lower+upper)/2;<br>         continue;<br>       }  <br>     }<br>     return num;<br>   }<br> }<br> <br>// Powered by PopsEdit<br></td>