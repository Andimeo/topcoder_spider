            using System;<br>using System.Collections;<br>public class TennisRallies <br>{<br>  int n,all,good=0;<br>  string[] fb;<br>  public int howMany(int numLength, string[] forbidden, int allowed) <br>  {<br>    n = numLength;<br>    fb = forbidden;<br>    all = allowed;<br><br>    rec( 0, "", 0 );<br><br>    return good;<br>  }<br><br>  private void rec( int pos, string s, int bad )<br>  {<br>    int sl = s.Length;<br>    <br>    for( int i=0; i&lt;fb.Length; i++ )<br>    {      <br>      string fbs = fb[i];<br>      if ( fbs.Length &gt; sl )<br>        continue;<br>      if ( s.Substring( sl - fbs.Length ) == fbs )<br>      {<br>        bad++;<br>        if ( bad &gt;= all )<br>          return;<br>      }<br>    }<br><br>    if ( sl == n )<br>    {<br>      good++;<br>      return;<br>    }<br><br>    rec( pos+1, s + "c", bad );<br>    rec( pos+1, s + "d", bad );<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>