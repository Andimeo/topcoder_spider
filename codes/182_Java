            public class BitChecker<br>{<br>  public String getResidue (String m, String k)<br>  {<br>    while (m.length() &gt; 0 &amp;&amp; m.charAt(0) == '0') <br>      m = m.substring(1);<br> <br>    if (m.length() &lt; k.length())<br>    {<br>      while (m.length() &lt; k.length() - 1)<br>        m = '0' + m;<br> <br>      return m;<br>    }<br> <br>    String r = "";<br> <br>    for (int i = 0; i &lt; m.length(); i++)<br>      if (i &lt; k.length())<br>        r += m.charAt(i) != k.charAt(i) ? '1' : '0';<br>      else<br>        r += m.charAt(i);<br> <br>    return getResidue(r, k);<br>  }<br>}<br></td>