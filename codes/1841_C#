            using System;<br>using System.Collections;<br><br><br>public class SMBus {<br>  public int transmitTime(string[] messages, int[] times) {<br>    int res = 0;<br>    <br>    ArrayList mes = new ArrayList(messages);<br>    ArrayList ts = new ArrayList(times);<br>    ArrayList r = new ArrayList(times);<br><br>    while (mes.Count &gt; 0)<br>    {<br>      for( int k = 0; k &lt; r.Count; k++)<br>        r[k] = 1;<br><br>      for (int j = 0; j &lt; int.MaxValue; j++)<br>      {<br>        int i = 0;<br>        while (i &lt; mes.Count)<br>        {<br>          if ((int)r[i] == 1 &amp;&amp; j &gt;= ((string)mes[i]).Length)<br>          {<br>            mes.RemoveAt(i);<br>            r.RemoveAt(i);<br>            ts.RemoveAt(i);<br>          }<br>          else<br>            i++;<br>        }<br>        bool isw = false;<br>        for( i = 0; i &lt; r.Count; i++)<br>          if ((int)r[i] == 1)<br>            isw = true;<br><br>        if (!isw)<br>        {<br>          break;<br>        }<br><br>        int max = 0;<br>        int min = 10;<br>        for (i = 0; i &lt; mes.Count; i++)<br>        {<br>          if (((int)r[i]) == 1)<br>          {<br>            if (max &lt; (int)ts[i])<br>              max = (int)ts[i];<br>            int n = int.Parse(((string)mes[i])[j].ToString());<br>            if (min &gt; n)<br>              min = n;<br>          }<br>        }<br><br>        for (i = 0; i &lt; mes.Count; i++)<br>        {<br>          if (((int)r[i]) == 1)<br>          {<br>            int n = int.Parse(((string)mes[i])[j].ToString());<br>            if (min &lt; n)<br>              r[i] = 0;<br>          }<br>        }<br>        res += max;<br>      }<br>    }<br><br>    return res;<br>  }<br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>