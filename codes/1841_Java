            public class SMBus<br>{<br>  public int transmitTime(String messages[], int times[])<br>  {<br>    int n = messages.length;<br>    boolean sent[] = new boolean[n];<br>    boolean stillSending[] = new boolean[n];<br>    for(int i=0;i&lt;n;i++) sent[i] = false;<br> <br>    int time = 0, maxTime;<br>    for(int i=0;i&lt;n;i++)<br>    {<br>      int min = 0;<br>      while(sent[min]) min++;<br> <br>      for(int j=min+1;j&lt;n;j++)<br>      if(!sent[j] &amp;&amp; messages[j].compareTo(messages[min])&lt;0)<br>        min = j;<br> <br>      for(int j=0;j&lt;n;j++) stillSending[j] = !sent[j];<br> <br>      for(int j=0;j&lt;messages[min].length();j++)<br>      {<br>        maxTime = 0;<br>        for(int k=0;k&lt;n;k++)<br>        if(stillSending[k])<br>        {<br>          stillSending[k] = messages[k].charAt(j)==messages[min].charAt(j);<br>          if(times[k]&gt;maxTime) maxTime = times[k];<br>        }<br>        time+=maxTime;<br>      }<br> <br>      sent[min] = true;<br>    }<br>    return time;<br>  }<br>}<br></td>