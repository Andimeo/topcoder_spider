            import java.util.*;<br>public class CalendarRecycle {<br>  <br>  private boolean calEq(Calendar a, Calendar b) {<br>    a.set(Calendar.MONTH, Calendar.JANUARY) ;<br>    b.set(Calendar.MONTH, Calendar.JANUARY) ;<br>    if (a.get(Calendar.DAY_OF_WEEK) != b.get(Calendar.DAY_OF_WEEK)) return false ;<br>    a.set(Calendar.MONTH, Calendar.JULY) ;<br>    b.set(Calendar.MONTH, Calendar.JULY) ;<br>    if (a.get(Calendar.DAY_OF_WEEK) != b.get(Calendar.DAY_OF_WEEK)) return false ;<br>    return true ;<br>  }<br>  <br>  public int useAgain(int year) {<br>    Calendar cal = new GregorianCalendar(year, 9, 8) ;<br>    for (int i = year + 1; ; i++) {<br>      Calendar cl = new GregorianCalendar(i, 9, 8) ;<br>      if (calEq(cal, cl)) return i ;<br>    }<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>