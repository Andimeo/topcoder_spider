            import java.util.*;<br>public class NameCheck {<br>  public String[] formatList(String[] namelist) {<br>    Vector ans=new Vector();<br>    for(int i=0; i&lt;namelist.length; i++){<br>      StringTokenizer st=new StringTokenizer(namelist[i]);<br>      int a=st.countTokens();<br>      if(a&lt;2) continue; if(a&gt;3) continue;<br>      boolean good=true; int j=0;<br>      while(st.hasMoreTokens()){<br>        j++;<br>        String check=st.nextToken();<br>        int checkstate=state(check);<br>        if(checkstate==0){<br>          good=false;<br>          break;<br>        }<br>        if(checkstate==1){<br>          continue;<br>        }<br>        if(checkstate==2 &amp;&amp; j!=a){<br>          continue;<br>        }else if(checkstate==2 &amp;&amp; j==a){<br>          good=false;<br>          break;<br>        }<br>      }<br>      if(!good) continue;<br>      if(namelist[i].charAt(0)==' ' || namelist[i].charAt(namelist[i].length()-1)==' '){<br>        continue;<br>      }<br>      <br>      //Now fix:<br>      st=new StringTokenizer(namelist[i]);<br>      String goody="";<br>      int q=0;<br>      while(st.hasMoreTokens()){<br>        q++;<br>        if(q!=1) goody+=" ";<br>        String an=st.nextToken().toLowerCase();<br>        an=an.substring(0,1).toUpperCase()+an.substring(1);<br>        goody+=an;<br>      }<br>      ans.add(goody);<br>    }<br>    return (String[])ans.toArray(new String[0]);<br>  }<br>  <br>  int state(String a){<br>    if(a.length()&lt;2) return 0;<br>    if(a.length()==2){<br>      if(islet(a.charAt(0)) &amp;&amp; a.charAt(1)=='.'){<br>        return 2;<br>      }<br>    }<br>    <br>    for(int i=0; i&lt;a.length(); i++){<br>      if(!islet(a.charAt(i))) return 0;<br>    }<br>    return 1;<br>  }<br>  <br>  boolean islet(char a){<br>    if(a&lt;='z' &amp;&amp; a&gt;='a' || a&lt;='Z' &amp;&amp; a&gt;='A') return true;<br>    return false;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>