            public class LongNumber {<br>  long[][] a1 =<br>  new long[][] {<br>    {10, 1},<br>    {100, 2},<br>    {1000, 3},<br>    {10000, 4},<br>    {100000, 5},<br>    {1000000, 6},<br>    {10000000, 7},<br>    {100000000, 8},<br>    {1000000000, 9},<br>    {10000000000l, 10}<br>    };<br>  long[][] a2 =<br>  new long[][] {<br>    {1+3, 1},      {10, 2},<br>    {1+31, 3},      {100, 4},<br>    {1+316, 5},      {1000, 6},<br>    {1+3162, 7},    {10000, 8},<br>    {1+31622, 9},    {100000, 10},<br>    {1+316227, 11}  ,  {1000000, 12},<br>    {1+3162277, 13},    {10000000, 14},<br>    {1+31622776, 15},    {100000000, 16},<br>    {1+316227766, 17},  {1000000000, 18},<br>    {1+3162277601l, 19},  {10000000000l, 20},<br>    };<br> <br>  long n(long[][] spec, long i) {<br>    int z = 0;<br>    long bn = 0;<br>    long prev = 0;<br>    while(true) {<br>      long ant = spec[z][0] - prev;<br>      prev = spec[z][0];<br>      long nd = spec[z][1];<br>      if(i&lt;(ant*nd)) {<br>        long num = i/nd;<br>        long ofs = i%nd;<br>        long tall = bn + num;<br>        if(spec[0][0]&lt;10) tall*=tall;<br>        while(++ofs&lt;nd) tall/=10;<br>        return tall%10;<br>      }<br>      i -= ant*nd;<br>      z++;<br>      bn += ant;<br>    }<br>  }<br>  long carry(long i) {<br>    long a = n(a1,i)+n(a2,i);<br>    if(a&lt;9) return 0;<br>    if(a&gt;9) return 1;<br>    return carry(i+1);<br>  }<br>  long n3(long i) {<br>    return (n(a1,i)+n(a2,i)+carry(i+1))%10;<br>  }<br>public int findDigit(int k) {<br>return (int)n3(k);<br>}}<br></td>