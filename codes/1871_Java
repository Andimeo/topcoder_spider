            import java.util.*;<br>public class ShuffleMethod {<br>  public int[] oneTime(int[] twoShuffle) {<br>    int[] periods = new int[twoShuffle.length];<br>    int[] groups = new int[twoShuffle.length];<br>    int[] ord = new int[twoShuffle.length];<br>    int grpS = 1;<br>    for(int i = 0; i&lt;twoShuffle.length; i++) {<br>      if(groups[i]==0) {<br>        int cnt = 1;<br>        groups[i] = grpS;<br>        ord[i] = 0;<br>        int x = twoShuffle[i]-1;<br>        while(x!=i) {<br>          groups[x] = grpS;<br>          cnt++;<br>          ord[x] = cnt-1;<br>          x = twoShuffle[x]-1;<br>        }<br>        grpS++;<br>        <br>        periods[i] = cnt;<br>        x = twoShuffle[i]-1;<br>        while(x!=i) {<br>          periods[x] = cnt;<br>          x = twoShuffle[x]-1;<br>        }<br>      }<br>    }  <br>    int[] res = new int[twoShuffle.length];<br>    for(int i = 0; i&lt;twoShuffle.length; i++) {<br>      if(res[i]==0) {<br>        if(periods[i]==1) res[i] = i+1;<br>        else {<br>          for(int j = i+1; j&lt;twoShuffle.length; j++) {<br>            if(res[j]==0) {<br>              if(periods[i] == periods[j]) {<br>                if(groups[i]!=groups[j] || ((ord[j]-ord[i]+periods[i])*2)%periods[i]==1) {<br>                  res[i] = j+1;<br>                  int x = i;<br>                  while(res[x]!=i+1) {<br>                    res[res[x]-1] = twoShuffle[x];<br>                    x = res[x]-1;<br>                  }<br>                  break;<br>                }<br>              }<br>            }<br>          }<br>          if(res[i]==0) return new int[]{};<br>        }<br>      }<br>    }<br>    return res;<br>  }          <br>                  <br>                  <br> <br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>