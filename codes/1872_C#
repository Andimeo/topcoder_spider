            using System;<br>using System.Text;<br>using System.Collections;<br><br>public class BadSubstring {<br><br>  long [,]odp = new long[45,3];<br><br>  public long how(int length,char st) <br>  {<br>    if (odp[length,st-'a']!=-1) return odp[length,st-'a'];<br><br>    if (length==0) return 1;<br>    if (length==1)<br>    {<br>      if (st=='a') return 2;<br>      else return 3;<br>    }<br>    <br>    if (st=='a') <br>    {<br>      odp[length,st-'a'] = how(length-1,'a')+how(length-1,'c');<br>    }<br>    else<br>    {<br>      odp[length,st-'a'] = how(length-1,'a')+how(length-1,'b')+how(length-1,'c');    <br>    }<br><br>    return odp[length,st-'a'];<br>  }<br><br>  public long howMany(int length) <br>  {<br>    for (int a=0;a&lt;45;a++)<br>    for (int b=0;b&lt;3;b++) odp[a,b] = -1;<br><br>    if (length==0) return 1;<br>    if (length==1) return 3;<br><br>      return how(length-1,'a')+how(length-1,'b')+how(length-1,'c');<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>