            Imports Microsoft.VisualBasic<br>Imports System.Math<br>Imports System<br>Imports System.Collections<br> <br>Public Class DirectoryTree<br>    Public Class el<br>        Implements IComparable<br> <br>        Public Name As String<br>        Public child As New SortedList<br> <br>        Public Function CompareTo(ByVal obj As Object) As Integer Implements System.IComparable.CompareTo<br>            Return String.Compare(Name, obj.name)<br>        End Function<br> <br>        Public Sub Add(ByVal complete As String)<br>            Dim a As Integer = complete.IndexOf("/")<br>            Dim n As String<br>            If a &gt; -1 Then<br>                n = complete.Substring(0, a)<br>                If child.Contains(n) = False Then<br>                    child.Add(n, New el(n))<br>                End If<br>                child(n).add(complete.Substring(a + 1))<br>            Else<br>                n = complete<br>                If child.Contains(n) = False Then<br>                    child.Add(n, New el(n))<br>                End If<br>            End If<br>        End Sub<br> <br>        Public Sub New(ByVal n As String)<br>            Name = n<br>        End Sub<br> <br>        Public Sub Write(ByVal prefix As String)<br>            list.Add(prefix.Replace("*", "+") &amp; Name)<br>            Dim a As Integer<br>            For a = 0 To child.Count - 1<br>                If a = child.Count - 1 Then<br>                    child.GetValueList(a).write(prefix.Replace("-", " ").Replace("*", " ").Replace("+", "|") &amp; "*-")<br>                Else<br>                    child.GetValueList(a).write(prefix.Replace("-", " ").Replace("*", " ").Replace("+", "|") &amp; "+-")<br>                End If<br>            Next<br>        End Sub<br>    End Class<br> <br>    Public Shared list As New ArrayList<br> <br>    Public Function display(ByVal files As String()) As String()<br>        Dim a As Integer<br>        Dim root As New el("ROOT")<br>        For a = 0 To files.Length - 1<br>            root.Add(files(a).Remove(0, 1))<br>        Next<br>        root.Write("")<br>        Return list.ToArray(GetType(String))<br>    End Function<br>End Class<br></td>