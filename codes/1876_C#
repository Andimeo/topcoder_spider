            public class Twain <br>  {<br>    public string getNewSpelling(int year, string phrase)  <br>    {<br>      string[] spl = phrase.Split(' ');<br>      for(int i=0; i&lt;=year; i++) <br>      {<br>        if(i==1) <br>        {<br>          for(int k=0; k&lt;spl.Length; k++) <br>          {<br>            if(spl[k].Length&gt;0 &amp;&amp; spl[k][0]=='x') <br>            {<br>              spl[k]=spl[k].Remove(0,1).Insert(0, "z");<br>            }<br>            spl[k]=spl[k].Replace("x", "ks");<br>          }<br>        }<br> <br>        if(i==2) <br>        {<br>          for(int k=0; k&lt;spl.Length; k++) <br>          {<br>            spl[k] = spl[k].Replace("y", "i");<br>          }<br>        }<br>      <br>        if(i==3) <br>        {<br>          for(int k=0; k&lt;spl.Length; k++)  <br>          {<br>            spl[k] = spl[k].Replace("ce", "se");<br>            spl[k] = spl[k].Replace("ci", "si");<br>          }<br>        }<br> <br>        if(i==4) <br>        {<br>          for(int k=0; k&lt;spl.Length; k++) <br>          {<br>            while(spl[k].IndexOf("ck", 0, spl[k].Length)&gt;=0) <br>            {<br>              spl[k] = spl[k].Replace("ck", "k");<br>            }<br>          }<br>        }<br>        if(i==5) <br>        {<br>          for(int k=0; k&lt;spl.Length; k++) <br>          {<br>            if(spl[k].Length&gt;=3 &amp;&amp; spl[k].IndexOf("sch", 0, 3)==0) <br>            {<br>              spl[k] = spl[k].Remove(0,3).Insert(0, "sk");<br>            }<br>            spl[k] = spl[k].Replace("chr", "kr");<br>      <br>            for(int j=0; j&lt;spl[k].Length-1; j++) <br>            {<br>              if(spl[k][j]=='c' &amp;&amp; spl[k][j+1]!='h') <br>              {<br>                spl[k] = spl[k].Remove(j,1).Insert(j, "k");<br>              }<br>            }<br>            if(spl[k].Length&gt;0 &amp;&amp; spl[k][spl[k].Length-1]=='c') spl[k]=spl[k].Remove(spl[k].Length-1, 1) + 'k';<br>          }<br>        }<br> <br>        if(i==6) <br>        {<br>          for(int k=0; k&lt;spl.Length; k++) <br>          {<br>            if(spl[k].Length&gt;=2 &amp;&amp; spl[k].IndexOf("kn", 0, 2) == 0) <br>            {<br>              spl[k] = spl[k].Remove(0,2).Insert(0, "n");<br>            }<br>          }<br> <br>        }<br>        if(i==7) <br>        {<br>          for(int k=0; k&lt;spl.Length; k++) <br>          {<br>            for(int j=0; j&lt;spl[k].Length-1; j++)  <br>            {<br>              if(spl[k][j]==spl[k][j+1] &amp;&amp; (spl[k][j]!='a' &amp;&amp; spl[k][j]!='e' &amp;&amp; spl[k][j]!='i' &amp;&amp; spl[k][j]!='o' &amp;&amp; spl[k][j]!='u')) <br>              {<br>                spl[k] = spl[k].Remove(j, 2).Insert(j, spl[k][j].ToString());<br>                j--;<br>              }<br>            }<br>          }<br>        }<br>      }<br>      string ret="";<br>      foreach(string str in spl)<br>        ret = ret + str + " ";<br>      ret = ret.Remove(ret.Length-1, 1);<br>      return ret;<br>    }<br>  }<br></td>