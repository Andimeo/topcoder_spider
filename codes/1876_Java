            import java.util.*;<br>public class Twain {<br>   public String getNewSpelling(int year, String phrase) {<br>      String nw = phrase;<br>if (year == 0) return nw;<br>     nw="";<br>     for (int i=0; i&lt;phrase.length(); i++) {<br>      if (phrase.charAt(i) == 'x' &amp;&amp; (i==0 || phrase.charAt(i-1) == ' ')) nw =nw +"z";<br>      else if (phrase.charAt(i) == 'x') nw = nw+"ks";<br>      else nw = nw + phrase.charAt(i);<br>     }<br>if (year == 1) return nw;<br>    nw = nw.replace('y', 'i');<br> <br>if (year == 2) return nw;<br>     phrase = nw;<br>     nw = "";<br>     for (int i=0; i&lt;phrase.length(); i++) {<br>try {<br>      if (phrase.charAt(i) == 'c' &amp;&amp; (phrase.charAt(i+1) == 'e' || phrase.charAt(i+1) == 'i')) nw =nw +"s";<br>      else nw = nw + phrase.charAt(i);<br>} catch (Exception e) {<br>      nw = nw + phrase.charAt(i);<br>}<br>     }<br>if (year == 3) return nw;<br>for (int j=0; j&lt;54; j++) {<br>     phrase = nw;<br>     nw = "";<br>     for (int i=0; i&lt;phrase.length(); i++) {<br>        try {<br>         if (phrase.charAt(i) == 'c' &amp;&amp; phrase.charAt(i+1) == 'k') nw =nw +"";<br>         else nw = nw + phrase.charAt(i);<br>        } catch (Exception e) {<br>         nw = nw + phrase.charAt(i);<br>        }<br>     }<br>}<br> <br>  <br>if (year == 4) return nw;<br>if (nw.startsWith("sch")) nw = "sk" + nw.substring(3, nw.length());<br>nw = nw.replaceAll(" sch", " sk");<br> <br>nw = nw.replaceAll("chr", "kr");<br>     phrase = nw;<br>     nw = "";<br>     for (int i=0; i&lt;phrase.length(); i++) {<br>        try {<br>         if (phrase.charAt(i) == 'c' &amp;&amp; phrase.charAt(i+1) != 'h') nw =nw +"k";<br>         else nw = nw + phrase.charAt(i);<br>        } catch (Exception e) {<br>         if (phrase.charAt(i) == 'c') nw = nw + "k";  //end of string<br>        }<br>     }<br> <br>if (year == 5) return nw;<br>   if (nw.startsWith("kn")) nw = nw.substring(1, nw.length());<br>   nw = nw.replaceAll(" kn", " n");<br> <br>if (year == 6) return nw;<br> <br>     phrase = nw;<br>     nw = "";<br>     for (int i=0; i&lt;phrase.length(); i++) {<br>        try {<br>         if (phrase.charAt(i) == phrase.charAt(i+1)&amp;&amp; (<br>phrase.charAt(i) != 'a' &amp;&amp;<br>phrase.charAt(i) != 'e' &amp;&amp;<br>phrase.charAt(i) != 'i' &amp;&amp;<br>phrase.charAt(i) != 'u' &amp;&amp;<br>phrase.charAt(i) != 'o' &amp;&amp;<br>phrase.charAt(i) != ' ' <br> <br>)) nw =nw + "";<br>         else nw = nw + phrase.charAt(i);<br>        } catch (Exception e) {<br>         nw = nw + phrase.charAt(i);<br>        }<br>     }<br> <br> <br>return nw;<br> <br>}<br>}<br></td>