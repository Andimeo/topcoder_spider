            using System;<br>using System.Collections;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections.Specialized;<br><br>public class MineField {<br>  public MineField () {  }<br>  public string[] getMineField(string mineLocations) {<br>    char[][] ret = new char[9][];<br>    for(int i=0;i&lt;ret.Length;i++) <br>      ret[i] = new char[] {'0','0','0','0','0','0','0','0','0'};<br>    String[] groups = mineLocations.Split(new char[] { '(', ')' });<br>    foreach (string s in groups)<br>    {<br>      if (s != null &amp;&amp; s != "")<br>      {<br>        String[] pair = s.Split(new char[] { ',' });<br>        int x = Int32.Parse(pair[0]);<br>        int y = Int32.Parse(pair[1]);<br>        ret[x][y] = 'M';<br>        for(int a=Math.Max(0,x-1);a&lt;=Math.Min(8,x+1);a++) <br>          for(int b=Math.Max(0,y-1);b&lt;=Math.Min(8,y+1);b++)<br>            if (ret[a][b] != 'M')<br>            {<br>              ret[a][b]++;<br>            }<br>      }<br>    }<br>    String[] r = new String[9];<br>    for(int i=0;i&lt;r.Length;i++) <br>      r[i] = new String(ret[i]);<br>    return r;<br>  }<br>}<br><br><br>// Powered by FileEdit<br></td>