            imports microsoft.visualbasic<br>public class MineField<br>public function getMineField(map as string) as string()<br>  dim t(),s(),ret(8) as string<br>  dim i,j,k as integer<br>  t = split(map,"(")<br>  for i = 1 to t.length-1<br>    t(i-1) = Left(t(i),t(i).length-1)<br>  next i<br>  for i = 0 to 8<br>    ret(i) = "000000000"<br>  next i<br>  for i = 0 to t.length-2<br>    s = split(t(i),",")<br>    j = CInt(s(0))<br>    k = CInt(s(1))<br>    Mid(ret(j),(k+1),1) = "M"<br>    system.console.writeline(ret(j))<br>  next i<br>  k=0<br>  for i = 0 to 8<br>    for j = 1 to 9<br>      if getChar(ret(i),j)="0" then<br>        if j&gt;1 then<br>          if getChar(ret(i),j-1) = "M" then k = k + 1<br>        end if<br>        if j&gt;1 AND i&gt;0 then<br>          if getChar(ret(i-1),j-1) = "M" then k = k + 1<br>        end if<br>        if j&gt;1 and i&lt;8 then <br>          if getChar(ret(i+1),j-1) = "M" then k = k + 1<br>        end if<br>        if j&lt;9 then <br>          if getChar(ret(i),j+1) = "M" then k = k + 1<br>        end if<br>        if j&lt;9 and i&gt;0 then<br>           if getChar(ret(i-1),j+1) = "M" then k = k + 1<br>        end if<br>        if j&lt;9 and i&lt;8 then <br>          if getChar(ret(i+1),j+1) = "M" then k = k + 1<br>        end if<br>        if i&gt;0 then <br>          if getChar(ret(i-1),j) = "M" then k = k + 1<br>        end if<br>        if i&lt;8 then<br>          if getChar(ret(i+1),j) = "M" then k = k + 1<br>        end if<br>        Mid(ret(i),j,1) = CStr(k)<br>        k = 0<br>      end if<br>    next j<br>  next i<br>  getMineField=ret<br>end function<br>end class<br></td>