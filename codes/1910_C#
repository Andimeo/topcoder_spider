            using System;<br>using System.Collections;<br>using System.Globalization;<br>using System.Text;<br>using System.Text.RegularExpressions;<br><br>public class DiamondLogo <br>{<br>  public string[] logo( int size, char background )<br>  {<br>    string[] result = new string[size * 2 - 1];<br>    result[0] = new string( background, size - 1 ) + 'X' + new string( background, size - 1 );<br>    for( int i = 1; i &lt; size - 1; i++ )<br>    {<br>      result[i] = new string( background, size - i - 1 ) + 'X' + new string( ' ', 2 * i - 1 ) + 'X' + <br>        new string( background, size - i - 1 );<br>      result[size * 2 - i - 2] = result[i];<br>    }<br>    result[size - 1] = 'X' + new string( ' ', 2 * size - 3 ) + 'X';<br>    result[size * 2 - 2] = new string( background, size - 1 ) + 'X' + new string( background, size - 1 );<br>    return result;<br>  }<br><br>  NumberFormatInfo nfi = new CultureInfo( "en-US", false ).NumberFormat;<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>