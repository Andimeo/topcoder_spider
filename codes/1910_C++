            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>using namespace std;<br> <br>class DiamondLogo{<br>public:<br>  vector&lt;string&gt; logo(int size,char background){<br>    vector&lt;string&gt; ret(size + size - 1, string(size + size - 1,' '));<br>    for (int i = 0; i &lt; size + size - 1; ++i) {<br>      for (int j = 0; j &lt; size + size - 1; ++j) {<br>        int dist = abs(i - size + 1) + abs(j - size + 1);<br>        if (dist == size - 1) ret[i][j] = 'X';<br>        if (dist &gt; size - 1) ret[i][j] = background;<br>      }<br>    }<br>    return ret;<br>  }<br>};<br></td>