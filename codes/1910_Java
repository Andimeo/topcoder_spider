            import java.util.*;<br>public class DiamondLogo {<br>  public String[] logo(int size, char background) {<br>    size = 2 * size - 1;<br>    String[] res = new String[size];<br>    int lx = size / 2;<br>    int rx = size / 2;<br>    int dx = 1;<br>    <br>    for (int i = 0; i &lt; size; i++) {  <br>      res[i] = "";<br>      for (int k = 0; k &lt; size; k++) {<br>        if ((k == lx) || (k == rx)) {<br>          res[i] += 'X';<br>        } else if ((k &gt; lx) &amp;&amp; (k &lt; rx)) {<br>          res[i] += ' ';<br>        } else {<br>          res[i] += background;<br>        }<br>      }<br>      lx-=dx;<br>      rx+=dx;<br>      if (lx == 0) {<br>        dx=-dx;<br>      }<br>      System.out.println(res[i]);<br>    }<br>    return res;<br>  }<br>}<br> <br> <br>// Powered by PopsEdit<br></td>