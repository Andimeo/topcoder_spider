            using System;<br>using System.Collections;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br><br>public class Hyphenated<br>{<br><br>  public Hyphenated()<br>  {<br>    // Dummy constructor to make everybody in the world a little bit happy<br>  }<br><br>  public double avgLength(string[] lines)<br>  {<br>    StringBuilder complete = new StringBuilder();<br>    bool prev = false;<br>    foreach (String s in lines)<br>    {<br>      if (!prev) complete.Append(' ');<br>      if(s.EndsWith("-") &amp;&amp; (s.Length&gt;1) ) {<br>        complete.Append(s.Substring(0,s.Length-1));<br>      } else {<br>        complete.Append(s);<br>      }<br>      prev = s.EndsWith("-") &amp;&amp; (s.Length &gt; 1);<br>    }<br>    String[] values = complete.ToString().Split(new char[] { ' ', '-', '.' });<br>    int count = 0;<br>    double len = 0;<br>    foreach (String s in values)<br>    {<br>      if (s != null &amp;&amp; s.Length &gt; 0)<br>      {<br>        count++;<br>        len += s.Length;<br>      }<br>    }<br>    return len / count;<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br></td>