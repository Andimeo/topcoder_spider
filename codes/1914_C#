            using System;<br>using System.Collections;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class Animation<br>{<br>    public string[] animate(int speed, string init)<br>    {<br>        ArrayList result = new ArrayList();<br>        string last = "X";<br>        int t = 0;<br> <br>        while (last.IndexOf('X') &gt;= 0)<br>        {<br>            char[] ca = new char[init.Length]; <br> <br>            for (int i=0;i&lt;ca.Length;i++) ca[i] = '.';<br>            for (int i=0;i&lt;ca.Length;i++)<br>            {<br>                if (init[i] == 'L' &amp;&amp;<br>                    i - (speed * t) &gt;= 0)<br>                    ca[i-(speed * t)] = 'X';<br>                if (init[i] == 'R' &amp;&amp;<br>                    i + (speed * t) &lt; init.Length)<br>                    ca[i+ (speed*t)] = 'X';<br>                    <br>            }<br> <br>            result.Add(new string(ca));<br>            last = new string(ca);<br> <br>            t++;<br>        }<br> <br>        return (string[])result.ToArray(typeof(string));<br>    }<br>}<br></td>