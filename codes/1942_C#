            using System;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br> <br>public class TextEditor<br>{<br>  public string[] twoColumn(string[] text, int width)<br>  {<br>    string fullline = String.Join(" ",text).Trim();<br>    if (fullline.Length==0)<br>    {<br>      return new string[0];<br>    }<br>    string[] words = fullline.Split(new char[] {' '});<br>    ArrayList lines = new ArrayList();<br>    string current = "";<br>    for (int loop=0; loop&lt;words.Length; loop++)<br>    {<br>      if (words[loop].Length==0)<br>      {<br>        continue;<br>      }<br>      <br>      if ((current.Length+words[loop].Length)&gt;width)<br>      {<br>        lines.Add(current.TrimEnd());<br>        current="";<br>      }<br>      current+=words[loop]+" ";<br>    }<br>    if (current.Length&gt;0)<br>    {<br>      lines.Add(current.TrimEnd());<br>    }<br>    string[] result = new string[lines.Count];<br>    int diff = (int)Math.Ceiling(0.5*lines.Count);<br>    for (int i = 0; i&lt;diff; i++)<br>    {<br>      result[i*2]=(string)lines[i];<br>      if ((i+diff)&lt;lines.Count)<br>      {<br>        result[(i*2)+1]=(string)lines[i+diff];<br>      }<br>    }<br>    return result;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>