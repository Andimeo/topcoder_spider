            import java.util.*;<br> <br>public class TextEditor<br>{<br>  public String[] twoColumn(String[] text, int width)<br>  {<br>    Vector words = new Vector();<br>    for(int x = 0; x&lt;text.length; x++)<br>    {<br>      StringTokenizer t = new StringTokenizer(text[x], " ");<br>      while(t.hasMoreTokens())<br>      {<br>        words.add(t.nextToken());<br>      }<br>    }<br>    Vector res = new Vector();<br>    <br>    for(int y = 0; y&lt;words.size();)<br>    {<br>      StringBuffer b = new StringBuffer((String)words.elementAt(y));<br>      int w = b.length();<br>      y++;<br>      while(y&lt;words.size())<br>      {<br>        String s = (String)words.elementAt(y);<br>        if((w+1+s.length()) &gt; width)<br>          break;<br>        b.append(" ");<br>        b.append(s);        <br>        w += (1+s.length());<br>        y++;<br>      }<br>      res.add(b);<br>      <br>    }<br>    String []rr = new String[res.size()];<br>    int mid = (int)Math.round((double)res.size()/(double)2);<br>    for(int a = 0, b=0; b&lt;mid; b++,a+=2)<br>    {<br>      rr[a] = ((StringBuffer)(res.elementAt(b))).toString();<br>      if(b+mid &lt; res.size())<br>        rr[a+1] = ((StringBuffer)(res.elementAt(b+mid))).toString();<br>    }<br> <br> <br>    return rr;<br>  }<br>}<br></td>