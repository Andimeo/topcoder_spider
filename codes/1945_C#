            using System;<br>using System.Collections;<br>public class CombinationLock {<br>  public double degreesTurned(int[] combo, int size, int start) {<br>    double ret = 0;<br>    <br>    bool cw = false;<br>    for (int i = 0; i &lt; combo.Length; i++) {<br>      ret += 360.0 * (combo.Length-i);<br>      double d = combo[i] - start;<br>      d /= size;<br>      if (cw) {<br>        d *= -1;<br>      }<br>      if (d &lt; 0) {<br>        d += 1;;<br>      }<br>      ret += d * 360;<br>      <br>      cw = ! cw;<br>      start = combo[i];<br>    }<br>    <br>    return (ret);<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>