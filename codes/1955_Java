            public class Centipede<br>  {<br>  int [] bodyX;<br>  int [] bodyY;<br>  int head;<br>  boolean moveRight;<br>  <br>  public Centipede()<br>    {<br>    bodyX=new int[10];<br>    bodyY=new int[10];<br>    <br>    initCentipede();<br>    }<br> <br>  void initCentipede()<br>    {<br>    for(int i=0;i&lt;10;i++)<br>      {<br>      bodyX[i]=i+1;<br>      bodyY[i]=0;<br>      }<br>    head=9;<br>    moveRight=true;<br>    }<br> <br>  boolean testBlock(int x,int y,String [] screenLayout)<br>    {<br>    if (y&gt;=screenLayout.length)<br>      return false;<br> <br>    if (screenLayout[y].charAt(x)=='#')<br>      return true;<br>    else<br>      return false;<br>    }<br> <br>  //return if this ends a cycle<br>  boolean moveCentipede(String [] screenLayout)<br>    {<br>    int newX=bodyX[head];<br>    int newY=bodyY[head];<br> <br>    if (moveRight)<br>      newX++;<br>    else<br>      newX--;<br>    <br>    if (testBlock(newX,newY,screenLayout))<br>      {<br>      newX=bodyX[head];<br>      newY=bodyY[head]+1;<br>      moveRight=!moveRight;<br>      }<br> <br>    <br>    if (testBlock(newX,newY,screenLayout))<br>      {<br>      newX=bodyX[head];<br>      newY=bodyY[head];<br> <br>      /*if (moveRight)<br>        newX++;<br>      else<br>        newX--;*/<br>      }<br> <br>    head=(head+1)%10;<br>    bodyX[head]=newX;<br>    bodyY[head]=newY;<br> <br>    if (bodyY[(head+1)%10]&gt;=screenLayout.length)<br>      {<br>      initCentipede();<br>      return true;<br>      }<br>    else<br>      return false;<br>    }<br>  <br>  public String [] simulate(String [] screenLayout,int timeUnits)<br>    {<br>    int cycleLength=0;<br>    while(!moveCentipede(screenLayout))<br>      {<br>      cycleLength++;<br>      }<br>    cycleLength++;<br>    <br>    System.out.println("Cycle Length: "+cycleLength);<br>    <br>    timeUnits=timeUnits%cycleLength;<br> <br>    for(int i=0;i&lt;timeUnits;i++)<br>      moveCentipede(screenLayout);<br>  <br>    for(int i=0;i&lt;10;i++)<br>      {<br>      if (bodyY[i]&lt;screenLayout.length)<br>        {<br>        char [] s=screenLayout[bodyY[i]].toCharArray();<br>        s[bodyX[i]]='x';<br>        screenLayout[bodyY[i]]=new String(s);<br>        }<br>      }<br>    return screenLayout;<br>    }<br>  }<br></td>