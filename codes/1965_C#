            using System;<br>using System.Text;<br>using System.Collections;<br><br>public class ElevatorLimit {<br>  public int[] getRange(int[] enter, int[] exit, int p) {<br><br>    int t=0;<br>    int n = enter.Length;<br>    int min=0;<br>    int max=0;<br><br>    for(int i = 0; i&lt;n; i++)<br>    {<br>      t -= exit[i];<br>      min = Math.Min(t, min);<br>      t += enter[i];<br>      max = Math.Max(t, max);<br>    }<br><br>    if (max-min &gt; p) return new int[0];<br><br>    return new int[2] { -min, p-max }; <br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester for c# [12-oct-2003]<br>// Powered by CodeProcessor<br></td>