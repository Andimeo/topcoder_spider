            using System;<br>using System.Collections;<br> <br>public class ProgressBar<br>{<br>  public string showProgress(int[] taskTimes, int tasksCompleted)<br>  {<br>    int sum=0, tot=0;<br>    for (int i=0; i&lt;tasksCompleted; i++)<br>      sum += taskTimes[i];<br>    for (int i=0; i&lt;taskTimes.Length; i++)<br>      tot += taskTimes[i];<br> <br>    double frac = (double)sum / (double)tot;<br>    int num = (int) (20*frac);<br>    char []str = new char[20];<br>    for (int i=0; i&lt;num; i++) str[i]='#';<br>    for (int i=num; i&lt;20; i++) str[i]='.';<br>    string s = new string(str);<br>    return s;<br> <br>  }<br> <br> <br>}<br></td>