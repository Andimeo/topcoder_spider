            public class ProgressBar {<br>    public String showProgress(int[] taskTimes, int tasksCompleted){<br>        double total = 0;<br>        double grandTotal = 0;<br>        for(int i=0; i&lt;tasksCompleted; i++) {<br>            total += taskTimes[i];<br>        }<br>        for(int i=0; i&lt;taskTimes.length; i++) {<br>            grandTotal += taskTimes[i];<br>        }<br>        double percenteDone = total/grandTotal;<br>        double firstDone = 20 * percenteDone;<br>        StringBuffer sb = new StringBuffer();<br>        for(int i=0; i&lt;(int)firstDone; i++) {<br>            sb.append("#");<br>        }<br>        for(int i=(int)firstDone; i&lt;20; i++) {<br>            sb.append(".");<br>        }<br>        return sb.toString();<br>        <br>    }    <br>}<br></td>