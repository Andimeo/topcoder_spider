            // Powered by radeclipse!<br>import java.util.* ;<br>public class Find3Cheaters {<br>  HashMap h = new HashMap() ;<br>  public int shortest(String a, String b, String c) {<br>    String key = a + "/" + b + "/" + c ;<br>    Object res = h.get(key) ;<br>    if (res != null) {<br>      return ((Integer)res).intValue() ;<br>    }<br>    int p = 0 ;<br>    if (a.length() + b.length() + c.length() == 0) {<br>      return 0 ;<br>    }<br>    if (a.length() &gt; 0) {<br>      p |= (1 &lt;&lt; (a.charAt(0) - 'a')) ;<br>    }<br>    if (b.length() &gt; 0) {<br>      p |= (1 &lt;&lt; (b.charAt(0) - 'a')) ;<br>    }<br>    if (c.length() &gt; 0) {<br>      p |= (1 &lt;&lt; (c.charAt(0) - 'a')) ;<br>    }<br>    int r = 1000000 ;<br>    for (char k='a'; k&lt;='z'; k++) {<br>      if (0 != (p &amp; (1 &lt;&lt; (k - 'a')))) {<br>  String aa = a ;<br>  if (a.startsWith("" + (char)k)) {<br>    aa = aa.substring(1) ;<br>  }<br>  String bb = b ;<br>  if (b.startsWith("" + (char)k)) {<br>    bb = bb.substring(1) ;<br>  }<br>  String cc = c ;<br>  if (c.startsWith("" + (char)k)) {<br>    cc = cc.substring(1) ;<br>  }<br>  /*<br>  if (aa.length() + bb.length() + cc.length() == <br>      a.length() + b.length() + c.length()) {<br>    throw new Error("Huh: " + a + " " + b + " " + c + " " + k) ;<br>  }<br>  */<br>  r = Math.min(r, 1+shortest(aa, bb, cc)) ;<br>      }<br>    }<br>    h.put(key, new Integer(r)) ;<br>    return r ;<br>  }<br>}<br></td>