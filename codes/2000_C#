            using System;<br>using System.Collections;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class FontSize<br>{<br>  public int getPixelWidth(string sentence, int[] uppercase, int[] lowercase)<br>  {<br>    int x = 0;<br>    foreach (char c in sentence) {<br>      if (c == ' ')<br>        x += 3;<br>      else if (c &lt;= 'Z')<br>        x += uppercase[c-'A'];<br>      else<br>        x += lowercase[c-'a'];<br>      ++x;<br>        <br>    }<br>    return x-1;<br>  }<br>  <br>  #region Testing<br>  #endregion<br>}<br> <br>//Powered by [KawigiEdit]<br></td>