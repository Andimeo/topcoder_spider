            /*<br>*/<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cctype&gt;<br>using namespace std;<br>struct FontSize <br>{<br>  int getPixelWidth(string sentence, vector &lt;int&gt; uppercase, vector &lt;int&gt; lowercase) <br>  {<br> <br>    int count=0;<br>    int i=0;<br>    while(sentence[i]!='\0')<br>      {<br>  if(sentence[i]==' ')<br>    count+=4;<br>  else<br>    {<br>      if(sentence[i]&gt;=97)<br>        count+=1+lowercase[sentence[i]-'a'];<br>      else<br>        count+=1+uppercase[sentence[i]-'A'];<br>    }<br>  i++;<br>      }<br>    count--;<br>    return count;<br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br>  }<br>    <br> <br>};<br> <br> <br> <br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>