            using System;<br>public class WordForm<br>{<br>    public string getSequence(string word)<br>    {<br>      string res = "";<br>      for(int i=0;i&lt;word.Length;i++)<br>      {<br>        char which;<br>        if(word[i] == 'y' || word[i] == 'Y')<br>        {<br>          if(i == 0)<br>          {<br>            which = 'C';<br>          }<br>          else if(res[res.Length-1] == 'V')<br>          {<br>            which = 'C';<br>          }<br>          else<br>          {<br>            which = 'V';<br>          }<br>        }<br>        else<br>        {<br>          char c = word[i];<br>          if(c == 'a' || c=='A'|| c=='e' || c=='E' || c=='i' || c == 'I' || c=='o' || c=='O' || c=='u' || c == 'U')<br>          {<br>            which = 'V';<br>          }<br>          else<br>          {<br>            which = 'C';<br>          }<br>        }<br> <br> <br>        if(res == "")<br>        {<br>          res += which;<br>        }<br>        else if(res[res.Length-1] != which)<br>        {<br>          res += which;<br>        }<br>      }<br>      return res;<br>    }<br>  }<br></td>