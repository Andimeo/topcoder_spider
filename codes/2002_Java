            import java.util.*;<br>public class WordForm {<br>  public String getSequence(String word) {<br>    boolean lastV = true;<br>    word = word.toUpperCase();<br>    String vowel = "AEIOU";<br>    String ans = "";<br>    for ( int i = 0; i &lt; word.length(); i++ ) {<br>      if ( vowel.indexOf( word.charAt( i ) ) != -1 ) {<br>        lastV = true;<br>        ans += "V";<br>      }<br>      else if ( word.charAt( i ) == 'Y' &amp;&amp; !lastV ) {<br>        lastV = true;<br>        ans += "V";<br>      }<br>      else {<br>        lastV = false;<br>        ans += "C";<br>      }<br>    }<br>    <br>    String ans2 = "";<br>    <br>    ans2 += "" + ans.charAt( 0 );<br>    for ( int i = 1; i &lt; ans.length(); i++ ) if ( ans.charAt( i ) != ans.charAt( i - 1 ) ) ans2 += ans.charAt( i );<br>    return ans2;<br>  }<br>  <br>}<br> <br>// Powered by PopsEdit<br>// Powered by CodeProcessor<br></td>