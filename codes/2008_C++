            #include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br><br>using namespace std;<br><br>int koji[40];<br>int vrati;<br>class LogCabin<br>{<br>  public: <br>   void rek(int d,vector&lt;int&gt; fabrics)<br>   {<br>      int i;<br>      if(d&gt;vrati) vrati=d;<br>    for(i=0;i&lt;4;i++)<br>      {<br>        if(fabrics[i]&gt;=d/2+1)<br>         {<br>           if(d-1&gt;=0 &amp;&amp; koji[d-1]==i) continue;<br>            if(d==2 &amp;&amp; koji[0]==i) continue;<br>            if(d-3&gt;=0 &amp;&amp; koji[d-3]==i) continue;<br>             if(d-4&gt;=0 &amp;&amp; koji[d-4]==i) continue;<br>            koji[d]=i;<br>            fabrics[i]-=d/2+1;<br>            rek(d+1,fabrics);<br>            fabrics[i]+=d/2+1;<br>         }<br>      }<br>   }<br><br>  int maxStrips(vector &lt;int&gt; fabrics) <br>  { <br>      vrati=0;<br>     rek(0,fabrics);<br>    return vrati;<br>   } <br><br><br><br><br><br><br>  <br><br><br><br><br><br><br>  <br> <br>}; <br><br>    <br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>