            using System;<br> <br>public class Stairs<br>{<br>  private bool IsValidDesign(int risers, int maxHeight, int minWidth, int totalHeight, int totalWidth)<br>  {<br>    if (totalHeight % risers != 0 || totalHeight / risers &gt; maxHeight ||<br>        totalWidth % (risers-1) != 0 || totalWidth / (risers-1) &lt; minWidth) <br>      return false;<br>    return true;<br>  }<br> <br>  public int designs(int maxHeight, int minWidth, int totalHeight, int totalWidth)<br>  {<br>    int count = 0;<br>    for (int i = 2; i &lt;= totalHeight; i++)<br>    {<br>      if (IsValidDesign(i, maxHeight, minWidth, totalHeight, totalWidth)) count++;<br>    }<br>    return count;<br>  }<br>}<br></td>