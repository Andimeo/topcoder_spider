<td class="problemText" colspan="8" valign="middle" align="left">
            public class Stairs {<br>  public int designs(int maxY, int minX, int totalY, int totalX) {<br>    int ret=0;<br>    for (int x=1;x&lt;=1000;x++) {<br>    for (int y=1;y&lt;=1000;y++) {<br>      if (x&lt;minX||y&gt;maxY) continue;<br>      if (totalX%x!=0) continue;<br>      if (totalY%y!=0) continue;<br>      int numX = totalX/x;<br>      if ((numX+1)*y != totalY) continue;<br>      ret++;<br>    }}<br>    return ret;<br>  }<br>}<br></td>