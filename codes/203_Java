            public class Tothello {<br> <br>int[][] board;<br> <br>int[] dx = {1,0,1,1};<br>int[] dy = {0,1,1,-1};<br> <br>public int bestMove(String[] rp, String[] bp, String turns) {<br>  int turn=0;<br>  int best;<br>  if (turns.toLowerCase().equals("red")) {<br>    turn = 1;<br>    best = rp.length;<br>  } else {<br>    turn = 2;<br>    best = bp.length;<br>  }<br> <br>  board = new int[8][8];<br>  for (int c = 1; c&lt;=2; c++) {<br>    String[] p;<br>    if (c==1) p = rp; else p = bp;<br> <br>    for (int i=0; i&lt;p.length; i++) {<br>      board[p[i].charAt(0)-'A'][p[i].charAt(1)-'1'] = c;<br>    }<br>  }<br> <br>  int oturn = 3-turn;<br>  for (int i=0; i&lt;8; i++) for (int j=0; j&lt;8; j++) if (board[i][j]==0) {<br>    int[][] b = new int[8][8];<br>    for (int k=0; k&lt;8; k++) for (int l=0; l&lt;8; l++) b[k][l]=board[k][l];<br> <br>    b[i][j] = turn;<br>    <br>    boolean done = false;<br>    while (!done) {<br>      done = true;<br>      for (int k=0; k&lt;8; k++) for (int l=0; l&lt;8; l++) if (b[k][l]==oturn) {<br>        for (int d=0; d&lt;dx.length; d++) {<br>          int x = k;<br>          int y = l;<br>          while (x&gt;=0 &amp;&amp; y&gt;=0 &amp;&amp; x&lt;8 &amp;&amp; y&lt;8 &amp;&amp; b[x][y]==oturn) {<br>            x+=dx[d]; y+=dy[d];<br>          }<br>          if (!(x&gt;=0 &amp;&amp; y&gt;=0 &amp;&amp; x&lt;8 &amp;&amp; y&lt;8 &amp;&amp; b[x][y]==turn)) continue;<br> <br>          x = k;<br>          y = l;<br>          while (x&gt;=0 &amp;&amp; y&gt;=0 &amp;&amp; x&lt;8 &amp;&amp; y&lt;8 &amp;&amp; b[x][y]==oturn) {<br>            x-=dx[d]; y-=dy[d];<br>          }<br>          if (!(x&gt;=0 &amp;&amp; y&gt;=0 &amp;&amp; x&lt;8 &amp;&amp; y&lt;8 &amp;&amp; b[x][y]==turn)) continue;<br>  <br>//          System.out.println(x+" "+y);<br>          b[k][l]=turn;<br>          done = false;<br>          break;<br>        }  <br>      }<br>    }<br> <br>    int amt = 0;<br>    for (int k=0; k&lt;8; k++) for (int l=0; l&lt;8; l++) if (b[k][l]==turn) amt++;<br>    if (amt &gt; best) {<br>       best = amt;<br>/*      for (int n=0; n&lt;8; n++) {<br>        String c = "";<br>        for (int m=0; m&lt;8; m++) c+=b[m][n];<br>        System.out.println(c);<br>      }<br>        System.out.println("");*/<br>    }<br>  }<br>  <br>  return best;<br>}<br> <br> <br> <br>}<br></td>