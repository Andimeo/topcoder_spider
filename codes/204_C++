            #include &lt;stdio.h&gt;<br>#include &lt;string.h&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;stdlib.h&gt;<br> <br>static char board[8][8];<br>static int best = -1;<br> <br>void scan(int c, int r, int n);<br>void lscan(int c, int r, int n);<br>void rscan(int c, int r, int n);<br> <br>void lscan(int c, int r, int n)<br>{<br> if(r &gt; 5 || c &lt; 2)<br>  return;<br> if(r &lt; 6 &amp;&amp; c &gt; 1 &amp;&amp; board[r + 1][c - 1] &amp;&amp; !board[r + 2][c - 2]) {<br>  r += 2;<br>  c -= 2;<br>  scan(c, r, n + 1);<br>  lscan(c, r, n);<br>  rscan(c, r, n);<br> }<br>}<br> <br>void rscan(int c, int r, int n)<br>{<br> if(r &gt; 5 || c &gt; 5)<br>  return;<br> if(r &lt; 6 &amp;&amp; c &lt; 6 &amp;&amp; board[r + 1][c + 1] &amp;&amp; !board[r + 2][c + 2]) {<br>  r += 2;<br>  c += 2;<br>  scan(c, r, n + 1);<br>  lscan(c, r, n);<br>  rscan(c, r, n);<br> }<br>}<br> <br>void scan(int c, int r, int n)<br>{<br> if(r &lt; 0 || r &gt; 7 || c &lt; 0 || c &gt; 7) {<br>  printf("%d %d\n", r, c);<br>  return;<br> }<br> if(r == 7) {<br>  if(best == -1 || n &lt; best)<br>   best = n;<br>  return;<br> }<br> //printf("%d %d %d\n", r, c, n);<br> if(best != -1 &amp;&amp; n &gt;= best)<br>  return;<br> if(c &gt; 0 &amp;&amp; !board[r + 1][c - 1])<br>  scan(c - 1, r + 1, n + 1);<br> if(c &lt; 7 &amp;&amp; !board[r + 1][c + 1])<br>  scan(c + 1, r + 1, n + 1);<br> lscan(c, r, n);<br> rscan(c, r, n);<br>}<br> <br>class Checkers<br>{<br> public:int compute(string startpos, vector&lt;string&gt;pos)<br> {<br>  int c, r;<br>  for(int i = 0; i &lt; pos.size(); i++) {<br>   const char *p = pos[i].c_str();<br>   board[p[2] - '0'][p[0] - '0'] = 1;<br>  }<br>  const char *p = startpos.c_str();<br>  c = *p - '0';<br>  r = p[2] - '0';<br>  scan(c, r, 0);<br>  return best;<br> }<br>};<br></td>