            import java.util.*;<br> <br>public class UserListSorter {<br>  int ss;<br>  int oo;<br> <br>  class Cmp implements Comparator {<br>    public int compare(Object aa, Object bb) {<br>      String aaa = ""+aa;<br>      String bbb = ""+bb;<br> <br>      String[] a = split(aaa);<br>      String[] b = split(bbb);<br> <br>      int c = a[ss].compareTo(b[ss]);<br>      if (c != 0) return oo * c;<br>      return a[0].compareTo(b[0]);<br>    }<br> <br>    String[] split(String s) {<br>      StringTokenizer tok = new StringTokenizer(s, " ");<br>      String a = fmt(tok.nextToken());<br>      String b = tok.nextToken();<br>      String c = fmt(tok.nextToken());<br>      String d = tok.nextToken();<br>      return new String[]{ a, b, c, d };<br>    }<br> <br>    String fmt(String s) {<br>      int i = Integer.parseInt(s);<br>      s = "000000" + i;<br>      return s.substring(s.length() - 5);<br>    }<br>  }<br> <br>public String[] sortUsersBy(String[] userInfo, int sortBy, int order) {<br>  ss = sortBy;<br>  oo = order == 1 ? 1 : -1;<br>  for (int i = 0; i &lt; userInfo.length; ++i) userInfo[i] = i + " " + userInfo[i];<br>  Arrays.sort(userInfo, new Cmp());<br>  for (int i = 0; i &lt; userInfo.length; ++i) {<br>    StringTokenizer tok = new StringTokenizer(userInfo[i], " ");<br>    tok.nextToken();<br>    userInfo[i] = tok.nextToken();<br>  }<br>  return userInfo;<br>}<br>}<br></td>