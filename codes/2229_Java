            public class SpamDetector {<br>public int countKeywords(String subject, String[] keys) {<br>String[] toks = subject.split(" ");<br> <br>for (int i = 0; i &lt; keys.length; i++) {<br>keys[i] = keys[i].toLowerCase();<br>StringBuffer sb = new StringBuffer();<br>for (int j = 0; j &lt; keys[i].length(); j++) {<br>sb.append(keys[i].charAt(j)+"+");<br>}<br>keys[i] = new String(sb);<br>}<br> <br>int n = 0;<br>for (int i = 0; i &lt; toks.length; i++) {<br>boolean yes = false;<br>for (int j = 0; j &lt; keys.length; j++) {<br>if (toks[i].toLowerCase().matches(keys[j])) { yes = true; break; }<br>}<br>if (yes) n++;<br>}<br>return n;<br>}<br>}<br></td>