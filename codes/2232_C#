            using System;<br> <br>public class CrossWord<br>{<br>  public int countWords(string[] board, int size)<br>  {<br>    int ret = 0;<br>    for( int i=0; i&lt;board.Length; i++ )<br>    {<br>      int s = 0;<br>      for( int j=0; j&lt;board[i].Length; j++ )<br>      {<br>        if( board[i][j] == 'X' )<br>        {<br>          if( s == size )<br>            ret ++;<br>          s = 0;<br>        }<br>        else<br>          s++;<br>      }<br>      if( s == size )<br>        ret ++;<br>    }<br>    return ret;<br>  }<br>}<br></td>