            using System;<br>using System.Text;<br>using System.Collections;<br><br>public class FanFailure {<br>  public int[] getRange(int[] c, int m) {<br><br>    Array.Sort(c);<br><br>    int i,j;<br>    int sum=0;<br><br><br>    for(i = 0; i&lt;c.Length; i++) sum += c[i];<br><br><br>    int suma,sumb;<br><br>    suma = sum;<br><br>    for(i = 0; i&lt;c.Length; i++)<br>    {<br>      suma -= c[i];<br>      if (suma &lt; m) break;<br>    }<br><br>    sumb = sum;<br><br>    for(j = c.Length; j&gt;0; j--)<br>    {<br>      sumb -= c[j-1];<br>      if (sumb&lt;m) break;<br>    }<br><br>    return new int [] { i, c.Length-j };<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester for c# [12-oct-2003]<br>// Powered by CodeProcessor<br></td>