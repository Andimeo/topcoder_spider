            using System;<br>using System.Text;<br>using System.Collections;<br>using System.Collections.Generic;<br>public class CodeRed<br>{<br>    public int count(string text)<br>    {  <br>       int n=text.Length;<br>       int result=0;<br>       for(int i=0;i&lt;n-2;++i)<br>          {<br>             int j=i+1,k=j+1;<br>             if((text[i]=='R'||text[i]=='r')&amp;&amp;(text[j]=='E'||text[j]=='e')&amp;&amp;(text[k]=='D'||text[k]=='d'))<br>             result++;<br>          }<br>          return result;<br>    }<br>}<br></td>