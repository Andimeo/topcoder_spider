            #include&lt;iostream&gt;<br>#include&lt;algorithm&gt;<br>#include&lt;vector&gt;<br>#include&lt;string&gt;<br>#include&lt;string.h&gt;<br>#include&lt;math.h&gt;<br>#include&lt;stdio.h&gt;<br>#include&lt;stdlib.h&gt;<br>using namespace std;<br><br>class CodeRed<br>{<br>public:<br>  int count(string text)<br>  {<br>    int len=text.size();<br>    int re=0;<br>    int i=0;<br>    while(i&lt;len-2)<br>    {<br>      if((text[i]=='r'||text[i]=='R') &amp;&amp; (text[i+1]=='e'||text[i+1]=='E') &amp;&amp; (text[i+2]=='d'||text[i+2]=='D'))<br>      {<br>        re++;<br>        i+=3;<br>      }<br>      else<br>      {<br>        i++;<br>      }<br>    }<br>    return re;<br>  }<br>};<br></td>