            using System;<br>using System.Text;<br>using System.Collections;<br><br>public class Foobar {<br>  string p,c;<br><br>  bool same(char a, char b)<br>  {<br>    for(int i = 0; i&lt;p.Length; i++)<br>    {<br>      if (p[i] == b &amp;&amp; c[i]==a) return true;<br>    }<br><br>    return a==b;<br>  }<br><br>  public string censor(string plain, string code, string text) {<br>    int n = text.Length;<br>    bool [] b = new bool[n];<br><br>    p = plain;<br>    c = code;<br><br>    string [] bad = new string[] {"heck", "gosh", "dang", "shucks", "fooey", "snafu", "fubar"};<br><br><br>    for(int i = 0; i&lt;text.Length; i++)<br>    if (text[i] != ' ')<br>    {<br>      foreach(string s in bad)<br>      {<br>        int j, k = 0;<br><br>        for(j = i; j&lt;text.Length &amp;&amp; k &lt; s.Length; j++)<br>          if (text[j] != ' ') <br>          {<br>            if (!same(text[j], s[k]))<br>              break;<br>            k++;<br>          }<br><br>        if (k == s.Length)<br>          for(k=i; k&lt;j; k++)<br>            b[k]=true;<br>      }<br>    }<br><br>    string sol ="";<br>    for(int i = 0; i&lt;text.Length; i++)<br>      if(b[i]) sol += "*"; else sol += text[i];<br><br><br><br>    return sol;<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester for c# [12-oct-2003]<br>// Powered by CodeProcessor<br></td>