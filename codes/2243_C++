            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cmath&gt;<br>#include &lt;queue&gt;<br>using namespace std;<br>typedef vector&lt;int&gt; VI;  typedef vector&lt;vector&lt;int&gt; &gt; VVI;<br>typedef vector&lt;string&gt; VS;  typedef vector&lt;vector&lt;string&gt; &gt; VVS;<br>typedef signed long long i64;  typedef unsigned long long u64;<br><br>string w[7] = {"heck", "gosh", "dang", "shucks", "fooey", "snafu", "fubar"};<br><br>class Foobar {<br>public:<br>string censor(string plain, string code, string text) {<br>  int i, j, k, x, y, z, n;<br>  string ret;<br><br>  ret = text;<br>  for( n = 0; n &lt; 7; n++ ) {<br>    for( i = 0; i &lt; text.size(); i++ ) if( text[i] != ' ' ) {<br>      x = i; y = 0;<br>      for( x = i; x &lt; text.size() &amp;&amp; y &lt; w[n].size(); x++ ) {<br>        if( text[x] == ' ' ) continue;<br>        if( text[x] == w[n][y] ) {y++; continue;}<br>        for( j = 0; j &lt; code.size(); j++ )<br>          if( code[j] == text[x] &amp;&amp; plain[j] == w[n][y] ) break;<br>        if( j &lt; code.size() ) {y++; continue;}<br>        break;<br>      }<br>      if( y == w[n].size() ) {<br>        for( j = i; j &lt; x; j++ ) ret[j] = '*';<br>      }<br>    }<br>  }<br>  return ret;<br>}<br>};<br><br><br>// Powered by FileEdit<br></td>