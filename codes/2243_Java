            import java.util.*;<br>public class Foobar {<br>  String censor [] = new String[]{ "heck", "gosh", "dang", "shucks", "fooey", "snafu", "fubar" };<br>  public String censor (String plain, String code, String text) {<br>    boolean star[] = new boolean[text.length()];<br>    for (int x = 0; x &lt; text.length(); x++) {<br>      if (text.charAt(x) == ' ') continue;<br>      for (int z = 0; z &lt; censor.length; z++) {<br>        int c = 0, last = -1;<br>        boolean good = true;<br>        for (int y = x; y &lt; text.length() &amp;&amp; c &lt; censor[z].length(); y++) {<br>          char d = text.charAt(y);<br>          if (d == ' ') continue;<br>          if (d == censor[z].charAt(c)) {<br>            c++; last = y;<br>          } else {<br>            boolean found = false;<br>            for (int w = 0; w &lt; code.length(); w++) {<br>              if (code.charAt(w) == d &amp;&amp; plain.charAt(w) == censor[z].charAt(c)) <br>                found = true;<br>            }<br>            if (!found) good = false; else { c++; last = y; }<br>          }<br>        }<br>        if (good &amp;&amp; c == censor[z].length()) {<br>          for (int v = x; v &lt;= last; v++) star[v] = true;<br>        }<br>      }<br>    }<br>    String ret = "";<br>    for (int x = 0; x &lt; star.length; x++) {<br>      if (star[x]) ret += '*'; else ret += text.charAt(x);<br>    }<br>    return ret;<br>  }<br>}<br></td>