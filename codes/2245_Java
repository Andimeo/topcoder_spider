            public class Piglets {<br>  String s = "";<br>  public int choose(String str) {<br>    s = str;<br>    int len = s.length();<br>    if (isFree(0))<br>      return 0;<br>    if (isFree(len -1))<br>      return len-1;<br>    for (int i = len -1; i &gt; 0; i--) {<br>        if (isFree(i) &amp;&amp; isFree(i-1))<br>          return i - 1;      <br>    }<br>    for (int i = 1; i &lt; len -1; i++) {<br>      if (isFree(i))<br>        return i;<br>    }<br>    return -1;<br>  }<br> <br>  private boolean isFree(int index) {<br>    return s.charAt(index) == '-';<br>  }<br>}<br></td>