            import java.util.*;<br> <br>public class RaceCalculator{<br>  public int bestRace(int[] d, int[] t){<br> <br>    double[] badness=new double[d.length];<br>    Arrays.fill(badness,-1e100);<br>    for(int i=0; i&lt;d.length; i++){<br>      for(int j=0; j&lt;d.length; j++){<br>        if(i==j) continue;<br>        for(int k=0; k&lt;badness.length; k++){<br>          if(i==k || j==k) continue;<br>          double guesstime=t[i]*Math.exp(Math.log(t[j]/(double)t[i])*Math.log(d[i]/(double)d[k])/Math.log(d[i]/(double)d[j]));<br>          double percenterr=(t[k]-guesstime)/guesstime;<br>          badness[k]=Math.max(badness[k],percenterr);<br>        }<br>      }<br>    }<br> <br>    int best=0;<br>    double bestbad=badness[0];<br>    for(int i=0; i&lt;badness.length; i++){<br>      //System.out.println(badness[i]);<br>      if(badness[i]&lt;bestbad){<br>        best=i;<br>        bestbad=badness[i];<br>      }<br>    }<br>    return best;<br>  }<br>}<br></td>