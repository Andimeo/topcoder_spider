            using System;<br> <br>  /// &lt;summary&gt;<br>  /// Summary description for Packhorses.<br>  /// &lt;/summary&gt;<br>  public class Packhorses<br>  {<br>    public Packhorses()<br>    {<br>      //<br>      // TODO: Add constructor logic here<br>      //<br>    }<br> <br>    public int horses (int p, int x, int y)<br>    {<br>      int small = x;<br>      int large = y;<br>      int h=0;<br>      while(p&gt;0)<br>      {<br>        h++;<br>        p--;<br>        if(small%3==2&amp;&amp;small&gt;0)<br>        {<br>          small-=2;<br>          continue;<br>        }<br>        if(large%2==1&amp;&amp;large&gt;0)<br>        {<br>          large--;<br>          continue;<br>        }<br>        if(small&gt;0)<br>          small-=2;<br>        else<br>          large--;<br>      }<br>      while(small&gt;0)<br>      {<br>        h++;<br>        small-=3;<br>      }<br>      while(large&gt;0)<br>      {<br>        h++;<br>        large-=2;<br>      }<br>      return h;<br>    }<br>  }<br></td>