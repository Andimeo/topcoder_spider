            #include&lt;iostream&gt;<br>#include&lt;math.h&gt;<br>using namespace std;<br> <br>class Packhorses<br>{<br>public :<br>  int horses(int p,int x,int y);<br>};<br>int Packhorses::horses(int p,int x,int y)<br>{<br>  int dx,dy=0,ry;<br>  int sum,sumx=0,sumy=0,tot,cx;<br>  sum = p;<br>  dx =x - 2 * p;<br>  if (dx&gt;0 &amp;&amp; dx%3 == 1 &amp;&amp; y&gt;0)<br>  {<br>    dx += 2;<br>    cx--;<br>    dy = 1;<br>  }<br>  if (dx &gt; 0)<br>    sumx = (int) ceil(((double) dx)/3.0);<br>  else<br>    dy = (p - (x+1)/2);<br>  ry = y - dy;<br>  if (ry &gt; 0)<br>    sumy = (ry + 1)/2;<br>  tot = sum + sumx + sumy;<br>  return tot;<br>}<br></td>