            import java.util.*;<br>public class Packhorses {<br>  private int div3(int p,int b) {<br>    if (p*2&gt;b) return p;<br>    int c=(p+b)/3;<br>    if (c*3&lt;(p+b)) c++;<br>    return c;<br>  }<br>  private int div2(int p,int b) {<br>    if (p&gt;b) return p;<br>    int c=(p+b)/2;<br>    if (c*2&lt;(p+b)) c++;<br>    return c;<br>  }<br>  public int horses(int p, int x, int y) {<br>    int min=10000;<br>    for (int i=0;i&lt;=p;i++)<br>    {<br>      int j=p-i;<br>      int now=div3(i,x)+div2(j,y);<br>      if (now&lt;min) min=now;<br>    }<br>    return min;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>