            import java.util.*;<br>public class TVTower {<br>  public double minRadius(int[] x, int[] y) {<br>    double xnow=0; double ynow=0;<br>    double epsilon=1e-11;<br>    double changeby=1;<br>    <br>    while(true){<br>      changeby=changeby*0.97;<br>      double oldxnow=xnow; double oldynow=ynow;<br>      double furthestdistance=0;<br>      int furthestpoint=0;<br>      for(int i=0; i&lt;x.length; i++){<br>        double dist=Math.sqrt(Math.pow(x[i]-xnow,2) + Math.pow(y[i]-ynow,2));<br>        if(dist&gt;furthestdistance){<br>          furthestdistance=dist;<br>          furthestpoint=i;<br>        }<br>      }<br>      <br>      xnow=xnow+(x[furthestpoint]-xnow)*changeby;<br>      ynow=ynow+(y[furthestpoint]-ynow)*changeby;<br>      <br>      if(Math.abs(oldxnow-xnow)&lt;epsilon &amp;&amp; Math.abs(oldynow-ynow)&lt;epsilon){<br>        break;<br>      }<br>    }<br>    double furthestdistance=0;<br>    for(int i=0; i&lt;x.length; i++){<br>      double dist=Math.sqrt(Math.pow(x[i]-xnow,2) + Math.pow(y[i]-ynow,2));<br>      if(dist&gt;furthestdistance){<br>        furthestdistance=dist;<br>      }<br>    }<br> <br>    return furthestdistance;    <br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>