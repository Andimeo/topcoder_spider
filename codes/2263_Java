            public class WaterLevel {<br>  public double netAmt(int evapNormal, int evapFlood, int[] rain) {<br>    double waterLevel = 0;<br>    for (int i = 0; i &lt; rain.length; i++) {<br>      if (waterLevel &lt;= 0) {<br>        // will we flood today?<br>        if (rain[i] - evapNormal &gt; (-1*waterLevel)) {<br>          // when?<br>          double ratio = (-1*waterLevel)/(rain[i] - evapNormal);<br>          double remaining = 1-ratio;<br>          double newWaterLevel = remaining*(rain[i] - evapFlood);<br>          if (newWaterLevel &lt; 0)<br>            newWaterLevel = 0;<br>          waterLevel = newWaterLevel;<br>        } else {<br>          waterLevel = waterLevel + rain[i] - evapNormal;<br>        }<br>      } else {<br>        if (rain[i] - evapFlood &lt; (-1*waterLevel)) {<br>          double ratio = (-1*waterLevel)/(rain[i] - evapFlood);<br>          double remaining = 1-ratio;<br>          double newWaterLevel = remaining*(rain[i] - evapNormal);<br>          if (newWaterLevel &gt; 0)<br>            newWaterLevel = 0;<br>          waterLevel = newWaterLevel;<br>        } else {<br>          waterLevel = waterLevel + rain[i] - evapFlood;<br>        }<br>      }<br>    }<br>    return waterLevel;<br>  }<br>}<br></td>