            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br> <br>using namespace std;<br> <br>class Measures {<br>public:<br>bool test(vector&lt;int&gt; L, int b)<br>{<br>  int n = L.size();<br>  for (int s = 0; s &lt; b; s++)<br>  {<br>    int tc = 0, lc = 0;<br>    for (int i = s; i + b &lt;= n; i += b)<br>    {<br>      tc++;<br>      bool all = true;<br>      for (int j = i; j &lt; i+b; j++)<br>      {<br>        if (!(L[i] &gt;= L[j]))<br>        {<br>          all = false;<br>          break;<br>        }<br>      }<br>      if (all)<br>        lc++;<br>    }<br>    if (tc &gt;= 1 &amp;&amp; lc*10&gt;= 8*tc)<br>    {<br>      return true;<br>    }    <br>  }<br>  return false;<br>}<br> <br>int beatsPerM(vector &lt;int&gt; L) <br>{<br>  for (int bpm = 2; bpm &lt;= 10; bpm++)<br>  {<br>    if (test(L, bpm))<br>      return bpm;<br>  }<br>  return -1;<br>  <br>}<br>};<br> <br> <br>//Powered by [KawigiEdit]<br></td>