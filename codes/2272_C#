            using System;<br>using System.Text;<br>using System.Collections;<br><br>public class SimpleCalculator <br>{<br>   public int calculate(string input) <br>   {<br>      string[] a = input.Split('+');<br>      if (a.Length &gt; 1) return Convert.ToInt32(a[0]) + Convert.ToInt32(a[1]);<br>      a = input.Split('-');<br>      if (a.Length &gt; 1) return Convert.ToInt32(a[0]) - Convert.ToInt32(a[1]);<br>      a = input.Split('*');<br>      if (a.Length &gt; 1) return Convert.ToInt32(a[0]) * Convert.ToInt32(a[1]);<br>      a = input.Split('/');<br>      if (a.Length &gt; 1) return Convert.ToInt32(a[0]) / Convert.ToInt32(a[1]);<br><br>      return -1;<br><br>   }<br>   <br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>