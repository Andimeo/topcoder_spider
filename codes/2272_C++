            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;sstream&gt;<br>using namespace std;<br>class SimpleCalculator {<br>public:<br>  int calculate(string input) {<br>    istringstream is(input);<br>    int num1, num2;<br>    char op;<br>    is &gt;&gt; num1 &gt;&gt; op &gt;&gt; num2;<br>    switch(op) {<br>    case '+':<br>      return num1+num2;<br>    case '-':<br>      return num1-num2;<br>    case '*':<br>      return num1*num2;<br>    case '/':<br>      return num1/num2;<br>    }<br>  }<br>};<br> <br> <br>// Powered by FileEdit<br></td>