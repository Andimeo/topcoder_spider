            import java.util.*;<br>public class TextColumns {<br>  public String[] formatText(String[] text) {<br>      for (int i=0; i &lt; text.length; ++i) {<br>    text[i] = text[i]+"   ";<br>      }<br>      List result = new ArrayList();<br>      StringBuffer p = new StringBuffer();<br>      boolean done;<br>      boolean blank = false;<br>      do {<br>    done = false;<br>    int c;<br>    for (c=0; c &lt;= text[0].length()-3; ++c) {<br>        boolean found = true;<br>        for (int r=0; found &amp;&amp; r &lt; text.length; ++r) {<br>      String sep = text[r].substring(c,c+3);<br>      found &amp;= sep.equals("   ");<br>        }<br>        if (found) break;<br>    }<br>    if (c &gt; text[0].length()-3) break;<br>    blank = false;<br>    boolean start = true;<br>    for (int r=0; r &lt; text.length; ++r) {<br>        String l = text[r].substring(0,c).trim();<br>//         System.out.println(c+":"+text[r]);<br>        text[r] = text[r].substring(c+3);<br>        if (l.length() == 0) {<br>      if (!start)<br>          blank = true;<br>        } else {<br>      if (blank) {<br>          if (p.length() != 0) {<br>        p.setLength(p.length()-1);<br>        result.add(p.toString());<br>          }<br>          p = new StringBuffer();<br>      }<br>      StringTokenizer t = new StringTokenizer(l);<br>      while (t.hasMoreTokens()) {<br>          p.append(t.nextToken());<br>          p.append(" ");<br>      }<br>      blank = start = false;<br>        }<br>    }<br>      } while (!done);<br>      if (p.length() != 0) {<br>    p.setLength(p.length()-1);<br>    result.add(p.toString());<br>      }<br>      return (String[])result.toArray(new String[0]);<br>  }<br>  public static void main(String[] args) {<br>    TextColumns temp = new TextColumns();<br>//     System.out.println(temp.formatText(String[] text));<br>  }<br>}<br><br><br>// Powered by FileEdit<br></td>