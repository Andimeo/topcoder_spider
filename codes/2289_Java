            import java.util.*;<br>public class Fences {<br>  public int fenceLength(int[] x1, int[] y1, int[] x2, int[] y2) {<br>    boolean[][] pasture=new boolean[1006][1006];<br>    for(int i=0; i&lt;x1.length; i++){<br>      for(int j=Math.min(x1[i],x2[i])+2; j&lt;Math.max(x1[i],x2[i])+2; j++){<br>        for(int k=Math.min(y1[i],y2[i])+2; k&lt;Math.max(y1[i],y2[i])+2; k++){<br>          pasture[k][j]=true;<br>        }<br>      }<br>    }<br>    int total=0;<br>    for(int i=1; i&lt;1002; i++){<br>      for(int j=1; j&lt;1002; j++){<br>        if(pasture[i][j]){<br>          if(!pasture[i-1][j]) total++;<br>          if(!pasture[i+1][j]) total++;<br>          if(!pasture[i][j-1]) total++;<br>          if(!pasture[i][j+1]) total++;<br>        }<br>      }<br>    }<br>    return total;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>