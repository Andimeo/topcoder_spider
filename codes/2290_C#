            using System;<br>using System.Collections;<br>using System.Globalization;<br>using System.Text;<br>using System.Text.RegularExpressions;<br><br>public class Solid <br>{<br>  public int surfaceArea( string[] solid )<br>  {<br>    int m = solid.Length;<br>    int n = solid[0].Length;<br>    int[,] M = new int[m + 2, n + 2];<br>    int result = 0;<br>    for( int i = 0; i &lt; m; i++ )<br>      for( int j = 0; j &lt; n; j++ )<br>      {<br>        if ( solid[i][j] != '0' )<br>          result += 2;<br>        M[i + 1, j + 1] = int.Parse( solid[i][j].ToString() );<br>      }<br>    for( int i = 1; i &lt; m + 2; i++ )<br>      for( int j = 1; j &lt; n + 2; j++ )<br>      {<br>        if( M[i - 1, j] != M[i, j] )<br>          result += Math.Abs( M[i - 1, j] - M[i, j] );<br>        if( M[i, j - 1] != M[i, j] )<br>          result += Math.Abs( M[i, j - 1] - M[i, j] );<br>      }<br>    return result;<br>  }<br><br>  NumberFormatInfo nfi = new CultureInfo( "en-US", false ).NumberFormat;<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>