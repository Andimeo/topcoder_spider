            #include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;set&gt;<br>#include &lt;iostream&gt;<br>#include &lt;map&gt;<br>#include &lt;functional&gt;<br>#include &lt;deque&gt;<br>#include &lt;sstream&gt;<br>#include &lt;numeric&gt;<br><br>using namespace std;<br><br>class Solid {<br>  public:<br>  int surfaceArea(vector &lt;string&gt; a) {<br>    int yaku = 0;<br>    for( int i = 0; i &lt; a.size(); i++ ) {<br>      for( int j = 0; j &lt; a[ i ].size(); j++ ) {<br>        yaku += 2 + ( a[ i ][ j ] - '0' ) * 4;<br>        if( a[ i ][ j ] == '0' )<br>          yaku -= 2;<br>        if( i != a.size() - 1 )<br>          yaku -= min( a[ i ][ j ] - '0', a[ i + 1 ][ j ] - '0' ) * 2;<br>        if( j != a[ 0 ].size() - 1 )<br>          yaku -= min( a[ i ][ j ] - '0', a[ i ][ j + 1 ] - '0' ) * 2;<br>      }<br>    }<br>    return yaku;<br>  }<br>};<br><br><br><br>// Powered by FileEdit<br></td>