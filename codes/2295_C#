            using System;<br>using System.Text;<br>using System.Collections;<br><br>public class Display {<br>  public string[] transform(int[] x, int[] y) {<br><br>    int minx, maxx;<br>    int miny, maxy;<br>    int n = x.Length;<br><br>    miny = minx = int.MaxValue;<br>    maxx = maxy = int.MinValue;<br><br>    for(int i = 0; i&lt;n; i++)<br>    {<br>      minx = Math.Min(minx, x[i]);<br>      miny = Math.Min(miny, y[i]);<br>      maxx = Math.Max(maxx, x[i]);<br>      maxy = Math.Max(maxy, y[i]);<br>    }<br><br>    string [] res = new string[n];<br><br>    for(int i = 0; i&lt;n; i++)<br>    {<br>      long nx,ny;<br><br>      nx = x[i]-minx;<br>      ny = y[i]-miny;<br><br>      nx = (nx * 1000 + (maxx-minx)/2)/ (long)(maxx-minx);<br>      ny = (ny * 1000 + (maxy-miny)/2)/(long)(maxy-miny);<br>      res[i] = string.Format("{0} {1}", nx, ny);<br>    }<br>    return res;<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester for c# [12-oct-2003]<br>// Powered by CodeProcessor<br></td>