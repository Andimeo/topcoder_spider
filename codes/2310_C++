            class RSABreaker {<br>   public:<br>   int gcd(int m,int n) {<br>      if(n==0) return m;<br>      else return(gcd(n,m%n));<br>   } <br>   int decrypt(int e,int n,int b) {<br>      int m=0;<br>      for(int i=0;i&lt;n;i++) if(gcd(n,i)==1) m++;<br>      int d;<br>      for(int i=0;;i++) <br>         if((e*i-1)%m==0) {<br>            d=i;<br>            break;<br>         }<br>      int val;<br>      val=1;<br>      for(int i=0;i&lt;d;i++) {<br>         val=val*b;<br>         val=val%n;<br>      }<br>      return val;<br>   }<br>};<br></td>