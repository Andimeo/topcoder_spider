            using System;<br>using System.Collections;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br><br>public class Apothecary {<br><br>    public Apothecary()<br>    {<br>        // Dummy constructor to make everybody in the world a little bit happy<br>    }<br><br>    public int[] balance(int W)<br>    {<br>        ArrayList ret = new ArrayList();<br>        int cur = 1;<br>        while (W &gt; 0)<br>        {<br>            if (W % 3 == 2)<br>            {<br>                ret.Add(-cur);<br>                W += 1;<br>            }<br>            else if (W % 3 == 1)<br>            {<br>                ret.Add(cur);<br>                W -= 1;<br>            }<br>            cur *= 3;<br>            W /= 3;<br>        }<br>        ret.Sort();<br>        return (int[])ret.ToArray(typeof(int));<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br></td>