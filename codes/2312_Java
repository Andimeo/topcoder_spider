            import java.util.*;<br>public class Apothecary {<br>  public int[] balance(int W) {<br>    ArrayList a = new ArrayList();<br>    int i = 1;<br>    while (W != 0) {<br>      int j = W % (i * 3);<br>      if (j == i) {<br>        a.add(new Integer(i));<br>        W -= i;<br>      } else if (j == i * 2) {<br>        a.add(new Integer(-i));<br>        W += i;<br>      }<br>      i *= 3;<br>    }<br>    Collections.sort(a);<br>    int[] r = new int[a.size()];<br>    for (i = 0; i &lt; r.length; i++)<br>      r[i] = ((Integer) a.get(i)).intValue();<br>    return r;<br>  }<br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>