            using System;<br>using System.Collections;<br>public class Reppity {<br>  public int longestRep(string input) {<br>    string s = "";<br>    int longest = 0;<br>    for (int j = 0; j &lt; input.Length; j++)<br>    {<br>      for (int l = 1; (l+j) &lt; input.Length; l++)<br>      {<br>        s = input.Substring(j, l);<br>        if (input.IndexOf(s, (j+l)) != -1)<br>        {<br>          if (s.Length &gt; longest)  longest = s.Length;  <br>        }<br>      }<br>    }<br>    return longest;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>