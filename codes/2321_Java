            import java.util.*;<br><br>public class QuickTableau {<br><br>  int count( int[][] t, int[] l, int c ) {<br>    if ( c &gt;= 16 ) { return 0; }<br>    int jj = 0;<br>    int kk = 0;<br>    boolean ok = false;<br>          for ( int j = 0; j &lt; 4; j ++ ) {<br>            for ( int k = 0; k &lt; 4; k ++ ) {<br>              if ( t[j][k] == c ) {<br>                jj = j; kk = k;<br>                ok = true;<br>                break;<br>              }<br>              if ( ok ) { break; }<br>            }<br>          }<br>    int r = Integer.MAX_VALUE / 2;<br>    for ( int i = 0; i &lt; 4; i ++ ) {<br>      if ( ( i == 0 || l[i - 1] &gt; l[i] ) &amp;&amp; l[i] &lt; 4 ) {<br>        if ( t[l[i]][i] != c ) {<br>          t[jj][kk] = t[l[i]][i];<br>          t[l[i]][i] = c;<br>          l[i] ++;<br>          r = Math.min( r, 1 + count( t, l, c + 1 ) );<br>          l[i] --;<br>          t[l[i]][i] = t[jj][kk];<br>          t[jj][kk] = c;<br>        } else {<br>          l[i] ++;<br>          r = Math.min( r, count( t, l, c + 1 ) );<br>          l[i] --;<br>        }<br>      }<br>    }<br>    return r;<br>  }<br><br>  public int numSwaps( int[] tt ) {<br>    int[][] t = new int[4][4];<br>    for ( int i = 0; i &lt; 4; i ++ ) {<br>      for ( int j = 0; j &lt; 4; j ++ ) {<br>        t[i][j] = tt[i * 4 + j];<br>      }<br>    }<br>    Arrays.sort( tt );<br>    for ( int i = 0; i &lt; 4; i ++ ) {<br>      for ( int j = 0; j &lt; 4; j ++ ) {<br>        for ( int k = 0; k &lt; 16; k ++ ) {<br>          if ( t[i][j] == tt[k] ) {<br>            t[i][j] = k;<br>            break;<br>          }<br>        }<br>      }<br>    }<br>    int[] l = new int[4];<br>    return count( t, l, 0 );<br>  }<br>}<br></td>