            using System;<br>using System.Collections;<br>public class TurretDefense<br>{<br>  public int firstMiss(int[] xs, int[] ys, int[] times) <br>  {<br>    int[] c = new int[2];<br>    c[0] = c[1] = 0;<br>    int t = 0;<br>    for(int i = 0; i &lt; xs.Length; i++)<br>    {<br>      int tmp = Math.Abs(xs[i]-c[0]) + Math.Abs(ys[i]-c[1]);<br>      if(tmp + t &gt; times[i]) return i;<br>      t = times[i];<br>      c[0] = xs[i];<br>      c[1] = ys[i];<br>    }<br>    return -1;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>