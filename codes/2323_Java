            import java.util.*;<br>public class TurretDefense {<br>  public int firstMiss(int[] xs, int[] ys, int[] times) {<br>      int time = 0;<br>      int x = 0;<br>      int y = 0;<br>      for (int i=0; i &lt; xs.length; ++i) {<br>    int t = Math.abs(x-xs[i])+Math.abs(y-ys[i]);<br>    if (time + t &gt; times[i]) return i;<br>    x = xs[i];<br>    y = ys[i];<br>    time = times[i];<br>      }<br>      return -1;<br>  }<br>  <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>