            // Powered by radeclipse!<br>import java.util.* ;<br>public class PresentationComp {<br>  String m(int n, String s) {<br>    String r = "" ;<br>    for (int i=0; i&lt;n; i++)<br>      r = r + s ;<br>    return r ;<br>  }<br>  public String simplify(String expression) {<br>    int tot = 0 ;<br>    int ycount = 0 ;<br>    int n = expression.length() ;<br>    int val = 1 ;<br>    int xcount = 0 ;<br>    for (int i=0; i&lt;n; i++)<br>      if (expression.charAt(i) == 'x') {<br>  tot = tot + val * ycount ;<br>  ycount = 0 ;<br>  val = 6 - val ;<br>  xcount++ ;<br>      } else {<br>  ycount++ ;<br>      }<br>    tot = tot + val * ycount ;<br>    tot = tot % 6 ;<br>    System.out.println("At end we have " + tot + " y's") ;<br>    xcount = xcount % 8 ;<br>    if (xcount == 0) {<br>      return m(tot, "y") ;<br>    }<br>    String best = "" ;<br>    if (val == 1)<br>      best = m(xcount, "x") + m(tot, "y") ;<br>    else<br>      best = m(xcount-1, "x") + m(tot, "y") + "x" ;<br>    System.out.println("In middle we are at " + best + " tot " + tot) ;<br>    for (int v1=0; v1&lt;6; v1++)<br>      for (int v2=0; v2&lt;6; v2++) {<br>  if ((v1 * (6 - val) + v2 * val) % 6 == tot) {<br>    System.out.println("Valid at " + v1 + "," + v2) ;<br>    String t = m(xcount-1, "x") + m(v1, "y") + "x" + m(v2, "y") ;<br>    if (t.length() &lt; best.length() ||<br>        (t.length() == best.length() &amp;&amp; t.compareTo(best) &lt; 0))<br>      best = t ;<br>  }<br>      }<br>    return best ;<br>  }<br>}<br></td>