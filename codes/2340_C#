            public class ClapLight {<br>  public int threshold(int[] bg) {<br>    for (int ans = 0; ans &lt;= 1000; ans++) {<br>      int low = 0;<br>      int highs = 3;<br>      bool changed = false;<br>      for (int i = 0; i &lt; bg.Length; i++) {<br>        if (bg[i] &lt; ans) {<br>          low++;<br>          if (highs == 2) changed = true;<br>          highs = 0;<br>        }<br>        else {<br>          highs++;<br>        }<br>      }<br>      if (!changed &amp;&amp; 2 * low &gt; bg.Length) return ans;<br>    }<br>    return 1001;<br>  }<br>}<br></td>