            import java.util.*;<br>public class RaceApproximator {<br>  public String timeToBeat(int d1, int t1, int d2, int t2, int raceDistance) {<br>    int time=(int)((double)t1*Math.exp(Math.log((double)t2/t1)*Math.log((double)d1/raceDistance)/Math.log((double)d1/d2)));<br>    String s="";<br>    s+=time/3600+":";<br>    time%=3600;<br>    int t=time/60;<br>    if(t&lt;10)<br>      s+="0"+t+":";<br>    else<br>      s+=t+":";<br>    time%=60;<br>    t=time;<br>    if(t&lt;10)<br>      s+="0"+t;<br>    else<br>      s+=t;<br><br>    return s;<br>  }<br>  public static void main(String[] args) {<br>    <br>  }<br>}<br><br><br>// Powered by FileEdit<br></td>