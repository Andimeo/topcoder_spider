            using System;<br> <br>  public class CantorSet<br>  {<br>    public int removed(string value)<br>    {<br>      int n  = value.Length - 1;<br>      int[] mas = new int[n];<br>      for(int i = 0; i &lt; n; i++)<br>        mas[i] = (int)value[i+1] - (int)'0';<br>      int iter = 0;<br>      while (true)<br>      {<br>        iter++;<br>        int j = 0;<br>        for(int i = n - 1; i &gt;= 0; i--)<br>        {<br>          j += mas[i] * 3;<br>          mas[i] = j % 10;<br>          j = j / 10;<br>        }<br>        if (j == 1)<br>          return iter;<br>        if (iter &gt; 1000000)<br>          return 0;<br>      }<br>    }<br>  }<br></td>