            // Powered by radeclipse!<br>import java.util.* ;<br>import java.math.BigDecimal ;<br>public class CantorSet {<br>  public int removed(String value) {<br>    int v[] = new int[7] ;<br>    String s = value.substring(1) ;<br>    while (s.length() &lt; 8 * 7)<br>      s = s + "0" ;<br>    for (int i=0; i&lt;7; i++) {<br>      v[i] = Integer.parseInt(s.substring(i*8, i*8+8)) ;<br>    }<br>    final int b = 100000000 ;<br>    for (int r=1; r&lt;1000000; r++) {<br>      int c = 0 ;<br>      for (int j=6; j&gt;=0; j--) {<br>  int t = v[j] * 3 + c ;<br>  c = t / b ;<br>  v[j] = t - c * b ;<br>      }<br>      if (c == 1)<br>  return r ;<br>    }<br>    return 0 ;<br>  }<br>}<br></td>