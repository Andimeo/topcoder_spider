            #include &lt;iostream&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;sstream&gt;<br>#include &lt;cmath&gt;<br><br>using namespace std;<br><br><br>int memo[16][2][1&lt;&lt;15];<br><br>class LinePlotter {<br>  public:<br>  int n;<br>  int x1[17],y1[17],x2[17],y2[17],llen[17];<br>  <br>  int go(int cur, int side, int mask, int left)<br>  {<br>    int x=0,y=0;<br>    if (cur&lt;n) {<br>      if (!side) { x=x1[cur]; y=y1[cur]; }<br>      else { x=x2[cur]; y=y2[cur]; }<br>    }<br>    <br>    if (!left) return x&gt;?y;<br>    <br>    int &amp;best=memo[cur][side][mask];<br>    if (best&gt;=0) return best;<br>    <br>    for(int i=0;i&lt;n;i++) {<br>      if ((1&lt;&lt;i)&amp;mask) continue;<br>      int v1=go(i,1,mask|(1&lt;&lt;i),left-1)+(abs(x-x1[i])&gt;?abs(y-y1[i]))+llen[i];<br>      int v2=go(i,0,mask|(1&lt;&lt;i),left-1)+(abs(x-x2[i])&gt;?abs(y-y2[i]))+llen[i];<br>      if (best&lt;0 || v1&lt;best) best=v1;<br>      if (best&lt;0 || v2&lt;best) best=v2;<br>    }<br>    <br>    return best;<br>  }<br>  <br>  int timeToPlot(vector &lt;string&gt; lines) {<br>    n=lines.size();<br>    memset(memo,-1,sizeof(memo));<br>    for(int i=0;i&lt;n;i++) {<br>      istringstream ss(lines[i]);<br>      ss &gt;&gt; x1[i] &gt;&gt; y1[i] &gt;&gt; x2[i] &gt;&gt; y2[i];<br>      llen[i]=abs(x1[i]-x2[i])&gt;?abs(y1[i]-y2[i]);<br>    }<br>    return go(n,0,0,n);    <br>  }<br>};<br><br><br>// Powered by FileEdit<br></td>