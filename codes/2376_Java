<td class="problemText" colspan="8" valign="middle" align="left">
            public class Hilbert{<br>  public int steps(int k, int x, int y){<br>    int s=1,t;<br>    int i,j;<br>    if (k==0) return 0;<br>    for(i=0;i&lt;k;i++)<br>      s*=2;<br>    t=s/2;<br>    s=t*t;<br>    if ((x&lt;=t)&amp;&amp;(y&lt;=t)){<br>      return steps(k-1,y,x);<br>    }<br>    if ((x&lt;=t)&amp;&amp;(y&gt;t)){<br>      return s+steps(k-1,x,y-t);<br>    }<br>    if ((x&gt;t)&amp;&amp;(y&gt;t)){<br>      return s*2+steps(k-1,x-t,y-t);<br>    }<br>    if ((x&gt;t)&amp;&amp;(y&lt;=t)){<br>      return s*3+steps(k-1,t+1-y,t*2-x+1);<br>    }<br>    return 0;<br>  }<br>}<br></td>