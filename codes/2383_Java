            public class SimpleIO {<br>  public int worstCase(String pattern, int targetState) {<br>    String pat = pattern + pattern;<br> <br>    for (int len = 1; len &lt; pattern.length(); len++) {<br>      String prefix = pat.substring(targetState + pattern.length() - len + 1, targetState + pattern.length() + 1);<br>      boolean found = false;<br>      for (int i = 0; i &lt; pattern.length(); i++) {<br>        if (i == targetState) continue;<br>        found |= pat.substring(i + pattern.length() - len + 1, i + pattern.length() + 1).equals(prefix);<br>      }<br>      if (!found) {<br>        return len + pattern.length() - 1;<br>      }<br>    }<br> <br>    return -1;<br>  }<br>}<br></td>