            #include &lt;set&gt;<br>#include &lt;cmath&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;algorithm&gt;<br> <br>using namespace std;<br> <br>class Percents {<br>  int findd (int lo, int hi, int per, int num)<br>  {<br>    if (hi &lt; lo) return -1;<br>    int mid = (lo + hi) / 2;<br>    if (((mid * 10000 + (num / 2)) / num == per)) return mid;<br>    if (num * per / 100 &lt; mid * 100) return findd (lo, mid - 1, per, num);<br>    else return findd (mid + 1, hi, per, num);<br>  }<br>  <br>  public:<br>  int minSamples(string percent) {<br>    int i, p;<br>    p = (percent[0] - '0') * 1000 + (percent[1] - '0') * 100 + (percent[3] - '0') * 10 + (percent[4] - '0'); <br>    for (i = 1; i &lt;= 10000; ++i) if (findd(0, i, p, i) &gt;= 0) break;<br>    return i;<br>  }<br> <br>};<br> <br> <br>// Powered by PopsEdit<br></td>