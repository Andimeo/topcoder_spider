            import java.util.*;<br>import java.util.regex.*;<br>import java.text.DecimalFormat;<br><br>public class AutoFix {<br>    void print(Object o) {System.out.print(o+" ");}<br>    void print(int[] a) {for (int i=0; i&lt;a.length; ++i) print(a[i]+" "); System.out.println();}<br>    void print(int[][] a) {for (int i=0; i&lt;a.length; ++i) print(a[i]); System.out.println();}<br>    DecimalFormat DF = new DecimalFormat("0.00");<br>    void print(double d) {print(DF.format(d));}<br>    void print(double[] a) {for (int i=0; i&lt;a.length; ++i) print(a[i]); System.out.println();}<br>    void print(double[][] a) {for (int i=0; i&lt;a.length; ++i) print(a[i]); System.out.println();}<br><br>    String[] dic;<br>    boolean contains(String w) {<br>  w = w.toLowerCase();<br>  for (int i=0; i&lt;dic.length; ++i) {<br>      if (dic[i].equals(w)) return true;<br>  }<br>  return false;<br>    }<br><br><br><br><br><br><br><br>    public String fix(String sentence, int[] times, String[] dictionary) {<br>  dic = dictionary;<br>  String[] words = sentence.split(" ");<br>  int ns = words.length-1;<br>  int[] spaces = new int[words.length];<br>  int p = 0;<br>  for (int i=0; i&lt;ns; ++i) {<br>      p += words[i].length();<br>      spaces[i] = times[p+1]-times[p];<br>      ++p;<br>  }<br>  for (int i=1; i&lt;words.length; ++i) {<br>      String ven = words[i-1]+words[i].charAt(0);<br>      String hoy = words[i].substring(1);<br>      //      System.out.println(ven+" "+hoy+" "+spaces[i-1]);<br>      if (spaces[i-1]&gt;20) continue;<br>      if (contains(words[i-1])&amp;&amp;contains(words[i])) continue;<br>      if (!contains(ven) || !contains(hoy)) continue;<br>      words[i-1]=ven;<br>      words[i] = hoy;<br>  }<br>  StringBuffer svar = new StringBuffer();<br>  for (int i=0;i&lt;words.length; ++i) {<br>      if (i!=0) svar.append(' ');<br>      svar.append(words[i]);<br>  }<br>  return ""+svar;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br></td>