            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;iostream&gt;<br>using namespace std;<br>using std::string;<br> <br>char buffer[500];<br>string   sval(int num)     { sprintf(buffer, "%d", num); return buffer; }<br>int         ival(string inp)   { return atoi(inp.c_str()); }<br>float      fval(string inp)  { return (float)atof(inp.c_str()); }<br>double dval(string inp) { return (double)atof(inp.c_str()); }<br> <br> <br>class CutoffRounder {<br>  public:<br>  int round(string num, string cutoff) {<br>    double d1 = dval(num);<br>    double d2 = dval(cutoff);<br>    int i1 = (int)d1;<br>    double d3 = d1 - i1;<br>    if(d3 &gt; d2) {<br>      i1++;<br>    }<br>    return i1;<br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>