            // Author:  King Larry Mak<br>// TC Handle:  Larry<br>import java.util.*;<br>public class WordWrap {<br>  public String[] justify(String[] lines, int columnWidth) {<br>    Vector ans = new Vector();<br>    <br>    String k = "";<br>    for ( int i = 0; i &lt; lines.length; i++ ) {<br>      StringTokenizer st = new StringTokenizer( lines[i] );<br>      while ( st.hasMoreTokens() ) {<br>        String m = st.nextToken();<br>        if ( (k + " " +  m).trim().length() &gt; columnWidth ) {<br>          ans.add( k.trim() );<br>          k = m;<br>        } else {<br>          k += " " + m;<br>        }<br>      }<br>    }<br>    if ( k.length() &gt; 0 ) ans.add( k.trim() );<br>    <br>    return (String[] ) ans.toArray( new String[0] );<br>  }<br>  <br>}<br> <br>// Powered by PopsEdit<br>// Powered by CodeProcessor<br></td>