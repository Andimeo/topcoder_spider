            Imports Microsoft.VisualBasic<br>Imports System.Math<br>Imports System<br>Imports System.Collections<br>Imports System.Text<br> <br>Public Class WindowManager<br>    Private display() As StringBuilder<br>    Private wid, hei As Integer<br>    Public Function screen(ByVal height As Integer, ByVal width As Integer, ByVal windows As String()) As String()<br>        wid = width<br>        hei = height<br>        Dim a As Integer<br>        ReDim display(hei - 1)<br>        Dim blank As New String(" "c, width)<br>        For a = 0 To hei - 1<br>            display(a) = New StringBuilder(blank)<br>        Next<br> <br>        For a = 0 To windows.Length - 1<br>            Dim s() As String = windows(a).Split(" "c)<br>            DrawWindow(s(0), s(1), s(2), s(3), s(4).Chars(0))<br>        Next<br> <br>        Dim ret(height - 1) As String<br>        For a = 0 To hei - 1<br>            ret(a) = display(a).ToString<br>        Next<br>        Return ret<br>    End Function<br> <br>    Private Sub DrawWindow(ByVal tlv As Integer, ByVal tlh As Integer, ByVal vs As Integer, ByVal hs As Integer, ByVal fill As Char)<br>        Dim top As Integer = tlv<br>        Dim bottom As Integer = tlv + vs - 1<br>        Dim left As Integer = tlh<br>        Dim right As Integer = tlh + hs - 1<br>        Dim x, y As Integer<br>        For x = Max(left, 0) To Min(wid - 1, right)<br>            For y = Max(top, 0) To Min(hei - 1, bottom)<br>                If x = left OrElse x = right Then<br>                    If y = top OrElse y = bottom Then<br>                        display(y)(x) = "+"c<br>                    Else<br>                        display(y)(x) = "|"c<br>                    End If<br>                ElseIf y = top OrElse y = bottom Then<br>                    display(y)(x) = "-"c<br>                Else<br>                    display(y)(x) = fill<br>                End If<br>            Next<br>        Next<br>    End Sub<br>End Class<br></td>