            import java.util.*;<br>public class GravityBomb{<br>    public String[] aftermath(String[] board /*board*/){<br>        String[] ret = new String[]{};<br> <br>        l1 = board.length;<br>        l2 = board[0].length();<br>        int cols[] = new int[board[0].length()];<br>  int min = l1;<br>  for(int i=0;i&lt;l1;i++){<br> <br>      for(int j=0;j&lt;l2;j++){<br>    String s = board[i];<br>    char c = s.charAt(j);<br>    if(c=='X'){<br>        cols[j]++;<br>    }<br>    <br>      }<br>      <br>  }<br>  min = cols[0];<br>  for(int i=0;i&lt;l2;i++){<br>      min = Math.min(min,cols[i]);<br> <br>  }<br> <br>  for(int j=0;j&lt;l2;j++){<br>      cols[j]-=min;<br>  }<br> <br>  ret = new String[l1];<br>  for(int i=0;i&lt;l1;i++){<br>      String s ="";<br>      for(int j=0;j&lt;l2;j++){<br>    if(l1-i&lt;=cols[j])<br>        s+='X';<br>    else<br>        s+='.';<br>      }<br>      ret[i]=s;<br>  }<br>  <br>        <br>        return ret;<br>    }<br>    int l1,l2,l3;<br> <br> <br>}<br></td>