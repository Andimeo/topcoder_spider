            // FilterJava<br><br>import java.util.*;<br>public class PolynomialMultiplier {<br>     public String product(String f1, String f2) {<br>          String[] f1p = f1.split(" \\+ ");<br>          String[] f2p = f2.split(" \\+ ");<br>          int[] p1 = new int[10];<br>          int[] p2 = new int[10];<br>          int[] r = new int[20];<br>          for( int i=0; i&lt;f1p.length; i++ ) {<br>               if( f1p[i].indexOf("x") == -1 ) {<br>                    p1[0] += Integer.parseInt(f1p[i]);<br>               }<br>               else {<br>                    int x = f1p[i].indexOf("x");<br>                    int p=1;<br>                    int a=1;<br>                    if( f1p[i].indexOf("*") != -1 ) {<br>                         a=Integer.parseInt( f1p[i].substring(0,f1p[i].indexOf("*")));<br>                    }<br>                    if( f1p[i].indexOf("^") != -1 ) {<br>                         p=Integer.parseInt( f1p[i].substring(f1p[i].indexOf("^")+1) );<br>                    }<br>                    p1[p]+=a;<br>               }<br>          }<br>          for( int i=0; i&lt;f2p.length; i++ ) {<br>               if( f2p[i].indexOf("x") == -1 ) {<br>                    p2[0] += Integer.parseInt(f2p[i]);<br>               }<br>               else {<br>                    int p=1;<br>                    int a=1;<br>                    if( f2p[i].indexOf("*") != -1 ) {<br>                         a=Integer.parseInt( f2p[i].substring(0,f2p[i].indexOf("*")));<br>                    }<br>                    if( f2p[i].indexOf("^") != -1 ) {<br>                         p=Integer.parseInt( f2p[i].substring(f2p[i].indexOf("^")+1) );<br>                    }<br>                    p2[p]+=a;<br>               }<br>          }<br>          for( int i=0; i&lt;p1.length; i++ ) {<br>               for( int j=0; j&lt;p2.length; j++ ) {<br>                   r[i+j] += p1[i]*p2[j];<br>               }<br>          }<br>          String ret ="";<br>          for( int i=r.length-1; i&gt;=0; i-- ) {<br>               if( r[i]==0 ) continue;<br>               if( r[i]==1 ) {<br>                    if( i==0 ) ret += " + 1";<br>                    else if( i==1 ) ret += " + x";<br>                    else {<br>                         ret += " + x^"+i;<br>                    }<br>               }<br>               else {<br>                    if( i==0 ) ret += " + "+r[i];<br>                    else if( i==1 ) ret += " + "+r[i]+"*x";<br>                    else {<br>                         ret += " + "+r[i]+"*x^"+i;<br>                    }<br>               }<br>          }<br>          return ret.replaceFirst(" \\+ ", "");<br>     }<br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>