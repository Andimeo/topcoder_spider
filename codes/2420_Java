            import java.util.*;<br>public class WorldPeace {<br>  int[] cs;<br>  int k;<br>  <br>  public boolean possible(long mid) {<br>    int i, j;<br>    int cnt = 0;<br>    long crnt = 0;<br>    for(i=cs.length-1;i&gt;=0;i--) {<br>      if(cs[i]&gt;=mid) {<br>        cnt++;<br>      } else {<br>        crnt += cs[i];<br>        if(crnt&gt;=mid) {<br>          crnt %= mid;<br>          cnt++;<br>        }<br>      }<br>    }<br>    return (cnt&gt;=k);<br>  }<br>  <br>  public long numGroups(int _k, int[] countries) {<br>    k = _k;<br>    cs = countries;<br>    Arrays.sort(cs);<br>    long tot = 0;<br>    int[] vals = new int[k];<br>    int[] is = new int[k];<br>    int i, j;<br>    <br>    long tot1 = 0;<br>    for(i=0;i&lt;countries.length;i++) {<br>      tot1 += countries[i];<br>    }<br>    System.out.println("In the beginning: " + tot1);<br>    <br>    long max = tot1/(long)k;<br>    long min = 0;<br>    while(true) {<br>      long mid = (max+min)/2;<br>      if(possible(mid)) {<br>        min = mid;<br>      } else {<br>        max = mid;<br>      }<br>      if(max-min&lt;=1) break;<br>    }<br>    if(possible(max)) return max;<br>    return min;<br>    /*while(true) {<br>      Arrays.fill(vals, 0);<br>      Arrays.fill(is, 0);<br>      j = 0;<br>      int min = 1500000000;<br>      for(i=0;i&lt;countries.length;i++) {<br>        if(countries[i]&lt;=0) continue;<br>        vals[j] = countries[i];<br>        is[j] = i;<br>        min = Math.min(min, countries[i]);<br>        //countries[i] = 0;<br>        j++;<br>        if(j==k) break;<br>      }<br>      if(j!=k) break;<br>      System.out.println("Round one: Adding: "+min +" to: " + tot + "="+(tot+min));<br>      tot += min;<br>      for(i=0;i&lt;k;i++) {<br>        countries[is[i]] -= min;<br>      }<br>    }<br>    tot1 = 0;<br>    for(i=0;i&lt;countries.length;i++) {<br>      tot1 += countries[i];<br>    }<br>    System.out.println("In the end: " + tot1);<br>    return tot;*/<br>  }<br>}<br> <br>// P