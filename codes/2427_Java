            // FilterJava<br><br>import java.util.*;<br>public class Mortgage {<br>     public int monthlyPayment(int loan, int interest, int term) {<br>          long r=Integer.MAX_VALUE;<br>          long l=0;<br>          while( l+1&lt;r ) {<br>               long m=(r+l)/2;<br>               if( payoff(loan, interest/10.0, term, m ) ) {<br>                    r=m;<br>               } else {<br>                    l=m;<br>               }<br>          }<br><br>          return (int)r;<br>     }<br><br>     boolean payoff(long loan, double interest, int term, long monthly ) {<br>          for( int m=0; m&lt;12*term; m++ ) {<br>               loan-=monthly;<br>               if( loan &lt;= 0 ) return true;<br>               loan = (int) Math.ceil(loan*(1+interest/1200.0));<br>          }<br>          return false;<br>     }<br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>