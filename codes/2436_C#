            using System;<br>using System.Collections;<br>public class ChipRace {<br>  private void go(int t, bool[] u, int n, double m) {<br>    if (n &gt; 0) {<br>      for (int i = 0; i &lt; u.Length; i++) {<br>        if (!u[i]) {<br>          double mm = m * (double)c[i] / (double) t;<br>          ret[i] += mm;<br>          u[i] = true;<br>          go(t-c[i], u, n-1, mm);<br>          u[i] = false;<br>        }<br>      }<br>    }<br>  }<br>  double[] ret;<br>  int[] c;<br>  public double[] chances(int[] chips) {<br>    ret = new double[chips.Length];<br>    c = chips;<br>    <br>    int t = 0;<br>    for (int i = 0; i &lt; chips.Length; i++) {<br>      t += chips[i];<br>    }<br>    int n = (t+2)/5;<br>    <br>    bool[] u = new bool[chips.Length];<br>    <br>    go(t, u, n, 1.0);<br> <br>    return (ret);<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>