            // Author:  King Larry Mak<br>// TC Handle:  Larry<br>import java.util.*;<br>public class ChipRace {<br>  public double[] chances(int[] chips, int c ) {<br>    double[] ans = new double[ chips.length ];<br>    <br>    int sum = 0;<br>    for ( int i = 0; i &lt; chips.length; i++ ) sum += chips[i];<br>    <br>    if ( c &gt; 0 )<br>    for ( int j = 0; j &lt; chips.length; j++ ) {<br>      if ( chips[j] == 0 ) continue;<br>      /* If player j wins the first chip */<br>      int[] nchips = new int[chips.length];<br>      for ( int i = 0; i &lt; chips.length; i++ ) nchips[i] = chips[i];<br>      nchips[j] = 0;<br>      double p = (double) chips[j] / (double) sum;<br>      ans[j] += p;<br>      <br>      double[] ntemp = chances( nchips, c - 1 );<br>      for ( int i = 0; i &lt; chips.length; i++ ) ans[i] += p * ntemp[i];<br>    }<br>    <br>    return ans;<br>  }<br>  <br>  public double[] chances(int[] chips) {<br>    double[] ans = new double[ chips.length ];<br>    <br>    int c = 0;<br>    for ( int i = 0; i &lt; chips.length; i++ ) c += chips[i];<br>    int sum = c;<br>    if ( c % 5 &gt; 2 )<br>    c = c / 5 + 1;<br>    else<br>    c = c / 5;<br>    <br>    if ( c &gt; 0 )<br>    for ( int j = 0; j &lt; chips.length; j++ ) {<br>      if ( chips[j] == 0 ) continue;<br>      /* If player j wins the first chip */<br>      int[] nchips = new int[chips.length];<br>      for ( int i = 0; i &lt; chips.length; i++ ) nchips[i] = chips[i];<br>      nchips[j] = 0;<br>      double p = (double) chips[j] / (double) sum;<br>      ans[j] += p;<br>      <br>      double[] ntemp = chances( nchips, c - 1 );<br>      for ( int i = 0; i &lt; chips.length; i++ ) ans[i] += p * ntemp[i];<br>    }<br>    <br>    return ans;<br>  }<br>  <br>}<br> <br>// Powered by PopsEdit<br>// Powered by CodeProcessor<br></td>