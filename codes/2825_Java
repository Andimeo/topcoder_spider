            import java.util.*;<br>public class Lister {<br>  public String[] doList(int w, String[] s) {<br>    int n = s.length;<br>    Arrays.sort(s);<br>    for (int r = 1; ; r++) {<br>      String[] ret = null;<br>      int brm = 10000;<br>      int bc = 10000;<br>      int max = r == 1 ? n : n / (r - 1);<br>      for (int c = n / r; c &lt;= max; c++) {<br>        int a = c - (r * c - n);<br>        if (a &lt;= 0 || a &gt; c) continue;<br>        StringBuffer[] t = new StringBuffer[r];<br>        for (int i = 0; i &lt; r; i++) t[i] = new StringBuffer();<br>        int k = 0;<br>        for (int i = 0; i &lt; c; i++) {<br>          int m = 0;<br>          for (int j = 0; j &lt; r; j++) {<br>            if (j == r - 1 &amp;&amp; i &gt;= a) continue;<br>            t[j].append(s[k]);<br>            m = Math.max(m, t[j].length());<br>            k++;<br>          }<br>          if (i != c - 1) m++;<br>          for (int j = 0; j &lt; r; j++)<br>            while (t[j].length() &lt; m) t[j].append(' ');<br>        }<br>        if (t[0].length() &gt; w) continue;<br>        if (t[0].length() &lt; brm || t[0].length() == brm &amp;&amp; c &lt; bc) {<br>          ret = new String[r];<br>          brm = t[0].length();<br>          bc = c;<br>          for (int i = 0; i &lt; r; i++) {<br>            while (t[i].length() &lt; w) t[i].append(' ');<br>            ret[i] = t[i].toString();<br>          }<br>        }<br>      }<br>      if (ret != null) return ret;<br>    }<br>  }<br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>