            import java.util.*;<br>public class Histogram {<br>  public String[] draw(String[] t, int[] v) {<br>    int n = t.length;<br>    int mv = 0;<br>    int a = 0;<br>    for (int i = 0; i &lt; n; i++) {<br>      mv = Math.max(v[i], mv);<br>      if (i + 1 &lt; n) a = Math.max(a, t[i].length() / 2 + 1 + (t[i + 1].length() - 1) / 2);<br>    }<br>    int b = (t[0].length() - 1) / 2;<br>    String[] r = new String[mv + 1];<br>    for (int i = 1; i &lt;= mv; i++) {<br>      StringBuffer u = new StringBuffer();<br>      for (int j = 0; j &lt; n; j++)<br>        if (v[j] &gt;= i) {<br>          while (u.length() &lt; b + (a + 1) * j) u.append(' ');<br>          u.append('X');<br>        }<br>      r[mv - i] = u.toString();<br>    }<br>    StringBuffer u = new StringBuffer();<br>    for (int j = 0; j &lt; n; j++) {<br>      while (u.length() + (t[j].length() - 1) / 2 &lt; b + (a + 1) * j) u.append(' ');<br>      u.append(t[j]);<br>    }<br>    r[mv] = u.toString();<br>    return r;<br>  }<br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>