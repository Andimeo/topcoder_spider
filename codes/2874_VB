            Imports Microsoft.VisualBasic<br>Imports System.Math<br>Imports System<br>Imports System.Collections<br>Imports System.Text<br> <br>Public Class Histogram<br>    Public Function draw(ByVal title As String(), ByVal value As Integer()) As String()<br>        Dim n, i, j, w1, wn As Integer<br>        Dim d, h As Integer<br>        n = title.Length<br>        For i = 0 To n - 2<br>            Dim c As Integer = title(i).Length \ 2 + (title(i + 1).Length - 1) \ 2 + 1<br>            If c &gt; d Then d = c<br>        Next<br>        w1 = (title(0).Length - 1) \ 2<br>        wn = title(n - 1).Length \ 2<br>        For i = 0 To n - 1<br>            If value(i) &gt; h Then h = value(i)<br>        Next<br>        Dim ret(h) As String<br>        For j = 0 To h - 1<br>            Dim sb As New StringBuilder(New String(" "c, w1 + wn + n + (n - 1) * d))<br>            For i = 0 To n - 1<br>                If value(i) &gt;= h - j Then<br>                    sb(w1 + i * (1 + d)) = "X"c<br>                End If<br>            Next<br>            ret(j) = sb.ToString.TrimEnd(" "c)<br>        Next<br>        Dim tit As New StringBuilder(New String(" "c, w1 + wn + n + (n - 1) * d))<br>        For i = 0 To n - 1<br>            tit.Insert(w1 + i * (1 + d) - (title(i).Length - 1) \ 2, title(i))<br>            tit.Remove(tit.Length - title(i).Length, title(i).Length)<br>        Next<br>        ret(h) = tit.ToString<br>        Return ret<br>    End Function<br>End Class<br></td>