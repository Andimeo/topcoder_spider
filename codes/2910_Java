            import java.util.*;<br>public class TinSoldiers {<br>  long fact(int n) {<br>    long r = 1;<br>    while (n &gt; 1) {<br>      r *= n;<br>      n--;<br>    }<br>    return r;<br>  }<br>  public int lineUps(int[] a) {<br>    int t = 0;<br>    int n = a.length;<br>    for (int i = 0; i &lt; n; i++) t += a[i];<br>    long b = fact(t);<br>    int o = 0;<br>    for (int i = 0; i &lt; n; i++) {<br>      b /= fact(a[i]);<br>      o += a[i] % 2;<br>    }<br>    long m = 0;<br>    if (o == t % 2) {<br>      m = fact(t / 2);<br>      for (int i = 0; i &lt; n; i++) m /= fact(a[i] / 2);<br>    }<br>    return (int) ((b - m) / 2 + m);<br>  }<br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>