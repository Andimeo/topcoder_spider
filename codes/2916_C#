            public class Medici {<br> <br>public int winner(int[] a, int[] b, int[] c) {<br> <br>  int[] weak = new int[a.Length];<br>  for (int i = 0; i &lt; weak.Length; i++) {<br>    weak[i] = a[i];<br>    if (b[i] &lt; weak[i]) weak[i] = b[i];<br>    if (c[i] &lt; weak[i]) weak[i] = c[i];<br>  }<br>  int winPlayer = 0;<br>  int winScore = weak[0];<br>  bool tie = false;<br>  for (int i = 1; i &lt; weak.Length; i++) {<br>    if (weak[i] == winScore) tie = true;<br>    else if (weak[i] &gt; winScore) {<br>      tie = false;<br>      winPlayer = i;<br>      winScore = weak[i];<br>    }<br>  }<br> <br>  if (tie) return -1;<br>  return winPlayer;<br> <br>}<br>}<br></td>