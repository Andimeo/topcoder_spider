            Public Class Medici<br>    Public Function winner(ByVal fame As Integer(), ByVal fortune As Integer(), ByVal secrets As Integer()) As Integer<br>        Dim m As Integer = -1<br>        Dim p As Integer = 0<br>        Dim i As Integer<br>        Dim tmp As Integer<br>        Dim tie As Boolean = False<br>        For i = 0 To fame.Length - 1<br>            tmp = mmm(fame(i), fortune(i), secrets(i))<br>            If tmp &gt; m Then<br>                m = tmp<br>                p = i<br>                tie = False<br>            ElseIf tmp = m Then<br>                tie = True<br>            End If<br>        Next<br>        If tie Then Return -1<br>        Return p<br>    End Function<br> <br> <br> <br>    Private Function mmm(ByVal a As Integer, ByVal b As Integer, ByVal c As Integer) As Integer<br>        Return System.Math.Min(System.Math.Min(a, b), c)<br> <br>    End Function<br>End Class<br></td>