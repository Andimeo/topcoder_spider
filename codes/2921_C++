int&gt; H;<br>    int hh = 1;<br>    H.push_back(hh);<br>    for(int i=1;;++i) {<br>      hh += 4*i+1;<br>      H.push_back(hh);<br>      if(hh &gt; MAX) break;<br>    }<br> <br>    for(int n = 0;n&lt;=MAX;++n) {<br>      if(n&gt;150000) ile[n] = 3;<br>      else if(n&gt;1719) ile[n] = 4;<br>      else ile[n] = 6;<br>    }<br> <br>    ile[0] = 0;<br>    FOREACH(it,H) if(*it &lt;= MAX) ile[*it] = 1;<br>    FOREACH(it,H) FOREACH(jt,H) if(*it + *jt &lt;= MAX) ile[*it + *jt] &lt;?= 2;<br>    <br>    FOR(n,1,MAX) {<br>      int v = ile[n];<br>      FOREACH(it,H) {<br>        int x = *it;<br>        if(x &gt; n) break;<br>        if(v&lt;=3) break;<br>        v &lt;?= ile[n-x] + 1;<br>      }<br>      ile[n] = v;<br>    }<br> <br>    return ile[N];<br>  }<br> <br> <br>  <br>///////////////////////////////////////////////////////////////////<br> <br> <br> <br> <br>};<br> <br> <br> <br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>