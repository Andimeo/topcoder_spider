            import java.util.*;<br>public class HexagonalSums {<br>  <br>  public int minLength(int N) {<br>    int[] h = new int[707];<br>    h[0] = 1;<br>    for (int i = 1; i &lt; h.length; i++)<br>      h[i] = h[i - 1] + 4 * i + 1;<br>    for (int i = 0; i &lt; h.length; i++)<br>      if (h[i] == N) return 1;<br>    for (int i = 0; i &lt; h.length; i++)<br>      for (int j = 0; j &lt; h.length; j++)<br>        if (h[i] + h[j] == N) return 2;<br>    if (N &gt; 150000) return 3;<br>    int[] a = new int[N + 1];<br>    for (int i = 1; i &lt;= N; i++) {<br>      int m = 10;<br>      for (int j = 0; h[j] &lt;= i; j++)<br>        m = Math.min(m, a[i - h[j]]);<br>      a[i] = m + 1;<br>    }<br>    return a[N];<br>  }<br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>