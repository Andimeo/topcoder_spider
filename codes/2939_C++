            #include &lt;iostream&gt;<br>#include &lt;ostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>using namespace std;<br> <br>int power(int a, int b, int m)<br>{<br>  if(b == 0)<br>    return 1;<br>  if(b == 1)<br>    return a;<br>  if(b % 2 == 0)<br>    return power(a * a % m, b / 2, m);<br>  else<br>    return power(a * a % m, b / 2, m) * a % m;<br>}<br> <br>class PseudoPrimeTest {<br> public:<br>  int firstFail(int q)<br>  {<br>    for(int i = 2; i &lt; q; i++)<br>    {<br>      if(power(i, q-1, q) % q != 1)<br>        return i;<br>    }<br>    return q;<br>  };<br>};<br></td>