            #include &lt;vector&gt;<br>#include &lt;cstring&gt;<br>using namespace std;<br> <br>class LoadBalancing {<br>public:<br>  int tag[204800];<br>  int minTime(vector&lt;int&gt; vec) {<br>    int i, j, n = 0;<br> <br>    for(i=0; i&lt;vec.size(); ++i)  n += (vec[i] /= 1024);<br>    memset(tag, 0, sizeof(tag[0]) * (n / 2 + 1));<br> <br>    tag[0] = 1;<br>    for(i = 0; i &lt; vec.size(); ++i) for(j =  n / 2 - vec[i]; j &gt;= 0; --j) if(tag[j] &amp;&amp; !tag[j + vec[i]]) {<br>      tag[j + vec[i]] = 1;<br>    }<br>    i = n / 2;<br>    while (i &gt;= 0 &amp;&amp; !tag[i])<br>      --i;<br>    return (n - i) * 1024;<br>  }<br>};<br></td>