            #include &lt;vector&gt;<br>#include &lt;string&gt;<br> <br>using namespace std;<br> <br>class TheThe{<br>vector &lt;string&gt; split(string s, string sep) {<br>        vector &lt;string&gt; res(0);<br>        int a,x;<br>        a=s.find_first_of(sep,0);<br>        x=0;<br>        while (a!=string::npos) {<br>                res.push_back(s.substr(x,a-x));<br>                x=a+1;<br>                a=s.find_first_of(sep,x);<br>        }<br>        res.push_back(s.substr(x,s.size()-x));<br>        return res;<br>}<br> <br>public:<br>  int check(vector &lt;string&gt; lines) {<br>    int i;<br>    vector &lt;string&gt; x1,x2;<br>    for (i=1;i&lt;lines.size();i++) {<br>      x1=split(lines[i-1]," ");<br>      x2=split(lines[i]," ");<br>      if (x1.size()==0) continue;<br>      if (x2[0]==x1[x1.size()-1]) return i-1;<br>    }<br>    return -1;<br>  };<br>};<br> <br> <br>// Powered by FileEdit<br></td>