            #include &lt;algorithm&gt; // sorting, searching<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cmath&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;string&gt;<br>#include &lt;utility&gt;<br>#include &lt;vector&gt;<br>using namespace std;<br>#define REP(i,n) for(int _n=n, i=0;i&lt;_n;++i)<br>const int INF = 1000000000;<br>typedef vector&lt;int&gt; VI;<br>template&lt;class T&gt; inline int size(const T&amp;c) { return c.size(); }<br> <br>string aa,bb;<br>int n;<br>VI perm;<br> <br>int ncycles() {<br>  static bool vis[10];<br>  REP(i,n) vis[i]=false;<br>  int res=0;<br>  REP(i,n) if(!vis[i]) {<br>    int k=i;<br>    do {<br>      vis[k]=true;<br>      k=perm[k];<br>    } while(k!=i);<br>    ++res;<br>  }<br>  return res;<br>}<br> <br>int diff() {<br>  int res=0;<br>  REP(i,n) res+=abs(aa[i]-bb[perm[i]]);<br>  return res;<br>}<br> <br>struct NumberChanger {<br> <br>  // MAIN<br>  int transform(string start, string finish) {<br>    aa = start; bb=finish;<br>    n = size(aa);<br>    perm.clear();<br>    REP(i,n) perm.push_back(i);<br>    int res = INF;<br>    do {<br>      res = min(res, n-ncycles() + diff());<br>    } while(next_permutation(perm.begin(),perm.end()));<br>    return res;<br>  }<br> <br>};<br> <br>// Powered by FileEdit<br> <br>// Powered by TomekAI<br>// Powered by TZTester 1.01 [25-Feb-2003]<br> <br>// Powered by CodeProcessor<br></td>