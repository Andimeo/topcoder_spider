            import java.util.*;<br>public class BadMazeStrategy {<br>public int numSteps(String[] a) {<br>  int i,j=0,k;<br>  int[] dx = {1, 1, 0, -1, -1, -1, 0, 1};<br>  int[] dy = {0, 1, 1, 1, 0, -1, -1, -1};<br>  int cd = 0;<br>  int[][][] mem = new int[50][50][8];<br>  for(i = 0; i &lt; a.length; i++) {<br>    for(j = 0; j &lt; a[0].length(); j++) <br>      if(a[i].charAt(j) == 'Y') break;<br>    if(j != a[0].length()) break;<br>  }<br>  int ret = 0;<br>  for(;;) {<br>    if(a[i].charAt(j) == 'D') return ret;<br>    if(mem[i][j][cd] == 1) return -1;<br>    mem[i][j][cd] = 1;<br>    int i2 = i + dy[cd], j2 = j + dx[cd];<br>    if(i2 &lt; 0 || i2 &gt;= a.length || j2 &lt; 0 || j2 &gt;= a[0].length() || a[i2].charAt(j2) == 'X') {<br>      cd = (cd + 1) % 8;<br>    } else {<br>      ret++;<br>      i = i2; j = j2;<br>    }<br>  }<br>}<br>}<br></td>