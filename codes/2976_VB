            Public Class Answer<br> <br>        Dim iMoves() As Integer<br>        Dim iCorrectMask(,) As Integer<br>        Dim iWordsMax As Integer<br>        Public Function chooseOne(ByVal words As String()) As Integer<br>            Dim i, j, k, l As Long<br> <br>            iWordsMax = words.GetUpperBound(0)<br> <br>            Dim aWords(words.GetUpperBound(0), words(0).Length - 1) As Integer<br>            Dim iMax As Integer = (1 &lt;&lt; (words.GetUpperBound(0) + 1)) - 1<br>            ReDim iMoves(iMax)<br>            ReDim iCorrectMask(words.GetUpperBound(0), 25)<br> <br> <br>            For i = 0 To words.GetUpperBound(0)<br>                For j = 0 To words(i).Length - 1<br>                    aWords(i, j) = Microsoft.VisualBasic.Asc(words(i).Substring(j, 1)) - 65<br>                Next<br>            Next<br> <br>            For i = 0 To iMax<br>                iMoves(i) = -1<br>            Next<br> <br>            For i = 0 To words.GetUpperBound(0)<br>                For j = 0 To 25<br>                    iCorrectMask(i, j) = iMax<br>                    For k = 0 To words.GetUpperBound(0)<br>                        For l = 0 To aWords.GetUpperBound(1)<br>                            If aWords(i, l) = j Xor aWords(k, l) = j Then<br>                                iCorrectMask(i, j) = iCorrectMask(i, j) And Not (1 &lt;&lt; k)<br>                            End If<br>                        Next<br>                    Next<br>                Next<br>            Next<br> <br>            Return iHowManyMoves(iMax)<br> <br>        End Function<br> <br>        Private Function iHowManyMoves(ByVal iMask As Integer) As Integer<br>            If iMoves(iMask) &gt;= 0 Then Return iMoves(iMask)<br>            Dim i As Integer<br>            Dim iBest As Integer = 999<br>            Dim iVal As Integer<br>            Dim iNewMask As Integer<br>            Dim iWorst As Integer<br>            Dim j As Integer<br>            Dim iCount As Integer<br> <br>            For j = 0 To iWordsMax<br>                If ((1 &lt;&lt; j) And iMask) &gt; 0 Then iCount += 1<br>            Next<br> <br>            If iCount = 1 Then Return 0<br> <br>            For i = 0 To 25<br>                iWorst = 0<br>                For j = 0 To iWordsMax<br>                    If ((1 &lt;&lt; j) And iMask) &gt; 0 Then<br>                        iCount += 1<br>                        iNewMask = iMask And iCorrectMask(j, i)<br>                        If iNewMask &lt; iMask And iNewMask &gt; 0 Then<br>                            iVal = iHowManyMoves(iMask And iCorrectMask(j, i)) + 1<br>                            If iVal &gt; iWorst Then<br>                                iWorst = iVal<br>                            End If<br>                        End If<br>                    End If<br>                Next<br>                If iWorst &gt; 0 And iWorst &lt; iBest Then iBest = iWorst<br>            Next<br> <br>            iMoves(iMask) = iBest<br>            Return iBest<br>        End Function<br> <br>        Private Function iNewMask(ByRef iMask As Integer, ByRef iCorrect As Integer) As Integer<br> <br>        End Function<br>    End Class<br></td>