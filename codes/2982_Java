            import java.util.*;<br>public class HeatDeath {<br>  public int maxTime(int[] e) {<br>    int n = e.length;<br>    Arrays.sort(e);<br>    int t = 0;<br>    while (true) {<br>      int b = 10000;<br>      int i = -1;<br>      int j = -1;<br>      for (int l = 1; l &lt; n; l++) {<br>        for (int ii = 0; ii + l &lt; n; ii++) {<br>          int x = e[ii + l] - e[ii];<br>          if (x &gt;= 2 &amp;&amp; x &lt; b) {<br>            b = x;<br>            i = ii;<br>            j = l;<br>          }<br>        }<br>        if (i &gt;= 0) break;<br>      }<br>      if (i &lt; 0) return t;<br>      j = i + j;<br>      e[j]--;<br>      e[i]++;<br>      while (i &lt; n - 1 &amp;&amp; e[i] &gt; e[i + 1]) {<br>        int q = e[i];<br>        e[i] = e[i + 1];<br>        e[i + 1] = q;<br>        i++;<br>      }<br>      while (j &gt; 0 &amp;&amp; e[j] &lt; e[j - 1]) {<br>        int q = e[j];<br>        e[j] = e[j - 1];<br>        e[j - 1] = q;<br>        j--;<br>      }<br>      t++;<br>    }<br>  }<br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>