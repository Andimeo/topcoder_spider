            public class TitleString<br>  {<br>    public string toFirstUpperCase(string s)<br>    {<br>      bool isspace = true;<br>      string ret = "";<br>      foreach(char c in s)<br>      {<br>        string k = new string(c, 1);<br>        if(isspace)<br>        {<br>          ret += k.ToUpper();<br>        }<br>        else<br>        {<br>          ret += k;<br>        }<br> <br>        if(c == ' ')<br>        {<br>          isspace = true;<br>        }<br>        else<br>        {<br>          isspace = false;<br>        }<br>      }<br>      return ret;<br>    }<br>  }<br></td>