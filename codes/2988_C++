            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;sstream&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;iterator&gt;<br>#include &lt;iostream&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;utility&gt;<br>using namespace std;<br> <br>///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////<br>#define si size()<br>////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////<br> <br>class TitleString<br>{<br>  public:<br>  string toFirstUpperCase(string title)<br>  {<br>    if(title.si==0)<br>      return "";<br>    title[0]=toupper(title[0]);<br>    for(int c=0;c&lt;title.si-1;c++)<br>      if(title[c]==' ')<br>        title[c+1]=toupper(title[c+1]);<br>    return title;<br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>