            // FilterJava<br><br>import java.util.*;<br>public class TitleString {<br>    public String toFirstUpperCase(String title) {<br>        char[] c = title.toCharArray();<br>        boolean first=true;<br>        for( int i=0; i&lt;c.length; i++ ) {<br>            if(c[i]==' ') {<br>                first = true;<br>                continue;<br>            }<br>            if(first) {<br>                c[i] = Character.toUpperCase(c[i]);<br>                first=false;<br>            }<br>        }<br>        return new String(c);<br>    }<br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>