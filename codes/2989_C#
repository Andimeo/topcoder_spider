            using System;<br>using System.Collections;<br>using System.Text;<br> <br>public class QuizShow<br>{<br>    int cnt;<br> <br>    private void dotry(int w1, int w2, int w3)<br>    {<br>        if (w3 &gt; w1 &amp;&amp; w3 &gt; w2) ++cnt;<br>    }<br> <br>    public int wager(int[] scores, int w1, int w2)<br>    {<br>        int t = scores[0]; scores[0] = scores[1]; scores[1] = scores[2]; scores[2] = t;<br>        int max = -1;<br>        int w = -1;<br>        for (int i = 0; i &lt;= scores[2]; i++)<br>        {<br>            cnt = 0;<br>            dotry(scores[0] - w1, scores[1] - w2, scores[2] - i);<br>            dotry(scores[0] - w1, scores[1] - w2, scores[2] + i);<br>            dotry(scores[0] - w1, scores[1] + w2, scores[2] - i);<br>            dotry(scores[0] - w1, scores[1] + w2, scores[2] + i);<br>            dotry(scores[0] + w1, scores[1] - w2, scores[2] - i);<br>            dotry(scores[0] + w1, scores[1] - w2, scores[2] + i);<br>            dotry(scores[0] + w1, scores[1] + w2, scores[2] - i);<br>            dotry(scores[0] + w1, scores[1] + w2, scores[2] + i);<br>            if (cnt &gt; max)<br>            {<br>                max = cnt;<br>                w = i;<br>            }<br>        }<br>        return w;<br>    }<br>}<br></td>