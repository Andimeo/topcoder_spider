            import java.util.*;<br>public class QuizShow {<br>  public int wager(int[] scores, int wager1, int wager2) {<br>    int best=0;<br>    int bestProb=0;<br>    for (int w=0; w &lt;= scores[0]; ++w) {<br>      int p = 0;<br>      for (int mask=0; mask &lt; 8; ++mask) {<br>        int s1 = scores[0] + ((mask &amp; 1) == 0 ? 1 : -1)*w;<br>        int s2 = scores[1] + ((mask &amp; 2) == 0 ? 1 : -1)*wager1;<br>        int s3 = scores[2] + ((mask &amp; 4) == 0 ? 1 : -1)*wager2;<br>        if (s1 &gt; s2 &amp;&amp; s1 &gt; s3) ++p;<br>      }<br>      if (p &gt; bestProb) {<br>        best = w;<br>        bestProb = p;<br>      }<br>    }<br>    return best;<br>  }<br>  <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>