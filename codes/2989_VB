            Public Class QuizShow<br>    Dim s(1, 2) As Integer<br>    Private Function getProb(ByVal wager As Integer) As Integer<br>        Dim i, j, k, ret<br> <br>        s(0, 0) -= wager<br>        s(1, 0) += wager<br>        For i = 0 To 1<br>            For j = 0 To 1<br>                For k = 0 To 1<br>                    If s(i, 0) &gt; s(j, 1) AndAlso s(i, 0) &gt; s(k, 2) Then ret += 1<br>                Next<br>            Next<br>        Next<br>        s(0, 0) += wager<br>        s(1, 0) -= wager<br>        Return ret<br>    End Function<br>    Public Function wager(ByVal scores As Integer(), ByVal wager1 As Integer, ByVal wager2 As Integer) As Integer<br>        Dim i, best, ret, prob As Integer<br> <br>        For i = 0 To 2<br>            s(0, i) = scores(i)<br>            s(1, i) = scores(i)<br>        Next<br>        s(0, 1) -= wager1<br>        s(0, 2) -= wager2<br>        s(1, 1) += wager1<br>        s(1, 2) += wager2<br>        For i = 0 To scores(0)<br>            prob = getProb(i)<br>            If prob &gt; best Then<br>                best = prob<br>                ret = i<br>            End If<br>        Next<br> <br>        Return ret<br>    End Function<br>End Class<br></td>