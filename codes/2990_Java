            /*  OhmSakthi  */<br>/*  OhmSakthi  */<br>import java.util.*;<br> <br>public class Rank {<br>  public double[] rank(int[] s) {<br>    int[] sc = new int[s.length];<br>    double[] ret = new double[s.length];<br>    if(s.length ==0) return ret;<br>    if(s.length == 1){ ret[0]=1.0; return ret;}<br>    for(int i=0; i&lt;s.length;i++){<br>      sc[i] = s[i];<br>    }<br>    Arrays.sort(sc);<br>    for(int i=0; i&lt;sc.length/2;i++){<br>      int tmp =sc[i];<br>      sc[i] = sc[sc.length-1-i];<br>      sc[sc.length-1-i] = tmp;<br>    }<br>    int cc=1; int cr=0; int prev=sc[0];<br>    for(int i=1; i&lt;sc.length;i++){<br>      int curr = sc[i];<br>      if(prev==curr){<br>        cc++;<br>      }else{<br>        double rank = cr + (cc+1)/2.0;<br>        for(int j=0; j&lt;s.length;j++){<br>          if(s[j]==prev) ret[j] = rank;<br>        }<br>        cr = i;<br>        cc = 1;<br>      }<br>      prev = curr;<br>      if(i == s.length-1){<br>        double rank = cr + (cc+1)/2.0;<br>        for(int j=0; j&lt;s.length;j++){<br>          if(s[j]==prev) ret[j] = rank;<br>        }<br>      }<br>    }<br>    return ret;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>