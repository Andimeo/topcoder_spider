            using System;<br>using System.Text;<br>using System.Collections;<br><br>public class WinningRecord {<br>    public int[] getBestAndWorst(string games) {<br>        int[] res = new int[2];<br>    double max = 0, min = Double.MaxValue;<br><br>    double cw = 0, cl = 0;<br>    for (int i = 0; i &lt; games.Length; i++)<br>    {<br>      if (games[i] == 'W') cw++; else cl++;<br>      if (i &gt;= 2)<br>      {<br>        if (max &lt;= cw / (cw + cl)) { max = cw / (cw + cl); res[0] = i+1; }<br>        if (min &gt;= cw / (cw + cl)) { min = cw / (cw + cl); res[1] = i+1; }<br>      }<br>    }<br><br>        return res;<br>    }<br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>