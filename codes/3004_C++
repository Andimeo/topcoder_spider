            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cmath&gt;<br>#include &lt;queue&gt;<br>using namespace std;<br>typedef vector&lt;int&gt; VI;  typedef vector&lt;vector&lt;int&gt; &gt; VVI;<br>typedef vector&lt;string&gt; VS;  typedef vector&lt;vector&lt;string&gt; &gt; VVS;<br>typedef signed long long i64;  typedef unsigned long long u64;<br><br>VI a;<br>i64 b, c;<br>i64 memo[100];<br>i64 doit(int x) {<br>  if( x == a.size() ) return 0;<br>  i64 &amp;ret = memo[x];<br>  if( ret ) return ret;<br>  ret = a[x]*c + doit(x+1);<br>  for( int y = x+1; y &lt;= a.size(); y++ ) {<br>    int z = (x+y)/2;<br>    i64 v = b;<br>    for( int i = x; i &lt; y; i++ ) v += abs(a[i]-a[z])*c;<br>    ret &lt;?= v + doit(y);<br>  }<br>  return ret;<br>}<br><br>class TeleportAndLoader {<br>public:<br>int cheapTransportation(vector &lt;int&gt; A, int B, int C) {<br>  a = A; b = B; c = C;<br>  sort(a.begin(), a.end());<br>  return doit(0);<br>}<br>};<br><br><br>// Powered by FileEdit<br></td>