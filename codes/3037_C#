            using System;<br>using System.Collections;<br>using System.Text;<br> <br>public class Thesaurus<br>{<br>  public string[] edit(string[] entry)<br>  {<br>    ArrayList l = new ArrayList();<br>    for (int i = 0; i &lt; entry.Length; ++i) {<br>      ArrayList l2 = new ArrayList();<br>      l.Add(l2);<br>      string[] ss = entry[i].Split();<br>      foreach (string s in ss) l2.Add(s);<br>    }<br>    bool changed = true;<br>    while (changed) {<br>      changed = false;<br>      for (int i = 0; i &lt; l.Count; ++i) {<br>        for (int j = i+1; j &lt; l.Count; ++j) {<br>          if (match((ArrayList)l[i], (ArrayList)l[j])) {<br>            add((ArrayList)l[i], (ArrayList)l[j]);<br>            l.RemoveAt(j);<br>            --j;<br>            changed = true;<br>          }<br>        }<br>      }<br>    }<br>    ArrayList l3 = new ArrayList();<br>    for (int i = 0; i &lt; l.Count; ++i) {<br>      ArrayList l4 = (ArrayList)l[i];<br>      string[] ss = (string[])l4.ToArray(typeof(string));<br>      Array.Sort(ss);<br>      string s = ss[0];<br>      for (int j = 1; j &lt; ss.Length; ++j) s += " " + ss[j];<br>      l3.Add(s);<br>    }<br>    string[] ss2 = (string[])l3.ToArray(typeof(string));<br>    Array.Sort(ss2);<br>    return ss2;<br>  }<br>  <br>  private bool match(ArrayList l1, ArrayList l2) {<br>    int c = 0;<br>    for (int i = 0; i &lt; l1.Count; ++i) {<br>      string s = (string)l1[i];<br>      if (l2.IndexOf(s) &gt;= 0) ++c;<br>      if (c &gt;= 2) return true;<br>    }<br>    return false;<br>  }<br>  <br>  private void add(ArrayList l1, ArrayList l2) {<br>    for (int i = 0; i &lt; l2.Count; ++i) {<br>      string s = (string)l2[i];<br>      if (l1.IndexOf(s) &lt; 0) l1.Add(s);<br>    }<br>  }<br>}<br></td>