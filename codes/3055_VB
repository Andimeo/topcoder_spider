            Public Class FractionSplit<br>        Public Function getSum(ByVal n As Integer, ByVal d As Integer) As String()<br>            Dim i As Long<br>            Dim aaRet As New System.Collections.ArrayList<br>            Dim n2, d2 As Long<br> <br>            n2 = n<br>            d2 = d<br>            Dim iTemp As Long<br> <br>            Do While n2 &gt; 0<br>                i = System.Math.Ceiling(CDbl(d2) / CDbl(n2))<br>                aaRet.Add("1/" &amp; i)<br>                iTemp = (n2 * i) - d2<br>                d2 = d2 * i<br>                n2 = iTemp<br>            Loop<br> <br>            Return aaRet.ToArray(GetType(String))<br> <br>        End Function<br>    End Class<br></td>