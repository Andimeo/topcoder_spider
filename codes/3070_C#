            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br><br>public class TaglishTranslator <br>{<br>  public string translate(string sentence) <br>  {<br>        string result = "";<br>        string subject = "";<br>        string obj = "";<br>        string verb = "";<br>        string[] words = sentence.Split(' ');<br>        int i = 0;<br>        if (words[0].ToLower() == "the")<br>        {<br>            subject = "ang "+words[1];<br>            i++;<br>        }<br>        else<br>        {<br>            subject = "si "+words[0];<br>        }<br><br>        i++;<br>        if (words[i].ToLower() == "will")<br>        {<br>            i++;<br>            string syl = "";<br>            Regex r = new Regex("[aeiou]");<br>            Match m = r.Match(words[i].ToLower());<br>            syl = words[i].Substring(0,m.Index+1);<br>            verb = "mag"+syl+words[i];<br>        }<br>        else if (words[i].ToLower().EndsWith("ed"))<br>        {<br>            verb = "nag"+words[i].Remove(words[i].Length-2,2);<br>        }<br>        else<br>        {<br>            string syl = "";<br>            Regex r = new Regex("[aeiou]");<br>            Match m = r.Match(words[i].ToLower());<br>            syl = words[i].Substring(0,m.Index+1);<br>            verb = "nag"+syl+words[i];<br>        }<br><br>        i++;<br>        if (i &lt; words.Length)<br>        {<br>            bool _to = false;<br>            if (words[i].ToLower() == "to")<br>            {<br>                _to = true;<br>                i++;<br>            }<br>            if (words[i].ToLower() == "the")<br>            {<br>                i++;<br>                if (!_to)<br>                {<br>                    obj = "ng "+words[i];<br>                }<br>                else<br>                    obj = "sa "+words[i];<br>            }<br>            else<br>            {<br>                if (!_to)<br>                {<br>                    obj = "ni "+words[i];<br>                }<br>                else<br>                    obj = "kay "+words[i];<br>            }<br>        }<br>        result = verb+" "+subject;<br>        if (obj.Length &gt; 0)<br>            result += " "+obj;<br>        return result;<br>  }<br>}<br><br><br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>