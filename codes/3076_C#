<td class="problemText" colspan="8" valign="middle" align="left">
            public class RearrangeFurniture<br>  {<br>    public int lowestEffort(int[] weights, int[] finalPositions)<br>    {<br>      int i, j, l, p, n = weights.Length;<br>      int sum, res;<br>      int minW, lminW;<br> <br>      minW = 1&lt;&lt;30;<br>      for(i=0;i&lt;n;i++)<br>        if (weights[i] &lt; minW) minW = weights[i];<br>      res = 0;<br>      for(i=0;i&lt;n;i++)<br>        if ((finalPositions[i] !=i)&amp;&amp;(finalPositions[i] &gt;=0))<br>        {<br>          l = 1;<br>          lminW = weights[i];<br>          sum = lminW;<br>          j = finalPositions[i];<br>          p = i;<br>          finalPositions[i] = -1;<br>          while (j!= p)<br>          {<br>            l++;<br>            if (lminW &gt; weights[j]) lminW = weights[j];<br>            sum += weights[j];<br>            i = finalPositions[j];<br>            finalPositions[j] = -1;<br>            j = i;<br>          }<br>          sum -= lminW;<br>          if ((l-1) * lminW &lt; (l-1)*minW + 2*(minW + lminW))<br>            res += sum + (l-1)*lminW;<br>          else res += sum + (l-1)*minW + 2*(minW + lminW);<br> <br>        }<br>      return res;<br>    }<br>  }<br></td>