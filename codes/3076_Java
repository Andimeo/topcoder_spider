            import java.util.*;<br>public class RearrangeFurniture {<br>  public int lowestEffort(int[] w, int[] p) {<br>    int n = w.length, min = 1001001001;<br>    for (int i=0; i&lt;n; i++) <br>    if (min&gt;w[i]) min = w[i];<br>    <br>    boolean[] chua = new boolean[n];<br>    Arrays.fill(chua, true);<br>    <br>    int r = 0;<br>    <br>    for (int i=0; i&lt;n; i++) <br>    if (chua[i]) {<br>      int x = i, sum = w[x], nn = w[x], s = 1;<br>      chua[x] = false;<br>      if (x==p[x]) continue;<br>      do {<br>        x = p[x];<br>        if (!chua[x]) break;<br>        if (w[x]&lt;nn) nn = w[x];<br>        sum+=w[x];<br>        s++;<br>        chua[x] = false;<br>      } while (1==1);<br>      int cost = (s-2)*nn + sum;<br>      int tmp = sum + s*min + min + nn;<br>//      r+=cost;<br>      r += Math.min(cost, tmp);<br>    }<br>    return r;<br>  }<br>  <br>}<br> <br>// Powered by PopsEdit<br>// Powered by CodeProcessor<br></td>