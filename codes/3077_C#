            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br><br>public class SignatureDecorator <br>{<br>    public string applyDecoration(string name, string[] commands, string[] decorations) <br>  {<br>    for (int i = 0; i &lt; commands.Length; i++)<br>    {<br>      if (commands[i] == "prepend")<br>        name = decorations[i] + name;<br>      else if (commands[i] == "append")<br>        name += decorations[i];<br>      else<br>      {<br>        name = decorations[i] + name;<br>        for (int j = decorations[i].Length - 1; j &gt;= 0; j--)<br>          name += decorations[i][j];<br>      }<br>    }<br>    return name;<br>    }<br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>