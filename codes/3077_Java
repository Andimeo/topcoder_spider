            public class SignatureDecorator{<br>  public String applyDecoration(String name, String[] commands, String[] decorations){<br>    int len=commands.length;<br>    for(int i=0;i&lt;len;i++){<br>      if(commands[i].equals("prepend"))name=decorations[i]+name;<br>      else if(commands[i].equals("append"))name+=decorations[i];<br>      else name=decorations[i]+name+turn(decorations[i]);<br> <br>    }<br>    return name;<br>  }<br>  public String turn(String s){<br>    String result="";<br>    for(int i=s.length()-1;i&gt;=0;i--)result+=String.valueOf(s.charAt(i));<br>    return result;<br>  }<br>}<br></td>