            using System;<br>using System.Collections;<br>using System.Text;<br> <br>public class BusinessPlan<br>{<br>    public int howLong(int[] exp,int[] rev,int[] time,int c,int d)<br>    {<br>        if (c&gt;=d) return 0;<br>        int n=exp.Length;<br>        int i,j;<br>        int[] dp=new int[d+1];<br>        for (i=0; i&lt;=d; i++) dp[i]=-1;<br>        dp[c]=0;<br>        for (i=c; i&lt;d; i++) if (dp[i]!=-1)<br>        {<br>            for (j=0; j&lt;n; j++)<br>                if (i&gt;=exp[j])<br>                {<br>                    int k=i-exp[j]+rev[j];<br>                    if (k&gt;i)<br>                    {<br>                        if (k&gt;d) k=d;<br>                        if (dp[k]==-1) dp[k]=dp[i]+time[j];<br>                        else dp[k]=Math.Min(dp[k],dp[i]+time[j]);<br>                    }<br>                }<br>        }<br>        return dp[d];<br>    }<br>}<br></td>