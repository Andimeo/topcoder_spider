            Public Class BusinessPlan<br>        Private mD As Integer<br>        Private aFromC() As Integer<br>        Public Function howLong(ByVal expense As Integer(), ByVal revenue As Integer(), ByVal ptime As Integer(), ByVal C As Integer, ByVal D As Integer) As Integer<br>            mD = D<br>            ReDim aFromC(D)<br>            Dim i As Integer<br> <br>            If C &gt;= D Then Return 0<br>            aFromC(D) = 0<br>            Dim jC As Integer<br> <br>            For jC = D To C Step -1<br>                aFromC(jC) = Integer.MaxValue - 100<br>                For i = 0 To expense.GetUpperBound(0)<br>                    If jC &gt;= expense(i) Then<br>                        aFromC(jC) = System.Math.Min(aFromC(jC), howLongfromC(jC + revenue(i) - expense(i)) + ptime(i))<br>                    End If<br>                Next<br>            Next<br> <br>            If aFromC(C) = Integer.MaxValue - 100 Then Return -1<br>            Return aFromC(C)<br>        End Function<br> <br>        Private Function howLongfromC(ByVal C As Integer) As Integer<br>            If C &gt;= mD Then<br>                Return 0<br>            Else<br>                Return aFromC(C)<br>            End If<br>        End Function<br> <br>    End Class<br></td>