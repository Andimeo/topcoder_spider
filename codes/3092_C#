            using System;<br>using System.Text.RegularExpressions;<br> <br>public class ParameterSubstitution{<br>  string[] args;<br>  public string processParams(string code, string[] args){<br>    this.args = args;<br>    Regex x = new Regex("\\$([1-9][0-9]*)");<br>    return x.Replace(code, new MatchEvaluator(me));<br>  }<br>  <br>  string me(Match m){<br>    string s = m.Groups[1].Value;<br>    string e = "";<br>    if(s.Length &gt; 2){<br>      e = s.Substring(2);<br>      s = s.Substring(0, 2);<br>    }<br>    int i = int.Parse(s);<br>    while(i &gt; args.Length){<br>      if(s.Length == 1) return m.Value;<br>      i /= 10;<br>      e = s[1] + e;<br>    }<br>    return args[i - 1] + e;<br>  }<br>}<br></td>