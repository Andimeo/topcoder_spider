            import java.util.*;<br>public class ParameterSubstitution {<br>  public String processParams(String code, String[] params) {<br>    String out = "";<br>    for (int i = 0; i &lt; code.length(); i++) {<br>      if (code.charAt(i) != '$') out += code.charAt(i);<br>      else {<br>        String sub = "$";<br>        int len = 0;<br>        int n = 0;<br>        for (int j = i+1; j &lt; code.length(); j++) {<br>          char c = code.charAt(j);<br>          if (c &lt; '0' || c &gt; '9') break;<br>          n = 10*n + c-'0';<br>          if (n == 0 || n &gt; params.length) break;<br>          len = j-i;<br>          sub = params[n-1];<br>        }<br>        out += sub;<br>        i += len;<br>      }<br>    }<br>    return out;<br>  }<br> <br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>