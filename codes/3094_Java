            import java.util.*;<br>public class ImageSteganography {<br>  public int getNextAlpha(char val)<br>  {<br>    int r = 0;<br>    if ( val == ' ' )<br>    {<br>      r = 0;<br>    }<br>    else if ( val &gt;= 'A' &amp;&amp; val &lt;= 'Z' )<br>    {<br>      r = (val - 'A') + 1;<br>    } else if ( val &gt;= 'a' &amp;&amp; val &lt;= 'z' )<br>    {<br>      r = (val - 'a') + 27;<br>    } else if ( val &gt;= '0' &amp;&amp; val &lt;= '9' )<br>    {<br>      r = (val - '0') + 53;<br>    } else {<br>      val = 63;<br>    }<br>    return r;<br>  }<br>  <br>  public String[] encode(String[] image, String message) {<br>    String[] out = new String[image.length];<br>    for ( int i = 0; i &lt; image.length; i++ )<br>    {<br>      out[i] = "";<br>    }<br>    int midx = 0;<br>    <br>    int alpha = getNextAlpha(message.charAt(midx));<br>    int alphaidx = 0;<br>    <br>    for ( int i = 0; i &lt; image.length; i++ )<br>    {<br>      for ( int j = 0; j &lt; image[i].length(); j+=3 )<br>      {<br>        int v = (image[i].charAt(j)-'0')*100 +<br>          (image[i].charAt(j+1)-'0')*10 +<br>          (image[i].charAt(j+2)-'0');<br>          <br>        v &amp;= 0xFC;<br>        int t = (alpha &amp; (3 &lt;&lt; alphaidx))&gt;&gt;alphaidx;<br>        v += t;<br>        alphaidx += 2;<br>        <br>        if ( alphaidx == 6 )<br>        {<br>          midx ++;<br>          if ( midx &gt;= message.length() )<br>          {<br>            alpha = 63;<br>          } else<br>          {<br>            alpha = getNextAlpha(message.charAt(midx));<br>          }<br>          alphaidx = 0;<br>        }<br>        if ( v &lt; 100 ) out[i] = out[i]+"0";<br>        if ( v &lt; 10 ) out[i] = out[i]+"0";<br>        out[i] = out[i] + v;<br>      }<br>    }<br>    return out;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>