            Public Class FolderSize<br>        Public Function calculateWaste(ByVal files As String(), ByVal folderCount As Integer, ByVal clusterSize As Integer) As Integer()<br>            Dim aWasted(folderCount - 1) As Integer<br>            Dim i As Integer<br>            For i = 0 To aWasted.GetUpperBound(0)<br>                aWasted(i) = 0<br>            Next<br> <br>            Dim aFile() As String<br>            Dim iExtra As Integer<br> <br>            For i = 0 To files.GetUpperBound(0)<br>                aFile = files(i).Split(" ")<br>                iExtra = CInt(aFile(1)) Mod clusterSize<br>                aWasted(CInt(aFile(0))) += (clusterSize - iExtra) Mod clusterSize<br> <br>                'aWasted(CInt(aFile(0))) += (clusterSize - CInt(aFile(1))) Mod clusterSize<br>            Next<br> <br>            Return aWasted<br> <br>        End Function<br> <br>    End Class<br></td>