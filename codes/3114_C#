            using System;<br>using System.Collections;<br> <br>public class PayBill<br>{<br> <br>    public int[] whoPaid(int[] meals, int totalMoney)<br>    {<br>        int n = meals.Length;<br>        int[] l = new int[totalMoney+1];<br>        l[0] = -1;<br>        for (int i = n-1; i &gt;= 0; i--)<br>        {<br>            for (int j = totalMoney-meals[i]; j &gt;= 0; j--)<br>            {<br>                if (l[j] != 0 &amp;&amp; l[j + meals[i]] == 0) <br>                    l[j + meals[i]] = i + 1;<br>            }<br>        }<br>        int k = totalMoney;<br>        ArrayList ans = new ArrayList();<br>        while (k &gt; 0)<br>        {<br>            ans.Add(l[k]-1);<br>            k -= meals[l[k]-1];<br>        }<br>        return (int[])ans.ToArray(k.GetType());<br>    }<br>}<br></td>