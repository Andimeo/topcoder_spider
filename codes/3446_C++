            #include &lt;iostream&gt;<br>#include &lt;vector&gt;<br>#include &lt;sstream&gt;<br>#include &lt;string&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;numeric&gt;<br>#include &lt;set&gt;<br>#include &lt;vector&gt;<br> <br>using namespace std;<br> <br>//Read directions before submitting<br> <br>class EqualSubstrings<br>{<br>public:<br>  vector &lt;string&gt; getSubstrings(string str);<br>};<br> <br>vector &lt;string&gt; EqualSubstrings::getSubstrings(string str)<br>{<br>  for(int i = str.length(); i &gt;= 0; --i)<br>  {<br>    string x = str.substr(0, i);<br>    string y = str.substr(i, str.length()-i);<br>    if(count(x.begin(), x.end(), 'a') == count(y.begin(), y.end(), 'b') )<br>    {<br>      vector&lt;string&gt; returny;<br>      returny.push_back(x);<br>      returny.push_back(y);<br>      return returny;<br>    }<br>  }<br>  vector&lt;string&gt; returny;<br>  return returny;<br>}<br></td>