            import java.util.*;<br>public class EqualSubstrings {<br>  public String[] getSubstrings(String str) {<br>    String[] res = new String[2];<br>    <br>    StringBuffer buf;<br>    String s1,s2;<br>    int a1;<br>    int b2;<br>    <br>    for (int i = str.length(); i &gt;= 0; i--) {<br>      s1 = str.substring(0, i);<br>      s2 = "";<br>      if (str.length() - i &gt; 0) {<br>        s2 = str.substring(s1.length());<br>      }<br>      <br>      a1 = 0;<br>      b2 = 0;<br>      <br>      for (int j = 0; j &lt; s1.length(); j++) {<br>        if (s1.charAt(j) == 'a') {<br>          a1++;<br>        }<br>      }<br>      <br>      for (int j = 0; j &lt; s2.length(); j++) {<br>        if (s2.charAt(j) == 'b') {<br>          b2++;<br>        }<br>      }<br>      <br>      if (a1 == b2) {<br>        return new String[] {s1,s2};<br>      }<br>    }<br>    <br>    return res;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>