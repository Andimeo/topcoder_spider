            import java.io.*;<br>   import java.util.*;<br><br>    public class ScrabFortune<br>   {<br>      static char[] ans;<br>      static int[] ch2;<br>      static boolean[] ok;<br>       static int I(String s){ <br>         return Integer.parseInt(s); }<br>       public static String getMin(String pool, String[] board, int threshold)<br>      {<br>         int[] ch = new int[256];<br>         ch2 = new int[256];<br>         ok = new boolean[256];<br>         for(int i=0;i&lt;pool.length();i++)<br>            ok[pool.charAt(i)]=true;<br>         int tot = 0;<br>         for(int i=0;i&lt;board.length;i++)<br>            for(int j=0;j&lt;board[i].length();j++){<br>               ch[board[i].charAt(j)]++;<br>               tot++;<br>            }<br>         int rm = tot-threshold;<br>         for(int i=0;i&lt;256;i++) ch2[i]=ch[i];<br>         int num = 0;<br>         String ret = "";<br>         /*System.out.println(tot+" "+threshold+" "+rm);<br>         for(int i='a';i&lt;='z';i++)<br>            System.out.println((char)i+" "+ch[i]);*/<br>         while(tot&gt;threshold){<br>            int m = 0;<br>            for(int i=0;i&lt;256;i++)<br>               if(ch[m]&lt;ch[i])m=i;<br>            if(ch[m]==0) <br>               return "IMPOSSIBLE";<br>            else { <br>               if(ok[m]) { tot-=ch[m]; ret+=(char)m; num++; } ch[m]=0; }<br>         }<br>         //System.out.println(num);<br>         ans = new char[num];<br>         getAns('a',0,num,0,rm);<br>         return new String(ans);<br>      }<br>       static boolean getAns(char c,int p,int e,int v,int t){<br>         if(p==e) <br>            return v&gt;=t;<br>         for(char ch=c;ch&lt;='z';ch++){<br>            if(ok[ch]){<br>               ans[p]=ch;<br>               if(getAns((char)(ch+1),p+1,e,v+ch2[ch],t))<br>                  return true;<br>            }<br>         }<br>         return false;<br>      }<br>   }<br></td>