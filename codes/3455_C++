            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;cmath&gt;<br> <br>using namespace std;<br> <br>bool check(long long k)<br>{<br>  if (k &lt;= 0)<br>    return false;<br>  long long n = (int) sqrt((double)k);<br>  if (n * n == k)<br>    return true;<br>  if (k &gt; n * n + n)<br>    return true;<br>  return false;<br>}<br> <br>class ArithSeq {<br>  public:<br>  long long minStart(int n, int delta) {<br>    <br>    long long best = 100000000000000000LL;<br>    for (long long m = 0; ; m++)<br>      {<br>        long long start = m*m + m + 1;<br>        if (start &gt; best + delta * n)<br>    break;<br>        long long cur = start;<br>        int count = 1;<br>        while (check(cur - delta))<br>    {<br>      cur -= delta;<br>      count++;<br>    }<br>        long long base = cur;<br>        cur = start + delta;<br>        while (count &lt; n)<br>    {<br>      if (check(cur))<br>        {<br>          cur += delta;<br>          count++;<br>        }<br>      else<br>        break;<br>    }<br>        if (count &gt;= n)<br>    best &lt;?= base;<br>      }<br>    return best;<br>      <br>  }<br>};<br> <br> <br>// Powered by FileEdit<br></td>