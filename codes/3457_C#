            using System;<br>public class BlackAndRed<br>{<br>  public int cut(string deck)<br>  {<br>    for (int i = 0; i &lt;  deck.Length; i++)<br>    {<br>      if(winState(deck.Substring(i)))<br>        return i;<br>    }<br>    return -1;<br>  }<br>  public bool winState(string d)<br>  {<br>    int r = 0;<br>    int b = 0;<br>    for (int i = 0; i &lt;  d.Length; i++)<br>    {<br>        if(d[i]=='R')<br>        r++;<br>      if(d[i]=='B')<br>        b++;<br>      if(r&gt;b)<br>        return false;<br>    }<br>    return true;<br>  }<br>}<br></td>