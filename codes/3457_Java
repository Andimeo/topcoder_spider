            import java.util.*;<br>public class BlackAndRed {<br>    public int cut(String deck) {<br>        int res;<br>        int i;<br>        int red, black;<br><br>        for(res = 0; res &lt; deck.length(); res++) {<br>      red = 0;<br>      black = 0;<br>      for(i = res; i &lt; deck.length(); i++) {<br>        if(deck.charAt(i) == 'R') {<br>          red++;<br>        }<br>        else {<br>          black++;<br>        }<br>        if(red &gt; black) {<br>          break;<br>        }<br>      }<br>      if(i &lt; deck.length()) {<br>        continue;<br>      }<br>      for(i = 0; i &lt; res; i++) {<br>        if(deck.charAt(i) == 'R') {<br>          red++;<br>        }<br>        else {<br>          black++;<br>        }<br>        if(red &gt; black) {<br>          break;<br>        }<br>      }<br>      if(i == res) {<br>        break;<br>      }<br>    }<br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>