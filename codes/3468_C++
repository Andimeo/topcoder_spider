            #include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>using namespace std;<br> <br>typedef long long i64;<br>typedef vector&lt;int&gt; VI;<br>typedef vector&lt;string&gt; VS;<br>#define REP(i,n) for(int _n=n, i=0;i&lt;_n;i++)<br>#define FOR(i,a,b) for(int i=(a),_b=(b);i&lt;=_b;i++)<br> <br>class SantaClaus  {<br>  public: vector &lt;int&gt; exchange(vector &lt;string&gt; value);<br>};<br> <br>vector &lt;int&gt; rst;<br>int n;<br>int r[60][60][60];<br> <br>vector &lt;int&gt; SantaClaus ::exchange(vector &lt;string&gt; v) <br>{  <br>  rst.resize(2,0);<br>  n=v.size();<br>  REP(i,n) REP(j,n) r[i][j][1]=v[i][j]-v[i][i];<br>  FOR(t,2,n+1)<br>  {<br>    REP(i,n) REP(j,n)<br>    {<br>      r[i][j][t]=-10000000;<br>      REP(k,n) r[i][j][t]&gt;?=r[i][k][t-1]+r[k][j][1];<br>    }<br>    REP(i,n)<br>    {<br>      if(r[i][i][t]&gt;0)<br>      {<br>        rst[0]=t;<br>        rst[1]&gt;?=r[i][i][t];<br>      }<br>    }<br>    if(rst[0]&gt;0) return rst;<br>  }<br>  return(rst);<br>}<br> <br> <br>// Powered by PopsEdit<br></td>