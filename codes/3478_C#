<td class="problemText" colspan="8" valign="middle" align="left">
            using System;<br>using System.Collections;<br> <br>public class ChessTournament<br>{<br>    public int[] nextRound(int[] score,int[] rating)<br>    {<br>        int n=score.Length;<br>        int i,j,t;<br>        int[] a=new int[n];<br>        int[] res=new int[n];<br>        for (i=0; i&lt;n; i++) a[i]=i;<br>        for (i=0; i&lt;n; i++)<br>            for (j=i+1; j&lt;n; j++)<br>                if (score[a[j]]&gt;score[a[i]] || score[a[j]]==score[a[i]] &amp;&amp; rating[a[j]]&gt;rating[a[i]])<br>                {<br>                    t=a[i];<br>                    a[i]=a[j];<br>                    a[j]=t;<br>                }<br>        i=0;<br>        while (i&lt;n)<br>        {<br>            j=i+1;<br>            while (j&lt;n &amp;&amp; score[a[j]]==score[a[i]]) ++j;<br>            if ((j-i)%2==1) ++j;<br>            int k=i+(j-i)/2;<br>            while (k!=j)<br>            {<br>                res[a[i]]=a[k];<br>                res[a[k]]=a[i];<br>                i++;<br>                k++;<br>            }<br>            i=j;<br>        }<br>        return res;<br>    }<br>}<br></td>