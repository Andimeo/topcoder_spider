            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;iostream&gt;<br> <br>using namespace std;<br> <br>class ChessTournament {<br>  public:<br>  vector &lt;int&gt; nextRound(vector &lt;int&gt; score, vector &lt;int&gt; rating) {<br>    vector &lt;int&gt; a(score.size());<br>    vector &lt;pair&lt;int,int&gt; &gt; x;<br>    pair&lt;int,int&gt; xx;<br>    int i,n=score.size();<br>    int max=-1,c,cc;<br>    for(i=0;i&lt;n;i++)<br>    if(score[i]&gt;max)<br>    max=score[i];<br>    <br>    while(max&gt;-1)<br>    {<br>      c=0;<br>      x.clear();<br>      for(i=0;i&lt;n;i++)<br>      if(score[i]==max)<br>      {<br>        c++;<br>        score[i]=-1;<br>        xx.first=rating[i];<br>        xx.second=i;<br>        x.push_back(xx);<br>      }<br>      stable_sort(x.begin(),x.end());<br>      if(x.size()%2)<br>      {<br>        max=-1;<br>        for(i=0;i&lt;n;i++)<br>        if(score[i]&gt;max)<br>        max=score[i];<br>        cc=-1;<br>        for(i=0;i&lt;n;i++)<br>        if(score[i]==max &amp;&amp; ((cc==-1) || (rating[i]&gt;rating[cc])))<br>        cc=i;<br>        score[cc]=-1;<br>        xx.first=0;<br>        xx.second=cc;<br>        x.insert(x.begin(),xx);<br>      }<br>      cc=(c+1)/2;<br>      for(i=0;i&lt;cc;i++)<br>      {<br>        a[x[i].second]=x[i+cc].second;<br>        a[x[i+cc].second]=x[i].second;<br>      }<br>      max=-1;<br>      for(i=0;i&lt;n;i++)<br>        if(score[i]&gt;max)<br>          max=score[i];<br>    }<br>    return a;<br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>