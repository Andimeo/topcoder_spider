            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>public class ChessTournament {<br>  class Player implements Comparable{<br>    int rating, score;<br>    int index;<br>    Player(int x, int y, int z){ rating = x; score = y; index = z;}<br>    public int compareTo(Object o){<br>      Player p = (Player)o;<br>      if(score != p.score) return p.score - score;<br>      return p.rating - rating;<br>    }<br>  }<br>  public int[] nextRound(int[] score, int[] rating) {<br>    ArrayList al = new ArrayList();<br>    for(int i = 0; i &lt; score.length; i++){<br>      al.add(new Player(rating[i], score[i], i));<br>    }<br>    Collections.sort(al);<br>    int[] ret = new int[score.length];<br>    while(al.size() &gt; 0){<br>      int sc = ((Player)al.get(0)).score;<br>      ArrayList in = new ArrayList();<br>      while(al.size() &gt; 0){<br>        if(((Player)al.get(0)).score != sc) break;<br>        in.add(al.remove(0));<br>      }<br>      if(in.size()%2==1) in.add(al.remove(0));<br>      int half = in.size()/2;<br>      for(int i = 0; i &lt; in.size()/2; i++){<br>        Player p1 = (Player)in.get(i);<br>        Player p2 = (Player)in.get(half+i);<br>        ret[p1.index] = p2.index;<br>        ret[p2.index] = p1.index;<br>      }<br>    }<br>    return ret;<br>  }<br> <br>}<br> <br>// Powered by PopsEdit<br>// Powered by CodeProcessor<br></td>