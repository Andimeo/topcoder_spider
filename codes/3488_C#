            using System;<br> <br>public class WordNumber {<br>  public string theWord(int alpha, int n)<br>  {<br>    int[] data = new int[1000000];<br>    int i, cou = 1;<br>    <br>    for (i = 1; i &lt; 1000000; i++) data[i] = 0;<br> <br>    i = -1;<br>    long min = 0;<br>    long here = 1;<br>    while (true)<br>    {<br>      i++;    <br>      min = min + here;<br>      if (n &lt; min)<br>      {<br>        min = min - here;<br>        break;<br>      }<br>      here = here * alpha;<br>    }<br>    n = n - (int)min;<br>    int haha = i - 1;<br>    <br>    for (i = 1; i &lt;= 1000000; i++)<br>    {<br>      data[i] = n % alpha;<br>      n = n / alpha;<br>      cou = i;<br>      if (n == 0) break;<br>    }<br>    <br>    string st = "";<br>    <br>    for (i = haha + 1; i &gt;= 1; i--)<br>      st = st + (char)(data[i] + 'a');<br>    <br>    return st;<br>  }<br>}<br></td>