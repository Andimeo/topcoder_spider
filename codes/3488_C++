            #include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;iterator&gt;<br>#include &lt;set&gt;<br>#include &lt;limits&gt;<br>#include &lt;cmath&gt;<br>using namespace std;<br> <br>#define mset(A,B) memset(A,B,sizeof(A));<br> <br>class WordNumber<br>{<br>public:<br>  //&lt;return-type&gt; &lt;method-name&gt; (&lt;argument-type&gt; arg1)<br>  string theWord(int alpha, int n)<br>  {<br>    n--;<br>    int len = 1;<br>    int base = 1;<br>    while (n/alpha &gt;= base)<br>    {<br>      len++;<br>      base *= alpha;<br>      n -= base;<br>    }<br>    string res = "";<br>    for (int i = 0; i &lt; len; i++)<br>    {<br>      res += (char)('a'+n/base);<br>      n %= base;<br>      base /= alpha;<br>    }<br>    return res;<br>  }<br>};<br></td>