            using System;<br>using System.Text;<br>using System.Collections;<br><br>public class VLNString <br>{<br>  public string makeAcronym(string longName) <br>  {<br>        string result = "";<br>        string[] ns = longName.Split(' ');<br>        foreach(string n in ns)<br>        {<br>            string s = n.Trim();<br>            if (s != "" &amp;&amp; s != "and" &amp;&amp; s != "of" &amp;&amp; s != "the")<br>                result += s.Substring(0,1).ToUpper();<br>        }<br>      return result;<br>  }<br>}<br><br><br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>