            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class VLNString<br>{<br>  public String makeAcronym(String longName)<br>  {<br>    StringTokenizer tokens=new StringTokenizer(longName);<br>    String result=new String("");<br>    String temp;<br>    while (tokens.hasMoreTokens()) {<br>      temp=tokens.nextToken().toLowerCase();<br>      if (temp.compareTo("and")==0 || temp.compareTo("the")==0 || temp.compareTo("of")==0) continue;<br>      result+=temp.substring(0,1).toUpperCase();<br>    }<br>    return result;<br>  }<br>}<br></td>