            using System;<br> <br>public class Inversions<br>{<br>     public int[] createExample(int n,int c)<br>     {<br>         int[] res=new int[n];<br>         bool[] was=new bool[n+1];<br>         int i;<br>         for (i=1; i&lt;=n; i++) was[i]=false;<br>         for (i=0; i&lt;n; i++)<br>         {<br>             if ((n-i)*(n-i-1)/2&lt;c) return new int[0];<br>             int s=0,j;<br>             for (j=1; j&lt;=n; j++)<br>                 if (!was[j])<br>                 {<br>                     if (c&lt;=s+(n-i-1)*(n-i-2)/2) break;<br>                     ++s;<br>                 }<br>             if (j&gt;n) return new int[0];<br>             res[i]=j;<br>             was[j]=true;<br>             c-=s;<br>         }<br>         return res;<br>     }<br>}<br></td>