            import java.util.*;<br>public class Inversions {<br>  public int[] createExample(int n, int inv) {<br>    int max = n * (n-1) / 2;<br>    <br>    if (inv &gt; max) return new int[0];<br>    if (inv == max) {<br>      int[] r = new int[n];<br>      for (int i = 0; i &lt; n; i++) r[i] = n-i;<br>      return r;<br>    }<br>    if (inv == 0) {<br>      int[] r = new int[n];<br>      for (int i = 0; i &lt; n; i++) r[i] = i+1;<br>      return r;<br>    }<br>    <br>    int k = 1 + inv - (n-1) * (n-2) / 2;<br>    if (k &lt; 1) k = 1;<br>    int[] f = createExample(n-1, inv - k + 1);<br>    int[] r = new int[n];<br>    r[0] = k;<br>    for (int i = 0; i &lt; n-1; i++) {<br>      if (f[i] &lt; k) r[i+1] = f[i];<br>      else r[i+1] = 1 + f[i];<br>    }<br>    return r;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>