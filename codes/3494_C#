            using System;<br>using System.Collections;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class BridgePts<br>{<br>  public int pointValue(int[] hand)<br>  {<br>    int C=0; int D=0; int H=0; int S=0; int ans=0; int temp;<br>    foreach(int z in hand){<br>      if(z&gt;0 &amp;&amp; z&lt;=13) C++;<br>      if(z&gt;13 &amp;&amp; z&lt;=26) D++;<br>      if(z&gt;26 &amp;&amp; z&lt;=39) H++;<br>      if(z&gt;39 &amp;&amp; z&lt;=52) S++;<br>      temp=z%13;<br>      if(temp==1) ans+=4;<br>      if(temp==0) ans+=3;<br>      if(temp==12) ans+=2;<br>      if(temp==11) ans+=1;<br>    }<br>    if(C&lt;3) ans+=(3-C);<br>    if(D&lt;3) ans+=(3-D);<br>    if(H&lt;3) ans+=(3-H);<br>    if(S&lt;3) ans+=(3-S);<br>    return ans;<br>  }<br>  <br> <br>}<br> <br>//Powered by [KawigiEdit]<br></td>