            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;set&gt;<br>#include &lt;map&gt;<br>#include &lt;algorithm&gt;<br> <br>using namespace std;<br> <br>/*<br>Class:<br>BridgePts<br>Method:<br>pointValue<br>Parameters:<br>vector &lt;int&gt;<br>Returns:<br>int<br>Method signature:<br>int pointValue(vector &lt;int&gt; hand)<br>(be sure your method is public)<br>*/<br> <br>class BridgePts<br>{<br>public:<br>int pointValue(vector &lt;int&gt; hand);<br>};<br> <br> <br>int BridgePts::pointValue(vector &lt;int&gt; hand)<br>{<br>    int points=0;<br>int a=0,b=0,c=0,d=0;<br>for(int k=0;k&lt;13;k++)<br>{<br>if(hand[k]%13==1)<br>points+=4;<br>if(hand[k]%13==11)<br>points+=1;<br>if(hand[k]%13==12)<br>points+=2;<br>if(hand[k]%13==0)<br>points+=3;<br> <br> <br>if(hand[k]&gt;0 &amp;&amp; hand[k]&lt;14)<br>a++;<br>if(hand[k]&gt;13 &amp;&amp; hand[k]&lt;27)<br>b++;<br>if(hand[k]&gt;26 &amp;&amp; hand[k]&lt;40)<br>c++;<br>if(hand[k]&gt;39 &amp;&amp; hand[k]&lt;53)<br>d++;<br>}<br> <br> <br> <br>if(a==2)<br>points++;<br>if(b==2)<br>points++;<br>if(c==2)<br>points++;<br>if(d==2)<br>points++;<br> <br>if(a==1)<br>points+=2;<br>if(b==1)<br>points+=2;<br>if(c==1)<br>points+=2;<br>if(d==1)<br>points+=2;<br> <br>if(a==0)<br>points+=3;<br>if(b==0)<br>points+=3;<br>if(c==0)<br>points+=3;<br>if(d==0)<br>points+=3;<br> <br> <br>return points;<br>}<br></td>