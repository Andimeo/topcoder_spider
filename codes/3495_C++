<td class="problemText" colspan="8" valign="middle" align="left">
            #include &lt;vector&gt;<br>using namespace std;<br>class MovingAvg {<br>  public:<br>  double difference(int k, vector &lt;double&gt; data) {<br>    double max, min, sum;<br>    max = -1;<br>    min = 1e100;<br>    int i, j;<br>    for (i = 0; i &lt; data.size() - k + 1; i++) {<br>      sum = 0;<br>      for (j = i; j &lt; i + k; j++)<br>        sum += data[j];<br>      sum = sum / k;<br>      if (sum &gt; max)<br>        max = sum;<br>      if (sum &lt; min)<br>        min = sum;<br>    }<br>    return max - min;<br>  }<br>};<br></td>