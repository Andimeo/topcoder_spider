            using System;<br>using System.Collections;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class Hiking<br>{<br>  public int meet(int[] alice, int[] bob)<br>  {<br>    int total = sum(alice);<br>    int a = 0, b = total;<br>    for (int i = 0; i &lt; alice.Length; ++i){<br>      a += alice[i];<br>      b -= bob[i];<br>      if (a == b) return i + 1;<br>      if (a &gt; b) return i;<br>    }<br>    return -1;<br>  }<br>  <br>  int sum(int[] arr){<br>    int res = 0;<br>    foreach (int i in arr) res += i;<br>    return res;<br>  }<br>}<br>//Powered by [KawigiEdit]<br></td>