            #include &lt;string&gt; <br>#include &lt;string.h&gt; <br>#include &lt;vector&gt; <br>#include &lt;algorithm&gt; <br>using namespace std; <br> <br>class Hiking <br>{ <br>public: <br>  int meet(vector &lt;int&gt; alice, vector &lt;int&gt; bob); <br>}; <br> <br>int Hiking::meet(vector &lt;int&gt; alice, vector &lt;int&gt; bob) <br>{ <br>  int total,a,i; <br>  total = 0; <br>  for (i=0;i&lt;alice.size();i++) <br>    total += alice[i]; <br>  a=0; <br>  for (i=0;;i++) <br>  { <br>    a+=alice[i]; <br>    a+=bob[i]; <br>    if (a&gt;=total) break; <br>  } <br>  if (a==total) i++; <br>  return i; <br>}<br></td>