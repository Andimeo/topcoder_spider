            import java.util.*;<br>public class TimeOfPossession {<br>  public String getTime(String[] times) {<br>    int lasttime = 0;<br>    int A = 0;<br>    boolean isA = false;<br>    <br>    for (int i = 0; i &lt; times.length; i++) {<br>      StringTokenizer st = new StringTokenizer(times[i], " :");<br>      String e = st.nextToken();<br>      int m = Integer.parseInt(st.nextToken());<br>      int s = Integer.parseInt(st.nextToken());<br>      int t = m * 60 + s;<br>      if (isA) A += (t - lasttime);<br>      lasttime = t;<br>      if (e.equals("A")) isA = true;<br>      if (e.equals("B")) isA = false;<br>      if (e.equals("SWITCH")) isA = !isA;<br>    }<br>    <br>    int m = A/60; int s = A % 60;<br>    return ""+m+":"+(s&lt;10?"0":"")+s;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>