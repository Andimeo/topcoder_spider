            #include &lt;cstring&gt;<br><br><br>class TreePlanting <br>{<br>  public:<br><br>  int n;<br>  long long memo[70][70];<br><br>  long long rec(int id,int left)<br>  {<br>    if(!left) return 1;<br>    if(id&gt;=n) return 0;<br>    if(memo[id][left]!=-1)<br>      return memo[id][left];<br><br>    long long res=0;<br>    for(int i=id;i&lt;n;i++)<br>      res+=rec(i+2,left-1);<br><br>    memo[id][left]=res;<br>    return res;<br>  }<br>    <br>    <br>  long long countArrangements(int to, int fa) <br>  {<br>    long long ret;  <br>    memset(memo,-1,sizeof(memo));<br>    n=to;<br>    ret=rec(0,fa);<br>    return ret;<br>  }<br><br> <br>};<br></td>