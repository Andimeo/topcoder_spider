            import java.util.*;<br>public class TreePlanting {<br>  public long countArrangements(int total, int fancy) {<br>    int plain = total - fancy;<br>    int spaces = plain + 1;<br>    if (fancy &gt; spaces)<br>      return 0L;<br>    return nCk(spaces, fancy);<br>  }<br>  long nCk(long n, long k) {<br>    k = k &lt; n - k ? k : n - k;<br>    if (k &lt; 0)<br>      return 0;<br>    double r = 1.0;<br>    for (int i = 1; i &lt;= k; i++) {<br>      r = r * (n - i + 1) / i;<br>    }<br>    return (long) (r + 0.5);<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by StevenProcessor<br>// Powered by CodeProcessor<br></td>