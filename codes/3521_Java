            public class SnowClearing {<br> <br>    public int unreachable( String[] citymap, int row, int column ) {<br>    <br>        int[][] citymapCount = new int[ ( citymap.length + 1 ) / 2 ][ ( citymap[ 0 ].length() + 1 ) / 2 ];<br>        for ( int i = 0; i &lt; citymapCount.length; ++i )<br>            for ( int j = 0; j &lt; citymapCount[ i ].length; ++j ) {<br>                citymapCount[ i ][ j ] = 0;<br>                if ( i != 0 &amp;&amp; citymap[ i * 2 - 1 ].charAt( j * 2 ) == '|' ) ++citymapCount[ i ][ j ];<br>                if ( i != citymapCount.length - 1 &amp;&amp; citymap[ i * 2 + 1 ].charAt( j * 2 ) == '|' ) ++citymapCount[ i ][ j ];<br>                if ( j != 0 &amp;&amp; citymap[ i * 2 ].charAt( j * 2 - 1 ) == '-' ) ++citymapCount[ i ][ j ];<br>                if ( j != citymapCount[ i ].length - 1 &amp;&amp; citymap[ i * 2 ].charAt( j * 2 + 1 ) == '-' ) ++citymapCount[ i ][ j ];<br>            }<br>        citymapCount[ row - 1 ][ column - 1 ] = -1;<br>        <br>        boolean change = true;<br>        while ( change == true ) {<br>        change = false;<br>        for ( int i = 0; i &lt; citymapCount.length; ++i )<br>            for ( int j = 0; j &lt; citymapCount[ i ].length; ++j ) {<br>                if ( citymapCount[ i ][ j ] &gt; 1 ) {<br>                int countOne = 0;<br>                if ( i != 0 &amp;&amp; citymap[ i * 2 - 1 ].charAt( j * 2 ) == '|' &amp;&amp; citymapCount[ i - 1 ][ j ] == 1 )<br>                    ++countOne;<br>                if ( i != citymapCount.length - 1 &amp;&amp; citymap[ i * 2 + 1 ].charAt( j * 2 ) == '|' &amp;&amp; citymapCount[ i + 1 ][ j ] == 1 )<br>                    ++countOne;<br>                if ( j != 0 &amp;&amp; citymap[ i * 2 ].charAt( j * 2 - 1 ) == '-' &amp;&amp; citymapCount[ i ][ j - 1 ] == 1 )<br>                    ++countOne;<br>                if ( j != citymapCount[ i ].length - 1 &amp;&amp; citymap[ i * 2 ].charAt( j * 2 + 1 ) == '-' &amp;&amp; citymapCount[ i ][ j + 1 ] == 1 )<br>                    ++countOne;<br>                if ( citymapCount[ i ][ j ] &lt;= countOne + 1 ) {<br>                    citymapCount[ i ][ j ] = 1;<br>                    change = true;<br>                }<br>                }<br>            }<br>//        citymapCount[ row - 1 ][ column - 1 ] = 2;<br>        }<br>        <br>        for ( int i = 0; i &lt; citymapCount.length; ++i )<br>            for ( int j = 0; j &lt; citymapCount[ i ].length; ++j )<br>                if ( citymapCount[ i ][ j ] &gt; 2 )<br>                    citymapCount[ i ][ j ] = 2;<br>        <br>        int result = 0;<br>        for ( int i = 0; i &lt; citymapCount.length; ++i )<br>            for ( int j = 0; j &lt; citymapCount[ i ].length; ++j )<br>                if ( citymapCount[ i ][ j ] &lt;= 1 &amp;&amp; citymapCount[ i ][ j ] != -1 )<br>                    ++result;<br>        return result;<br>    <br>    }<br> <br>}<br></td>