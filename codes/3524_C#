            using System;<br><br>public class SyllableCounter <br>{<br>    public int countSyllables(string word) <br>  {<br>    bool vowel = false;<br>    int vowels = 0;<br>    foreach (char c in word)<br>    {<br>      if (c == 'A' || c == 'E' || c == 'I' || c == 'O' || c == 'U')<br>      {<br>        if (!vowel)<br>          vowels ++;<br>        vowel = true;<br>      }<br>      else<br>      {<br>        vowel = false;<br>      }<br>    }<br><br>    return vowels;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>