            #include &lt;iostream&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;set&gt;<br>#define FOR(i,n) for(int i=0;i&lt;n;i++)<br>#define debln(a) cout&lt;&lt; #a &lt;&lt;" : " &lt;&lt; a &lt;&lt; endl;<br>using namespace std;<br> <br>class SyllableCounter {<br>  public:<br>  int countSyllables(string word) {<br>    // {'A', 'E', 'I', 'O', 'U'}<br>    int res = 0;<br>    set&lt;char&gt; s;<br>    s.insert('A');<br>    s.insert('E');<br>    s.insert('I');<br>    s.insert('O');<br>    s.insert('U');<br>    FOR(i,word.size()) {<br>      if(s.find(word[i])==s.end()) continue;<br>      res++;<br>      while(s.find(word[i]) != s.end() &amp;&amp; i&lt;word.size()) {<br>        i++;<br>      }<br>    }<br>    return res;<br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>