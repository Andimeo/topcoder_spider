<td class="problemText" colspan="8" valign="middle" align="left">
            public class Highscore {<br> <br>    public int getRank( int[] scores, int newscore, int places ) {<br>        int greater = 0, lesser = 0, same = 0;<br>        for ( int i = 0; i &lt; scores.length; ++i )<br>            if ( newscore &gt; scores[ i ] )<br>                ++greater;<br>            else if ( newscore == scores[ i ] )<br>                ++same;<br>            else<br>                ++lesser;<br>        if ( lesser + same &gt;= places )<br>            return -1;<br>        return lesser + 1;<br>    }<br> <br>}<br></td>