            using System;<br> <br>public class ATaleOfThreeCities {<br> <br>public double dist (int ax, int ay, int bx, int by) {<br>  return Math.Sqrt((ax - bx) * (ax - bx) + (ay - by) * (ay - by));<br>}<br> <br>public double best (int[] ax, int[] ay, int[] bx, int[] by) {<br>  double best = 999999;<br>  for (int i = 0; i &lt; ax.Length; i++)<br>    for (int j = 0; j &lt; bx.Length; j++)<br>      best = Math.Min(best, dist(ax[i], ay[i], bx[j], by[j]));<br>  return best;<br>}<br> <br>public double connect(int[] ax, int[] ay, int[] bx, int[] by, int[] cx, int[] cy) {<br>  double b1 = best(ax, ay, bx, by);<br>  double b2 = best(ax, ay, cx, cy);<br>  double b3 = best(bx, by, cx, cy);<br>  double max = Math.Max(Math.Max(b1, b2), b3);<br>  return b1 + b2 + b3 - max;<br> <br>}<br> <br>}<br></td>