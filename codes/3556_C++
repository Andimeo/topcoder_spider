            #include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br>#include &lt;map&gt;<br>#include &lt;stack&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br> <br>using namespace std;<br> <br>class Barbecue<br>{<br>public:<br> <br>int eliminate(int n, vector&lt;int&gt; v, vector&lt;int&gt; e)<br>{<br>  vector&lt;int&gt; tv;<br>  vector&lt;int&gt; va;<br>  int i;<br>  int r;<br> <br>  for(i=0;i&lt;n;i++) {<br>    tv.push_back(0);<br>    va.push_back(0);<br>  }<br> <br>  for(i=0;i&lt;v.size();i++) {<br>    tv[ v[i] ]++;<br>    va[ e[i] ]++;<br>  }<br> <br>  r=0;<br>  for(i=1;i&lt;va.size();i++) {<br>    if(va[i] == va[r])<br>      if( tv[i] &gt; tv[r] ) r=i;<br>    if(va[i] &gt; va[r]) r=i;<br>  }<br> <br>  return r;<br>}<br> <br>};<br></td>