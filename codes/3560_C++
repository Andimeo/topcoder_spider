            #include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;stdlib.h&gt;<br>#include &lt;iostream&gt;<br>#include &lt;fstream&gt;<br>#include &lt;set&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;sstream&gt;<br>#include &lt;map&gt;<br> <br>using namespace std;<br> <br>class InequalityChecker<br>{<br>       public:<br> <br>vector &lt;int&gt; getDifferences(int n)<br>  {<br> <br>vector &lt;int&gt; res (2,0);<br> <br>int s = (n*(n-1)*n*(n-1))/4;<br>int S = (n*(n+1)*n*(n+1))/4;<br> <br>int x = 2*(s+S) - (n*n*n*n);<br>int y = 4;<br> <br>if(x % 4 == 0)<br>  {<br>  x = x/4;<br>  y = 1;<br>  }<br> <br>if(x % 2 == 0 &amp;&amp; x % 4 != 0)<br>  {<br>  x = x/2;<br>  y = 2;<br>  }<br> <br>res[0] = x;<br>res[1] = y;<br> <br>return res;<br> <br>} <br> <br>};<br></td>