            import java.util.*;<br>public class SalesPromotion {<br>    public int bestPrice(int points, int halfPrice, int discount, String[] items) {<br>  discount = 100 - discount;<br>  int n = items.length;<br>  int[] cost = new int[n];<br>  int[] discost = new int[n];<br>  int[] halfcost = new int[n];<br>  int[] pnt = new int[n];<br>  for (int i=0; i &lt; n; i++) {<br>    StringTokenizer st = new StringTokenizer(items[i], " ");<br>    pnt[i] = Integer.parseInt(st.nextToken());<br>    cost[i] = Integer.parseInt(st.nextToken());<br>    halfcost[i] = (cost[i]+1)/2;<br>    discost[i] = (cost[i] * discount + 99) / 100;<br>  }<br>  int[][] cur = new int[halfPrice+1][points+1];<br>  int[][] next = new int[halfPrice+1][points+1];<br>  for (int i=0; i &lt;= halfPrice; i++) {<br>    Arrays.fill(cur[i], 1000000000);<br>  }<br>  cur[halfPrice][points] = 0;<br>  for (int i=0; i &lt; n; i++) {<br>    for (int j=0; j &lt;= halfPrice; j++) {<br>      Arrays.fill(next[j], 1000000000);<br>    }<br>    for (int j=0; j &lt;= halfPrice; j++) {<br>      for (int k=0; k &lt;= points; k++) {<br>          if (cur[j][k] != 1000000000) {<br>        next[j][k] = Math.min(next[j][k], cur[j][k] + discost[i]);<br>        if (j &gt; 0) {<br>          next[j-1][k] = Math.min(next[j-1][k], cur[j][k] + halfcost[i]);<br>        }<br>        if (k &gt;= pnt[i]) {<br>          next[j][k-pnt[i]] = Math.min(next[j][k-pnt[i]], cur[j][k]);<br>        }<br>          }<br>      }<br>    }<br>    for (int j=0; j &lt;= halfPrice; j++) {<br>      for (int k=0; k &lt;= points; k++) {<br>        cur[j][k] = next[j][k];<br>      }<br>    }<br>  }<br>  return cur[0][0];<br>    }<br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>