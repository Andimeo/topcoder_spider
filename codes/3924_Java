            import java.lang.reflect.Array;<br>import java.util.*;<br>public class CommunicableDisease {<br>    public String findSource(String[] contact, String results) {<br>        int n = contact.length;<br>        boolean[][] B = new boolean[n][n];<br>        for( int i = 0; i &lt; n; i++){<br>            Arrays.fill(B[i], false);<br>            B[i][i] = true;<br>        }<br>        int[][] c = new int[n][];<br>        for (int i = 0; i &lt; c.length; i++) {<br>            String[]s = contact[i].split(" ");<br>            c[i] = new int[s.length];<br>            for (int j = 0; j &lt; s.length; j++) {<br>                c[i][j] = Integer.parseInt( s[j]);<br>            }<br>        }<br>        for( int r = 0; r &lt; c[0].length; r++){<br>            boolean[][] bb = new boolean[n][n];<br>            for( int i = 0; i &lt; n; i++){<br>                int x = c[i][r];<br>                for( int j = 0; j &lt; n; j++){<br>                    bb[x][j] |= B[i][j];<br>                }<br>            }<br>            for (int i = 0; i &lt; n; i++) {<br>                for (int j = 0; j &lt; n; j++) {<br>                    B[i][j] |= bb[i][j];<br>                }<br>                <br>            }<br>        }<br>        int[] R = new int[n];<br>        for( int i = 0; i &lt; n; i++){<br>            if( results.charAt(i) == 'N'){<br>                for( int j = 0; j &lt; n; j++) if( B[i][j] ) R[j] = 1;<br>            }<br>        }<br>        for( int i = 0; i &lt; n; i++){<br>            if( results.charAt(i) == 'C'){<br>                int cc = 0;<br>                for( int j = 0; j &lt; n; j++) if( B[i][j] &amp;&amp; R[j] != 1) cc++;<br>                if( cc == 0 )return "INVALID";<br>                if( cc == 1){<br>                    for( int j = 0; j &lt; n; j++) if( B[i][j] &amp;&amp; R[j] != 1) R[j] = -1;<br>                }<br>            }<br>        }<br>        String res="";<br>        for (int i = 0; i &lt; R.length; i++) {<br>            if( R[i] == 0) res += 'I';<br>            if( R[i] == 1) res += 'N';<br>            if( R[i] == -1) res += 'C';<br>        }<br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>