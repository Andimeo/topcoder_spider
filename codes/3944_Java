            import java.util.*;<br>public class CakeDivision {<br>  public double bestdiv(double l, double w, int cnt) {<br>    if (cnt == 1) {<br>      return Math.max(l, w) / Math.min(l, w);<br>    }<br>    double best = 1e40;<br>    for (int i=1; i &lt; cnt; i++) {<br>      best = Math.min(best, Math.max(bestdiv(i*l / cnt, w, i),<br>                                                       bestdiv((cnt-i)*l / cnt, w, cnt-i)));<br>      best = Math.min(best, Math.max(bestdiv(l, i*w / cnt, i),<br>                                                       bestdiv(l, (cnt-i)*w / cnt, cnt-i)));<br>    }<br>    return best;<br>  }<br><br>    public double ratio(int length, int width, int pieces) {<br>  return bestdiv(length, width, pieces);<br>    }<br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>