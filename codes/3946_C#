            using System;<br>using System.Text;<br>using System.Collections;<br><br>public class Stitch {<br>    public string[] stitch(string[] A, string[] B, int overlap) {<br>        string[] res;<br><br>    int na = A[0].Length, nb = B[0].Length;<br>    int s = na - overlap, l = s + nb;<br>    int m = A.Length;<br><br>    res = new string[m];<br>    for (int j = 0; j &lt; m; j++)<br>    {<br>      for (int i = 0; i &lt; l; i++)<br>      {<br>        if (i &lt; s)<br>        {<br>          res[j] += A[j][i];<br>        } <br>        else<br>        {<br>          if (i &gt;= na)<br>          {<br>            res[j] += B[j][i-s];<br>          } <br>          else<br>          {<br>            int u, d, nm;<br>            u = (overlap+s-i)*A[j][i]+(i-s+1)*B[j][i-s];<br>            d = overlap+1;<br>            nm = (int)((((double)u))/((double)d)+0.5);<br>            res[j] += (char)(nm);<br>          }<br>        }<br>      }<br>    }<br><br>        return res;<br>    }<br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>