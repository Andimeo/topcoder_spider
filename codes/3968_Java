            import java.util.*;<br>public class HowUnsorted {<br>  long[] a,b;<br>  public long howMany(int m, int c, int n) {<br>    long M = (1L&lt;&lt;31)-1;<br>    a = new long[n];<br>    b = new long[n];<br>    a[0] = 1;<br>    for (int i = 1; i &lt; n; i++)<br>      a[i] = (m*a[i-1]+c) % M;<br>    sort(0,n);<br>    return count;<br>  }<br>  long count = 0;<br>  void sort(int lo,int hi) {<br>    if (hi-lo &lt;= 1) return;<br>    int mid = (lo+hi)/2;<br>    sort(lo,mid);<br>    sort(mid,hi);<br>    int i = lo, j = mid, k = lo;<br>    while (k &lt; hi) {<br>      if (i == mid) b[k++] = a[j++];<br>      else if (j == hi) b[k++] = a[i++];<br>      else if (a[i] &lt;= a[j]) b[k++] = a[i++];<br>      else { count += mid-i; b[k++] = a[j++]; }<br>    }<br>    for (i = lo; i &lt; hi; i++) a[i] = b[i];<br>  }<br> <br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>