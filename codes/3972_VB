            imports system<br>imports system.Math<br>imports microsoft.VisualBasic<br> <br>Public Class WordFind<br> <br>  Public Function findWords(grid As String(), wordList As String()) As String()<br> <br>    dim i,j,k,l as integer<br>    dim row, col as integer<br>    dim ret(UBound(wordList)) As String<br>    dim wordPos(2) as integer<br>    dim retDone(UBound(wordlist)) as integer<br> <br>    for i=0 to UBound(wordList)<br>      for j=0 to UBound(grid)<br>        for k=1 to len(grid(j))<br>          for l=0 to 2<br>          wordPos(l)=0<br>          next l<br>          if j+len(wordList(i))&lt;=UBound(grid)+1 then <br>          wordPos(0)=1<br>          for l=0 to len(wordList(i))-1<br>            if NOT(mid(grid(j+l),k,1)=mid(wordList(i),l+1,1)) then wordPos(0)=0<br>          next l<br>          end if<br>          if k+len(wordList(i))&lt;=len(grid(j))+1 then<br>          wordPos(1)=1<br>          for l=0 to len(wordList(i))-1<br>            if NOT(mid(grid(j),k+l,1)=mid(wordList(i),l+1,1)) then wordPos(1)=0<br>          next l<br>          end if<br>          if j+len(wordList(i))&lt;=UBound(grid)+1 and k+len(wordList(i))&lt;=len(grid(j))+1 then <br>          wordPos(2)=1<br>          for l=0 to len(wordList(i))-1<br>            if NOT(mid(grid(j+l),k+l,1)=mid(wordList(i),l+1,1)) then wordPos(2)=0<br>          next l<br>          end if<br>          if wordPos(0)+wordPos(1)+wordPos(2)&gt;0 AND retDone(i)=0 then<br>          row=j<br>          col=k-1<br>          if row&gt;9 then ret(i)+=chr(int(row/10)+48):row-=10*int(row/10)<br>          ret(i)+=chr(row+48)<br>          ret(i)+=" "<br>          if col&gt;9 then ret(i)+=chr(int(col/10)+48):col-=10*int(col/10)<br>          ret(i)+=chr(col+48)<br>          retDone(i)=1<br>        end if<br> <br>      next k,j<br>      if retDone(i)=0 then ret(i)=""<br>    next i<br>    <br>    return ret<br> <br>  End Function<br> <br>End Class<br></td>