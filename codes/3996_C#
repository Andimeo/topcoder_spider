            using System;<br>using System.Collections;<br>public class CultureGrowth {<br>  public double finalTray(int[] xs, int[] ys) {<br>    int n = xs.Length;<br><br>    if (n &lt;= 2)<br>      return 0;<br><br>    int[] ch = new int[n + 10];<br>    int nh = 1;<br><br>    int j = 0;<br>    for (int i = 1; i &lt; n; ++i)<br>      if (xs[i]&lt;xs[j] || (xs[i] == xs[j] &amp;&amp; ys[i] &lt; ys[j]))<br>        j = i;<br><br>    ch[0] = j;<br>    int start = j;<br><br>    do {<br>      int k = j;<br>      j = (k + 1) % n;<br>      int dxj = xs[j] - xs[k];<br>      int dyj = ys[j] - ys[k];<br>      for (int i = 0; i &lt; n; ++i)<br>        if (i != k) {<br>          int dxi = xs[i] - xs[k];<br>          int dyi = ys[i] - ys[k];<br>          if (dxi*dyj-dxj*dyi&gt;0 || (dxi*dyj-dxj*dyi == 0 &amp;&amp; Math.Abs(dxi) + Math.Abs(dyi) &gt; Math.Abs(dxj) + Math.Abs(dyj))) {<br>            j = i;<br>            dxj = dxi;<br>            dyj = dyi;<br>          }<br>        }<br>      ch[nh++] = j;<br>    } while (j != start);<br><br>    --nh;<br><br>    double area = 0;<br><br>    for (int i = 0; i &lt; nh; ++i) {<br>      area+=(xs[ch[(i+1)%nh]]-xs[ch[i]])*(ys[ch[(i+1)%nh]]+ys[ch[i]]);<br>    }<br><br>    return Math.Abs(area)/2;<br>  }<br>}<br><br><br>// Powered by FileEdit<br></td>