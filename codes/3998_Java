            import java.util.*;<br>public class WeirdRooks {<br>  boolean[][] b;<br>  int[] c;<br>  int n;<br>  void doit(int i, int u, int r, int s) {<br>    if (i == 0) {<br>      b[r][s] = true;<br>      return;<br>    }<br>    i--;<br>    for (int j = -1; j &lt; c[i]; j++)<br>      if (j &lt; 0 || (u &amp; 1 &lt;&lt; j) == 0) {<br>        int t = 0;<br>        for (int k = j + 1; k &lt; c[i]; k++)<br>          if ((u &amp; 1 &lt;&lt; k) == 0) t++;<br>        if (j &lt; 0) doit(i, u, r, s + t);<br>        else doit(i, u | 1 &lt;&lt; j, r + 1, s + t);<br>      }<br>  }<br>  public String describe(int[] cols) {<br>    c = cols;<br>    n = c.length;<br>    b = new boolean[n + 1][10 * n + 1];<br>    doit(n, 0, 0, 0);<br>    StringBuffer s = new StringBuffer();<br>    for (int i = 0; i &lt; b.length; i++)<br>      for (int j = 0; j &lt; b[i].length; j++)<br>        if (b[i][j]) {<br>          if (s.length() &gt; 0) s.append(' ');<br>          s.append(i + "," + j);<br>        }<br>    return s.toString();<br>  }<br>}<br></td>