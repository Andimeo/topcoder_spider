            public class VariableDeclaration {<br>public boolean bad[];<br>public String badDeclaration(String code) {<br>  bad=new boolean[26];<br>  for(int i=0;i&lt;26;i++) bad[i]=false;<br>  boolean temp[]=new boolean[26];<br>  for(int i=0;i&lt;26;i++) temp[i]=false;<br>  pos=0;<br>  go(code,temp);<br>  String res="";<br>  for(int i=0;i&lt;26;i++) if(bad[i]) res+=(char)('a'+i);<br>  return res;<br>}<br>public int pos;<br>public void go(String code,boolean t[]) {<br>  pos++;<br>  boolean done[]=new boolean[26];  <br>  for(int i=0;i&lt;26;i++) done[i]=false;<br>  boolean block[]=new boolean[26];<br>  for(int i=0;i&lt;26;i++) block[i]=false;<br>  while(code.charAt(pos)!='}') {<br>    if(code.charAt(pos)=='{') go(code,done);<br>    else {<br>      int ch=(int)(code.charAt(pos)-'a');<br>      //System.out.println(ch);<br>      block[ch]=true;<br>      t[ch]=true;<br>    }<br>    pos++;<br>  }  <br> <br>  for(int i=0;i&lt;26;i++) <br>    if(done[i]) t[i]=true;<br> <br>  for(int i=0;i&lt;26;i++) <br>    if(block[i] &amp;&amp; done[i])<br>      bad[i]=true;<br> <br>  return;<br>}<br>}<br></td>