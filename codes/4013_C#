            using System; using System.Collections; using System.Text; using System.Text.RegularExpressions;<br>public class OptimalTax<br>   {<br>   public double optimalIncome(int[] B, int[] P, int I)<br>      {<br>      int N = B.Length;<br>      double min=0, max=1E9;<br>      for (int i=0; i &lt; N; i++)<br>         if (i != I)<br>            {<br>            double b = B[i] - B[I];<br>            double p = P[i] - P[I];<br>            if (p==0)<br>               {<br>               if (b&lt;=0)<br>                  return -1;<br>               }<br>            else<br>               {<br>               double x = b / -p * 100.0;<br>               if (p &gt; 0)<br>                  min = Math.Max(min, x);<br>               else<br>                  max = Math.Min(max, x);<br>               }<br>            }<br>      if (max &lt;= min + 1E-10)<br>         return -1;<br>      return min;<br>      }<br><br><br>} // TopC#der<br><br><br>// Powered by FileEdit<br></td>