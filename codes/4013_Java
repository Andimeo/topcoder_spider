            import java.util.*;<br>public class OptimalTax {<br>  <br>  double minBest = 0;<br>  double maxBest = Double.MAX_VALUE;<br>  <br>  public double optimalIncome(int[] fixedBase, int[] percent, int index) {<br>    int n = fixedBase.length;<br>    for (int i=0; i&lt;n; i++) if (i != index) {<br>      if (percent[i] == percent[index] &amp;&amp; fixedBase[i] &lt;= fixedBase[index]) return -1;<br>      if (percent[i] &gt; percent[index]) {<br>        minBest = Math.max(minBest, (fixedBase[index]-fixedBase[i])/((double)(percent[i]-percent[index])));<br>      }<br>      if (percent[i] &lt; percent[index]) {<br>        maxBest = Math.min(maxBest, (fixedBase[index]-fixedBase[i])/((double)(percent[i]-percent[index])));<br>      }<br>    }<br>    if (minBest &gt;= maxBest - 1e-10) return -1;<br>    return minBest*100;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>