            #include&lt;iostream&gt;<br>#include&lt;string&gt;<br>#include&lt;vector&gt;<br>using namespace std;<br> <br>class JustifyText{<br>public:<br>  vector &lt;string&gt; format(vector &lt;string&gt; text){<br>    int i,j,maxsize=0;<br>    for(i=0;i&lt;text.size();i++){<br>      if(maxsize &lt; text[i].size())<br>        maxsize = text[i].size();<br>    }<br>    string s,b(" ");<br> <br>    for(i=0;i&lt;text.size();i++){<br>      for(j=0;j&lt;(maxsize-text[i].size());j++)<br>        s.append(b.begin(),b.end());<br>      text[i].insert(0,s);<br>      s = "";<br>    }<br>    return(text);<br>  }<br>  <br>};<br></td>