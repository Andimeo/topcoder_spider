            // Scott Dial &lt;scott@scottdial.com&gt;<br>import java.util.*;<br>public class JustifyText {<br>  public String[] format(String[] text) {<br>    String[] ret = new String[text.length];<br>    int maxWidth = 0;<br>    <br>    for(int i = 0; i &lt; text.length; i++) {<br>      if(text[i].length() &gt; maxWidth) {<br>        maxWidth = text[i].length();<br>      }<br>    }<br>    <br>    for(int i = 0; i &lt; text.length; i++) {<br>      ret[i] = new String("");<br>      for(int j = 0; j &lt; (maxWidth - text[i].length()); j++) {<br>        ret[i] += " ";<br>      }<br>      ret[i] += text[i];<br>    }<br>    <br>    return ret;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>