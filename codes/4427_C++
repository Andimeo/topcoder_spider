            #include &lt;algorithm&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cmath&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;string&gt;<br>#include &lt;utility&gt;<br>#include &lt;vector&gt;<br>using namespace std;<br>#define FOREACH(it,c) for(typeof((c).begin()) it=(c).begin();it!=(c).end();++it)<br>typedef long long LL;<br>const int INFLL = 1000000000000000000LL;<br> <br>LL myabs(LL x) { return x&lt;0 ? -x : x; }<br> <br>struct StepperMotor {<br> <br>  // MAIN<br>  int rotateToNearest(int n, int current, vector &lt;int&gt; target) {<br>    LL best = INFLL;<br>    LL nn = n;<br>    FOREACH(it,target) {<br>      int t = *it;<br>      LL v = ((LL(t)-LL(current))%nn+nn)%nn;<br>      if(myabs(v)&lt;myabs(best) || myabs(v)==myabs(best) &amp;&amp; v&gt;=0)<br>        best = v;<br>      v -= nn;<br>      if(myabs(v)&lt;myabs(best) || myabs(v)==myabs(best) &amp;&amp; v&gt;=0)<br>        best = v;<br>    }<br>    return int(best);<br>  }<br> <br>};<br> <br>// Powered by FileEdit<br> <br>// Powered by TomekAI<br>// Powered by TZTester 1.01 [25-Feb-2003]<br> <br>// Powered by CodeProcessor<br></td>