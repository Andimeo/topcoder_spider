            import java.util.*;<br>public class StepperMotor {<br>    public int rotateToNearest(int n, int current, int[] target) {<br>      current %= n;<br>      if (current &lt; 0) current += n;<br>      <br>      int curr = Integer.MAX_VALUE;<br>      int sign = 1;<br>      for (int i = 0; i &lt; target.length; i++) {<br>        target[i] %= n;<br>        if (target[i] &lt; 0) target[i] += n;<br>        <br>      int step = target[i] - current;<br>      if (step &lt; 0) step += n;<br>      if (step &lt; curr || step == curr &amp;&amp; sign == -1) {<br>        curr = step;<br>        sign = 1;<br>      }<br>      <br>      step = current - target[i];<br>      if (step &lt; 0) step += n;<br>      if (step &lt; curr) {<br>        curr = step;<br>        sign = -1;<br>      }<br>      }<br>      return sign * curr;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>