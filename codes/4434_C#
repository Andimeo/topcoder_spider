            using System;<br> <br>public class LongBlob<br>{<br>    public static double maxLength(string[] image)<br>    {<br>        int i, j, m = image[0].Length, min, n = image.Length, x, y, x1, y1, x2, y2, w, max, z;<br>        int[] dx = {0, 1, 0, -1};<br>        int[] dy = {-1, 0, 1, 0};<br>        int[,] v = new int[25, 25];<br>        int[,] b = new int[25, 25];<br>        max = 0;<br>        for (y = 0; y &lt; n; y++)<br>            for (x = 0; x &lt; m; x++)<br>            {<br>                for (i = 0; i &lt; n; i++)<br>                    for (j = 0; j &lt; m; j++)<br>                    {<br>                        v[i, j] = int.MaxValue;<br>                        b[i, j] = 0;<br>                    }<br>                if (image[y][x] == '0') v[y, x] = 0; else v[y, x] = 1;<br>                b[y, x] = 1;<br>                while (true)<br>                {<br>                    x1 = 0;<br>                    y1 = 0;<br>                    min = int.MaxValue;<br>                    for (i = 0; i &lt; n; i++)<br>                        for (j = 0; j &lt; m; j++)<br>                            if (b[i, j] == 1 &amp;&amp; v[i, j] &lt; min)<br>                            {<br>                                min = v[i, j];<br>                                x1 = j;<br>                                y1 = i;<br>                            }<br>                    if (min &gt; 4) break;<br>                    b[y1, x1] = 2;<br>                    for (i = 0; i &lt; 4; i++)<br>                    {<br>                        x2 = x1 + dx[i];<br>                        y2 = y1 + dy[i];<br>                        if (x2 &gt;= 0 &amp;&amp; x2 &lt; m &amp;&amp; y2 &gt;= 0 &amp;&amp; y2 &lt; n)<br>                        {<br>                            w = v[y1, x1];<br>                            if (image[y2][x2] == '1') w++;<br>                            if (w &gt; 4) continue;<br>                            if (w &lt; v[y2, x2])<br>                            {<br>                                v[y2, x2] = w;<br>                                b[y2, x2] = 1;<br>                                z = (y2 - y) * (y2 - y)  + (x2 - x) * (x2 - x);<br>                                if (z &gt; max) max = z;<br>                            }<br>                        }<br>                    }<br>                }<br>            }<br>        return(Math.Sqrt(max));<br>    }<br> <br>}<br></td>