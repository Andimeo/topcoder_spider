            import java.util.*;<br> <br>public class LetterRange {<br>  public String[] ranges( String text ) {<br>    int i=0;<br>    char[] min = new char[26];<br>    char[] max = new char[26];<br>    char a,b;<br>    for( a='a'; a&lt;='z'; a++ ){<br>      if( text.indexOf(a)&lt;0 ){<br>        continue;<br>      }<br>      min[i]=a;<br>      for( b=a; text.indexOf(b)&gt;=0; b++ );<br>      b--;<br>      max[i]=b;<br>      i++;<br>      a=b;<br>    }<br>    String[] rv = new String[i];<br>    int j;<br>    for( j=0; j&lt;i; j++ ){<br>      rv[j] = min[j]+":"+max[j];<br>    }<br>    return rv;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>