            import java.util.*;<br>public class SetMetric {<br>  int[] target, candidate;<br>  int minsum;<br><br>  public void rumble(int cidx, int tidx, int sum){<br>    if (sum &gt;= minsum) return;<br>    if (tidx == target.length){<br>      minsum = sum;<br>      //System.out.println("minsum = "+minsum);<br>      return;<br>    }<br>    if (cidx &gt;= candidate.length) return;<br>//    if (cidx+tidx+2 &gt;= candidate.length) return;<br><br>    rumble(cidx+1, tidx+1, sum + Math.abs(candidate[cidx]-target[tidx]));<br>    rumble(cidx+1, tidx, sum);<br>  }<br><br>    public int nearness(int[] target, int[] candidate) {<br>    Arrays.sort(target);<br>    Arrays.sort(candidate);<br>    this.target = target;<br>    this.candidate = candidate;<br>    minsum = Integer.MAX_VALUE;<br>    rumble(0,0,0);<br>        return minsum;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>