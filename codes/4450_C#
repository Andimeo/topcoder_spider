            using System;<br>using System.Collections;<br><br>public class DiceThrows {<br>  public double[] calc(int numDice, int[] sides)<br>  {<br>    double[] oldprob = new double[20001], prob = new double[20001];<br>    oldprob[0] = 1.0;<br>    for (int i = 1; i &lt; 20001; i++)<br>      oldprob[i] = 0.0;<br>    for (int i = 0; i &lt; numDice; i++)<br>    {<br>      for (int j = 0; j &lt; 20001; j++)<br>      {<br>        double p = 0.0;<br>        for (int k = 0; k &lt; 6; k++)<br>        {<br>          int prev = j - sides[k];<br>          if (prev &gt;= 0)<br>            p += oldprob[prev] / 6.0;<br>        }<br>        prob[j] = p;<br>      }<br>      double[] tmp = oldprob;<br>      oldprob = prob;<br>      prob = tmp;<br>    }<br>    return oldprob;<br>  }<br><br>  public double winProbability(int numDiceA, int[] sidesA, int numDiceB, int[] sidesB) {<br>    double[] ca = calc(numDiceA,sidesA);<br>    double[] cb = calc(numDiceB,sidesB);<br>    double cbacc = 0.0, totprob = 0.0;<br>    for (int i = 0; i &lt; ca.Length; i++)<br>    {<br>      totprob += ca[i] * cbacc;<br>      cbacc += cb[i];<br>    }<br>    return totprob;<br>  }<br>}<br><br><br>// Powered by FileEdit<br></td>