            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>using namespace std;<br> <br>class NumberSplit <br>{<br>  public:<br>  int log_(int x)<br>  {<br>    int w=0;<br>    while(x)<br>    {<br>      w++;<br>      x/=10;<br>    }<br>    return w;<br>  }<br>  int licz(int p[7],int x)<br>  {<br>    int c[7],n=0,i,w=1;<br>    while(x)<br>    {<br>      c[n++]=x%10;<br>      x/=10;<br>    }<br>    for(i=n-1;i&gt;=0;i--)<br>    {<br>      x=x*10+c[i];<br>      if(!i || p[i-1]) <br>      {<br>        w*=x;<br>        x=0;<br>      }<br>    }<br>    return w;<br>    <br>  }<br>  int longestSequence(int start) <br>  {<br>    int t[100001],i,p[7],k;<br>    for(i=0;i&lt;10;i++) t[i]=1;<br>    for(i=10;i&lt;start+1;i++) <br>    {<br>      t[i]=0;<br>      int n=log_(i);<br>      for(int j=1;j&lt;n;j++)<br>      {<br>        for(k=0;k&lt;n-j-1;k++) p[k]=0;<br>        for(;k&lt;n-1;k++) p[k]=1;<br>        do<br>        {<br>          int w=licz(p,i);<br>          if(t[w]+1&gt;t[i]) t[i]=t[w]+1;<br>        } while(next_permutation(p,p+n-1));<br>      }<br>    }<br>    return t[start];<br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>