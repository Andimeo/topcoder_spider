            Public Class TravellingByTrain<br>        Public Function earliestArrival(ByVal timeTable As String()) As String<br>            Dim iCurMin As Integer<br>            Dim iCurHour As Integer<br>            Dim iCurDay As Integer<br>            Dim iStartMin, iEndMin As Integer<br> <br>            iCurMin = 9 * 60<br>            iCurDay = 1<br> <br>            Dim i As Integer<br>            Dim j As Integer<br>            Dim iBestMin, iBestDay As Integer<br>            Dim iDay, iMin As Integer<br>            Dim asTimes() As String<br>            For i = 0 To timeTable.GetUpperBound(0)<br>                asTimes = timeTable(i).Split(" ")<br>                iBestDay = Integer.MaxValue<br>                For j = 0 To asTimes.GetUpperBound(0)<br>                    iStartMin = 60 * CInt(asTimes(j).Substring(0, 2)) + CInt(asTimes(j).Substring(3, 2))<br>                    iEndMin = 60 * CInt(asTimes(j).Substring(6, 2)) + CInt(asTimes(j).Substring(9, 2))<br>                    iMin = iEndMin<br>                    If iStartMin &gt;= iCurMin Then<br>                        If iEndMin &gt; iStartMin Then<br>                            iDay = iCurDay<br>                        Else<br>                            iDay = iCurDay + 1<br>                        End If<br>                    Else<br>                        If iEndMin &gt; iStartMin Then<br>                            iDay = iCurDay + 1<br>                        Else<br>                            iDay = iCurDay + 2<br>                        End If<br>                    End If<br>                    If iDay &lt; iBestDay Then<br>                        iBestDay = iDay<br>                        iBestMin = iMin<br>                    End If<br> <br>                    If iDay = iBestDay Then<br>                        If iMin &lt; iBestMin Then iBestMin = iMin<br>                    End If<br>                Next<br> <br>                iCurDay = iBestDay<br>                iCurMin = iBestMin<br>            Next<br> <br>            Return Microsoft.VisualBasic.Format(iCurMin \ 60, "00") &amp; ":" &amp; Microsoft.VisualBasic.Format(iCurMin Mod 60, "00") &amp; ", day " &amp; iCurDay<br>        End Function<br>    End Class<br></td>