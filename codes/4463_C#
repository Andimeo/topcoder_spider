            using System;<br>using System.Collections;<br>using math = System.Math;<br> <br>public class BoxUnion<br>{<br>  class Box<br>  {<br>    long x1, x2, y1,y2;<br>    public Box(){}<br> <br>    public Box(string s)<br>    {<br>      string[] ss = s.Split(' ');<br>      x1 = long.Parse(ss[0]);<br>      y1 = long.Parse(ss[1]);<br>      x2 = long.Parse(ss[2]);<br>      y2 = long.Parse(ss[3]);<br>    }<br>    public static Box operator *(Box a, Box b)<br>    {<br>      Box c = new Box();<br>      c.x1 = math.Max(a.x1, b.x1);<br>      c.x2 = math.Min(a.x2, b.x2);<br> <br>      c.y1 = math.Max(a.y1, b.y1);<br>      c.y2 = math.Min(a.y2, b.y2);<br>      return c;<br>    }<br> <br>    public long Area()<br>    {<br>      if (x1&gt;=x2) return 0;<br>      if (y1&gt;=y2) return 0;<br>      return (x2-x1)*(y2-y1);<br>    }<br>  }<br>  public int area(string[] rectangles)<br>  {<br>    if (rectangles.Length == 1)<br>    {<br>      Box a1 = new Box(rectangles[0]);<br>      return (int)a1.Area();<br>    }<br> <br>    if (rectangles.Length == 2)<br>    {<br>      Box a1 = new Box(rectangles[0]);<br>      Box a2 = new Box(rectangles[1]);<br>      return (int)(a1.Area() + a2.Area() - (a1*a2).Area());<br>    }<br>    if (rectangles.Length == 3)<br>    {<br>      Box a1 = new Box(rectangles[0]);<br>      Box a2 = new Box(rectangles[1]);<br>      Box a3 = new Box(rectangles[2]);<br>      return (int)(a1.Area() + a2.Area() + a3.Area() - (a1*a2).Area() - (a1*a3).Area() - (a3*a2).Area() + (a1*a2*a3).Area());<br>    }<br>    return 0;<br>  }<br>}<br></td>