            Public Class BoxUnion<br>        Public Function area(ByVal rectangles As String()) As Integer<br>            If rectangles.Length = 1 Then<br>                Return iSize(rectangles(0))<br>            End If<br> <br>            If rectangles.Length = 2 Then<br>                Return iSize(rectangles(0)) + iSize(rectangles(1)) - iSize(sUnion(rectangles(0), rectangles(1)))<br>            End If<br> <br>            If rectangles.Length = 3 Then<br>                Return iSize(rectangles(0)) + iSize(rectangles(1)) + iSize(rectangles(2)) - iSize(sUnion(rectangles(0), rectangles(1))) - iSize(sUnion(rectangles(0), rectangles(2))) - iSize(sUnion(rectangles(2), rectangles(1))) + iSize(sUnion(sUnion(rectangles(2), rectangles(1)), rectangles(0)))<br>            End If<br> <br> <br>        End Function<br> <br>        Private Function sUnion(ByVal sRect1 As String, ByVal sRect2 As String) As String<br>            Dim a(), b() As String<br>            Dim iLeft, iRight, iTop, iBottom As Integer<br> <br>            a = sRect1.Split(" ")<br>            b = sRect2.Split(" ")<br> <br>            iLeft = System.Math.Max(CInt(a(0)), CInt(b(0)))<br>            iBottom = System.Math.Max(CInt(a(1)), CInt(b(1)))<br>            iRight = System.Math.Min(CInt(a(2)), CInt(b(2)))<br>            iTop = System.Math.Min(CInt(a(3)), CInt(b(3)))<br> <br>            Return iLeft &amp; " " &amp; iBottom &amp; " " &amp; iRight &amp; " " &amp; iTop<br>        End Function<br> <br>        Private Function iSize(ByVal sRect As String) As Integer<br>            Dim a() As String<br>            a = sRect.Split(" ")<br> <br>            If CInt(a(0)) &lt; CInt(a(2)) And CInt(a(1)) &lt; CInt(a(3)) Then<br>                Return (a(2) - a(0)) * (a(3) - a(1))<br>            Else<br>                Return 0<br>            End If<br>        End Function<br> <br>    End Class<br></td>