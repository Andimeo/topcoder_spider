            using System;<br> <br> <br>  /// &lt;summary&gt;<br>  /// PhonePad ??????<br>  /// &lt;/summary&gt;<br>public class PhonePad<br>{<br>    public int fingerMovement(string phoneNumber)<br>    {<br>        int curRow = 1, curCol = 1;<br>        int row, col;<br>        int ans = 0;<br>        int i;<br>        char[] chr = { '1', '2', '3', '4', '5', '6', '7', '8', '9', '*', '0', '#' };<br>        for (i = 0; i &lt; phoneNumber.Length; ++ i)<br>        {<br>            for (row = 0; row &lt; 4; ++ row)<br>            {<br>                for (col = 0; col &lt; 3; ++ col)<br>                {<br>                    if (chr[row * 3 + col] == phoneNumber[i])<br>                    {<br>                        ans += Math.Abs(curRow - row) + Math.Abs(curCol - col);<br>                        curRow = row;<br>                        curCol = col;<br>                        goto end;<br>                    }<br>                }<br>            }<br>        end:;<br>        }<br> <br>        return ans;<br>    }<br>    /// &lt;summary&gt;<br>    /// ??????????<br>    /// &lt;/summary&gt;<br>    [STAThread]<br>    static void Main(string[] args)<br>    {<br>        //<br>        // TODO: ??????????????<br>        //<br>    }<br>}<br></td>