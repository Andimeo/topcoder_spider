            /*<br>*/<br>#include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;queue&gt;<br>#include &lt;set&gt;<br>#include &lt;map&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cmath&gt;<br>using namespace std;<br><br><br><br>#define fori(i, n) for(int i=0, _n=(n); i&lt;_n;i++)<br>#define FOR(i, a, b) for(int i=a;i&lt;=b;i++)<br>#define VI vector&lt;int&gt;<br>#define VS vector&lt;string&gt;<br><br><br>class PhonePad {<br>public:<br>    int fingerMovement(string s) {<br>        int res;<br>        int x[10], y[10];<br>        fori(i,10)if(i){<br>            x[i]=(i-1)/3;<br>            y[i]=(i-1)%3;<br>        }<br>        x[0]=3;<br>        y[0]=1;<br>        int x1=1,y1=1;<br>        res=0;<br>        fori(i, s.size()){<br>            int c=s[i]-'0';<br>            res+=abs(x[c]-x1)+abs(y[c]-y1);<br>            y1=y[c];<br>            x1=x[c];<br>        }<br>        return res;<br>    }<br><br>};<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>