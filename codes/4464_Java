            public class PhonePad {<br>  int getX(char c) {<br>    switch(c) {<br>    case '1': return 0;<br>    case '2': return 1;<br>    case '3': return 2;<br>    case '4': return 0;<br>    case '5': return 1;<br>    case '6': return 2;<br>    case '7': return 0;<br>    case '8': return 1;<br>    case '9': return 2;<br>    case '*': return 0;<br>    case '0': return 1;<br>    case '#': return 2;<br>    }<br>    return -1;<br>  }<br>  int getY(char c) {<br>    switch(c) {<br>    case '1': return 0;<br>    case '2': return 0;<br>    case '3': return 0;<br>    case '4': return 1;<br>    case '5': return 1;<br>    case '6': return 1;<br>    case '7': return 2;<br>    case '8': return 2;<br>    case '9': return 2;<br>    case '*': return 3;<br>    case '0': return 3;<br>    case '#': return 3;<br>    }<br>    return -1;<br>  }<br>  public int fingerMovement(String s) {<br>    int x = 1, y = 1, ret = 0;<br>    for (int i = 0; i &lt; s.length(); i++) {<br>      int nx = getX(s.charAt(i)), ny = getY(s.charAt(i));<br>      ret += Math.abs(x - nx) + Math.abs(y - ny);<br>      x = nx;<br>      y = ny;<br>    }<br>    return ret;<br>  }<br>}<br></td>