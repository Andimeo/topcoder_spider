            Public Class PhonePad<br>        Public Function fingerMovement(ByVal phoneNumber As String) As Integer<br>            Dim kk() As String = {"123", "456", "789", "*0#"}<br>            Dim now As Char<br>            Dim i, mov, k1, k2, xx, yy, xk, yk As Long<br>            xk = 1<br>            yk = 1<br>            For i = 0 To phoneNumber.Length - 1<br>                For k1 = 0 To 3<br>                    For k2 = 0 To 2<br>                        If kk(k1).Chars(k2) = phoneNumber.Chars(i) Then<br>                            xx = k1<br>                            yy = k2<br>                        End If<br>                    Next<br>                Next<br>                mov += System.Math.Abs(xk - xx) + System.Math.Abs(yk - yy)<br>                xk = xx<br>                yk = yy<br>            Next<br>            Return mov<br>        End Function<br>End Class<br></td>