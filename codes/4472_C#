            using System;<br>using System.Collections;<br>using System.Text;<br><br>public class CalcButton {<br>  public string getDigits(string[] sequence) {<br>    StringBuilder builder = new StringBuilder();<br>    for (int i = 0; i &lt; sequence.Length; ++i)<br>      builder.Append(sequence[i]);<br>    string data = builder.ToString();<br><br>    int best = data.Length + 1;<br>    int res = -1;<br><br>    for (int i = 0; i &lt; 1000; ++i)<br>    {<br>      int d1 = '0' + i / 100;<br>      int d2 = '0' + (i / 10) % 10;<br>      int d3 = '0' + i % 10;<br><br>      int am = 0;<br>      for (int j = 0; j &lt; data.Length; )<br>      {<br>        if (j &lt; data.Length - 2)<br>        {<br>          if (data[j] == d1 &amp;&amp; data[j + 1] == d2 &amp;&amp; data[j + 2] == d3)<br>          {<br>            j += 3;<br>          }<br>          else<br>            ++j;<br>        }<br>        else<br>          ++j;<br>        ++am;<br>      }<br><br>      if (am &lt; best)<br>      {<br>        best = am;<br>        res = i;<br>      }<br>    }<br><br>    string ans = res.ToString();<br>    while (ans.Length &lt; 3) ans = '0' + ans;<br>    return ans;<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>