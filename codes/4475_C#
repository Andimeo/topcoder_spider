<td class="problemText" colspan="8" valign="middle" align="left">
            public class PrimePolynom<br>{<br>  public int reveal(int A, int B, int C)<br>  {<br>    int M = 0;<br>    int result = 0;<br> <br>    do<br>    {<br>      result = (A * M * M) + (B * M) + C;<br>      M++;<br>    } while(TestPrime(result));<br> <br>    return (M - 1);<br>  }<br> <br>  private bool TestPrime(int n)<br>  {<br>    int result;<br> <br>    if(n &lt; 2)<br>      return false;<br> <br>    for(int i = 2 ; i &lt;= n / 2 ; i++)<br>    {<br>      result = n % i;<br>      if(result == 0) return false;<br>    }<br> <br>    return true;<br>  }<br>}<br></td>