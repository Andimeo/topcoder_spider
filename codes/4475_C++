            #include &lt;algorithm&gt;<br>#include &lt;vector&gt;<br> <br>#include &lt;string.h&gt;<br> <br>using namespace std;<br> <br>class PrimePolynom<br>{<br>public:<br>  bool isprime(int a)<br>  {<br>                if (a &lt; 2) return false;<br>    for (int i = 2; i * i &lt;= a; i++)<br>    {<br>      if ((a % i) == 0)<br>        return false;<br>    }<br>    return true;<br>  }<br> <br>  int reveal(int A, int B, int C)<br>  {<br>    for (int m = 0; true; m++)<br>    {<br>      if (!isprime(A*m*m+B*m+C))<br>        return m;<br>    }<br>  }<br>};<br></td>