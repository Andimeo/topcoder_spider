            using System;<br>using System.Collections;<br>public class Flush {<br>  long c(int n, int k)<br>  {<br>    long res = 1;<br><br>    for (int i = 1, j = n; i &lt;= k; ++i, --j) {<br>      res *= j;<br>      res /= i;<br>    }<br><br>    return res;<br>  }<br><br>  public double size(int[] suits, int number) {<br>    long sum = 0;<br>    long total = 0;<br><br>    for (int am0 = 0 ; am0 &lt;= suits[0]; ++am0)<br>      for (int am1 = 0; am1 &lt;= suits[1]; ++am1)<br>        for (int am2 = 0; am2 &lt;= suits[2]; ++am2)<br>        {<br>          int am3 = number - am0 - am1 - am2;<br>          if (am3 &gt;= 0 &amp;&amp; am3 &lt;= suits[3])<br>          {<br>            long a = c(suits[0], am0) * c(suits[1], am1) * c(suits[2], am2) * c(suits[3], am3);<br>            total += a;<br>            sum += a * Math.Max(am0, Math.Max(am1, Math.Max(am2, am3)));<br>          }<br>        }<br><br>    return (double) sum / total;<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>