            public class Flush {<br> <br>    // let's not think. at all.<br> <br>    double choose(int n,int k) {<br>  double d = 1;<br>  for(int i=k;i&gt;=1;i--)<br>      d  = d * n-- / i;<br>  return d;<br>    }<br>    <br>public double size(int[] suits, int number) {<br>    double t = 0, sum = 0;<br>    for(int a=0;a&lt;=suits[0];a++)<br>    for(int b=0;b&lt;=suits[1];b++) <br>    for(int c=0;c&lt;=suits[2];c++) <br>    for(int d=0;d&lt;=suits[3];d++) {<br>  if(a+b+c+d != number) continue;<br>  double v = <br>      choose(suits[0], a) * <br>      choose(suits[1], b) * <br>      choose(suits[2], c) * <br>      choose(suits[3], d);<br>  t += v;<br>  sum += v * Math.max(Math.max(a,b),<br>          Math.max(c,d));<br>    }<br>    if(t==0) return 0;<br>    return sum/t;<br>}}<br></td>