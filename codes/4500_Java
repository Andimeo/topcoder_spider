            public class BlackjackWinner {<br>  public int winnings (int bet, int dealer, int dealerbj, int player, int playerbj) {<br> <br>    if(playerbj == 1 &amp;&amp; dealerbj == 1) { return 0; }<br>    else if(playerbj == 1 &amp;&amp; dealerbj == 0) { return  (int)(1.5 * bet); }<br>    else if(playerbj == 0 &amp;&amp; dealerbj == 1) { return -bet; }<br>    else {<br>      if( player &gt; 21 ) {return -bet;}<br>      else if(player &lt; 22 &amp;&amp; dealer &gt; 21) {return bet;}<br>      else if(player &gt; dealer) { return bet;}<br>      else if(player == dealer) {return 0;}<br>      else if(player &lt; dealer) { return -bet; }<br>    }<br>  return 0;<br>  }<br>}<br></td>