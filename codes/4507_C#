            using System;<br>using System.Collections;<br> <br>public class CircleDance<br>{<br>  public int arrangeDancers(int[] heights)<br>  {<br>    Array.Sort(heights);<br>    int[] t = new int[heights.Length];<br>    for (int i = 0; i &lt; t.Length; ++i){<br>      if (i % 2 == 0) t[i/2] = heights[i];<br>      else t[t.Length - (i+1)/2] = heights[i];<br>    }<br>    int max = Math.Abs(t[0] - t[t.Length-1]);<br>    for (int i = 1; i &lt; t.Length; ++i){<br>      max = Math.Max(max, Math.Abs(t[i] - t[i-1]));<br>    }<br>    return max;<br>  }<br>}<br>//Powered by [KawigiEdit]<br></td>