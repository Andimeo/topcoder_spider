            using System;<br><br>public class Abacus {<br>  public string[] add(string[] original, int val) {<br>    string[] res = new string[original.Length];<br>    int carry = 0;<br>    for (int i = original.Length - 1; i &gt;= 0; --i)<br>    {<br>      int digit = 9 - original[i].IndexOf('-');<br>      int sum = digit + carry + val % 10;<br>      if (sum &gt;= 10)<br>      {<br>        sum -= 10;<br>        carry = 1;<br>      } else<br>        carry = 0;<br>      val /= 10;<br>      res[i] = new string('o', 9 - sum) + new string('-', 3) + new string('o', sum);<br>    }<br>    return res;<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>