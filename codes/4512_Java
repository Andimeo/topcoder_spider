            public class Abacus {<br> <br>  public String[] add(String[] original, int val) {<br>    int num = 0;<br>    for (int i = 0; i &lt; original.length; i++) {<br>      int k = original[i].indexOf("-");<br>      k = 9 - k;<br>      num = num * 10 + k;<br>    }<br>    <br>    num = num + val;<br>    <br>    String[] res = new String[original.length];<br>    for (int i = res.length - 1; i &gt;= 0; i--) {<br>      int k = num % 10;<br>      num = num / 10;<br>      res[i] = "";<br>      for (int j = 0; j &lt; 9 - k; j++) {<br>        res[i] = res[i] + "o";<br>      }<br>      res[i] = res[i] + "---";<br>      for (int j = 0; j &lt; k; j++) {<br>        res[i] = res[i] + "o";<br>      }<br>    }<br>    <br>    return res;<br>  }<br> <br>}<br></td>