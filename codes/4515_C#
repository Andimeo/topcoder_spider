            public class PowerDigit {<br> <br>public int digitK (int x, int y, int k) {<br>  int r = 1;<br>  bool wrap = false;<br>  for (int i = 0; i &lt; y; i++) {<br>    r *= x;<br>    if (r &gt; 99999) {<br>      r = r % 100000;<br>      wrap = true;<br>    }<br>  }<br>  if (!wrap) {<br>    if (k == 1 &amp;&amp; r &lt; 10) return -1;<br>    if (k == 2 &amp;&amp; r &lt; 100) return -1;<br>    if (k == 3 &amp;&amp; r &lt; 1000) return -1;<br>    if (k == 4 &amp;&amp; r &lt; 10000) return -1;<br>  }<br>  while (k &gt; 0) {<br>    r /= 10;<br>    k--;<br>  }<br>  return r % 10;<br>}<br> <br>}<br></td>