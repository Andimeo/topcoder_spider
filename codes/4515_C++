            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;iostream&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;cstring&gt;<br>#include &lt;sstream&gt;<br>using namespace std;<br><br><br>// Prewritten code starts here<br>long long pModPower(long long base, int power, long long mod)<br>{<br>  if (power == 0)<br>    return 1 % mod;<br>  long long t = pModPower(base, power / 2, mod);<br>  t = (t*t)%mod;<br>  if (power &amp; 1)<br>    t = (t * base) % mod;<br>  return t;<br>}<br>// Prewritten code ends here<br><br>class PowerDigit<br>{<br>public: <br>  int digitK(int x, int y, int k) <br>  {<br>    long long  t = pModPower(x, y, 100000);<br>    long long q = 1;<br>    for (int i = 0; i &lt; y &amp;&amp; q &lt; 10000; i++)<br>      q = q * x;<br>    if (q &lt; 10000 &amp;&amp; k == 4)<br>      return -1;<br>    if (q &lt; 1000 &amp;&amp; k == 3)<br>      return -1;<br>    if (q &lt; 100 &amp;&amp; k == 2)<br>      return -1;<br>    if (q &lt; 10 &amp;&amp; k == 1)<br>      return -1;<br>    while (k &gt; 0)<br>    {<br>      t /= 10;<br>      k--;<br>    }<br>    return t % 10;<br>  }<br>  <br> <br>};<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] + VaLMa antiUCR 1.0 by vahem<br>// Powered by CodeProcessor<br></td>