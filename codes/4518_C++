            #include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;string&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;cmath&gt;<br> <br>using namespace std;<br> <br>#define rep(i,n) for(int i=0; i&lt;(n); i++)<br>typedef vector&lt;int&gt; vi;<br>#define vall(v) v.begin(),v.end()<br> <br>class OneFight {<br>public:<br>  int monsterKilling(vector &lt;int&gt;, vector &lt;int&gt;, int);<br>};<br> <br>int OneFight::monsterKilling(vector &lt;int&gt; life, vector &lt;int&gt; damage, int yourDamage) {<br>  int n=life.size();<br>  <br>  vi dp((1&lt;&lt;n),100000000);<br>  dp[0]=0;<br>  rep(i,(1&lt;&lt;n)) if (i) {<br>    int tot=0;<br>    rep(j,n) if (i&amp;(1&lt;&lt;j)) tot += damage[j];<br>    <br>    rep(j,n)<br>    dp[i] &lt;?= dp[i&amp;~(1&lt;&lt;j)]+((life[j]+yourDamage-1)/yourDamage)*tot;<br>  }  <br>  <br>  return dp[(1&lt;&lt;n)-1]+1;<br>}<br> <br> <br>//Powered by [KawigiEdit]<br></td>