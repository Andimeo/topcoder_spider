            Imports Microsoft.VisualBasic<br>Imports System<br>Imports System.Collections<br>Imports System.Math<br> <br>Public Class OneFight<br>    Public Function monsterKilling(ByVal life As Integer(), ByVal damage As Integer(), ByVal yourDamage As Integer) As Integer<br>        Dim i, j, k, l As Long<br>        Dim iMin As Integer = Integer.MaxValue<br>        Dim iDmg As Integer<br>        Dim iMonDmg As Integer = 0<br>        Dim iCurMonDmg As Integer<br>        Dim iHurt As Integer<br>        Dim aTurns(life.GetUpperBound(0)) As Integer<br> <br>        For i = 0 To life.GetUpperBound(0)<br>            aTurns(i) = (life(i) - 1) \ yourDamage + 1<br>        Next<br> <br>        If life.GetUpperBound(0) = 0 Then<br>            Return (aTurns(0)) * damage(0) + 1<br>        End If<br> <br>        Dim aOrder(life.GetUpperBound(0)) As Integer<br>        For i = 0 To aOrder.GetUpperBound(0)<br>            aOrder(i) = i<br>        Next<br> <br>        For i = 0 To life.GetUpperBound(0)<br>            iMonDmg += damage(i)<br>        Next<br> <br>        Do<br>            iCurMonDmg = iMonDmg<br>            iDmg = 0<br>            For i = 0 To life.GetUpperBound(0)<br>                iHurt = 0<br>                iDmg += iCurMonDmg * aTurns(aOrder(i))<br>                iCurMonDmg -= damage(aOrder(i))<br>            Next<br>            iMin = System.Math.Min(iDmg, iMin)<br>        Loop While bNextPermutation(aOrder)<br> <br>        Return iMin + 1<br> <br>    End Function<br> <br>    Public Function bNextPermutation(ByVal a() As Integer) As Boolean<br>        ' Find first reversal, return false if there is none<br> <br>        Dim i As Integer = a.GetUpperBound(0) - 1<br>        Do While a(i) &gt;= a(i + 1)<br>            i -= 1<br>            If i = -1 Then<br>                System.Array.Sort(a)<br>                Return False<br>            End If<br>        Loop<br> <br>        ' Find first element greater than reversal<br>        Dim j As Integer = a.GetUpperBound(0)<br>        Do While a(j) &lt; a(i)<br>            j -= 1<br>        Loop<br> <br>        ' Swap<br>        Dim aTemp As Integer = a(j)<br>        a(j) = a(i)<br>        a(i) = aTemp<br> <br>        ' Reverse remainder<br>        System.Array.Reverse(a, i + 1, a.GetUpperBound(0) - i)<br>        Return True<br>    End Function<br> <br>End Class<br></td>