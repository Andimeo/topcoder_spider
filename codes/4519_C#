            using System;<br>using System.Collections;<br> <br>public class CalcRoot<br>{<br>    long ba, bb, n;<br>    <br>    private void Try(long a, long b)<br>    {<br>        long x, y, bx, by;<br>        x = n * b * b - a * a;<br>        y = b * b;<br>        bx = n * bb * bb - ba * ba;<br>        by = bb * bb;<br>        if (x &lt; 0) x = -x;<br>        if (bx &lt; 0) bx = -bx;<br>        //Console.WriteLine("try {0}/{1} diff {2}/{3} {4}/{5}", a, b, x, y, bx, by);<br>        if (x * by &lt; bx * y) {<br>            ba = a;<br>            bb = b;<br>            //Console.WriteLine("Found better {0} {1}", ba, bb);<br>        }<br>    }<br>    <br>  public string approximate(int N, int D)<br>  {<br>      int a, b;<br>        n = N;<br>      ba = 1;<br>      bb = 1;<br>      for (b = 1; b &lt;= D; ++b) {<br>          a = (int)(Math.Sqrt(n) * b);<br>          Try(a - 2, b);<br>          Try(a - 1, b);<br>          Try(a    , b);<br>          Try(a + 1, b);<br>          Try(a + 2, b);<br>      }<br>      return String.Format("{0}/{1}", ba, bb);<br>  }<br>  <br> <br>}<br> <br>//Powered by [KawigiEdit]<br></td>