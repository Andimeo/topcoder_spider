            public class TimeCard<br>{<br>  public string leave(string[] time)<br>  {<br>    int worked=0;<br>    string a, b;<br>    int ah, am, bh, bm;<br>    <br>    for(int i=0; i&lt;time.Length/2; ++i)<br>    {<br>      a=time[2*i];<br>      b=time[2*i+1];<br>      <br>      ah=((int)a[0]-(int)'0')*10+(int)a[1]-(int)'0';<br>      am=((int)a[3]-(int)'0')*10+(int)(a[4])-(int)'0';<br>      bh=((int)b[0]-(int)'0')*10+(int)(b[1])-(int)'0';<br>      bm=((int)b[3]-(int)'0')*10+(int)(b[4])-(int)'0';<br>      <br>      if(ah==12)<br>        ah=0;<br>      if(bh==12)<br>        bh=0;<br>      <br>      if(a[6]=='p')<br>        ah+=12;<br>      if(b[6]=='p')<br>        bh+=12;<br>      <br>      int aa=60*ah+am;<br>      int bb=60*bh+bm;<br>      <br>      if(aa&gt;bb)<br>        bb+=1440;<br>      <br>      worked+=bb-aa;<br>    }<br>    <br>    if(worked&gt;40*60)<br>      return "ABOVE 40";<br>    <br>    if(worked+20*60&lt;40*60)<br>      return "BELOW 40";<br>    <br>    a=time[time.Length-1];<br> <br>      ah=((int)a[0]-(int)'0')*10+(int)a[1]-(int)'0';<br>      am=((int)a[3]-(int)'0')*10+(int)(a[4])-(int)'0';<br>      <br>    if(ah==12)<br>      ah=0;<br>      <br>    if(a[6]=='p')<br>      ah+=12;<br>    <br>    worked=40*60-worked;<br>    <br>    ah+=worked/60;<br>    am+=worked%60;<br>    <br>    if(am&gt;=60)<br>    {<br>      am-=60;<br>      ah++;<br>    }<br>    <br>    if(ah&gt;=24)<br>      ah-=24;<br>    <br>    string qq="am";<br>    <br>    if(ah&gt;=12)<br>    {<br>      qq="pm";<br>      ah-=12;<br>    }<br>    <br>    if(ah==0)<br>      ah=12;<br>    <br>    string rr="";<br>    rr+=(char)(ah/10 + (int)'0');<br>    rr+=(char)(ah%10+ (int)'0');<br>    rr+=":";<br>    rr+=(char)(am/10+ (int)'0');<br>    rr+=(char)(am%10+ (int)'0');<br>    rr+=",";<br>    rr+=qq;<br>    <br>    return rr;<br>  }<br>}<br></td>