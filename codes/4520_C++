            #include &lt;algorithm&gt;<br>#include &lt;vector&gt;<br>#include &lt;deque&gt;<br>#include &lt;string&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;iostream&gt;<br>using namespace std;<br> <br>int calc(string tm)<br>{<br>  char c1,c2,c3,c4,c5;<br>  sscanf((char *)tm.c_str(),"%c%c:%c%c,%cm",&amp;c1,&amp;c2,&amp;c3,&amp;c4,&amp;c5);<br>  int hh,mm;<br>  hh=(c1-'0')*10+(c2-'0');<br>  mm=(c3-'0')*10+(c4-'0');<br>  hh%=12;<br>  int ans=hh*60+mm;<br>  if(c5=='p') ans+=720;<br>  return ans;<br>}<br> <br>string goback(int val)<br>{<br>  val%=1440;<br>  int hh=val/60,mm=val%60;<br>  char cc;<br>  if(hh&gt;=12) cc='p'; else cc='a';<br>  hh%=12;<br>  if(hh==0) hh=12;<br>  char str[100];<br>  sprintf(str,"%s%d:%s%d,%cm",hh&lt;10?"0":"",hh,mm&lt;10?"0":"",mm,cc);<br>  return string(str);<br>}<br> <br>class TimeCard<br>{<br>public:<br>string leave(vector&lt;string&gt; time)<br>{<br>  int n=time.size(),sum=0;<br> <br>  for(int i=0;i&lt;n/2;i++)<br>  {<br>    string s1=time[i*2];<br>    string s2=time[i*2+1];<br>    int v1=calc(s1);<br>    int v2=calc(s2);<br>    if(v2&lt;v1) v2+=1440;<br>    sum+=(v2-v1);<br>  }  <br>  if(sum&gt;40*60) return string("ABOVE 40");<br>  else if(40*60-sum&gt;20*60) return string("BELOW 40");<br>  else<br>  {<br>    int rem=40*60-sum;<br>    int vv=calc(time.back());<br>    return goback(vv+rem);<br>  }<br>}  <br>};<br></td>