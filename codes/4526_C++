            #include &lt;iostream&gt;<br>#include &lt;vector&gt;<br>#include &lt;math.h&gt;<br> <br>#define VAR(a,b) typeof(b) a=b <br>#define FOR(k,a,b)  for(typeof(a) k = (a); k &lt; (b); ++k) <br> <br>using namespace std;<br> <br>typedef vector&lt;int&gt; vi;<br> <br>int mD(vi p, int n) {<br>   int r = 100000;<br>   FOR(i,0,p.size())<br>      if (p[i])<br>         FOR(j,i+1,p.size())<br>            if (p[j]) {<br>               int r1 = i / n;<br>               int c1 = i % n;<br>               int r2 = j / n;<br>               int c2 = j % n;<br>               int d = abs(r1-r2) + abs(c1-c2);<br>               if (r &gt; d) r = d;<br>            }<br>   return r;<br>}<br> <br>class PrisonCells {<br> <br>public:<br>int scatter(int m, int n, int nr) {<br>   vi p;<br>   int s = m*n;<br>   int mm = 0;<br>   FOR(i,0,s-nr) p.push_back(0);<br>   FOR(i,0,nr) p.push_back(1);<br>   do {<br>      int ma = mD(p, n);<br>      if (ma &gt; mm) mm = ma;<br>   } while (next_permutation(p.begin(), p.end()));   <br>   return mm;<br>}<br> <br>};<br></td>