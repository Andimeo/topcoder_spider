            using System;<br>using System.Collections;<br><br>public class SortBooks {<br>  bool isName(string s)<br>  {<br>    s = " " + s + " ";<br>    int numWords = 0;<br><br>    for (int i = 0; i &lt; s.Length - 1; ++i)<br>      if (s[i] != ' ' &amp;&amp; s[i + 1] == ' ')<br>        ++numWords;<br><br>    if (numWords &gt; 3)<br>      return true;<br><br>    s = s.ToLower();<br><br>    if (s.IndexOf(" the ") &gt;= 0) return true;<br>    if (s.IndexOf(" and ") &gt;= 0) return true;<br>    if (s.IndexOf(" of ") &gt;= 0) return true;<br><br>    return false;<br>  }<br><br>  public int[] checkManually(string[] field1, string[] field2) {<br>    int n = field1.Length;<br><br>    ArrayList res = new ArrayList();<br><br>    for (int i = 0; i &lt; n; ++i)<br>    {<br>      if (isName(field1[i]) == isName(field2[i]))<br>        res.Add(i);<br>    }<br><br>    int[] r = new int[res.Count];<br>    res.CopyTo(r);<br>    return r;<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>