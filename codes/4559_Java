            import java.util.*;<br>import java.awt.*;<br>import java.awt.geom.*;<br> <br>public class ConvexPolygons<br>{<br>    public double overlap(String[] polygon1, String[] polygon2)<br>    {<br>        Polygon p1 = getPolygon(polygon1);<br>        Polygon p2 = getPolygon(polygon2);<br>        Area a = new Area(p1);<br>        a.intersect(new Area(p2));<br>        if (a.isEmpty()) return 0;<br>        PathIterator p = a.getPathIterator(null);<br>        double pt[] = new double[6];<br>        Point2D n[] = new Point2D.Double[500];<br>        int c = 0;<br>        while (!p.isDone()) {<br>            if(p.currentSegment(pt)==4) break;<br>            n[c] = new Point2D.Double(pt[0],pt[1]);<br>            c++;<br>            p.next();<br>        }<br>        return PolygonArea(n,c);<br>    }<br> <br>    Polygon getPolygon(String[] s)<br>    {<br>        Polygon r = new Polygon();<br>        for (int i=0; i &lt; s.length; i++)<br>        {<br>            int p = s[i].indexOf(' ');<br>            int x = Integer.parseInt(s[i].substring(0,p));<br>            int y = Integer.parseInt(s[i].substring(p+1));<br>            r.addPoint(x,y);<br>        }<br>        return r;<br>    }<br>        <br>public double PolygonArea(Point2D[] polygon,int N)<br>{<br>  int i,j;<br>  double area = 0;<br> <br>  for (i=0;i&lt;N;i++) {<br>    j = (i + 1) % N;<br>    area += polygon[i].getX() * polygon[j].getY();<br>    area -= polygon[i].getY() * polygon[j].getX();<br>  }<br> <br>  area /= 2.0;<br>  return(area &lt; 0 ? -area : area);<br>}<br>    <br>}<br></td>