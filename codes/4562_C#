            using System;<br>using System.Collections;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>public class Conglutination<br>{<br>public string split(string conglutination, int expectation)<br>{<br>string ret="";<br>for(int pos=0; pos&lt;conglutination.Length-1; pos++)<br>{<br>string lft=conglutination.Substring(0, pos+1), rgt=conglutination.Substring(pos+1);<br>try<br>{<br>if(int.Parse(lft)+int.Parse(rgt) == expectation)<br>return lft+"+"+rgt;<br>}<br>catch {}<br>}<br>return ret;<br>}<br>}<br></td>