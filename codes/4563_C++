            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>using namespace std;<br> <br>#define forIter(I,C) for(typeof((C).end()) I=(C).begin(); I!=(C).end(); ++I)<br>typedef vector&lt;string&gt; VS;<br> <br>struct CompanyName<br>{<br>    bool isVowel(char c)<br>    {<br>        return strchr("AaEeIiOoUu", c) != 0;<br>    }<br>    int getScore(const string&amp; s)<br>    {<br>        int ret = 0;<br>        int v = 0, c = 0;<br>        forIter ( i, s ) {<br>            if ( isVowel(*i) ) {<br>                if ( c ) {<br>                    ret += 2*c-1;<br>                    c = 0;<br>                }<br>                ++v;<br>            }<br>            else {<br>                if ( v ) {<br>                    ret += 1;<br>                    v = 0;<br>                }<br>                ++c;<br>            }<br>        }<br>        if ( c ) {<br>            ret += 2*c-1;<br>            c = 0;<br>        }<br>        if ( v ) {<br>            ret += 1;<br>            v = 0;<br>        }<br>        return ret;<br>    }<br>    string shortestProposal(VS proposals)<br>    {<br>        string ret;<br>        int best = -1;<br>        forIter ( i, proposals ) {<br>            int s = getScore(*i);<br>            if ( best &lt; 0 || s &lt; best ) {<br>                best = s;<br>                ret = *i;<br>            }<br>        }<br>        return ret;<br>    }<br>};<br></td>