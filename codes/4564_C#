            #include &lt;algorithm&gt;<br>#include &lt;cmath&gt;<br>#include &lt;iostream&gt;<br>#include &lt;map&gt;<br>#include &lt;stack&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br> <br>using namespace std;<br> <br>class TeamSplit<br>{<br>public:<br> <br>int difference(vector&lt;int&gt; strengths)<br>{<br>  int i;<br>  int a=0, b=0;<br> <br>  sort(strengths.begin(), strengths.end());<br>  for(i=0;i&lt;strengths.size();i++) {<br>    if(i%2==0) a+=strengths[i];<br>    else b+=strengths[i];<br>  }<br> <br>  return abs(a-b);<br>}<br> <br>};<br></td>