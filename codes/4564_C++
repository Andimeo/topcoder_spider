            #include &lt;string&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;vector&gt;<br>using namespace std;<br>class TeamSplit {<br>public:<br>int difference(vector &lt;int&gt; strengths)<br>{<br>  int a=0;<br>  int b=0;<br>  sort(strengths.begin(), strengths.end());<br>  for (int i=0; i&lt;strengths.size(); i++)<br>  {<br>    if (i%2==1) a+=strengths[i];<br>    else b+=strengths[i];<br>  }<br>  return (int) abs(a-b);<br>}<br>};<br> <br>// Powered by PopsEdit<br></td>