            using System;<br>using System.Collections;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class TeamSplit<br>{<br>  public int difference(int[] s)<br>  {<br>    Array.Sort(s);<br>    long a = 0, b = 0;<br>    for (int i = 0; i &lt; s.Length; i++)<br>    {<br>      if (i % 2 == 0) a += s[i];<br>      else b += s[i];<br>    }<br>    return (int) Math.Abs(a - b);<br>  }<br>}<br> <br>//Powered by [KawigiEdit]<br></td>