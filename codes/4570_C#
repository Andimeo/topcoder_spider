            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br><br>public class LanguageRecognition {<br>    public LanguageRecognition() {<br>      // Genesis 1:1  In the beginning God created the heaven and the earth<br>    }<br><br>    static long SQR(long x) { return x * x; } <br><br>    <br>    public int whichLanguage(string[] languages, string text) {<br>        int[,] count = new int[languages.Length+1, 50];<br>        int[] total = new int[languages.Length+1];<br>        for(int i=0;i&lt;languages.Length;i++)<br>            foreach (char c in languages[i])<br>            {<br>                char z = Char.ToLower(c);<br>                if (z &gt;= 'a' &amp;&amp; z &lt;= 'z')<br>                {<br>                    count[i, z - 'a']++;<br>                    total[i]++;<br>                }<br>            }<br>        foreach (char c in text)<br>        {<br>            char z = Char.ToLower(c);<br>            if (z &gt;= 'a' &amp;&amp; z &lt;= 'z')<br>            {<br>                count[languages.Length, z - 'a']++;<br>                total[languages.Length]++;<br>            }<br>        }<br><br>        int best = 0;<br>        long bestX = 2;<br>        long  bestY = 1;<br>        for (int i = 0; i &lt; languages.Length; i++)<br>        {<br>            long curX = 0;<br>            long curY = SQR(total[i] * total[languages.Length]);<br>            for (int ii = 0; ii &lt; count.GetLength(1); ii++)<br>            {<br>                curX += SQR(count[i, ii] * total[languages.Length] - count[languages.Length,ii] * total[i]);<br>            }<br><br>            if (curX * bestY &lt; bestX * curY)<br>            {<br>                best = i;<br>                bestX = curX;<br>                bestY = curY;<br>            }<br>        }<br>        return best;<br>    }<br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>