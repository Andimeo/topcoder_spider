            #include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstring&gt;<br>#include &lt;cassert&gt;<br>#include &lt;cmath&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;numeric&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;queue&gt;<br> <br>using namespace std;<br> <br>typedef vector&lt;string&gt; vs;<br> <br>template&lt;class T&gt; T sqr(T a){ return a*a; }<br> <br>#define For(i,a,b) for(int i=(a); i&lt;=(b); i++)<br>#define Rep(i,n) for(int i=0; i&lt;(n); i++)<br>#define Size(x) (int(x.size()))<br> <br>typedef vector&lt;double&gt; vd;<br> <br>vd getfreq(string st)<br>{<br>  int c=0;<br>  vd res(26,0.0);<br>  Rep(i,Size(st))<br>  {<br>    char ch=toupper(st[i]);<br>    if(isalpha(ch)) <br>    {<br>      ++c;<br>      res[ch-'A']+=1.0;<br>    }<br>  }<br>  if(c&gt;0) Rep(i,26) res[i]/=c;<br>  return res;<br>}<br> <br>double cmp(vd a,vd b)<br>{<br>  double res=0.0;<br>  Rep(i,26) res+=sqr(a[i]-b[i]);<br>  return res;<br>}<br> <br>struct LanguageRecognition<br>{<br>  int whichLanguage(vs langs,string text)<br>  {<br>    vd v=getfreq(text);<br>    int res=0;<br>    double best=cmp(getfreq(langs[0]),v);<br>    For(i,1,Size(langs)-1)<br>    {<br>      double cur=cmp(getfreq(langs[i]),v);<br>      if(cur&lt;best &amp;&amp; fabs(cur-best)&gt;1e-9) <br>      {<br>        res=i;<br>        best=cur;<br>      }<br>    }<br>    return res;<br>  }<br>};<br></td>