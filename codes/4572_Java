            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>public class BikeLock {<br>  int[] cur, des;<br>  int n;<br>  public int minTurns(String current, String desired) {<br>    n = current.length();<br>    cur = getI(current);<br>    des = getI(desired);<br>    memo = new int[n][10][10];<br>    for(int i = 0; i &lt; memo.length; i++){<br>      for(int j = 0; j &lt; memo[i].length; j++){<br>        Arrays.fill(memo[i][j],-1);<br>      }<br>    }<br>    return doit(0,cur[0], cur[1]);<br>  }<br>  int[] getI(String s){<br>    int[] ret = new int[s.length()+2];<br>    for(int i = 0; i &lt; s.length(); i++){<br>      ret[i] = s.charAt(i)-'0';<br>    }<br>    return ret;<br>  }<br>  int[][][] memo;<br>  int doit(int at, int a, int b){<br>    int ret = Integer.MAX_VALUE;<br>    if(at == n) return 0;<br>    if(memo[at][a][b] != -1) return memo[at][a][b];<br>    //only me<br>    ret = dif(a,des[at]) + doit(at+1, b, cur[at+2]);<br>    //me and buddy<br>    if(at+1 &lt; n){<br>      for(int i = 0; i &lt; 10; i++){<br>        ret = Math.min(ret, dif(i,0)+dif((a+i)%10,des[at])+doit(at+1,(b+i)%10,cur[at+2]));<br>      }<br>    }<br>    //me and two more<br>    if(at+2&lt;n){<br>      for(int i = 0; i &lt; 10; i++){<br>        ret = Math.min(ret, dif(i,0)+dif((a+i)%10,des[at])+doit(at+1,(b+i)%10,(cur[at+2]+i)%10));<br>      }<br>    }<br>    //two - then three<br>    if(at+2&lt;n){<br>      for(int i = 0; i &lt; 10; i++){<br>        for(int j = 0; j &lt; 10; j++){<br>          ret = Math.min(ret, dif(i,0)+dif(j,0)+dif((a+i+j)%10, des[at]) + doit(at+1,(b+i+j)%10, (cur[at+2]+j)%10));<br>        }<br>      }<br>    }<br>    memo[at][a][b] = ret;<br>    return ret;<br>  }<br>  int dif(int a, int b){<br>    if(b&lt;a) return dif(b,a);<br>    int moves = Math.min(b-a,10+a-b);<br>    if(moves == 0) return 0;<br>    if(moves &lt;= 3) return 1;<br>    if(moves &lt;= 6) return 2;<br>    return 3;<br>  }<br> <br>}<br> <br>// Powered by PopsEdit<br>// Powered by CodeProcessor<br></td>