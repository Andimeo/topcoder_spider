            #include &lt;algorithm&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;functional&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iterator&gt;<br>#include &lt;list&gt;<br>#include &lt;numeric&gt;<br>#include &lt;sstream&gt;<br>#include &lt;stack&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br> <br>using namespace std;<br> <br>class ChatTranscript {<br>  public:<br>  int howMany(vector &lt;string&gt; transcript, string name) {<br>    name += ":";<br>    int size = name.length();<br>    int total(0);    <br>    for ( int i = 0; i &lt; transcript.size(); ++i )<br>    {<br>      if ( transcript[i].substr(0,size) == name ) { ++total; continue; }<br>    }<br>    <br>    return total;<br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>