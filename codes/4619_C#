            using System;<br>using System.Collections;<br>public class NumericalSequence {<br>  private int rek(int[] sequence, int start, int end){<br>    if(start &gt;= end) return 0;<br>    if(sequence[start] == sequence[end]){<br>      return rek(sequence, start+1, end-1);<br>    }<br>    else if(sequence[start] &lt; sequence[end]){<br>      sequence[start+1] += sequence[start];<br>      return 1 + rek(sequence, start+1, end);<br>    }<br>    else{<br>      sequence[end-1] += sequence[end];<br>      return 1+rek(sequence,start,end-1);<br>    }<br>    <br>  }<br>  public int makePalindrome(int[] sequence) {<br>    return rek(sequence, 0, sequence.Length-1);<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>