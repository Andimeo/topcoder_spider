            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>public class NumericalSequence {<br>  public int makePalindrome(int[] sequence) {<br>    int ret = 0;<br>    int left = 0;<br>    int right = sequence.length-1;<br>    while(left &lt; right){<br>      if(sequence[left] &lt; sequence[right]){<br>        ret++;<br>        sequence[left+1] += sequence[left];<br>        left++;<br>      }else if(sequence[right] &lt; sequence[left]){<br>        ret++;<br>        sequence[right-1] += sequence[right];<br>        right--;<br>      }else{<br>        left++;<br>        right--;<br>      }<br>    }<br>    return ret;<br>  }<br> <br>}<br> <br>// Powered by PopsEdit<br>// Powered by CodeProcessor<br></td>