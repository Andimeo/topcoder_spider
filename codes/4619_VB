            Public Class NumericalSequence<br>        Public Function makePalindrome(ByVal sequence As Integer()) As Integer<br>            If sequence.Length = 0 Then Return 0<br>            If sequence.Length = 1 Then Return 0<br>            Dim i, j, k, l As Long<br> <br>            Dim iTot As Integer = 0<br> <br>            For i = 0 To sequence.GetUpperBound(0)<br>                iTot += sequence(i)<br>            Next<br> <br>            Dim iLeft, iRight, iLeftTot, iRightTot As Integer<br> <br>            iLeft = 0<br>            iRight = sequence.GetUpperBound(0)<br>            iLeftTot = sequence(iLeft)<br>            iRightTot = sequence(iRight)<br> <br>            Do While System.Math.Abs(iLeftTot - iRightTot) &gt; 0 And iLeft &lt; iRight - 1<br>                If iLeftTot &gt; iRightTot Then<br>                    iRight -= 1<br>                    iRightTot += sequence(iRight)<br>                Else<br>                    iLeft += 1<br>                    iLeftTot += sequence(iLeft)<br>                End If<br>            Loop<br> <br>            If iLeftTot = iRightTot Then<br>                Dim aSeq(iRight - iLeft - 2) As Integer<br>                For i = iLeft + 1 To iRight - 1<br>                    aSeq(i - iLeft - 1) = sequence(i)<br>                Next<br>                Return iLeft + sequence.GetUpperBound(0) - iRight + makePalindrome(aSeq)<br>            Else<br>                Return sequence.GetUpperBound(0)<br>            End If<br>        End Function<br>    End Class<br></td>