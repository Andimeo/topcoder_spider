            Public Class SMS<br>        Public Function compress(ByVal originalMessage As String) As String<br>            Dim s() As String<br>            Dim i, k, j As Integer<br> <br>            s = originalMessage.Split(" ")<br>            Dim s2(s.GetUpperBound(0)) As String<br> <br>            Dim iC1, iC2 As Integer<br> <br>            For i = 0 To s.GetUpperBound(0)<br>                iC1 = Integer.MaxValue<br>                iC2 = Integer.MinValue<br>                For j = 0 To s(i).Length - 1<br>                    If Not bVowel(s(i).Substring(j, 1)) Then<br>                        iC2 = j<br>                        If j &lt; iC1 Then iC1 = j<br>                    End If<br>                Next<br> <br>                s2(i) = ""<br> <br>                For j = 0 To s(i).Length - 1<br>                    If bVowel(s(i).Substring(j, 1)) And j &lt; iC2 And j &gt; iC1 Then<br> <br>                    Else<br>                        s2(i) = s2(i) &amp; s(i).Substring(j, 1)<br>                    End If<br>                Next<br>            Next<br> <br>            Dim sRet As String = ""<br> <br>            For i = 0 To s2.GetUpperBound(0)<br>                sRet = sRet &amp; s2(i) &amp; " "<br> <br>            Next<br> <br>            Return sRet.Substring(0, sRet.Length - 1)<br> <br>        End Function<br> <br>        Public Function bVowel(ByVal s As String) As Boolean<br>            If s.ToUpper = "A" Or s.ToUpper = "E" Or s.ToUpper = "I" Or s.ToUpper = "O" Or s.ToUpper = "U" Then Return True<br>            Return False<br>        End Function<br>    End Class<br></td>