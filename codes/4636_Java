            import java.util.*;<br><br>public class DriveOrder {<br>  public char getCar (String s, int l) {<br>    if (l &gt;= s.length ()) return '@'; else return s.charAt (l);<br>  };<br>  public String determineOrder (String [] cs, int mj) {<br>    int q [] = new int [3];<br>    String ret = "";<br>    int sum = cs[0].length () + cs[1].length () + cs[2].length ();<br>    char [] z = new char [3];<br>    while (ret.length () &lt; sum) {<br>      for (int i = 0; i &lt; 3; i++)<br>        z[i] = getCar (cs[i], q[i]);<br>      int cv = -1;<br>      if (mj &gt;= 0 &amp;&amp; z[mj] != '@') cv = mj; else {<br>        for (int i = 0; i &lt; 3; i++)<br>          if (z[i] != '@' &amp;&amp; z[(i + 1) % 3] == '@')<br>            cv = i;<br>        if (cv &lt; 0) {<br>          for (int i = 0; i &lt; 3; i++)<br>            if (cv &lt; 0 || z[i] &lt; z[cv]) cv = i;<br>        };<br>      };<br>      ret += z[cv];<br>      ++q[cv];<br>    };<br>    return ret;<br>  }<br>};<br></td>