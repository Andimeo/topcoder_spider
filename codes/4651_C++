            #include&lt;vector&gt;<br>#include&lt;string&gt;<br>#include&lt;iostream&gt;<br>using namespace std;<br>class SpreadsheetColumn<br>{<br> public:<br>        string getLabel(int column)<br>        {<br>         char b[3];<br>         if(column&lt;=26)<br>          {<br>           b[0] = (char)(column+64);<br>           b[1] = '\0';<br>          }<br>         else<br>           {<br>            int m,n;<br>            m = column % 26;<br>            if(m==0)<br>             m=26;<br>            column-= m;<br>            n = column/26;<br>            b[0] =(char)(n+64);<br>            b[1] =(char)(m+64);<br>            b[2] ='\0';<br>           }<br>          return (string)b;<br>         }<br>};<br></td>