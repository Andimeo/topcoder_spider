            using System;<br>using System.Collections;<br>public class AlphabetCount {<br>  int plus(int a, int b) <br>  {<br>    int c = a + b;<br>    if (c &gt; 1000000000)<br>      return 1000000000;<br>    else<br>      return c;<br>  }<br><br>  public int count(string[] grid, int length) {<br>    int height = grid.Length;<br>    int width = grid[0].Length;<br><br>    int [,,] am = new int[length, height, width];<br><br>    for (int i = 0; i &lt; height; ++i)<br>      for (int j = 0; j &lt; width; ++j)<br>        if (grid[i][j] == 'A' + length - 1)<br>          am[length - 1, i, j] = 1;<br>        else<br>          am[length - 1, i, j] = 0;<br><br>    for (int k = length - 2; k &gt;= 0; --k) <br>    {<br>      for (int i = 0; i &lt; height; ++i)<br>        for (int j = 0; j &lt; width; ++j)<br>          if (grid[i][j] == 'A' + k) <br>          {<br>            am[k, i, j] = 0;<br>            for (int di = -1; di &lt;= 1; ++di)<br>              for (int dj = -1; dj &lt;= 1; ++dj)<br>                if (i+di&gt;=0 &amp;&amp; i+di&lt;height &amp;&amp; j+dj&gt;=0 &amp;&amp; j+dj&lt;width)<br>                  am[k, i, j] = plus(am[k, i, j], am[k + 1, i+di, j+dj]);<br>          }<br>          else<br>            am[k, i, j] = 0;<br>    }<br><br>    int res = 0;<br>    for (int i = 0; i &lt; height; ++i)<br>      for (int j = 0; j &lt; width; ++j)<br>        res = plus(res, am[0, i, j]);<br><br>    return res;<br>  }<br><br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [Modified for C# by Petr [again :)]]<br>// Powered by CodeProcessor<br></td>