            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br><br>public class CheatABit {<br>  public int test(int[] r, int p)<br>  {<br>    if (r.Length &lt;= 1) return 0;<br>    int[] n = new int[r.Length/2];<br><br>    <br>    int k =0;<br>    for (int i=0; i &lt; r.Length; i+=2)<br>    {<br>      if (r[i] &gt; r[i+1])<br>        n[k] = r[i];<br>      else<br>        n[k] = r[i+1];<br><br>      k++;<br>    }<br><br>    int ch = 0;<br>    if (n[p/2] != r[p])<br>    {<br>      n[p/2] = r[p];<br>      ch = 1;<br>    }<br><br>    return test(n, p/2) + ch;<br>  }<br><br>    public int enterCodes(int[] ratings, int yourRating) {<br>    int[] n = new int[ratings.Length+1];<br>    int min = int.MaxValue;<br><br>    for (int i=0; i &lt;= ratings.Length; i++)<br>    {<br>      int j, k = 0;<br>      for (j=0; j &lt;= ratings.Length; j++)<br>        if (j == i)<br>          n[j] = yourRating;<br>        else<br>          n[j] = ratings[k++];<br><br>      int v = test(n, i);<br>      if (v &lt; min) min = v;<br>    }<br><br>    return min;<br>    }<br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>