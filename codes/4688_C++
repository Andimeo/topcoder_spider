<td class="problemText" colspan="8" valign="middle" align="left">
            #include &lt;vector&gt;<br> <br>using namespace std;<br> <br>class GridGenerator<br>{<br>public:<br>  int generate(vector&lt;int&gt; r, vector&lt;int&gt; c)<br>  {<br>    int matrix[20][20];<br>    int i, j, sr = r.size(), sc = c.size();<br> <br>    for (i = 0; i &lt; sc; i++)<br>      matrix[0][i] = r[i];<br>    for (i = 0; i &lt; sr; i ++)<br>      matrix[i][0] = c[i];<br>    for (i = 1; i &lt; sr; i++)<br>      for (j = 1; j &lt; sc; j++)<br>        matrix[i][j] = matrix[i-1][j] + matrix[i-1][j-1] + matrix[i][j-1];<br>    return matrix[sr-1][sc-1];<br>  }<br>};<br></td>