            #include &lt;cstdio&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;cmath&gt;<br>#include &lt;set&gt;<br>#include &lt;map&gt;<br>#include &lt;utility&gt;<br>#include &lt;functional&gt;<br>using namespace std;<br> <br>class GraphLabel {<br>public:<br>  int adjacentDifference(vector &lt;string&gt; graph)<br>  {<br>    int n = graph.size();<br>    int tab[10];<br>    int best = 9999999;<br>    for (int i = 0; i &lt; n; i++) {<br>      tab[i] = i;<br>    }<br>    do {<br>      int M = -1;<br>      for (int i = 0; i &lt; n; i++) {<br>        for (int j = 0; j &lt; i; j++) {<br>          if (graph[i][j] == '1') M = M &gt;? abs(tab[i]-tab[j]);<br>        }<br>      }<br>      best = best &lt;? M;      <br>    } while (next_permutation(tab, tab+n));<br>    return best;<br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>