            using System;<br>using System.Collections;<br>public class MagicCube {<br>  int score(int[] nums)<br>  {<br>    int min = int.MaxValue;<br>    int max = int.MinValue;<br><br>    for (int i = 0; i &lt; 3; ++i)<br>      for (int j = 0; j &lt; 3; ++j) <br>      {<br>        int cur = 0;<br>        for (int k = 0; k &lt; 3; ++k)<br>        {<br>          cur += nums[i*9+j*3+k];<br>        }<br>        if (cur &lt; min) min = cur;<br>        if (cur &gt; max) max = cur;<br>      }<br><br>    for (int i = 0; i &lt; 3; ++i)<br>      for (int k = 0; k &lt; 3; ++k) <br>      {<br>        int cur = 0;<br>        for (int j = 0; j &lt; 3; ++j)<br>        {<br>          cur += nums[i*9+j*3+k];<br>        }<br>        if (cur &lt; min) min = cur;<br>        if (cur &gt; max) max = cur;<br>      }<br><br>    for (int k = 0; k &lt; 3; ++k)<br>      for (int j = 0; j &lt; 3; ++j) <br>      {<br>        int cur = 0;<br>        for (int i = 0; i &lt; 3; ++i)<br>        {<br>          cur += nums[i*9+j*3+k];<br>        }<br>        if (cur &lt; min) min = cur;<br>        if (cur &gt; max) max = cur;<br>      }<br><br>    return max-min;<br>  }<br><br>  public int getScore(int[] nums) {<br>    int best = score(nums);<br><br>    for (int i = 0; i &lt; nums.Length; ++i)<br>      for (int j = i + 1; j &lt; nums.Length; ++j)<br>      {<br>        int t = nums[i];<br>        nums[i] = nums[j];<br>        nums[j] = t;<br>        int cur = score(nums);<br>        if (cur &lt; best) best = cur;<br>        t = nums[i];<br>        nums[i] = nums[j];<br>        nums[j] = t;<br>      }<br><br>    return best;<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>