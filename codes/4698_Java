            import java.util.*;<br>public class MagicCube {<br>    int score(int[] nums) {<br>        int maxs = -100000;<br>        int mins = 100000;<br>        for (int i=0; i &lt; 27; i += 3) {<br>            int s = nums[i] + nums[i+1] + nums[i+2];<br>            if (s&gt;maxs) maxs=s;<br>            if (s&lt;mins) mins=s;<br>        }<br>        for (int i=0; i &lt; 9; i++) {<br>            int s = nums[i]+nums[i+9]+nums[i+18];<br>            if (s&gt;maxs) maxs=s;<br>            if (s&lt;mins) mins=s;<br>        }<br>        for (int i=0; i &lt; 27; i += 9)<br>            for (int j=i; j &lt; i+3; j++) {<br>                int s = nums[j] + nums[j+3] + nums[j+6];<br>                if (s&gt;maxs) maxs=s;<br>                if (s&lt;mins) mins=s;<br>            }<br>        return maxs-mins;<br>    }<br><br>    public int getScore(int[] nums) {<br>        int res = score(nums);<br>        for (int a=0; a &lt; 27; a++)<br>            for (int b=0; b &lt; 27; b++) {<br>                int s = nums[a];<br>                nums[a] = nums[b];<br>                nums[b] = s;<br>                res = Math.min(res, score(nums));<br>                s = nums[a];<br>                nums[a] = nums[b];<br>                nums[b] = s;<br>            }<br>        return res;<br>    }<br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>