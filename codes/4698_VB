            Imports System<br>Imports System.Collections<br> <br>Public Class MagicCube<br>    Private Function score(ByVal nums As Integer()) As Integer<br>        Dim i, j, k, sum(2, 2, 2), max, min As Integer<br> <br>        max = max.MinValue<br>        min = min.MaxValue<br>        For i = 0 To 2<br>            For j = 0 To 2<br>                For k = 0 To 2<br>                    sum(0, i, j) += nums(i * 9 + j * 3 + k)<br>                    sum(1, j, k) += nums(i * 9 + j * 3 + k)<br>                    sum(2, i, k) += nums(i * 9 + j * 3 + k)<br>                Next<br>            Next<br>        Next<br>        For i = 0 To 2<br>            For j = 0 To 2<br>                For k = 0 To 2<br>                    max = Math.Max(max, sum(i, j, k))<br>                    min = Math.Min(min, sum(i, j, k))<br>                Next<br>            Next<br>        Next<br>        Return max - min<br>    End Function<br>    Public Function getScore(ByVal nums As Integer()) As Integer<br>        Dim i, j, k, x, y, z, tmp, min As Integer<br> <br>        min = score(nums)<br>        For i = 0 To 2<br>            For j = 0 To 2<br>                For k = 0 To 2<br>                    For x = 0 To 2<br>                        For y = 0 To 2<br>                            For z = 0 To 2<br>                                tmp = nums(i * 9 + j * 3 + k)<br>                                nums(i * 9 + j * 3 + k) = nums(x * 9 + y * 3 + z)<br>                                nums(x * 9 + y * 3 + z) = tmp<br>                                min = Math.Min(score(nums), min)<br>                                tmp = nums(i * 9 + j * 3 + k)<br>                                nums(i * 9 + j * 3 + k) = nums(x * 9 + y * 3 + z)<br>                                nums(x * 9 + y * 3 + z) = tmp<br>                            Next<br>                        Next<br>                    Next<br>                Next<br>            Next<br>        Next<br>        Return min<br>    End Function<br>End Class<br></td>