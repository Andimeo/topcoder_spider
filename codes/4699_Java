            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class TriArea<br>{<br>  boolean right( double x1, double y1, double x2, double y2, double x3, double y3 ){<br>    return (x1*y2 + x2*y3 + x3*y1) - (x1*y3 + x2*y1 + x3*y2) &lt;=0;<br>  }<br>  <br>  boolean left( double x1, double y1, double x2, double y2, double x3, double y3 ){<br>    return (x1*y2 + x2*y3 + x3*y1) - (x1*y3 + x2*y1 + x3*y2) &gt;= 0;<br>  }<br>  <br>  boolean inside( double xc, double yc, double h, double x, double y ){<br>    if (left(xc-h,yc,xc+h,yc,x,y) &amp;&amp; left(xc+h,yc,xc,yc+h,x,y) &amp;&amp; left(xc,yc+h,xc-h,yc,x,y) ) return true;<br>    if (right(xc-h,yc,xc+h,yc,x,y) &amp;&amp; right(xc+h,yc,xc,yc+h,x,y) &amp;&amp; right(xc,yc+h,xc-h,yc,x,y) ) return true;<br>    <br>    return false;<br>  }<br>  <br>  public double area(int[] xCenter, int[] yCenter, int[] height)<br>  {<br>    double tot = 0;<br>    int n = xCenter.length;<br>    <br>    for (int i = -200; i&lt;200; i++ )<br>    for (int j = -200; j&lt;200; j++ ){<br>      double x1 = i+0.5, y1 = j, x2 = i+0.5, y2 = j+0.5;<br>      for (int k = 0; k&lt;n; k++)<br>        if (inside(xCenter[k], yCenter[k], height[k], x1, y1) &amp;&amp; inside(xCenter[k], yCenter[k], height[k], x2, y2) ){<br>          tot += 0.25;<br>          break;<br>        }<br>      x1 = i+1; y1 = j+0.5;<br>      for (int k = 0; k&lt;n; k++)<br>        if (inside(xCenter[k], yCenter[k], height[k], x1, y1) &amp;&amp; inside(xCenter[k], yCenter[k], height[k], x2, y2) ){<br>          tot += 0.25;<br>          break;<br>        }<br>      x1 = i+0.5; y1 = j+1;<br>      for (int k = 0; k&lt;n; k++)<br>        if (inside(xCenter[k], yCenter[k], height[k], x1, y1) &amp;&amp; inside(xCenter[k], yCenter[k], height[k], x2, y2) ){<br>          tot += 0.25;<br>          break;<br>        }<br>      x1 = i; y1 = j+0.5;<br>      for (int k = 0; k&lt;n; k++)<br>        if (inside(xCenter[k], yCenter[k], height[k], x1, y1) &amp;&amp; inside(xCenter[k], yCenter[k], height[k], x2, y2) ){<br>          tot += 0.25;<br>          break;<br>        }<br>    }<br>    <br>    return tot;<br>  }<br>}<br></td>