            public class Weekday<br>{<br>  public String getDay(int month, int day, int year)<br>  {<br>    int total = day;<br>    for (int y=year; y&gt;=1990; y--){<br>      int m;<br>      if (y == year) m = month-1;<br>      else m = 12;<br>      for (m = m; m &gt; 0; m--)<br>      {<br>        switch(m) {<br>        case 1:total+=31;break;<br>        case 2:total+=28;break;<br>        case 3:total+=31;break;<br>        case 4:total+=30;break;<br>        case 5:total+=31;break;<br>        case 6:total+=30;break;<br>        case 7:total+=31;break;<br>        case 8:total+=31;break;<br>        case 9:total+=30;break;<br>        case 10:total+=31;break;<br>        case 11:total+=30;break;<br>        case 12:total+=31;break;<br>        }<br>        if ((y==1992 || y==1996) &amp;&amp; m == 2) total++;<br>      }<br>    }<br>      switch ((total-1) % 7){<br>        case 0: return "Monday";<br>        case 1: return "Tuesday";<br>        case 2: return "Wednesday";<br>        case 3: return "Thursday";<br>        case 4: return "Friday";<br>        case 5: return "Saturday";<br>        case 6: return "Sunday";<br>      }<br>    return "";<br>  }<br>}<br></td>