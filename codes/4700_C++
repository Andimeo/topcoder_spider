            #include &lt;algorithm&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cmath&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;string&gt;<br>#include &lt;utility&gt;<br>#include &lt;vector&gt;<br>using namespace std;<br>#define FOR(i,a,b) for(int i=(a),_b=(b);i&lt;=_b;++i)<br> <br>int ntrees[20];<br> <br>string f(int n, int nr, char aa) {<br>  if(n==0) return "";<br>  int root = 0;<br>  while(ntrees[root]*ntrees[n-1-root] &lt;= nr) {<br>    nr-=ntrees[root]*ntrees[n-1-root];<br>    ++root;<br>  }<br>  string s;<br>  s += char(aa + root);<br>  s += f(root, nr / ntrees[n-1-root], aa);<br>  s += f(n-1-root, nr % ntrees[n-1-root], aa + root + 1);<br>  return s;<br>}<br> <br>struct EncodingTrees {<br> <br>  // MAIN<br>  string getCode(int N, int nr) {<br>    --nr;<br>    ntrees[0] = 1;<br>    FOR(i,1,19) {<br>      ntrees[i] = 0;<br>      FOR(j,0,i-1) ntrees[i] += ntrees[j] * ntrees[i-1-j];<br>    }<br>    if (nr &lt; 0 || nr &gt;= ntrees[N]) return "";<br>    return f(N, nr, 'a');<br>  }<br> <br>};<br> <br>// Powered by FileEdit<br> <br>// Powered by TomekAI<br>// Powered by TZTester 1.01 [25-Feb-2003]<br> <br>// Powered by CodeProcessor<br></td>