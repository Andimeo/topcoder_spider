            using System;<br>using System.Collections;<br>public class CompressionText {<br>  int len(string original, string s1, string s2)<br>  {<br>    int res = 0;<br>    int i = 0;<br>    while (i &lt; original.Length - 2)<br>    {<br>      string t = original.Substring(i, 3);<br>      if (t == s1 || t == s2)<br>      {<br>        i += 3;<br>        res += 2;<br>      }<br>      else<br>      {<br>        ++i;<br>        ++res;<br>      }<br>    }<br>    return res + (original.Length - i);<br>  }<br><br>  public int shortestLength(string original) {<br>    int n = original.Length;<br>    string[] v;<br><br>    if (n &lt; 3)<br>    {<br>      v = new string[]{"   "};<br>    }<br>    else<br>    {<br>      v = new string[n - 2];<br>      for (int i = 0; i &lt; n - 2; ++i)<br>        v[i] = original.Substring(i, 3);<br>    }<br><br>    int best = original.Length;<br><br>    for (int i = 0; i &lt; v.Length; ++i)<br>      for (int j = i; j &lt; v.Length; ++j)<br>      {<br>        int cur = len(original, v[i], v[j]);<br>        if (cur &lt; best)<br>          best = cur;<br>      }<br><br>    return best;<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>