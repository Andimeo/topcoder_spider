            using System;<br><br>public class PatternOptimizer {<br>  public string optimize(string pattern)<br>  {<br>    string answer = "";<br><br>    int i = 0;<br><br>    while (i &lt; pattern.Length)<br>    {<br>      if (pattern[i] != '*' &amp;&amp; pattern[i] != '?') <br>      {<br>        answer += pattern[i];<br>        ++i;<br>      }<br>      else<br>      {<br>        int numStar = 0;<br>        int numQuestion = 0;<br>        while (i &lt; pattern.Length &amp;&amp; (pattern[i] == '*' || pattern[i] == '?'))<br>        {<br>          if (pattern[i] == '*')<br>            ++numStar;<br>          else<br>            ++numQuestion;<br><br>          ++i;<br>        }<br><br>        if (numStar &gt; 0)<br>          answer += '*';<br><br>        for (int k = 0; k &lt; numQuestion; ++k)<br>          answer += '?';<br>      }<br>    }<br><br>    return answer;<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>