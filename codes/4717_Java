            // Powered by radeclipse!<br>import java.util.* ;<br>public class PatternOptimizer {<br>  public String optimize(String pattern) {<br>    String r = "" ;<br>    int cnt = 0 ;<br>    boolean all = false ;<br>    for (int i=0; i&lt;pattern.length(); i++) {<br>      char c = pattern.charAt(i) ;<br>      if (c == '?')<br>  cnt++ ;<br>      else if (c == '*')<br>  all = true ;<br>      else {<br>  if (cnt &gt; 0 || all) {<br>    if (all)<br>      r = r + "*" ;<br>    for (int j=0; j&lt;cnt; j++)<br>      r = r + "?" ;<br>  }<br>  all = false ;<br>  cnt = 0 ;<br>  r = r + c ;<br>      }<br>    }<br>    if (cnt &gt; 0 || all) {<br>      if (all)<br>  r = r + "*" ;<br>      for (int j=0; j&lt;cnt; j++)<br>  r = r + "?" ;<br>    }<br>    return r ;<br>  }<br>}<br></td>