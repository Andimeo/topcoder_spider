            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cctype&gt;<br>#include &lt;queue&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;utility&gt;<br>#include &lt;numeric&gt;<br>#include &lt;complex&gt;<br> <br>using namespace std;<br> <br>class Airways {<br>  public:<br>  double distance(int n, int x, int y) {<br> <br>    double d = sqrt(1.0*x*x + y*y);<br>    double phi = 2*M_PI / n;<br>    double t = 2*M_PI + atan2(1.0*y, x);<br>    while (t &gt; phi) t -= phi;<br>    return d * (sin(t) + sin(phi-t)) / sin(phi);<br>    <br>  }<br>};<br> <br> <br>// Powered by FileEdit<br></td>