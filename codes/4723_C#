            using System;<br>using System.Collections;<br>using System.Collections.Specialized;<br> <br>public class VariableAddition{<br> public int add(string eq, string[] vars){<br>  Hashtable h=new Hashtable();<br>  for (int i=0;i&lt;vars.Length;i++) {<br>   string[] tt=vars[i].Split();<br>   h[tt[0]]=int.Parse(tt[1]);<br>  }<br>  for (int i=0;i&lt;=1000;i++) h[""+i]=i;<br>  int res=0;<br>  string[] s=eq.Split('+');<br>  for (int i=0;i&lt;s.Length;i++) res+=(int)h[s[i]];<br>  return res;<br> }<br>}<br>//hilfiger's editor<br></td>