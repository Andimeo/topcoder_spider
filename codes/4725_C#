            using System;<br>using System.Collections;<br>public class Fuses {<br>  int[] amps;<br>  int m;<br>  int[] cap;<br>  int n;<br><br>  bool rec(int id) <br>  {<br>    if (id &gt;= m)<br>      return true;<br><br>    for (int i = 0; i &lt; n; ++i)<br>      if (cap[i] &gt;= amps[id]) <br>      {<br>        cap[i] -= amps[id];<br>        if (rec(id + 1))<br>          return true;<br>        cap[i] += amps[id];<br>      }<br><br>    return false;<br>  }<br><br>  bool enough(int cnt) <br>  {<br>    n = cnt;<br>        cap = new int[cnt];<br>    for (int i = 0; i &lt; n; ++i)<br>      cap[i] = 20;<br><br>    return rec(0);<br>  }<br><br>  public int minFuses(int[] amps) {<br>    int res;<br><br>    this.amps = amps;<br>    m = amps.Length;<br><br>    for (res = 1; res &lt; 5; ++res)<br>      if (enough(res))<br>        break;<br><br>    return res;<br>  }<br><br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>