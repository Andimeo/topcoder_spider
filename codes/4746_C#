            using System;<br>using System.Collections;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class IsingModel<br>{<br>  public int energy(string[] spins)<br>  {<br>    int a =0;<br>    // hor<br>    for(int i=0; i&lt;spins.Length; ++i)<br>    {<br>      for(int j=1; j&lt;spins[i].Length; ++j)<br>      {<br>        if(spins[i][j-1]==spins[i][j]) --a;<br>        else ++a;<br>      }<br>    }<br> <br>    for(int i=1; i&lt;spins.Length; ++i)<br>    {<br>      for(int j=0; j&lt;spins[i].Length; ++j)<br>      {<br>        if(spins[i-1][j]==spins[i][j]) --a;<br>        else ++a;<br>      }<br>    }<br> <br>    return a;<br>  }<br> <br>}<br> <br>//Powered by [KawigiEdit]<br></td>