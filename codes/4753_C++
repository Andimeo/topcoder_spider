            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;iostream&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;sstream&gt;<br>using namespace std;<br>int price[10][10];<br>int visit[10];<br>int size;<br>double calc(int start, int end)<br>{<br>  double tmp=price[start][end];<br>  for(int i=0;i&lt;visit[end];i++) tmp*=0.5;<br>  return tmp;<br>}<br>double rec(int start, int end, int more)<br>{<br>  if(more==1 &amp;&amp; start==end) return 1e99;<br>  if(more==1) return calc(start,end);<br>  double best=1e99;<br>  for(int i=0;i&lt;size;i++)<br>  {<br>    if(i==start) continue;<br>    double val=calc(start,i);<br>    visit[i]++;<br>    val+=rec(i,end,more-1);<br>    visit[i]--;<br>    if(best&gt;val) best=val;<br>  }<br>  return best;<br>}<br>class CheapestFlights {<br>  public:<br>  double getLowest(vector &lt;string&gt; prices, int startLocation, int endLocation, int num)<br>  {<br>    size=prices.size();<br>    for(int i=0;i&lt;prices.size();i++) for(int j=0;j&lt;prices.size();j++) price[i][j]=prices[i][j]-'0';<br>    for(int i=0;i&lt;prices.size();i++) visit[i]=0;<br>    return rec(startLocation,endLocation,num);<br>  }<br><br><br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>