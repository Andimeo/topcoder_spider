            Imports Microsoft.VisualBasic<br>Imports System<br>Imports System.Collections<br> <br>Public Class CheapestFlights<br>    Dim p As String()<br>    Dim endLoc, minCost As Double<br> <br>    Private Sub go(ByVal thisLoc As Integer, ByVal leftHops As Integer, ByVal discount() As Integer, ByVal cost As Double)<br>        Dim i As Integer<br>        Dim newcost As Double<br> <br>        If leftHops = 0 Then<br>            If thisLoc &lt;&gt; endLoc Then<br>                newcost = cost + Val(p(thisLoc).Chars(endLoc)) / 2 ^ discount(endLoc)<br>                minCost = Math.Min(minCost, newcost)<br>            End If<br>            Return<br>        End If<br> <br>        For i = 0 To p.Length - 1<br>            If i &lt;&gt; thisLoc Then<br>                newcost = cost + Val(p(thisLoc).Chars(i)) / 2 ^ discount(i)<br>                discount(i) += 1<br>                go(i, leftHops - 1, discount, newcost)<br>                discount(i) -= 1<br>            End If<br>        Next<br>    End Sub<br>    Public Function getLowest(ByVal prices As String(), ByVal startLocation As Integer, ByVal endLocation As Integer, ByVal num As Integer) As Double<br>        p = prices<br>        endLoc = endLocation<br>        minCost = minCost.MaxValue<br> <br>        go(startLocation, num - 1, New Integer(prices.Length - 1) {}, 0)<br>        Return minCost<br>    End Function<br>End Class<br></td>