            import java.util.*;<br> <br>public class SlowDigitalClock<br>{<br>  String bad = "347";<br>  String dif = "696";<br>  public boolean done (int rH, int rM, int cH, int cM)<br>  {<br>    String c = new StringBuffer(format(cH, cM)).reverse().toString();<br>    for (int i = 0; i &lt; c.length(); i++)<br>    {<br>      if (bad.indexOf(c.charAt(i)) != -1)<br>        return false;<br>      if (dif.indexOf(c.charAt(i)) != -1)<br>        c = c.substring(0, i) + dif.charAt(dif.indexOf(c.charAt(i))+1) + c.substring(i+1);<br>    }<br>    return c.equals(format(rH, rM));<br>  }<br>  <br>  public String format (int h, int m)<br>  {<br>    return (h &lt; 10 ? "0"+h : ""+h) + ":" + (m &lt; 10 ? "0"+m : ""+m);<br>  }<br>  <br>  public String firstCorrectTime (String rT, String cT, int r)<br>  {<br>    long start = System.currentTimeMillis();<br>    <br>    int rH = Integer.parseInt(rT.substring(0, 2));<br>    int rM = Integer.parseInt(rT.substring(3));<br>    int cH = Integer.parseInt(cT.substring(0, 2));<br>    int cM = Integer.parseInt(cT.substring(3));<br>    <br>    if (done(rH, rM, cH, cM))<br>      return rT;<br>    for (int i = 60; System.currentTimeMillis() - start &lt; 950; i += 60)<br>    {<br>      if (i/r &gt; (i-60)/r)<br>      {<br>        if (++cM == 60)<br>        {<br>          cM = 0;<br>          if (++cH == 24)<br>            cH = 0;<br>        }<br>        if (i % r != 0)<br>          if (done(rH, rM, cH, cM))<br>            return format(rH, rM);<br>      }<br>      if (++rM == 60)<br>      {<br>        rM = 0;<br>        if (++rH == 24)<br>          rH = 0;<br>      }<br>      if (done(rH, rM, cH, cM))<br>        return format(rH, rM);<br>    }<br>    return "";<br>  }<br>}<br></td>