<td class="problemText" colspan="8" valign="middle" align="left">
            public class GradingSystem<br>  {<br>    public GradingSystem()<br>    {<br>    }<br> <br>    public int fairness(int[] scores, int[] grades)<br>    {<br>      int n = scores.Length;<br>      int[] min = new int[n];<br>      int i, j = 8;<br>      for(i = n - 1; i &gt;= 0; i--)<br>      {<br>        if (grades[i] &lt; j)<br>          j = grades[i];<br>        min[i] = j;<br>      }<br>      j = 0;<br>      int sum = 0;<br>      for(i = 0; i &lt; n; i++)<br>      {<br>        if (grades[i] &gt; j)<br>          j = grades[i];<br>        sum+= j - min[i];<br>      }        <br>      return sum;<br>    }<br>  }<br></td>