            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class GradingSystem<br>{<br>  public int fairness(int[] scores, int[] grades)<br>  {<br>      int[] s1 = new int[scores.length];<br>      int[] s2 = new int[scores.length];<br>    s1[0] = grades[0];<br>    for(int i=1; i&lt;scores.length; i++)<br>    {<br>       s1[i] = grades[i];<br>       if(s1[i]&lt;s1[i-1])<br>       {<br>          s1[i] = s1[i-1];<br>       }<br>    }<br>    s2[scores.length-1] = grades[scores.length-1];<br>    for(int i=scores.length-2; i&gt;=0; i--)<br>    {<br>      s2[i] = grades[i];<br>      if(s2[i]&gt;s2[i+1])<br>      { s2[i] = s2[i+1];<br>      }<br>    }<br>    int r = 0;<br>    <br>    for(int i=0; i&lt;scores.length; i++)<br>    {<br>      r += s1[i] - s2[i];<br>    }<br>    return r;<br>    <br>  }<br> <br>}<br> <br>//Powered by [KawigiEdit]<br></td>