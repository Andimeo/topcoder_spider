            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>using namespace std;<br>#define REP(i,n) for(int i=0;i&lt;(n);++i)<br>#define FORE(i,c) for(__typeof((c).begin())i=(c).begin();i!=(c).end();++i)<br> <br> <br> <br>struct kol { int a[5]; };<br>int best=0;<br>string r;<br> <br>int wyn(kol a) {<br>   int sum=0;<br>   int ile[7]; REP(i,7) ile[i]=0;<br>   REP(i,5) ile[ a.a[i] ]++;<br>   for (int i=1;i&lt;=6;++i)  if (ile[i]==5) sum &gt;?= 50;<br>   for (int i=1;i&lt;=6;++i)  if (ile[i]&gt;=4) sum &gt;?= a.a[0]+a.a[1]+a.a[2]+a.a[3]+a.a[4];<br>   for (int i=1;i&lt;=6;++i) for(int j=1;j&lt;=6;++j) if (ile[i]==2 &amp;&amp; ile[j]==3) sum &gt;?= 25;<br>   if (ile[1] &amp;&amp; ile[2] &amp;&amp; ile[3] &amp;&amp; ile[4]) sum &gt;?= 30;<br>   if (ile[2] &amp;&amp; ile[3] &amp;&amp; ile[4] &amp;&amp; ile[5]) sum &gt;?= 30;<br>   if (ile[3] &amp;&amp; ile[4] &amp;&amp; ile[5] &amp;&amp; ile[6]) sum &gt;?= 30;<br>   if (ile[1] &amp;&amp; ile[2] &amp;&amp; ile[3] &amp;&amp; ile[4] &amp;&amp; ile[5]) sum &gt;?= 40;<br>   if (ile[2] &amp;&amp; ile[3] &amp;&amp; ile[4] &amp;&amp; ile[5] &amp;&amp; ile[6]) sum &gt;?= 40;<br>   return sum;<br>}<br> <br>void rek(kol a, int skad, int ile) {<br>   if (ile==0) { best &gt;?= wyn(a); return; }<br>   REP(ma,1&lt;&lt;5) {<br>      kol b; REP(i,5) b.a[i]=a.a[i];<br>      int przes=0;<br>      REP(i,5) if (ma&amp;(1&lt;&lt;i)) b.a[i]=r[skad+przes++]-'0';<br>      rek(b,skad+przes,ile-1);<br>   }<br>}<br> <br> <br>struct BestYahtzeeScore {<br>int bestScore(string r_) {<br>   r=r_;<br>   kol a;<br>   REP(i,5) a.a[i]=r[i]-'0';<br>   rek(a,5,2);<br>   return best;<br>}<br>};<br></td>