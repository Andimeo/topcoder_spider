            using System;<br><br>public class ZCurve {<br>  public int zValue(int N, int r, int c) {<br>    int res = 0;<br><br>    for (int i = N; i &gt;= 1; --i)<br>    {<br>      int p2 = 1 &lt;&lt; (i - 1);<br>      if (r &gt;= p2) <br>      {<br>        res += 1 &lt;&lt; (2 * (i - 1) + 1);<br>        r -= p2;<br>      }<br>      if (c &gt;= p2) <br>      {<br>        res += 1 &lt;&lt; (2 * (i - 1));<br>        c -= p2;<br>      }<br>    }<br><br>    return res;<br>  }<br><br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>