            import java.util.*;<br> <br>public class ZCurve {<br>    public int zValue(int N, int r, int c) {<br>        if (N == 0) {<br>            return 0;<br>        } else {<br>            int res = 0;<br>            int hs = 1 &lt;&lt; (N - 1);<br>            if (r &gt;= hs) {<br>                res += 2 * (1 &lt;&lt; (2 * N - 2));<br>            }<br>            if (c &gt;= hs) {<br>                res += (1 &lt;&lt; (2 * N - 2));<br>            }<br>            res += zValue(N - 1, r % hs, c % hs);<br>            return res;<br>        }<br>    }<br> <br> <br>}<br> <br> <br>// Powered by PopsEdit<br> <br>// Powered by CodeProcessor<br></td>