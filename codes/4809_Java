            import java.util.*;<br><br>public class ExploringEuropa<br>{<br>  public int travelTime(String surface, int delay)<br>  {<br>    int x1 = 0;<br>    for (int i = 0; i &lt; surface.length(); i++)<br>    {<br>      if (surface.charAt(i) == 'V')<br>      {<br>        x1 = i;<br>        break;<br>      }<br>    }<br>    int start = 4 * delay + x1;<br>    int ret = start + delay;<br>    for (int i = 0; i &lt; delay; i++)<br>    {<br>      int p1 = x1+delay-i;<br>      int p2 = x1+delay+i;<br>      if (p1 &lt; surface.length() &amp;&amp; surface.charAt(p1) == 'V')<br>      {<br>        ret = Math.min(ret, start + i);<br>        //        System.out.printf("back i %d, ret %d%n", i, ret);<br>      }<br>      if (p2 &lt; surface.length() &amp;&amp; surface.charAt(p2) == 'V')<br>      {<br>        ret = Math.min(ret, start + 3*i);<br>        //        System.out.printf("double r i %d, ret %d%n", i, ret);<br>      }<br>    }<br>    return ret;<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>