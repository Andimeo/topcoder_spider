            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>using namespace std;<br>typedef vector&lt;int&gt; VI; typedef vector&lt;VI&gt; VVI;<br>typedef vector&lt;string&gt; VS; typedef vector&lt;VS&gt; VVS;<br>typedef long long i64; typedef unsigned long long u64;<br><br>class ThirstyGroup {<br>public:<br>int bestGlass(int aw, vector &lt;int&gt; cap) {<br>  int i, j, k, n;<br>  int ret = -1;<br>  i64 retv = -1;<br><br>  for( int g = 0; g &lt; cap.size(); g++ ) {<br>    i64 hi = 5000000000ll, lo = 0;<br>    while( hi &gt; lo ) {<br>      i64 t = (hi+lo+1)/2;<br>      i64 wu = 0;<br>      i64 v = 0;<br>      for( i = 0; i &lt; cap.size(); i++ ) {<br>        i64 x = t/(cap[i]+1) * cap[i];<br>        if( t%(cap[i]+1) &gt;= 1 ) x += cap[i];<br>        wu += x;<br>        if( i == g ) v += x;<br>      }<br>      if( wu &gt; aw ) hi = t-1; else lo = t;<br>    }<br>    i64 t = lo;<br>    i64 wu = 0;<br>    i64 v = 0;<br>    for( i = 0; i &lt; cap.size(); i++ ) {<br>      i64 x = t/(cap[i]+1) * cap[i];<br>      if( t%(cap[i]+1) &gt;= 1 ) x += cap[i];<br>      wu += x;<br>      if( i == g ) v += x;<br>    }<br>    for( i = 0; i &lt; cap.size() &amp;&amp; wu &lt; aw; i++ ) {<br>      if( t%(cap[i]+1) != 0 ) continue;<br>      i64 x = (aw-wu) &lt;? cap[i];<br>      wu += x;<br>      if( i == g ) v += x;<br>    }<br>    if( v &gt; retv ) {retv = v; ret = g;}<br>cout &lt;&lt; g &lt;&lt; ' ' &lt;&lt; t &lt;&lt; ' ' &lt;&lt; v &lt;&lt; endl;<br>  }<br>  return ret;<br>}<br>};<br><br><br>// Powered by FileEdit<br></td>