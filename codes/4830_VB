            public class AccessChanger<br>  {<br>    public string[] convert(string[] program)<br>    {<br>      string[] ret = new string[program.Length];<br>      for(int i=0;i&lt;=program.Length-1;i++)<br>      {<br>        ret[i] = DoConvert(program[i]);<br>      }<br>      return ret;<br>    }<br> <br>    public string DoConvert(string value)<br>    {<br>      int r = value.IndexOf("//");<br>      if (r!=-1)<br>      {<br>        return value.Substring(0,r).Replace("-&gt;",".")+value.Substring(r);<br>      }<br>      else<br>      {<br>        return value.Replace("-&gt;",".");<br>      }<br>    }<br>  }<br></td>