            using System;<br>using System.Collections;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class RegimentArming<br>{<br>    public int chooseGuns(int[] counts, int[] powers, int N)<br>    {<br>        int maxCount = 0;<br> <br>        for (int i = 0; i &lt; counts.Length; i++)<br>        {<br>            int count = 0;<br>            int left = N;<br> <br>            int cursor = i;<br>            while (left &gt; 0 &amp;&amp; cursor &lt; counts.Length)<br>            {<br>                if (counts[cursor] &lt; left)<br>                {<br>                    count += counts[cursor] * powers[cursor];<br>                    left -= counts[cursor];<br>                }<br>                else<br>                {<br>                    count += left * powers[cursor];<br>                    break;<br>                }<br>                cursor++;<br>            }<br> <br>            if (maxCount &lt; count)<br>                maxCount = count;<br>        }<br> <br>        for (int i = counts.Length - 1;  i &gt;= 0; i--)<br>        {<br>            int count = 0;<br>            int left = N;<br> <br>            int cursor = i;<br>            while (left &gt; 0 &amp;&amp; cursor &gt;=0)<br>            {<br>                if (counts[cursor] &lt; left)<br>                {<br>                    count += counts[cursor] * powers[cursor];<br>                    left -= counts[cursor];<br>                }<br>                else<br>                {<br>                    count += left * powers[cursor];<br>                    break;<br>                }<br>                cursor--;<br>            }<br> <br>            if (maxCount &lt; count)<br>                maxCount = count;<br>        }<br> <br>        return maxCount;<br>    }<br>}<br> <br>//Powered by [KawigiEdit]<br></td>