            /**<br>  @author Jack Lindamood<br>*/<br>public class RegimentArming {<br>  public int chooseGuns(int[] counts, int[] powers, int N)  {<br>        int max=0;<br>        for (int i=0;i&lt;counts.length;i++){<br>            // Find the max after index I<br>            int gunsIgot=0;<br>            int totalPower=0;<br>            for (int j=i;j&lt;counts.length;j++){<br>                if (gunsIgot+counts[j]&lt;=N){<br>                    totalPower+=counts[j]*powers[j];<br>                    gunsIgot+=counts[j];<br>                } else {<br>                    int mostICanTake=N-gunsIgot;<br>                    totalPower+=mostICanTake*powers[j];<br>                    gunsIgot+=mostICanTake;<br>                    break;<br>                }<br>            }<br>            if (totalPower&gt;max) max=totalPower;<br>            // Now most ending on index I<br>            gunsIgot=0;<br>            totalPower=0;<br>            for (int j=i;j&gt;=0;j--){<br>                if (gunsIgot+counts[j]&lt;=N){<br>                    totalPower+=counts[j]*powers[j];<br>                    gunsIgot+=counts[j];<br>                } else {<br>                    int mostICanTake=N-gunsIgot;<br>                    totalPower+=mostICanTake*powers[j];<br>                    gunsIgot+=mostICanTake;<br>                    break;<br>                }<br>            }<br>            if (totalPower&gt;max) max=totalPower;<br>        }<br>        return max;<br>  }<br>  }<br></td>