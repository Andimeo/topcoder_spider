            using System;<br>using System.Collections;<br>public class RoundTable {<br>  int[] at;<br>  int countA;<br>  int countB;<br>  int chairs;<br>  int minDistance;<br>  long res;<br><br>  void rec(int num, int last) <br>  {<br>    if (num &gt;= countA) <br>    {<br>      at[num] = at[0] + chairs;<br>      int cnt = 0;<br>      for (int i = 0; i &lt; countA; ++i) <br>      {<br>        int dist = at[i + 1] - at[i] - 1 - 2 * (minDistance - 1);<br>        if (dist &gt; 0)<br>          cnt += dist;<br>      }<br>      long am = 1;<br>      for (int i = 0; i &lt; countB; ++i)<br>        am *= (cnt - i);<br>      res += am;<br>      return;<br>    }<br>    for (int i = last + 1; i &lt; chairs; ++i) <br>    {<br>      at[num] = i;<br>      rec(num + 1, i);<br>    }<br>  }<br><br>  public long arrangements(int countA, int countB, int chairs, int minDistance) {<br>    this.countA = countA;<br>    this.countB = countB;<br>    this.chairs = chairs;<br>    this.minDistance = minDistance;<br>    res = 0;<br>    at = new int[countA + 1];<br>    rec(0, -1);<br>    for (int i = 1; i &lt;= countA; ++i)<br>      res *= i;<br><br>    return res;<br>  }<br><br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>