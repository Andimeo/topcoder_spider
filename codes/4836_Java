            import java.util.*;<br>public class Superking {<br>  public long squares(int type1, int type2) {<br>    long t1 = type1;<br>    long t2 = type2;<br>    if (t1 == 0) return (t2+1)*(t2+1);<br>    if (t1 == 1 &amp;&amp; t2 == 0) return 8;<br>    if (t1 == 1) {<br>      long res = 8;<br>      res += 20*t2;<br>      res += 6*t2*(t2-1);<br>      return res;<br>    }<br>    long res = 2*(2*t2+t1)+1;<br>    res *= res;<br>    res -= (t2+1)*t2*8;<br>    return res;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>