            using System;<br> <br> <br>  public class CoinPiles<br>  {<br>    <br> <br>    public int organize(int[] sizes)<br>    {<br>      Array.Sort(sizes);<br>      int count = 0;<br>      int last = 0;<br>      int i;<br>      int notused_smaller = 0;<br>      int last_number = 0;<br>      int last_scored = 0;<br>      for(i=0;i&lt;sizes.Length;i++)<br>      {<br>        if(sizes[i]==last)<br>        {<br>          notused_smaller++;<br>          continue;<br>        }<br>        if(notused_smaller&gt;=last_number)<br>        {<br>          count++;<br>          notused_smaller++;<br>          notused_smaller-=(last_number+1);<br>          last_number++;<br>          last_scored = sizes[i];<br>        }else<br>        {<br>          notused_smaller++;<br>        }<br> <br>        last = sizes[i];<br>      }<br>      return count;<br>    }<br>  }<br></td>