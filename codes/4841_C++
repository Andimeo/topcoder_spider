<td class="problemText" colspan="8" valign="middle" align="left">
            #include&lt;vector&gt;<br>#include&lt;algorithm&gt;<br>using namespace std;<br> <br>class CoinPiles {<br>public:<br>  int organize(vector &lt;int&gt; sizes) {<br>    sort(sizes.begin(), sizes.end());<br>    long i,j,k;<br>    long ans;<br>    ans = 0;<br>    long lasttop = -1, tot=0, step=1;<br>    for(i=0;i&lt;sizes.size();i++){<br>      tot++;<br>      if(sizes[i]&lt;=lasttop||(i&amp;&amp;sizes[i]==sizes[i-1]))continue;<br>      if(tot&lt;step)continue;<br>      tot -= step;<br>      step++;<br>      lasttop = sizes[i];<br>      ans++;<br>    }      <br>    return ans;<br>  }<br>};<br></td>