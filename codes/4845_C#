            using System;<br> <br>using System.Text;<br> <br>  public class AmountApproximation<br>  {<br>    public int approximate(int D, int p1, int p2)<br>    {<br>      int less = p1 &gt; p2 ? p2 : p1;<br>      int greater = p1 &gt; p2 ? p1 : p2;<br> <br>      if (less == 1) return D;<br> <br>      int count1 = D / greater;<br> <br>      int solution1 = count1 * greater;<br>      if (solution1 == D)<br>        return D;<br>      else <br>        solution1 += greater;<br> <br>      int greaterLeft = greater;<br>      for (int countN = count1; countN &gt;= 0; countN--)<br>      {<br>        int sum1 = countN * greater;<br>        int delta = D - sum1;<br> <br>        int count2 = delta / less;<br>        int sum2 = count2 * less;<br> <br>        int solutionN = sum1 + sum2;<br>        if (solutionN == D)<br>          return D;<br>        else<br>          solutionN += less;<br> <br>        if (solutionN &lt; solution1)<br>          solution1 = solutionN;<br> <br>        greaterLeft--;<br>        if (greaterLeft == 0)<br>          break;<br>      }<br>      return solution1;<br>    }<br>  }<br></td>