            public class AmountApproximation {<br>    public int approximate(int D, int p1i, int p2i) {<br>        int p1 = p1i;<br>        int p2 = p2i;<br>        if(p1 &lt; p2) {<br>            p1 = p2i;<br>            p2 = p1i;<br>        }<br>        int r = D + p1;<br>        int min = Integer.MAX_VALUE;<br>        for(int k1 = 0; k1 &lt;= p2; k1++) {<br>            r -= p1;<br>            if(r &lt;= 0) {<br>                int t = k1 * p1;<br>                if(t &lt; min)<br>                    min = t;<br>                break;<br>            } else {<br>                int k2 = (r-1) / p2 + 1;<br>                int t = k1 * p1 + k2 * p2;<br>                if(t &lt; min)<br>                    min = t;<br>            }<br>        }<br>        return min;<br>    }<br>}<br></td>