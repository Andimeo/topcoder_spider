            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br> <br>public class Bits {<br>    public int minBits(int n) {<br>        int res=0;<br> <br>    while(n&gt;0)<br>    {<br>      ++res;<br>      n&gt;&gt;=1;<br>    }<br> <br>        return res;<br>    }<br>}<br> <br> <br> <br> <br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>