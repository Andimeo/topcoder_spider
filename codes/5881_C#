            using System;<br><br>public class PalindromeMaker {<br>  public string make(string baseString) {<br>    int[] cnt = new int[26];<br><br>    for (int i = 0; i &lt; baseString.Length; ++i)<br>      ++cnt[baseString[i] - 'A'];<br><br>    int odd = -1;<br><br>    for (int i = 0; i &lt; 26; ++i)<br>      if (cnt[i] % 2 != 0)<br>      {<br>        if (odd &gt;= 0)<br>          return "";<br>        odd = i;<br>      }<br><br>    if (odd &gt;= 0)<br>      --cnt[odd];<br><br>    string s = "";<br><br>    for (int i = 0; i &lt; 26; ++i)<br>    {<br>      for (int j = 0; j &lt; cnt[i] / 2; ++j)<br>        s += (char) ('A' + i);<br>    }<br><br>    if (odd &gt;= 0)<br>      s += (char) ('A' + odd);<br><br>    for (int i = 25; i &gt;= 0; --i)<br>    {<br>      for (int j = 0; j &lt; cnt[i] / 2; ++j)<br>        s += (char) ('A' + i);<br>    }<br><br>    return s;<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>