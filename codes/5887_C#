            using System;<br>using System.Collections;<br>using System.Text;<br><br>public class DyckwordUniformer {<br>  public string uniform(string dyckword) {<br>    if (dyckword == "")<br>      return "";<br>    int depth = 0;<br>    int start = 0;<br>    ArrayList parts = new ArrayList();<br><br>    for (int i = 0; i &lt; dyckword.Length; ++i)<br>    {<br>      switch (dyckword[i])<br>      {<br>        case 'X':<br>          ++depth;<br>          break;<br>        case 'Y':<br>          --depth;<br>          if (depth &lt; 0)<br>            return "";<br>          if (depth == 0) <br>          {<br>            parts.Add(dyckword.Substring(start, i - start + 1));<br>            start = i + 1;<br>          }<br>          break;<br>      }<br>    }<br><br>    if (depth &gt; 0)<br>      return "";<br><br>    for (int i = 0; i &lt; parts.Count; ++i)<br>    {<br>      string part = (string) parts[i];<br>      parts[i] = 'X' + uniform(part.Substring(1, part.Length - 2)) + 'Y';<br>    }<br><br>    parts.Sort();<br><br>    StringBuilder res = new StringBuilder();<br><br>    for (int i = 0; i &lt; parts.Count; ++i)<br>      res.Append(parts[i]);<br><br>    return res.ToString();<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>