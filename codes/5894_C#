            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br><br>public class Haar1D {<br>    public int[] transform(int[] data, int L) {<br>        int[] res = new int[data.Length];<br><br>    int b = (int)(data.Length /2);<br><br>    for (int i=1;i&lt;=L;i++) {<br>      for (int k=0;k&lt;b;k++) {<br>        res[k] = data[k*2] + data[k*2+1];<br>        res[b+k] = data[k*2] - data[k*2+1];<br>      }<br><br>      for (int k=0;k&lt;data.Length-2*b;k++)<br>        res[2*b+k] = data[2*b+k];<br><br><br>      for (int k=0;k&lt;data.Length;k++)<br>        data[k] = res[k];<br><br>      b /= 2;<br>    }<br><br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>