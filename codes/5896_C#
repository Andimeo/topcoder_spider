            using System;<br><br>public class InverseHaar1D {<br>  public int[] transform(int[] transformedData, int L) {<br>    int[] cur = transformedData;<br><br>    for (int i = L - 1; i &gt;= 0; --i)<br>    {<br>      int[] next = new int[cur.Length];<br>      int size = transformedData.Length / (1 &lt;&lt; i);<br><br>      for (int j = size; j &lt; next.Length; ++j)<br>        next[j] = cur[j];<br><br>      int k = 0;<br><br>      for (int j = 0; j &lt; size / 2; ++j)<br>      {<br>        int a = cur[j];<br>        int b = cur[j + size / 2];<br>        next[k++] = (a + b) / 2;<br>        next[k++] = (a - b) / 2;<br>      }<br>      cur = next;<br>    }<br><br>    return cur;<br>  }<br><br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>