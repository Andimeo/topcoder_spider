            #include &lt;iostream&gt;<br>#include &lt;vector&gt;<br> <br>using namespace std;<br> <br>class InverseHaar1D {<br>    public:<br>        vector &lt;int&gt; transform(vector &lt;int&gt; data, int L) {<br>            if (L &gt; 1) {<br>                vector &lt;int&gt; data2, data3;<br>                data2.resize(data.size()/2);<br>                int i;<br>                for (i = 0; i &lt; data.size()/2; i++)<br>                    data2[i] = data[i];<br>                data3 = transform(data2, L-1);<br>                for (i = 0; i &lt; data.size()/2; i++)<br>                    data[i] = data3[i];<br>            }<br>            vector &lt;int&gt; res;<br>            int i, len = data.size();<br>            res.resize(len);<br>            for (i = 0; i &lt; len/2; i++) {<br>                res[i*2] = (data[i] + data[len/2+i]) / 2;<br>                res[i*2+1] = (data[i] - data[len/2+i]) / 2;<br>            }<br>            return res;<br>        }<br>};<br></td>