<td class="problemText" colspan="8" valign="middle" align="left">
            import java.util.*;<br>public class InverseHaar1D<br>{<br>  public int[] transform(int[] data, int L)<br>  {<br>    int n = data.length;<br>    int len = n&gt;&gt;L;<br>    for(int i=0;i&lt;L;i++)<br>    {<br>      int[] temp = new int[n];<br>      for(int j=0;j&lt;n;j++)<br>        temp[j]=data[j];<br>      for(int j=0;j&lt;len;j++)<br>      {<br>        temp[2*j] = (data[j]+data[len+j])/2;<br>        temp[2*j+1] = (data[j]-data[len+j])/2;<br>      }<br>      data = temp;<br>      len&lt;&lt;=1;<br>    }<br>    return data;<br>  }<br>}<br></td>