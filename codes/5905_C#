            using System;<br>using System.Collections;<br>using System.Text;<br> <br>public class CuttingPoles<br>{<br>    <br>      public static int countCuts(int[] poles)<br>    {<br>        int ret = 0;<br>        int average=0;<br>        int i;<br>        int k;<br>        <br>        for (i = 0; i &lt; poles.Length; i++)<br>            average += poles[i];<br>        average /= poles.Length;<br> <br>        while (true)<br>        {<br>            Array.Sort(poles);<br>            <br>            if (poles[poles.Length-1] == average)<br>                break;<br>            k = poles[poles.Length - 1] - average;<br>            poles[poles.Length - 1] = average;<br>            poles[0] += k;<br>            ret++;<br>        }<br>        return ret;<br>    }<br>}<br></td>