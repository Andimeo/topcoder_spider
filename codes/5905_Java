            import java.util.Arrays;<br> <br>public class CuttingPoles {<br>  public int countCuts(int[] poles){<br>    int i,sum=0;<br>    for(i=0;i&lt;poles.length;i++)<br>      sum+=poles[i];<br>    int avr=sum/poles.length;<br>    i=0;<br>    <br>    while(true){<br>      Arrays.sort(poles);<br>      if(poles[poles.length-1]!=avr){<br>        poles[0]+=poles[poles.length-1]-avr;<br>        poles[poles.length-1]-=poles[poles.length-1]-avr;<br>        i++;<br>      }<br>      else<br>        break;<br>    }<br>    return i;<br>  }<br>}<br></td>