            using System;<br>using System.Collections;<br>public class IntegerSequence {<br>  <br>  <br>  public int maxSubsequence(int[] numbers) {<br>    int[] asc = new int[numbers.Length];<br>    int[] desc = new int[numbers.Length];<br>    <br>    for (int i = 0; i &lt; numbers.Length; ++i) {<br>      int max = 0;<br>      for (int j = i - 1; j &gt;= 0; --j) {<br>        if ((numbers[j] &lt; numbers[i]) &amp;&amp; (max &lt; asc[j])) max = asc[j];  <br>      }<br>      asc[i] = max + 1;<br>    }<br>    for (int i = numbers.Length - 1; i &gt;= 0 ; --i) {<br>      int max = 0;<br>      for (int j = i + 1; j &lt; numbers.Length; ++j) {<br>        if ((numbers[j] &lt; numbers[i]) &amp;&amp; (max &lt; desc[j])) max = desc[j];  <br>      }<br>      desc[i] = max + 1;<br>    }<br>    int maxResult = 0;<br>    for (int i = 0; i &lt; numbers.Length; ++i) {<br>      if (asc[i] + desc[i] - 1 &gt; maxResult) maxResult = asc[i] + desc[i] - 1;<br>    }<br>    return numbers.Length - maxResult;<br>      <br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>