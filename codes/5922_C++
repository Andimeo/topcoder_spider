<td class="problemText" colspan="8" valign="middle" align="left">
            #include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>using namespace std;<br> <br>class IntegerSequence {<br>public:<br> <br>int maxSubsequence(vector&lt;int&gt; numbers)<br>{<br>  int a[256], b[256], n = numbers.size();<br> <br>  for (int i = 0; i &lt; n; i++) {<br>    a[i] = 1;<br>    for (int j = 0; j &lt; i; j++)<br>      if (numbers[j] &lt; numbers[i]) a[i] = max(a[i], a[j]+1);<br>  }<br> <br>  for (int i = n-1; i &gt;= 0; i--) {<br>    b[i] = 1;<br>    for (int j = n-1; j &gt; i; j--)<br>      if (numbers[j] &lt; numbers[i]) b[i] = max(b[i], b[j]+1);<br>  }<br> <br>  int r = 0;<br>  for (int i = 0; i &lt; n; i++)<br>    r = max(r, a[i] + b[i] - 1);<br> <br>  return n-r;<br>}<br> <br>};<br></td>