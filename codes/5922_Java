            import com.sun.java_cup.internal.lexer;<br> <br>public class IntegerSequence {<br>    public int maxSubsequence(int[] n) {<br>        int[] up = new int[n.length];<br>        int[] down = new int[n.length]; <br>        up[0] = 1;<br>        for (int i = 1; i &lt; up.length; i++) {<br>            up[i] = 1;<br>            for (int j = i - 1; j &gt;= 0; j--) {<br>                if (n[i] &gt; n[j]) up[i] = Math.max(up[i], up[j] + 1);<br>            }<br>        }<br>        down[down.length - 1] = 1;<br>        for (int i = down.length - 2; i &gt;= 0; i--) {<br>            down[i] = 1;<br>            for (int j = i + 1; j &lt; down.length; j++) {<br>                if (n[i] &gt; n[j]) down[i] = Math.max(down[i], down[j] + 1);<br>            }<br>        }<br>        int max = 0;<br>        for (int i = 0; i &lt; down.length; i++) {<br>            max = Math.max(down[i] + up[i], max);<br>        }<br>        <br>        return n.length - max + 1;<br>    }<br>}<br></td>