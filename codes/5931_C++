            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;stdlib.h&gt;<br>#include &lt;math.h&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;sstream&gt;<br>#include &lt;stdio.h&gt;<br>#include &lt;iostream.h&gt;<br> <br>using namespace std;<br> <br>class FowlRoad <br>{<br>public:<br>  int crossings(int roadY, vector &lt;int&gt; bX, vector &lt;int&gt; bY) <br>  {<br>    int num = 0, i, l, ile = bX.size();<br>    bool lewa = false;<br>    <br>    if (ile == 0) return 0;<br>    <br>    if (bY[0] &lt; roadY) lewa = true;<br>    <br>    for (i=1; i&lt;ile; i++)<br>    {<br>      if (lewa &amp;&amp; (bY[i] &gt; roadY)) { num++; lewa = !lewa; }<br>      if (!lewa &amp;&amp; (bY[i] &lt; roadY)) { num++; lewa = !lewa; }<br>    }<br>    <br>    return num;    <br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>