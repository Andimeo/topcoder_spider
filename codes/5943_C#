            using System;<br>using System.Collections;<br><br>public class FindTriangle <br>{<br>  public double largestArea(string[] points) <br>  {<br>    double best = -1;<br>    foreach(string a in points)<br>    {<br>      foreach(string b in points)<br>      {<br>        foreach(string c in points)<br>        {<br>          if(a[0] == b[0] &amp;&amp; a[0] == c[0] || a[0] != b[0] &amp;&amp; a[0] != c[0] &amp;&amp; b[0] != c[0])<br>          {<br>            double ar = area(a,b,c);<br>            if(ar &gt; best)<br>            {<br>          <br>              best = ar;<br>            }<br>          }<br>        }<br>      }<br>    }<br>    return best;<br>  }<br><br>  <br><br>  double area(string a,string b,string c)<br>  {<br>    double ax,ay,az;<br>    double bx,by,bz;<br>    double cx,cy,cz;<br>    getvec(a,out ax,out ay,out az);<br>    getvec(b,out bx,out by,out bz);<br>    getvec(c,out cx,out cy,out cz);<br>    bx -= ax;<br>    by -= ay;<br>    bz -= az;<br>    cx -= ax;<br>    cy -= ay;<br>    cz -= az;<br>    double x = by * cz - cy * bz;<br>    double y = bz * cx - bx * cz;<br>    double z = bx * cy - by * cx;<br>    return Math.Sqrt(x*x+y*y+z*z) / 2.0;<br>  }<br><br>  void getvec(string s,out double a,out double b, out double c)<br>  {<br>    string[] foo = s.Split(new char[]{' '});<br>    a = int.Parse(foo[1]);<br>    b = int.Parse(foo[2]);<br>    c = int.Parse(foo[3]);<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>