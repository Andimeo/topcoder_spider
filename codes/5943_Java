            // Author:  King Larry Mak<br>// TC Handle:  Larry<br>import java.util.*;<br>public class FindTriangle {<br>  public class Point {<br>    public double x, y, z;<br>    public char c;<br>    <br>    public Point( double x, double y, double z, char c ) {<br>      this.x = x;<br>      this.y = y;<br>      this.z = z;<br>      this.c = c;<br>    }<br>    <br>    public boolean equals( Point a ) {<br>      return ( this.x == a.x &amp;&amp; this.y == a.y &amp;&amp; this.z == a.z );<br>    }<br>    <br>    public Point minus( Point c ) {<br>      return new Point( c.x - this.x, c.y - this.y, c.z - this.z, '0' );<br>    }<br>  }<br>  <br>  public double area( Point a, Point b, Point c ) {<br>    // Get the largest abs coordinate<br>    if ( a.equals( b ) || a.equals( c ) || b.equals( c ) ) return 0.0;<br>    Point d = a.minus( b );<br>    Point e = a.minus( c );<br>    <br>    double dx = ( d.y * e.z ) - ( e.y * d.z );<br>    double dy = ( d.z * e.x ) - ( e.z * d.x );<br>    double dz = ( d.x * e.y ) - ( e.x * d.y );<br>    <br>    return Math.abs( Math.sqrt( dx * dx + dy * dy + dz * dz ) ) / 2.0;<br>  }<br>  <br>  public double largestArea(String[] points) {<br>    Point[] p = new Point[points.length];<br>    <br>    for ( int i = 0; i &lt; p.length; i++ ) {<br>      String[] k = points[i].split( " " );<br>      p[i] = new Point( Integer.parseInt( k[1] ), Integer.parseInt( k[2] ), Integer.parseInt( k[3] ), k[0].charAt( 0 ) );<br>    }<br>    <br>    double max = 0.0;<br>    for ( int i = 0; i &lt; p.length; i++ )<br>    for ( int j = i + 1; j &lt; p.length; j++ ) <br>    for ( int k = j + 1; k &lt; p.length; k++ )<br>    if ( ( p[i].c == p[j].c &amp;&amp; p[j].c == p[k].c ) || ( p[i].c != p[j].c &amp;&amp; p[i].c != p[k].c &amp;&amp; p[j].c != p[k].c ) ) {<br>      max = Math.max( max, area( p[i], p[j], p[k] ) );<br>    }<br>    return max;<br>  }<br>  <br>}<br> <br>// Powered by PopsEdit<br>// Powered by CodeProcessor<br></td>