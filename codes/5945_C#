            using System;<br><br>public class VolumeDiscount {<br>  public int bestDeal(string[] priceList, int quantity) {<br>    int n = priceList.Length;<br>        int[] price = new int[n];<br>    int[] am = new int[n];<br>    for (int i = 0; i &lt; n; ++i)<br>    {<br>      string[] s = priceList[i].Split(' ');<br>      am[i] = int.Parse(s[0]);<br>      price[i] = int.Parse(s[1]);<br>    }<br><br>    int[] best = new int[201];<br>    for (int i = 1; i &lt;= 200; ++i)<br>      best[i] = int.MaxValue;<br><br>    for (int i = 0; i &lt; n; ++i)<br>    {<br>      for (int j = 0; j &lt;= 200 - am[i]; ++j)<br>      {<br>        if (best[j] &lt; int.MaxValue)<br>        {<br>          if (best[j] + price[i] &lt; best[j + am[i]])<br>          {<br>            best[j + am[i]] = best[j] + price[i];<br>          }<br>        }<br>      }<br>    }<br><br>    int res = int.MaxValue;<br><br>    for (int i = quantity; i &lt;= 200; ++i)<br>      if (best[i] &lt; res)<br>        res = best[i];<br><br>    return res;<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>