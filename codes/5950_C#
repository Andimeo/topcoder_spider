            using System;<br>using System.Collections;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class DancingSentence<br>{<br>  public string makeDancing(string sentence)<br>  {<br>        StringBuilder sb = new StringBuilder();<br> <br>        bool up = true;<br> <br>        for (int i = 0; i &lt; sentence.Length; i++)<br>            if (Char.IsLetter(sentence[i]))<br>            {<br>                if (up) sb.Append(Char.ToUpper(sentence[i]));<br>                else sb.Append(Char.ToLower(sentence[i]));<br>                up = !up;<br>            }<br>            else sb.Append(sentence[i]);<br> <br>        return sb.ToString();<br>  }<br> <br>}<br> <br>//Powered by [Zigger]<br></td>