            import java.util.*;<br>public class DancingSentence {<br>   public String makeDancing(String sentence) {<br>      String ret = "";<br>      boolean upper = true;<br>      for (int i=0; i&lt;sentence.length(); i++) {<br>         char c = sentence.charAt(i);<br>         if (c == ' ') {<br>            ret += " ";<br>         } else {<br>            if (upper) {<br>               ret += Character.toUpperCase(c);<br>            } else {<br>               ret += Character.toLowerCase(c);<br>            }<br>            upper = !upper;<br>         }<br>      }<br>      return ret;<br>   }<br>}<br>// Powered by [Googly Bot]<br></td>