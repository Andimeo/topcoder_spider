            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;sstream&gt;<br><br>using namespace std;<br><br>class OperationsArrangement<br> { <br> public: <br>     string arrange(string sequence) <br>     { <br>       string out;<br>       int sum = (int)(sequence[0] - '0');<br>       out.push_back(sequence[0]);<br>       bool iszero = false;<br>       for (int i=0; i&lt;sequence.size();i++)<br>         if (sequence[i]=='0')<br>           iszero = true;<br><br>       if (iszero)<br>       {<br>         for (int i=1; i&lt;sequence.size();i++)<br>         {<br>           out.push_back('*');<br>           out.push_back(sequence[i]);<br>         }<br>         return out;<br>       }<br><br>       for (int i=1; i&lt;sequence.size();i++)<br>       {<br>         int nn = (int)(sequence[i] - '0');<br>         if (sum*nn &lt;= sum+nn)<br>         {<br>           sum *= nn;<br>           out.push_back('*');<br>           out.push_back(sequence[i]);<br>         }<br>         else <br>         {<br>           sum = (int)(sequence[i] - '0');<br>           out.push_back('+');<br>           out.push_back(sequence[i]);<br>         }<br>         <br>       }<br>       return out;<br>     } <br><br>  <br> <br> }; <br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>