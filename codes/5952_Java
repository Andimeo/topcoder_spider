            public class OperationsArrangement<br>{<br>  public String arrange(String sequence)<br>  {<br>    int nMin = 9 * 50;<br>    <br>    String strReturn = "";<br>    <br>    boolean bHasZero = sequence.indexOf("0") != -1;<br>    <br>    int nLastGroup = 0;<br>    <br>    for (int i = 0; i &lt; sequence.length(); i++)<br>    {<br>      char ch = sequence.charAt(i);<br>      if (bHasZero)<br>      {<br>        strReturn += "*" + ch;<br>        continue;<br>      }<br>      if (ch == '1')<br>      {<br>        strReturn += "*" + ch;<br>        if (nLastGroup == 0)<br>        {<br>          nLastGroup = 1;<br>        }<br>      }<br>      else<br>      {<br>        if (nLastGroup == 0)<br>        {<br>          nLastGroup += (int)(ch - '0');<br>          strReturn += "+" + ch;<br>        }<br>        else<br>        {<br>          if ((nLastGroup + (int)(ch - '0')) &lt; (nLastGroup * (int)(ch - '0')))<br>          {<br>            nLastGroup = (int)(ch - '0');<br>            strReturn += "+" + ch;<br>          }<br>          else<br>          {<br>            nLastGroup *= (int)(ch - '0');<br>            strReturn += "*" + ch;<br>          }<br>        }<br>      }<br>    }<br> <br>    <br>    return strReturn.substring(1);<br>  }<br>}<br></td>