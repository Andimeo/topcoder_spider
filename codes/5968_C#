            using System;<br>using System.Collections;<br>using math = System.Math;<br> <br>public class SnailRace<br>{<br>  public double shortestTime(int snails, int distance, int snailSpeed, int georgeSpeed)<br>  {<br>    if ( snailSpeed &gt;= georgeSpeed)<br>      return (distance-1.0)/snailSpeed;<br>    double dd = distance-1.0;<br>    double x = dd/(1+2*snailSpeed*(snails-1.0)/(snailSpeed+georgeSpeed));<br>    return (dd - x)/snailSpeed + x/georgeSpeed;<br>  }<br>}<br> <br> <br>// Powered by PopsEdit<br></td>