            import java.util.*;<br> <br>public class SnailRace {<br>    public double shortestTime(int snails, int distance, int snailSpeed, int georgeSpeed) {<br>        if (snailSpeed &gt;= georgeSpeed) {<br>            return 1.0 * (distance - 1) / snailSpeed;<br>        }<br> <br>        double l = 0;<br>        double r = distance;<br>        double m = 0;<br>        for (int i = 0; i &lt; 50; i++) {<br>            m = (l + r) / 2;<br>            double time = m / georgeSpeed;<br>            double spas = snailSpeed * time;<br>            double t = time * snails + (m - spas) / (georgeSpeed + snailSpeed) * (snails - 1);<br>            if (snailSpeed * (t - time) + m &lt; distance - 1) {<br>                l = m;<br>            } else {<br>                r = m;<br>            }<br>        }<br>        double time = m / georgeSpeed;<br>        double spas = snailSpeed * time;<br>        double t = time * snails + (m - spas) / (georgeSpeed + snailSpeed) * (snails - 1);<br>        return (distance - m - 1) / snailSpeed + m / georgeSpeed;<br>    }<br> <br> <br>}<br> <br> <br>// Powered by PopsEdit<br> <br>// Powered by CodeProcessor<br></td>