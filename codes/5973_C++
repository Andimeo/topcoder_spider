            #include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;cmath&gt;<br><br>using namespace std;<br><br>class MooresLaw  { <br>    public: <br><br>    double y;<br><br>    double getTime(double x) {<br>      double a = exp(log(2.0) / 1.5);<br>      double mult = 1.0;<br>      if (fabs(x) &gt; 1e-10) mult = exp(log(a) * x);<br>      return (x + y / mult);<br>    }<br><br>    double shortestComputationTime(int years) { <br>    y = 1.0 * years;<br>    double l, r, m1, m2;<br>    l = 0.0;<br>    r = 1e9;<br>    while (fabs(r - l) &gt; 1e-10) {<br>      m1 = l + (r - l) / 3;<br>      m2 = r - (r - l) / 3;<br>      double tA = getTime(l);<br>      double tM1 = getTime(m1);<br>      double tM2 = getTime(m2);<br>      //double tB = getTime(r);<br>      if (tM1 &lt; tA &amp;&amp; tM2 &lt; tM1) l = m1; else r = m2;<br>    }<br>    return getTime(l);<br>      } <br><br>    <br> <br>}; <br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>