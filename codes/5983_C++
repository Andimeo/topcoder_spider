            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;iostream&gt;<br>#include &lt;cmath&gt;<br>#define FOREACH(i,v) for(__typeof(v.begin()) i=v.begin(); i!=v.end(); ++i)<br>using namespace std;<br> <br>class RunLengthEncoding {<br>  public:<br>  string decode(string text) {<br>    <br> <br>string ret;<br>int n = text.size();<br>int ile;<br>    ile = 0;<br>    for(int i=0; i&lt;n; i++)<br>    {<br>      if(isdigit(text[i])){<br>        ile = 10*ile+text[i]-'0';<br>        if(ile &gt; 50) return "TOO LONG";<br>      }<br>      <br>      else<br>      {<br>        if(ile == 0) ile = 1;<br>        for(int j=0; j&lt;ile; j++)<br>        ret += text[i];<br>        ile = 0;<br>      }<br>      if(ret.size() &gt; 50) return "TOO LONG";<br>    }<br>    return ret;<br>  <br>  }<br>  <br> <br> <br>};<br> <br>// Powered by PopsEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>