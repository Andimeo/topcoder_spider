            public class RunLengthEncoding {<br><br>    public String decode(String text) {<br>        char[] chars = text.toCharArray();<br>        String result = "";<br>        String number = "0";<br>        for(int i = 0; i &lt; chars.length; i++) {<br>            char ch = chars[i];<br>            if (Character.isDigit(ch)) {<br>                number += ch;<br>                if (number.length() &gt; 3) return "TOO LONG";<br>            } else {<br>                int n = Integer.parseInt(number);<br>                number = "0";<br>                if (n == 0)  result += ch;<br>                else {<br>                    while(n-- &gt; 0) result += ch;<br>                }<br>            }<br><br>        }<br>        return result.length() &gt; 50 ? "TOO LONG" : result;<br>    }<br><br> // ---------------------------------------- //<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>