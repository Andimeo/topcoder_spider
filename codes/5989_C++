            // Powered by MB__ClearCode v2.5-2<br>#define sz size()<br>#define dsz size()-1<br>#define sign (signed int)<br>#define FALL(ii,vv) for ((ii) = 0;sign (ii) &lt;= sign (vv).dsz;(ii)++)<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>using namespace std;<br><br>class KidsWordGame<br>{<br>public:<br>  int nok(string f, string s){<br>    if (s == s[0] + f ||<br>      s == f + s[s.dsz])<br>      return 0;<br>    return 1;<br>  }<br>  int getCheater(vector &lt;string&gt; first, vector &lt;string&gt; second, vector &lt;string&gt; third) <br>  {<br>    int i;<br>    string last = first[0];<br><br>    FALL (i, first){<br>      if (i)<br>        if (nok(last, first[i]))<br>          return 3;<br>      if (i == second.sz)<br>        return -1;<br>      last = first[i];<br>      if (nok(last, second[i]))<br>        return 1;<br>      if (i == third.sz)<br>        return -1;<br>      last = second[i];<br>      if (nok(last, third[i]))<br>        return 2;<br>      last = third[i];<br>    }<br><br>    return -1;<br>  }<br><br>  // TESTCODE<br><br><br>};<br><br><br>//END<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>