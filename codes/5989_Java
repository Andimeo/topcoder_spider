            public class KidsWordGame {<br>  public int bun(String a,String b) {<br>    if(a.length()!=b.length()-1) {<br>      return 0;<br>    }<br>    else {<br>      if(a.compareTo(b.substring(0,b.length()-1))==0) return 1;<br>      else if(a.compareTo(b.substring(1,b.length()))==0) return 1;<br>      else return 0;  <br>    }<br>  }<br>  public int getCheater(String[] first, String[] second, String[] third) {<br>    String[] aux=new String[first.length+second.length+third.length];<br>    for(int i=0;i&lt;first.length;i++) {<br>      aux[i*3]=first[i];      <br>    }<br>    for(int i=0;i&lt;second.length;i++) {<br>      aux[i*3+1]=second[i];<br>    }<br>    for(int i=0;i&lt;third.length;i++) {<br>      aux[i*3+2]=third[i];<br>    }<br>    int gasit=-1;<br>    for(int i=0;i&lt;aux.length-1;i++) {<br>      if(gasit==-1) {<br>      if(bun(aux[i],aux[i+1])==0) {<br>        gasit=i%3+1;<br>      }<br>      }<br>    <br>    }<br>    return gasit;  <br>  }<br>}<br></td>