            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;cstring&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdio&gt;<br> <br>#define MAX(A, B) (((A) &gt;= (B)) ? (A) : (B))<br>#define MIN(A, B) (((A) &lt;= (B)) ? (A) : (B))<br>#define ABS(X) (((X) &gt;= 0) ? (X) : -(X))<br>#define SWAP(A, B, C) ((C) = (A), (A) = (B), (B) = (C))<br> <br>using namespace std;<br> <br>class SwitchingBits<br>{<br>  public: int minSwitches( vector &lt;string&gt; s )<br>  {<br>    int p = 0;<br>    string S = "";<br>    for (int i = 0; i &lt; s.size(); i++)<br>      S += s[i];<br>    for (int i = 0; i &lt; (int)(S.length() - 1); i++)<br>      if (S[i] != S[i + 1])<br>        p++;<br>    return (p + 1) / 2;<br>  }<br>};<br> <br>// Code by Burunduk3<br> <br> <br>// Powered by PopsEdit<br></td>