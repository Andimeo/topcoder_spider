            using System;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class StraightArray<br>{<br>    public static int howManyMore(int[] nums)<br>    {<br>        Array.Sort(nums);<br>        int Res = 5;<br>        for (int i = 0; i &lt; nums.Length; i++)<br>        {<br>            int CRes = 4;<br>            int k = i + 1;<br>            for (int j = 1; j &lt; 5; j++)<br>            {<br>                if (k &lt; nums.Length &amp;&amp; nums[k] == nums[i] + j)<br>                {<br>                    CRes--;<br>                    k++;<br>                }<br>            }<br>            if (CRes &lt; Res) Res = CRes;<br>        }<br>        return Res;<br>    }<br>}<br></td>