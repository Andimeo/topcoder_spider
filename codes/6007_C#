            using System;<br> <br>  public class SentenceSplitting<br>  {<br>    public int split(string sentence, int K)<br>    {<br>      K++;<br>      int len = sentence.Length;<br>      for(int i = 1; i &lt;= len; i++)<br>      {<br>        int num = 0;<br>        int b = 0;<br>        while (b &lt; len) <br>        {<br>          num++;<br>          if (b + i &gt;= len)<br>            break;<br>          int j;<br>          bool ok = false;<br>          for(j = b + i; j &gt;= b; j--)<br>            if (sentence[j] == ' ')<br>            {<br>              b = j + 1;<br>              ok = true;<br>              break;<br>            }<br>          if (!ok)<br>          {<br>            num = 1000;<br>            break;<br>          }<br>        }<br>        if (num &lt;= K)<br>          return i;<br>      }<br>      return 0;<br>    }<br>  }<br></td>