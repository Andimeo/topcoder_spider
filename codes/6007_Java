            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import static java.lang.Math.*;<br>import static java.util.Arrays.*;<br>public class SentenceSplitting {<br>  public int split(String sentence, int K) {<br>    if(K == 0) return sentence.length();<br>    String key = sentence+K;<br>    if(mem.containsKey(key)) return mem.get(key);<br>    int best = sentence.length();<br>    for(int i = 0; i &lt; sentence.length(); i++){<br>      if(sentence.charAt(i) == ' ') best = min(best, max(i, split(sentence.substring(i+1), K-1)));<br>    }<br>    mem.put(key, best);<br>    return best;<br>  }<br>  HashMap&lt;String, Integer&gt; mem = new HashMap&lt;String, Integer&gt;();<br> <br>}<br> <br>// Powered by PopsEdit<br>// Powered by CodeProcessor<br></td>