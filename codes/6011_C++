            #include&lt;iostream&gt;<br>using namespace std;<br> <br>struct Truckloads<br>{<br>int numTrucks(int numCrates, int loadSize);<br>};<br>int n=0;<br>int Truckloads::numTrucks(int numCrates, int loadSize)<br>{<br>    if( numCrates &gt; loadSize){<br>      if(numCrates%2==0){<br>          numTrucks(numCrates/2, loadSize);<br>      numTrucks(numCrates/2, loadSize);<br>      }<br>      else{<br>          numTrucks( (numCrates+1)/2, loadSize );<br>          numTrucks( numCrates/2 , loadSize);<br>      }<br>    }<br>    else{<br>  n++;<br>    }<br>    return n;<br>}<br></td>