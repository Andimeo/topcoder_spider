            public class Truckloads<br>{<br>  public int numTrucks(int numCrates,int loadSize)<br>  {<br>    int T[]=new int[numCrates+1];<br>    for(int i=1;i&lt;numCrates+1;i++)<br>    {<br>      if(i&lt;=loadSize) T[i]=1;<br>      else if(i%2==0)<br>      {<br>        if(i/2&lt;=loadSize)<br>          T[i]=2;<br>        else T[i]=2*T[i/2];        <br>      }<br>      else<br>      {        <br>        if(i/2+1&lt;=loadSize)<br>          T[i]=2;<br>        else if( i/2+1&gt;loadSize &amp;&amp; i/2&lt;loadSize)<br>          T[i]=1+T[i/2+1];<br>        else T[i]=T[i/2]+T[i/2+1];<br>      }<br>    }<br>    return T[numCrates];<br>  }<br>  public static void main(String[] args)<br>  {<br>    Truckloads t=new Truckloads();<br>    System.out.println(t.numTrucks(1024,5));<br>  }<br> <br>}<br></td>