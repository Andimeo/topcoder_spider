            public class CageTheMonster {<br>    int n,m;<br>    String[] lab;<br>    int x1,y1,x2,y2;<br>    boolean b[][];<br>    boolean bfs(int i,int j) {<br>        if (b[i][j]) return true;<br>        b[i][j]=true;<br>        if (i==y1 || i==y2 || j==x1 || j==x2) return true;<br>        if (i==0 || i==n-1 || j==0 || j==m-1) return false;<br>        return bfs(i-1,j) &amp;&amp;<br>        bfs(i+1,j) &amp;&amp;<br>        bfs(i,j-1) &amp;&amp;<br>        bfs(i,j+1);        <br>    }<br>    public int capture(String[] labyrinth) {<br>        lab=labyrinth;<br>        n=labyrinth.length;<br>        m=labyrinth[0].length();<br>        b=new boolean[n][m];<br>        int ans=-1;<br>        for(int i=0;i&lt;n;i++)<br>            for(int j=0;j&lt;m;j++)<br>                if (labyrinth[i].charAt(j)=='^') {<br>                    for(int k=0;k&lt;1&lt;&lt;5;k++) {<br>                        int z=0;<br>                        if ((k&amp;1)!=0) { x1=j-1;z++; } else x1=-1;<br>                        if ((k&amp;2)!=0) { x2=j+1;z++; } else x2=-1;<br>                        if ((k&amp;4)!=0) { y1=i-1;z++; } else y1=-1;<br>                        if ((k&amp;8)!=0) { y2=i+1;z++; } else y2=-1;<br>                        for(int y=0;y&lt;n;y++)<br>                            for(int x=0;x&lt;m;x++)<br>                                b[y][x]=lab[y].charAt(x)=='#';<br>                        if (bfs(i,j)) ans=(ans==-1)?z:Math.min(ans,z);<br>                    }<br>                }<br>        return ans;<br>    }<br>}<br></td>