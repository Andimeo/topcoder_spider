            using System;<br>using System.Collections;<br><br>public class CannonBalls {<br>  public int fewestPiles(int n) <br>  {<br>    ArrayList nums = new ArrayList();<br>    int sum = 1;<br>    int add = 1;<br>    int cur = 1;<br>    while (true)<br>    {<br>      if (cur &gt; n)<br>        break;<br>      nums.Add(cur);<br>      ++add;<br>      sum += add;<br>      cur += sum;<br>    }<br>    int[] num = new int[nums.Count];<br>    nums.CopyTo(num);<br>    int[] best = new int[n + 1];<br>    for (int i = 0; i &lt;= n; ++i)<br>      best[i] = 1000000;<br>    best[0] = 0;<br>    for (int i = 0; i &lt; num.Length; ++i) <br>    {<br>      int k = num[i];<br>      for (int j = 0; j &lt;= n - k; ++j)<br>        if (best[j + k] &gt; best[j] + 1)<br>        {<br>          best[j + k] = best[j] + 1;<br>        }<br>    }<br>    return best[n];<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>