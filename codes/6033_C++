            // another fine solution by misof<br>// #includes {{{<br>#include &lt;algorithm&gt;<br>#include &lt;numeric&gt;<br> <br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;queue&gt;<br>#include &lt;set&gt;<br>#include &lt;map&gt;<br> <br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cassert&gt;<br> <br>#include &lt;cmath&gt;<br>#include &lt;complex&gt;<br>using namespace std;<br>// }}}<br> <br>/////////////////// PRE-WRITTEN CODE FOLLOWS, LOOK DOWN FOR THE SOLUTION ////////////////////////////////<br> <br>// pre-written code {{{<br>#define FOR(i,a,b) for(int i=(int)(a);i&lt;=(int)(b);++i)<br>// }}}<br> <br>/////////////////// CODE WRITTEN DURING THE COMPETITION FOLLOWS ////////////////////////////////<br> <br>int tri[100000];<br>int tetra[100000];<br> <br>class CannonBalls {<br>public:<br>  int fewestPiles(int n) {<br>    tri[0]=0;<br>    FOR(i,1,99999) tri[i]=tri[i-1]+i;<br>    tetra[0]=0;<br>    FOR(i,1,99999) tetra[i]=tetra[i-1]+tri[i];<br>    int cnt=1;<br>    while (tetra[cnt] &lt;= 300000) cnt++;<br>    cout &lt;&lt; cnt &lt;&lt; endl;<br> <br>    vector&lt;int&gt; best(n+1,n+99);<br>    best[0]=0;<br>    FOR(i,1,cnt) for (int j=0; j+tetra[i]&lt;=n; j++) best[j+tetra[i]] &lt;?= best[j]+1;<br>    return best[n];<br>  }<br> <br> <br>};<br> <br> <br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>