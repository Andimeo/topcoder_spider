            import java.util.Arrays;<br> <br>public class CannonBalls {<br>  public int fewestPiles(int n) {<br>    int[] biggest = new int[1000001];<br>    int[] fewest = new int[1000001];<br>    Arrays.fill(fewest, 999999999);<br>    fewest[0] = 0;<br>    <br>    for (int i=1, t=1, dt=1; t &lt;= n; i++, dt += i, t += dt) {<br>      for (int k = t; k &lt;= n; k++) {<br>        int p = fewest[k - t] + 1;<br>        <br>        if (p &lt;= fewest[k]) {<br>          fewest[k] = p;<br>          biggest[k] = t;<br>        }<br>      }<br>    }<br>    <br>    int[] ans = new int[fewest[n]];<br>    <br>    for (int i = 0; i &lt; ans.length; i++) {<br>      ans[i] = biggest[n];<br>      n -= ans[i];<br>    }<br>    <br>    return ans.length;<br>  }<br>}<br></td>