            using System;<br>using System.Collections;<br>public class Wizards {<br>  public int questions(int wizards, int[] hat, int[] wiz) {<br>    int res=int.MaxValue;<br>    for(int i=0;i&lt;hat.Length;i++)<br>    {<br>      int need=0;<br>      for(int j=0;j&lt;hat.Length;j++)<br>        if(i!=j)<br>          need+=(hat[j]-wiz[j]);<br>      if(need+1&lt;=wiz[i] &amp;&amp; res&gt;need+1)<br>        res=need+1;<br>    }<br>    if(res==int.MaxValue)<br>      return -1;<br>    return res;<br>  }<br><br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003], modified to support C#<br>// Powered by CodeProcessor<br></td>