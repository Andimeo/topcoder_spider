            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import static java.lang.Math.*;<br>import static java.util.Arrays.*;<br>public class Wizards {<br>  public int questions(int wizards, int[] hats, int[] hatsOnWizards) {<br>    int ret = Integer.MAX_VALUE;<br>    for(int hatType = 0; hatType &lt; hatsOnWizards.length; hatType++){<br>      int[] hat = new int[hatsOnWizards.length];<br>      int n = wizards-1;<br>      for(int i = 0; i &lt; hat.length; i++){<br>        if(i != hatType){<br>          hat[i] = hats[i];<br>          n -= hats[i];<br>        }<br>      }<br>      hat[hatType] = n;<br>      if(n &lt; 0) continue;<br>      int away = 0;<br>      for(int j = 0; j &lt; hat.length; j++){<br>        if(j == hatType)continue;<br>        away += hat[j] - hatsOnWizards[j];<br>      }<br>      if(n+away+1 &gt; hats[hatType])continue;<br>      ret = min(ret, away+1);<br>    }<br>    return ret == Integer.MAX_VALUE ? -1 : ret;<br>  }<br> <br>}<br> <br>// Powered by PopsEdit<br>// Powered by CodeProcessor<br></td>