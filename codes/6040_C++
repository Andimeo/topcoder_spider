            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;iostream&gt;<br>#include &lt;algorithm&gt;<br>using namespace std;<br> <br>int reach[51];<br>bool graph[51][51];<br> <br>void depth(int,int);<br> <br>class StrangeParticles {<br>  public:<br>  int remain(vector &lt;string&gt; interacts) {<br>    <br>    <br>    for(int i=0; i&lt;interacts.size(); i++) {<br>      for(int j=0; j&lt;interacts.size(); j++) {<br>        if(interacts[i][j] == '+') {<br>          graph[j][i] = true;<br>        }<br>      }<br>    }<br>    <br>    for(int i=0; i&lt;interacts.size(); i++) reach[i] = i;<br>    <br>    <br>    for(int i=0; i&lt;interacts.size(); i++) depth(i,interacts.size());<br>    <br>    <br>    int cnt = 1;<br>    <br>    sort(reach,reach+interacts.size());<br>    <br>    <br>    for(int i=1; i&lt;interacts.size(); i++) if(reach[i]!=reach[i-1]) cnt++;<br>    <br>    return cnt;<br>    <br>  }<br>};<br> <br>void depth(int id, int size) {<br>  for(int j=0; j&lt;size; j++) {<br>    if(graph[id][j] == true &amp; reach[j] != reach[id]) {<br>      reach[j] = reach[id];<br>      depth(j,size);<br>    }<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>