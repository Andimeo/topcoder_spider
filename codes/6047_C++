            // I think it is good to submit wrong solutions sometimes to give others challenging opportunities.<br><br>#include &lt;algorithm&gt;<br>#include &lt;string&gt;<br>using namespace std;<br><br>typedef long long ll;<br><br>#define Size(x) (int(x.size()))<br><br>#line 3 "InverseCollatz.cc"<br><br>class InverseCollatz {<br>  public:<br>  string getForm(string s) {<br>    // !FDI<br>    ll a = 0;<br>    ll b = 1;<br>    for(int t=Size(s)-1; t&gt;=0; t--) {<br>      if(s[t] == 'E') {a*=2; b*=2;}<br>      else {<br>        if(b == 1) b *= 2;<br>        if((a-1) % 3 == 0)  a = (a-1)/3;<br>        else if((a+b-1) % 3 == 0) a = (a+b-1)/3;<br>        else a = (a+b+b-1)/3;<br>        }<br>      }<br>    char buf[60];<br>    sprintf(buf, "%Ldk+%Ld", b, a);<br>    return buf;<br>    }<br>  };<br><br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>