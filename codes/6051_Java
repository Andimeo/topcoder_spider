            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br><br>public class VectorCostSequence<br>{<br>  int max;<br>  int ans;<br><br>  public int getans(int d, int maxlevel)<br>  {<br>    int cur;<br>    int curans = 1;<br>    cur = 1;<br>    d--;<br>    while (cur&lt;1&lt;&lt;maxlevel)<br>    {<br>      if (d&lt;cur+1)<br>        break;<br>      d -= cur+1;<br>      cur++;<br>      curans++;<br>      if (d&lt;cur-2)<br>        return curans+d;<br>      d -= cur-2;<br>      curans += cur-2;<br>      cur += cur-2;<br>    }<br>    if (d&gt;=cur+1)<br>    {<br>      d -= cur+1;<br>      curans++;<br>      curans += 2*(d/(cur+2));<br>      d = d%(cur+2);<br>    }<br>    cur=cur/2;<br>    while (cur&gt;=1)<br>    {<br>      curans+=2*(d/(cur+2));<br>      d=d%(cur+2);<br>      cur=cur/2;<br>    }<br>    return curans+d;<br>  }<br>  public int getSmallest(int d)<br>  {<br>    ans = 1000000000;<br>    max = 0;<br>    for (max = 0; max&lt;30; max++)<br>      ans = Math.min(getans(d, max), ans);<br>    return ans;<br>  }<br>}<br></td>