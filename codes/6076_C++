            #include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;cmath&gt;<br>#include &lt;queue&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstring&gt;<br>#include &lt;cassert&gt;<br>#include &lt;numeric&gt;<br>#include &lt;algorithm&gt;<br> <br>using namespace std;<br> <br>typedef vector&lt;int&gt; vi;<br> <br>#define For(i,a,b) for(int i=(a); i&lt;=(b); i++)<br>#define Ford(i,a,b) for(int i=(a); i&gt;=(b); i--)<br>#define Rep(i,n) for(int i=0; i&lt;(n); i++)<br>#define Size(x) (int(x.size()))<br>#define Repd(i,n) for(int i=(n)-1; i&gt;=0; i--)<br>#define Fil(a) memset(&amp;a,0,sizeof(a))<br>#define Mp(x,y) make_pair(x,y)<br>#define All(v) (v).begin(),(v).end()<br> <br>struct TakeBus<br>{<br>    double expectedTime(vi trip,vi wait)<br>    {<br>        double dp[110];<br>        int mx=*max_element(All(wait));<br>        dp[mx]=1e10;<br>        Repd(i,mx)<br>        {<br>            vector&lt;pair&lt;int,double&gt; &gt; v;<br>            Rep(j,Size(trip)) <br>                if(i&lt;wait[j])<br>                    v.push_back(Mp(trip[j],1.0/(wait[j]-i)));<br>            sort(All(v));<br>            assert(Size(v)&gt;0);<br>            dp[i]=dp[i+1]+1;<br>            double p=1;<br>            double sum=0;<br>            Rep(j,Size(v))<br>            {<br>                sum+=p*v[j].second*v[j].first;<br>                p*=1-v[j].second;<br>                dp[i]=min(dp[i],sum+p*(dp[i+1]+1));<br>            }<br>            printf("dp[%d]==%lf\n",i,dp[i]);<br>        }<br>        return dp[0];<br>    }<br>};<br></td>