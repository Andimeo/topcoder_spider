            import java.util.*;<br><br>public class SpiralNumbers {<br>  public String getPosition(int N) {<br>    int dir = 0;<br>    int r = 0;<br>    int c = 0;<br>    int len = 1;<br>    int odd = 0;<br>    int[] dr = new int[] { 0, 1, 0, -1 };<br>    int[] dc = new int[] { 1, 0, -1, 0 };<br>    int i = N - 1;<br>    while (i &gt;= len) {<br>      i -= len;<br>      r += dr[dir] * len;<br>      c += dc[dir] * len;<br>      dir = (dir + 1) % 4;<br>      if (++odd == 2) {<br>        odd = 0;<br>        len++;<br>      }<br>    }<br>    r += dr[dir] * i;<br>    c += dc[dir] * i;<br>    return "(" + r + "," + c + ")";<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>