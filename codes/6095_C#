            using System;<br>using System.Collections;<br>using math = System.Math;<br> <br>public class SeparateConnections<br>{<br>  public int howMany(string[] mat)<br>  {<br>    int i,j,k;<br>    int n = mat.Length;<br>    int[] max = new int[1&lt;&lt;n];<br>    int ans = 0;<br>    for(i=1;i&lt;1&lt;&lt;n;i++)<br>    {<br>      for(j=0;j&lt;n;j++)<br>        if ( (i&amp;(1&lt;&lt;j))!= 0) break;<br>      for(k=j+1;k&lt;n;k++)<br>        if ((i&amp;(1&lt;&lt;k))!=0)<br>          if ( mat[j][k] =='Y')<br>          {<br>            int v = max[i^(1&lt;&lt;j)^(1&lt;&lt;k)] + 2;<br>            if ( max[i] &lt; v) max[i] = v;<br>          }<br>      if ( ans &lt; max[i]) ans = max[i];<br>    }<br>    return ans;<br>  }<br>}<br></td>