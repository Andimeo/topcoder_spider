            #include&lt;vector&gt;<br>#include&lt;string&gt;<br>#include&lt;memory&gt;<br>#include&lt;queue&gt;<br>using namespace std;<br> <br>bool v[1000000];<br>class SeparateConnections<br>{<br>public:<br>  int howMany(vector &lt;string&gt; mat)<br>  {<br>    int i,j,k;<br>    memset(v,0,sizeof(v));<br>    int n=mat.size ();<br>    v[0]=true;<br>    for(i=0;i&lt;(1&lt;&lt;n);i++)<br>    {<br>      if(!v[i])<br>        continue;<br>      for(j=0;j&lt;n;j++)<br>        for(k=j+1;k&lt;=n-1;k++)<br>        {<br>          if(mat[j][k]!='Y')<br>            continue;<br>          if((i&amp;(1&lt;&lt;j))||(i&amp;(1&lt;&lt;k)))<br>            continue;<br>          v[i+(1&lt;&lt;j)+(1&lt;&lt;k)]=true;<br>        }<br>    }<br>    int res=0;<br>    for(i=0;i&lt;(1&lt;&lt;n);i++)<br>    {<br>      if(!v[i])<br>        continue;<br>      int ii=i,tmp=0;<br>      while(ii)<br>      {<br>        if(ii%2==1)<br>          tmp++;<br>        ii/=2;<br>      }<br>      if(tmp&gt;res)<br>        res=tmp;<br>    }<br>    return res;<br>  }<br>};<br></td>