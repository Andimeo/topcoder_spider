            using System;<br>using System.Text;<br>using System.Collections;<br> <br>public class Taxi<br>{<br>    public double maxDis(int maxX, int maxY, int taxiDis)<br>    {<br>        if (maxX + maxY &lt; taxiDis)<br>            return -1.0;<br> <br> <br>        else<br>        {<br>            int uzunkenar = 0;<br>            int kisakenar = 0;<br>            int maxim = 0;<br> <br>            if (maxY &gt; maxX)<br>                maxim = maxY;<br>            else<br>                maxim = maxX;<br> <br>            if (maxim&gt;=taxiDis)<br>                return Convert.ToDouble(taxiDis);<br> <br>            else<br>            {<br>                uzunkenar = maxim;<br>                kisakenar = taxiDis - maxim;<br>                return Convert.ToDouble(System.Math.Sqrt(System.Math.Pow(uzunkenar, 2) + System.Math.Pow(kisakenar, 2)));<br>            }<br> <br>        }<br>    }<br>}<br></td>