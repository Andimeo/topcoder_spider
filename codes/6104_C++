            #include&lt;iostream&gt;<br>#include&lt;vector&gt;<br>#include&lt;map&gt;<br>#include&lt;string&gt;<br>#include&lt;sstream&gt;<br>#include&lt;cmath&gt;<br>#include&lt;algorithm&gt;<br>using namespace std;<br> <br>//double PI =  3.14159265358979323846;<br> <br> <br>class Taxi {<br>  public:<br>  double maxDis(int maxX, int maxY, int taxiDis) {<br>    double ret=-1.0;<br>    for (int i=0;i&lt;=maxX;i++) {<br>      int j = taxiDis-i;<br>      if (j&gt;=0&amp;&amp;j&lt;=maxY) {<br>        double val = sqrt(1.0*i*i+1.0*j*j);<br>        if (val&gt;ret) ret=val;<br>      }<br>    }<br>    return ret;<br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>