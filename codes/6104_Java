            public class Taxi<br>{<br>    public double maxDis(int maxX, int maxY, int taxiDis)<br>    {<br>        if(maxX+maxY&lt;taxiDis) {<br>            return -1;<br>        }<br>        if(maxX&gt;taxiDis) {<br>            return taxiDis;<br>        }<br>        if(maxY&gt;taxiDis) {<br>            return taxiDis;<br>        }<br>        boolean flagX=true;<br>        if(maxX&lt;maxY) {<br>            flagX=false;<br>        }<br>        if(flagX) {<br>            return Math.sqrt((double)maxX*maxX+(double)(taxiDis-maxX)*(taxiDis-maxX));<br>        }else {<br>            return Math.sqrt((double)maxY*maxY+(double)(taxiDis-maxY)*(taxiDis-maxY));<br>        }<br>        <br>    }}<br></td>