            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br> <br>public class PScores<br>{<br>    public int howMany(int[] nexts, int score)<br>    {<br>        int ret = 0;<br>        for (int i = 0; i &lt; nexts.Length; ++i)<br>        {<br>            int p = i;<br>            bool[] done = new bool[nexts.Length];<br>            for (int j = 0; j &lt; done.Length; ++j)<br>            {<br>                done[j] = false;<br>            }<br>            done[p] = true;<br>            while (true)<br>            {<br>                int newScore = p;<br>                p = nexts[p];                <br>                if (done[p])<br>                {<br>                    if (score == newScore)<br>                    {<br>                        ++ret;<br>                    }<br>                    break;<br>                }<br>                else<br>                {<br>                    done[p] = true;<br>                }<br>            }<br>        }<br>        return ret;<br>    }<br>}<br> <br>// Powered by PopsEdit<br>// Powered by CodeProcessor<br></td>