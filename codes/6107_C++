            #include &lt;cstdlib&gt;<br>#include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#define SZ(x) ((int)(x).size())<br><br>using namespace std;<br><br><br>struct PScores {<br>   int howMany( vector &lt;int&gt; nexts, int score ) { <br>      int ret = 0;<br><br>      for (int i = 0; i &lt; SZ(nexts); ++i){<br>         int p = i;<br>         vector&lt;char&gt; been(SZ(nexts),0);<br><br>         while ( 1 ){<br>            been[p] = 1;<br>            int np = nexts[p];<br>            if ( been[np] ) break;<br>            p = np;<br>         }<br><br>         if ( p == score ) ++ret;<br>      }<br><br><br>      return ret;<br>   }<br><br>   <br> <br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by moj 3.0 beta 7 [modified TZTester]<br>// Powered by CodeProcessor<br></td>