            public class ThreeCardMonte<br>{<br>    public String position(String swaps)<br>    {<br>        String retval;<br>        int pos = 1;<br>        char ch[] = {'L', 'M', 'R'};<br>        for (char c: swaps.toCharArray())<br>        {<br>            if (c == 'L')<br>            {<br>                if (pos == 1)<br>                    pos = 0;<br>                else if (pos == 0)<br>                    pos = 1;<br>            }<br>            if (c == 'R')<br>            {<br>                if (pos == 1)<br>                    pos = 2;<br>                else if (pos == 2)<br>                    pos = 1;<br>            }<br>            if (c == 'E')<br>            {<br>                if (pos == 0)<br>                    pos = 2;<br>                else if (pos == 2)<br>                    pos = 0;<br>            }<br>        }<br>        return ch[pos]+"";<br>    }<br>}<br></td>