            import java.util.*;<br>public class Shuffling {<br>  public int position(int cards, int[] shuffles) {<br>    int pos = 0;<br>    for (int s: shuffles) {<br>      if (s &lt; 0) {<br>        pos = (pos + (cards/2))%cards;<br>        s = -s;<br>      }<br>      if (pos &lt; s || cards-pos &lt;= s) <br>      {}<br>      else if (pos &lt; (cards/2)) {<br>        pos = s + 2*(pos-s) + 1;<br>      }<br>      else {<br>        pos = s + 2*(pos-cards/2);<br>      }<br>    }<br>    return pos;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>