            using System;<br><br>public class ScrabbleBet {<br>  public double estimate(int trials, int games, int winsNeeded, int winChance) {<br>    if (winChance == 100)<br>      return 1.0;<br><br>    double win = ((double) winChance) / 100.0;<br><br>    int cnt = 1;<br>    double prob = 1;<br>    for (int i = 0; i &lt; games; ++i)<br>      prob *= (1 - win);<br><br>    double series = 0;<br>    for (int i = 0; i &lt; winsNeeded; ++i)<br>    {<br>      series += prob * cnt;<br>      prob *= win / (1 - win);<br>      cnt *= (games - i);<br>      cnt /= (i + 1);<br>    }<br><br>    double res = 1;<br>    for (int i = 0; i &lt; trials; ++i)<br>      res *= series;<br>    return 1 - res;<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>