            import java.util.*;<br><br>public class ScrabbleBet {<br><br>    public double c(int n, int m) {<br>        double r = 1;<br>        for (int i = n - m + 1; i &lt;= n; i++) {<br>            r *= i;<br>        }<br>        for (int i = 1; i &lt;= m; i++) {<br>            r /= i;<br>        }<br>        return r;<br>    }<br><br>    public double estimate(int trials, int games, int winsNeeded, int winChance) {<br>        double res = 0;<br><br>        double single_win = winChance * 1.0 / 100;<br>        double single_lose = 1 - single_win;<br><br>        double win = c(games, winsNeeded) * Math.pow(single_win, winsNeeded) * Math.pow(single_lose, games - winsNeeded);<br>        for (int k = winsNeeded + 1; k &lt;= games; k++) {<br>            win += c(games, k) * Math.pow(single_win, k) * Math.pow(single_lose, games - k);<br>        }<br><br>        double lose = 1 - win;<br>        res = Math.pow(lose, trials);<br>        return 1 - res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>