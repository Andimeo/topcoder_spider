            Imports Microsoft.VisualBasic<br>Imports System<br>Imports System.Collections<br>Imports System.Math<br> <br>Public Class BuildBridge<br>    Public Function howManyCards(ByVal D As Integer, ByVal L As Integer) As Integer<br>        Dim i, j, k As Integer<br> <br>        i = 0<br>        Dim dDone As Double = 0<br>        Dim bDone As Boolean = False<br>        Do While bDone = False<br>            i += 1<br>            dDone += 1 / (i * 2)<br>            If (dDone * L) + 0.00000000001 &gt;= D Then bDone = True<br>        Loop<br>        Return i<br> <br>    End Function<br>End Class<br></td>