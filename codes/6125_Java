            import java.util.*;<br><br>public class ApproximateDivision {<br>  public double quotient(int a, int b, int terms) {<br>    double res = 0;<br>    int t = 0;<br>    for (int i = 0; ; i++)<br>      if (1 &lt;&lt; i &gt;= b) {<br>        t = 1 &lt;&lt; i;<br>        break;<br>      }<br>    double c = t - b;<br>    double num = 1;<br>    double den = t;<br>    for (int i = 0; i &lt; terms; i++) {<br>      res += num / den;<br>      num *= c;<br>      den *= t;<br>    }<br>    return res * a;<br>  }<br><br><br>}<br><br><br><br><br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>