            using System;<br>using System.Collections;<br><br>public class DrawTree {<br>  ArrayList result;<br>  int[] parents;<br>  string[] names;<br><br>  public string[] draw(int[] parents, string[] names) {<br>    result = new ArrayList();<br>    this.parents = parents;<br>    this.names = names;<br><br>    for (int i = 0; i &lt; parents.Length; ++i)<br>      if (parents[i] == -1)<br>        drawSubtree(i, "  ");<br><br>    string[] res = new string[result.Count];<br>    result.CopyTo(res);<br>    return res;<br>  }<br><br>  private void drawSubtree(int root, string prefix)<br>  {<br>    result.Add(prefix.Substring(0, prefix.Length - 2) + "+-" + names[root]);<br>    ArrayList children = new ArrayList();<br>    for (int i = 0; i &lt; parents.Length; ++i)<br>      if (parents[i] == root)<br>        children.Add(i);<br><br>    for (int i = 0; i &lt; children.Count; ++i)<br>    {<br>      int child = (int) children[i];<br>      bool last = i == children.Count - 1;<br>      if (last)<br>        drawSubtree(child, prefix + "  ");<br>      else<br>        drawSubtree(child, prefix + "| ");<br>    }<br>  }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>