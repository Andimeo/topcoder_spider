            import java.util.*;<br>import static java.lang.Math.*;<br> <br>public class DrawTree {<br>  List&lt;String&gt; ls = new ArrayList&lt;String&gt;();<br>  int[] par;<br>  String[] ns;<br>  public String[] draw(int[] parents, String[] names) {<br>    par = parents; ns = names;<br>    loop(-1, "", "");<br>    return ls.toArray(new String[0]);<br>  }<br>  public void loop(int up, String pfx, String pf2) {<br>    int n = 0;<br>    for(int i=par.length;i--&gt;0;) if(par[i]==up) n++;<br>    for(int i=0; i&lt;par.length;i++) {<br>      if(par[i] != up) continue;<br>      n--;<br>      ls.add(pfx + "+-" + ns[i]);<br>      //pfx = pf2;<br>      loop(i, pfx + (n==0 ? "  " : "| "), "?");<br>    }<br>  }<br>}<br></td>