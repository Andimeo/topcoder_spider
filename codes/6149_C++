            #line 2 "Manhattan.cc"<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;stdio.h&gt;<br>#include &lt;math.h&gt;<br>#include &lt;string.h&gt;<br>#include &lt;ctype.h&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;stdlib.h&gt;<br>using namespace std;<br> <br>long long min1s, min1i, max1s, max1i;<br>long long min2s, min2i, max2s, max2i;<br> <br>vector&lt;int&gt; answer(int a, int b)<br>{<br>    vector&lt;int&gt; result;<br>    if (a == 0 &amp;&amp; b == 0) {<br>  result.push_back(0);<br>  result.push_back(1);<br>  return result;<br>    }<br>    result.push_back(a &lt;? b);<br>    result.push_back(a &gt;? b);<br>    return result;<br>}<br> <br>class Manhattan {<br>public:<br>    vector &lt;int&gt; furthestPair(int n, int a, int b, int m) {<br>  long long x = 0;<br>  long long y;<br>  for (int i = 0; i &lt; n; i++) {<br>      y = ((long long)a * x + (long long)b) % (long long)m;<br>      if (i == 0) {<br>    min1s = max1s = x + y; min1i = max1i = 0;<br>    min2s = max2s = x - y; min2i = max2i = 0;<br>      } else {<br>    long long s1 = x + y;<br>    if (min1s &gt; s1) {<br>        min1s = s1;<br>        min1i = i;<br>    }<br>    if (max1s &lt; s1) {<br>        max1s = s1;<br>        max1i = i;<br>    }<br>    long long s2 = x - y;<br>    if (min2s &gt; s2) {<br>        min2s = s2;<br>        min2i = i;<br>    }<br>    if (max2s &lt; s2) {<br>        max2s = s2;<br>        max2i = i;<br>    }<br>      }<br>      x = ((long long)a * y + (long long)b) % (long long)m;<br>  }<br>  if (max1s - min1s &gt; max2s - min2s)<br>      return answer(min1i, max1i);<br>  else if (max2s - min2s &gt; max1s - min1s)<br>      return answer(min2i, max2i);<br>  else if ((min1i &lt;? max1i) &lt; (min2i &lt;? max2i))<br>      return answer(min1i, max1i);<br>  else if ((min1i &lt;? max1i) &gt; (min2i &lt;? max2i))<br>      return answer(min2i, max2i);<br>  else if ((min1i &gt;? max1i) &lt; (min2i &gt;? max2i))<br>      return answer(min1i, max1i);<br>  else<br>      return answer(min2i, max2i);<br>    }<br>};<br> <br> <br> <br>// Powered by FileEdit<br></td>