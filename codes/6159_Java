            import java.util.*;<br>public class CyclesInPermutations {<br>  public int maxCycle(int[] board) {<br>    int x[]=new int[board.length];<br>    int no=0,no1=0,c=0;<br><br>    for(int i=0;i&lt;board.length;i++)<br>    {<br>      x[i]=0;<br>      board[i]-=1;<br>    }<br>    for(int i=0;i&lt;board.length;i++)<br>    {<br>      no1=i;<br>    for(int j=0;j&lt;board.length;j++)<br>    {<br>      no=board[no];<br>      if(no1!=no)<br>        x[i]=x[i]+1;<br><br>      else<br>      {<br>        no=i+1;<br>      break;<br>      }<br><br>    }<br>    }<br>    Arrays.sort(x);<br>    return x[board.length-1]+1;<br>  }<br>}<br><br><br>// Powered by FileEdit<br></td>