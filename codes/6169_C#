            using System;<br>using System.Collections;<br><br>public class OptimalQueues <br>{<br>  public int minWaitingTime(int[] clientArrivals, int tellerCount, int serviceTime) <br>  {<br>    Array.Sort(clientArrivals);<br>    Array.Reverse(clientArrivals);<br>    int biggest = 0;<br>    int index = 0;<br>    int done = 1;<br>    foreach(int i in clientArrivals)<br>    {<br>      biggest = Math.Max(biggest, done * serviceTime + i);<br>      index++;<br>      if(index == tellerCount)<br>      {<br>        index = 0;<br>        done++;<br>      }<br>    }<br>    return biggest;<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>