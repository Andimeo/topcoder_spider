            Imports Microsoft.VisualBasic<br>Imports System<br>Imports System.Collections<br>Imports System.Math<br> <br>Public Class OptimalQueues<br>    Public Function minWaitingTime(ByVal clientArrivals As Integer(), ByVal tellerCount As Integer, ByVal serviceTime As Integer) As Integer<br>        Dim i, j, k, l As Integer<br> <br>        System.Array.Sort(clientArrivals)<br>        System.Array.Reverse(clientArrivals)<br>        Dim iMax As Integer = 0<br> <br>        For i = 0 To clientArrivals.GetUpperBound(0)<br>            iMax = Max(iMax, clientArrivals(i) + (i \ tellerCount) * serviceTime + serviceTime)<br>        Next<br>        Return iMax<br>    End Function<br>End Class<br></td>