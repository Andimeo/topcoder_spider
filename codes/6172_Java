            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class IndicatorMotionReverse<br>{<br>  public String getMinProgram(String[] actions)<br>  {<br>    String all = "";<br>    for (int i=0; i&lt;actions.length; i++)<br>      all += actions[i];<br>    String answer = "";<br>    DecimalFormat fmt = new DecimalFormat("00");<br>    for (int i=1; i&lt;all.length();)<br>    {<br>      int change = getChange(all.charAt(i), all.charAt(i-1));<br>      if (change &lt; 0)<br>        change += 4;<br>      int count = 0;<br>      for (; i&lt;all.length() &amp;&amp; getChange(all.charAt(i), all.charAt(i-1)) == change; i++)<br>        count++;<br>      char c = "SLFR".charAt(change);<br>      String cur = "";<br>      while (count &gt; 99)<br>      {<br>        cur = c + "99" + cur;<br>        count-= 99;<br>      }<br>      cur = c + fmt.format(count) + cur;<br>      answer += cur;<br>      if (answer.length() &gt; 100)<br>        return answer.substring(0, 97) + "...";<br>    }<br>    return answer;<br>  }<br>  <br>  int getChange(char cnew, char cold)<br>  {<br>    int change = "-/|N".indexOf(cnew)-"-/|N".indexOf(cold);<br>    if (change &lt; 0)<br>      change += 4;<br>    return change;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>