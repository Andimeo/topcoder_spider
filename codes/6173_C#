            using System;<br>using System.Collections;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class IndicatorMotion<br>{<br>    public string getMotion(string pr, char startState)<br>    {<br>        char[] c = new char[] {'-', '\\', '|', '/'};<br> <br>        int s = 0;<br>        for (int i = 0; i&lt;c.Length; i++)<br>            if (c[i] == startState)<br>            {<br>                s = i;<br>                break;<br>            }<br> <br>        string ret = "" + startState;<br> <br>        for (int i = 0; i&lt;pr.Length; i++)<br>        {<br>            int inc = 0;<br>            switch (pr[i])<br>            {<br>                case 'F':inc = 2; break;<br>                case 'L':inc = 3; break;<br>                case 'R':inc = 1; break;<br>            }<br> <br>            i++;<br>            int nums = pr[i++] - '0';<br>            nums = nums*10 + (pr[i]-'0');<br> <br>            while (nums &gt; 0)<br>            {<br>                s += inc;<br>                s %= 4;<br>                ret += c[s];<br>                nums--;<br>            }<br>       }<br> <br>        return ret;<br>    }<br>}<br></td>