            public class IndicatorMotion {<br><br>    public String getMotion(String program, char startState) {<br>        String result = "" + startState;<br>        for(int i = 0; i &lt; program.length(); i+=3){<br>            char pp = program.charAt(i);<br>            int dd = Integer.parseInt(program.substring(i + 1, i + 3));<br>            while(dd &gt; 0) {<br>                startState = turn(pp, startState);<br>                result += startState;<br>                dd--;<br>            }<br>        }<br>        return result;<br>    }<br><br>    private char turn(char pp, char c) {<br>        switch(pp) {<br>            case 'L':<br>                if (c == '|') return '\\';<br>                if (c == '\\') return '-';<br>                if (c == '-') return '/';<br>                if (c == '/') return '|';<br>            case 'R':<br>                if (c == '|') return '/';<br>                if (c == '\\') return '|';<br>                if (c == '/') return '-';<br>                if (c == '-') return '\\';<br>            case 'F':<br>                if (c == '|') return '-';<br>                if (c == '-') return '|';<br>                if (c == '\\') return '/';<br>                if (c == '/') return '\\';<br>        }<br>        return c;<br>    }<br><br> // ---------------------------------------- //<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>