            using System;<br><br>public class LadderPermutation {<br>  public int[] createLadder(int n, int m, int k) {<br>    int[] am = new int[m];<br>    am[m - 1] = k;<br>    int cnt = n - k;<br>    if (cnt &lt; m - 1)<br>      return new int[0];<br>    for (int i = m - 2; i &gt;= 0; --i)<br>    {<br>      am[i] = Math.Min(k, cnt - i);<br>      cnt -= am[i];<br>    }<br>    if (cnt &gt; 0)<br>      return new int[0];<br>    int[] res = new int[n];<br>    int cur = 0;<br>    int at = 0;<br>    for (int i = 0; i &lt; m; ++i)<br>    {<br>      for (int j = 0; j &lt; am[i]; ++j)<br>        res[at++] = cur + am[i] - j;<br>      cur += am[i];<br>    }<br>    return res;<br>  }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>