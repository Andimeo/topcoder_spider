            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br><br>public class LadderPermutation<br>{<br>  public int[] createLadder(int n, int m, int k)<br>  {<br>            int[] ans;<br>            if (m+k&gt;n+1||k*m&lt;n)<br>            {<br>                ans = new int[0];<br>                return ans;            <br>            } <br>            ans = new int[n];<br>            int i, j, s;<br>            j = 0;s = 0;<br>            while (s&lt;m)<br>            {<br>                int t = k;<br>                if (t&gt;n-j)<br>                    t = n-j;<br>                while ( ((m-s-1)*k&gt;=(n-j-t+1)) &amp; (t&gt;1) )<br>                    t--;<br>                for (i=0; i&lt;t; i++)<br>                    ans[i+j] = (t-i)+j;<br>                j+=t;<br>                s++;<br>            }<br>            return ans;<br>  }<br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>