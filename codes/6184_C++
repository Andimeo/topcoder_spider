            #include&lt;stdio.h&gt;<br> <br>long long i,n,p,t,ans[10000],num,flag;<br> <br>struct IntegerPalindrome<br>{<br>  long long findByIndex(int n)<br>  {<br>    n++;<br>    long long ret=0;<br>    p=18;t=1;<br>    while(n&gt;p){n-=p;p*=10;t*=10;}<br>    p/=2;<br>    if(n&gt;p) {n-=p;flag=1;}<br>    else flag=0;<br>    num=t-1+n;<br>    p=0;<br>    while(num&gt;0)<br>    {<br>      p++;<br>      ans[p]=num%10;<br>      num/=10;<br>    }<br>    for(i=1;i&lt;=p;i++)<br>      ret=ret*10+ans[p-i+1];<br>    if(flag==0)<br>      for(i=2;i&lt;=p;i++)<br>        ret=ret*10+ans[i];<br>    else<br>      for(i=1;i&lt;=p;i++)<br>        ret=ret*10+ans[i];<br>    return ret;<br>  }<br>};<br></td>