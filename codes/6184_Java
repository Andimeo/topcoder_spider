            import java.util.*;<br> <br>public class IntegerPalindrome {<br>    public long findByIndex(int K) {<br>        long t = 9;<br>        long n = K;<br>        int d = 0;<br>        while (n &gt;= t) {<br>            n -= t;<br>            if (d % 2 == 1) {<br>                t *= 10;<br>            }<br>            d++;<br>        }<br>        int m = 1;<br>        for (int i = 0; i &lt; d / 2; i++) {<br>            m *= 10;<br>        }<br>        m += n;<br>        String s = Long.toString(m);<br>        String z = "";<br>        for (int i = s.length() - (d % 2 == 0 ? 2 : 1); i &gt;= 0; i--) {<br>            z += s.charAt(i);<br>        }<br>        return Long.parseLong(s + z);<br>    }<br> <br> <br>}<br> <br> <br>// Powered by PopsEdit<br> <br>// Powered by CodeProcessor<br></td>