            using System;<br>using System.Collections;<br> <br>public class PolyMove<br>{<br>  double t(double[] x, int start, int stop)<br>  {<br>    double max0 = 0;<br>    double max1 = 0;<br>    <br>    for (int i = start; i &lt; stop; ++i)<br>    {<br>      double nmax0 = Math.Max (max0, max1);<br>      double nmax1 = max0 + x[i];<br>      <br>      max0 = nmax0;<br>      max1 = nmax1;<br>    }<br>    <br>    return Math.Max (max0, max1);<br>  }<br>  <br>  <br>  public double addedArea(int[] x, int[] y)<br>  {<br>    int n = x.Length;<br>    <br>    double[] inc = new double[n];<br>    <br>    for (int i = 0; i &lt; n; ++i)<br>    {<br>      int j = (i + n - 1) % n;<br>      int k = (i + 1 ) % n;<br>      <br>      inc[i] = Math.Sqrt( (double)((x[j] - x[k]) * (x[j] - x[k]) + (y[j] - y[k]) * (y[j] - y[k]))) / 2.0;<br>    }<br>    <br>    return Math.Max (t(inc, 0, n-1), t(inc, 1, n));<br>  }<br>}<br> <br> <br>// Powered by FileEdit<br></td>