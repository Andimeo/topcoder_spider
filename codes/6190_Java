            import java.util.*;<br> <br>public class PolyMove {<br>    public double addedArea(int[] x, int[] y) {<br>        int n = x.length;<br>        double[] d = new double[n];<br>        for (int i = 0; i &lt; n; i++) {<br>            d[i] = Math.hypot(x[i] - x[(i + 2) % n], y[i] - y[(i + 2) % n]);<br>        }<br> <br>        double[] v = new double[n];<br>        double[] u = new double[n];<br>        v[0] = d[0];<br>        u[0] = 0;<br>        v[1] = Math.max(d[1], v[0]);<br>        u[1] = Math.max(d[1], u[0]);<br>        for (int i = 2; i &lt; n - 1; i++) {<br>            v[i] = Math.max(v[i - 1], v[i - 2] + d[i]);<br>            u[i] = Math.max(u[i - 1], u[i - 2] + d[i]);<br>        }<br>        u[n - 1] = Math.max(u[n - 2], u[n - 3] + d[n - 1]);<br> <br> <br>        return Math.max(v[n - 2], u[n - 1]) / 2;<br>    }<br> <br> <br>}<br> <br> <br>// Powered by PopsEdit<br> <br>// Powered by CodeProcessor<br></td>