            using System;<br><br>public class CyclicGame {<br>  const int NUM_ITER = 100000;<br>  <br>  public double estimateBank(int[] cells) {<br>    double[] mw = new double[cells.Length];<br>    double[] nmw = new double[cells.Length];<br>    for (int iter = 0; iter &lt; NUM_ITER; ++iter)<br>    {<br>      for (int i = 0; i &lt; cells.Length; ++i)<br>      {<br>        double s = 0;<br>        for (int j = 0, k = (i + 1) % cells.Length; j &lt; 6; ++j, k = (k + 1) % cells.Length)<br>          s += cells[k] + mw[k];<br>        if (s &gt; 0)<br>          nmw[i] = s / 6;<br>      }<br>      double[] tmp = nmw;<br>      nmw = mw;<br>      mw = tmp;<br>    }<br>    return mw[0];<br>  }<br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>