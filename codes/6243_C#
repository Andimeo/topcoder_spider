            using System;<br>using System.Collections;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class ContestCoordinator<br>{<br>    public double bestAverage(int[] scores)<br>    {<br>        Array.Sort(scores);<br>        double maxavg = 0;<br>            <br>        for (int k = 0; k &lt;= scores.Length; k++)<br>        {<br>            double tot = 0;<br>            double cnt = 0;<br>            for (int i = k; i &lt; scores.Length - k; i++)<br>            {<br>                tot += scores[i];<br>                cnt++;<br>            }<br>           if (cnt&gt;0) maxavg = Math.Max(maxavg, tot / cnt);<br>        }<br>        return maxavg;<br>    }<br> <br>}<br></td>