            import java.util.*;<br>public class ContestCoordinator {<br>  public double bestAverage(int[] scores) {<br>    double res = Double.MIN_VALUE;<br>    Arrays.sort(scores);<br>    <br>    for (int k = 0; k &lt; scores.length/2 + 1; k++) {<br>      int s = k;<br>      int e = scores.length - k;<br>      if (s &lt; e) {<br>        double sum = 0;<br>        for (int i = s; i &lt; e; i++) {<br>          sum += scores[i];<br>        }<br>        double avg = sum / (e - s);<br>        res = Math.max(res, avg);<br>      }<br>    }<br>      <br>    return res;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>