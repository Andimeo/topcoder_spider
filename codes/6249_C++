            #include &lt;algorithm&gt;<br>#include &lt;cstring&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br><br>using namespace std;<br><br>string a;<br>string b;<br>int X;<br><br>const int inf = 1000000000;<br><br>int memo[51][51][2][2];<br><br>class Alignment {<br>public:<br><br>  int rec( int i, int j, int xa, int xb ) {<br>    char A, B;<br>    if( i == a.size() ) A = '@'; else A = a[i];<br>    if( j == b.size() ) B = '#'; else B = b[j];<br><br>    if( A == '@' &amp;&amp; B == '#' ) return 0;<br>    <br>    int &amp; ret = memo[i][j][xa][xb];<br>    if( ret &gt;= 0 ) return ret;<br><br>    ret = inf;<br>    if( A == B ) ret &lt;?= rec( i+1, j+1, 0, 0 );<br>    <br>    if( A != '@' ) ret &lt;?= (xb?1:X+1) + rec( i+1, j, xa, 1 );<br>    if( B != '#' ) ret &lt;?= (xa?1:X+1) + rec( i, j+1, 1, xb );<br>    <br>    return ret;<br>  }<br><br>  int align(string A, string B, int x) {       <br>    memset( memo, -1, sizeof memo );<br>    a = A;<br>    b = B;<br>    X = x;<br>    return rec( 0, 0, 0, 0 );<br>  }<br>};<br><br><br>// Powered by FileEdit<br></td>