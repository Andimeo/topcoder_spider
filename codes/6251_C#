            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br> <br>public class Segments<br>{<br>    public string intersection(int[] s1, int[] s2)<br>    {<br>        byte[,] b = new byte[2010, 2010];<br>        for(int i = Math.Min(s1[0], s1[2]); i &lt;= Math.Max(s1[0], s1[2]); i++)<br>            for(int j = Math.Min(s1[1], s1[3]); j &lt;= Math.Max(s1[1], s1[3]); j++)<br>            {<br>                b[i + 1000, j + 1000]++;<br>            }<br>        for (int i = Math.Min(s2[0], s2[2]); i &lt;= Math.Max(s2[0], s2[2]); i++)<br>            for (int j = Math.Min(s2[1], s2[3]); j &lt;= Math.Max(s2[1], s2[3]); j++)<br>            {<br>                b[i + 1000, j + 1000]++;<br>            }<br> <br>        int[] x = new int[3];<br>        for (int i = 0; i &lt; 2010; i++)<br>            for (int j = 0; j &lt; 2010; j++)<br>                x[b[i, j]]++;<br> <br>        if (x[2] &gt; 1)<br>            return "SEGMENT";<br>        if (x[2] == 1)<br>            return "POINT";<br> <br>        return "NO";<br>    }<br>}<br></td>