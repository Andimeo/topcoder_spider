            public class Segments<br>{<br>    public String intersection (int[] s1, int[] s2)<br>    {<br>        s1 = norm (s1);<br>        s2 = norm (s2);<br>        <br>        int x1 = Math.max (s1 [0], s2 [0]);<br>        int y1 = Math.max (s1 [1], s2 [1]);<br>        int x2 = Math.min (s1 [2], s2 [2]);<br>        int y2 = Math.min (s1 [3], s2 [3]);<br>        <br>        if (x1 == x2 &amp;&amp; y1 == y2)<br>            return "POINT";<br>        <br>        if (x1 &lt;= x2 &amp;&amp; y1 &lt;= y2)<br>            return "SEGMENT";<br>        <br>        return "NO";<br>    }<br>    <br>    public int [] norm (int [] x)<br>    {<br>        return new int [] {Math.min (x [0], x [2]), Math.min (x [1], x [3]), Math.max (x [0], x [2]), Math.max (x [1], x [3])};<br>    }<br>}<br></td>