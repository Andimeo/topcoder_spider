            Imports System.Math<br>Public Class Segments<br>    Public Function intersection(ByVal s1 As Integer(), ByVal s2 As Integer()) As String<br>        Dim grid(2001, 2001) As Boolean<br>        Dim i, j As Integer<br>        If s1(0) = s1(2) Then<br>            For i = Min(s1(1), s1(3)) To Max(s1(1), s1(3))<br>                grid(1000 + s1(0), 1000 + i) = True<br>            Next<br>        Else<br>            For i = Min(s1(0), s1(2)) To Max(s1(0), s1(2))<br>                grid(1000 + i, 1000 + s1(1)) = True<br>            Next<br> <br>        End If<br> <br>        Dim count As Integer = 0<br>        If s2(0) = s2(2) Then<br>            For i = Min(s2(3), s2(1)) To Max(s2(1), s2(3))<br>                If grid(1000 + s2(0), 1000 + i) Then<br>                    count += 1<br>                    If count &gt;= 2 Then<br>                        Return "SEGMENT"<br>                    End If<br>                End If<br>            Next<br>        Else<br>            For i = Min(s2(2), s2(0)) To Max(s2(0), s2(2))<br>                If grid(1000 + i, 1000 + s2(1)) Then<br>                    count += 1<br>                    If count &gt;= 2 Then<br>                        Return "SEGMENT"<br>                    End If<br>                End If<br>            Next<br>        End If<br>        If count = 0 Then<br>            Return "NO"<br>        Else<br>            Return "POINT"<br>        End If<br> <br>    End Function<br>End Class<br></td>