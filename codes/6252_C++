            #include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cmath&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>using namespace std;<br><br>class FountainOfLife {<br>public:<br>    double elixirOfDeath( int elixir, int poison, int pool ) {<br>        if ( elixir &gt;= poison ) return -1.0;<br>        return ( double( pool ) / ( poison - elixir ) );<br>    <br>    <br>    <br>    <br>    }<br>    <br><br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>