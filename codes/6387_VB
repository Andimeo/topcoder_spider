            Imports Microsoft.VisualBasic<br>Imports System<br>Imports System.Collections<br>Imports System.Collections.Generic<br>Imports System.Text<br> <br>Public Class XBallGame<br>    Class Player<br>        Public name As String<br>        Public thispos As String<br>        Public positions As List(Of String)<br> <br>        Private Function getPos(ByVal s As String) As String()<br>            Dim np() As String = s.Split("-")<br>            Return New String() {np(0), np(1)}<br>        End Function<br> <br>        Public Sub New(ByVal strNamePos As String)<br>            Dim np() As String = getPos(strNamePos)<br>            Me.name = np(0)<br>            Me.positions = New List(Of String)<br>            Me.thispos = np(1)<br>        End Sub<br>    End Class<br> <br>    Public Function newStatistics(ByVal placeboard As String()) As String()<br>        Dim n As Integer = placeboard.GetUpperBound(0)<br>        Dim ans(n) As String<br>        Dim P(n) As Player<br> <br>        For i As Integer = 0 To n<br>            Dim b As String = placeboard(i)<br>            P(i) = New Player(b)<br>        Next<br> <br>        For i As Integer = 0 To n<br>            For j As Integer = 0 To n<br>                If i = j Then Continue For<br>                If P(i).name.Equals(P(j).name) Then<br>                    P(i).positions.Add(P(j).thispos)<br>                End If<br>            Next<br>        Next<br> <br>        For i As Integer = 0 To n<br>            P(i).positions.Sort()<br>            Dim aPos() As String = P(i).positions.ToArray()<br>            Dim strPos As String = P(i).thispos<br> <br>            For j As Integer = 0 To aPos.GetUpperBound(0)<br>                strPos += "," + aPos(j)<br>            Next<br>            ans(i) = String.Format("{0}-{1}", P(i).name, strPos)<br>        Next<br> <br>        Return ans<br>    End Function<br>End Class<br></td>