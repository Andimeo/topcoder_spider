            using System;<br>using System.Collections;<br>public class CityBuses {<br>  int max(int x, int y) { return x &gt; y ? x : y; }<br>        int abs(int x) { return x &gt; 0 ? x : -x;  }<br>        public int maximumFare(string[] O) {<br>            int m = O.Length;<br>            int n = O[0].Length;<br>            int mx = 0;<br>            for (int i = 0; i &lt; m; i++)<br>            {<br>                for (int j = 0; j &lt; n; j++)<br>                    if ( O[i][j] =='B' )<br>                {<br>                        for(int x = 0 ; x &lt; m ; x++)<br>                            for(int y = 0 ; y &lt; n ; y++)<br>                                if (O[x][y] == 'B') {<br>                                    mx = max(mx, abs(x - i) + abs(y - j));<br>                                }<br>                    <br>                }<br>            }<br> <br>            return mx;<br>      }<br>}<br> <br>// Powered by PopsEdit<br></td>