            #include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cmath&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>using namespace std;<br><br>#define FORC( it, V ) for( __typeof( (V).begin() ) it = (V).begin(); it != (V).end(); ++it )<br><br>class CityBuses {<br>public:<br>    template&lt; typename T &gt; inline T my_abs( T x ) { return ( ( x &gt; 0 ) ? x : -x ); } <br>    int maximumFare( vector &lt;string&gt; blocks ) {<br>        int sol = 0;<br>        for( int i = 0; i &lt; ( int )blocks.size(); ++i ) <br>            for( int j = 0; j &lt; ( int )blocks[i].size(); ++j ) <br>                for( int k = 0; k &lt; ( int )blocks.size(); ++k ) <br>                    for( int l = 0; l &lt; ( int )blocks[k].size(); ++l ) <br>                        if ( blocks[i][j] == 'B' &amp;&amp; blocks[k][l] == 'B' )<br>                            sol = max( sol, my_abs( i - k ) + my_abs( j - l ) );<br>        return sol;<br>                <br>    <br>    <br>    <br>    <br>    }<br>    <br><br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>