            import java.util.*;<br>import java.lang.*;<br><br>public class CityBuses {<br>public int maximumFare(String[] b) {<br>  int ans = 0;<br>  int i, j, ii, jj;<br>  int n = b.length;<br>  int m = b[0].length();<br>  for (i=0; i&lt;n; i++) for (j=0; j&lt;m; j++) if (b[i].charAt(j)=='B')<br>  for (ii=0; ii&lt;n; ii++) for (jj=0; jj&lt;m; jj++) if (b[ii].charAt(jj)=='B')  <br>    if (i!=ii || j!=jj)<br>      ans = Math.max(ans, Math.abs(i-ii) + Math.abs(j-jj));<br>  return ans;<br>}};<br></td>