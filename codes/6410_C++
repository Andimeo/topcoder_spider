            #include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;math.h&gt;<br>#include &lt;sstream&gt;<br>using namespace std;<br><br>class Cannibals<br>{<br>public:<br>  int ans[102][102][2];<br>  int q[20010][3];<br>  int minCrossings(int M, int C, int R)<br>  {<br>    //cout&lt;&lt;"h"&lt;&lt;endl;<br>    for(int i=0;i&lt;=M;i++)<br>      for(int j=0;j&lt;=C;j++)<br>  for(int k=0;k&lt;2;k++)<br>    ans[i][j][k]=-1;<br>    ans[0][0][0]=0;<br>    q[0][0]=0;<br>    q[0][1]=0;<br>    q[0][2]=0;<br>    int r=0,w=1;<br>    //cout&lt;&lt;r&lt;&lt;" "&lt;&lt;w&lt;&lt;endl;<br>    while(r&lt;w)<br>      {<br>  int m=q[r][0];<br>  int c=q[r][1];<br>  int b=q[r][2];<br>  r++;<br>  for(int ma=0;ma&lt;=R;ma++)<br>    for(int ca=0;ca+ma&lt;=R;ca++)<br>      {<br>        if(ma==0 &amp;&amp; ca==0) continue;<br>        int t1=m,t2=c;<br>        if(b==1) t1-=ma,t2-=ca;<br>        else t1+=ma,t2+=ca;<br>        if(t1&lt;0 || t2&lt;0) continue;<br>        if(t1&gt;M || t2&gt;C) continue;<br>        if(t1!=0 &amp;&amp; t2&gt;t1) continue;<br>        t1=M-t1;t2=C-t2;<br>        if(t1!=0 &amp;&amp; t2&gt;t1) continue;<br>        t1=M-t1;t2=C-t2;<br>        //cout&lt;&lt;t1&lt;&lt;" "&lt;&lt;t2&lt;&lt;" "&lt;&lt;b&lt;&lt;" "&lt;&lt;ans[t1][t2][1-b]&lt;&lt;endl;<br>        if(ans[t1][t2][1-b]==-1)<br>    {<br>      q[w][0]=t1;<br>      q[w][1]=t2;<br>      q[w][2]=1-b;<br>      w++;<br>      ans[t1][t2][1-b]=ans[m][c][b]+1;<br>      //      cout&lt;&lt;t1&lt;&lt;" "&lt;&lt;t2&lt;&lt;" "&lt;&lt;ans[t1][t2][1-b]&lt;&lt;endl;<br>    }<br>      }<br>      }<br>    return ans[M][C][1];<br>  }<br><br><br><br>};<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>