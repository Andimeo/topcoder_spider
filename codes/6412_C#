            using System;<br><br>public class Conditional {<br>  public double probability(int nDice, int maxSide, int v, int theSum) {<br>    double[] amountWithout = new double[nDice * maxSide + 1];<br>    double[] amountWith = new double[nDice * maxSide + 1];<br>    amountWithout[0] = 1;<br>    for (int i = 0; i &lt; nDice; ++i)<br>      for (int k = nDice * maxSide; k &gt;= 0; --k)<br>      {<br>        amountWith[k] = 0;<br>        amountWithout[k] = 0;<br>        for (int j = 1; j &lt;= Math.Min(maxSide, k); ++j)<br>        {<br>          if (j == v)<br>          {<br>            amountWith[k] += amountWithout[k - j];<br>            amountWith[k] += amountWith[k - j];<br>          } <br>          else<br>          {<br>            amountWithout[k] += amountWithout[k - j];<br>            amountWith[k] += amountWith[k - j];<br>          }<br>        }<br>      }<br><br>    double s1 = 0;<br>    for (int i = theSum; i &lt;= nDice * maxSide; ++i)<br>      s1 += amountWith[i];<br>    double s2 = 0;<br>    for (int i = 0; i &lt;= nDice * maxSide; ++i)<br>      s2 += amountWith[i];<br>    return s1/s2;<br>  }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>