            // Be the MAN!!!!<br>// Challenge it!!!!<br>import java.util.*;<br><br>public class Conditional {<br>  public double probability(int nDice, int maxSide, int v, int theSum) {<br>        int m = maxSide * nDice;<br>        double d[][] = new double[m + 1][2];<br>        d[0][0] = 1;<br>        d[0][1] = 0;<br>        for (int i = 0; i &lt; nDice; i++) {<br>            double dd[][] = new double[m + 1][2];<br>            for (int j = 1; j &lt;= maxSide; j++) {<br>                for (int k = 0; k &lt;= m; k++) if (d[k][0] &gt; 0) {<br>                    if (j == v) {<br>                        dd[k + j][1] += d[k][0] / maxSide;<br>                    } else {<br>                        dd[k + j][0] += d[k][0] / maxSide;<br>                    }<br>                }<br>                for (int k = 0; k &lt;= m; k++) if (d[k][1] &gt; 0) {<br>                    dd[k + j][1] += d[k][1] / maxSide;<br>                }<br>            }<br>            d = dd;<br>        }<br>        double res = 0;<br>        for (int i = theSum; i &lt;= m; i++) res += d[i][1];<br>        double q = (1 - Math.pow((maxSide - 1.0)/maxSide, nDice));<br>        return res / q;<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>