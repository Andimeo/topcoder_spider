            public class TroytownKeeper<br>{<br> <br>  private final char wall = '#';<br>  private final char empty = '.';<br> <br>  public int limeLiters(String[] maze)<br>  {<br>    int walls = 0;<br>    boolean[][] checked = new boolean[maze.length][maze[0].length()];<br>    for(int c=0; c&lt;maze[0].length(); c++)<br>      if(maze[0].charAt(c) == wall)<br>        walls++;<br>      else<br>        walls+=countInnerWalls(0,c,checked,maze);<br>    for(int c=0; c&lt;maze[0].length(); c++)<br>      if(maze[maze.length-1].charAt(c) == wall)<br>        walls++;<br>      else<br>        walls+=countInnerWalls(maze.length-1,c,checked,maze);<br>    for(int r=0; r&lt;maze.length; r++)<br>      if(maze[r].charAt(0) == wall)<br>        walls++;<br>      else<br>        walls+=countInnerWalls(r,0,checked,maze);<br>    for(int r=0; r&lt;maze.length; r++)<br>      if(maze[r].charAt(maze[r].length()-1) == wall)<br>        walls++;<br>      else<br>        walls+=countInnerWalls(r,maze[r].length()-1,checked,maze);<br>    return walls;<br>  }<br>  <br>  private int countInnerWalls(int r, int c, boolean[][] checked, String[] maze)<br>  {<br>    if(r&lt;checked.length &amp;&amp; r&gt;=0 &amp;&amp; c&lt;checked[r].length &amp;&amp; c&gt;=0 &amp;&amp; checked[r][c]==false &amp;&amp; maze[r].charAt(c)=='.')<br>    {<br>      checked[r][c] = true;<br>      return countInnerWalls(r+1,c,checked,maze)+countInnerWalls(r-1,c,checked,maze)+countInnerWalls(r,c+1,checked,maze)+countInnerWalls(r,c-1,checked,maze);<br>    }<br>    else if(r&lt;checked.length &amp;&amp; r&gt;=0 &amp;&amp; c&lt;checked[r].length &amp;&amp; c&gt;=0 &amp;&amp; maze[r].charAt(c)=='#')<br>    {<br>      return 1;<br>    }<br>    else<br>      return 0;<br>  }<br>  <br>}<br></td>