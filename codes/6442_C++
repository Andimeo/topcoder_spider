            #include&lt;iostream&gt;<br>#include&lt;string&gt;<br>#include&lt;vector&gt;<br>using namespace std;<br>class StringSegment<br>{ public:<br>  double average(string s)<br> { <br>char c;<br>c=s[0];<br>double n=1,d;<br>  for(int i=1;i&lt;s.length(); i++)<br>  { <br>  if(c!=s[i])<br> { <br> c=s[i]; n++;<br> }<br>         }<br>         <br>      <br>         d=(double)s.length()/n;<br>         return d;<br>         }<br>         };<br></td>