            public class StringSegment<br>{<br>public double average(String s)<br>  {<br>    int len=s.length();<br>    int count=0;<br>    int index=0,i,j;<br>    int[] arr= new int[len];<br>    for(i=0;i&lt;len;i++)<br>      arr[i]=0;<br>    for(i=0;i&lt;len;){<br>      count=1;<br>      for(j=i+1;j&lt;len;j++){<br>        if(s.charAt(i)==s.charAt(j))<br>          count++;<br>        else break;<br>      }<br>      arr[index]=count;<br>      i=j;<br>      index=index+1;<br>    }<br>    int sum=0;<br>    for(int k=0;k&lt;index;k++)<br>      sum=sum+arr[k];<br>    System.out.print(sum+ "  "+ index+ " ");<br>    double result=(double)sum/(double)index;<br>    return result;<br>  }<br>}<br></td>