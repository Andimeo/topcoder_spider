            using System;<br><br> public class CalculatorDisplay {<br>   public string numberDivision(int digits, int n, int d) {<br>     Decimal nn = Convert.ToDecimal(n);<br>     Decimal dd = Convert.ToDecimal(d);<br>     Decimal res = nn/dd;<br>     string s = res.ToString();<br>       if ((s.Length &gt; 1) &amp;&amp; (s.Substring(0, 2) == "0."))<br>         s = s.Substring(1);<br>     int len = s.Length;<br>       if (s.IndexOf('.') &gt; -1)<br>         --len;<br>     if (len &gt; digits)<br>       return "E";<br>     else<br>       return s;<br>   }<br>  }<br></td>