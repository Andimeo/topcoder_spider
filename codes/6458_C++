            #include &lt;string&gt;<br><br>using namespace std;<br><br>class CalculatorDisplay {<br>  public:<br>  <br>  string numberDivision(int dig, int n, int d) {<br>    long long a,b,c;<br>    string re;<br>    <br>    a = n;<br>    b = d;<br>    if (a == 0)<br>      return "0";<br>    c = a / b;<br>    re = "";<br>    while (c) {<br>      re = (char)(c % 10 + '0') + re;<br>      c /= 10;<br>      }<br>    if (re.size() &gt; dig)<br>      return "E";<br>    if (a % b == 0)<br>      return re;<br>    re += '.';<br>    a = a % b;<br>    while (a &amp;&amp; re.size() &lt;= dig + 1) {<br>      re += a * 10 / b + '0';<br>      a = a * 10 % b;<br>      }<br>    if (re.size() &gt; dig + 1)<br>      return "E";<br>    return re;<br>    }<br>  };<br></td>