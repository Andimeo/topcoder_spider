            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;set&gt;<br>#include &lt;map&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstring&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstdio&gt;<br> <br>using namespace std;<br> <br>typedef long long llong;<br>typedef long double ldbl;<br> <br>#define max(a, b) ((a) &gt; (b) ? (a) : (b))<br>#define min(a, b) ((a) &lt; (b) ? (a) : (b))<br>#define abs(a) ((a) &lt; 0 ? -(a) : (a))<br> <br>class MonthlyPayment<br>{<br>public:<br>  long long minimalPayment( string sn, string ss1, string sp1, string ss2, string sp2 )<br>  {<br>    llong n, s1, p1, s2, p2, be, a, b, c;<br>    sscanf(sn.c_str(), "%Ld", &amp;n);<br>    sscanf(ss1.c_str(), "%Ld", &amp;s1);<br>    sscanf(sp1.c_str(), "%Ld", &amp;p1);<br>    sscanf(ss2.c_str(), "%Ld", &amp;s2);<br>    sscanf(sp2.c_str(), "%Ld", &amp;p2);<br>    be = 10 * n;<br>    for (a = 0; a &lt;= 5000000; a++)<br>    {<br>      b = max(0, (n - a * s1 + s2 - 1) / s2), c = max(0, n - s1 * a - s2 * b);<br>      be = min(be, a * p1 + b * p2 + c * 10);<br>      b = max(0, (n - a * s1) / s2), c = max(0, n - s1 * a - s2 * b);<br>      be = min(be, a * p1 + b * p2 + c * 10);<br>    }<br>    swap(s1, s2), swap(p1, p2);<br>    for (a = 0; a &lt;= 5000000; a++)<br>    {<br>      b = max(0, (n - a * s1 + s2 - 1) / s2), c = max(0, n - s1 * a - s2 * b);<br>      be = min(be, a * p1 + b * p2 + c * 10);<br>      b = max(0, (n - a * s1) / s2), c = max(0, n - s1 * a - s2 * b);<br>      be = min(be, a * p1 + b * p2 + c * 10);<br>    }<br>    return be;<br>  }<br>};<br> <br> <br>// Powered by PopsEdit<br></td>