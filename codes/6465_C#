            using System;<br><br>public class CrazyRunning {<br>  public double expectedTime(int[] corridors) {<br>    double res = 0;<br>    double mean = 0;<br>    int n = corridors.Length;<br>    for (int i = 1; i &lt; n; ++i)<br>    {<br>      double p = (double) (n - i) / (n - 1);<br>      mean += 1 / p;<br>    }<br>    mean -= 1;<br>    double[] avg = new double[n];<br>    for (int i = 0; i &lt; n; ++i)<br>      avg[i] = mean / n;<br>    avg[0] += 0.5;<br>    for (int i = 1; i &lt; n; ++i)<br>      avg[i] += 0.5 / (n - 1);<br>    for (int i = 0; i &lt; n; ++i)<br>      res += avg[i] * corridors[i];<br>    return res * 2;<br>  }<br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>