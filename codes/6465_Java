            import java.util.*;<br>import java.util.regex.*;<br>import java.io.*;<br><br>public class CrazyRunning {<br>  <br>  int n;<br>  <br>  double frac(int t, int n) {<br>    return ((double)t)/n;<br>  }<br><br>  double solve(int v, int param) {<br>    if (v==n-1) return 0;<br>    double star = solve(v+1, param);<br>    double VS = n-v-frac(v,n-1);<br>    double HS = param + (n-v-1)*star+1+frac(n-v-1,n-1)*star;<br>    return HS/VS;<br>  }<br>  <br>  public double expectedTime(int[] corridors) {<br>    ut = System.out;<br>    n = corridors.length;<br>    double first = 1+solve(1,1);<br>    double sec = 1 + solve(1,n-1+n-2);<br>    sec /= (n-1);<br>    double ans = first * corridors[0];<br>    for (int i=1; i&lt;n; ++i) ans += sec*corridors[i];<br>    return ans;<br>  }<br><br>  PrintStream ut;<br>  void print(Object... a) {<br>    for (Object o:a) {<br>      ut.print(o+" ");<br>    }<br>    ut.println();<br>  }<br><br>  <br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>