            import java.util.*;<br>public class Series {<br>  public  ArrayList AA;<br>  public int increasingLength(ArrayList a) {<br>     int i, j;<br>     AA = a;<br>     int start = 0, run = 1, on = 1, best = 1;<br>     for (i = 1; i &lt; a.size(); i++ ) {<br>       if (A(i) &gt; A(i-1)) {<br>           run++; if (run &gt; best ) best = run;<br>       } else {<br>    run = 1; start  = i;<br>       }<br>     }<br>     return best;<br>   }<br>  int A(int i) {<br>   return ((Integer)AA.get(i)).intValue();<br>  }<br>}<br></td>