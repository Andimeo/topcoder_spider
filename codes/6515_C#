            using System;<br>using System.Collections.Generic;<br>using System.Text;<br><br><br>    public class IndictDates <br>    {<br>        public int getYear(int indict, int circleSun, int circleMoon)<br>        {<br>            int i =1;<br>            int j = 1;<br>            int k =1;<br>            int year=1;<br>            while (indict !=i||circleSun!=j||circleMoon!=k)<br>            {<br>                year++;<br>                i++;<br>                j++;<br>                k++;<br>                if (i &gt; 15) i = 1;<br>                if (j &gt; 28) j = 1;<br>                if (k &gt; 19) k = 1;<br>            }<br>            return year;<br>        }<br>    }<br></td>