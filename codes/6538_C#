            using System;<br>using System.Collections.Generic;<br>using System.Text;<br>   public class SpreadingNews<br>    {<br>        private int dfs(int k)<br>        {<br>            int []tr = new int[50];<br>            int cnt = 0;<br>            for (int i = 1; i &lt; adj.Length; ++i)<br>            {<br>                if (adj[i] == k)<br>                {<br>                    tr[cnt++] = dfs(i);<br>                }<br>            }<br>            if (cnt == 0) return 0;<br>            int[] t = new int[cnt];<br>            for (int i = 0; i &lt; cnt; ++i)<br>                t[i] = tr[i];<br>            Array.Sort(t);<br>            int Max = t[t.Length - 1] + 1;<br>            for (int i = t.Length - 2; i &gt;= 0; --i)<br>            {<br>                if (t[i] + t.Length - i &gt; Max)<br>                    Max = t[i] + t.Length - i;<br>            }<br>            return Max;<br>        }<br>        int[] adj = null;<br>        public int minTime(int[] supervisors)<br>        {<br>            adj = new int[supervisors.Length];<br>            for (int i = 0; i &lt; adj.Length; ++i)<br>                adj[i] = supervisors[i];<br>            int ans = dfs(0);<br>            return ans;<br>        }<br><br>    }<br></td>