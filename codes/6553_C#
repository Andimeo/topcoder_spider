            using System;<br>using System.Collections;<br><br>public class MeasuringTemperature<br>{<br>  public double averageTemperature(int[] measuredValues)<br>  {<br>    int n = 0;<br>    double sum = 0;<br><br>    for (int i = 0; i &lt; measuredValues.Length; i++)<br>    {<br>      if (measuredValues[i] &lt; -273)<br>        continue;<br><br>      int ndiff = 0;<br>      int total = 0;<br>      for (int j = i - 2; j &lt;= i + 2; j++)<br>        if (j &gt;= 0 &amp;&amp; j &lt; measuredValues.Length)<br>        {<br>          total++;<br>          if (Math.Abs(measuredValues[j] - measuredValues[i]) &gt; 2)<br>            ndiff++;<br>        }<br><br>      if (ndiff != total - 1)<br>      {<br>        n++;<br>        sum += measuredValues[i];<br>      }<br>    }<br><br><br>    if (n == 0)<br>      return -300.0;<br>    else<br>      return sum / n;<br>  }<br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>