            #include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstring&gt;<br>#include &lt;cmath&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;iostream&gt;<br><br>using namespace std;<br><br>class MeasuringTemperature<br>{ <br>  public: <br>  double averageTemperature(vector &lt;int&gt; v) <br>  { <br>    double sum=0,n=0;<br>    for (int i=0;i&lt;v.size();i++)<br>      if (v[i] &gt;= -273)<br>      if ((i&gt;0 &amp;&amp; abs(v[i-1]-v[i]) &lt;= 2)<br>        ||(i&gt;1 &amp;&amp; abs(v[i-2]-v[i]) &lt;= 2)<br>        ||(i&lt;v.size()-1 &amp;&amp; abs(v[i+1]-v[i]) &lt;= 2)<br>        ||(i&lt;v.size()-2 &amp;&amp; abs(v[i+2]-v[i]) &lt;= 2)) {sum+= v[i]; n++;}<br><br><br>    if (n == 0) return -300;<br>    else return sum / n;<br>  }<br>  <br> <br>}; <br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>