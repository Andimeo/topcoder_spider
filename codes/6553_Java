            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br>import static java.lang.Math.*;<br> <br>public class MeasuringTemperature<br>{<br>  public double averageTemperature(int[] measuredValues)<br>  {<br>    double total = 0;<br>    int count = 0;<br>    for (int i=0;i&lt;measuredValues.length;i++) {<br>      if (isvalid(i,measuredValues)) {<br>        total += measuredValues[i];<br>        count++;<br>      }<br>    }<br>    if (count == 0) return -300.0;<br>    return total/count;<br>  }<br>  <br>  boolean isvalid(int which, int[] vals) {<br>    if(vals[which] &lt; -273) return false;<br>    int min = which-2;<br>    int max = which+2;<br>    if (min &lt; 0) min = 0;<br>    if (max &gt; vals.length - 1) max = vals.length - 1;<br>    int nd = 1;<br>    for (int i=min;i&lt;=max;i++) {<br>      if (abs(vals[i]-vals[which]) &gt; 2) nd++;<br>    }<br>    //System.out.println(which + " " + nd + " " + max + " " + min);<br>    if (nd == max-min+1) return false;<br>    return true;<br>  }<br>  <br>}<br> <br>//Powered by [KawigiEdit]<br></td>