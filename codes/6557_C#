            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class ReverseSums<br>{<br>  public int getSum(int N)<br>  {<br>    string s=N.ToString();<br>    string s2="";<br>    for(int i=s.Length-1;i&gt;=0;--i) s2=s2+s[i];<br>    int K=int.Parse(s2);<br>    return N+K;<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>