            #include &lt;iostream&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#define FOR(i,n) for(int i=0;i&lt;(int)n;i++)<br>#define REP(i,f,t) for(int i=f;i&lt;=t;i++)<br>#define debln(a) cout&lt;&lt; #a &lt;&lt;" : " &lt;&lt; a &lt;&lt; endl;<br>#define ALL(a) a.begin(),a.end()<br>using namespace std;<br> <br>class ReverseSums {<br>  public:<br>  int getSum(int N) {<br>    int cn = 0;<br>    int x = N;<br>    while(x) {<br>      cn = cn*10 + x%10;<br>      x/=10;<br>    }<br>    return N + cn;<br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>