            /*<br> *Powerd By: CodeGeneratorV1.0<br>*/<br>#include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;string&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;numeric&gt;<br>#include &lt;iostream&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br>using namespace std;<br><br>class EscapeFromRectangle{<br>public:<br>  int shortest(int x, int y, int w, int h){<br>    int d[5],minv,i;<br>    d[0]=sqrt((x-x)*(x-x)+(0-y)*(0-y));<br>    d[1]=sqrt((x-0)*(x-0)+(y-y)*(y-y));<br>    d[2]=sqrt((x-w)*(x-w)+(y-y)*(y-y));<br>    d[3]=sqrt((x-x)*(x-x)+(y-h)*(y-h));<br>    minv=10000000;<br>    for(i=0;i&lt;4;i++){<br>      if(d[i]&lt;minv){<br>        minv=d[i];<br>      }<br>    }<br>    return minv;<br>  }<br>};<br></td>