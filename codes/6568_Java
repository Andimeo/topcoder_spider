            import java.util.*;<br>import java.lang.*;<br> <br>public class SuperSort {<br>boolean ab(char c)<br>{<br>  return (c&gt;='a'&amp;&amp;c&lt;='z') || (c&gt;='A'&amp;&amp;c&lt;='Z');<br>}<br><br>public String wordSort(String s) {<br>  String[] w = new String[100];<br>  String[] r = new String[100];<br>  int lw, lr;<br>  lw = 0; lr = 0;<br>  int i, j;<br>  int n = s.length();<br>  for (i=0; i&lt;n; i++)<br>    if (ab(s.charAt(i)))<br>    {<br>      j = i;<br>      while (j&lt;n&amp;&amp;ab(s.charAt(j))) j++;<br>      w[lw++] = s.substring(i, j);<br>      i = j-1;<br>    }<br>  for (i=0; i&lt;n; i++)<br>    if (!ab(s.charAt(i)))<br>    {<br>      j = i;<br>      while (j&lt;n&amp;&amp;!ab(s.charAt(j))) j++;<br>      r[lr++] = s.substring(i, j);<br>      i = j-1;<br>    }<br>  String[] t = w;<br>  w = new String[lw];<br>  for (i=0; i&lt;lw; i++) w[i] = t[i];<br>  Arrays.sort(w);<br>  String ans = "";<br>  if (ab(s.charAt(0)))<br>  {<br>    i = 0;<br>    j = 0;<br>    while (i&lt;lw || j&lt;lr)<br>    {<br>      if (i&lt;lw) ans += w[i++];<br>      if (j&lt;lr) ans += r[j++];<br>    }<br>  } else<br>  {<br>    i = 0;<br>    j = 0;<br>    while (i&lt;lw || j&lt;lr)<br>    {<br>      if (j&lt;lr) ans += r[j++];<br>      if (i&lt;lw) ans += w[i++];    <br>    }<br>  }  <br>  return ans;<br>}<br>};<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>