            import java.util.*;<br>public class WordMath<br>{<br>  public int maximumSum(String[] summands)<br>  {<br>    int[] ar = new int[26];<br>    for(int n=0; n&lt;26; n++)<br>      ar[n] = 0;<br>    for(int n=0; n&lt;summands.length; n++)<br>      for(int c=0; c&lt;summands[n].length(); c++)<br>      {<br>        ar[summands[n].charAt(c)-'A'] += Math.pow(10, summands[n].length()-1-c);<br>      }<br>    Arrays.sort(ar);<br>    int ans = 0;<br>    for(int n=9; n&gt;0; n--)<br>      ans+=ar[n+16]*n;<br>    return ans;<br>  }<br>}<br></td>