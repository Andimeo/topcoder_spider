            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br><br>using namespace std;<br><br><br>int n;<br>int a[15][3];<br><br>int p[6][3] = { {0,1,2}, {0,2,1}, {1,0,2}, {1,2,0}, {2,0,1}, {2,1,0} };<br><br>int memo[1&lt;&lt;15][15][6];<br><br>struct BoxTower {<br><br>   int rec( int used, int last, int lastperm ) {<br>      int &amp; ret = memo[used][last][lastperm];<br>      if( ret &gt;= 0 ) return ret;<br>      <br>      ret = 0;<br><br>      for( int next = 0; next &lt; n; ++next ) {<br>         if( (used&gt;&gt;next)&amp;1 ) continue;<br><br>         for( int perm = 0; perm &lt; 6; ++perm ) {<br>            if( a[next][p[perm][1]] &gt; a[last][p[lastperm][1]] ) continue;<br>            if( a[next][p[perm][2]] &gt; a[last][p[lastperm][2]] ) continue;<br>            <br>            ret &gt;?= a[next][p[perm][0]] + rec( used | (1&lt;&lt;next), next, perm );<br>         }<br>      }<br><br>      return ret;<br>   }<br><br>   int tallestTower( vector &lt;int&gt; x, vector &lt;int&gt; y, vector &lt;int&gt; z ) {<br>      n = x.size();<br>      for( int i = 0; i &lt; n; ++i ) {<br>         a[i][0] = x[i];<br>         a[i][1] = y[i];<br>         a[i][2] = z[i];<br>      }<br>      <br>      memset( memo, -1, sizeof memo );<br><br>      int ret = 0;<br><br>      for( int first = 0; first &lt; n; ++first )<br>         for( int perm = 0; perm &lt; 6; ++perm )<br>            ret &gt;?= a[first][p[perm][0]] + rec( 1&lt;&lt;first, first, perm );<br><br>      return ret;<br>   }<br><br>   <br> <br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by moj 3.0 beta 7 [modified TZTester]<br>// Powered by CodeProcessor<br></td>