            using System;<br><br>public class PyramidOfCubes {<br>  public double surface(int K) {<br>    int n = 0;<br>    int total = 0;<br>    while (total &lt; K)<br>    {<br>      ++n;<br>      total += n * n;<br>    }<br>    int i;<br>    double res = 0;<br>    for (i = n; i &gt;= 1; --i)<br>    {<br>      if (K == 0)<br>        break;<br>      if (K &gt;= i * i)<br>      {<br>        K -= i * i;<br>        res += 4 * i;<br>      } <br>      else<br>      {<br>        int rows = (K - 1) / i + 1;<br>        if (rows &gt; 1)<br>          res += 2 * i + 2 * rows;<br>        else<br>          res += 2 * K + 2 * rows;<br>        break;<br>      }<br>    }<br>    if (i == n)<br>      res += 2 * K;<br>    else<br>      res += 2 * n * n;<br>    return res;<br>  }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>