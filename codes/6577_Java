            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class PyramidOfCubes<br>{<br>  public double surface(int K)<br>  {<br>    int N;<br>    int used = 0;<br>    for (N=1; (used += N*N) &lt; K; N++)<br>      ;<br>    double answer = 0;<br>    if (N*N &gt; K)<br>    {<br>      answer += 2*K;<br>      answer += Math.min(N, K)*2;<br>      answer += (K+N-1)/N*2;<br>      return answer;<br>    }<br>    else<br>      answer = N*N*2;<br>    int left = K;<br>    for (int n=N; n&gt;0; n--)<br>    {<br>      if (left &gt;= n*n)<br>      {<br>        answer += n*4;<br>        left -= n*n;<br>      }<br>      else<br>      {<br>        answer += Math.min(n,left)*2;<br>        answer += (left+n-1)/n*2;<br>        break;<br>      }<br>    }<br>    return answer;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>