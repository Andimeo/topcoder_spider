            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;cmath&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;set&gt;<br>#include &lt;map&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstdio&gt;<br>using namespace std;<br> <br>class DessertMaker <br>{<br>  public:<br>  int countBananaSplits(vector &lt;string&gt; s) <br>  {<br>    map&lt;string,int&gt; ma;<br>    map&lt;string,int&gt;::iterator q;<br>    int i,a=1,b=1,c=0;<br>    for(i=0;i&lt;s.size();i++) ma[s[i]]++;<br>    for(q=ma.begin();q!=ma.end();q++) if((*q).first=="banana" || (*q).first=="ice cream") <br>    {<br>      b*=(*q).second;<br>      c++;<br>    }<br>    else a*=1+(*q).second;<br>    if(c&lt;2) return 0;<br>    return (a-1)*b;<br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>