<td class="problemText" colspan="8" valign="middle" align="left">
            using System;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class EsperantoNumbers<br>{<br>    public static string nameThisNumber(int x)<br>    {<br>        string[] S ={ "unu", "du", "tri", "kvar", "kvin", "ses", "sep", "ok", "nau", "dek" };<br>        if (x &lt;= 10) return S[x - 1];<br>        int x1 = x / 10;<br>        int x2 = x % 10;<br>        if (x2 == 0) return nameThisNumber(x1) + "dek";<br>        if (x1 == 1) return "dek " + nameThisNumber(x2);<br>        return nameThisNumber(x1) + "dek " + nameThisNumber(x2);<br>    }<br>}<br></td>