            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class TheEquation<br>{<br>  public int leastSum(int X, int Y, int P)<br>  {<br>        int ret = int.MaxValue;<br>    for (int a = 1;a&lt;=3*P;a++)<br>            for (int b = 1; b &lt;= 3*P; b++)<br>            {<br>                int s = a * X + b * Y;<br>                if (s % P == 0) ret = Math.Min(ret, a + b);<br>            }<br>        return ret;<br>  }}<br></td>