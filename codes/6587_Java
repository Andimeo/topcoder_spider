            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class TheEquation<br>{<br>  public int leastSum(int X, int Y, int P)<br>  {<br>    int least = 250000;<br>    <br>    for(int a = 1; a &lt;= P; a++){<br>      for(int b = 1; b &lt;= P; b++){<br>    <br>      if( (a * X + b * Y) % P == 0 &amp;&amp; (a+b&lt;least)){<br>        least = a+b;<br>      }<br>    }<br>    }<br>    return least;<br>  }<br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>