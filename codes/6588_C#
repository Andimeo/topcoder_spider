            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class ShootingGallery <br>{<br><br>  public int profitableBet(int accuracy) <br>  {<br>        double res=0;<br>        for (int i = 1; ; ++i)<br>        {<br>            double t = 1.0;<br>            for (int j = 0; j &lt; i; j++) t *= 1 - accuracy/100.0;<br>            if (res + (1 - t) &gt;= 0.5) return i - 1;<br>        }<br>        return 0;<br>  }<br><br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>