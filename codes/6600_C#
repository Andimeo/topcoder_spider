            using System;<br>using System.Collections.Generic;<br>public class IQTest<br>{<br>  public string nextNumber(int[] p) <br>  {<br>    int L = p.Length;<br>    if (L == 1)<br>        return "AMBIGUITY";<br>    if (L == 2 &amp;&amp; p[0] != p[1])<br>        return "AMBIGUITY";<br>    if (p[0] == p[1])<br>    {<br>        for (int i=2; i&lt;L; i++)<br>            if (p[i] != p[0])<br>                return "BUG";<br>        return p[0].ToString();<br>    }<br>    if ((p[2]-p[1])%(p[1]-p[0]) != 0)<br>        return "BUG";<br>    int a = (p[2]-p[1])/(p[1]-p[0]);<br>    int b = p[1]-a*p[0];<br>    for (int i=3; i&lt;L; i++)<br>        if (p[i] != a*p[i-1] + b)<br>            return "BUG";<br>    return (a*p[L-1] + b).ToString();<br>    <br>  }<br>}<br><br><br>// Powered by FileEdit<br></td>