            public class IQTest {<br>  public String nextNumber(int[] previous) {<br>    if (previous.length&gt;1) {<br>      if (previous[0]==previous[1]) {<br>        for (int i=0;i&lt;previous.length-1;i++) {<br>          if (previous[i]!=previous[i+1]) <br>            return "BUG";<br>        }<br>        return "" + previous[0];<br>      }<br>      else if (previous.length&gt;2) {<br>        int a = (previous[2]-previous[1])/(previous[1]-previous[0]);<br>        int b = previous[1] - a*previous[0];<br>        for (int i=0;i&lt;previous.length-1;i++) {<br>          if (previous[i+1]!=previous[i]*a+b)<br>            return "BUG";          <br>        }<br>        return "" + (b+a*previous[previous.length-1]);<br>        <br>        <br>      }<br>      else <br>        return "AMBIGUITY";<br>      <br>    }<br>    else <br>      return "AMBIGUITY";<br>    <br>    <br>    <br>  }  <br>}<br></td>