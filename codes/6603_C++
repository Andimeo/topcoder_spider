            #include &lt;cstdio&gt;<br>#include &lt;string&gt;<br><br>using namespace std;<br><br>string answer;<br>int a[50];<br>int k, n, allowed;<br><br>class UnrepeatableWords {<br>public:<br>  bool check(int size) {<br>    for (int i = 1; i &lt;= (size + 1) / k; i++) {<br>      bool sw = false;<br>      for (int j = size - i; j &gt; size - i * k; j--) {<br>        if (a[j] != a[j + i]) {<br>          sw = true;<br>          break;<br>        }<br>      }<br>      if (sw == false) return true;<br>    }<br>    return false;<br>  }<br>  <br>  void backtr(int m) {<br>    if (answer.size() &gt; 0) return;<br>    if (m == n) {<br>      char c;<br>      for (int i = 0; i &lt; m; i++) {<br>        c = 'A' + a[i];<br>        answer = answer + c;<br>      }<br>      return;<br>    }<br>    for (int i = 0; i &lt; allowed; i++) {<br>      a[m] = i;<br>      if (check(m)) continue;<br>      backtr(m + 1);<br>    }    <br>  }<br>  <br>  string getWord(int I1, int I2, int I3) {<br>    k = I1, n = I2, allowed = I3;<br>    answer = "";<br>    backtr(0);<br>    return answer;<br>  }<br>};<br></td>