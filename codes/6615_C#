            using System;<br>using System.Collections;<br>public class LineOfSight<br>{<br>    bool[] usedRow;<br>    bool[] usedCol;<br>    int m, n;<br>    string[] O;<br> <br>    int min(int x, int y) { return x &gt; y ? y : x; }<br>    int Place(int i, int j) {<br>        usedRow[i] = true;<br>        usedCol[j] = true;<br> <br>        int cnt = 0;<br>        for (int ii = 0; ii &lt; m; ii++)<br>            for (int jj = 0; jj &lt; n; jj++)<br>                if (!usedRow[ii] &amp;&amp; !usedCol[jj]) cnt++;<br> <br>        usedRow[i] = false;<br>        usedCol[j] = false;<br> <br>        return cnt;<br>    }<br>    public int bestPosition(string[] A)<br>    {<br>        O = A;<br>        m = O.Length;<br>        n = O[0].Length;<br>        <br>        usedRow = new bool[m];<br>        usedCol = new bool[n];<br>        <br>        for (int i = 0; i &lt; m; i++) usedRow[i] = false;<br>        for (int j = 0; j &lt; n; j++)<br>        {<br>            usedCol[j] = false;<br>        }<br>        int mn = 1000111;<br> <br>        for(int i = 0 ; i &lt; m ; i++)<br>            for (int j = 0; j &lt; n; j++)<br>                if (O[i][j] == 'X') {<br>                    usedRow[i] = usedCol[j] = true;<br>                }<br>        for (int i = 0; i &lt; m; i++)<br>            for (int j = 0; j &lt; n; j++) if (!usedRow[i] &amp;&amp; !usedCol[j]) {<br>                mn = min(mn, Place(i, j));<br>            }<br>               <br> <br>        if ( mn == 1000111 ) return -1; else return mn;<br>    }<br>}<br> <br>// Powered by PopsEdit<br></td>