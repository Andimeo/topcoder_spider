            #include &lt;iostream&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;sstream&gt;<br>#include &lt;cctype&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;cmath&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>using namespace std;<br>class HiddenMessage {<br> public:<br>  string getMessage(string text) <br>  {<br>   string ans="";<br>   stringstream z(text);<br>   string s;<br>   while (z&gt;&gt;s)<br>    ans+=s[0];<br>   return ans;<br>  }<br>};<br></td>