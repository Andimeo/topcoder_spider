            //import java.smart.programmer.*;<br>import java.awt.*;<br>import java.math.*;<br>import static java.lang.System.*;<br>import static java.util.Arrays.*;<br>import static java.lang.Math.*;<br>import java.awt.geom.*;<br>import java.util.*;<br><br>//beware of bugs in the following code; I have only made it pass the examples, not proved it correct.<br><br>public class HiddenMessage<br>{<br>  public String getMessage(String s)<br>  {<br>    StringTokenizer st = new StringTokenizer(s);<br>    String ans = "";<br>    while(st.hasMoreTokens())<br>    {<br>      String i = st.nextToken();<br>      ans += "" + i.charAt(0);<br>    }<br>    return ans;<br>  }<br>}<br>//powered by good ol' micro$oft notepad<br></td>