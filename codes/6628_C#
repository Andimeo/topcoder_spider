            public class KidsGame<br>{<br>    public int kthKid(int n, int m, int k)<br>    {<br>        int ln = n;<br>        int lk = k-1;<br>        int pos = 0;<br>        int nth = 0;<br><br>        while (true)<br>        {<br>            pos = (pos + m-1) % ln;<br>            ln--;<br>            nth++;<br>            if (pos &lt; lk)<br>                lk--;<br>            else<br>                if (pos == lk)<br>                    return nth;<br>        }       <br>    }<br>}<br></td>