            import java.util.Arrays;<br><br>public class StandInLine {<br>    public int[] reconstruct(int[] left) {<br>        int[] res = new int[left.length];<br>        Arrays.fill(res, -1);<br>        for (int i = 0; i &lt; left.length; i++) {<br>            int k = 0;<br>            while (res[k] &gt;= 0) k++;<br>            for (int j = 0; j &lt; left[i]; j++) {<br>                k++;<br>                while (res[k] &gt;= 0) k++;<br>            }<br>            res[k] = i + 1;<br>        }<br>        return res;<br>    }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>