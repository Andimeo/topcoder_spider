<td class="problemText" colspan="8" valign="middle" align="left">
            public class ExcitingGame<br>{<br>  public int howMany(int nClassmates, int nTimes, int who)<br>  {<br>    int numTimesCried = 0;<br>    int currPlayer = 0;<br>    <br>    for (int i = 1; i &lt;= nTimes; i++)<br>    {<br>      if (who == currPlayer &amp;&amp; i%3 == 0)<br>      {<br>        numTimesCried++;<br>      }<br>      <br>      if (++currPlayer &gt;= nClassmates)<br>        currPlayer = 0;<br>    }<br>    <br>    return numTimesCried;<br>  }<br>};<br></td>