            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class DerivativeSequence<br>{<br>  public int[] derSeq(int[] a, int n)<br>  {<br>    int j, k, i;<br>    k = a.Length - 1;<br>    int[] res = new int[a.Length];<br>    res = a;<br>    for(i = 0; i &lt; n; i++)<br>    {<br>      for(j = 0; j &lt; k; j++)<br>        res[j] = res[j + 1] - res[j];<br>        k--;<br>    }<br>    int[] r = new int[k + 1];<br>    for (i = 0; i &lt; k + 1; i++)<br>      r[i] = res[i];<br>      return r;<br>    <br>    <br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>