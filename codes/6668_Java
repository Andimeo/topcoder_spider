            public class Curvy{<br><br>  public double distance(int[] l, int[] r){<br>    double x = 0;<br>    double y = 0;<br>    double a = 0;<br>    for(int i=0;i&lt;l.length;i++){<br>      if (r[i]==0){<br>        x+=Math.cos(a)*l[i];<br>        y+=Math.sin(a)*l[i];<br>      } else {<br>        double aa = -l[i]*1.0/r[i];<br>        double xx = x - Math.sin(a)*r[i];<br>        double yy = y + Math.cos(a)*r[i];<br>        //System.out.println(xx+" "+yy+" "+aa);<br>        x-=xx;<br>        y-=yy;<br>        a-=aa;<br>        double x1 = x*Math.cos(aa)+y*Math.sin(aa);<br>        double y1 = -x*Math.sin(aa)+y*Math.cos(aa);<br>        x = x1;<br>        y = y1;<br>        x+=xx;<br>        y+=yy;<br>      }<br>    }<br>    System.out.println(x+" "+y);<br>    return Math.sqrt(x*x+y*y);<br>  }<br>}<br></td>