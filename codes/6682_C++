            #include&lt;iostream&gt;<br>#include&lt;vector&gt;<br>#include&lt;algorithm&gt;<br><br>#include&lt;string&gt;<br>using namespace std;<br>class CheckersBoard<br>{<br>     public:<br>            int numMoves(vector &lt;string&gt; board)<br>            {<br>                int i,j,B=0,W=0;<br>                for(i=0;i&lt;6;i++)<br>                {<br>                                for(j=0;j&lt;8;j++)<br>                                {<br>                                                if(board[i][j]=='B')<br>                                                {<br>                                                                    if((board[i+1][j+1]=='W'&amp;j&lt;7)&amp;&amp;(board[i+2][j+2]==' '&amp;j&lt;6))<br>                                                                    B++;<br>                                                                    if((board[i+1][j-1]=='W'&amp;j&gt;0)&amp;&amp;(board[i+2][j-2]==' '&amp;j&gt;1))<br>                                                                    B++;<br>                                                }<br>                                }<br>                }<br>                for(i=2;i&lt;8;i++)<br>                {<br>                                for(j=0;j&lt;8;j++)<br>                                {<br>                                                if(board[i][j]=='W')<br>                                                {<br>                                                                    if((board[i-1][j+1]=='B'&amp;j&lt;7)&amp;&amp;(board[i-2][j+2]==' '&amp;j&lt;6))<br>                                                                    W++;<br>                                                                    if((board[i-1][j-1]=='B'&amp;j&gt;0)&amp;&amp;(board[i-2][j-2]==' '&amp;j&gt;1))<br>                                                                    W++;<br>                                                }<br>                                }<br>                }<br>                if(B==0)<br>                {<br>                for(i=0;i&lt;7;i++)<br>                {<br>                                for(j=0;j&lt;8;j++)<br>                                {<br>                                                if(board[i][j]=='B')<br>                                                {<br>                                                                    if((board[i+1][j+1]==' '&amp;j&lt;7))<br>                                                                    B++;<br>                                                                    if((board[i+1][j-1]==' '&amp;j&gt;0))<br>                                                                    B++;<br>                                                }<br>                                }<br>                }<br>                }<br>                if(W==0)<br>                {<br>                for(i=1;i&lt;8;i++)<br>                {<br>                                for(j=0;j&lt;8;j++)<br>                                {<br>                                                if(board[i][j]=='W')<br>                                                {<br>                                                                    if((board[i-1][j+1]==' '&amp;j&lt;7))<br>                                                                    W++;<br>                                                                    if((board[i-1][j-1]==' '&amp;j&gt;0))<br>                                                                    W++;<br>                                                }<br>                                }<br>                }<br>                }<br>                return(B+W);<br>            }<br>};<br></td>