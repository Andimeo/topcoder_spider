            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class TransformArray <br>{<br>  public int doTransform(int[] elements) <br>  {<br>        int ans = 0;<br>        List&lt;int&gt; elemek = new List&lt;int&gt;();<br>        foreach (int i in elements)<br>            elemek.Add(i);<br>        while (elemek.Count &gt; 1)<br>        {<br>            int dif = int.MaxValue;<br>            for (int i = 0; i &lt; elemek.Count; i++)<br>            {<br>                for (int j = 0; j &lt; elemek.Count; j++)<br>                {<br>                    if (i == j)<br>                        continue;<br>                    int a = elemek[i];<br>                    int b = elemek[j];<br>                    if (dif &gt; Math.Abs(a - b))<br>                    {<br>                        dif = Math.Abs(a - b);<br>                    }<br>                }<br>            }<br>            int max = 0;<br>            int muta, mutb;<br>            muta = mutb = 0;<br>            for (int i = 0; i &lt; elemek.Count; i++)<br>            {<br>                for (int j = 0; j &lt; elemek.Count; j++)<br>                {<br>                    if (i == j)<br>                        continue;<br>                    int a = elemek[i];<br>                    int b = elemek[j];<br>                    if (Math.Abs(a - b) == dif)<br>                    {<br>                        if ((a + b) &gt; max)<br>                        {<br>                            max = a + b;<br>                            muta = i;<br>                            mutb = j;<br>                        }<br>                    }<br>                }<br>            }<br>            elemek[muta]--;<br>            elemek[mutb]--;<br>            for (int i = 0; i &lt; elemek.Count; i++)<br>                if (elemek[i] == 0)<br>                {<br>                    elemek.RemoveAt(i);<br>                    i--;<br>                }<br>            ans++;<br>        }<br>        return ans;<br>  }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by r1cs1]<br>// Powered by CodeProcessor<br></td>