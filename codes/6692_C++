            // By mirosuaf<br>#include &lt;algorithm&gt; <br>#include &lt;cstdio&gt; <br>#include &lt;cstdlib&gt; <br>#include &lt;cctype&gt; <br>#include &lt;cmath&gt; <br>#include &lt;iostream&gt; <br>#include &lt;sstream&gt; <br>#include &lt;string&gt; <br>#include &lt;utility&gt; <br>#include &lt;vector&gt; <br>using namespace std; <br>#define VAR(a,b) typeof(b) a=(b) <br>#define REP(i,n) for(int _n=n, i=0;i&lt;_n;++i) <br>#define FOR(i,a,b) for(int i=(a),_b=(b);i&lt;=_b;++i) <br>#define FORD(i,a,b) for(int i=(a),_b=(b);i&gt;=_b;--i) <br>#define FOREACH(it,c) for(VAR(it,(c).begin());it!=(c).end();++it) <br>#define ALL(f,w) ({ bool _ok=true; f _ok=_ok &amp;&amp; (w); _ok; }) <br>#define EXISTS(f,w) (!ALL(f,!(w))) <br>typedef long long LL; <br>const int INF = 1000000000; <br>typedef vector&lt;int&gt; VI; <br> <br>    class TransformArray<br>        { <br>        public: <br>        int doTransform(vector &lt;int&gt; elem) <br>            { <br> <br>int step=0,mini,mini2,p=0,q=0;<br> <br>while (elem.size()&gt;1) {<br>step++;<br>mini=INF; mini2=INF;<br>    REP(i,elem.size()) {<br>  FOR(j,i+1,elem.size()-1) <br>      if ((abs(elem[i]-elem[j])&lt;mini) || (abs(elem[i]-elem[j])==mini &amp;&amp; elem[i]+elem[j]&lt;mini2)) {<br>      p=i;<br>      q=j;<br>      mini=abs(elem[i]-elem[j]);<br>      mini2=elem[i]+elem[j];<br>      }<br>    }  <br> <br>elem[p]--; elem[q]--;<br>VI rr;<br>REP(i,elem.size()) if (elem[i]!=0) rr.push_back(elem[i]);<br>elem=rr;<br>REP(i,rr.size()) cout &lt;&lt; rr[i] &lt;&lt; " "; cout &lt;&lt; endl;<br>}<br> <br>return step;<br> <br> <br> <br>            } <br>        <br> <br>        }; <br> <br>    <br> <br> <br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>