            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br>import static java.lang.Math.*;<br> <br> <br>public class TransformArray<br>{<br>  public void sop(String s){System.out.print(s);}<br>  public void sopl(String s){System.out.println(s);}<br>  public int ipi(String s){return Integer.parseInt(s);}<br>  public int gcd(int x, int y){if (y==0) return x; return gcd(y,x%y);}<br>  int INF=2147483647;<br>  <br>  int[] go(int[] a)<br>  {<br>      int n=a.length;<br>      int x=-1, y=INF, k=INF;<br>      for (int i=0;i&lt;n;i++)<br>        for (int j=i+1;j&lt;n;j++)<br>          if (Math.abs(a[i]-a[j])&lt;=k)<br>          {<br>            int xx=Math.abs(a[i]-a[j]);<br>            if (x==-1 || (a[i]+a[j]&lt;a[x]+a[y] &amp;&amp; xx==k) || xx&lt;k)<br>            {<br>              k=xx;<br>              x=i;<br>              y=j;<br>            }<br>          }<br>      a[x]--;<br>      a[y]--;<br>      int r=0;<br>      for (int i=0;i&lt;n;i++)<br>        if (a[i]!=0) r++;<br>      int[] ret=new int[r];<br>      int p=0;<br>      for (int i=0;i&lt;n;i++)<br>        if (a[i]!=0) ret[p++]=a[i];<br>      return ret;<br>  }<br>  public int doTransform(int[] a)<br>  {<br>    int ret=0;<br>    while (a.length&gt;=2)<br>    {<br>      a=go(a);<br>      ret++;<br>    }<br>    return ret;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>