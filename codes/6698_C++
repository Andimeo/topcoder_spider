<td class="problemText" colspan="8" valign="middle" align="left">
            #include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>using namespace std;<br>class MedianProcess{<br>public:<br>  int getScore(vector &lt;int&gt; values){<br>    int k;<br>    vector&lt;int&gt; :: iterator iter;<br>    if (values.size() == 0)<br>      return 0;<br>    if (values.size() == 1)<br>      return values[0];<br>    sort(values.begin(), values.end());<br>    if (values.size() % 2 == 0){<br>      iter = values.end() - 1;<br>      k = *iter;<br>      values.erase(iter);<br>      return getScore(values) - k;<br>    }<br>    else{<br>      iter = values.begin() + values.size() / 2;<br>      k = *iter;<br>      values.erase(iter);<br>      return getScore(values) + k;<br>    }<br>  }<br>};<br></td>