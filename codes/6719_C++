            #include&lt;iostream&gt;<br>#include&lt;vector&gt;<br>#include&lt;algorithm&gt;<br><br>#include&lt;string&gt;<br>using namespace std;<br>class UsingStats<br>{<br>     public:  <br>              int getMedian(vector &lt;int&gt; vals, int mean)<br>              {<br>                  int s=0;<br>                  for( int i=0;i&lt;vals.size();i++)<br>                       s+=vals[i];<br>                      mean*=vals.size()+1;<br>                      mean-=s;<br>                      vals.push_back(mean);<br>                      sort(vals.begin(),vals.end());<br>                      return(vals[(vals.size())/2]);<br>              } <br>};<br></td>