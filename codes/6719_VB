            using System;<br>using System.Collections;<br>using System.Collections.Specialized;<br>using System.Collections.Generic;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class UsingStats<br>{<br>  public int getMedian(int[] vals, int mean)<br>  {<br>    int n = vals.Length;<br>    int sum = (n + 1) * mean;<br>    //int ans = 0;<br>    for (int i = 0; i &lt; n; i++) sum -= vals[i];<br>    List&lt;int&gt; a = new List&lt;int&gt;(vals);<br>    a.Add(sum);<br>    a.Sort();<br>    return a[a.Count / 2];<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>