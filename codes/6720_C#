            public class Xox<br>{<br>    public static int count(string t)<br>    {<br>        int c = 0;<br>        for (int i = 0; i &lt; t.Length-2; i++)<br>        {<br>            if (t[i] == 'x' &amp;&amp; t[i + 1] == 'o' &amp;&amp; t[i + 2] == 'x')<br>            {<br>                c += 3;<br>                if (i &gt;= 2)<br>                {<br>                    if (t[i - 2] == 'x' &amp;&amp; t[i - 1] == 'o')<br>                    {<br>                        c--;<br>                    }<br>                }<br>            }<br>        }<br>        return c;<br>    }<br>    }<br></td>