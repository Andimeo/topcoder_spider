            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class Xox<br>{<br>  public int count(String t)<br>  {<br>    boolean[] a=new boolean[t.length()];<br>    for (int i=0;i&lt;t.length()-2;i++)<br>      if (t.charAt(i)=='x' &amp;&amp; t.charAt(i+1)=='o' &amp;&amp; t.charAt(i+2)=='x')<br>      {<br>        a[i]=a[i+1]=a[i+2]=true;<br>      }<br>    int ret=0;<br>    for (int i=0;i&lt;t.length();i++)<br>      if (a[i]) ret++;<br>    return ret;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>