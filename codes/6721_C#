            using System;<br>using System.Collections.Generic;<br> <br>public class FriendsTrouble{<br>  Dictionary&lt;string,int&gt; nameinds;<br>    List&lt;int&gt;[] lfriends;<br>    bool[] groups;<br>    int n;<br>    <br>    bool floodfillnext() {<br>        for(int i = 0; i &lt; n; i++){<br>            if(!groups[i]){<br>                floodfill(i);<br>                return true;<br>            }<br>        }<br>        return false;<br>    }<br>    <br>    void floodfill(int i) {<br>        if(groups[i]) return;<br>        groups[i]=true;<br>        for(int j = 0; j &lt; lfriends[i].Count; j++){<br>            floodfill(lfriends[i][j]);<br>        }<br>    }<br>    <br>  public int divide(String[] names, String[] friends)  {<br>    n=names.Length;<br>      nameinds = new Dictionary&lt;string,int&gt;();<br>      lfriends = new List&lt;int&gt;[n];<br>      groups = new bool[n];<br>      <br>      for(int i = 0; i &lt; n; i++){<br>          nameinds.Add(names[i],i);<br>          lfriends[i] = new List&lt;int&gt;();<br>      }<br>      <br>      for(int i = 0; i &lt; friends.Length; i++){<br>          string cur=friends[i];<br>          string[] splitcur=cur.Split();<br>          <br>          lfriends[nameinds[splitcur[0]]].Add(nameinds[splitcur[1]]); <br>          lfriends[nameinds[splitcur[1]]].Add(nameinds[splitcur[0]]);<br>      }<br>      <br>      for(int i = 0; i &lt; n; i++){<br>          if(!floodfillnext()){<br>              return i;<br>          }<br>      }<br>      return n;<br>  }<br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>