            import java.util.*;<br>import java.math.*;<br><br>public class FriendsTrouble<br>{<br>  int ketqua, n;<br>  boolean[][] a;<br>  boolean[] seen;<br>  public int divide ( String[] names, String[] friends )  <br>  {<br>    n = names.length;<br>    a = new boolean[n][n];<br>    HashMap&lt;String,Integer&gt; map = new HashMap&lt;String, Integer&gt; ();<br>    for (int i = 0; i &lt; n; i++) map.put(names[i], i);<br>    for (String s:friends) {<br>      String[] ss = s.split("[ ]+");<br>      int u = map.get(ss[0]), v = map.get(ss[1]);<br>      a[u][v] = a[v][u] = true;<br>    }<br>    seen = new boolean[n];<br>    ketqua = 0;<br>    for (int i = 0; i &lt; n; i++) {<br>      if (!seen[i]) {<br>        ketqua ++;<br>        dfs (i);<br>      }<br>    }<br>    return ketqua;<br>  }<br>  void dfs (int u) {<br>    seen[u] = true;<br>    for (int i = 0; i &lt; n; i++) {<br>      if (!seen[i]&amp;&amp;a[i][u]) dfs(i);<br>    }<br>  }<br>}<br></td>