            #include &lt;string&gt;<br>#define INF 10000<br>using namespace std;<br> <br>class NumbersLine<br>     {public: int getLeast(string line, int givenNumber)<br>                 {<br>                  int min=INF,i,nrcur=0;<br>                  for(i=0;i&lt;line.length();i++)<br>                     if(line[i]==' ')<br>                       {if(givenNumber&lt;nrcur &amp;&amp; min&gt;nrcur)<br>                          min=nrcur;<br>                        nrcur=0;}<br>                     else<br>                       nrcur=nrcur*10+(line[i]-'0');<br>                  if(givenNumber&lt;nrcur &amp;&amp; min&gt;nrcur)<br>                    min=nrcur;<br>                  if(min==INF)<br>                    return -1;<br>                  return min;<br>                 }};<br></td>