            import java.util.*;<br>public class PoolFiller {<br>  int n;<br>  int m;<br>  public int getCapacity(String[] layout) {<br>    n = layout.length;<br>    m = layout[0].length();<br>    int ret = 0;<br>    for(int f=2;f&lt;10;f++){<br>      boolean[][] map = new boolean[n][m];<br>      for(int i=0;i&lt;n;i++){<br>        for(int j=0;j&lt;m;j++){<br>          if((layout[i].charAt(j)-'0')&gt;=f) map[i][j]=true;<br>        }<br>      }<br>      //System.out.println(Arrays.deepToString(map));<br>      int u = count(map);<br>      //System.out.println(f+":"+u);<br>      ret += u;<br>    }<br>    return ret;<br>  }<br>  <br>  private int count(boolean[][] map){<br>    //System.out.println("MAP:"+Arrays.deepToString(map));<br>    boolean[][] check = new boolean[n][m];<br>    int c = 0;<br>    for(int i=0;i&lt;n;i++){<br>      for(int j=0;j&lt;m;j++){<br>        if(map[i][j] || check[i][j]) continue;<br>        c += check(map, check, i, j);<br>      }<br>    }<br>    return c;<br>  }<br>  <br>  private int check(boolean[][] map, boolean[][] check, int i, int j){<br> <br>    ArrayList&lt;int[]&gt; task = new ArrayList&lt;int[]&gt;(10);<br>    task.add(new int[]{i,j});<br>    int count = 0;<br>    boolean ok = true;<br>    for(int t=0;t&lt;task.size();t++){<br>      int[] now = task.get(t);<br>      if(now[0]&lt;0 || now[0]&gt;=n || now[1]&lt;0 || now[1]&gt;=m){<br>        ok = false;<br>        continue;<br>      }<br>      if(check[now[0]][now[1]] || map[now[0]][now[1]]) continue;<br>      check[now[0]][now[1]] = true;<br>      count++;<br>      task.add(new int[]{now[0]+1,now[1]});<br>      task.add(new int[]{now[0],now[1]+1});<br>      task.add(new int[]{now[0]-1,now[1]});<br>      task.add(new int[]{now[0],now[1]-1});<br>    }<br>    //System.out.println("CHECK"+ok+":"+Arrays.deepToString(check));<br>    return ok ? count : 0;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>