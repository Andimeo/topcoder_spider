            Imports Microsoft.VisualBasic<br>Imports System<br>Imports System.Collections<br>Imports System.Text<br> <br>Public Class AdditionCycles<br>  Public Function cycleLength(ByVal n As Integer) As Integer<br>    Dim m As Integer = n<br>    Dim i As Integer = 0<br>    Dim k As Integer = 0<br>    Dim sn, sm As String<br> <br>    sn = Format$(n, "00")<br>    Do<br>      m = Val(sn(0)) + Val(sn(1))<br>      sm = Format$(m, "00")<br>      m = 10 * Val(sn(1)) + Val(sm(1))<br>      sn = Format$(m, "00")<br>      k += 1<br>    Loop Until m = n<br> <br>    Return k<br>  End Function<br> <br>End Class<br></td>