            /*<br>*/<br>import java.util.*;<br>public class ThirdBuyDiscount {<br>    public double minCost(int[] a, int di) {<br>        double res = 0;<br>      <br>      int n = a.length;<br>      double d = di;<br>      Arrays.sort(a);<br>      for (int i=0; i&lt;n/3; i++) res += a[n-1-i]*(100-d)/100;<br>      for (int i=0; i&lt;n-n/3; i++) res += a[i];<br>      <br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>