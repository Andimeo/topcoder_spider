            Public Class ThirdBuyDiscount<br><br>    Public Function minCost(ByVal prices As Integer(), ByVal discount As Integer) As Double<br><br>        Dim retval As Double<br><br>        Dim i As Integer<br><br>        Array.Sort(prices)<br><br>        Dim l As Integer = 0<br>        Dim m As Integer = 0<br><br>        For i = 1 To prices.Length<br>            If i Mod 3 = 0 Then<br><br>                Array.Reverse(prices)<br>                retval += Math.Round(prices(l) - ((prices(l) / 100) * discount), 9)<br>                l += 1<br>            Else<br>                Array.Sort(prices)<br>                retval += Math.Round(prices(m), 9)<br>                m += 1<br>            End If<br>        Next<br><br>        Return retval<br><br>    End Function<br><br><br>End Class<br></td>