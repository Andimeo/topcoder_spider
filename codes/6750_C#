            public class FriendlySequences<br>{<br>    public int count(int[] arrays)<br>    {<br>        int[] masks = new int[arrays.Length];<br>        for (int i = 0; i &lt; arrays.Length; i++)<br>        {<br>            while (arrays[i] != 0)<br>            {<br>                int digit = arrays[i] % 10;<br>                arrays[i] /= 10;<br>                masks[i] |= (1 &lt;&lt; digit);<br>            }<br>        }<br><br>        int count = 0;<br>        for (int i = 0; i &lt; masks.Length; i++)<br>        {<br>            for (int j = i + 1; j &lt; masks.Length; j++)<br>            {<br>                if (masks[j] == masks[i])<br>                {<br>                    count++;<br>                }<br>                else<br>                {<br>                    break;<br>                }<br>            }<br>        }<br><br>        return count;<br>    } <br>}<br></td>