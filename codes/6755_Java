            import java.util.*;<br>public class WeirdSort {<br>  int[] count, res;<br>  int n;<br><br>  boolean rec(int idx, int prev){<br>    if (idx==n) return true;<br>    for (int i=0; i&lt;=1000; i++)<br>      if (count[i]&gt;0){<br>        if (prev+1 != i){<br>          res[idx] = i;<br>          count[i]--;<br>          if (rec(idx+1, i)) return true;<br>          count[i]++;<br>        }<br>      }<br>    return false;<br>  }<br><br>    public int[] sortArray(int[] data) {<br>    count = new int[1001];<br>    for (int i: data) count[i]++;<br>        res = data.clone();<br>    n = data.length;<br>    rec(0,-10);<br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>