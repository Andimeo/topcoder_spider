            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstring&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cmath&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br><br>using namespace std;<br><br>string str;<br>int a[5021][2501];<br><br>class DominoesFalling {<br>public:<br>  int dp(int start,int left)<br>  {<br>    if (start&gt;=5010) return 10000;<br>    int &amp;ret=a[start][left];<br>    if (ret&gt;=0) return ret;<br>    if (left==0){<br>      return ret=0;<br>    }<br>    ret=100000;<br>    int i,j;<br>    for(i=start;i&lt;=start+3;i++){<br>      if (str[i]=='X') j=dp(i+2,left-1);<br>      else j=dp(i+2,left-1)+1;<br>      if (j&lt;ret) ret=j;<br>    }<br>    return ret;<br>  }<br><br>  int rearrangeTiles(vector &lt;string&gt; cells) {<br>    str="";<br>    int i,j,k,tot=0;<br>    for(i=0;i&lt;cells.size();i++) str=str+cells[i];<br>    j=str.size();<br>    for(i=0;i&lt;j;i++) if (str[i]=='X') tot++;<br>    k=j;<br>    str.resize(5100);<br>    for(;j&lt;str.size();j++){<br>      str[j]='.';<br>    }<br>    memset(a,0xff,sizeof(a));<br>    int best=10000;<br>    for(i=0;i&lt;k;i++){<br>      j=dp(i,tot);<br>      if (j&lt;best) best=j;<br>    }<br>    return best;<br>  }<br>  <br><br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>