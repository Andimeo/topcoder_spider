            using System;<br><br>public class PalindromeEncoding {<br>  public int getLength(string s) {<br>    while (s.Length &gt; 1)<br>    {<br>      if (s[0] != s[1])<br>        break;<br>      s = s.Substring(1);<br>    }<br>    for (int i = 1; i &lt; s.Length; ++i)<br>      if (s[i] == s[i - 1])<br>      {<br>        s = s.Substring(0, i);<br>        break;<br>      }<br>    return s.Length;<br>  }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>