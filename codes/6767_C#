            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class PalindromeDecoding <br>{<br>  const int INF = 123456789;<br><br>  public string decode(string code, int[] position, int[] length) <br>  {<br>        string res = code;<br>        int n = position.Length;<br>        for (int i = 0; i &lt; n; i++)<br>        {<br>            string k = res.Substring(position[i], length[i]);<br>            char[] u = k.ToCharArray();<br>            Array.Reverse(u);<br>            string h = new string(u);<br>            int t = position[i] + length[i];<br>            res = res.Insert(t, h);<br>        }<br>        return res;<br>  }<br><br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>