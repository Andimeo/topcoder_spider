            #include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br><br>using namespace std;<br><br><br>struct PalindromeDecoding {<br>   string decode( string code, vector &lt;int&gt; position, vector &lt;int&gt; length ) {<br>      int n = position.size();<br><br>      for( int i = 0; i &lt; n; ++i ) {<br>         int p = position[i];<br>         int l = length[i];<br>         string a = code.substr( 0, p );<br>         string b = code.substr( p, l );<br>         string c = code.substr( p+l );<br>         string d = b;<br>         reverse( d.begin(), d.end() ); <br>         code = a + b + d + c;<br>      }<br>      return code;<br>   }<br><br><br><br><br><br><br>   <br> <br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by moj 3.0 beta 7 [modified TZTester]<br>// Powered by CodeProcessor<br></td>