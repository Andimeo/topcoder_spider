            import java.util.*;<br><br>public class PalindromeDecoding {<br>  public String decode(String code, int[] position, int[] length) {<br>    int n = position.length;<br>    for (int i = 0; i &lt; n; i++) {<br>      int p = position[i];<br>      int l = length[i];<br>      StringBuilder sb = new StringBuilder(code.substring(p, p + l));<br>      sb.reverse();<br>      code = code.substring(0, p + l) + sb + code.substring(p + l);<br>    }<br>    return code;<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>