<td class="problemText" colspan="8" valign="middle" align="left">
            Public Class PalindromeDecoding<br>    Public Function decode(ByVal code As String, ByVal position As Integer(), ByVal length As Integer()) As String<br>        Dim res As String = code<br><br>        Dim i, j As Integer<br>        Dim N As Integer = position.Length<br><br>        For i = 0 To N - 1<br>            Dim str As String = res.Substring(position(i), length(i))<br>            Dim rev As String = ""<br>            For j = 0 To str.Length - 1<br>                rev = str(j) &amp; rev<br>            Next<br>            res = res.Substring(0, position(i) + length(i)) &amp; rev &amp; res.Substring(position(i) + length(i))<br>        Next<br><br>        Return res<br>    End Function<br>End Class<br></td>