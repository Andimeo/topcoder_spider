            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class ApplePie<br>{<br>  public int getApples(int[] x, int[] y, int[] day, int howMany)<br>  {  <br>    int n = x.length;<br>    int res = 0;<br>    for (int i=0; i&lt;n; i++)<br>    {<br>      if ( (x[i]&gt;=0) &amp;&amp; (x[i]&lt;=100) &amp;&amp; (y[i]&gt;=0) &amp;&amp; (y[i]&lt;=100) )<br>        {<br>          res ++;<br>        }<br>      if (res==howMany) return day[i];<br>    }<br>    return -1;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>