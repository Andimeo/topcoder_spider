            #include &lt;stdio.h&gt;<br>#include &lt;stdlib.h&gt;<br>#include &lt;iostream&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;math.h&gt;<br>#include &lt;memory&gt;<br><br>using namespace std;<br><br>#define rep(i,a,b) for (int i=a;i&lt;b;++i)<br>#define rep0(i,b) for (int i=0;i&lt;b;++i)<br>#define repn(i) for (int i=0;i&lt;n;++i)<br>#define reps(n) for (int i=0;i&lt;n;++i)<br><br>class Survived<br>{<br>public:<br>  double minTime(int X, int Y, int V, int U)<br>  {<br>    double x=X,y=Y,u=U,v=V;<br>    double a=u*u-v*v,b=-2*u*x,c=x*x+y*y;<br>    double a1,a2;<br>    if (fabs(a)&lt;1e-10 &amp;&amp; fabs(b)&lt;1e-10)<br>    {<br>      if (fabs(c)&lt;1e-10)<br>        return 0;<br>      else<br>        return -1;<br>    }<br>    if (fabs(a)&lt;1e-10)<br>    {<br>      a1=-c/b;<br>      if (a1&gt;=0)<br>        return a1;<br>      else<br>        return -1;<br>    }<br>    double tmp=b*b-4*a*c;<br>    if (tmp&lt;0)<br>      return -1;<br>    tmp=sqrt(tmp);<br>    a1=(-b+tmp)/2.0/a;<br>    a2=(-b-tmp)/2.0/a;<br>    cout&lt;&lt;a1&lt;&lt;' '&lt;&lt;a2&lt;&lt;endl;<br>    if (a1&lt;0 &amp;&amp; a2&lt;0)<br>      return -1;<br>    if (a1&lt;0)<br>      a1=a2;<br>    if (a2&lt;a1 &amp;&amp; a2&gt;=0)<br>      a1=a2;<br>    return a1;<br>  }<br>};<br></td>