            public class Survived {<br>    public double minTime(int x, int y, int V, int U){<br>      long a = x * x + y * y;<br>      long b = - 2 * U * x;<br>      long c = U * U - V * V;<br>      long d = b * b - 4 * a * c;<br>      <br>      if (x == 0 &amp;&amp; y == 0)<br>        return 0.0;<br>      <br>      if (d &lt; 0)<br>        return -1;<br>      <br>      double t1 = (-b + Math.sqrt(d)) / 2 / a;<br>      double t2 = (-b - Math.sqrt(d)) / 2 / a;<br>      double t = Math.max(t1, t2);<br>      <br>      if (t &lt; 1e-8)<br>        return -1;<br>      <br>      return 1.0 / t;<br>    }<br>}<br></td>