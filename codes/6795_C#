            using System;<br>using System.Collections;<br>using System.Text;<br><br>public class FixedPoint<br>{<br><br>    public double[] res;<br><br>    public double[] find(double scale, double[] translate, double rotate)<br>    {<br><br>        double a1= scale * Math.Cos(rotate) - 1;<br>        double a2=scale * Math.Sin(rotate);<br>        double b1=- scale * Math.Sin(rotate) ;<br>        double b2=(scale * Math.Cos(rotate) - 1);<br>        double c1=-translate[0] * Math.Cos(rotate) + translate[1] * Math.Sin(rotate);<br>        double c2=-translate[0] * Math.Sin(rotate) - translate[1] * Math.Cos(rotate);<br><br>        double d = b1 * a2 - b2 * a1;<br>        double y = (c1 * a2 - c2 * a1) / d;<br>        double x = (c1 - b1 * y) / a1;<br><br><br>        res = new double[2];<br>        res[0] = x; res[1] = y;<br>        return res;<br>    }<br><br>}<br></td>