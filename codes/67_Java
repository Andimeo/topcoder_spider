            public class Vigenere {<br>  public String coder (String a, String b, int d) {<br>    if(a.length() == 0) return new String("ERROR");<br>    int l = 0;<br>    String r = new String();<br>    for(int i=0;i&lt;a.length();i++) {<br>      char c = a.charAt(i);<br>      if(c &lt; 'A' || c &gt; 'Z') return new String("ERROR");<br>      c -= 'A';<br>      if(d == 1)<br>        c += b.charAt(l) - 'A';<br>      else if(d == 2)<br>        c -= (b.charAt(l) - 'A');<br>      else<br>        return new String("ERROR");<br>      c += 26;<br>      c %= 26;<br>      c += 'A';<br>      r += c;<br>      l++;<br>      l = l % b.length();<br>    }<br>    return r;<br>  }<br>}<br></td>