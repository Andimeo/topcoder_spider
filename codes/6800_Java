            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class BattleshipChecker<br>{<br>  int[][] ff=new int[10][10];<br>  String[] br;<br>  <br>  int floodfill(int x,int y)<br>  {<br>    if(x&lt;0||x&gt;=10||y&lt;0||y&gt;=10||br[x].charAt(y)=='.'||ff[x][y]==1)<br>      return 0;<br>    ff[x][y]=1;<br>    int s=1;<br>    s+=floodfill(x+1,y);<br>    s+=floodfill(x,y+1);<br>    s+=floodfill(x-1,y);<br>    s+=floodfill(x,y-1);<br>    return s;<br>  }<br>  <br>  public String checkBoard(String[] board)<br>  {<br>    br=board;<br>    int[] num=new int[101];<br>    int i,j,ok;<br>    for(i=0;i&lt;10;i++)<br>    for(j=0;j&lt;10;j++)<br>    ff[i][j]=0;<br>    for(i=0;i&lt;=100;i++)<br>      num[i]=0;<br>    for(i=0;i&lt;10;i++){<br>      for(j=0;j&lt;10;j++){<br>      num[floodfill(i,j)]++;<br>      }<br>    }<br>    if(num[0]==90&amp;&amp;num[1]==4&amp;&amp;num[2]==3&amp;&amp;num[3]==2&amp;&amp;num[4]==1)<br>    {<br>      int[] row=new int[10];<br>      int[] col=new int[10];<br>      int pts=0;<br>      ok=0;<br>      for(i=0;i&lt;10;i++)<br>        row[i]=col[i]=1;<br>      for(i=0;i&lt;10;i++){<br>      for(j=0;j&lt;10;j++)<br>      {<br>        if(ff[i][j]==1)<br>        {<br>          row[i]=0;<br>          col[j]=0;<br>          if(i&gt;0&amp;&amp;j&gt;0)<br>            ok+=ff[i-1][j-1];<br>          if(i&gt;0&amp;&amp;j&lt;9)<br>            ok+=ff[i-1][j+1];<br>        }<br>      }<br>      }<br>      for(i=0;i&lt;10;i++)<br>      pts+=row[i]+col[i];<br>      if(ok==0)<br>      return "ACCEPTED, " + pts + " POINTS";<br>      else<br>        return "REJECTED";  <br>    }<br>    else<br>      return "REJECTED";<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>