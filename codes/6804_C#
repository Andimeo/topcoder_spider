            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class GroupWork <br>{<br>  public long bestGroup(int[] p, int[] s) <br>  {<br>    Array.Sort(s, p);<br>    Array.Reverse(s);<br>    Array.Reverse(p);<br>    long total = 0;<br>    long best = 0;<br>    long bp = 0;<br>    for (int i = 0; i &lt; p.Length; i++)<br>    {<br>      total += p[i];<br>      long skill = total * s[i];<br>      if (skill &gt; best)<br>      {<br>        best = skill;<br>        bp = total;<br>      }<br>    }<br>    return best;<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>