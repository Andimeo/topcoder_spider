            // Cry as challenge phase is passing by<br><br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br><br>#include &lt;cmath&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstring&gt;<br><br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br><br>using namespace std;<br><br>#define FORC(it,v) for( __typeof((v).begin()) it = (v).begin(); it != (v).end(); ++it )<br><br>class GroupWork {<br>public:<br>    long long bestGroup( vector &lt;int&gt; p, vector &lt;int&gt; s ) {<br>        vector&lt; pair&lt; int, int &gt; &gt; V;<br><br>        for( int i = 0; i &lt; ( int )p.size(); ++i )<br>            V.push_back( make_pair( s[i], p[i] ) );<br><br>        long long maks = 0;<br><br>        sort( V.begin(), V.end(), greater&lt; pair&lt; int, int &gt; &gt; () );<br><br>        long long mol = 0;<br><br>        for( int i = 0; i &lt; ( int )V.size(); ++i ) {<br>            mol += V[i].second;<br>            maks &gt;?= mol * V[i].first;<br>        }<br><br>        return maks;<br>    }<br>};<br><br><br><br><br><br><br><br><br><br>// Powered by FileEdit<br>// Powered by moj 3.0 beta 11 [modified TZTester]<br>// Powered by CodeProcessor<br></td>