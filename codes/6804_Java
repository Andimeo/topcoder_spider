            import java.io.*;<br>import java.util.*;<br><br>public class GroupWork {<br>  public long bestGroup(int[] p, int[] s) {<br>    Thing[] things = new Thing[p.length];<br>    for (int i=0; i&lt;p.length; i++) {<br>      things[i] = new Thing();<br>      things[i].size = p[i];<br>      things[i].val = s[i];<br>    }<br>    Arrays.sort(things);<br>    long best = 0;<br>    long people=0;<br>    for (int i=0; i&lt;things.length; i++) {<br>      // take all of group i<br>      people+=things[i].size;<br>      best = Math.max(best,people*things[i].val);<br>    }<br>    return best;<br>  }<br>} class Thing implements Comparable&lt;Thing&gt; {<br>  long size;<br>  long val;<br>  public int compareTo(Thing other) {<br>    return other.val-val&gt;0?1:-1;<br>  }<br>}<br></td>