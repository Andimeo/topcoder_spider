            using System;<br><br>public class TournamentPlan {<br>  public int getTravelDistance(int[] street, int[] avenue) {<br>    int[] Xs = (int[]) street.Clone();<br>    Array.Sort(Xs);<br>    int x = Xs[Xs.Length / 2];<br>    int[] Ys = (int[]) avenue.Clone();<br>    Array.Sort(Ys);<br>    int y = Ys[Ys.Length / 2];<br>    int res = 0;<br>    for (int i = 0; i &lt; street.Length; ++i)<br>      res += Math.Abs(street[i] - x) + Math.Abs(avenue[i] - y);<br>    return res;<br>  }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>