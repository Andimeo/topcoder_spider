            using System;<br>using System.Text;<br>using System.Collections;<br><br>public class Alliteration<br>{<br>  string[] words;<br>  int ret;<br><br>  int Main()<br>  {<br>        ret = 0;<br>        int c = 0;<br>        char prev = (char)0;<br>    for(int i=0;i&lt;words.Length;i++)<br>    {<br>            string word = words[i].ToLower();<br>            if (word[0] != prev)<br>            {<br>                c = 1;<br>                prev = word[0];<br>            }<br>            else<br>            {<br>                c++;<br>                if(c==2)<br>                    ret+=1;<br>            }<br>    }<br>    return ret;<br>  }<br>  public int count(string[] words)<br>  {<br>    this.words=words;<br>    return Main();<br>  }<br>}<br></td>