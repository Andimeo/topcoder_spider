            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;map&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;numeric&gt;<br>#include &lt;cmath&gt;<br> <br>using namespace std;<br>#define FOR(i,n) for(int i = 0 ; i &lt; int(n) ; i++)<br>#define FLR(i,L,R) for( int i = int(L) ; i &lt;= int(R) ; i++)<br>#define CLEAR(A) memset(A,0,sizeof(A))<br>#define VAR(a,b) __typeof(b) a=b<br>#define FORIT(it,v) for( VAR(it,(v).begin()) ; it != (v).end(); (it)++ )<br> <br>class IrreducibleNumber {<br>  public:<br>  int getIrreducible(vector &lt;int&gt; A) {<br>    int n = A.size();<br>    bool used[ 10000 ];<br>    CLEAR( used );<br>    FOR( mask,1&lt;&lt;n ) {<br>      int sum = 0;<br>      FOR( i,n ) <br>      if ( (mask &gt;&gt; i)&amp;1 ) sum+= A[i];<br>      used[ sum ] = true;<br>    }<br>    FLR( i,1,1000 ) if (!used[i]) return i;<br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>