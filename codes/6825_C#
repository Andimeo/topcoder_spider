            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class SalePitch<br>{<br>    public int GCD(int a, int b)<br>    {<br>        if (a &lt; b) { int t = a; a = b; b = t; }<br>        while (a % b != 0)<br>        {<br>            int t = a % b;<br>            a = b;<br>            b = t;<br>        }<br>        return b;<br>    }<br>    public string buyXGetY(string regular, string sale)<br>    {<br>        int val = (int)((double.Parse(regular.Substring(1)) + 0.00001)*100);<br>        int sal = (int)((double.Parse(sale.Substring(1)) + 0.00001) * 100);<br>        int gcd = GCD(val, sal);<br><br>        val /= gcd;<br>        sal /= gcd;<br><br>        int a = val - sal;<br>        int b = sal;<br><br>        return string.Format("BUY {0} GET {1} FREE", b, a);<br>    }<br>}<br></td>