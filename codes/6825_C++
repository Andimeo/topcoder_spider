            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cmath&gt;<br>#include &lt;queue&gt;<br> <br>using namespace std;<br><br>class SalePitch<br>{<br>public:<br>int gcd(int x,int y)<br>{<br>  if (y==0) return x;<br>  else return gcd(y,x%y);<br>}<br><br>string buyXGetY(string regular, string sale)<br>{<br>  string s;<br>  int i,j,p,x,y,tmp;<br>  char ans[1000];<br>  s=regular.substr(1);<br>  p=s.find_first_of('.');<br>  s.erase(p,1);<br>  y=atoi(s.c_str());<br>  s=sale.substr(1);<br>  p=s.find_first_of('.');<br>  s.erase(p,1);<br>  x=atoi(s.c_str());<br>  tmp=gcd(x,y);<br>  x/=tmp;<br>  y/=tmp;<br>  y-=x;<br>  sprintf(ans,"BUY %d GET %d FREE",x,y);<br>  return ans;<br>}<br>};<br></td>