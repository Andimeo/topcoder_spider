            using System;<br>using System.Collections;<br> <br>public class BlockEnemy<br>{<br>  int n, m;<br>  int[] ra, rb, rc;<br>  int[] occ;<br>  <br>  int[] get (int w, int f)<br>  {<br>    bool is_occ = false;<br>    foreach (int i in occ)<br>      if (i == w)<br>        is_occ = true;<br>    <br>    int c = 0;<br>    <br>    for (int i = 0; i &lt; m; ++i)<br>    {<br>      int o;<br>      <br>      if (ra[i] == w &amp;&amp; rb[i] != f)<br>        o = rb[i];<br>       else<br>      if (rb[i] == w &amp;&amp; ra[i] != f)<br>        o = ra[i];<br>       else<br>        continue;<br>      <br>      ++c;<br>    }<br>    <br>    int[][] q = new int[c][];<br>    int[] qq = new int[c];<br>    <br>    int d = 0;<br>    <br>    for (int i = 0; i &lt; m; ++i)<br>    {<br>      int o;<br>      <br>      if (ra[i] == w &amp;&amp; rb[i] != f)<br>        o = rb[i];<br>       else<br>      if (rb[i] == w &amp;&amp; ra[i] != f)<br>        o = ra[i];<br>       else<br>        continue;<br>      <br>      q[d] = get (o, w);<br>      qq[d] = rc[i];<br>      <br>      ++d;<br>    }<br>    <br>    int sum = 0;<br>    <br>    for (int i = 0; i &lt; c; ++i)<br>      sum += Math.Min (q[i][0], q[i][1] + qq[i]);<br>    <br>    int[] res = new int[2];<br>    <br>    if (is_occ)<br>    {<br>      res[0] = 100000000;<br>      res[1] = sum;<br>      return res;<br>    }<br>    <br>    res[0] = sum;<br>    res[1] = 100000000;<br>    <br>    for (int i = 0; i &lt; c; ++i)<br>      if (sum - Math.Min (q[i][0], q[i][1] + qq[i]) + q[i][1] &lt; res[1])<br>        res[1] = sum - Math.Min (q[i][0], q[i][1] + qq[i]) + q[i][1];<br>    <br>    return res;<br>  }<br>  <br>  public int minEffort(int N, string[] roads, int[] occupiedTowns)<br>  {<br>    n = N;<br>    m = roads.Length;<br>    occ = occupiedTowns;<br>    <br>    ra = new int[m];<br>    rb = new int[m];<br>    rc = new int[m];<br>    <br>    for (int i = 0; i &lt; m; ++i)<br>    {<br>      string[] s = roads[i].Split (' ');<br>      ra[i] = int.Parse (s[0]);<br>      rb[i] = int.Parse (s[1]);<br>      rc[i] = int.Parse (s[2]);<br>    }<br>    <br>    int[] x = get (0, -1);<br>    <br>    return Math.Min(x[0], x[1]);<br>  }<br>}<br> <br> <br>// Powered by FileEdit<br></td>