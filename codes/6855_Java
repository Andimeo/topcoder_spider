            public class MarbleNecklace {<br>  public String normalize(String necklace) {<br>    int n = necklace.length();<br>    String ans = necklace, cur;<br>    int i, j;<br>    for (i=0;i&lt;n;++i) {<br>      cur = new String("");<br>      for (j=0;j&lt;n;++j)<br>        cur += necklace.charAt((i + n + j) % n);<br>      if (ans.compareTo(cur) &gt; 0) <br>        ans = cur;<br>      cur = new String("");<br>      for (j=0;j&lt;n;++j)<br>        cur += necklace.charAt((i + n - j) % n);<br>      if (ans.compareTo(cur) &gt; 0) <br>        ans = cur;<br>    }<br>    return ans;<br>  }<br>}<br></td>