            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class Postnet{<br>  public string barcode(string zipCode)  {<br>    <br>        string[] codes={"HHLLL","LLLHH","LLHLH","LLHHL","LHLLH","LHLHL","LHHLL","HLLLH","HLLHL","HLHLL"};<br>      <br>      int checksum=0;<br>      StringBuilder ans= new StringBuilder();<br>      <br>      ans.Append("H");<br>      for(int i=0;i&lt;zipCode.Length;i++){<br>          int cur=zipCode[i]-'0';<br>          <br>          ans.Append(codes[cur]);<br>          checksum=(checksum+cur)%10;<br>      }<br>      <br>      ans.Append(codes[(10-checksum)%10]);<br>            <br>      ans.Append("H");<br>      return ans.ToString();<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>