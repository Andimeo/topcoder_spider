            using System;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class CCWTurning {<br>    const double EPS = 1e-10;<br>    double res = 1000000.0;<br>    int n;<br>    double[] angles;<br><br>    public double minDistance(int radius, int[] segLength) {<br>  n = segLength.Length;<br>  angles = new double[n];<br>  for (int i = 0; i &lt; n; ++i) {<br>      if (segLength[i] &gt; 2 * radius)<br>    return -1;<br>      angles[i] = 2 * Math.Asin(segLength[i] / 2.0 / radius);<br>  }<br>  rec(2 * Math.PI, 0, 0);<br>  if (res &gt; 500000.0)<br>      return -1;<br>  else<br>      return res * radius;<br>    }<br><br>    void rec(double available, double at, int id) {<br>  if (id &gt;= n) {<br>      res = Math.Min(res, 2 * Math.Abs(Math.Sin(at / 2)));<br>      return;<br>  }<br>  if (angles[id] &lt; available - EPS) {<br>      rec(2 * Math.PI - angles[id], at + angles[id], id + 1);<br>  }<br>  if (2 * Math.PI - angles[id] &lt; available - EPS) {<br>      rec(angles[id], at + 2 * Math.PI - angles[id], id + 1);<br>  }<br>    }<br>}<br><br><br>// Powered by FileEdit<br></td>