            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class FunnyFence<br>{<br>      public int getLength(string s)<br>    {<br>        int leng = 1;<br>        for (int i = 0; i &lt; s.Length; i++)<br>        {<br>            int curLen = 1;<br>            char prev = s[i];<br>            for (int j = i + 1; j &lt; s.Length &amp;&amp; s[j] != prev; j++)<br>            {<br>                curLen++;<br>                prev = s[j];<br>            }<br> <br>            leng = (leng &lt; curLen) ? curLen : leng;<br>        }<br>        return leng;<br>    }<br> <br>  <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>