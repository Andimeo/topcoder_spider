            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class Surname{<br>  public int bestSurname(string[] surnames)  {<br>    int best=int.MinValue;<br>      int ibest=0;<br>      <br>      for(int i=0;i&lt;surnames.Length;i++){<br>          int score=0;<br>          for(int j=0;j&lt;surnames[i].Length;j++){<br>              score+=(int)surnames[i][j];<br>          }<br>          <br>          if(score &gt; best){<br>              best=score;<br>              ibest=i;<br>          }<br>      }<br>      return ibest;<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>