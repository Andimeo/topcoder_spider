            /*<br>*/<br>import java.util.*;<br>public class Surname {<br>    public int bestSurname(String[] s) {<br>        int res=0;<br>      int best=-1;<br>      <br>      for (int i=0; i&lt;s.length; i++)<br>      {<br>        int t=0;<br>      for (int j=0; j&lt;s[i].length(); j++) t += s[i].charAt(j);<br>      if (t &gt; best)<br>      {<br>        best = t;<br>        res = i;<br>      }<br>      }<br>      <br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>