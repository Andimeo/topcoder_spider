            import java.util.*;<br>public class TriTravel<br>{<br>        public int bestWayDown(ArrayList a)<br>        {<br>                return bestWayDown(a, 0, 0);<br>        }<br>        public int bestWayDown(ArrayList a, int lv, int i)<br>        {<br>                int lc = leftChild(lv+1, i);<br>                int rc = leftChild(lv+1, i+1);<br>                if (rc &gt;= a.size())<br>                        return ((Integer)(a.get(leftChild(lv,i)))).intValue();<br>                int left = ( (Integer) (a.get( leftChild(lv,i)))).intValue() + bestWayDown(a, lv + 1, i);<br>                int right = ((Integer)(a.get(leftChild(lv,i)))).intValue() + bestWayDown(a, lv + 1, i+1);<br>                return (left &gt; right)? left : right;<br>        }<br>        public int leftChild(int l, int ind)<br>        {<br>                int index = 0;<br>                for (int i = 1; i &lt;= l; i++)<br>                {<br>                        index = index + i;<br>                }<br>                index = index + ind;<br>                return index;<br>        }<br>}<br></td>