            public class BoulderRace<br>{<br>  public int winner(String[] boulders, int distance)<br>  {<br>    int place[] = new int[10];<br>    int len = boulders.length;<br>    int time = 0;<br>      for (int i = 0; i &lt; len; i++)<br>      {<br>        place[i] = 0;<br>      }<br>    while (true)<br>    {<br>      for (int i = 0; i &lt; len; i++)<br>      {<br>        place[i] += boulders[i].charAt(time % boulders[i].length()) - '1' + 1;<br>      }<br>      time++;<br>      for (int i = 0; i &lt; len; i++)<br>      {<br>        if (place[i] &gt;= distance)<br>          return i;<br>      }<br>    }<br>  }<br>}<br></td>