            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class StoneGame<br>{<br>  public int getScore(int[] treasure, int[] stones)<br>  {<br>    int N = stones.Length;<br>    Array.Sort(treasure, stones);<br>    int c = 0;<br>    int res = 0;<br>    for (int i = N-1, j = 0; i &gt;= 0; i--)<br>    {<br>      if (stones[i] == 1)<br>      {<br>        if (j == 0) res += treasure[i];<br>        j = 1 - j;<br>        stones[i] = treasure[i] = 0;<br>        c++;<br>      }<br>      else if (stones[i] &gt; 1)<br>      {<br>        c += stones[i] - 2;<br>        stones[i] = 2;<br>      }<br>    }<br>    Array.Sort(treasure, stones);<br>    if (c % 2 == 1)<br>    {<br>      foreach (int i in treasure)<br>        res += i;<br>    }<br>    return res;<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>