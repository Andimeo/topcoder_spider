            #include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;queue&gt;<br>#include &lt;set&gt;<br>#include &lt;map&gt;<br><br>#include &lt;stdio.h&gt;<br>#include &lt;stdlib.h&gt;<br>#include &lt;string.h&gt;<br>#include &lt;math.h&gt;<br>#include &lt;ctype.h&gt;<br><br>using namespace std;<br><br>#define PB push_back<br>typedef long long LL;<br>typedef vector &lt;int&gt; VI;<br>typedef pair &lt;int, int&gt; PII;<br>#define SZ(a) (int)((a).size())<br>#define ALL(a) (a).begin(), (a).end()<br>#define REP(i, a) for (i = 0; i &lt; (a); i++)<br>#define REPS(i, a) REP(i, SZ(a))<br><br>class StoneGame<br>{<br>public:<br>  int getScore(vector &lt;int&gt; d, vector &lt;int&gt; a)<br>  {<br>    int i, sum = 0, ans = 0, mov = 0;<br>    VI b;<br>    REPS(i, d)<br>      if (a[i] == 1)<br>        b.PB(d[i]);<br>      else<br>        sum += d[i], mov += a[i] - 2;<br>    sort(ALL(b));<br>    for (i = SZ(b) - 1; i &gt;= 0; i -= 2)<br>      ans += b[i];<br>    if ((mov + (SZ(b) &amp; 1)) % 2 == 1)<br>      ans += sum;<br>    return ans;  <br>  }<br>};<br></td>