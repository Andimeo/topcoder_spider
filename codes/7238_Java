            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class StoneGame<br>{<br>  public int getScore(int[] t, int[] s)<br>  {<br>    int [] t1 = new int [100];  <br>    int i, j, tmp, m1, m2, m, sum = 0;<br>    int n = t.length;<br>    <br>    m1 = m2 = m = 0;<br>    for (i = 0; i &lt; n; i++)<br>      if (s [i] == 1)<br>      {<br>        m++;<br>        t1 [m] = t [i];<br>      }<br>      else<br>      {<br>        sum = sum + t [i];<br>        if (s [i] % 2 == 1) m1++;<br>        else m2++;<br>      }<br>    <br>    for (i = 1; i &lt;= m; i++)<br>      for (j = i + 1; j &lt;= m; j++)<br>        if (t1 [i] &lt; t1 [j])<br>        {<br>          tmp = t1 [i]; t1 [i] = t1 [j]; t1 [j] = tmp;          <br>        }<br>        <br>    <br>    i = 1;<br>    int sol = 0;<br>    while (i &lt;= m)<br>    {<br>      sol = sol + t1 [i];<br>      i = i + 2;<br>    }<br>    if (i == m + 1)<br>    {<br>      if (m1 % 2 == 1)<br>        sol = sol + sum;      <br>    }<br>    else<br>    {<br>      m1++;<br>      if (m1 % 2 == 1)<br>        sol = sol + sum;<br>    }<br>    <br>    return sol;<br> <br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>