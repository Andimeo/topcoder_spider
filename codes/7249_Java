            import java.util.*;<br>public class EncodedSum<br>{<br>  public long maximumSum(String[] numbers)<br>  {<br>    long[] val = new long[10];<br>    boolean[] allowed = new boolean[10];<br>    Arrays.fill(allowed,true);<br>    for(String str:numbers)<br>    {<br>      allowed[str.charAt(0)-'A'] = false;<br>      long pow10= 1;<br>      for(int i=str.length()-1;i&gt;=0;i--)<br>      {<br>        val[str.charAt(i)-'A'] += pow10;<br>        pow10 *= 10;<br>      }<br>    }<br>    boolean[] used = new boolean[10];<br>    long ret = 0;<br>    for(int i=0;i&lt;10;i++)<br>    {<br>      long min = Long.MAX_VALUE;<br>      int minj = -1;<br>      for(int j=0;j&lt;10;j++)<br>      {<br>        if(i&gt;0 || (i==0 &amp;&amp; allowed[j]))<br>        {<br>          if(!used[j] &amp;&amp; val[j]&lt;min)<br>          {<br>            min = val[j];<br>            minj = j;<br>          }<br>        }<br>      }<br>      if(minj==-1)<br>        return -1;<br>      ret += i*val[minj];<br>      used[minj] = true;<br>    }<br>    return ret;<br>  }<br>}<br></td>