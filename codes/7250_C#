            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class LightsCube<br>{<br>  public int[] count(int N, string[] lights)<br>  {<br>    int[][] lg = splints(lights);<br>    int[] res = new int[lights.Length];<br>    for (int i = 0; i &lt; N; i++)<br>      for (int j = 0; j &lt; N; j++)<br>        for (int k = 0; k &lt; N; k++)<br>        {<br>          int c = 0, d = int.MaxValue;<br>          for (int l = 0; l &lt; lights.Length; l++)<br>          {<br>            int dst = Math.Abs(lg[l][0] - i);<br>            dst += Math.Abs(lg[l][1] - j);<br>            dst += Math.Abs(lg[l][2] - k);<br>            if (dst &lt; d)<br>            {<br>              d = dst;<br>              c = l;<br>            }<br>          }<br>          res[c]++;<br>        }<br>    return res;<br>  }<br>  <br>  int[][] splints(string[] s)<br>    {<br>        return Array.ConvertAll&lt;string, int[]&gt;(s, delegate(string t)<br>        {<br>            return Array.ConvertAll&lt;string, int&gt;(t.Split(), int.Parse);<br>        });<br>    }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>