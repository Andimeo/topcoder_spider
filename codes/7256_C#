            using System;<br><br>public class Arrows {<br>  public int longestArrow(string s) {<br>    int res = -1;<br>    for (int i = 0; i &lt; s.Length; ++i)<br>    {<br>      if (s[i] == '&gt;')<br>      {<br>        int j = i - 1;<br>        while (j &gt;= 0 &amp;&amp; s[j] == '-')<br>          --j;<br>        res = Math.Max(res, i - j);<br>        j = i - 1;<br>        while (j &gt;= 0 &amp;&amp; s[j] == '=')<br>          --j;<br>        res = Math.Max(res, i - j);<br>      } else if (s[i] == '&lt;')<br>      {<br>        int j = i + 1;<br>        while (j &lt; s.Length &amp;&amp; s[j] == '-')<br>          ++j;<br>        res = Math.Max(res, -i + j);<br>        j = i + 1;<br>        while (j &lt; s.Length &amp;&amp; s[j] == '=')<br>          ++j;<br>        res = Math.Max(res, -i + j);<br>        <br>      }<br>    }<br>    return res;<br>  }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>