            import java.util.*;<br><br>public class Arrows {<br>  public int longestArrow(String s) {<br>    int res = -1;<br>    for (int i=0; i&lt;s.length(); i++) <br>      if (s.charAt(i) == '&lt;') {<br>        int j = i;<br>        while (j+1 &lt; s.length() &amp;&amp; s.charAt(j+1) == '-')<br>          j++;<br>        res = Math.max(res, j-i+1);<br>        j = i;<br>        while (j+1 &lt; s.length() &amp;&amp; s.charAt(j+1) == '=')<br>          j++;<br>        res = Math.max(res, j-i+1);<br>      } else if (s.charAt(i) == '&gt;') {<br>        int j = i;<br>        while (j-1 &gt;= 0 &amp;&amp; s.charAt(j-1) == '-')<br>          j--;<br>        res = Math.max(res, i-j+1);<br>        j = i;<br>        while (j-1 &gt;= 0 &amp;&amp; s.charAt(j-1) == '=')<br>          j--;<br>        res = Math.max(res, i-j+1);<br>      }<br>    return res;<br>  }<br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>