            public class CarParking<br>{<br>  public int closestShed(int x, int N)<br>  {<br>    for ( long d = 0; d &lt;= 12345678; ++d )<br>    {<br>      long a = x - d;<br>      if ( a &gt; 0 &amp;&amp; pal(a + "") ) return (int) a;<br>      long b = x + d;<br>      if ( b &lt;= N &amp;&amp; pal(b + "") ) return (int) b; <br>    }<br>    return 1;<br>  }<br><br>  private boolean pal(String s)<br>  {<br>    for ( int i = 0; i &lt; s.length() / 2; ++i )<br>      if ( s.charAt(i) != s.charAt(s.length() - 1 - i) ) return false;<br>    return true;<br>  }<br>}<br></td>