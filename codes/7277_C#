            using System;<br><br>public class TextStatistics<br>  {<br>    public double averageLength(string text)<br>      {<br>        string[] a = text.Split("0123456789 ,.?!-".ToCharArray());<br>        int n = 0, d = 0;<br>          for (int ctr = 0; ctr &lt; a.Length; ++ctr)<br>            if (a[ctr].Length &gt; 0)<br>              {<br>                n += a[ctr].Length;<br>                ++d;<br>              }<br>          if (n == 0)<br>            return 0.0;<br>          else<br>            return Convert.ToDouble(n) / Convert.ToDouble(d);<br>      }<br>  }<br></td>