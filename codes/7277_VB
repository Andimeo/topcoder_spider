            Imports Microsoft.VisualBasic<br>Public Class TextStatistics<br>    Public Function averageLength(ByVal s As String) As Double<br>        Dim avglen As Double = 0.0<br>        Dim i As Integer<br>        Dim wc As Integer = 0, lc As Integer = 0<br>        Dim inWord As Boolean = False<br>        For i = 0 To s.Length - 1<br>            Dim c As String = s.Substring(i, 1)<br>            Dim isLetter As Boolean = (c.ToUpper &gt;= "A" And c.ToUpper &lt;= "Z")<br>            If (isLetter And (Not inWord)) Then<br>                wc += 1<br>                inWord = True<br>            ElseIf Not isLetter Then<br>                inWord = False<br>            End If<br>            If isLetter Then lc += 1<br>        Next<br>        If wc &lt;&gt; 0 Then avglen = lc / wc<br>        Return avglen<br>    End Function<br>End Class<br></td>