            using System;<br>using System.Collections;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class Palindromize<br>{<br>    bool ispalin(string s)<br>    {<br>        int f = 0;<br>        int l = s.Length - 1;<br>        while (f &lt; l)<br>        {<br>            if (s[f] != s[l]) return false;<br>            f++;<br>            l--;<br>        }<br>        return true;<br>    }<br> <br>    public string minAdds(string s)<br>    {<br>        for (int i = 0; i &lt;= s.Length; i++)<br>        {<br>            string t = s;<br>            char[] c = s.Substring(0, i).ToCharArray();<br>            Array.Reverse(c);<br> <br>            t += new string(c);<br> <br>            if (ispalin(t)) return t;<br>        }<br> <br>        return "";<br>    }<br>}<br></td>