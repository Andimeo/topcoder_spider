            public class Palindromize <br>{<br>  public String minAdds(String a)<br>{  <br>int i;<br>  String k="";<br>  for(i=0;i&lt;a.length();i++)<br>  {<br>     k=a.substring(i,a.length());<br>    int v=0;<br>    for(int l=0;l&lt;k.length();l++)<br>    {<br>      if(k.charAt(l)!=k.charAt(k.length()-l-1))<br>      v=1;<br>    }<br>    if(v==0)<br>    break;  <br>    }<br>    //System.out.println(k + i);<br>    char t[]=new char[a.length()-k.length()];<br>    for(int j=i-1;j&gt;=0;j--)<br>    t[i-1-j]=a.charAt(j);<br>    return a+new String(t);<br>  }<br>}<br></td>