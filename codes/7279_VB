            Public Class Palindromize<br>        Public Function minAdds(ByVal s As String) As String<br>            Dim sec As String = ""<br>            Dim i As Integer<br>            For i = 0 To s.Length - 1<br>                If isPalindrome(s &amp; sec) Then<br>                    Return (s &amp; sec)<br>                Else<br>                    sec = s.Substring(i, 1) &amp; sec<br>                End If<br>            Next<br>            Return ""<br>        End Function<br>        Private Function isPalindrome(ByVal s As String) As Boolean<br>            Dim i As Integer<br>            For i = 0 To s.Length - 1<br>                If Not s(i) = s(s.Length - 1 - i) Then<br>                    Return False<br>                End If<br>            Next<br>            Return True<br>        End Function<br>    End Class<br></td>