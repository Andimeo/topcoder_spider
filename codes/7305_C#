            class DirPattern<br>{<br>  public string matchFiles(string[] filenames)<br>        {<br>            <br>            <br>            int t = filenames.GetLength(0);<br>            <br>            int t0 = filenames[0].Length;<br>            char[] c=new char[t0];<br>            int tag=1;<br>            for (int i = 0; i &lt; t0; i++)<br>            { <br>                for(int j=0;j&lt;t-1;j++)<br>                {<br>                    if(filenames[j][i]!=filenames[j+1][i]) <br>                    {<br>                        tag=0;<br>                        break;<br>                    }<br>                }<br>                if (tag == 0) <br>                {<br>                  c[i] = '?';tag=1;<br>                }<br>                else c[i] = filenames[0][i];<br>            }<br>            string s = new string(c);<br>            return s;<br>        }<br>}<br></td>