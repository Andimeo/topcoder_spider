            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class CreatePairs<br>{<br>  public int maximalSum(int[] data)<br>  {<br>        Array.Sort(data);<br>        int n = data.Length;<br>        int res = 0;<br>        int i;<br>        for(i = 0; i &lt; n - 1; i++)<br>            if (data[i + 1] &lt;= 0)<br>            {<br>                res += data[i] * data[i + 1];<br>                i++;<br>            }<br>            else<br>                break;<br>        int j;<br>        for (j = n-1; j &gt; 0; j--)<br>            if (data[j - 1] &gt; 1)<br>            {<br>                res += data[j] * data[j - 1];<br>                j--;<br>            }<br>            else<br>                break;<br>        for (int k = i; k &lt;= j; k++)<br>            res += data[k];<br>        return res;    <br>  }<br> <br>    <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>