<td class="problemText" colspan="8" valign="middle" align="left">
            import java.util.*;<br>public class CreatePairs{<br>  public int maximalSum(int[] x){<br>    Arrays.sort(x);<br>    int sum = 0;<br>    int l=0;<br>    while (l+1&lt;x.length &amp;&amp; x[l+1]&lt;=0){<br>      sum+=x[l]*x[l+1];<br>      l+=2;<br>    }<br>    int r=x.length-1;<br>    while (r-1&gt;=0 &amp;&amp; x[r-1]&gt;1){<br>      sum+=x[r]*x[r-1];<br>      r-=2;<br>    }<br>    for(int i=l;i&lt;=r;i++){<br>      sum+=x[i];<br>    }<br>    return sum;<br>    <br>  }<br>}<br></td>