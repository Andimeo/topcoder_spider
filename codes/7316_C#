            using System;<br><br>public class Destruction {<br>  const double INF = 1e10;<br>  <br>  public double minError(int numTests, int numDestroyed) {<br>    double[,] r1 = new double[numTests + 1, numDestroyed + 1];<br>    double[,] r2 = new double[numTests + 1, numDestroyed + 1];<br>    for (int i = 0; i &lt;= numDestroyed; ++i)<br>    {<br>      r2[0, i] = 0.5;<br>      r1[0, i] = INF;<br>    }<br><br>    for (int a = 1; a &lt;= numTests; ++a)<br>    {<br>      r1[a, 0] = INF;<br>      r2[a, 0] = 0.5;<br>      for (int b = 1; b &lt;= numDestroyed; ++b)<br>      {<br>        if (a == 1)<br>          r1[a, b] = 0.5;<br>        else<br>        {<br>          double pBad = r2[a - 1, b - 1];<br>          double pGood = r1[a - 1, b];<br>          if (pBad &gt;= INF || pGood &gt;= INF)<br>            r1[a, b] = INF;<br>          else<br>          {<br>            double x = pGood / (pGood + pBad);<br>            r1[a, b] = x * pBad;<br>          }<br>        }<br>        {<br>          double pBad = r2[a - 1, b - 1];<br>          double pGood = r2[a - 1, b];<br>          if (pBad &gt;= INF || pGood &gt;= INF)<br>            r2[a, b] = INF;<br>          else<br>          {<br>            double x = pGood / (pGood + pBad);<br>            r2[a, b] = x * pBad;<br>          }<br>        }<br>      }<br>    }<br>    <br>    return 100 * r1[numTests, numDestroyed];<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>