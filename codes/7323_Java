            public class Squares<br>{<br>  public int countSquares(String[] field)<br>  {<br>    char data[][] = new char[100][100];<br>    int row = field.length;<br>    int col = field[0].length();<br>    for (int i = 0; i &lt; row; i++)<br>    {<br>      for (int j = 0; j &lt; col; j++)<br>      {<br>        data[i][j] = field[i].charAt(j);<br>      }<br>    }<br>    int count = 0;<br>    for (int i = 0; i &lt; row; i++)<br>    {<br>      for (int j = 0; j &lt; col; j++)<br>      {<br>        for (int k = i; k &lt; row; k++)<br>        {<br>          for (int l = j+1; l &lt; col; l++)<br>          {<br>            char c = data[i][j];<br>            if (c != data[k][l])<br>              continue;<br>            if (i+l-j &gt;= row || j-k+i &lt; 0 || data[i+l-j][j-k+i] != c)<br>            {<br>              continue;<br>            }<br>            if (k+l-j &gt;= row || l-k+i &lt; 0 || data[k+l-j][l-k+i] != c)<br>            {<br>              continue;<br>            }<br>            count++;<br>          }<br>        }<br>      }<br>    }<br>    return count;<br>  }<br>}<br></td>