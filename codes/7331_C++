            #include &lt;algorithm&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstring&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>using namespace std;<br>const int MAXL = 1000;<br>char buff[MAXL+1];<br><br><br>class BrickMystery {<br>public:<br>    string to_bin( int x ) {<br>        string sol;<br>        for( ; x; x /= 2 )<br>            sol.push_back( ( x &amp; 1 ) ? 'x' : '.' );<br>        sol += string( 7 - ( int )sol.size(), '.' );<br>        reverse( sol.begin(), sol.end() ); <br>        return sol;<br>    }<br>    vector &lt;string&gt; createPattern( string s ) {<br>        vector&lt; string &gt; sol;<br>        sol.push_back( "x.......x" );<br>        for( int i = 0; i &lt; ( int )s.size(); ++i ) <br>            sol.push_back( "x" + to_bin( s[i] ) + "x" );<br>        sol.push_back( "x.......x" );<br>        return sol;<br>    }<br>};<br><br><br><br><br><br><br><br><br><br>// Powered by FileEdit<br>// Powered by moj 3.0 beta 11 [modified TZTester]<br>// Powered by CodeProcessor<br></td>