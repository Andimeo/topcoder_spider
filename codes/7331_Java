            public class BrickMystery {<br>  public String[] createPattern(String message) {<br>    String[] res = new String[message.length()+2];<br>    res[0] = "x.......x";<br>    res[message.length()+1] = "x.......x";<br>    for (int i = 0 ; i &lt; message.length(); i++) {<br>      res[i+1] = "x";<br>      int qq = (int) message.charAt(i);<br>      for (int j = 6; j &gt;= 0; j--) {<br>        if ((qq &amp; 1&lt;&lt;j) == 0) res[i+1]+='.'; else res[i+1]+='x';<br>      }<br>      res[i+1]+='x';<br>    }<br>    return res;<br>  }<br>}<br></td>