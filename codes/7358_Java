            public class SupermarketDiscount {<br>  public int minAmount(int[] goods) {<br>    int x1, x2, x3, t;<br>    int min = 500;<br>    <br>    x1 = goods[0];<br>    x2 = goods[1];<br>    x3 = goods[2];<br>    <br>    if (x1 &gt;= 50) x1 -= 10;<br>    if (x2 &gt;= 50) x2 -= 10;<br>    if (x3 &gt;= 50) x3 -= 10;<br>    <br>    t = x1 + x2 + x3;<br>    if (t &lt; min) min = t;<br>    <br>    x1 = goods[0] + goods[1];<br>    x2 = goods[2];<br>    x3 = 0;<br>    <br>    if (x1 &gt;= 50) x1 -= 10;<br>    if (x2 &gt;= 50) x2 -= 10;<br>    if (x3 &gt;= 50) x3 -= 10;<br>    <br>    t = x1 + x2 + x3;<br>    if (t &lt; min) min = t;<br>    <br>    x1 = goods[0] + goods[2];<br>    x2 = goods[1];<br>    x3 = 0;<br>    <br>    if (x1 &gt;= 50) x1 -= 10;<br>    if (x2 &gt;= 50) x2 -= 10;<br>    if (x3 &gt;= 50) x3 -= 10;<br>    <br>    t = x1 + x2 + x3;<br>    if (t &lt; min) min = t;<br>    <br>    x1 = goods[1] + goods[2];<br>    x2 = goods[0];<br>    x3 = 0;<br>    <br>    if (x1 &gt;= 50) x1 -= 10;<br>    if (x2 &gt;= 50) x2 -= 10;<br>    if (x3 &gt;= 50) x3 -= 10;<br>    <br>    t = x1 + x2 + x3;<br>    if (t &lt; min) min = t;<br>    <br>    x1 = goods[1] + goods[2] + goods[0];<br>    x2 = 0;<br>    x3 = 0;<br>    <br>    if (x1 &gt;= 50) x1 -= 10;<br>    if (x2 &gt;= 50) x2 -= 10;<br>    if (x3 &gt;= 50) x3 -= 10;<br>    <br>    t = x1 + x2 + x3;<br>    if (t &lt; min) min = t;<br>    <br>    return min;<br>  }<br>}<br></td>