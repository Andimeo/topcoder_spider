<td class="problemText" colspan="8" valign="middle" align="left">
            import java.util.*;<br>public class ImprovingStatistics<br>{<br>  public int howManyGames(int _played, int _won)<br>  {<br>    long played = _played; long won = _won;<br>    long perc = won*100/played;<br>    if(perc&gt;=99)<br>      return -1;<br>    long lower = 0, upper = 2000000000;<br>    while(lower+1&lt;upper)<br>    {<br>      long mid = (lower+upper)/2;<br>      long perc2 = (won+mid)*100/(played+mid);<br>      if(perc2&gt;perc)<br>        upper = mid;<br>      else<br>        lower = mid;<br>    }<br>    return (int)upper;<br>  }<br>}<br></td>