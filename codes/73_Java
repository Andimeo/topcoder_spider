            import java.util.*;<br>public class Race<br>{<br>        public int closestCheckPoint(ArrayList a, ArrayList b, ArrayList c)<br>        {<br>                int closest = Integer.MAX_VALUE;<br>                int closestIndex = 0;<br>                for (int i = 0; i &lt; a.size(); i++) {<br>                        int x = ((Integer) a.get(i)).intValue();<br>                        int y = ((Integer) b.get(i)).intValue();<br>                        int z = ((Integer) c.get(i)).intValue();<br>                        int min = Math.min(x, Math.min(y,z));<br>                        int max = Math.max(x, Math.max(y,z));<br>                        int diff = max - min;<br>                        if (diff &lt;= closest) { closest = diff; closestIndex = i; }<br>                }<br>                return closestIndex;<br>        }<br>}<br></td>