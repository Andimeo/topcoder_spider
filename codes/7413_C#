            using System;<br>using System.Collections.Generic;<br><br>  public class ReverseUnnaturalBaseConversion<br>  {<br>    private List&lt;int&gt; numbers = new List&lt;int&gt;();<br><br>    public string convertToBase(int x, int b)<br>    {<br>      bool negative = false;<br>      if (b &gt; 0)<br>      {<br>        negative = x &lt; 0;<br>        x = Math.Abs(x);<br>        while (x &gt;= b)<br>        {<br>          int c = x / b;<br>          int number = x % b;<br>          x = c;<br>          numbers.Add(number);<br>        }<br>        numbers.Add(x);<br>      }<br>      else<br>      {<br>        while (Math.Abs(x) &gt;= Math.Abs(b) || x &lt; 0)<br>        {<br>          int c = x / b;<br>          int number = x % b;<br>          if (number &lt; 0)<br>          {<br>            ++c;<br>            number += Math.Abs(b);<br>          }<br>          x = c;<br>          numbers.Add(number);<br>        }<br>        numbers.Add(x);<br>      }<br>      string s = "";<br>      if (negative)<br>        s += "-";<br>      numbers.Reverse();<br>      for (int i = 0; i &lt; numbers.Count; i++)<br>        s += new string(new char[] { (char)('0' + numbers[i]) });<br><br>      return s;<br>    }<br><br>  }<br></td>