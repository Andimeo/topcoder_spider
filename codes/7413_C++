            #include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br>#include &lt;string&gt;<br> <br>using namespace std;<br> <br>class ReverseUnnaturalBaseConversion {<br>public:<br>  string convertToBase(int, int);<br>};<br>string dton(int c,int k)<br>{<br> if(c==0) return "0";<br> string s;<br> while(c)<br> {<br>  int v=c%-k;<br>  if(v&lt;0){v=k+v;c+=-k;}<br>  s=(char)(v+'0')+s;<br>  c/=-k;<br> }<br>  if(s=="")s="0";<br> return s;<br>} <br>string convert(int x,int b)<br>{<br> string k="";<br> while(x)<br> {<br>  k=(char)(x%b+'0')+k;<br>  x/=b;<br> }<br> if(k=="")k="0";<br> return k;<br>}    <br>string ReverseUnnaturalBaseConversion::convertToBase(int x, int b) {<br> if(b&gt;0)<br> {<br>  if(x&lt;0)return "-"+convert(-x,b);<br>  else   return convert(x,b);<br> }<br> return dton(x,-b);  <br>}<br> <br> <br>//Powered by [KawigiEdit] 2.0!<br></td>