            import java.lang.Integer;<br><br>public class ReverseUnnaturalBaseConversion {<br>  private int mod(int x, int b) {<br>    if (x % b &gt;= 0)<br>      return x % b;<br>    else<br>      return x % b + (b &gt; 0 ? b : -b);<br>  }<br>  private int div(int x, int b) {<br>    x -= mod(x,b);<br>    return x / b;<br>  }<br>  public String convertToBase(int x, int b) {<br>    if (x == 0)<br>      return "0";<br>    if (b &gt; 0) {<br>      return Integer.toString(x,b);<br>    }<br>    String s = "";<br>    while (x != 0) {<br>      s = mod(x,b) + s;<br>      System.out.println(s);<br>      x = div(x,b);<br>    }<br>    return s;<br>  }<br>}<br></td>