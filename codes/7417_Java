            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class CardStraights<br>{<br>  public int longestStraight(int[] cards)<br>  {<br>    int jokers = 0;<br>    Set&lt;Integer&gt; unique = new TreeSet&lt;Integer&gt;();<br>    for (int i=0; i&lt;cards.length; i++)<br>      if (cards[i] == 0)<br>        jokers++;<br>      else<br>        unique.add(cards[i]);<br>    int longest = 0;<br>    int[] uniquearr = new int[unique.size()];<br>    int i=0;<br>    for (int x : unique)<br>      uniquearr[i++] = x;<br>    for (int start = 0; start &lt; uniquearr.length; start++)<br>    {<br>      int out = 0;<br>      int j;<br>      for (j=start+1; j &lt; uniquearr.length &amp;&amp; (out = out+uniquearr[j]-uniquearr[j-1]-1) &lt;= jokers; j++)<br>        ;<br>      longest = Math.max(longest, j-start);<br>    }<br>    return longest+jokers;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>