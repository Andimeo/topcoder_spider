            import java.util.*;<br> <br>public class BusTrip {<br>    public int returnTime(int N, String[] buses) {<br>        int m = buses.length;<br>        int[][] b = new int[m][N];<br>        int[] l = new int[m];<br>        for (int i = 0; i &lt; m; i++) {<br>            Scanner sc = new Scanner(buses[i]);<br>            l[i] = 0;<br>            while (sc.hasNextInt()) {<br>                b[i][l[i]++] = sc.nextInt();<br>            }<br>        }<br> <br>        int[][] p = new int[m][1001];<br>        for (int i = 0; i &lt; m; i++) {<br>            Arrays.fill(p[i], -1);<br>            int t = 0;<br>            int j = 0;<br>            while (t &lt;= 1000) {<br>                p[i][t] = b[i][j];<br>                int nj = (j + 1) % l[i];<br>                t += Math.abs(b[i][j] - b[i][nj]);<br>                j = nj;<br>            }<br>        }<br> <br>        int t = 0;<br>        int w = -1;<br>        int x = 0;<br>        boolean rid = false;<br>        while (t &lt;= 1000) {<br>            if (w == -1) {<br>                for (int i = 0; i &lt; m; i++) {<br>                    if (p[i][t] == x) {<br>                        w = i;<br>                        rid = true;<br>                        break;<br>                    }<br>                }<br>            } else {<br>                if (p[w][t] != -1) {<br>                    x = p[w][t];<br>                    w = -1;<br>                }<br>            }<br>            if (rid &amp;&amp; w == -1 &amp;&amp; x == 0) {<br>                return t;<br>            }<br>            t++;<br>        }<br>        return -1;<br>    }<br> <br> <br>}<br> <br> <br>// Powered by PopsEdit<br> <br>// Powered by CodeProcessor<br></td>