            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class BettingStrategy<br>{<br>  public int finalSum(int initSum, string outcome)<br>  {<br>        int bet=1;<br>    foreach (char o in outcome)<br>        {<br>            if (bet&gt;initSum) break;<br>            initSum-=bet;<br>            if (o == 'W')<br>            {<br>                initSum+=bet*2;<br>                bet=1;<br>            }<br>            else<br>            {<br>                bet *=2;<br>            }<br>            <br>        }<br>        return initSum;<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>