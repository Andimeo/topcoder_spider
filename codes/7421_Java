            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class BettingStrategy<br>{<br>  public int finalSum(int initSum, String outcome)<br>  {  <br>    int bet = 1;<br>    for (int i = 0; i &lt; outcome.length(); i++) {<br>      if (outcome.charAt(i) == 'W') {<br>        initSum += bet;<br>        bet = 1;<br>      } else {<br>        initSum -= bet;<br>        bet = bet * 2;<br>      }<br>      if (bet &gt; initSum) {<br>        return initSum;<br>      }<br>    }<br>    return initSum;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>