            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class SpecialDay<br>    {<br>        ArrayList days = new ArrayList();<br>        ArrayList months = new ArrayList();<br>        string weekday = "";<br>        public int howMany(String weekday, int which, String month, int day)<br>        {<br>            this.weekday = weekday;<br>            string[] tmp1 = { "SUNDAY", "MONDAY", "TUESDAY", "WEDNESDAY", "THURSDAY", "FRIDAY", "SATURDAY" };<br>            days = new ArrayList(tmp1);<br>            string[] tmp2 = { "JANUARY", "FEBRUARY", "MARCH", "APRIL", "MAY", "JUNE", "JULY", "AUGUST", "SEPTEMBER", "OCTOBER", "NOVEMBER", "DECEMBER" };<br>            months = new ArrayList(tmp2);<br>            int ret = 0;<br>            for (int i = 2000; i &lt;= 2100; i++)<br>            {<br>                int mon = months.IndexOf(month) + 1;<br>                int cnt = 0;<br>                for (int rt = 1; rt &lt;= 31; rt++)<br>                {<br>                    try<br>                    {<br>                        DateTime bb = new DateTime(i, mon, rt);<br>                        if (bb.DayOfWeek.ToString().ToUpper() == weekday)<br>                        {<br>                            cnt++;<br>                            if (cnt == which)<br>                            {<br>                                if (rt == day) ret++;<br>                                break;<br>                            }<br>                        }<br>                    }<br>                    catch<br>                    {<br>                    }<br><br>                }<br>            }<br>            return ret;<br><br>        }<br><br>        public int GetOffset(string month, int year)<br>        {<br>            int reff = GetAllDayIndex("FEBRUARY", 2007)+3;<br>            int th = GetAllDayIndex(month, year);<br>            int diff = reff - th;<br>            if (diff &gt; 0)<br>            {<br>                int r = (diff % 7) - 7;<br>                int wd = days.IndexOf(weekday);<br>                if ((wd + r) &lt; 0) return r + 7;<br>                return r;<br>            }<br>            else<br>            {<br>                diff = Math.Abs(diff);<br>                int r = 0 - (diff % 7);<br>                int wd = days.IndexOf(weekday);<br>                if ((wd + r) &lt; 0) return r + 7;<br>                return r;<br>            }<br>        }<br><br>        public int GetAllDayIndex(string month, int year)<br>        {<br>            int mon = months.IndexOf(month) + 1;<br>            int ret = 0;<br>            for (int i = 2000; i &lt;= year - 1; i++)<br>            {<br>                ret += GetDaysInYear(i);<br>            }<br>            for (int i = 1; i &lt;= mon - 1; i++)<br>            {<br>                ret += DateTime.DaysInMonth(year, i);<br>            }<br>            return ret;<br>        }<br><br>        public int GetDaysInYear(int year)<br>        {<br>            int ret = 0;<br>            for (int i = 1; i &lt;= 12; i++)<br>            {<br>                ret+=DateTime.DaysInMonth(year, i);<br>            }<br>            return ret;<br>        }<br><br>        public int GetDayindex(string weekday, int which)<br>        {<br>            int r = days.IndexOf(weekday)+1;<br>            return (((which - 1) * 7) + r);<br>        }<br>    }<br></td>