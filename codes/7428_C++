            #include &lt;string&gt;<br><br>using namespace std;<br><br>class SpecialDay {<br>  public:<br>  <br>  int howMany(string weekday, int which, string month, int day) {<br>    int we,mo;<br>    int yy,mm,dd,md,wd,re;<br>    <br>    re = 0;<br>    if (weekday == "SUNDAY")<br>      we = 0;<br>    if (weekday == "MONDAY")<br>      we = 1;<br>    if (weekday == "TUESDAY")<br>      we = 2;<br>    if (weekday == "WEDNESDAY")<br>      we = 3;<br>    if (weekday == "THURSDAY")<br>      we = 4;<br>    if (weekday == "FRIDAY")<br>      we = 5;<br>    if (weekday == "SATURDAY")<br>      we = 6;<br>    if (month == "JANUARY")<br>      mo = 1;<br>    if (month == "FEBRUARY")<br>      mo = 2;<br>    if (month == "MARCH")<br>      mo = 3;<br>    if (month == "APRIL")<br>      mo = 4;<br>    if (month == "MAY")<br>      mo = 5;<br>    if (month == "JUNE")<br>      mo = 6;<br>    if (month == "JULY")<br>      mo = 7;<br>    if (month == "AUGUST")<br>      mo = 8;<br>    if (month == "SEPTEMBER")<br>      mo = 9;<br>    if (month == "OCTOBER")<br>      mo = 10;<br>    if (month == "NOVEMBER")<br>      mo = 11;<br>    if (month == "DECEMBER")<br>      mo = 12;<br>    wd = 5;<br>    for (yy = 2000; yy &lt;= 2100; yy ++) {<br>      int count = 0;<br>      for (mm = 1; mm &lt;= 12; mm ++) {<br>        switch (mm) {<br>          case 1:case 3:case 5:case 7:case 8:case 10:case 12:<br>            md = 31;<br>            break;<br>          case 4:case 6:case 9:case 11:<br>            md = 30;<br>            break;<br>          case 2:<br>            md = 28 + (yy % 4 == 0 &amp;&amp; (yy % 100 != 0 || yy % 400 == 0));<br>          };<br>        for (dd = 1; dd &lt;= md; dd ++) {<br>          wd = (wd + 1) % 7;<br>          if (mm == mo &amp;&amp; wd == we) {<br>            count ++;<br>            if (count == which &amp;&amp; dd == day)<br>              re ++;<br>            }<br>          }<br>        }<br>      }<br>    return re;<br>    }<br>  };<br></td>