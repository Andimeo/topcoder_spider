            public class SpecialDay<br>{<br>    private static final String[] months = {"JANUARY", "FEBRUARY", "MARCH", "APRIL", "MAY", "JUNE", "JULY", "AUGUST", "SEPTEMBER", "OCTOBER", "NOVEMBER", "DECEMBER"};<br>    private static final String[] days = {"SUNDAY", "MONDAY", "TUESDAY", "WEDNESDAY", "THURSDAY", "FRIDAY", "SATURDAY"};<br>    private static int[] d = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};<br>    public static int howMany (String weekday, int which, String mont, int da)<br>    {<br>        int curWeekDay = 6;<br>        int count = 0;<br>        int cMonth = -1;<br>        for (int i = 0 ; i &lt; 12 ; i++)<br>            if (months [i].equals (mont))<br>                cMonth = i;<br>        int cDay = -1;<br>        for (int i = 0 ; i &lt; 7 ; i++)<br>            if (days [i].equals (weekday))<br>                cDay = i;<br>        for (int year = 2000 ; year &lt;= 2100 ; year++)<br>        {<br>            for (int month = 0 ; month &lt; 12 ; month++)<br>            {<br>                int days = d [month];<br>                if (month == 1 &amp;&amp; leap (year))<br>                    days = 29;<br>                int week = 0;<br>                for (int day = 1 ; day &lt;= days ; day++)<br>                {<br>                <br>                    if (curWeekDay == cDay)<br>                        week++;<br>                    if (curWeekDay == cDay &amp;&amp; day == da &amp;&amp; week == which &amp;&amp; month == cMonth)<br>                    {<br>                        count++;<br>                   <br>                    }<br>                    curWeekDay++;<br>                    if (curWeekDay &gt;= 7)<br>                        curWeekDay = 0;<br>                }<br>            }<br>        }<br>        return count;<br>    }<br><br><br>    public static boolean leap (int year)<br>    {<br>        if (year % 400 == 0)<br>            return true;<br>        if (year % 100 == 0)<br>            return false;<br>        if (year % 4 == 0)<br>            return true;<br>        return false;<br>    }<br>}<br></td>