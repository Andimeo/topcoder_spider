            using System;<br>using System.Collections.Generic;<br>using System.Text;<br> <br>public class LongestSubanagramChain<br>{<br>    public int getLength(string[] b)<br>    {<br>        int n = b.Length;<br>        for (int i = 0; i &lt; n; i++)<br>        {<br>            char[] s = b[i].ToCharArray();<br>            Array.Sort(s);<br>            b[i] = new string(s);<br>        }<br> <br>        int[] index = new int[n];<br>        for (int i = 0; i &lt; n; i++)<br>            index[i] = -1;<br>        int k = 0;<br> <br>        while (true)<br>        {<br>            index[0]++;<br>            if (index[0] == b[0].Length)<br>                break;<br>            bool ok = true;<br>            for (int i = 1; i &lt; n; i++)<br>            {<br>                char c = b[i - 1][index[i - 1]];<br>                int j = index[i] + 1;<br>                while ((j &lt; b[i].Length) &amp;&amp; (b[i][j] &lt; c))<br>                    j++;<br>                index[i] = j;<br>                if (j == b[i].Length)<br>                {<br>                    ok = false;<br>                    break;<br>                }<br>            }<br>            if (ok == false)<br>                break;<br>            k++;<br>        }<br>        return k;<br>    }<br>}<br></td>