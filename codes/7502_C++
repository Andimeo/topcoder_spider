            #include &lt;algorithm&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;string&gt;<br>#include &lt;utility&gt;<br>#include &lt;vector&gt;<br> <br>using namespace std;<br> <br>typedef long long Long;<br>typedef double dbl;<br>typedef vector &lt;int&gt; VI;<br>typedef pair &lt;int, int&gt; PII;<br> <br>#define FI first<br>#define MP make_pair<br>#define PB push_back<br>#define SE second<br> <br>class MultiprocessorProgramming<br>{<br>  public:<br>    long long optimalNumberOfProcessors( int t0, int tp, int ts )<br>    {<br>      Long Res = t0 + tp, Ans = 1;<br>      for (int n = 2; n &lt; 1000000; n++)<br>      {<br>        Long Tmp = max((Long)t0 * (n - 1), (Long)tp + (Long)ts * (n - 1) * (n - 1));<br>        if (Tmp &gt; (Long)1e11)<br>          break;<br>        int f;<br>        if (Ans == 1)<br>          f = Tmp &lt; Res * (n - 1);<br>        else<br>          f = Tmp * (Ans - 1) &lt; Res * (n - 1);<br>        if (f)<br>          Res = Tmp, Ans = n;<br>      }<br>      return Ans;<br>    }<br>};<br> <br>// Code by Burunduk3 =)<br> <br> <br>// Powered by PopsEdit<br></td>