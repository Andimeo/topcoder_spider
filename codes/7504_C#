            using System;<br><br>public class ProblemsToSolve {<br>  public int minNumber(int[] pleasantness, int variety) {<br>    int res = pleasantness.Length;<br>    for (int i = 0; i &lt; pleasantness.Length; ++i)<br>      for (int j = i + 1; j &lt; pleasantness.Length; ++j)<br>        if (Math.Abs(pleasantness[i] - pleasantness[j]) &gt;= variety)<br>        {<br>          res = Math.Min(res, 1 + (i + 1) / 2 + (j - i + 1) / 2);<br>        }<br>    return res;<br>  }<br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>