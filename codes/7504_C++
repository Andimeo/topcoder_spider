            #pragma warning (disable:4786)<br><br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br><br>using namespace std;<br>#define Abs(x) ((x)&gt;0?(x):-(x))<br><br>class ProblemsToSolve <br>{<br>public:<br>  int minNumber(vector &lt;int&gt; a, int var) <br>  {<br>    int n = a.size();<br>    int i, j;<br><br>    int ans = n;<br><br>    for (i=0;i&lt;n;i++)<br>      for (j=i+1;j&lt;n;j++)<br>        if ( Abs(a[j]-a[i])&gt;=var )<br>      {<br>        int tec = 2;<br>        if ( i&gt;0 ) tec += (i+1)/2;<br>        tec += (j-i-1)/2;<br><br>        if ( tec&lt;ans ) ans = tec;<br>      }<br>    <br><br>    return ans;<br>  }<br><br>  <br>}; <br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>