            public class ProblemsToSolve {<br>    public int minNumber(int[] p, int variety) {<br>        int res = p.length;<br>      for( int i=0; i&lt;p.length; i++) {<br>        for( int j=i+1; j&lt;p.length; j++ ) {<br>          int diff = Math.abs( p[i] - p[j] );<br>          if( diff &lt; variety ) {<br>            continue;<br>          }<br>          int act = (i+3) / 2;<br>          int k = (j-i);<br>          act += (k+1)/2;<br>          res = Math.min( res, act);<br>        }<br>      }<br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>