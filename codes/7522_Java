            public class CrazyCompetition<br>{<br>  private int[] nTemp = new int[10000];<br>  private double[] sumSummer = new double[3000];<br>  private double[] sumWinter = new double[3000];<br>  <br>  private double findDif(int daySummer, int dayWinter, int sSummer, int sWinter)<br>  {<br>    double avgSummer = 0.0;<br>    double avgWinter = 0.0;<br>    if (sumSummer[sSummer] == -100000000)<br>    {<br>      for (int i = sSummer; i &lt; sSummer + daySummer; i++)<br>      {<br>        avgSummer += nTemp[i];<br>      }<br>      sumSummer[sSummer] = avgSummer;<br>    }<br>    else<br>    {<br>      avgSummer = sumSummer[sSummer];<br>    }<br>    avgSummer /= daySummer;<br>    if (sumWinter[sWinter] == -100000000)<br>    {<br>      for (int i = sWinter; i &lt; sWinter + dayWinter; i++)<br>      {<br>        avgWinter += nTemp[i];<br>      }<br>      sumWinter[sWinter] = avgWinter;<br>    }<br>    else<br>    {<br>      avgWinter = sumWinter[sWinter];<br>    }<br>    avgWinter /= dayWinter;<br>    return avgSummer - avgWinter;<br>  }<br>  <br>  public double differenceTemperature(int daySummer, int dayWinter, String[] temperature)<br>  {<br>    double ans = -100000000;<br>    String sTemp = "";<br>    for (int i = 0; i &lt; 3000; i++)<br>    {<br>      sumSummer[i] = -100000000;<br>      sumWinter[i] = -100000000;<br>    }<br>    for (int i = 0; i &lt; temperature.length; i++)<br>    {<br>      sTemp = sTemp + temperature[i];<br>    }<br>    for (int i = 0; i &lt; sTemp.length(); i++)<br>    {<br>      char c = sTemp.charAt(i);<br>      if (c == 0)<br>        nTemp[i] = 0;<br>      else if (c &gt;= 'a' &amp;&amp; c &lt;= 'z')<br>      {<br>        nTemp[i] = c - 'a' + 1;<br>      }<br>      else if (c &gt;= 'A' &amp;&amp; c &lt;= 'Z')<br>      {<br>        nTemp[i] = 0 - (c - 'A' + 1);<br>      }<br>    }<br>    for (int i = 0; i &lt;= sTemp.length() - daySummer; i++)<br>    {<br>      for (int j = 0; j &lt;= sTemp.length() - dayWinter; j++)<br>      {<br>        if (i + daySummer &lt;= j || j + dayWinter &lt;= i)<br>        {<br>          if (findDif(daySummer, dayWinter, i, j) &gt; ans)<br>          {<br>            ans = findDif(daySummer, dayWinter, i, j);<br>          }<br>        }<br>      }<br>    }<br>    return ans;<br>  }<br>}<br></td>