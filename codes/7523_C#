            using System;<br>using System.Collections.Generic;<br>using System.Text;<br>using System.Collections;<br><br><br>    public class TriangleConstruction<br>    {<br>        public static int greatestPerimeter(int[] lengths)<br>        {<br>            Array.Sort(lengths);<br>            int index = lengths.Length - 1;<br><br>            while (true)<br>            {<br>                int A = lengths[index];<br>                int B = lengths[index-1];<br>                int C = lengths[index-2];<br><br>                if (((A + B) &gt; C) &amp;&amp; ((A + C) &gt; B) &amp;&amp; ((C + B) &gt; A))<br>                    return A + B + C;<br>                else<br>                    index--;<br><br>                if (index &lt; 2)<br>                    return -1;<br>            }<br><br>            return -1;<br>        }        <br><br>       <br>}<br></td>