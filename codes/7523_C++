            #include &lt;algorithm&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;string&gt;<br>#include &lt;utility&gt;<br>#include &lt;vector&gt;<br> <br>using namespace std;<br> <br>typedef long long Long;<br>typedef double dbl;<br>typedef vector &lt;int&gt; VI;<br>typedef pair &lt;int, int&gt; PII;<br> <br>#define FI first<br>#define MP make_pair<br>#define PB push_back<br>#define SE second<br> <br>class TriangleConstruction<br>{<br>  public:<br>    int greatestPerimeter( vector &lt;int&gt; A )<br>    {<br>      int S = -1;<br>      sort(A.begin(), A.end());<br>      for (int i = 0; i &lt; (int)A.size(); i++)<br>        for (int j = 0; j &lt; i; j++)<br>          for (int k = 0; k &lt; j; k++)<br>            if (A[i] &lt; A[j] + A[k])<br>              S = max(S, A[i] + A[j] + A[k]);<br>      return S;<br>    }<br>};<br> <br>// Code by Burunduk3 =)<br> <br> <br>// Powered by PopsEdit<br></td>