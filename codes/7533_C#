            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br><br><br>public class PersistentNumber<br>{<br>    public int getPersistence(int n)<br>    {<br>        int res = 0;<br>        string rem = n.ToString();<br>        if (rem.Length == 1) return res;<br><br>        int p;<br><br>        while (1==1)<br>        {<br>            p = 1;<br>            for (int i = 0; i &lt; rem.Length; i++ )<br>            {<br>                p *= (rem[i] - '0');<br>            }<br>            if (p / 10 == 0)<br>                return ++res;<br>            else<br>            {<br>                res++;<br>                rem = p.ToString();<br>            }<br>        }<br>    }<br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>