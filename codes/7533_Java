            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class PersistentNumber<br>{<br>  public int getPersistence(int n)<br>  {<br>    int c = 0;<br>    while(n&gt;=10){<br>      int k = 1;<br>      String s = ""+n;<br>      for(int i=0;i&lt;s.length();i++){<br>        k *= s.charAt(i)-'0';<br>      }<br>      c++;<br>      n = k;<br>    }<br>    return c;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>