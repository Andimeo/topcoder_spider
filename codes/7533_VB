            Public Class PersistentNumber<br>        Public Function getPersistence(ByVal n As Integer) As Integer<br>            Dim ret As Integer = 0<br>            Dim pers As String = n<br>            While True<br>                If Integer.Parse(pers) &lt; 10 Then<br>                    Return ret<br>                End If<br>                ret += 1<br>                Dim i As Integer<br>                Dim npers As Integer = 1<br>                For i = 0 To pers.Length - 1<br>                    npers *= Integer.Parse(pers(i))<br>                Next<br>                pers = npers<br>            End While<br>        End Function<br>    End Class<br></td>