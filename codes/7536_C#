            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class ChangingSeats <br>{<br>    private string F(string s, int index, char c)<br>    {<br>        return s.Substring(0, index) + c + s.Substring(index + 1);<br>    }<br><br>    public int getDistance(string ss)<br>    {<br>        string s = ss;<br>        if (!s.Contains("X"))<br>        {<br>            return 0;<br>        }<br>        int ans = 0;<br>        int num = 0;<br>        foreach (char c in s)<br>        {<br>            if (c == 'X')<br>            {<br>                num++;<br>            }<br>        }<br><br>        int h = 0;<br>        int pos = 0;<br>        for (int i = 0; h &lt; num / 2 + 1; i++)<br>        {<br>            if (s[i] == 'X')<br>            {<br>                h++;<br>                pos = i;<br>            }<br>        }<br>        for (int j = 0; j &lt; s.Length; j++)<br>        {<br>            for (int i = pos - 2; i &gt;= 0; i--)<br>            {<br>                if (s[i] == 'X' &amp;&amp; s[i + 1] == '.')<br>                {<br>                    s = F(s, i, '.');<br>                    s = F(s, i + 1, 'X');<br>                    ans++;<br>                }<br>            }<br>        }<br>        for (int j = 0; j &lt; s.Length; j++)<br>        {<br>            for (int i = pos + 2; i &lt; s.Length; i++)<br>            {<br>                if (s[i] == 'X' &amp;&amp; s[i - 1] == '.')<br>                {<br>                    s = F(s, i, '.');<br>                    s = F(s, i - 1, 'X');<br>                    ans++;<br>                }<br>            }<br>        }<br><br>        if ((num &amp; 1) == 1)<br>        {<br>            return ans;<br>        }<br>        int ans2 = ans;<br>        ans = 0;<br>        s = ss;<br>        pos--;<br>        while (s[pos] == '.')<br>        {<br>            pos--;<br>        }<br><br>        for (int j = 0; j &lt; s.Length; j++)<br>        {<br>            for (int i = pos - 2; i &gt;= 0; i--)<br>            {<br>                if (s[i] == 'X' &amp;&amp; s[i + 1] == '.')<br>                {<br>                    s = F(s, i, '.');<br>                    s = F(s, i + 1, 'X');<br>                    ans++;<br>                }<br>            }<br>        }<br>        for (int j = 0; j &lt; s.Length; j++)<br>        {<br>            for (int i = pos + 2; i &lt; s.Length; i++)<br>            {<br>                if (s[i] == 'X' &amp;&amp; s[i - 1] == '.')<br>                {<br>                    s = F(s, i, '.');<br>                    s = F(s, i - 1, 'X');<br>                    ans++;<br>                }<br>            }<br>        }<br><br>        return Math.Min(ans, ans2);<br>    }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by r1cs1]<br>// Powered by CodeProcessor<br></td>