            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;cmath&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;set&gt;<br>#include &lt;map&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>using namespace std;<br> <br>class ChangingSeats <br>{<br>  public:<br>  int getDistance(string s) <br>  {<br>    int i,j,x=0,t[57],w,ret=1&lt;&lt;30;<br>    for(i=0;i&lt;s.size();i++) if(s[i]=='X') t[x++]=i;<br>    for(j=0;j+x&lt;=s.size();j++) <br>    {<br>      w=0;<br>      for(i=0;i&lt;x;i++) w+=abs(i+j-t[i]);<br>      ret&lt;?=w;<br>    }<br>    return ret;<br>  }<br> <br>};<br> <br>// Powered by PopsEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>