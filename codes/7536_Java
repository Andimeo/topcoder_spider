            public class ChangingSeats<br>{<br>    public int getDistance(String s)<br>    {<br>        int N = s.length(), res = 123456780;<br>        for ( int beg = 0; beg &lt; N; ++beg )<br>        {<br>            int j = beg;<br>            int m = 0; <br>            for ( int i = 0; i &lt; N; ++i )<br>                if ( s.charAt(i) == 'X' )<br>                {<br>                    m += Math.abs(i - j);<br>                    ++j;<br>                    if ( j &gt; N ) <br>                    {<br>                        m = 123456789;<br>                        break;<br>                    }<br>                }<br>            res = Math.min(res, m);<br>        }<br>        return res;<br>    }<br>}<br></td>