            using System;<br>using System.Collections.Generic;<br>using System.Text;<br> <br>class BasketballStandings<br>{<br>    public static String[] constructTable(String[] teams)<br>    {<br>        int n = teams.Length;<br>        String[] name = new String[n];<br>        int[] win = new int[n];<br>        int[] loses = new int[n];<br>        int[] games = new int[n];<br> <br>        for (int i = 0; i &lt; n; i++)<br>        {<br>            String[] s = teams[i].Split(new char[] { ' ' });<br>            name[i] = s[0];<br>            win[i] = int.Parse(s[1]);<br>            loses[i] = int.Parse(s[2]);<br>            games [i] = win [i] + loses [i];<br>        }<br> <br>        for (int i = 0; i &lt; n; i++)<br>            for (int j = i + 1; j &lt; n; j++)<br>            {<br>                double pointsA = (double) win[i];<br>                double pointsB = (double) win[j];<br>                if (games[i] &gt; games[j])<br>                    pointsB += (double)(games[i] - games[j]) / 2;<br>                if (games[i] &lt; games[j])<br>                    pointsA += (double)(games[j] - games[i]) / 2;<br>                if ((pointsA &lt; pointsB) || ((pointsA == pointsB) &amp;&amp; (name [i].CompareTo(name[j]) &gt; 0)))<br>                {<br>                    String s = name[i];<br>                    name[i] = name[j];<br>                    name[j] = s;<br>                    int tmp;<br>                    tmp = win[i];<br>                    win[i] = win[j];<br>                    win[j] = tmp;<br>                    tmp = loses[i];<br>                    loses[i] = loses[j];<br>                    loses[j] = tmp;<br>                    tmp = games[i];<br>                    games[i] = games[j];<br>                    games[j] = tmp;<br>                }<br>            }<br> <br>        String[] toReturn = new String[n];<br>        toReturn[0] = name[0] + " 0.0";<br>        for (int i = 1; i &lt; n; i++)<br>        {<br>            double pointsA = (double)win[0];<br>            double pointsB = (double)win[i];<br>            if (games[0] &gt; games[i])<br>                pointsB += (double)(games[0] - games[i]) / 2;<br>            if (games[0] &lt; games[i])<br>                pointsA += (double)(games[i] - games[0]) / 2;<br>            double t = pointsA - pointsB;<br>            toReturn[i] = name[i] + " " + t;<br>            if (t == Math.Round(t))<br>                toReturn[i] += ".0";<br>        }<br>        return toReturn;<br>    }<br> <br>}<br></td>