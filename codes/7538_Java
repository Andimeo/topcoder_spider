            // Powered by radeclipse!<br>import java.util.* ;<br>public class BasketballStandings {<br>  public String[] constructTable(String[] teams) {<br>    int n = teams.length ;<br>    int v[] = new int[n] ;<br>    int max = -999999999 ;<br>    for (int i=0; i&lt;n; i++) {<br>      String[] f = teams[i].split(" ") ;<br>      v[i] = Integer.parseInt(f[1]) - Integer.parseInt(f[2]) ;<br>      max = Math.max(max, v[i]) ;<br>    }<br>    for (int i=0; i&lt;n; i++)<br>      for (int j=0; j&lt;n; j++) {<br>  if (v[i] &gt; v[j] ||<br>      (v[i] == v[j] &amp;&amp; teams[i].compareTo(teams[j]) &lt; 0)) {<br>    int t = v[i] ;<br>    v[i] = v[j] ;<br>    v[j] = t ;<br>    String s = teams[i] ;<br>    teams[i] = teams[j] ;<br>    teams[j] = s ;<br>  }<br>      }<br>    for (int i=0; i&lt;n; i++) {<br>      String[] f = teams[i].split(" ") ;<br>      int adv = max - v[i] ;<br>      teams[i] = f[0] + " " + (adv / 2) + "." + ((adv &amp; 1) == 0 ? "0" : "5") ;<br>    }<br>    return teams ;<br>  }<br>}<br></td>