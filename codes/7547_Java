            import java.util.*;<br>public class PulseDial {<br>    public String toDigits(String raw) {<br>        ArrayList&lt;Integer&gt; al = new ArrayList&lt;Integer&gt;();<br>        int at = 0;<br>        for(int i = 0; i&lt; raw.length(); i++)<br>        {<br>          if(raw.charAt(i)=='-')<br>            at++;<br>          else<br>          {<br>            if(at==0)continue;<br>            al.add(at%10);<br>            at = 0;<br>          }<br>        }<br>    <br>        if(at!=0)al.add(at%10);<br>        String s = "";<br>        for(int i = 0; i &lt; al.size(); i++) s += "" + al.get(i);<br>        if(al.size()==7) return s.substring(0, 3) + "-" + s.substring(3, 5) + "-" + s.substring(5, 7);<br>        else return "+" + s;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>