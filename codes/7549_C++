[j + 1] = true;<br>          }<br>        }<br>      }<br>    }<br>  }<br>  for(int i = 0; i &lt; N; i++)<br>  {<br>    for(int j = 0; j &lt; M; j++)<br>    {<br>      if(onFire[i][j])<br>        field[i][j] = '*';<br>    }<br>  }<br>  return field;<br>}<br> <br> <br>//Powered by [KawigiEdit] 2.0!<br></td>