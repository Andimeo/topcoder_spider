            public class FireSimulation<br>{<br>public String[] getState (String[] a, int b)<br>{<br>int[][] grid = new int[a.length][a[0].length()];<br>boolean[][] pre = new boolean[a.length][a[0].length()];<br>boolean[][] fire = new boolean[a.length][a[0].length()];<br>for (int i=0;i&lt;a.length;i++)<br>{<br>for (int j=0;j&lt;a[0].length();j++)<br>{<br>  grid[i][j] = a[i].charAt(j)-'0';<br>}<br>}<br>pre[0][0] = true;<br>fire[0][0] = true;<br>for (int zz=0;zz&lt;b;zz++)<br>{<br>for (int i=0;i&lt;a.length;i++)<br>{<br>for (int j=0;j&lt;a[0].length();j++)<br>{<br>if (pre[i][j] &amp;&amp; grid[i][j]&gt;0)<br>{<br>  grid[i][j]--;<br>  if (grid[i][j]&lt;1)<br>  {<br>    if (i&gt;0)<br>      fire[i-1][j] = true;<br>    if (i&lt;a.length-1)<br>      fire[i+1][j] = true;<br>    if (j&gt;0)<br>      fire[i][j-1] = true;<br>    if (j&lt;a[0].length()-1)<br>      fire[i][j+1] = true;<br>    }<br>  }<br>}<br>}<br>for (int i=0;i&lt;a.length;i++)<br>{<br>for (int j=0;j&lt;a[0].length();j++)<br>{<br>pre[i][j] = fire[i][j];<br>}<br>}<br>}<br><br>String[] output = new String[a.length];<br>for (int i=0;i&lt;a.length;i++)<br>{<br>  output[i]="";<br>for (int j=0;j&lt;a[0].length();j++)<br>{<br>  char r = (char)(grid[i][j]+'0');<br>  if (fire[i][j])<br>  {<br>    if (grid[i][j]&gt;0)<br>      r = '*';<br>    else<br>      r = '.';<br>  }<br>  output[i]+=r;<br>}<br>}<br>return output;<br>}<br>}<br></td>