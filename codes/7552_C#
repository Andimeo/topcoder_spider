            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class EntertainingSegment<br>{<br>  public int longestEntertainingSegment(int[] left, int[] right, int k)<br>  {<br>        List&lt;int&gt; a = new List&lt;int&gt;();<br> <br>        int ans = 0;<br>        foreach (int i in left)<br>            if (!a.Contains(i)) a.Add(i);<br>        foreach (int i in right)<br>            if (!a.Contains(i)) a.Add(i);<br>        a.Sort();<br>        bool[] b = new bool[1000];<br> <br>        for (int i = 0; i &lt; a.Count - 1; i++)<br>        {<br>            int l = a[i];<br>            int r = a[i + 1];int cnt = 0;<br>            for (int j = 0; j &lt; left.Length; j++)<br>                if (left[j] &lt;= l &amp;&amp; right[j] &gt;= r)<br>                    cnt++;<br>            if (cnt &gt;= k) b[i] = true;<br> <br>        }<br> <br>        for (int i = 0; i &lt; a.Count - 1; i++)<br>        {<br>            int j = i;<br>            while (j &lt; a.Count &amp;&amp; b[j]) j++;<br>            int len = a[j] - a[i];<br>            if (len &gt; ans) ans = len;<br> <br>        }<br>        return ans;<br>  }<br>}<br></td>