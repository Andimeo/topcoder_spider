            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class AlmostPerfectNumber<br>{<br>  public int count(int left, int right, int k)<br>  {<br>        int cnt = 0;<br>        for (int i = left; i &lt;= right; i++)<br>        {<br>            int sum = 0;<br>            for (int j = 1; j &lt; i; j++)<br>                if (i % j == 0) sum += j;<br>            if (Math.Abs(sum - i) &lt;= k) cnt++;<br>        }<br>        return cnt;<br>  }<br>}<br></td>