            import java.util.*;<br><br>public class AlmostPerfectNumber {<br>  public int count(int left, int right, int k) {<br>    int res = 0;<br>    for (int x = left; x &lt;= right; x++) {<br>      int sum = 0;<br>      for (int i = 1; i &lt; x; i++)<br>        if (x % i == 0) {<br>          sum += i;<br>        }<br>      if (Math.abs(x - sum) &lt;= k)<br>        res++;<br>    }<br>    return res;<br>  }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>