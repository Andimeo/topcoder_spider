            #include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstring&gt;<br>#include &lt;cmath&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;iostream&gt;<br><br>using namespace std;<br><br>class Chessboard<br>{ <br>  public: <br>  string changeNotation(string cell) <br>  {<br>    if (cell[0] &gt;= '0' &amp;&amp; cell[0] &lt;= '9') {<br>      int a;<br>      sscanf(cell.c_str(), "%d", &amp;a);<br>      --a;<br>      return (string)"" + (char)('a' + a%8) + (char)(49 + a / 8);<br>    }<br>    char a[10];<br>    sprintf(a, "%d", cell[0] - 'a' + (cell[1] - '1')*8 + 1);<br>    return a;<br>  }<br>  <br> <br>}; <br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>