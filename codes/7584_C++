            #ifdef _MSC_VER<br>  #define LL __int64<br>  #define Ld "%I64d"<br>#else<br>  #define LL long long<br>  #define Ld "%Ld"<br>#endif<br><br>#include &lt;algorithm&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;math.h&gt;<br>using namespace std;<br><br>#define FOR(i,a,b) for ( i = (a); i &lt;= (b); ++i )<br><br>typedef long double LD;<br><br>LD dist, K, M, fuel;<br><br>LD fu(LL n)<br>{<br>  LD d = dist / (n + 1);<br>  LD res = (expl(d / K) - 1.0) * M + fuel;<br>  return res * (n + 1);<br>}<br><br>class FlightScheduler<br>{<br>public:<br>  double minimizeFuel(int distance, int K0, int emptyMass, int takeoffFuel)<br>  {<br>    dist = distance;<br>    K = K0;<br>    M = emptyMass;<br>    fuel = takeoffFuel;<br><br>    <br>    LL a = 0, b, i;<br>    b = 1;<br>    b &lt;&lt;= 60;<br>    while ( b - a &gt; 1234567 )<br>    {<br>      LL d = (b - a);<br>      LL c0 = a + d / 3;<br>      LL c1 = a + d * 2 / 3;<br><br>      LD f0 = fu(c0);<br>      LD f1 = fu(c1);<br>      if ( f0 &lt; f1 )<br>        b = c1;<br>      else<br>        a = c0;<br>    }<br>    LD res = fu(a);<br>    FOR(i, a, b)<br>    {<br>      LD f = fu(i);<br>      if ( res &gt; f ) <br>        res = f;<br>    }    <br>    FOR(i, 0, 1234567)<br>    {<br>      LD f = fu(i);<br>      if ( res &gt; f )<br>        res = f;<br>    }<br>    return res;<br>  }<br>};<br></td>