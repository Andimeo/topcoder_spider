            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class ChangingString<br>{<br>    public int distance(string a, string b, int k)<br>    {<br>      int n=SZ(a);<br>      int[] w=new int[n];<br>      int i;<br>      for (i=0; i&lt;n; i++) w[i] = Math.Abs(a[i]-b[i]);<br>      Array.Sort(w);<br>      for (i=n-k; i&lt;n; i++)<br>        if (w[i]==0) w[i]=1; else w[i]=0;<br>      int res=0;<br>      for (i=0; i&lt;n; i++) res += w[i];<br>      return res;<br>    }<br><br>    // helper<br>    int SZ(string o) { return o.Length; }<br>    int SZ(int[] o) { return o.Length; }<br>    void cout(object o) { System.Console.WriteLine(o); }<br>    void cout(int[] o) { for (int i=0; i&lt;o.Length; i++) System.Console.Write(o[i] + "\t"); System.Console.WriteLine(); }<br>};<br></td>