            #include&lt;iostream&gt;<br>#include&lt;string.h&gt;<br>#include&lt;algorithm&gt;<br>#include&lt;math.h&gt;<br>using namespace std;<br>class ChangingString<br>{<br>public:<br>struct rek{int ile,numer;};<br>int distance(string A,string B,int K)<br>{<br>  rek t[100];<br>    int n=A.size();<br>        for (int i=0;i&lt;n;i++)<br>        {<br>                t[i].ile=abs(A[i]-B[i]); t[i].numer=i;}<br>    for (int i=0;i&lt;n;i++)<br>    for (int j=i+1;j&lt;n;j++)<br>    if (t[i].ile&lt;t[j].ile) swap(t[i],t[j]);  <br>  <br>  for (int i=0;i&lt;K;i++)<br>  {<br>    int j=t[i].numer;<br>    if (A[j]!=B[j]) A[j]=B[j];<br>    else A[j]=B[j]+1;<br>  }<br>  int out=0;<br>  for (int i=0;i&lt;n;i++)<br>  out+=abs(B[i]-A[i]);<br>  return out;<br>}<br>};<br></td>