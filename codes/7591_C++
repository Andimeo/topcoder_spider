            // Headers {{{<br>#include &lt;algorithm&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstring&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;iostream&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;queue&gt;<br>#include &lt;set&gt;<br>#include &lt;sstream&gt;<br>#include &lt;stack&gt;<br>#include &lt;string&gt;<br>#include &lt;utility&gt;<br>#include &lt;vector&gt;<br>using namespace std;<br>#define REP(i,n) for(int i=0; i&lt;(n); ++i)<br>#define FOR(i,j,k) for(int i=(j); i&lt;=(k); ++i)<br>#define ALL(a) (a).begin(),(a).end()<br>#define debug(x) cerr &lt;&lt; #x &lt;&lt; " = " &lt;&lt; x &lt;&lt; '\n'<br>template&lt;typename Q&gt; inline int size(Q a) { return a.size(); }<br>// }}}<br> <br>class NumberFormatter {<br>  public:<br>  string format(string number) {<br>    string a,b;<br>    REP(i,size(number)) {<br>      if(number[i]==',') number[i]='.';<br>      if(number[i]=='.') {<br>        a=number.substr(0,i);<br>        b=number.substr(i+1);<br>      }<br>    }<br>    if(!size(a)) a=number;<br>    string c;<br>    FOR(i,0,size(a)-1) {<br>      c+=a[size(a)-i-1];<br>      if(i%3==2 &amp;&amp; i&lt;size(a)-1) c+=' ';<br>    }<br>    reverse(ALL(c));<br>    string res=c;<br>    if(size(b)) res+="."+b;<br>    return res;<br>  }<br>  <br> <br>};<br> <br> <br> <br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>