            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class NumberFormatter<br>{<br>  <br>  private String f(String in)<br>  {<br>    int l = in.length();<br>    int cur = l % 3;<br>    String r = "";<br>    if(cur != 0)<br>    {<br>      r += in.substring(0 , cur) + " ";<br>    }<br>    for( ; cur &lt; l ; cur += 3)<br>    {<br>      r += in.substring(cur , cur + 3) + " ";<br>    }<br>    return r.substring(0 , r.length() - 1); // Cut last '0'<br>  }<br>  public String format(String number)<br>  {<br>    String a , b;<br>    int p = number.indexOf(',');<br>    if(p == -1)<br>    {<br>      return f(number);<br>    }<br>    else<br>    {<br>      a = number.substring(0 , p);<br>      b = number.substring(p + 1 , number.length());<br>      return f(a) + "." + b;<br>    }<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>