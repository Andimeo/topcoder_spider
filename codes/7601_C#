            using System;<br><br>public class DiceGames {<br>  public long countFormations(int[] sides) {<br>    Array.Sort(sides);<br>    int mx = 0;<br>    foreach (int x in sides)<br>      mx = Math.Max(x, mx);<br>    <br>    long[,] num = new long[sides.Length + 1, mx + 1];<br>    num[0, 0] = 1;<br>    for (int i = 0; i &lt; sides.Length; ++i)<br>      for (int j = 1; j &lt;= sides[i]; ++j)<br>        for (int k = 0; k &lt;= j; ++k)<br>          num[i + 1, j] += num[i, k];<br><br>    long res = 0;<br>    for (int k = 0; k &lt;= mx; ++k)<br>      res += num[sides.Length, k];<br>    return res;<br>  }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>