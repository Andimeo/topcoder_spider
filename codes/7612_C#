            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class CandyBoxes<br>{<br>  public int remainingCandies(int[] c)<br>  {<br>    int n = c.Length;<br>    int sol = -1;<br>    while (1 == 1)<br>    {<br>      int min = c [0];<br>      for (int i = 1; i &lt; n; i++)<br>        min = Math.Min (min, c [i]);<br>      int max = c [0];<br>      for (int i = 1; i &lt; n; i++)<br>        max = Math.Max (max, c [i]);<br>      if (min == max)<br>      {<br>        sol = min;<br>        break;<br>      }<br>      for (int i = 0; i &lt; n; i++)<br>        if (c [i] == max)<br>        {<br>          c [i] = c [i] - min;<br>          break;<br>        }<br>    }<br>    return sol;<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>