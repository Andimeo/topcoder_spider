            #include &lt;cstdio&gt;<br>#include &lt;cstring&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br>#include &lt;climits&gt;<br>#include &lt;cmath&gt;<br><br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;iostream&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;queue&gt;<br>#include &lt;set&gt;<br>#include &lt;sstream&gt;<br>#include &lt;stack&gt;<br>#include &lt;vector&gt;<br>using namespace std;<br><br><br>class CandyBoxes {<br>  public:<br>  int remainingCandies(vector &lt;int&gt; candies) {<br>    multiset&lt;int&gt; M( candies.begin(), candies.end() );<br><br>        while( *M.begin() != *M.rbegin() ) {<br>            int a = *M.begin();<br>            int b = *M.rbegin();<br>            M.erase( --M.end() );<br>            M.insert( b - a );<br>        }<br>        return *M.begin();<br>  }<br>  <br><br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>