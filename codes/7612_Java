            import java.util.*;<br>public class CandyBoxes {<br>  public int remainingCandies(int[] a) {<br>    int n, ret, i, j, x, y;<br>    ret = 0;<br>    n = a.length;<br>    while (true) {<br>      x = y = a[0];<br>      for (i = 0; i &lt; n; i++) {<br>        if (a[i] &lt; x) x = a[i];<br>        if (a[i] &gt; y) y = a[i];<br>      }<br>      if (x == y) break;<br>      for (i = 0; i &lt; n; i++) if (a[i] == y) {<br>        a[i] -= x;<br>        break;<br>      }<br>    }<br>    return a[0];<br>      }<br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]                    <br>// Powered by CodeProcessor<br></td>