            import java.io.*;<br>import java.util.*;<br><br>public class BusyTime {<br>  public double busy(int k, int[] need) {<br>    Arrays.sort(need);<br>    int n = need.length;<br>    double le = 0;<br>    double ri = 1e10;<br>    double mi = 0;<br>    for (int it = 0; it &lt; 1000; it++) {<br>      mi = (le + ri) / 2;<br>      int able = 0;<br>      int x = 0;<br>      for (int i = 0; i &lt; n; i++) {<br>        if (mi &lt; need[i])<br>          x++;<br>        else<br>          able += need[i];<br>      }<br>      if (able + 1e-12 &gt; mi * (k - x))<br>        le = mi;<br>      else<br>        ri = mi;<br>    }<br>    return mi;<br>  }<br>}<br></td>