            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class Candles {<br>    public int ceremonies(int n, int n1, int r1, int n2, int r2) {<br>        int iG = gcd(r1, r2);<br>        r1 /= iG;<br>        r2 /= iG;<br>        int iStep = r1 * r2;<br>        for (int iTarget = 1; iTarget &lt; 10000000; iTarget++) {<br>            int iBurns1 = iTarget * r2;<br>            int iBurns2 = iTarget * r1;<br>            int iTotBurns1 = iBurns1 * n1;<br>            int iTotBurns2 = iBurns2 * n2;<br>            int iTotBurns = iTotBurns1 + iTotBurns2;<br>            if (iTotBurns % n == 0) {<br>                int iCer = iTotBurns / n;<br>                int iMin1PerCer = Math.Max(0, n - n2);<br>                int iMin2PerCer = Math.Max(0, n - n1);<br>                if (iCer * iMin1PerCer &gt; iTotBurns1) return -1;<br>                if (iCer * iMin2PerCer &gt; iTotBurns2) return -1;<br>                return iCer;<br>            }<br>        }<br>        return -1;<br><br><br>    }<br><br>    private int gcd(int a, int b) {<br>        if (a &lt; 0) return gcd(-a, b);<br>        if (b &lt; 0) return gcd(a, -b);<br>        if (b &lt; a) return gcd(b, a);<br>        if (a == 0) return b;<br>        return gcd(b % a, a);<br>    }<br>}<br></td>