            import java.util.*;<br>public class Candles {<br>  int gcd(int x, int y) {<br>    if(y==0) return x;<br>    return gcd(y, x%y);<br>  }<br>    public int ceremonies(int n, int n1, int r1, int n2, int r2) {<br>      int a = gcd(r1,r2);<br>      int x = r2/a;<br>      int y = r1/a;<br>      int t = x*n1+y*n2;<br>      int b = gcd(n,t);<br>      b=n/b;<br>      x*=b;<br>      y*=b;<br>      int k=(x*n1+y*n2)/n;<br>      if(x&lt;=k &amp;&amp; y&lt;=k) return k;<br>      return -1;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>