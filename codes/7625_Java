            public class SimpleRotationDecoder{<br>public String decode(String c)<br>{<br>  int n=c.length();<br>  for(int i=0;i&lt;26;i++)<br>    for(int j=0;j&lt;26;j++)<br>      for(int k=0;k&lt;26;k++)<br>      {<br>        String str=""+(char)(i+'a')+(char)(j+'a')+(char)(k+'a');<br>        String st=str;<br>        for(int l=0;l&lt;17;l++)<br>          str+=st;<br>        String s="";<br>        for(int l=0;l&lt;n;l++)<br>        {<br>          int x;<br>          if(c.charAt(l)==' ')x=0;<br>          else x= c.charAt(l)-'a'+1;<br>          int y=str.charAt(l)-'a'+1; <br>          int z=(x+y)%27;<br>          if(z==0) s+=" ";<br>          else<br>            s+=(char)(z-1+'a');<br>        }<br>        String[] temp=s.split(" ");<br>        if(temp[0].length()==0) continue;<br>        if(s.charAt(s.length()-1)==' ') continue;<br>        int l=0;<br>        for(l=0;l&lt;temp.length;l++)<br>        {<br>          if(temp[l].length()==0) break;<br>          if(temp[l].length()&gt;8 || temp[l].length()&lt;2)<br>            break;<br>          if(temp[l].lastIndexOf('a')==-1 &amp;&amp; temp[l].lastIndexOf('e')==-1 &amp;&amp; temp[l].lastIndexOf('i')==-1 &amp;&amp; temp[l].lastIndexOf('o')==-1 &amp;&amp; temp[l].lastIndexOf('u')==-1)<br>            break;<br>        }<br>        if(l==temp.length)<br>          return s;<br>      }<br>  return "";<br>}}<br></td>