            public class BuildATeam<br>{<br>  public int maximalStrength(int[] skills, int teams) {<br><br>            int forward = 1;<br>            int[] teamStrengths = new int[teams];<br>            bool flag = true;<br>            int ret = 0;<br>            while (true) {<br>               <br>                if (forward == 1) {<br>                    for (int i = 0; i &lt; teams; i++) {<br>                        ret = maxResult(ref skills);<br>                        if (ret == -1)<br>                        {<br>                            flag = false;<br>                            break;<br>                        }<br>                        teamStrengths[i] += ret;<br>                    }<br>                    forward = 0;<br>                } else {<br>                    for (int i = teams - 1; i &gt;= 0; i--) {<br>                        ret = maxResult(ref skills);<br>                        if (ret == -1) {<br>                            flag = false;<br>                            break;<br>                        }<br>                        teamStrengths[i] += ret;<br>                    }<br>                    forward = 1;<br>                }<br>                if (flag == false)<br>                    break;<br><br>            }<br>            return maxResult(ref teamStrengths);<br><br>        }<br><br>        public int maxResult(ref int[] s) {<br>            int max = -3290;<br>            int index = 0;<br>            for (int i = 0; i &lt; s.Length; i++) {<br>                if (s[i] &gt; max) {<br>                    max = s[i];<br>                    index = i;<br>                }<br>            }<br>            if (max == -3290)<br>                return -1;<br>            s[index] = -3290;<br>            return max;<br>        }<br>}<br></td>