            import java.util.*;<br>public class BuildATeam<br>{<br>  public int maximalStrength(int[] skills, int teams)<br>  {<br>    Arrays.sort(skills);<br>    int[] sum = new int[teams];<br>    for(int i=skills.length-1,j=0,step=+1;i&gt;=0;i--)<br>    {<br>      sum[j] += skills[i];<br>      j += step;<br>      if(j&lt;0)<br>      {<br>        j = 0;<br>        step = -step;<br>      }<br>      if(j&gt;=teams)<br>      {<br>        j = teams-1;<br>        step = -step;<br>      }<br>    }<br>    int max = 0;<br>    for(int num:sum)<br>      max = Math.max(max, num);<br>    return max;<br>  }<br>}<br></td>