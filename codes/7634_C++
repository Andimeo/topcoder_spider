            #include&lt;vector&gt;<br>#include&lt;string&gt;<br><br>using namespace std;<br><br>class Snaky<br>{<br>  public:<br>  int longest(vector &lt;string&gt; a)<br>  {<br>    int l1, l2;<br>    int sol = 0, curr = 0;<br>    <br>    for(l1=0;l1&lt;a.size();l1++)<br>    {<br>      curr = 0;<br>      for(l2=0;l2&lt;a[l1].size();l2++)<br>      {<br>        if(a[l1][l2] == 'x') curr++;<br>        else curr = 0;<br>        if(curr &gt; sol) sol = curr;<br>      }<br>    }<br>    for(l1=0;l1&lt;a[0].size();l1++)<br>    {<br>      curr = 0;<br>      for(l2=0;l2&lt;a.size();l2++)<br>      {<br>        if(a[l2][l1] == 'x') curr++;<br>        else curr = 0;<br>        if(curr &gt; sol) sol = curr;<br>      }<br>    }<br>    return sol;<br>  }<br>};<br></td>