            public class Snaky {<br> <br>  public int longest(String[] snake) {<br>    int max = 0;<br>    for (int i = 0; i &lt; snake.length; i++) {<br>      int k = 0;<br>      for (int j = 0; j &lt; snake[i].length(); j++) {<br>        if (snake[i].charAt(j) == 'x') {<br>          k++;<br>          if (k &gt; max) {<br>            max = k;<br>          }<br>        } else {<br>          k = 0;<br>        }<br>      }<br>    }<br>    for (int j = 0; j &lt; snake[0].length(); j++) {<br>      int k = 0;<br>      for (int i = 0; i &lt; snake.length; i++) {<br>        if (snake[i].charAt(j) == 'x') {<br>          k++;<br>          if (k &gt; max) {<br>            max = k;<br>          }<br>        } else {<br>          k = 0;<br>        }<br>      }<br>    }<br>    <br>    return max;<br>  }<br> <br>}<br></td>