            using System;<br>using System.Collections.Generic;<br>using System.Text;<br><br>class Pathfinding<br>{<br><br>    public static int getDirections(int x, int y)<br>    {<br>        if (x == 0)<br>        {<br>            if (y &gt;= 0)<br>                return y;<br>            else<br>            {<br>                y = Math.Abs(y);<br>                if (y % 2 == 1)<br>                    return (y + 2);<br>                else<br>                    return (y + 4);<br>            }<br>        }<br>        if (y == 0)<br>        {<br>            if (x &gt;= 0)<br>                return x;<br>            else<br>            {<br>                x = Math.Abs(x);<br>                if (x % 2 == 1)<br>                    return (x + 2);<br>                else<br>                    return (x + 4);<br>            }<br>        }<br>        if ((x &gt;= 0) &amp;&amp; (y &gt;= 0))<br>        {<br>            x = Math.Abs(x);<br>            y = Math.Abs(y);<br>            if ((x % 2 == 0) || (y % 2 == 0))<br>                return (x + y);<br>            else<br>                return (x + y + 2);<br>        }<br>        if ((x &lt;= 0) &amp;&amp; (y &gt;= 0))<br>        {<br>            x = Math.Abs(x);<br>            y = Math.Abs(y);<br>            if ((y % 2 == 1) || (x % 2 == 0))<br>                return (x + y);<br>            else<br>                return (x + y + 2);<br>        }<br>        if ((x &gt;= 0) &amp;&amp; (y &lt;= 0))<br>        {<br>            x = Math.Abs(x);<br>            y = Math.Abs(y);<br>            if ((x % 2 == 1) || (y % 2 == 0))<br>                return (x + y);<br>            else<br>                return (x + y + 2);<br>        }<br>        if ((x &lt;= 0) &amp;&amp; (y &lt;= 0))<br>        {<br>            x = Math.Abs(x);<br>            y = Math.Abs(y);<br>            if ((x % 2 == 1) || (y % 2 == 1))<br>                return (x + y + 2);<br>            else<br>                return (x + y + 4);<br>        }<br>        return 0;<br>    }<br>}<br></td>