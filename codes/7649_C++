            #include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>using namespace std;<br><br>typedef double LD;<br>typedef long  LL;<br><br>class Pathfinding<br>{<br>public:<br>  int getDirections(int x, int y)<br>  {<br>    if ( x == 0 )<br>    {<br>      if ( y &lt; 0 )<br>      {<br>        y = -y;<br>        if ( y % 2 )<br>          return y + 2;<br>        else<br>          return y + 4;<br>      }<br>      else<br>        return y;<br>    }<br>    else if ( y == 0 )<br>    {<br>      return getDirections(y, x);<br>    }<br>    else if ( x &gt; 0 )<br>    {<br>      if ( y &gt; 0 )<br>      {<br>        if ( x % 2 == 0 || y % 2 == 0 )<br>          return x + y;<br>        else<br>          return x + y + 2;<br>      }<br>      else<br>      {<br>        y = -y;<br>        if ( x % 2 )<br>          return x + y;<br>        else<br>        {<br>          if ( y % 2 )<br>            return x + y + 2;<br>          else<br>            return x + y;<br>        }<br>      }<br>    }<br>    else <br>    {<br>      if ( y &gt; 0 )<br>        return getDirections(y, x);<br>      else<br>      {<br>        x = -x;<br>        y = -y;<br>        if ( x % 2 || y % 2 )<br>          return x + y + 2;<br>        else<br>          return x + y + 4;<br>      }<br>    }<br><br>    return 0;<br>  }<br>};<br></td>