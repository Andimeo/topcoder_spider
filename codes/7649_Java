            import java.util.*;<br> <br>public class Pathfinding {<br>    public int getDirections(int x, int y) {<br>        int n = 9 * 4;<br>        int[][] d = new int[n][n];<br>        int[] xx = new int[n];<br>        int[] yy = new int[n];<br> <br>        int q = 0;<br>        int s = -1;<br>        int t = -1;<br>        for (int xc = 0; xc &lt; 2; xc++) {<br>            for (int yc = 0; yc &lt; 2; yc++) {<br>                for (int dx = -1; dx &lt;= 1; dx++) {<br>                    for (int dy = -1; dy &lt;= 1; dy++) {<br>                        int tx = xc * x + dx;<br>                        int ty = yc * y + dy;<br>                        xx[q] = tx;<br>                        yy[q] = ty;<br>                        if (tx == 0 &amp;&amp; ty == 0) {<br>                            s = q;<br>                        }<br>                        if (tx == x &amp;&amp; ty == y) {<br>                            t = q;<br>                        }<br>                        q++;<br>                    }<br>                }<br>            }<br>        }<br> <br>        for (int i = 0; i &lt; n; i++) {<br>            Arrays.fill(d[i], -1);<br>        }<br> <br>        for (int i = 0; i &lt; n; i++) {<br>            for (int j = 0; j &lt; n; j++) {<br>                if (xx[i] == xx[j]) {<br>                    if (yy[i] &lt;= yy[j] &amp;&amp; xx[i] % 2 == 0 || yy[i] &gt;= yy[j] &amp;&amp; xx[i] % 2 != 0) {<br>                        d[i][j] = Math.abs(yy[i] - yy[j]);<br>                    }<br>                }<br>                if (yy[i] == yy[j]) {<br>                    if (xx[i] &lt;= xx[j] &amp;&amp; yy[i] % 2 == 0 || xx[i] &gt;= xx[j] &amp;&amp; yy[i] % 2 != 0) {<br>                        d[i][j] = Math.abs(xx[i] - xx[j]);<br>                    }<br>                }<br>            }<br>        }<br> <br>        for (int i = 0; i &lt; n; i++) {<br>            for (int j = 0; j &lt; n; j++) {<br>                for (int k = 0; k &lt; n; k++) {<br>                    if (d[j][i] != -1 &amp;&amp; d[i][k] != -1 &amp;&amp; (d[j][k] == -1 || d[j][k] &gt; d[j][i] + d[i][k])) {<br>                        d[j][k] = d[j][i] + d[i][k];<br>                    }<br>                }<br>            }<br>        }<br> <br>        return d[s][t];<br>    }<br> <br> <br>}<br> <br> <br>// Powered by PopsEdit<br> <br>// Powered by CodeProcessor<br></td>