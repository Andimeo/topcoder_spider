            using System;<br>using System.Text;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class RaceTrack<br>{<br>    private int n, m;<br>    private char[] a;<br>    private int[] pos;<br><br>    private string com(int x)<br>    {<br>        int pre = 0;<br>        a[0] = '1';<br><br>        int i, left = m - 1;<br>        for (i = 1; i &lt; n &amp;&amp; left &gt; 0; i++)<br>        {<br>            if (pos[i] - pos[pre] &gt;= x)<br>            {<br>                a[i] = '1';<br>                pre = i;<br>                left--;<br>            }<br>            else a[i] = '0';<br>        }<br>        if (left &gt; 0) return null;<br><br>        for (; i &lt; n; i++) a[i] = '0';<br><br>        return new string(a);<br>    }<br><br>    public string judgePositions(int length, int judges, int[] pos)<br>    {<br>        m = judges;<br>        this.pos = pos;<br>        n = pos.Length;<br>        a = new char[n];<br><br>        int low = 0, high = length;<br>        string ans = null;<br><br>        while (low &lt;= high)<br>        {<br>            int mid = (low + high) &gt;&gt; 1;<br>            string s = com(mid);<br>            if (s != null)<br>            {<br>                ans = s;<br>                low = mid + 1;<br>            }<br>            else high = mid - 1;<br>        }<br><br>        return ans;<br>    }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>