            #include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;cassert&gt;<br>#include &lt;cctype&gt;<br>#include &lt;vector&gt;<br>#include &lt;queue&gt;<br>#include &lt;cmath&gt;<br>#include &lt;string&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br> <br>#define FOR(i,n) for(int i=0;i&lt;n;++i)<br>#define pb push_back<br>#define s(a) (int)(a.size())<br> <br>using namespace std;<br> <br>typedef long double ld;<br>typedef long long ll;<br>typedef pair&lt;int , int&gt; PII;<br>const int INF = 2000000000;<br> <br>class RaceTrack<br>{<br>public:<br>  string judgePositions(int length, int judges, vector &lt;int&gt; pos)<br>  {<br>    string ret = "-";<br>    <br>    int mn , mx;<br>    <br>    mn = 0;<br>    mx = length + 100;<br> <br>    while(mn &lt; mx)<br>      {<br>  int md = (mn + mx + 1) / 2;<br>  string cur;<br>  int used = 0;<br>  int prev = -INF;<br>  for(int k = 0  ; k &lt; pos.size() ; k++)<br>    if(pos[k] - prev &gt;= md &amp;&amp; used &lt; judges)<br>      {<br>        used++;<br>        cur += "1";<br>        prev = pos[k];<br>      }<br>    else<br>      {<br>        cur += "0";<br>      }<br>  if(used == judges)<br>    {<br>      ret = cur;<br>      mn = md;<br>    }<br>  else<br>    mx = md - 1;<br>      }<br>    return ret;<br>        <br>    <br>  }<br>  <br> <br>};<br> <br> <br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>