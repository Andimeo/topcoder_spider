            import java.util.*;<br><br>public class RaceTrack {<br>  public String judgePositions(int length, int judges, int[] pos) {<br>    <br>    int l = 1;<br>    int r = length;<br>    while (l &lt; r) {<br>      int mid = (l + r + 1) / 2;<br>      int last = pos[0] - mid - 1;<br>      int cnt = 0;<br>      for (int i=0; i&lt;pos.length; i++)<br>        if (pos[i] &gt;= last + mid) {<br>          cnt++;<br>          last = pos[i];<br>        }<br>      if (cnt &gt;= judges) <br>        l = mid;<br>      else<br>        r = mid - 1;<br>    }<br>    <br>    int last = pos[0] - l - 1;<br>    int cnt = 0;<br>    StringBuilder sb = new StringBuilder();<br>    for (int i=0; i&lt;pos.length; i++)<br>      if (pos[i] &gt;= last + l &amp;&amp; cnt &lt; judges) {<br>        cnt++;<br>        last = pos[i];<br>        sb.append("1");<br>      } else<br>        sb.append("0");<br>    <br>    return sb.toString();<br>  }<br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>