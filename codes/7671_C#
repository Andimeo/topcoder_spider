            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class AntiPalindrome<br>{<br>  public string rearrange(string s)<br>  {<br><br>        bool[] used;<br>        int n = s.Length;<br><br>        string res = "";<br><br>        used = new bool[n];<br><br><br>        for (int i = 0; i &lt; n; i++)<br>        {<br>            int best = -1;<br><br>            for (int j = 0; j &lt; n; j++)<br>            {<br>                if (used[j]) continue;<br>                if (n - i - 1 &lt; res.Length &amp;&amp; res[n - i - 1] == s[j]) continue;<br>                if (best == -1 || s[best] &gt; s[j])<br>                {                    <br>                    best = j;<br>                }<br>            }<br><br>            if (best == -1) return "";<br>            used[best] = true;<br>            res += s[best];<br>        }<br><br><br><br>    return res;<br>  }<br>  }<br></td>