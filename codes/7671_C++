            #include&lt;iostream&gt;<br>#include&lt;sstream&gt;<br>#include&lt;cstdlib&gt;<br>#include&lt;cmath&gt;<br>#include&lt;vector&gt;<br>#include&lt;string&gt;<br>#include&lt;algorithm&gt;<br>using namespace std;<br>typedef vector&lt;int&gt;VI;typedef vector&lt;VI&gt;VVI;<br>typedef vector&lt;string&gt;VS;<br>typedef pair&lt;int,int&gt;PII;<br>#define FOR(i,n) for((i)=0;(i)&lt;(n);(i)++)<br>#define FORN(i,n) for((i)=(n)-1;(i)&gt;=0;(i)--)<br>#define BE(a) ((a).begin()),((a).end())<br>#define SI(a) ((a).size())<br>#define PB push_back<br>#define MP make_pair<br>#define FORIT(i,a) for((i)=(a).begin();(i)!=(a).end();(i)++)<br>#define CLR(a,v) memset((a),(v),sizeof(a))<br><br>class AntiPalindrome {<br>public:<br>  string rearrange(string s) {<br>    int n, i, j;<br>    n = SI(s);<br>    sort(BE(s));<br>    i = (n + 1) / 2;<br>    for (j = i + 1; j &lt; n; j++) if (s[j] != s[i]) break;<br>    while (j &lt; n &amp;&amp; s[i] == s[n - 1 - i]) {<br>      swap(s[i], s[j]);<br>      i++; j++;<br>    }<br>    FOR (i,n) if (i != n - 1 - i) if (s[i] == s[n - 1 - i]) return "";<br>    return s;<br>  }<br><br>  <br><br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]                    <br>// Powered by CodeProcessor<br></td>