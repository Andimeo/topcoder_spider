            import java.util.*;<br>public class AntiPalindrome {<br>  public String rearrange(String s) {<br>    char[] c = s.toCharArray();<br>    Arrays.sort(c);<br>    int mid = (c.length+1)/2;<br>    int cur = mid;<br>    while (mid&lt;c.length &amp;&amp; c[mid]==c[c.length-1-mid]) {  <br>      while (cur&lt;c.length &amp;&amp; c[mid]==c[cur]) cur++;<br>      if (cur==c.length) return "";<br>      char cc = c[cur];<br>      c[cur]=c[mid];<br>      c[mid]=cc;<br>      mid++;<br>    }<br>    return new String(c);<br>  }<br>}<br></td>