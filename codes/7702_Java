            import java.util.*;<br>public class DriveFailures {<br>    public double[] failureChances(double[] failureProb) {<br>      int n = failureProb.length;<br>      int N = 1 &lt;&lt; n;<br>      double[] res = new double[n + 1];<br>      for (int I = 0; I &lt; N; I++) {<br>        int c = 0;<br>        double p = 1;<br>        for (int i = 0; i &lt; n; i++) {<br>        if ((I &amp; (1 &lt;&lt; i)) != 0) {<br>          c++;<br>          p *= failureProb[i];<br>        } else {<br>          p *= 1 - failureProb[i];<br>        }<br>      }<br>        res[c] += p;<br>      }<br>        <br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>