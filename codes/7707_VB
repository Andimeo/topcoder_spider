            Public Class CricketScores<br>  <br><br>  Public Function totalRuns(runs As Integer()) As Integer()<br><br>    dim runs1   as Integer <br>    dim runs2   as Integer <br>    dim batsman as Integer = 1<br>    dim pos     as Integer     <br>    dim test    as Integer <br>    dim balls   as Integer <br><br>    for pos = 0 to runs.Length - 1<br><br>      select case batsman <br><br>        case 1<br>          runs1  = runs1 + runs(pos)          <br>    <br>        case 2<br>          runs2  = runs2 + runs(pos)<br>      End Select<br><br>      test = runs(pos) mod 2<br>      if test &gt; 0 then<br>        if batsman = 1 then <br>          batsman = 2<br>        else<br>          batsman = 1<br>        End If<br>      End If<br>    <br>      balls = balls + 1<br>      if balls  = 6 then 'swap direction<br>        balls = 0<br>        if batsman = 1 then <br>          batsman = 2<br>        else<br>          batsman = 1<br>        End If<br>      End If<br><br>    Next<br>    <br>    dim rslt() as Integer = {runs1, runs2}<br><br>    return rslt<br><br>  End Function  <br><br><br><br>  <br><br>End Class<br></td>