            using System;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class Factorer {<br>  long a;<br>  long b;<br>  long c;<br>  long rc1;<br>  long rn1;<br>  long rc2;<br>  long rn2;<br>  long p1, q1, p2, q2;<br>  bool haveR;<br><br>  long gcd(long a, long b) {<br>    while (b &gt; 0) {<br>      long t = a % b;<br>      a = b;<br>      b = t;<br>    }<br>    return a;<br>  }<br><br>  void tryIt(ref long p, ref long q) {<br>    long z = gcd(Math.Abs(p), Math.Abs(q));<br>    if (q &lt; 0)<br>      z = -z;<br>    p /= z;<br>    q /= z;<br>  }<br><br>  void tryThis(long by1, long by2, long p1, long q1, long p2, long q2) {<br>    if (by1 &lt; 0) {<br>      by1 = -by1;<br>      by2 = -by2;<br>    }<br>    long cc1 = q1 * by1;<br>    long cn1 = -p1 * by1;<br>    long cc2 = q2 * by2;<br>    long cn2 = -p2 * by2;<br>    if (!haveR || (cc1 &gt; rc1) || (cc1 == rc1 &amp;&amp; cn1 &gt; rn1)) {<br>      haveR = true;<br>      rc1 = cc1;<br>      rn1 = cn1;<br>      rc2 = cc2;<br>      rn2 = cn2;<br>    }<br>  }<br><br>  public string factor(int _a, int _b, int _c) {<br>    a = _a;<br>    b = _b;<br>    c = _c;<br>    haveR = false;<br>    long d = b * b - 4 * a * c;<br>    if (d &lt; 0)<br>      return "NONE";<br>    long dd = Math.Max(0, (long) Math.Sqrt(d) - 5);<br>    while (dd * dd &lt; d)<br>      ++dd;<br>    if (dd * dd &gt; d)<br>      return "NONE";<br>    p1 = -b + dd;<br>    q1 = 2 * a;<br>    p2 = -b - dd;<br>    q2 = 2 * a;<br>    tryIt(ref p1, ref q1);<br>    tryIt(ref p2, ref q2);<br>    long aa = a / (q1 * q2);<br>    for (long i = 1; i * i &lt;= Math.Abs(aa); ++i) if (aa % i == 0) {<br>      tryThis(i, aa / i, p1, q1, p2, q2);<br>      tryThis(aa / i, i, p1, q1, p2, q2);<br>      tryThis(i, aa / i, p2, q2, p1, q1);<br>      tryThis(aa / i, i, p2, q2, p1, q1);<br>    }<br>    if (!haveR)<br>      return "NONE";<br>    string s = "(";<br>    if (rc1 == 1) s += ""; else if (rc1 == -1) s += "-"; else s += rc1;<br>    s += "x";<br>    if (rn1 &gt; 0)<br>      s += "+";<br>    s += rn1;<br>    s += ")(";<br>    if (rc2 == 1) s += ""; else if (rc2 == -1) s += "-"; else s += rc2;<br>    s += "x";<br>    if (rn2 &gt; 0)<br>      s += "+";<br>    s += rn2;<br>    s += ")";<br>    return s;<br>  }<br>}<br><br><br>// Powered by FileEdit<br></td>