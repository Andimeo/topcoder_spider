            public class MaximizeSquares {<br><br>  public int squareCount(int vs) {<br>    int a = 0;<br>    while( (a + 1) * (a + 1) &lt;= vs ) { ++a; }<br>    int rest = vs - a * a;<br>    int sum = 0;<br>    for(int i=1; i&lt;a; ++i) { sum += i * i; }<br>    if(rest &lt;= a) {<br>      for(int i=1; i&lt;rest; ++i) {<br>        sum += i;<br>      }<br>    }<br>    else {<br>      for(int i=1; i&lt;a; ++i) {<br>        sum += i;<br>      }<br>      rest -= a;<br>      for(int i=1; i&lt;rest; ++i) {<br>        sum += i;<br>      }<br>    }<br>    return sum;<br>  }<br><br>}<br></td>