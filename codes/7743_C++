            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;cmath&gt;<br>#include &lt;queue&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>using namespace std;<br> <br>#define MM 401057<br> <br>class SortingInIterations<br>{<br>  public:<br>  long long a[MM];<br>  vector&lt;int&gt; v[MM];<br>  long long sum(int a0, int Xx, int Yx, int Mx, int n, int A, int B)<br>  {<br>    long long X=Xx,Y=Yx,M=Mx,ret=0;<br>    int i,kt,g,j;<br>    a[0]=a0;<br>    v[a[0]].push_back(0);<br>    for(i=1;i&lt;n;i++) <br>    {<br>      a[i]=(a[i-1]*X+Y)%M;<br>      v[a[i]].push_back(i);<br>    }<br>    for(i=0;i&lt;M;i++) sort(v[i].begin(),v[i].end());<br>    kt=1;g=-1;<br>    for(j=0;j&lt;M;j++) if(v[j].size())<br>    {<br>      for(i=0;i&lt;v[j].size();i++) if(v[j][i]&gt;g) break;<br>      if(i==0)<br>      {<br>        if(kt&gt;=A &amp;&amp; kt&lt;=B) ret+=((long long)(v[j].size()))*((long long)(j));<br>        g=v[j][v[j].size()-1];<br>      }<br>      else<br>      {<br>        if(kt&gt;=A &amp;&amp; kt&lt;=B) ret+=((long long)(v[j].size()-i))*((long long)(j));<br>        g=v[j][i-1];<br>        kt++;<br>        if(kt&gt;=A &amp;&amp; kt&lt;=B) ret+=((long long)(i))*((long long)(j));<br>      }<br>    }<br>    if(kt&lt;B) return -1;<br>    return ret;<br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>