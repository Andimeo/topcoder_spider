            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>public class BrokenStrings<br>{<br>    public int buyStrings(int n, string[] stringCosts)<br>    {<br>        int single = int.MaxValue;<br>        int package = int.MaxValue;<br>        foreach (string str in stringCosts)<br>        {<br>            string[] ss = str.Split(' ');<br>            int s = int.Parse(ss[1]);<br>            single = Math.Min(single, s);<br>            s = int.Parse(ss[0]);<br>            package = Math.Min(package, s);<br>        }<br>        int ans = 0;<br>        while (n &gt; 0)<br>        {<br>            if (n &gt;= 6)<br>            {<br>                if (6 * single &lt;= package)<br>                {<br>                    ans += 6 * single;<br>                }<br>                else<br>                {<br>                    ans += package;<br>                }<br>                n -= 6;<br>            }<br>            else<br>            {<br>                if (n * single &lt;= package)<br>                {<br>                    ans += n * single;<br>                }<br>                else<br>                {<br>                    ans += package;<br>                }<br>                n = 0;<br>            }<br>        }<br>        return ans;<br>    }<br>}<br> <br> <br>// Powered by PopsEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>