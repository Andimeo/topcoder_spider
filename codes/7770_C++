            #include &lt;algorithm&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstring&gt;<br>#include &lt;functional&gt;<br>#include &lt;string&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;utility&gt;<br>#include &lt;vector&gt;<br> <br>using namespace std;<br> <br>typedef pair &lt;int, int&gt; pii;<br>typedef vector &lt;int&gt; vi;<br>typedef long long Long;<br> <br>#define eps 1e-9<br>#define pi 3.14159265358969323<br> <br>#define fi first<br>#define mp make_pair<br>#define pb push_back<br>#define se second<br> <br>class SoccerCommentator<br>{<br>  public:<br>    int goalsToWin( string score1, string score2, int firstGameHost )<br>    {<br>      int a1, a2, b1, b2;<br>      sscanf(score1.c_str(), "%d:%d", &amp;a1, &amp;b1);<br>      sscanf(score2.c_str(), "%d:%d", &amp;a2, &amp;b2);<br>      int t1 = a1 + a2;<br>      int t2 = b1 + b2;<br>      if (t1 &gt; t2)<br>        return 0;<br>      int ans = t2 - t1;<br>      a2 += ans, t1 += ans;<br>      if (firstGameHost == 1)<br>      {<br>        if (a2 &lt;= b1)<br>          ans++;<br>      }<br>      else<br>      {<br>        if (a1 &lt;= b2)<br>          ans++;<br>      }<br>      return ans;<br>    }<br>};<br> <br> <br>// Powered by PopsEdit<br></td>