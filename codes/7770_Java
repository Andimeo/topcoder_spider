            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class SoccerCommentator<br>{<br>    static int I(String s) { return Integer.parseInt(s); }<br>  public int goalsToWin(String score1, String score2, int firstGameHost)<br>  {<br>    String[] s1 = score1.split(":");<br>    String[] s2 = score2.split(":");<br>    int g11 = I(s1[0]), g12 = I(s1[1]), g21 = I(s2[0]), g22 = I(s2[1]);<br>    if(firstGameHost==1){<br>      int n = g22+g12-g11-g21;<br>      if(n&lt;0) return 0;<br>      if(g12&lt;g21+n) return n;<br>      return n+1;  <br>    }<br>    int n = g22+g12-g11-g21;<br>    if(n&lt;0) return 0;<br>    if(g11&gt;g22) return n;<br>    return n+1;<br>  }<br>}<br>//Powered by [KawigiEditNonTest] modified by pivanof!<br></td>