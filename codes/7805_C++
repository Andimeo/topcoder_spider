            #include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br><br>#include &lt;cmath&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstring&gt;<br><br>#include &lt;map&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br><br>using namespace std;<br><br>#define FORC( it, V ) for( __typeof( (V).begin() ) it = (V).begin(); it != (V).end(); ++it )<br><br>class SimpleTextProcessor {<br>public:<br>  vector &lt;string&gt; makeColumns(vector &lt;string&gt; V) {<br>      int n = V.size() / 2;<br><br>      int a = 0;<br>      int b = 0;<br><br>      for( int i = 0; i &lt; n; ++i )<br>          a &gt;?= ( int )V[i].size();<br>      for( int i = n; i &lt; 2*n; ++i )<br>          b &gt;?= ( int )V[i].size();<br><br>      vector&lt; string &gt; sol;<br><br>      for( int i = 0; i &lt; n; ++i )<br>          sol.push_back( V[i] + string( a-V[i].size(), ' ' ) + "*" + string( b-V[i+n].size(), ' ' ) + V[i+n] );<br><br>      return sol;<br>  }<br>};<br><br><br><br>// Powered by FileEdit<br></td>