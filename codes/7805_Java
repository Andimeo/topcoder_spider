            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class SimpleTextProcessor<br>{<br>  public String[] makeColumns(String[] words)<br>  {<br>    int N = words.length/2;<br>    int m1 = 0;<br>    for(int i=0;i&lt;N;i++)<br>      m1 = Math.max(m1,words[i].length());<br>    int m2 = 0;<br>    String[] ans = new String[N];<br>    for(int i=0;i&lt;N;i++)<br>      m2 = Math.max(m2,words[i+N].length());<br>    for(int i=0;i&lt;N;i++)<br>      while(words[i].length()&lt;m1) words[i]+=" ";<br>    for(int i=0;i&lt;N;i++)<br>      while(words[i+N].length()&lt;m2) words[i+N]=" "+words[i+N];<br>    for(int i=0;i&lt;N;i++)<br>      ans[i]=words[i]+"*"+words[i+N];<br>    return ans;<br>  }<br>}<br>//Powered by [KawigiEditNonTest] modified by pivanof!<br></td>