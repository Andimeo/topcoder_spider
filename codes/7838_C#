            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class Glossary {<br>    public string[] buildGlossary(string[] items) {<br><br><br>        List&lt;string&gt; sLeft = new List&lt;string&gt;();<br>        List&lt;string&gt; sRight = new List&lt;string&gt;();<br>        List&lt;string&gt; sCur;<br>        Array.Sort(items);<br>        for (int i = 0; i &lt; 26; i++) {<br>            sCur = sRight;<br>            if (i &lt; 13) sCur = sLeft;<br>            bool bExists = false;<br>            for (int j = 0; j &lt; items.Length; j++) {<br>                if (items[j].ToUpper()[0] - 'A' == i) {<br>                    bExists = true;<br>                }<br>            }<br>            if (bExists) {<br>                sCur.Add((char)('A' + i) + new string(' ', 18));<br>                sCur.Add(new string('-', 19));<br>                for (int j = 0; j &lt; items.Length; j++)<br>                    if (items[j].ToUpper()[0] - 'A' == i) {<br>                        sCur.Add("  " + items[j] + new string(' ', 17 - items[j].Length));<br>                    }<br>                {<br><br>                }<br>            }<br>        }<br><br>        while (sRight.Count &lt; sLeft.Count) sRight.Add(new string(' ', 19));<br>        while (sLeft.Count &lt; sRight.Count) sLeft.Add(new string(' ', 19));<br>        string[] sRet = new string[sRight.Count];<br>        for (int i = 0; i &lt; sRet.Length; i++) {<br>            sRet[i] = sLeft[i] + "  " + sRight[i];<br>        }<br>        return sRet;<br><br>    }<br>}<br></td>