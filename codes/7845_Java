            import java.util.*;<br> <br>public class BalanceScale {<br>    int gcd(int x, int y) {<br>        while (y != 0) {<br>            int t = x % y; x = y; y = t;<br>        }<br>        return x;<br>    }<br> <br>    int[] w;<br>    int answer;<br> <br>    void bt(int i, int d, int c) {<br>        if (c &gt;= answer) {<br>            return;<br>        }<br>        if (i == w.length) {<br>            if (d == 1) {<br>                answer = c;<br>            }<br>            return;<br>        }<br>        int d1 = gcd(d, w[i]);<br>        if (d1 != d) {<br>            bt(i + 1, d1, c + 1);<br>        }<br>        bt(i + 1, d, c);<br>    }<br> <br>    public int takeWeights(int[] weight) {<br>        int d = 0;<br>        for (int x : weight) {<br>            d = gcd(d, x);<br>        }<br>        for (int i = 0; i &lt; weight.length; i++) {<br>            weight[i] /= d;<br>        }<br> <br>        w = weight;<br> <br>        answer = weight.length;<br>        bt(0, 0, 0);<br>        return answer;<br>    }<br> <br> <br>}<br> <br> <br>// Powered by PopsEdit<br> <br>// Powered by CodeProcessor<br></td>