;<br>                        for (int g = 0; g &lt; b.Length; g++)<br>                        {<br>                            if (statement[g + j] != '?' &amp;&amp; b[g] != '?' &amp;&amp; b[g] != statement[g + j])<br>                                c = false;<br>                        }<br>                        if (c)<br>                            r = "both";<br>                    }<br>                }<br>            }<br>        }<br>        {<br>            string a = word2;<br>            string b = word1;<br>            for (int i = 0; i &lt; statement.Length - a.Length + 1; i++)<br>            {<br>                for (int j = i + a.Length; j &lt; statement.Length - b.Length + 1; j++)<br>                {<br><br>                    bool c = false;<br>                    for (int k = 0; k &lt; a.Length; k++)<br>                    {<br>                        if (statement[i + k] != '?' &amp;&amp; a[k] != '?' &amp;&amp; a[k] != statement[i + k])<br>                            c = true;<br>                    }<br>                    if (!c)<br>                    {<br>                        c = true;<br>                        for (int g = 0; g &lt; b.Length; g++)<br>                        {<br>                            if (statement[g + j] != '?' &amp;&amp; b[g] != '?' &amp;&amp; b[g] != statement[g + j])<br>                                c = false;<br>                        }<br>                        if (c)<br>                            r = "both";<br>                    }<br>                }<br>            }<br>        }<br><br><br>        return r;<br>    }<br>    <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by r1cs1]<br>// Powered by CodeProcessor<br></td>