            #include &lt;string&gt;<br><br>using namespace std;<br><br>class TwoWords {<br>  public:<br>  <br>  string howMany(string s, string a, string b) {<br>    int ok1[100], ok2[100];<br>    int i, j, l, ans;<br>    <br>    l = s.size();<br>    ans = 0;<br>    for (i = 0; i &lt; l; i ++)<br>      if (i + a.size() &gt; l)<br>        ok1[i] = 0;<br>      else {<br>        ok1[i] = 1;<br>        for (j = 0; j &lt; a.size(); j ++)<br>          ok1[i] &amp;= s[i + j] == a[j] || s[i + j] == '?' || a[j] == '?';<br>        ans |= ok1[i];<br>        }<br>    for (i = 0; i &lt; l; i ++)<br>      if (i + b.size() &gt; l)<br>        ok2[i] = 0;<br>      else {<br>        ok2[i] = 1;<br>        for (j = 0; j &lt; b.size(); j ++)<br>          ok2[i] &amp;= s[i + j] == b[j] || s[i + j] == '?' || b[j] == '?';<br>        ans |= ok2[i];<br>        }<br>    <br>    for (i = 0; i &lt; l; i ++)<br>      for (j = 0; j &lt; l; j ++)<br>        if (ok1[i] &amp;&amp; ok2[j] &amp;&amp; (i + a.size() &lt;= j || j + b.size() &lt;= i))<br>          ans = 2;<br>    if (ans == 2)<br>      return "both";<br>    if (ans == 1)<br>      return "one";<br>    return "none";<br>    }<br>  };<br></td>