            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class TwoWords<br>{<br> <br>  boolean egal(char c1, char c2){<br>    if(c1 == '?' || c2 == '?')<br>      return true;<br>    if(c1 == c2)<br>      return true;<br>    return false;<br>  }<br>  <br>  boolean merge(String s, String word){<br>    if(word.length() &gt; s.length())<br>      return false;<br>      <br>    for(int i=0;i&lt;word.length();i++)<br>      if( egal( s.charAt(i), word.charAt(i) ) == false )<br>        return false;<br>    return true;<br>  }<br> <br>  public String howMany(String s, String word1, String word2)<br>  {<br>  <br>    int[] p1 = new int[100], p2 = new int[100];<br>    int n1=0, n2=0;<br>    <br>    for(int i=0;i&lt;s.length(); i++){<br>      if(merge(s.substring(i,s.length()), word1) ){<br>        p1[++n1] = i;<br>      }    <br>      if(merge(s.substring(i,s.length()), word2) ){<br>        p2[++n2] = i;<br>      }<br>    }  <br>    <br>    for(int i=1;i&lt;=n1;i++)<br>      System.out.print(p1[i] + " ");<br>    System.out.println();<br>    <br>    for(int i=1;i&lt;=n2;i++)<br>      System.out.print(p2[i] + " ");<br>    System.out.println();<br>    <br>    <br>    //both<br>    for(int i=1;i&lt;=n1;i++)<br>      for(int j=1;j&lt;=n2;j++)<br>        if(i &lt;= j &amp;&amp; p1[i]+word1.length()-1 &lt; p2[j] )<br>          return "both";<br>        else<br>          if( p2[j] + word2.length()-1 &lt; p1[i])<br>            return "both";<br>            <br>    //one<br>    if(n1 &gt; 0 || n2 &gt; 0)<br>      return "one";<br>      <br>    return "none";<br>        <br>        <br>    <br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>