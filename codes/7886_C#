            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class MixingLiquids<br>{<br>  public double howMuch(int[] p, int[] a, int r)<br>  {<br>    int n=p.Length;<br>    double q=0,c=0;<br>    int i,j,k;<br>    for (i=0;i&lt;n;i++) {c+=(double)a[i];}<br>    double x;<br>    for (i=0;i&lt;n;i++){<br>      for (j=i+1;j&lt;n;j++){<br>        if (p[i]&gt;p[j]) {<br>          k=p[i]; p[i]=p[j]; p[j]=k;<br>          k=a[i]; a[i]=a[j]; a[j]=k;<br>        }<br>      }<br>    }<br>    double qq,cc,p1,p2,d;<br>    double e=1e-9;<br>    for (k=0;k&lt;1000;k++){<br>      x=(q+c)/2;<br>      qq=0;<br>      cc=0;<br>      p1=0;<br>      p2=0;<br>      for (i=0;i&lt;n;i++){<br>        d=a[i];<br>        if (x&lt;qq+d) {d=x-qq;}<br>        p1=((p[i]*d)+(p1*qq))/(qq+d);<br>        qq+=d;<br>      }<br>      for (i=n-1;i&gt;=0;i--){<br>        d=a[i];<br>        if (x&lt;cc+d) {d=x-cc;}<br>        p2=((p[i]*d)+(p2*cc))/(cc+d);<br>        cc+=d;<br>      }<br>      if ((p1-e&lt;r)&amp;&amp;(r&lt;p2+e)) {q=x;} else {c=x;}<br>      //return p2;<br>    }<br>    return (q+c)/2;<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>