            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cmath&gt;<br>#include &lt;queue&gt;<br> <br>using namespace std;<br><br>pair&lt;int,int&gt; makepair(int x,int y)<br>{<br>  pair&lt;int,int&gt; p;<br>  p.first=x;<br>  p.second=y;<br>  return p;<br>}<br><br>class MixingLiquids<br>{<br>public:<br>double howMuch(vector &lt;int&gt; percent, vector &lt;int&gt; amount, int need)<br>{<br>  int i,j,n,fu,zheng,cha;<br>  double tot;<br>  vector&lt;pair&lt;int,int&gt; &gt; a;<br>  n=percent.size();<br>  tot=0;<br>  for (i=0;i&lt;n;i++)<br>  {<br>    a.push_back(makepair(percent[i],amount[i]));<br>    tot+=amount[i];<br>  }<br>  sort(a.begin(),a.end());<br>  fu=0;zheng=0;<br>  for (i=0;i&lt;n;i++)<br>    if (percent[i]&gt;need)<br>    {<br>      zheng+=amount[i]*(percent[i]-need);<br>    }<br>    else<br>    {<br>      fu+=amount[i]*(need-percent[i]);<br>    }<br>  if (zheng==fu) return tot;<br>  if (zheng&gt;fu)<br>  {<br>    cha=zheng-fu;<br>    reverse(a.begin(),a.end());<br>    for (i=0;i&lt;a.size();i++)<br>    {<br>      if (a[i].second*(a[i].first-need)&lt;cha)<br>      {<br>        tot-=a[i].second;<br>        cha-=a[i].second*(a[i].first-need);<br>      }<br>      else<br>      {<br>        tot-=(double)cha/(a[i].first-need);<br>        break;<br>      }<br>    }<br>  }<br>  else<br>  {<br>    cha=fu-zheng;<br>    for (i=0;i&lt;a.size();i++)<br>    {<br>      if (a[i].second*(need-a[i].first)&lt;cha)<br>      {<br>        tot-=a[i].second;<br>        cha-=a[i].second*(need-a[i].first);<br>      }<br>      else<br>      {<br>        tot-=(double)cha/(need-a[i].first);<br>        break;<br>      }<br>    }<br>  }<br>  return tot;<br>}<br>};<br></td>