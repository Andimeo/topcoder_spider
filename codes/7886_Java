            import java.util.*;<br><br>public class MixingLiquids {<br>  public double howMuch(int[] percent, int[] amount, int need) {<br>    double sum = 0;<br>    int n = percent.length;<br>    double[] get = new double[n];<br>    double sub = 0;<br>    for (int i=0; i&lt;n; i++) {<br>      get[i] = amount[i];<br>      sum += amount[i];<br>      sub += percent[i] * amount[i];<br>    }<br>    <br>    while (sum * need &lt; sub) {<br>      int j = -1;<br>      for (int i=0; i&lt;n; i++)<br>        if (get[i] &gt; 0)<br>          if (j == -1 || percent[i] &gt; percent[j])<br>            j = i;<br>      if (j == -1)<br>        break;<br>      double d = (sub - sum*need) / (percent[j] - need);<br>      if (d &gt; get[j])<br>        d = get[j];<br>      sum -= d;<br>      get[j] -= d;<br>      sub -= percent[j]*d;<br>    }<br><br>    while (sum * need &gt; sub) {<br>      int j = -1;<br>      for (int i=0; i&lt;n; i++)<br>        if (get[i] &gt; 0)<br>          if (j == -1 || percent[i] &lt; percent[j])<br>            j = i;<br>      if (j == -1)<br>        break;<br>      double d = (sum*need - sub) / (need - percent[j]);<br>      if (d &gt; get[j])<br>        d = get[j];<br>      sum -= d;<br>      get[j] -= d;<br>      sub -= percent[j]*d;<br>    }<br>    <br>    return sum;<br>  }<br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>