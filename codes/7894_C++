            #include&lt;iostream&gt;<br>#include&lt;string&gt;<br>#include&lt;vector&gt;<br>#include&lt;algorithm&gt;<br>#include&lt;sstream&gt;<br>using namespace std;<br><br><br><br>#define P__ system("pause");<br><br>// *** START *** //<br><br>class ValueAddedTax<br>        { <br>        public: <br>        double calculateFinalPrice(string product, int price, vector &lt;string&gt; food) <br>            { <br>              bool present = false;<br>              int i;<br>              for( i = 0 ; i&lt;food.size();i++ )<br>                   if ( food.at(i) == product )<br>                      {present = true;<br>                       break;<br>                      }<br>              <br>              <br>              if( present )<br>                  return 1.1 * price;<br>              else return 1.18*price;<br>            <br>            <br>            } <br>        <br> <br>        }; <br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>