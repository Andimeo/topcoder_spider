            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class SortingWithPermutation<br>{<br>  public int[] getPermutation(int[] a)<br>  {<br>    int[] b = new int[ a.Length ];<br>    for ( int i = 0; i &lt; a.Length; i++ )<br>       b[i] = a[i];<br>     Array.Sort( b );<br>     <br>     int[] r = new int[ a.Length ];<br>     for ( int i = 0; i &lt; b.Length; i++ ) {<br>       r[i] = -1;<br>       for ( int j = 0; j &lt; a.Length; j++ ) {<br>         if ( a[i] == b[j] ) {<br>           r[i] = j;<br>           b[j] = -1;<br>           break;<br>         }<br>       }<br>     }<br>     return r;<br>  }<br> <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>