            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class SortingWithPermutation<br>{<br>  public int[] getPermutation(int[] a)<br>  {<br>    int n = a.length;<br>    int[] b = a.clone();<br>    int[] p = a.clone();<br>    Arrays.sort(b);<br>    boolean[] c = new boolean[a.length];<br>    for (int i=0;i&lt;n;i++) {<br>      for (int j=0;j&lt;n;j++) if (a[i]==b[j]&amp;&amp;!c[j]){<br>        p[i]=j;<br>        c[j]=true;<br>        break;<br>      }<br>    }<br>    return p;<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>