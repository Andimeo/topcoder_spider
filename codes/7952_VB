            Public Class SortingWithPermutation<br><br>    Public Function getPermutation(ByVal a As Integer()) As Integer()<br>        Dim i As Integer<br>        Dim aux As Integer<br>        Dim result(a.Length - 1) As Integer<br>        For i = 0 To a.Length - 1<br>            result(i) = i<br>        Next i<br><br>        Dim b(a.Length - 1) As Integer<br>        b = a.Clone()<br>        Array.Sort(a)<br><br>        For i = 0 To b.Length - 1<br>            aux = Array.IndexOf(a, b(i))<br>            a(aux) = -1<br>            result(i) = aux<br>        Next<br>        Return result<br>    End Function<br><br>End Class<br></td>