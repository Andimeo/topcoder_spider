            #include &lt;vector&gt;<br><br>using namespace std;<br>class <br>DecreasingNumbers{<br>public:<br> long long getNth(int n) {<br>    vector &lt;int&gt; e;<br>      long long res=0;<br>   for (int k=0; k&lt;=20; k++) e.push_back(10);<br>   if (n&lt;=10) return n;<br>   if (n&gt;1022) return -1;   <br>   e[0]=0;<br>   e[1]=2;<br>   for (int j=11; j&lt;=n-1; j++) { int k=0; while (e[k]==e[k+1]-1) {   k++;   };   if (e[k]!=10) e[k]++; else e[k]=k;   for (int i=0; i&lt;k; i++) e[i]=i;<br>   };<br>   for (int i=11; i&gt;=0; i--) {<br>     if (e[i]!=10) res=res*10+e[i];<br>   };<br>   return res;<br> };<br>};<br></td>