            #include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cmath&gt;<br>#include &lt;fstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;queue&gt;<br>using namespace std;<br><br>#define Min(a,b) ((a)&gt;(b)?(b):(a))<br>#define Max(a,b) ((a)&gt;(b)?(a):(b))<br>#define prr make_pair<br><br>typedef long long ll;<br><br>inline int reverse(int a)<br>{<br>  int b = 0;<br>  while (a)<br>  {<br>    b = b*10 + a%10;<br>    a/=10;<br>  }<br>  return b;<br>}<br>inline ll reverse(ll a)<br>{<br>  ll b = 0;<br>  while (a)<br>  {<br>    b = b*10 + a%10;<br>    a/=10;<br>  }<br>  return b;<br>}<br>class ReverseDistance<br>{ <br>  public:<br>  int n,m;<br>  string find(int dif) <br>  {<br>    int i,j,k;<br>    for (i=2; i&lt;13; i++)<br>    {<br>      int up = pow(10.0, (i+1)/2);<br>      int mod = pow(10.0, i - (i+1)/2);<br>      for (j=up/10; j&lt;up; j++)<br>      {<br>        int bak = reverse(j);<br>        int last = (bak + dif) % mod;<br>        if ( (ll)j*mod + last - reverse((ll)j*mod + last) == dif)<br>        {<br>          char s[100];<br>          sprintf(s,"%lld",(ll)j*mod + last);<br>          return s;<br>        }<br>      }<br>    }<br>    return "NONE";<br>  }<br>  <br><br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>