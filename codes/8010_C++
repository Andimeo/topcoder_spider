            #include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;vector&gt;<br>#include &lt;cmath&gt;<br>#include &lt;map&gt;<br>using namespace std;<br> <br>struct WhiteHats {<br>  int whiteNumber(vector&lt;int&gt; c) {<br>    int n = c.size();<br>    sort(c.begin(), c.end());<br>    for (int w = 0; w &lt;= n; w++) {<br>      vector&lt;int&gt; d;<br>      for (int i = 0; i &lt; w; i++) d.push_back(w-1);<br>      for (int i = w; i &lt; n; i++) d.push_back(w);<br>      sort(d.begin(), d.end());<br>      if (c == d) return w;<br>    }<br>    return -1;<br>  }<br>};<br></td>