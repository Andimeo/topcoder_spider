            import java.util.*;<br><br>public class WhiteHats {<br>  public int whiteNumber(int[] count) {<br>    Arrays.sort(count);<br>    if (count[0]==count[count.length-1]) {<br>      if (count[0]==0) return 0;<br>      else if (count[0]==count.length-1) return count.length;<br>      else return -1;<br>    }<br>    if (count[count.length-1]-count[0]&gt;1) return -1;<br>    int numwhite = 0;<br>    for (int i=0; i&lt;count.length; i++) if (count[i]==count[0]) numwhite++;<br>    if (count[0]+1!=numwhite) return -1;<br>    return count[count.length-1];<br>  }<br>}<br></td>