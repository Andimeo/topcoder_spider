            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;cstring&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;sstream&gt;<br>#include &lt;cmath&gt;<br>#include &lt;iostream&gt;<br> <br>using namespace std;<br> <br>typedef long long llong;<br>typedef long double dbl;<br> <br>#define pb push_back<br>#define mp make_pair<br>#define fi first<br>#define se second<br> <br>typedef pair &lt;int, int&gt; PII;<br>typedef vector &lt;int&gt; VI;<br>typedef vector &lt;string&gt; VS;<br> <br>class DrawingMarbles<br>{<br>public:<br>  double sameColor(vector &lt;int&gt; c, int n)<br>  {<br>    double res = 0, sum = 0;<br>    for (int i = 0; i &lt; c.size(); i++)<br>      sum += c[i];<br>    for (int i = 0; i &lt; c.size(); i++)<br>    {<br>      if (c[i] &lt; n)<br>        continue;<br>      double t = 1;<br>      for (int j = 0; j &lt; n; j++)<br>        t *= (c[i] - j) / (sum - j);<br>      res += t;<br>    }<br>    return res;<br>  }<br>};<br> <br> <br>// Powered by PopsEdit<br></td>