            public class DrawingMarbles {<br>  <br>    public double sameColor(int[] colors, int n) {<br>      double result = 0;<br>      int sum = sum(colors);<br>      for (int i = 0; i &lt; colors.length; i++) {<br>        if (n &lt;= colors[i]) {<br>          double p = 1;<br>          for (int j = 0; j &lt; n; j++) {<br>            p *= (colors[i] - j) * 1.0 / (sum - j);<br>          }<br>          result += p;<br>        }<br>      }<br>      return result;<br>    }<br>    <br>    private int sum(int[] a) {<br>    int result = 0;<br>    for (int x : a) {<br>      result += x;<br>    }<br>    return result;<br>  }<br><br>}<br></td>