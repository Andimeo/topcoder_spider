            import java.util.*;<br>public class SearchBox {<br>    public int find(String text, String search, String wholeWord, int start) {<br>        text = " " + text + " ";<br>        for(int i = start + 1; i + search.length() - 1 &lt; text.length(); i++)<br>        {<br>            if(text.substring(i, i + search.length()).equals(search))<br>            {<br>                if(wholeWord.equals("N"))<br>                    return i - 1;<br>                else<br>                {<br>                    if(text.charAt(i - 1) == ' ' &amp;&amp; text.charAt(i + search.length()) == ' ')<br>                        return i - 1;<br>                }<br>            }<br>        }<br>        return -1;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>