            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class LibraryWorker<br>{<br>    public int replaceBooks(int[] books, int N)<br>    {<br>        int m = 0;<br>        List&lt;int&gt; A = new List&lt;int&gt;();<br>        List&lt;int&gt; B = new List&lt;int&gt;();<br>        foreach (int i in books)<br>        {<br>            if (i &gt; 0)<br>            {<br>                A.Add(i);<br>                m = Math.Max(m, i);<br>            }<br>            else<br>            {<br>                B.Add(-i);<br>                m = Math.Max(m, -i);<br>            }<br>        }<br>        A.Sort();<br>        A.Reverse();<br>        B.Sort();<br>        B.Reverse();<br>        m*=-1;<br>        for (int i = 0; i &lt; A.Count; i += N)<br>        {<br>            m += A[i]*2;<br>        }<br>        for (int i = 0; i &lt; B.Count; i += N)<br>        {<br>            m += B[i]*2;<br>        }<br>        return m;<br><br>    }<br>    <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by r1cs1]<br>// Powered by CodeProcessor<br></td>