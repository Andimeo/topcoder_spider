            #include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;stdio.h&gt;<br><br>using namespace std;<br><br>class LibraryWorker {<br>  public:<br>  <br>  vector&lt;int&gt; a, b;<br>  <br>  int cut () {<br>    if (a.size() == 0)<br>      return b[b.size() - 1];<br>    if (b.size() == 0)<br>      return a[a.size() - 1];<br>    return a[a.size() - 1] &gt;? b[b.size() - 1];<br>    }<br>  <br>  int carry (vector&lt;int&gt; a, int N) {<br>    int n = a.size(), i, re = 0;<br>    <br>    for (i = 0; i &lt; (n + N - 1) / N; i ++)<br>      re += a[n - 1 - i * N];<br>    return re;<br>    }<br>  <br>  int replaceBooks(vector &lt;int&gt; B, int N) {<br>    int i, n;<br>    a.clear(); b.clear();<br>    n = B.size();<br>    for (i = 0; i &lt; n; i ++)<br>      if (B[i] &gt; 0)<br>        a.push_back(B[i]);<br>      else<br>        b.push_back(- B[i]);<br>    sort(a.begin(), a.end());<br>    sort(b.begin(), b.end());<br>    return (carry(a,N) + carry(b,N)) * 2 - cut();<br>    }<br>  };<br></td>