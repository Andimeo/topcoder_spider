            using System;<br> <br>public class SignificanceArithmetic <br>{<br>  public string evaluate(string expression) <br>  {<br>    string[] nums = expression.Split('+');<br>    int sigdigs = 0;<br>    int pos = nums[0].IndexOf('.');<br>    if (pos &gt; -1)<br>      sigdigs = nums[0].Length - pos - 1;<br>    else<br>      sigdigs = 0;<br>    pos = nums[1].IndexOf('.');<br>    sigdigs = Math.Min(sigdigs, (pos &gt; -1 ? nums[1].Length - pos - 1 : 0));<br>    decimal result = decimal.Parse(nums[0]) + decimal.Parse(nums[1]);<br>    result = Math.Round(result, sigdigs);<br>    return result.ToString();<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>