            using System;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class MirroredClock<br>{<br>    public string whatTimeIsIt(string time)<br>    {<br>        string[] t = time.Split(':');<br>        int h = int.Parse(t[0]);<br>        int m = int.Parse(t[1]);<br><br>        if (m != 0) h++;<br><br>        m = 60 - m;<br>        if (m == 60) m = 0;<br><br>        h = 12 - h;<br>        if (h == 12) h = 0;<br><br>        return h.ToString().PadLeft(2, '0') + ":" + m.ToString().PadLeft(2, '0');<br>    }<br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [krabishe was here]<br>// Powered by CodeProcessor<br></td>