            import java.util.*;<br>public class PowerPlants<br>{<br>  public int minCost(String[] costs, String list, int numPlants)<br>  {<br>    n = list.length();<br>    memo = new int[1&lt;&lt;n];<br>    Arrays.fill(memo, -1);<br>    <br>    a = new int[n][n];<br>    for(int i=0;i&lt;n;i++)<br>      for(int j=0;j&lt;n;j++)<br>      {<br>        char ch = costs[i].charAt(j);<br>        if(ch&gt;='0' &amp;&amp; ch&lt;='9')<br>          a[i][j] = ch-'0';<br>        else<br>          a[i][j] = ch-'A'+10;<br>      }<br>    this.numPlants = numPlants;<br>    int mask = 0;<br>    for(int i=0;i&lt;n;i++)<br>      if(list.charAt(i)=='Y')<br>        mask |= 1&lt;&lt;i;<br>    return solve(mask);<br>  }<br>  int[] memo; int n, numPlants;<br>  int[][] a;<br>  int solve(int mask)<br>  {<br>    if(memo[mask]==-1)<br>    {<br>      int res = 1000000;<br>      if(Integer.bitCount(mask)&gt;=numPlants)<br>        res = 0;<br>      else<br>      {<br>        for(int i=0;i&lt;n;i++)<br>        {<br>          if((mask&amp;1&lt;&lt;i)!=0)<br>          {<br>            for(int j=0;j&lt;n;j++)<br>            {<br>              if((mask&amp;1&lt;&lt;j)==0)<br>              {<br>                res = Math.min(res,a[i][j]+<br>                  solve(mask|1&lt;&lt;j));<br>              }<br>            }<br>          }<br>        }<br>      }<br>      memo[mask] = res;<br>    }<br>    return memo[mask];<br>  }<br>}<br></td>