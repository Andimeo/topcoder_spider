            public class CatchTheMice {<br>  double INF = 1E10;<br>  int[] x, y, xv, yv;<br>  double f(double t) {<br>    double minx = INF, maxx = -INF, miny = INF, maxy = -INF, xx, yy;<br>    for (int i = 0; i &lt; x.length; i++) {<br>      xx = x[i] + t*xv[i];<br>      yy = y[i] + t*yv[i];<br>      minx = Math.min(minx, xx);<br>      maxx = Math.max(maxx, xx);<br>      miny = Math.min(miny, yy);<br>      maxy = Math.max(maxy, yy);<br>    }<br>    return Math.max(maxx-minx, maxy-miny);<br>  }<br>  public double largestCage(int[] xp, int[] yp, int[] xv, int[] yv) {<br>    x = xp;<br>    y = yp;<br>    this.xv = xv;<br>    this.yv = yv;<br>    double l = 0, u = INF, ll, uu;<br>    for (int i = 0; i &lt; 500; i++) {<br>      ll = (2*l + u) / 3;<br>      uu = (l + 2*u) / 3;<br>      if (f(ll) &lt; f(uu))<br>        u = uu;<br>      else<br>        l = ll;<br>    }<br>    return f(l);<br>  }<br>}<br></td>