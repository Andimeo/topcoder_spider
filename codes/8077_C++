            #include &lt;iostream&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>using namespace std;<br><br>class ThrowTheBall<br>{<br>public:<br>  int timesThrown(int N, int M, int L){<br>    int res , num[51],i,k;<br>    for (i=0;i&lt;51;i++)<br>    num[i]=0 ;<br>    num[0]=1 ;<br>    k=0 ;<br>    while(num[k]!=M){<br>      if (num[k]%2){<br>        k=((k-L)%N+N)%N;  <br>        num[k]++ ;<br>      }<br>      else{<br>        k=(k+L)%N ;<br>        num[k]++;  <br>      }  <br>    }<br>    res=-1;<br>    for (i=0;i&lt;N;i++)<br>    res+=num[i];<br><br>    return res ;<br>  };  <br>};<br></td>