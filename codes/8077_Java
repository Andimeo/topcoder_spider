            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class ThrowTheBall<br>{<br>  public int timesThrown(int N, int M, int L)<br>  {<br>    int player[]=new int[N];<br>    int p=0,count=0;<br>    <br>    while(true)<br>    {<br>      player[p]++;      <br>      if(player[p]==M) break;<br>      count++;<br>      <br>      if(player[p]%2==1)<br>      {<br>        p+=L;<br>        p=p%N;<br>      }<br>      else<br>      {<br>        p-=L;<br>        p+=N;<br>        p=p%N;<br>      }<br>    }<br>    return count;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>