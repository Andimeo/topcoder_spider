            // By mirosuaf<br>#include &lt;algorithm&gt; <br>#include &lt;cstdlib&gt; <br>#include &lt;cmath&gt; <br>#include &lt;iostream&gt; <br>#include &lt;sstream&gt; <br>#include &lt;string&gt; <br>#include &lt;vector&gt; <br>using namespace std; <br>#define VAR(a,b) typeof(b) a=(b) <br>#define REP(i,n) for(int _n=n, i=0;i&lt;_n;++i) <br>#define FOR(i,a,b) for(int i=(a),_b=(b);i&lt;=_b;++i) <br>#define FORD(i,a,b) for(int i=(a),_b=(b);i&gt;=_b;--i) <br>typedef long long LL; <br>const int INF = 1000000000; <br>typedef vector&lt;int&gt; VI; <br> <br>class DecreasingNumber {<br>  public:<br>  int numberOfOperations(int n) {<br>    int t[1000200];<br> <br>FOR(i,1,1000200) t[i]=INF;<br> <br>t[n]=0;<br>FORD(i,n,2) {<br>  if (i%2==0 &amp;&amp; t[i/2]&gt;t[i]+1) t[i/2]=t[i]+1;<br>  if (i%3==0 &amp;&amp; t[i/3]&gt;t[i]+1) t[i/3]=t[i]+1;<br>  if (t[i-1]&gt;t[i]+1) t[i-1]=t[i]+1;<br>  }<br> <br>return t[1];<br> <br>    <br>    <br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>