            import java.text.DecimalFormat;<br><br>public class ColorApproximation {<br>  public String bestApproximation(String[] colors) {<br>    int rMin=255, rMax=0;<br>    int gMin=255, gMax=0;<br>    int bMin=255, bMax=0;<br>    for (int i=0; i&lt;colors.length; i++) {<br>      String[] sx = colors[i].split(" ");<br>      for (int j=0; j&lt;sx.length; j++) {<br>        int r = Integer.parseInt(sx[j].substring(0,2), 16);<br>        int g = Integer.parseInt(sx[j].substring(2,4), 16);<br>        int b = Integer.parseInt(sx[j].substring(4,6), 16);<br>        rMin = Math.min(r, rMin);<br>        rMax = Math.max(r, rMax);<br>        gMin = Math.min(g, gMin);<br>        gMax = Math.max(g, gMax);<br>        bMin = Math.min(b, bMin);<br>        bMax = Math.max(b, bMax);<br>      }<br>    }<br>    int dist = Math.max(rMax-rMin, Math.max(gMax-gMin, bMax-bMin));<br>    if (dist%2 == 1) dist++;<br>    dist /= 2;<br>    <br>    int r = Math.max(0,rMax-dist);<br>    int g = Math.max(0,gMax-dist);<br>    int b = Math.max(0,bMax-dist);<br>    String rs = "00"+Integer.toString(r, 16).toUpperCase();<br>    String gs = "00"+Integer.toString(g, 16).toUpperCase();<br>    String bs = "00"+Integer.toString(b, 16).toUpperCase();<br>    <br>    return rs.substring(rs.length()-2, rs.length()) + gs.substring(gs.length()-2, gs.length()) + bs.substring(bs.length()-2, bs.length());<br>  }<br>}<br></td>