            #include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;string.h&gt;<br><br>using namespace std;<br><br>class Pawns {<br>  public:<br>  <br>  int used[8][8];<br>  <br>  int pawnsAttack(vector &lt;string&gt; p) {<br>    memset(used, 0, sizeof(used));<br>    for (int i = 0; i &lt; p.size(); i ++) {<br>      int y = p[i][0] - 'a';<br>      int x = p[i][1] - '1';<br>      used[x][y] = 1;<br>      if (x &lt; 7) {<br>        x ++;<br>        if (y - 1 &gt;= 0 &amp;&amp; !used[x][y - 1])<br>          used[x][y - 1] = 2;<br>        if (y + 1 &lt; 8 &amp;&amp; !used[x][y + 1])<br>          used[x][y + 1] = 2;<br>        }<br>      }<br>    int re = 0;<br>    for (int i = 0; i &lt; 8; i ++)<br>      for (int j = 0; j &lt; 8; j ++)<br>        re+=used[i][j] == 2;<br>    return re;<br>    }<br>  };<br></td>