            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class LazyCat<br>{<br>  public int maxMiceCount(int[] pos, int[] speed, int d, int[] rest)<br>  {<br>    int[] time = new int[pos.Length];<br>    for(int i=0;i&lt;pos.Length;++i) {<br>      if(pos[i]&lt;=d) {<br>        time[i] = (d - pos[i]) / speed[i];<br>        while(pos[i]+time[i]*speed[i]&lt;=d) ++time[i];<br>      }<br>      else time[i] = -1;<br>    }<br>    Array.Sort(time);<br>    Array.Sort(rest);<br>    int nc = 0, result = 0, ct=0;<br>    for(int i=0;i&lt;rest.Length;++i) {<br>      if(nc==time.Length) break;<br>      while(nc&lt;time.Length &amp;&amp; ct&gt;=time[nc]) ++nc;<br>      if(nc&lt;time.Length) {<br>        ++result;<br>        ++nc;<br>        ct += rest[i];<br>      }<br>    }<br>    return result;<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>