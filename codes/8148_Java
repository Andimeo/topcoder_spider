            import java.util.*;<br> <br>public class LazyCat<br>{<br>  public int maxMiceCount(int[] pos, int[] speed, int d, int[] rest)<br>  {<br>    Arrays.sort(rest);<br>    int P[] = new int[pos.length];<br>    for ( int i = 0; i &lt; pos.length; ++i )<br>    {<br>      P[i] = (d - pos[i]);<br>      if ( P[i] &gt;= 0 ) P[i] /= speed[i];<br>    }<br>    Arrays.sort(P);<br>    int j = -1, time = 0, res = 0;<br>    for ( int i = 0; i &lt; rest.length; ++i )<br>    {<br>      for ( ++j; j &lt; pos.length &amp;&amp; P[j] &lt; time; ++j );<br>      if ( j &lt; pos.length )<br>      {<br>        ++res;<br>      }<br>      time += rest[i];<br>    }<br>    return res;<br>  }<br>};<br> <br>// Powered by PopsEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>