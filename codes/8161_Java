            import java.math.*;<br>import java.util.*;<br>import java.util.regex.*;<br>import static java.util.Arrays.*;<br>import static java.lang.Character.*;<br>import static java.util.Collections.*;<br>import static java.lang.Double.*;<br>import static java.lang.Integer.*;<br>import static java.lang.Long.*;<br>import static java.lang.Math.*;<br> <br>public class MinDifference {<br>  public int closestElements(int A0, int X, int Y, int M, int n)  {<br>    <br>    int r = 9999999;<br>    int[] a = new int[n];<br>    a[0] = A0;<br>    for(int i=1;i&lt;n;i++)<br>    a[i] = (a[i-1] * X + Y) % M;<br>    for(int i=0;i&lt;n;i++) <br>    for(int j=i+1;j&lt;n;j++)<br>    r = min(r,abs(a[i]-a[j]));<br>    return r;<br>  }<br>  <br>  <br>}<br>//January 1st,2008<br>//Powered by [KawigiEdit] X.O!<br></td>