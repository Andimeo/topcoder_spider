            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class ObtainingDigitK<br>{<br>    private bool isOk(int[] num, int last, int k)<br>    {<br>        int pos = Array.IndexOf(num, k, 0);<br>        return pos &gt;=0 &amp;&amp; pos &lt;=last;<br>    }<br> <br>    private void inc(int[] num, ref int last)<br>    {<br>        int i = 0;<br>        while (num[i] == 9)<br>        {<br>            num[i] = 0;<br>            ++i;<br>        }<br>        ++num[i];<br>        if (i &gt; last)<br>            last = i;<br>    }<br> <br>    public int minNumberToAdd(string originalNumber, int k)<br>  {<br>        int n = originalNumber.Length;<br>        int[] a = new int[n + 1];<br>        int last = n-1;<br>        for (int i = 0; i &lt; n; ++i)<br>            a[n - i - 1] = originalNumber[i] - '0';<br>        for (int i = 0; i &lt;= 10; ++i)<br>        {<br>            if (isOk(a, last, k))<br>                return i;<br>            inc(a, ref last);<br>        }<br> <br>        return 0;<br>  }<br> <br>    <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>