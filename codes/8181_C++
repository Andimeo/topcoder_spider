            #include &lt;string&gt;<br><br>using namespace std;<br><br>class ObtainingDigitK<br>{<br>public:<br>  int minNumberToAdd(string s, int k)<br>  {<br>    int a[60];<br>    int n = s.size();<br>    int i;<br>    for (i=0; i&lt;n; i++)<br>      a[i] = s[n-i-1]-'0';<br>    int m;<br>    a[n] = 0;<br>    for (m=0; ; m++)<br>    {<br>      for (i=0; i&lt;n; i++)<br>        if (a[i] == k)<br>          break;<br>      if (i&lt;n)<br>        return m;<br>      a[0]++;<br>      for (i=0; i&lt;n &amp;&amp; a[i] == 10; a[i+1]++, a[i] = 0, i++);<br>      if (a[n])<br>        n++;<br>    }<br>    return 0;<br>  }<br>};<br></td>