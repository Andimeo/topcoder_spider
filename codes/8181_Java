            import java.math.BigInteger;<br>import java.util.*;<br>public class ObtainingDigitK {<br>    public int minNumberToAdd(String originalNumber, int k) {<br>        int res = 0;<br>        BigInteger bi = new BigInteger(originalNumber);<br>        for (int i=0; i&lt;10; i++) {<br>          BigInteger add = new BigInteger(""+i);<br>          BigInteger tmp = bi.add(add);<br>          String s = tmp.toString();<br>          for (int j=0; j&lt;s.length(); j++) {<br>            int dig = s.charAt(j)-'0';<br>            if (dig==k)<br>              return i;<br>          }<br>        }<br>        return res;<br>    }<br><br>} <br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>