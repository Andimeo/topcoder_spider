            public class LameKnight<br>{<br>  public int maxCells(int height, int width)<br>  {<br>    if (height==1) return 1;<br>    if (height==2)<br>    {<br>      if (width&gt;8)<br>        return 4;<br>      else<br>        return (width+1)/2;<br>    }<br>    if (height&gt;=3)<br>    {<br>      if (width==1) return 1;<br>      if (width==2) return 2;<br>      if (width==3) return 3;<br>      if (width==4) return 4;<br>      if (width==5) return 4;<br>      if (width==6) return 4;      <br>      if (width&gt;=7) return 5+(width-7);<br>    }<br>    return 1;<br>  }<br>}<br></td>