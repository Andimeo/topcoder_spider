            using System;<br><br>public class ChainOfRectangles<br>{<br>  public int getMaximalArea(int[] width, int[] height, string color)<br>  {<br>    int n=width.Length;<br>    int g=0;int b=0;int r=0;<br>    for (int i=0;i&lt;n;i++)<br>    {<br>        int q=width[i]*height[i];<br>      if (i&lt;n-1)<br>      {<br>        q-=width[i+1]*height[i+1];<br>      }<br>      if (color[i]=='R')<br>      {<br>        r+=q;<br>      }<br>      if (color[i]=='G')<br>      {<br>        g+=q;<br>      }<br>      if (color[i]=='B')<br>      {<br>        b+=q;<br>      }<br>    }<br>    return Math.Max(r,Math.Max(b,g));<br>  }<br>  <br>}<br></td>