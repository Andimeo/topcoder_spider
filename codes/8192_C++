            #include &lt;vector&gt;<br>#include &lt;string&gt;<br><br>using namespace std;<br><br>struct ChainOfRectangles<br>{<br>  int getMaximalArea(vector &lt;int&gt; width, vector &lt;int&gt; height, string color)<br>  {<br>    int r = 0, g = 0, b = 0;<br>    for (int i = 0; i &lt; width.size(); i++)<br>    {<br>      int ss = width[i] * height[i];<br>      if (i != width.size() - 1) ss -= width[i + 1] * height[i + 1];<br>      if (color[i] == 'R') r += ss;<br>      else if (color[i] == 'G') g += ss;<br>      else b += ss;<br>    }<br>    int ans = -1;<br>    ans &gt;?= r;<br>    ans &gt;?= g;<br>    ans &gt;?= b;<br>    return ans;<br>  }<br>};<br></td>