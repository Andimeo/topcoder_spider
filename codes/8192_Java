            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class ChainOfRectangles<br>{<br>  public int getMaximalArea(int[] width, int[] height, String color)<br>  {<br>    int n = color.length();<br>    int[] count = new int[3];<br>    int prev = 0;<br>    for (int i=0; i&lt;n; i++)<br>    {<br>      int S = width[i]*height[i];<br>      int cur = 0;<br>      if (color.charAt(i)=='R')<br>        cur = 0;<br>      if (color.charAt(i)=='G')<br>        cur = 1;<br>      if (color.charAt(i)=='B')<br>        cur = 2;<br>      if (i&gt;0)<br>      {<br>        count[prev]-=S;<br>      }<br>      count[cur]+=S;<br>      prev = cur;<br>    }  <br>    return Math.max(count[0], Math.max(count[1], count[2]));<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>