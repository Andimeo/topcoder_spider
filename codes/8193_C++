            //#include &lt;vector&gt;<br>//#include &lt;string&gt;<br>//#include &lt;cstring&gt;<br>//#include &lt;cmath&gt;<br>//#include &lt;cstdio&gt;<br><br>using namespace std;<br><br>//typedef vi vector&lt;int&gt;<br><br>class BeautifulString {<br>  public: int maximumLength(int cA, int cB, int mA, int mB) {<br>    long long countA = cA, countB =cB, maxA= mA, maxB =mB;<br>    if (maxA==0) if (countB&gt;maxB) return maxB; else return countB;<br>    if (maxB==0) if (countA&gt;maxA) return maxA; else return countA;<br>    if (countA&gt;countB)<br>     if (countA&gt;=maxA*(countB+1)) return (maxA+1)*(countB+1)-1; else return countA+countB;<br>    else <br>     if (countB&gt;=maxB*(countA+1)) return (maxB+1)*(countA+1)-1; else return countA+countB;<br>     <br>  };<br>};<br></td>