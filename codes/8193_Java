            public class BeautifulString {<br> <br>  public int maximumLength(int ca, int cb, int ma, int mb) {<br>    if (cb==0 || mb==0) return Math.min(ca, ma);<br>    if (ca==0 || ma==0) return Math.min(cb, mb);<br>    if (ca &lt; cb) { <br>      int t = ca; ca = cb; cb = t;<br>      t = ma; ma = mb; mb = t;<br>    }<br>    int r = 0;<br>    while (cb &gt; 0) {<br>      r +=  Math.min(ca-cb+1, ma) + 1;<br>      ca -= Math.min(ca-cb+1, ma);<br>      cb -= 1;<br>    }<br>    r += Math.min(ca, ma);<br>    return r;<br>  }<br> <br>}<br></td>