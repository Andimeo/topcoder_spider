            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class TaliluluCoffee <br>{<br>    public int maxTip(int[] tips) <br>    {<br>        Array.Sort(tips);<br>        Array.Reverse(tips);<br>        int r = 0;<br>        for (int i = 0; i &lt; tips.Length; i++)<br>        {<br>            r += Math.Max(tips[i] - i, 0);<br>        }<br>        return r;<br>    }<br>    <br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by r1cs1]<br>// Powered by CodeProcessor<br></td>