            #include&lt;vector&gt;<br>#include&lt;algorithm&gt;<br><br>using namespace std;<br><br>class Prank<br>{<br>  public:<br>  vector &lt;int&gt; realWeight(int apparentGain)<br>  {<br>     int i,j;<br>     vector &lt;int&gt; res;<br>     res.clear();<br>     for (i=1;i*i&lt;apparentGain;i++)<br>        if (apparentGain%i==0)<br>        {<br>          j=apparentGain/i;<br>          if ((i+j)%2==0) res.push_back((i+j)/2);<br>        }<br>     sort (res.begin(),res.end());<br>     return res;<br>   }<br>};<br></td>