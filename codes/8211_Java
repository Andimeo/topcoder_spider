            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class Barracks<br>{<br>  public int attack2(int myUnits, int barHp, int unitsPerRound, int heUnits)<br>  {<br>    int res = 0;<br>    while (barHp &gt; 0 || heUnits &gt; 0)<br>    {<br>      res++;<br>      if (myUnits == 0 || res &gt; 100000)<br>        return 1000000;<br>      <br>      int x = Math.min(myUnits, barHp);<br>      barHp -= x;<br>      heUnits = Math.max(heUnits - myUnits + x, 0);<br>      <br>      myUnits -= Math.min(myUnits, heUnits);<br>      <br>      if (barHp &gt; 0)<br>        heUnits += unitsPerRound;<br>    }<br>    return res;<br>  }<br>  <br>  public int attack(int myUnits, int barHp, int unitsPerRound)<br>  {<br>    int res = 1000000;<br>    int heUnits = 0;<br>    int h = 0;<br>    while (barHp &gt; 0 || heUnits &gt; 0)<br>    {<br>      int r = h + attack2(myUnits, barHp, unitsPerRound, heUnits);<br>      res = Math.min(res, r);<br>      <br>      h++;<br>      if (h &gt; 1000000)<br>        break;<br> <br>      int x = Math.min(myUnits, heUnits);<br>      heUnits -= x;<br>      barHp = Math.max(barHp - myUnits + x, 0);<br>      <br>      myUnits -= Math.min(myUnits, heUnits);<br>      <br>      if (barHp &gt; 0)<br>        heUnits += unitsPerRound;<br>    }<br>    if (res == 1000000)<br>      res = -1;<br>    return res;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>