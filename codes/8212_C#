            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class ProgrammingDevice<br>{<br>  public int minPackets(int[] offsets, int[] size, int maxData)<br>  {<br>        Array.Sort(offsets, size);<br>        int n = offsets.Length;<br> <br>        long[] o = Array.ConvertAll&lt;int, long&gt;(offsets, delegate(int i) { return i; });<br>        long[] s = Array.ConvertAll&lt;int, long&gt;(size, delegate(int i) { return i; });<br> <br>        long offset = o[0];<br> <br>        long total = 0;<br>        for (int i = 0; i &lt; n; ++i)<br>        {<br>            if (o[i] &gt; offset)<br>                offset = o[i];<br>            long end = o[i] + s[i];<br>            if (end &lt;= offset)<br>                continue;<br>            if ((end - offset) % maxData == 0)<br>            {<br>                total += (end - offset) / maxData;<br>                offset = end;<br>            }<br>            else<br>            {<br>                total += (end - offset) / maxData + 1;<br>                offset += ((end - offset) / maxData + 1) * maxData;<br>            }<br>        }<br> <br>        return (int)total;<br>  }<br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>