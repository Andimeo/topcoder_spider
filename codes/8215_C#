            using System;<br><br>public class RevealTriangle {<br>    public string[] calcTriangle(string[] questionMarkTriangle) {<br>        int n = questionMarkTriangle.Length;<br>        string[] res = new string[n];<br>        res[n - 1] = questionMarkTriangle[n - 1];<br>        for (int i = n - 2; i &gt;= 0; --i)<br>        {<br>            int k;<br>            for (k = 0; k &lt; n - i; ++k)<br>                if (questionMarkTriangle[i][k] != '?')<br>                    break;<br>            int[] d = new int[n - i];<br>            d[k] = questionMarkTriangle[i][k] - '0';<br>            for (int j = k - 1; j &gt;= 0; --j)<br>            {<br>                d[j] = (res[i + 1][j] - '0' + 30 - d[j + 1]) % 10;<br>            }<br>            for (int j = k + 1; j &lt; n - i; ++j)<br>            {<br>                d[j] = (res[i + 1][j - 1] - '0' + 30 - d[j - 1]) % 10;<br>            }<br>            for (int j = 0; j &lt; n - i; ++j)<br>                res[i] += d[j];<br>        }<br>        return res;<br>    }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>