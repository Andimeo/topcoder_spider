            import java.util.*;<br> <br>public class RevealTriangle {<br>    public String[] calcTriangle(String[] questionMarkTriangle) {<br>        int n = questionMarkTriangle.length;<br>        int[][] a = new int[n][n];<br>        for (int i = 0; i &lt; n; i++) {<br>            for (int j = 0; j &lt; n - i; j++) {<br>                char c = questionMarkTriangle[i].charAt(j);<br>                a[i][j] = (c == '?') ? -1 : c - '0';<br>            }<br>        }<br> <br>        for (int i = n - 1; i &gt;= 0; i--) {<br>            int l = n - i - 1;<br>            while (l &gt; 0) {<br>                for (int j = 0; j &lt; n - i - 1; j++) {<br>                    if (a[i][j] == -1 &amp;&amp; a[i][j + 1] != -1) {<br>                        a[i][j] = (a[i + 1][j] - a[i][j + 1] + 10) % 10;<br>                        l--;<br>                    }<br>                    if (a[i][j] != -1 &amp;&amp; a[i][j + 1] == -1) {<br>                        a[i][j + 1] = (a[i + 1][j] - a[i][j] + 10) % 10;<br>                        l--;<br>                    }<br>                }<br>            }<br>        }<br> <br>        String[] r = new String[n];<br>        for (int i = 0; i &lt; n; i++) {<br>            r[i] = "";<br>            for (int j = 0; j &lt; n - i; j++) {<br>                r[i] += a[i][j];<br>            }<br>        }<br> <br>        return r;<br>    }<br> <br> <br>}<br> <br> <br>// Powered by PopsEdit<br> <br>// Powered by CodeProcessor<br></td>