            #include &lt;algorithm&gt;<br>#include &lt;numeric&gt;<br> <br>#include &lt;iostream&gt;<br>#include &lt;sstream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;queue&gt;<br>#include &lt;stack&gt;<br>#include &lt;set&gt;<br>#include &lt;map&gt;<br> <br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cassert&gt;<br> <br>#include &lt;cmath&gt;<br>#include &lt;complex&gt;<br>using namespace std;<br> <br>#define FOR(i,a,b) for(int i=(int)(a);i&lt;=(int)(b);++i)<br>typedef long long LL;<br> <br>class FoodCollecting { public:<br>int gather(int neededFood, int n, int price) {<br>  int res = INT_MAX; FOR(i, 1, 1000) {<br>    int food = 0, work = n, turns = 0; while(food &lt; neededFood) {<br>      food += work;<br>      while(work &lt; i &amp;&amp; food &gt;= price) work++, food -= price;<br>      turns++;<br>    }<br>    res &lt;?= turns;<br>  }<br>  return res;<br>}<br>};<br> <br> <br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>