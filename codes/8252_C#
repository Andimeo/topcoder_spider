            public class YoungBrother<br>{<br>  public string[] restoreWords(string[] lines, int n, int k)<br>  {<br>    string text = "";<br>    for(int i=0;i&lt;lines.Length;i++)<br>    {<br>      for(int j=0;j&lt;lines[i].Length;j++)<br>      {<br>        if(lines[i][j]!=' ')<br>        {<br>          text+=lines[i][j];<br>        }<br>      }<br>    }<br>    <br>    string[] res = new string[n];<br>    <br>    if(k==0) { for(int i=0;i&lt;n;i++) { res[i]=""; } }<br>    <br>    for(int i=0;i&lt;text.Length;i++)<br>    {<br>      res[i/k] += text[i];<br>    }<br>    <br>    return res;<br>  }<br>}<br></td>