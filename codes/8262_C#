            using System;<br>using System.Collections.Generic;<br>using System.Text;<br><br><br><br>class SpiralRoute<br>{<br>    public static int[] thronePosition(int width, int length)<br>    {<br><br>        int x = 0;<br>        int y = 0;<br>        int lowW = 0;<br>        int lowH = 1;<br>        while (true)<br>        {<br>            if (width == lowW)<br>                break;<br>            while (x &lt; width - 1)<br>                x++;<br><br>            if (width &gt; lowW)<br>                width--;<br><br>            if (length == lowH)<br>                break;<br><br>            while (y &lt; length - 1)<br>                y++;<br><br>            if (length &gt; lowH)<br>                length--;<br><br>            if (width == lowW)<br>                break;<br>            while (x &gt;= lowW + 1)<br>                x--;<br><br>            if (lowW &lt; width)<br>                lowW++;<br><br>            if (length == lowH)<br>                break;<br><br>            while (y &gt;= lowH + 1)<br>                y--;<br>            if (lowH &lt; length)<br>                lowH++;<br><br>            if (width == lowW &amp;&amp; length == lowH)<br>                break;<br><br><br>        }<br><br>        int[] result = new int[2];<br>        result[0] = x;<br>        result[1] = y;<br>        return result;<br>    }<br><br><br>    static void Main(string[] args)<br>    {<br>        SpiralRoute.thronePosition(6, 4);<br>    }<br>}<br></td>