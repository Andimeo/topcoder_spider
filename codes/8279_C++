            #include &lt;vector&gt;<br>using namespace std;<br>class TransformingArray {<br>  public:<br>    int minimalElement(vector &lt;int&gt; a, int N) {<br>      int i, ret = -1;<br>      if (N % 2) {<br>        for (i = 0; i &lt; a.size(); i ++)<br>          if (ret == -1 || a[ret] &lt; a[i])<br>            ret = i;<br>      }<br>      else {<br>        for (i = 0; i &lt; a.size(); i ++)<br>          if (ret == -1 || a[ret] &gt; a[i])<br>            ret = i;<br>      }<br>      return ret;<br>    }<br>};<br></td>