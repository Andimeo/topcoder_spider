            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class TransformingArray<br>{<br>  public int minimalElement(int[] a, int N)<br>  {<br>    int min=0; int max=0;<br>    for(int n=0; n&lt;a.length; n++) {if(a[n]&gt;a[max]) max=n; if(a[n]&lt;a[min]) min=n;}<br>    if(N%2==0) return min;<br>    return max;<br>  }<br>}<br></td>