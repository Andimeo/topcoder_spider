            // Cry as challenge phase is passing by<br><br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br><br>#include &lt;cmath&gt;<br>#include &lt;cctype&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cstring&gt;<br><br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br><br>using namespace std;<br><br>#define FORC(it,v) for( __typeof((v).begin()) it = (v).begin(); it != (v).end(); ++it )<br><br>class CardsShuffle {<br>public:<br>    string shuffle( string cards, int first, int last, int times ) {<br>        --first; --last;<br><br>        for( int counter = 0; counter &lt; times; ++counter ) {<br>            string nov;<br><br>            for( int i = first; i &lt;= last; ++i )<br>                nov += cards[i];<br>            <br>            for( int i = 0; i &lt; first; ++i )<br>                nov += cards[i];<br><br>            for( int i = last+1; i &lt; ( int )cards.size(); ++i )<br>                nov += cards[i];<br><br>            cards = nov;<br>        }<br><br>        return cards;<br>    }<br>};<br><br><br><br><br><br><br><br><br><br>// Powered by FileEdit<br>// Powered by moj 3.0 beta 11 [modified TZTester]<br>// Powered by CodeProcessor<br></td>