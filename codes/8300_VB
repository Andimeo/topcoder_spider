            Imports System.Collections<br><br>Public Class FingerCounting<br><br>        Public Function maxNumber(weakFinger As Integer, maxCount As Integer) As Integer<br>            Dim result As Integer = 0<br>            Dim curFinger As Byte = 1<br>            Dim direction As Byte = 0<br>            <br>            While True<br>              Console.Write("{0} ", curFinger )<br>            <br>              If curFinger = weakFinger Then<br>                If maxCount = 0 Then<br>                  Exit While<br>                End If<br>                maxCount = maxCount - 1<br>              End If<br>              <br>              If curFinger  = 5 Then <br>                direction = 1<br>              Else If curFinger = 1 Then<br>                direction = 0<br>              End If<br>              <br>              If direction = 0 Then<br>                curFinger += 1<br>              Else<br>                curFinger -= 1<br>              End If<br>              <br>              result = result + 1<br>            End While<br><br>            Return result<br>        End Function  <br>End Class<br></td>