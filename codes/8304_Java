            public class TwoRotationCypher {<br>        public String encrypt(int firstSize, int firstRotate, int secondRotate, String s) {<br>            String res = "";<br>            for (int i = 0; i &lt; s.length(); ++i) {<br>                char c = s.charAt(i);<br>                if (c == ' ') {<br>                    res += ' ';<br>                    continue;<br>                }<br>                int k;<br>                if ((byte)c - (byte)'a' &lt; firstSize) {<br>                    k = ((byte)c - (byte)'a' + firstRotate) % firstSize;<br>                }<br>                else {<br>                    k = firstSize + ((byte)c - (byte)'a' - firstSize + secondRotate) % (26 - firstSize);<br>                }<br>                k += (byte)'a';<br>                res += (char)k;<br>            }<br>            return res;<br>        }<br>    }<br></td>