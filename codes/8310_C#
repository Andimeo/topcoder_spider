            using System;<br> <br>public class WordAbbreviation<br>{<br> <br>  public string[] getAbbreviations(string[] words)<br>  {<br>    int n = words.Length;<br>    string[] ans = new string[n];<br>        for (int i = 0; i &lt; n; i++)<br>        {<br>            string w = words[i];<br>            for (int j = 1; j &lt;= w.Length; j++)<br>            {<br>                string p = w.Substring(0, j);<br>                bool ok = true;<br>                for (int k = 0; k &lt; n; k++)<br>                {<br>                    if (i != k)<br>                    {<br>                        if (words[k].StartsWith(p))<br>                        {<br>                            ok = false;<br>                            break;<br>                        }<br>                    }<br>                }<br>                if (ok)<br>                {<br>                    ans[i] = p;<br>                    break;<br>                }<br>            }<br>        }<br>    <br>    return ans;<br>  }<br>}<br></td>