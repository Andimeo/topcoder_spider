            #include &lt;iostream&gt;<br>#include &lt;cstdlib&gt;<br> <br>class DivisibleByDigits<br>{<br>public:<br>  int gcd(int a, int b)<br>  {<br>    if (a &lt; b) return gcd(b, a);<br>    if (b == 0) return a;<br>    return gcd(b, a%b);<br>  }<br>  <br>  int lcm(int a, int b)<br>  {<br>    return (a / gcd(a,b)) * b;<br>  }<br> <br>  long long getContinuation(int n)<br>  {<br>    int mult = 1;<br>    int thenum = n;<br>    while (thenum &gt; 0)<br>    {<br>      int dig = thenum % 10;<br>      thenum /= 10;<br>      if (dig &gt; 0)<br>        mult = lcm(mult, dig);<br>    }<br>    <br>    if (n % mult == 0) return n;<br>    <br>    long long ten = 10;<br>    while(true)<br>    {<br>      if (ten &lt; 0) break;<br>      long long min = ((long long) n) * ten;<br>      long long max = min + (ten - 1);<br>      if (min % mult == 0) return min;<br>      int div1 = min / mult;<br>      int div2 = max / mult;<br>      if (div1 == div2)<br>      {<br>        ten *= 10;<br>        continue;<br>      }<br>      <br>      int mod = min % mult;<br>      return (min + (mult - mod));<br>    }<br>    return 0;<br>  }<br>};<br></td>