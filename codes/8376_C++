            #include&lt;iostream&gt;<br>#include&lt;vector&gt;<br>#include&lt;string&gt;<br><br>using namespace std;<br><br>class CreateGroups<br>{<br>public:<br>  int minChanges(vector &lt;int&gt; groups, int minSize, int maxSize)<br>  {<br>    int n=groups.size();<br>    int sum=0,plus=0,minus=0;<br>    for(int i=0;i&lt;n;i++)<br>    {<br>      sum+=groups[i];<br>    }<br><br>    if((sum&lt;minSize*n)||(sum&gt;maxSize*n))<br>      return -1;<br>    else{<br>      for(int i=0;i&lt;n;i++)<br>      {<br>        if(groups[i]&gt;maxSize)<br>          plus+=groups[i]-maxSize;<br>        if(groups[i]&lt;minSize)<br>          minus+=minSize-groups[i];<br>      }<br><br>      if(plus&gt;minus)<br>        return plus;<br>      else<br>        return minus;<br>    }<br>  }<br>};<br></td>