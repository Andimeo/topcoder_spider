            import java.util.*;<br>public class CreateGroups {<br>    public int minChanges(int[] groups, int minSize, int maxSize) {<br>      int sum = 0;<br>      int over = 0;<br>      int less = 0;<br>      for( int i=0; i&lt;groups.length; i++){<br>        over += Math.max(0, groups[i] - maxSize);<br>        less += Math.max(0, minSize - groups[i]);<br>        sum += groups[i];<br>      }<br>        <br>      if( sum &lt; minSize * groups.length || maxSize * groups.length &lt; sum ){<br>        return -1;<br>      }<br>      <br>        return Math.max(over, less);<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>