            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class PunctuationCleaner<br>{<br>  public String clearExcess(String document)<br>  {<br>    String ret = "";<br>    boolean inx = false;<br>    boolean contq = false;<br>    for(int i = 0; i &lt; document.length(); i++)<br>    {<br>      char c = document.charAt(i);<br>      if(c=='?') contq = true;<br>      if(c=='?' || c=='!') inx = true;<br>      else<br>      {<br>        if(inx)<br>        {<br>          if(contq) ret += "?"; else ret+="!";<br>        }<br>        ret+= "" + c;<br>        inx = false;<br>        contq = false;<br>      }<br>      <br>    }if(inx)<br>        {<br>          if(contq) ret += "?"; else ret+="!";<br>        }<br>    return ret;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>