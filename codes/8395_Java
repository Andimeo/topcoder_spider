            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class LuckyTicketSubstring<br>{<br>  boolean ok(String s) {<br>    if (s.length() % 2 == 1)<br>      return false;<br>    int lsum = 0;<br>    int rsum = 0;<br>    for (int i=0; i&lt;s.length()/2; i++)<br>      lsum+=s.charAt(i);<br>    for (int i=s.length()/2; i&lt;s.length(); i++)<br>      rsum+=s.charAt(i);<br>    return lsum == rsum;<br>  }<br>  public int maxLength(String s)<br>  {<br>    int len = s.length();<br>    int m = 0;<br>    for (int i=0; i&lt;len; i++)<br>      for (int l=(s.length()-i); l&gt;0; l--)<br>        if (ok(s.substring(i, i+l)))<br>          m = Math.max(l, m);<br>    return m;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>