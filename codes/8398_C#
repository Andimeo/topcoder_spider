            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br> <br>public class FloorLayout<br>{<br>    public int countBoards(string[] layout)<br>    {<br>        int count = 0;<br>        for (int i = 0; i &lt; layout.Length; i++)<br>        {<br>            for (int j = 0; j &lt; layout[i].Length; j++)<br>            {<br>                if (layout[i][j] == '-')<br>                {<br>                    while (j &lt; layout[i].Length &amp;&amp; layout[i][j] == '-') j++;<br>                    count++;<br>                }<br>            }<br>        }<br>        for (int i = 0; i &lt; layout[0].Length; i++)<br>        {<br>            for (int j = 0; j &lt; layout.Length; j++)<br>            {<br>                if (layout[j][i] == '|')<br>                {<br>                    while (j &lt; layout.Length &amp;&amp; layout[j][i] == '|') j++;<br>                    count++;<br>                }<br>            }<br>        }<br>        return count;<br>    }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>