            public class FloorLayout<br>{<br>  public int countBoards(String[] layout)<br>  {<br>    int boards = 0;<br>    <br>    for (int i=0; i&lt;layout.length; i++)<br>    {<br>      for (int j=0; j&lt;layout[i].length(); j++)<br>      {<br>        if (j &lt; layout[i].length() - 1)<br>        {<br>          if (layout[i].charAt(j) == '-' &amp;&amp; layout[i].charAt(j) != layout[i].charAt(j + 1))<br>            boards++;<br>        }<br>        <br>        else if (layout[i].charAt(j) == '-')<br>          boards++;<br>        <br>        if (i &lt; layout.length - 1)<br>        {<br>          if (layout[i].charAt(j) == '|' &amp;&amp; layout[i].charAt(j) != layout[i + 1].charAt(j))<br>            boards++;<br>        }<br>        <br>        else if (layout[i].charAt(j) == '|')<br>          boards++;<br>      }<br>    }<br>    <br>    return boards;<br>  }<br>}<br></td>