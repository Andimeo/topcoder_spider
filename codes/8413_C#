            public class TheBestName<br>    {<br>        public string[] sort(string[] names)<br>        {<br>            int[] score = new int[names.Length];<br><br>            for (int i = 0; i &lt; names.Length; i++)<br>            {<br>                score[i] = 0;<br>                for (int j = 0; j &lt; names[i].Length; j++)<br>                    score[i] += names[i][j] - 'A' + 1;<br><br>                if (names[i] == "JOHN")<br>                    score[i] = int.MaxValue;<br>            }<br><br>            for (int i=0; i &lt; names.Length; i++)<br>                for (int j = i; j &lt; names.Length; j++)<br>                {<br>                    if (score[i] &lt; score[j] || (score[i] == score[j] &amp;&amp; names[i].CompareTo(names[j]) &gt; 0 ))<br>                    {<br>                        int c = score[i];<br>                        score[i] = score[j];<br>                        score[j] = c;<br><br>                        string s = names[i];<br>                        names[i] = names[j];<br>                        names[j] = s;<br>                    }<br>                }<br><br><br>            return names;<br>        }<br>    }<br></td>