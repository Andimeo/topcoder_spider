            public class TheBestName{<br>  public class NewObj implements Comparable&lt;NewObj&gt;{<br>    public String s;<br>    public int sum;<br>    public int compareTo(NewObj o) {<br>      if (sum &gt; o.sum) return -1;<br>      if (sum &lt; o.sum) return 1;<br>      return s.compareTo(o.s);<br>    }<br>    <br>    <br>  }<br>  public String[] sort(String[] names) {<br>    NewObj[] newObjects = new NewObj[names.length];<br>    for (int i = 0; i &lt; names.length; i++) {<br>      newObjects[i] = new NewObj();<br>      newObjects[i].s = names[i];<br>      newObjects[i].sum = 0;<br>      if (names[i].equals("JOHN")) {<br>        newObjects[i].sum = 10000000;<br>      } else {<br>        for (int j = 0; j &lt; names[i].length(); j++) {<br>          newObjects[i].sum += names[i].charAt(j) - 'A' + 1;<br>        }<br>      }<br>    }<br><br>    java.util.Arrays.sort(newObjects);<br>    String[] result = new String[names.length];<br>    for (int i = 0; i &lt; names.length; i++) {<br>      result[i] = newObjects[i].s;<br>    }<br>    return result;<br>  }<br>}<br></td>