            Public Class TheBestName<br>  Private Structure NN<br>    Dim Name As String<br>    Dim Points As Integer<br>  End Structure<br>  <br>  Public Function sort(names As String()) As String()<br>    dim i as Integer<br>    dim A() as NN<br>    redim A(ubound(names))<br>    for i=0 to ubound(names)<br>      if names(i)="JOHN" then<br>        A(i).Points=11110<br>      else <br>        A(i).Points=CalcPoints(names(i))<br>      end if<br>      A(i).Name=names(i)<br>    next<br>    dim Found As boolean=true<br>    while Found<br>      Found=False<br>      for i=1 to ubound(A)<br>        if A(i).points&gt;A(i-1).Points OrElse (A(i).points=A(i-1).Points And A(i).Name&lt;A(i-1).Name) then<br>          Dim Z As NN<br>          Z=A(i)<br>          A(i)=A(i-1)<br>          A(i-1)=Z<br>          Found=True<br>        End if<br>      next<br>    End While<br>    Dim B As String()<br>    redim B(ubound(A))<br>    For i=0 To Ubound(A)<br>      B(i)=A(i).Name<br>    Next<br>    return B<br>  End Function<br>  <br>  Private Function CalcPoints(S as string) As Integer<br>    dim i as integer<br>    dim Alfa As string="ABCDEFGHIJKLMNOPQRSTUVWXYZ"<br>    dim Sum As Integer<br>    for i=1 to S.length<br>      Sum+=Instr(Alfa, Mid(S,i,1))<br>    next<br>    return Sum<br>  End Function<br>End Class<br></td>