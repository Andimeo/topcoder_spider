            using System;<br>using System.Collections.Generic;<br><br>public class TheHomework {<br>  public int transform(int[] first, int[] second) {<br>    int matching = 0, extraA = 0, extraB = 0;<br>    for (int i = 0; i &lt; first.Length; i++)<br>    {<br>      int ix = Array.IndexOf(second, first[i]);<br>      if (ix &lt; 0)<br>        extraA++;<br>      else<br>      {<br>        matching++;<br>        second[ix] = -1;<br>      }<br>    }<br>    for (int i = 0; i &lt; second.Length; i++)<br>    {<br>      if (second[i] &gt;= 0)<br>        extraB++;<br>    }<br><br>    int best = int.MaxValue;<br>    for(int adds=0;adds&lt;=100;adds++)<br>    {<br>      int curSize = first.Length, ops = 0, left = adds;<br>      while (left &gt; 0)<br>      {<br>        int add = Math.Min(left, curSize);<br>        left -= add;<br>        curSize += add;<br>        ops++;<br>      }<br><br>      int remainingA = extraA;<br>      left = extraB - Math.Min(adds, extraB);<br>      if (left &gt; 0 &amp;&amp; curSize == 1)<br>        continue;<br>      while (left &gt; 0)<br>      {<br>        int changed = Math.Min(left, curSize/2);<br>        left -= changed;<br>        ops++;<br>        remainingA -= changed;<br>      }<br>      left = remainingA + Math.Max(0, adds - extraB);<br>      if (left &lt; 0)<br>        continue;<br>      while (left &gt; 0)<br>      {<br>        int deletes = Math.Min(curSize/2, left);<br>        left -= deletes;<br>        curSize -= deletes;<br>        ops++;<br>      }<br>      best = Math.Min(best, ops);<br>    }<br>    return best;<br>  }<br><br>}<br><br><br><br><br>// Powered by FileEdit<br></td>