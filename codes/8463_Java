            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class TriviaGame<br>{<br>  int[][] dp;<br> <br>    private static final int M = -1000000000;<br> <br>    public int maximumScore(int[] p, int t, int[] b) {<br> <br>        dp = new int[p.length][t + 1];<br>        for (int i = 0; i &lt; dp.length; i++) {<br>            Arrays.fill(dp[i], M);<br>        }<br>        dp[0][0] = -p[0];<br>        dp[0][1] = p[0];<br>        if (t == 1) {<br>            dp[0][0] = p[0] + b[0];<br>            dp[0][1] = M;<br>        }<br>        for (int i = 1; i &lt; p.length; i++) {<br>            for (int j = 0; j &lt; t; j++) {<br>                if (dp[i - 1][j] != M) {<br>                    dp[i][j] = Math.max(dp[i - 1][j] - p[i], dp[i][j]);<br>                    dp[i][j + 1] = Math.max(dp[i-1][j] + p[i], dp[i][j+1]);<br>                    if (j + 1 == t) {<br>                        dp[i][0] = Math.max(dp[i][0], dp[i][j + 1] + b[i]);<br>                        dp[i][j + 1] = M;<br>                    }<br>                }<br>            }<br>        }<br>        int ans = dp[p.length - 1][0];<br>        for (int i = 1; i &lt; t; i++) {<br>            ans = Math.max(ans, dp[p.length - 1][i]);<br>        }<br> <br>        return ans;<br> <br>    }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>