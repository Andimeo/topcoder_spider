            using System;<br>using System.Collections;<br><br>public class StreetWalking <br>{<br>  public long minTime(int X, int Y, int walkTime, int sneakTime) <br>  {<br>    long walkwalk = walkTime + walkTime;<br>    long sneakseank = sneakTime + sneakTime;<br>    if (walkwalk &lt; sneakTime)<br>    {<br>      long wt = walkTime;<br>      return (X + Y) * wt;<br>    }<br>    else<br>    {<br>      long diag = Math.Min(X, Y);<br>      long time = sneakTime * diag;<br>      long left = Math.Max(X, Y) - Math.Min(X, Y);<br>      long halftime = left / 2;<br>      if (sneakseank &lt; walkwalk)<br>      {<br>        time += halftime * sneakseank;<br>        time += walkTime * (left % 2);<br>      }<br>      else<br>      {<br>        time += left * walkTime;<br>      }<br>      return time;<br>    }<br>  }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>