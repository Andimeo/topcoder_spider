            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class OlympicCandles {<br>    public int numberOfNights(int[] candles) {<br><br>        int ret = 1;<br>        int N = candles.Length;<br>        Array.Sort(candles);<br>        while (N &gt;= ret &amp;&amp; candles[N - ret] &gt; 0) {<br>            for (int i = N-ret; i &lt; N; i++) {<br>                candles[i]--;<br>            }<br>            Array.Sort(candles);<br>            ret++;<br>        }<br>        return ret - 1;<br><br>    }<br>}<br></td>