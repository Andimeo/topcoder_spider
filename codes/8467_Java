            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class OlympicCandles<br>{<br>  public int numberOfNights(int[] candles)<br>  {<br>    int res = 0;<br>    int n = candles.length;<br>    while (true)<br>    {<br>      Arrays.sort(candles);<br>      if (res &gt;= n) break;<br>      if (candles[n - res - 1] == 0) break;<br>      for (int i = n - 1; i &gt;= n - res - 1; i--)<br>      {<br>        candles[i]--;<br>      }<br>      res++;<br>    }<br>    return res;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>