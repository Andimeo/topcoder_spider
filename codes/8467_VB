            Public Class OlympicCandles<br>    Public Function numberOfNights(ByVal candles As Integer()) As Integer<br>        Return moreNights(candles, 1)<br><br>    End Function<br>    Function moreNights(ByVal candles As Integer(), ByVal n As Integer) As Integer<br>        Dim i As Integer, l As Integer<br>        Array.Sort(candles)<br>        l = candles.Length - 1<br>        'Array.Reverse(candles)<br>        If n &gt; l + 1 Then<br>            moreNights = 0<br>            Exit Function<br>        End If<br>        For i = (l - n + 1) To l<br>            If candles(i) &lt;&gt; 0 Then<br>                candles(i) = candles(i) - 1<br>            Else<br>                moreNights = 0<br>                Exit Function<br>            End If<br>        Next<br>        Return 1 + moreNights(candles, n + 1)<br>    End Function<br>End Class<br></td>