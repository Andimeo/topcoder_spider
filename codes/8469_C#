            using System;<br>using System.Collections.Generic;<br>using System.Text;<br><br><br>public class SquareDigitNumbers<br>{<br>   <br><br><br>    public int getNumber(int n)<br>    {<br>        int counter = -1;<br>        int currentNumber = 0;<br>        while (true)<br>        {<br>           <br>            if (checkIfValid(currentNumber))<br>            {<br>                counter++;<br>            }<br><br>            if (counter == n)<br>            {<br>                break;<br>            }<br>            currentNumber = currentNumber + 1;<br>        }<br><br>        return currentNumber;<br>    }<br><br><br>    private bool checkIfValid(int currentNumber)<br>    {<br>        int remainder = 0;<br>        while (currentNumber &gt; 0)<br>        {<br>            remainder = currentNumber % 10;<br><br>            if (remainder != 0 &amp;&amp; remainder != 1 &amp;&amp; remainder != 4 &amp;&amp; remainder != 9)<br>                return false;<br>            currentNumber = currentNumber / 10;<br>        }<br><br>        return true;<br>    }<br>}<br></td>