            import java.util.*;<br>import static java.lang.Math.*;<br>import static java.util.Arrays.*;<br> <br>public class LargestGap {<br> <br>  public int getLargest(String[] board) {<br>    System.out.println("==========================================");<br>    int res = 0;<br>    <br>    StringBuilder sb = new StringBuilder();<br>    for(String s: board)<br>      sb.append(s);<br>    <br>    String s = sb.toString();<br>    int l = s.length();<br>    <br>    int[] poc = new int[l];<br>    int[] duz = new int[l];<br>    char[] vr = new char[l];<br>    int j = 0;<br>    for(int i = 0;i&lt;l;i++)<br>      if (i==0 || (s.charAt(i)!=s.charAt(i-1))) {<br>        poc[j] = i;<br>        duz[j] = 1;<br>        vr[j] = s.charAt(i);<br>        j++;<br>      }<br>      else {<br>        duz[j-1]++;<br>      }<br>    <br>    if (s.charAt(0)==s.charAt(l-1))<br>    {<br>      duz[0]+=duz[j-1];<br>      j--;<br>    }<br>    <br>    int dodaj = -1;<br>    int izb1 = -1,izb2 = -1;<br>    <br>    for(int i = 0;i&lt;j;i++)<br>      if (vr[i]=='X')<br>      {<br>        int t1 = duz[(i-1+j)%j];<br>        int t2 = duz[(i+1)%j];<br>        System.out.println(i + "\t" + t1 + " " + t2);<br>        if ((t1+t2 &gt; dodaj) || (t1+t2==dodaj &amp;&amp; Math.max(t1, t2)&lt;Math.max(izb1, izb2)))<br>        {<br>          dodaj = t1+t2;<br>          izb1 = t1;<br>          izb2 = t2;<br>          res = poc[i];<br>        }<br>      }<br> <br>    //System.out.println(toString(res));<br>    return res;<br>  }<br> <br>}<br></td>