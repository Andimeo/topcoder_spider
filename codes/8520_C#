            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class VoteRigging {<br>    public int minimumVotes(int[] votes) <br>    {<br>        List&lt;int&gt; v = new List&lt;int&gt;();<br>        int x = votes[0];<br>        for (int i = 1; i &lt; votes.Length; ++i)<br>            v.Add(votes[i]);<br>        int res = 0;<br>        if (v.Count == 0)<br>            return res;<br>        v.Sort();<br>        v.Reverse();<br><br>        while (x &lt;= v[0])<br>        {<br>            res++;<br>            x++;<br>            v[0]--;<br>            v.Sort();<br>            v.Reverse();<br>        }<br>        return res;<br><br>    }<br><br>}<br><br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>