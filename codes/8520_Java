            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class VoteRigging<br>{<br>  public int minimumVotes(int[] a)<br>  {<br>    int n = a.length;<br>    if (n == 1) return 0;<br>    int[] b = new int[n-1];<br>    for (int i = 1; i &lt; n; i++) b[i-1] = a[i];<br>    Arrays.sort(b);<br>    int g = a[0];<br>    int ans = 0;<br>    while (g &lt;= b[n-2]) {<br>      ans++;<br>      g++;<br>      b[n-2]--;<br>      Arrays.sort(b);<br>    }<br>    return ans;<br>  }<br>  <br>  <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>