            using System;<br>using System.Text;<br>using System.Text.RegularExpressions;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class GuessingNextElement {<br>    public int guess(int[] A) {<br>        int q = A[1] - A[0], p = A[0];<br>        if (A[2] == p + 2 * q)<br>        {<br>            return A[A.Length - 1] + q;<br>        }<br>        else<br>        {<br>            q = A[1] / A[0];<br>            return A[A.Length - 1] * q;<br>        }<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>