            //Written by Sergey Melnikov<br>import java.util.*;<br>import java.math.*;<br>public class UnfixedArrangements {<br>  BigInteger rc(int n,int k) {<br>    <br>    BigInteger a = BigInteger.ONE;<br>    BigInteger b = BigInteger.ONE;<br>    for (int i = 2; i &lt;= n; i++) {<br>      a = a.multiply(BigInteger.valueOf(i));<br>    }<br>    for (int i = 2; i &lt;= k; i++) {<br>      b = b.multiply(BigInteger.valueOf(i));<br>    }<br>    for (int i = 2; i &lt;= n-k; i++) {<br>      b = b.multiply(BigInteger.valueOf(i));<br>    }<br>    return a.divide(b);<br>    <br>  }<br>  <br>  BigInteger c(int n,int k) {<br>    BigInteger a = BigInteger.ONE;<br>    BigInteger b = BigInteger.ONE;<br>    for (int i = 2; i &lt;= n; i++) {<br>      a = a.multiply(BigInteger.valueOf(i));<br>    }<br>    for (int i = 2; i &lt;= k; i++) {<br>      b = b.multiply(BigInteger.valueOf(i));<br>    }<br>    for (int i = 2; i &lt;= n-k; i++) {<br>      b = b.multiply(BigInteger.valueOf(i));<br>    }<br>    return a.divide(b).multiply(fac(k));<br>    <br>  }<br>  BigInteger fac(int n) {<br>    BigInteger a = BigInteger.ONE;<br>    for (int i = 2; i &lt;= n; i++) {<br>      a = a.multiply(BigInteger.valueOf(i));<br>    }<br>    return a;<br>  }<br>    public long count(int n, int k) {<br>      BigInteger a = BigInteger.ZERO;<br>      for (int i = 0; i &lt;= k; i++) {<br>          if (i%2==0) {<br>            a = a.add(rc(k,i).multiply(c(n-i,k-i)));<br>          }else {<br>            a = a.subtract(rc(k,i).multiply(c(n-i,k-i)));<br>          }<br>    }<br>        long res = a.longValue();<br>        return res;<br>    }<br> <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>