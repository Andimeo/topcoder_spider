            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class MonotoneSequence<br>{<br>  public int longestMonotoneSequence(int[] seq)<br>  {<br>        int max = 1;<br>        int cur = 1;<br>        for (int i = 1; i &lt; seq.Length; ++i)<br>        {<br>            if (seq[i] &gt; seq[i - 1])<br>                cur++;<br>            else<br>                cur = 1;<br>            max = Math.Max(cur, max);<br>        }<br>         cur = 1;<br>        for (int i = 1; i &lt; seq.Length; ++i)<br>        {<br>            if (seq[i] &lt; seq[i - 1])<br>                cur++;<br>            else<br>                cur = 1;<br>            max = Math.Max(cur, max);<br>        }<br>        return max;<br>  }<br>  }<br></td>