            #include&lt;iostream&gt;<br>#include&lt;sstream&gt;<br>#include&lt;cmath&gt;<br>#include&lt;memory.h&gt;<br>#include&lt;string&gt;<br>#include&lt;vector&gt;<br>using namespace std;<br><br>class MonotoneSequence<br>{<br>      <br>      public:<br>             int longestMonotoneSequence(vector &lt;int&gt; seq)<br>             {<br>                 int maxl= 1;<br>                 int l = 1;<br>                 int last;<br>                 int j ;<br>                 for(int i = 0 ; i &lt; seq.size() ; i ++)<br>                 {<br>                         l = 1;<br>                         <br>                         last = seq[i];<br>                         for( j = i + 1 ; j &lt; seq.size() ; j++)<br>                         {<br>                                 if(last&gt;seq[j]) l++;<br>                                 else break;<br>                                 last = seq[j];<br>                         }<br>                         if(l &gt; maxl) maxl = l;<br>                         <br>                         l = 1;<br>                         last = seq[i];<br>                         for( j = i + 1 ; j &lt; seq.size() ; j++)<br>                         {<br>                                 if(last&lt;seq[j]) l++;<br>                                 else break;<br>                                 last = seq[j];<br>                         }<br>                         if(l &gt; maxl) maxl = l;<br>                         <br>                         }<br>                         return maxl;<br>                 }<br>                 <br>             <br>};<br></td>