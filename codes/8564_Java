            import java.util.*;<br>public class MonotoneSequence {<br>    public int longestMonotoneSequence(int[] seq) {<br>        int res = 0;<br>        int len = 1;<br>        for (int i = 0; i &lt; seq.length; i++) {<br>            int j = i + 1;<br>            while (j &lt; seq.length &amp;&amp; seq[j] &gt; seq[j- 1])<br>                j++;<br>            len = Math.max(len, j - i);<br>            j = i + 1;<br>            while (j &lt; seq.length &amp;&amp; seq[j] &lt; seq[j- 1])<br>                j++;<br>            len = Math.max(len, j - i);<br>        }<br>        return len;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>