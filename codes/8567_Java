            public class TheLargestLuckyNumber {<br><br>  /**<br>   * @param args<br>   */<br>  public static void main(String[] args) {<br>    // TODO Auto-generated method stub<br><br>  }<br>  public static int find(int n){<br>    int re=4;<br>    for(int i=4;i&lt;=n;i++)<br>    {<br>      String each=String.valueOf(i);<br>      boolean flag=true;<br>      for(int j=0;j&lt;each.length();j++)<br>        if(each.charAt(j)!='4'&amp;&amp;each.charAt(j)!='7'){<br>          flag=false;<br>          break;<br>        }<br>      if(flag) re=i;<br>    }<br>    return re;<br>  }<br>}<br></td>