            #include&lt;iostream&gt;<br>#include&lt;sstream&gt;<br>#include&lt;vector&gt;<br>#include&lt;string&gt;<br>#include&lt;map&gt;<br>#include&lt;set&gt;<br>#include&lt;list&gt;<br>#include&lt;deque&gt;<br>#include&lt;cstdio&gt;<br>#include&lt;cmath&gt;<br>#include&lt;algorithm&gt;<br><br>using namespace std;<br><br>long long T[10000];<br>int cnt  = 0,len;<br>int c[2000000];<br><br>class TheSumOfLuckyNumbers<br>{ <br>public: <br>  long long trans(int p)<br>  {<br>    long long ret=0;<br>        string s;<br>        if(p==0)s="4";<br>        while(p)<br>        {<br>          if(p&amp;1)s="7"+s;else s="4"+s;//s=s+(p&amp;1)?"0":"1";<br>          p/=2;<br>        }<br>        while(s.length()&lt;len)s="4"+s;<br>        stringstream sin(s);<br>        sin&gt;&gt;ret;<br>        return ret;<br>      }<br>      void doit() <br>      {<br>        cnt=0;<br>        for(len = 1; len&lt;=6;len++)<br>        {<br>          for(int i=0;i&lt;(1&lt;&lt;len);i++)<br>          {<br>            long long t = trans(i);<br>            T[cnt++] = t;<br>          }<br>        }<br>        sort(T,T+cnt);<br>      } <br>  vector &lt;int&gt; sum(int n) <br>  {<br>    memset(c,-1,sizeof(c));<br>    c[0]=0;<br>    doit();<br>    for(int i=cnt-1;i&gt;=0;i--)<br>    {<br>      for(int j=0;j+T[i]&lt;=n;j++)<br>        if(c[j]!=-1&amp;&amp;(c[j+T[i]]==-1||c[j+T[i]]&gt;c[j]+1))<br>        {<br>          c[j+T[i]]=c[j]+1;<br>        }<br>    }<br>    vector&lt;int&gt; ans;<br>    if(c[n]==-1)return ans;<br>    while(n)<br>    {<br>      for(int i=0;i&lt;cnt;i++)<br>        if(n-T[i]&gt;=0&amp;&amp;c[n-T[i]]+1==c[n])<br>        {<br>          ans.push_back(T[i]);<br>          n-=T[i];<br>          break;<br>        }<br>    }<br>    return ans;<br>  } <br>  <br> <br>}; <br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>