            using System;<br>using System.Collections.Generic;<br><br>public class NextNumber {<br>    public int getNextNumber(int N) {<br>        List&lt;int&gt; digits = new List&lt;int&gt;();<br>        while (N &gt; 0)<br>        {<br>            digits.Add(N % 2);<br>            N /= 2;<br>        }<br>        digits.Add(0);<br>        int num = 0;<br>        for (int i = 0; i &lt; digits.Count - 1; ++i)<br>        {<br>            if (digits[i] == 1 &amp;&amp; digits[i + 1] == 0)<br>            {<br>                digits[i] = 0;<br>                digits[i + 1] = 1;<br>                for (int j = 0; j &lt; num; ++j)<br>                    digits[j] = 1;<br>                for (int j = num; j &lt; i; ++j)<br>                    digits[j] = 0;<br>                break;<br>            }<br>            num += digits[i];<br>        }<br>        int res = 0;<br>        for (int i = digits.Count - 1; i &gt;= 0; --i)<br>        {<br>            res = res * 2 + digits[i];<br>        }<br>        return res;<br>    }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>