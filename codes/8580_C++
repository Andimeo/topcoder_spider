<td class="problemText" colspan="8" valign="middle" align="left">
            #include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br><br>using namespace std;<br><br>class TriangularSubsequence {<br>  public:<br>  <br>  int data[50], n;<br>  <br>  int longest(vector &lt;int&gt; a) {<br>    n = a.size();<br>    for (int i =0 ; i &lt; n; i ++)<br>      data[i] = a[i];<br>    sort(data, data + n);<br>    <br>    int re = 0;<br>    for (int i = 0; i &lt; n; i ++)<br>      for (int j = i; j &lt; n; j ++)<br>        if (i + 1 &gt;= j || data[i] + data[i + 1] &gt; data[j])<br>          re &gt;?= j - i + 1;<br>    return re;<br>    }<br>  };<br></td>