            import java.util.*;<br>public class RoughStrings<br>{<br>  public int minRoughness(String s, int limit)<br>  {<br>    int[] count = new int[26];<br>    int n = s.length();<br>    for(int i=0;i&lt;n;i++)<br>      count[s.charAt(i)-'a']++;<br>    <br>    int ret = Integer.MAX_VALUE;<br>    for(int min=0;min&lt;=n;min++)<br>    {<br>      for(int max=min;max&lt;=n;max++)<br>      {<br>        int req = 0;<br>        for(int i=0;i&lt;26;i++)<br>          if(count[i]&lt;min)<br>            req += count[i];<br>          else if(count[i]&gt;max)<br>            req += count[i]-max;<br>        if(req&lt;=limit)<br>          ret = Math.min(ret, max-min);<br>      }<br>    }<br>    return ret;<br>  }<br>}<br></td>