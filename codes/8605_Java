            //Be the MAN<br>//Challenge it!<br><br>import java.util.Arrays;<br>import java.util.Comparator;<br><br>public class PreciousStones {<br>    public double value(int[] silver, int[] gold) {<br>        int n = silver.length;<br>        final double[] t = new double[n];<br>        for (int i = 0; i &lt; n; i++) {<br>            if (gold[i] == 0) {<br>                t[i] = 1e100;<br>            } else {<br>                t[i] = silver[i] * 1.0 / gold[i];<br>            }<br>        }<br>        Integer[] p = new Integer[n];<br>        for (int i = 0; i &lt; n; i++) p[i] = i;<br>        Arrays.sort(p, new Comparator&lt;Integer&gt;() {<br>            public int compare(Integer o1, Integer o2) {<br>                return Double.compare(t[o2], t[o1]);<br>            }<br>        });<br>        double g = 0;<br>        double s = 0;<br>        for (int i = 0; i &lt; n; i++) g += gold[i];<br>        int i = 0;<br>        while (s + silver[p[i]] &lt; g - gold[p[i]]) {<br>            s += silver[p[i]];<br>            g -= gold[p[i]];<br>            i++;<br>        }<br>        if (silver[p[i]] + gold[p[i]] == 0) {<br>            return s;<br>        }<br>        double x = (g - s) / (silver[p[i]] + gold[p[i]]);<br>        return s + x * silver[p[i]];<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>