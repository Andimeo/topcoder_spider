            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class BusAwaiting<br>{<br>    public int waitingTime(string[] buses, int arrivalTime)<br>    {<br>        int min = int.MaxValue;<br>        for (int i = 0; i &lt; buses.Length; i++)<br>        {<br>            string[] p = buses[i].Split();<br>            int start = int.Parse(p[0]);<br>            int interval = int.Parse(p[1]);<br>            int count = int.Parse(p[2]);<br>            for (int j = 0; j &lt; count; j++)<br>            {<br>                int act = j * interval + start;<br>                if (act &gt;= arrivalTime)<br>                    min = Math.Min(min, act - arrivalTime);<br>            }<br>        }<br>        if (min == int.MaxValue) return -1;<br>        return min;<br>    }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>