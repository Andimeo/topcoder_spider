            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br>#include &lt;queue&gt;<br>#include &lt;stdlib.h&gt;<br> <br>using namespace std;<br> <br>#define REP(i,n) for(int i=0,n_=(n);i&lt;n_;i++)<br>#define FORD(i,a,b) for(int i=(a);i&gt;=(b);i--)<br>#define FOR(i,a,b) for (int i=a,b_=b;i&lt;=(b);i++)<br>#define ALL(a) a.begin(),a.end()<br>#define SZ(a) (int)(a).size()<br>#define SORT(a) sort(ALL(a))<br>#define INF 1073741823<br>#define DEB(x) cout&lt;&lt;#x&lt;&lt;":"&lt;&lt;x&lt;&lt;"\n"<br>#define PB(b) push_back(b)<br> <br>class BusAwaiting {<br>public:<br>  int waitingTime(vector &lt;string&gt;, int);<br>};<br> <br>int BusAwaiting::waitingTime(vector &lt;string&gt; buses, int arrival) {<br>  int res = -1, ini, inter, count, hora;<br>    vector &lt;int&gt; times;<br>  string bus, info;<br>  stringstream thing;<br> <br>  REP(j, SZ(buses))<br>  {<br>        thing.clear();<br>    bus = buses[j];<br>    thing &lt;&lt; bus;<br>        thing &gt;&gt; info;<br>        ini = atoi(info.c_str());<br>        thing &gt;&gt; info;<br>        inter = atoi(info.c_str());<br>        thing &gt;&gt; info;<br>        count = atoi(info.c_str());<br> <br>        REP(i, count)<br>        {<br>            hora = ini + (i * inter);<br>            times.PB(hora);<br>        }<br>  }<br> <br>    sort(times.begin(), times.end());<br> <br>    REP(i, SZ(times))<br>    {<br>        if(arrival &lt;= times[i])<br>        {<br>            res = times[i] - arrival;<br>            return res;<br>        }<br>    }<br> <br> <br>  return res;<br>}<br> <br> <br> <br>//Powered by [KawigiEdit] 2.0!<br></td>