            import java.io.*;<br>import java.math.*;<br>import java.util.*;<br>import static java.lang.Math.*;<br>import static java.lang.Integer.*;<br><br>public class BusAwaiting {<br>  public int waitingTime(String[] buses, int arrivalTime) {<br>    int w=1000000000;<br>    for(int i=0;i&lt;buses.length;i++) {<br>      String a[]=buses[i].split(" ");<br>      int start=Integer.parseInt(a[0]);<br>      int interval=Integer.parseInt(a[1]);<br>      int count=Integer.parseInt(a[2]);<br>      for(int x=0;x&lt;count;x++) {<br>        int tid=start+interval*x;<br>        if(tid&gt;=arrivalTime) {<br>          w=min(w,tid-arrivalTime);<br>          break;<br>        }<br>      }<br>    }<br>    if(w==1000000000) return -1;<br>    else return w;<br>  }<br>}<br></td>