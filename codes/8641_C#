            using System;<br>using System.Collections.Generic;<br><br>public class DiscountCombination {<br>  public double minimumPrice(string[] discounts, int price) {<br>        List&lt;int&gt;[] l = new List&lt;int&gt;[4];<br>        for (int i = 0; i &lt; 4; ++i)<br>            l[i] = new List&lt;int&gt;();<br>        foreach (string x in discounts)<br>        {<br>            string[] p = x.Split(' ');<br>            int a = int.Parse(p[0]);<br>            int b = int.Parse(p[1]);<br>            l[b].Add(a);<br>        }<br>        for (int i = 1; i &lt; 4; ++i)<br>            l[i].Sort();<br>        double res = price;<br>        double v1 = 1;<br>        double s1 = 0;<br>        for (int n1 = 0; n1 &lt;= l[1].Count; ++n1)<br>        {<br>            double v2 = 1;<br>            double s2 = 0;<br>            for (int n2 = 0; n2 &lt;= l[2].Count; ++n2)<br>            {<br>                double v3 = 1;<br>                double s3 = 0;<br>                for (int n3 = 0; n3 &lt;= l[3].Count; ++n3)<br>                {<br>                    double cur = s1 + s2 + s3 + price * v1 * v2 * v3;<br>                    if (cur &lt; res)<br>                        res = cur;<br>                    v3 *= 0.97;<br>                    if (n3 &lt; l[3].Count)<br>                        s3 += l[3][n3];<br>                }<br>                v2 *= 0.98;<br>                if (n2 &lt; l[2].Count)<br>                    s2 += l[2][n2];<br>            }<br>            v1 *= 0.99;<br>            if (n1 &lt; l[1].Count)<br>                s1 += l[1][n1];<br>        }<br>        return res;<br>  }<br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>