            #include&lt;cstdio&gt;<br>#include&lt;algorithm&gt;<br>#include&lt;iostream&gt;<br>#include&lt;sstream&gt;<br>#include&lt;string&gt;<br>#include&lt;vector&gt;<br>#include&lt;set&gt;<br>#include&lt;map&gt;<br>#include&lt;numeric&gt;<br>#include&lt;cmath&gt;<br>using namespace std;<br> <br>#define ALL(t) t.begin(),t.end()<br>#define FOR(i,n) for (int i=0; i&lt;(int)(n); i++)<br>typedef vector&lt;int&gt; vi;<br> <br>struct DiscountCombination {<br>  double minimumPrice(vector &lt;string&gt; discounts, int price) {<br>    vi t[4];<br>    FOR(i,discounts.size()) { int a,b; sscanf(discounts[i].c_str(),"%d %d",&amp;a,&amp;b); t[b].push_back(a); }<br>    double ans=price;<br>    FOR(i,4) sort(t[i].begin(),t[i].end());<br>    FOR(take1,t[1].size()+1) FOR(take2,t[2].size()+1) FOR(take3,t[3].size()+1) {<br>      int add=accumulate(t[1].begin(),t[1].begin()+take1,0)+accumulate(t[2].begin(),t[2].begin()+take2,0)+accumulate(t[3].begin(),t[3].begin()+take3,0);<br>      double mult=1;<br>      FOR(i,take1) mult*=0.99;<br>      FOR(i,take2) mult*=0.98;<br>      FOR(i,take3) mult*=0.97;<br>      ans&lt;?=add+mult*price;<br>    }<br>    return ans;<br>  }<br>};<br> <br>// Powered by PopsEdit<br></td>