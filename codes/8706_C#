            using System;<br><br>public class TwoStringMasks {<br>  public string shortestCommon(string s1, string s2) {<br>        for (int l1 = 0; l1 &lt;= 150; ++l1)<br>        {<br>            int l2 = s1.Length + l1 - s2.Length;<br>            if (l2 &lt; 0)<br>                continue;<br>            string p1 = "";<br>            foreach (char ch in s1)<br>                if (ch == '*')<br>                {<br>                    for (int i = 0; i &lt; l1; ++i)<br>                        p1 += '?';<br>                }<br>                else<br>                {<br>                    p1 += ch;<br>                }<br>            string p2 = "";<br>            foreach (char ch in s2)<br>                if (ch == '*')<br>                {<br>                    for (int i = 0; i &lt; l2; ++i)<br>                        p2 += '?';<br>                }<br>                else<br>                {<br>                    p2 += ch;<br>                }<br>            if (p1.Length != p2.Length)<br>                throw new Exception();<br>            string r = "";<br>            for (int i = 0; i &lt; p1.Length; ++i)<br>            {<br>                char c1 = p1[i];<br>                char c2 = p2[i];<br>                char ch;<br>                if (c1 == '?')<br>                    ch = c2;<br>                else if (c2 == '?')<br>                    ch = c1;<br>                else if (c1 == c2)<br>                    ch = c1;<br>                else<br>                {<br>                    r = null;<br>                    break;<br>                }<br>                r += ch;<br>            }<br>            if (r == null)<br>                continue;<br>            return r;<br>        }<br>        return "impossible";<br>  }<br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>