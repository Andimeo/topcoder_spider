            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class AverageCandyLifetime<br>{<br>  public double getAverage(int[] eatenCandies)<br>  {<br>    int []days = new int[]{31, 59, 90, 120, 151, 181, 212, 243, 273, 304, 334, 365};<br>    int candies = 0;<br>    double lifetime = 0;<br>    for(int i=0; i&lt;12; i++)<br>    {<br>      candies += eatenCandies[i];<br>      lifetime += eatenCandies[i] * days[i];<br>    }<br>    return lifetime / candies;<br>    <br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>