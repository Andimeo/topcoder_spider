            #include &lt;iostream&gt;<br>#include &lt;vector&gt;<br>using namespace std;<br><br>class AverageCandyLifetime<br>{<br>  public:<br>  double getAverage(vector&lt;int&gt; SP)<br>  {<br>    int a [] ={31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30 , 31};<br>    int a1[12];<br>    a1[0]=a[0];<br>    for(int i=1;i&lt;12;i++)<br>    {<br>      a1[i]=a[i]+a1[i-1];<br>    }<br>    int tot=0;<br>    int sum=0;<br>    for(int i=0;i&lt;12;i++){<br>      tot+=SP[i]*a1[i];<br>      sum+=SP[i];<br>    }<br>    return (tot*1.0)/sum;<br>  }<br><br>};<br></td>