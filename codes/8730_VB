<td class="problemText" colspan="8" valign="middle" align="left">
            Public Class VariableSpeedLimit<br>        Public Function journeyTime(ByVal journeyLength As Integer, ByVal speedLimit As Integer()) As Double<br>            Dim TimeCalc As Double = 0<br>            Dim TimeUnit As Integer = 0<br>            Do While journeyLength &gt; 0<br>                If TimeUnit &gt; UBound(speedLimit) Then<br>                    TimeUnit = 0<br>                End If<br>                If journeyLength &gt; speedLimit(TimeUnit) Then<br>                    journeyLength = journeyLength - speedLimit(TimeUnit)<br>                    TimeCalc = TimeCalc + 1<br>                Else<br>                    TimeCalc = TimeCalc + (journeyLength / speedLimit(TimeUnit))<br>                    journeyLength = 0<br>                End If<br>                TimeUnit = TimeUnit + 1<br><br>            Loop<br>            Return TimeCalc<br>        End Function<br>    End Class<br></td>