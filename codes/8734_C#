            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class MountainWalk <br>{<br>  public int cellsVisited(string[] areaMap, int heightDifference) <br>  {<br>        bool[,] visited = new bool[areaMap.Length, areaMap[0].Length];<br>        int i = 0;<br>        int j = 0;<br>        int ret = 1;<br>        while (true)<br>        {<br>            visited[i, j] = true;<br>            if (i + 1 &lt; areaMap.Length &amp;&amp; !visited[i + 1, j] &amp;&amp; Math.Abs(areaMap[i + 1][j] - '0' - areaMap[i][j] + '0') &lt;= heightDifference)<br>            {<br>                i = i + 1;<br>                ++ret;<br>            }<br>            else if (j - 1 &gt;= 0 &amp;&amp; !visited[i, j - 1] &amp;&amp; Math.Abs(areaMap[i][ j - 1] - '0' - areaMap[i][ j] + '0') &lt;= heightDifference)<br>            {<br>                j = j - 1;<br>                ++ret;<br>            }<br>            else if (i - 1 &gt;= 0 &amp;&amp; !visited[i - 1, j] &amp;&amp; Math.Abs(areaMap[i - 1][ j] - '0' - areaMap[i][ j] + '0') &lt;= heightDifference)<br>            {<br>                i = i - 1;<br>                ++ret;<br>            }<br>            else if (j + 1 &lt; areaMap[0].Length &amp;&amp; !visited[i, j + 1] &amp;&amp; Math.Abs(areaMap[i][ j + 1] - '0' - areaMap[i][ j] + '0') &lt;= heightDifference)<br>            {<br>                j = j + 1;<br>                ++ret;<br>            }<br>            else<br>            {<br>                return ret;<br>            }<br>        }<br> //(i+1, j), (i, j-1), (i-1, j), (i, j+1)<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [27-Jan-2008] [r1cs1 edition]<br>// Powered by CodeProcessor<br></td>