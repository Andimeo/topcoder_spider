            using System;<br>using System.Collections.Generic;<br>using System.Text;<br>using System.Collections;<br><br>    class <br>VerifyCreditCard<br>    {<br>        public string checkDigits(string cardNumber)<br>        {<br>            int sum=0;<br>            for (int i = 0; i &lt; cardNumber.Length; i++)<br>            {<br>                int t = (cardNumber[i] - '0');<br>                if (i % 2 == cardNumber.Length%2) t *= 2;<br>                while (t != 0) { sum += t % 10; t /= 10; }<br>            }<br>            if (sum % 10 == 0) return "VALID";<br>            else return "INVALID";<br>        }<br>    }<br></td>