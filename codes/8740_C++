            #include&lt;iostream&gt;<br>#include&lt;vector&gt;<br>#include&lt;string&gt;<br>#include&lt;map&gt;<br>#include&lt;stack&gt;<br>#include&lt;queue&gt;<br>#include&lt;cmath&gt;<br>#include&lt;sstream&gt;<br>#include&lt;algorithm&gt;<br>#include&lt;stdio.h&gt;<br>using namespace std;<br>class VerifyCreditCard<br>{<br> public:<br> int calsum(vector &lt;int&gt; v)<br> {<br>  int s=0;<br>  for(int i=0;i&lt;v.size();i++)<br>  {<br>   if(v[i]&lt;=9)<br>   s+=v[i];<br>   else<br>   {<br>    s+=v[i]%10;<br>    s+=v[i]/10;<br>    }<br>   }<br>  return s;<br>  } <br> string checkDigits(string s)<br> {<br>  vector &lt;int&gt; v(s.size()+1,0);<br>  for(int i=1;i&lt;=s.size();i++)<br>  v[i]=s[i-1]-'0';<br>  if(s.size()%2==0)<br>  {<br>   for(int i=1;i&lt;=s.size();i+=2)<br>   v[i]=v[i]*2;<br>   }<br>  else<br>  {<br>   for(int i=2;i&lt;=s.size();i+=2)<br>   v[i]=v[i]*2;<br>   }<br>  if(calsum(v)%10==0)<br>  return "VALID";<br>  return "INVALID";<br>  }<br> };<br></td>