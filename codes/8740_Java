            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br>import java.awt.geom.*;<br> <br>public class VerifyCreditCard {<br>  public String checkDigits(String cardNumber) {<br>    boolean b = ((cardNumber.length() % 2) != 0);<br>    int sum = 0;<br>    for(char c:cardNumber.toCharArray()) {<br>      int x = c - '0';<br>      if(b) {<br>        sum += x;<br>      } else {<br>        for(char d:String.valueOf(x * 2).toCharArray()) {<br>          sum += d - '0';<br>        }<br>      }<br>      b = !b;<br>    }<br>    if(sum % 10 == 0) {<br>      return "VALID";<br>    } else {<br>      return "INVALID";<br>    }<br>  }<br> <br>// {{{<br>// }}}<br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>