            using System;<br>using System.Text;<br><br>public class BreakingTheCode<br>{<br>    public string decodingEncoding(string code, string message)<br>    {<br>        StringBuilder s = new StringBuilder();<br>        if (message[0] &gt;= 'a' &amp;&amp; message[0] &lt;= 'z')<br>        {<br>            foreach (char c in message)<br>                s.Append((code.IndexOf(c) + 1).ToString("00"));<br>        }<br>        else<br>        {<br>            for (int i = 0; i &lt; message.Length; i += 2)<br>                s.Append(code[int.Parse(message.Substring(i, 2)) - 1]);<br>        }<br>        return s.ToString();<br>    }<br>}<br></td>