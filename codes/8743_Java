            public class BreakingTheCode {<br>  public String decodingEncoding (String code, String msg ) {<br>    String r = "";<br>    if(msg.charAt(0)&gt;='a'&amp;&amp;msg.charAt(0)&lt;='z') {<br>      for(char c : msg.toCharArray()) {<br>        int i = 1+code.indexOf(c);<br>        String x = i+"";<br>        if(x.length()==1) x="0"+x;<br>        r+=x;<br>      }<br>    } else {<br>      while(msg.length()&gt;0) {<br>        r+=code.charAt(Integer.parseInt(msg.substring(0,2))-1);<br>        msg=msg.substring(2);<br>      }<br>    }<br>    return r;<br>  }<br>}<br></td>