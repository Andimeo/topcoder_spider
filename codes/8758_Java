            import java.util.*;<br><br>public class AvoidingProduct<br>{<br><br>   public int[] getTriple(int[] a, int n)<br>   {<br>      int[] res = new int[3];<br>      int best = Integer.MAX_VALUE;<br><br>      boolean[] illegal = new boolean[1004];<br>      for (int i : a)<br>      {<br>         illegal[i] = true;<br>      }<br><br>      for (int i = 1; i &lt;= 1001; i++)<br>      {<br>         if (illegal[i])<br>         {<br>            continue;<br>         }<br>         for (int j = i; j &lt;= 1002; j++)<br>         {<br>            if (illegal[j])<br>            {<br>               continue;<br>            }<br>            for (int k = j; k &lt;= 1003; k++)<br>            {<br>               if (illegal[k])<br>               {<br>                  continue;<br>               }<br>               int x = Math.abs(i * j * k - n);<br>               if (x &lt; best)<br>               {<br>                  res = new int[]{i, j, k};<br>                  best = x;<br>               }<br>            }<br>         }<br>      }<br><br>      return res;<br>   }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>