            using System;<br><br>public class StrongPrimePower {<br>  public int[] baseAndExponent(string _n) {<br>        long n = long.Parse(_n);<br>        for (int exp = 2; exp &lt;= 70; ++exp)<br>        {<br>            double x = Math.Pow(n, 1.0 / exp);<br>            long a = Math.Max(2, (long)x - 1);<br>            for (long b = a; b &lt;= a + 2; ++b)<br>            {<br>                long z = n;<br>                int cnt = 0;<br>                while (z % b == 0)<br>                {<br>                    z /= b;<br>                    ++cnt;<br>                }<br>                if (cnt == exp &amp;&amp; z == 1)<br>                {<br>                    if (isPrime(b))<br>                    {<br>                        return new int[] { (int)b, exp };<br>                    }<br>                }<br>            }<br>        }<br>        return new int[0];<br>  }<br><br>    private bool isPrime(long b)<br>    {<br>        for (long i = 2; i * i &lt;= b; ++i)<br>            if (b % i == 0)<br>                return false;<br>        return true;<br>    }<br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>