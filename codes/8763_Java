            import java.io.*;<br>import java.math.*;<br>import java.util.*;<br>import static java.lang.Math.*;<br>import static java.lang.Integer.*;<br><br>public class StrongPrimePower {<br>  public int[] baseAndExponent(String s) {<br>    long n=Long.parseLong(s);<br>    for(int i=100;i&gt;=2;i--) {<br>      long res=(long)(1e-7+pow(n,1.0/i));<br>      if(!isprime(res)) continue;<br>      long p=1;<br>      for(int j=0;j&lt;i;j++) p*=res;<br>      if(p==n) {<br>        return new int[]{(int)res,i};<br>      }<br>    }<br>    return new int[0];<br>  }<br>  boolean isprime(long x) {<br>    for(int i=2;i*i&lt;=x;i++) if(x%i==0) return false;<br>    return true;<br>  }<br>}<br></td>