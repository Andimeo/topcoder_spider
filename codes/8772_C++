            // SRM 414 -- RUNNING TO THE STRAIGHT!!<br>#include&lt;vector&gt;<br>#include&lt;string&gt;<br>#include&lt;algorithm&gt;<br>#include&lt;cmath&gt;<br>#include&lt;utility&gt;<br>#include&lt;set&gt;<br>#include&lt;queue&gt;<br>#include&lt;map&gt;<br>#include&lt;cstdlib&gt;<br>#include&lt;cstdio&gt;<br>#include&lt;cstring&gt;<br>#include&lt;iostream&gt;<br>#include&lt;sstream&gt;<br>using namespace std;<br><br>#define REP(i,a,b) for(i=a;i&lt;b;i++)<br>#define rep(i,n) REP(i,0,n)<br><br>class StringInterspersal {<br>public:<br>string minimum(vector &lt;string&gt; w) {<br>  int i,j,k;<br>  string res;<br><br>  rep(i,w.size()) w[i] += 'Z'+1;<br><br>  while(w.size()){<br>    sort(w.begin(),w.end());<br>    res += w[0][0];<br>    w[0].erase(w[0].begin());<br>    if(w[0].size()==1) w.erase(w.begin());<br>  }<br><br>  return res;<br>}<br><br><br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>