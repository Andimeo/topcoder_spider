            #line 2 "SolidArea.cpp"<br><br>#include &lt;iostream&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;map&gt;<br>#include &lt;cmath&gt;<br><br>using namespace std;<br><br>struct Point3D { int x,y,z; };<br><br>class SolidArea {<br>  public:<br>    <br>  int calcbase(vector&lt;int&gt; x, vector&lt;int&gt; y)<br>  {<br>    int sum=0;<br>    for(int i=0;i&lt;x.size();i++) {<br>      int j=(i+1)%x.size();<br>      sum+=x[i]*y[j]-x[j]*y[i];<br>    }<br>    return abs(sum);<br>  }<br>  <br>  double dist(Point3D a, Point3D b)<br>  {<br>    int dx=a.x-b.x,dy=a.y-b.y,dz=a.z-b.z;<br>    return sqrt(double(dx*dx+dy*dy+dz*dz));<br>  }<br>  <br>  double triarea(Point3D a, Point3D b, Point3D c)<br>  {<br>    double s1=dist(a,b),s2=dist(b,c),s3=dist(a,c);<br>    double p=(s1+s2+s3)/2;<br>    return sqrt(p*(p-s1)*(p-s2)*(p-s3));<br>  }<br>  <br>  int totalArea(vector &lt;int&gt; x1, vector &lt;int&gt; y1, int factor, int shift) {<br>    int n=x1.size();    <br>    vector&lt;int&gt; x2(x1),y2(y1);<br>    for(int i=0;i&lt;n;i++) {<br>      x2[i]*=factor;<br>      y2[i]*=factor;<br>    }<br>    double area=(calcbase(x1,y1)+calcbase(x2,y2))/2.0;<br>    for(int i=0;i&lt;n;i++) {<br>      Point3D a,b,c,d;<br>      int j=(i+1)%n;<br>      a.x=x1[i]; a.y=y1[i]; a.z=0;<br>      b.x=x1[j]; b.y=y1[j]; b.z=0;<br>      c.x=x2[i]; c.y=y2[i]; c.z=shift;<br>      d.x=x2[j]; d.y=y2[j]; d.z=shift;<br>      //printf("%0.2lf\n",triarea(a,b,c)+triarea(b,c,d));<br>      area+=triarea(a,b,c)+triarea(b,c,d);<br>    }<br>    return int(area+1e-5);<br>  }<br>};<br><br><br>// Powered by FileEdit<br></td>