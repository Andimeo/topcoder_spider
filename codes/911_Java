            import java.util.*;<br>public class SolidArea {<br>  public int totalArea(int[] xs, int[] ys, int factor, int shift) {<br>    double basearea = 0;<br>    for (int i=0; i&lt;xs.length; i++) {<br>      int j=i+1;<br>      if (j==xs.length) j=0;<br>      basearea+=xs[i]*ys[j]-xs[j]*ys[i];<br>    }<br>    basearea=Math.abs(basearea)/2;<br>    double toparea = basearea*factor*factor;<br>    System.out.println(""+basearea+" "+toparea);<br>    <br>    double sideareas = 0;<br>    for (int i=0; i&lt;xs.length; i++) {<br>      int j=i+1;<br>      if (j==xs.length) j=0;<br>      <br>      double baselen = Math.sqrt( (xs[i]-xs[j])*(xs[i]-xs[j]) + (ys[i]-ys[j])*(ys[i]-ys[j]) );<br>      double toplen = baselen*factor;<br>      <br>      double linezdist = java.awt.geom.Line2D.ptLineDist(xs[i],ys[i],xs[j],ys[j],0,0);<br>      <br>      double hshift = (factor-1)*linezdist;<br>      <br>      double height = Math.sqrt( shift*shift + hshift*hshift );<br>      <br>      double area = (baselen+toplen)*height/2; <br>      System.out.println(area);<br>      sideareas += area;<br>    }<br>    <br>    return (int)(basearea+toparea+sideareas);<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>