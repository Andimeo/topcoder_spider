            #include &lt;iostream&gt;<br>#include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;cmath&gt;<br>#include &lt;queue&gt;<br>using namespace std;<br>typedef vector&lt;int&gt; VI;  typedef vector&lt;vector&lt;int&gt; &gt; VVI;<br>typedef vector&lt;string&gt; VS;  typedef vector&lt;vector&lt;string&gt; &gt; VVS;<br>typedef signed long long i64;  typedef unsigned long long u64;<br><br>class GameOfLife {<br>public:<br>int alive(vector &lt;string&gt; a, string b, int c) {<br>  int i, j, k, x, y, z, n, dx, dy;<br>  int ret;<br><br>  for( n = 0; n &lt; c; n++ ) {<br>    VS a2(a.size(), string(a[0].size(), '.'));<br>    for( x = 0; x &lt; a[0].size(); x++ )<br>    for( y = 0; y &lt; a.size(); y++ ) {<br>      z = 0;<br>      for( dx = -1; dx &lt;= 1; dx++ )<br>      for( dy = -1; dy &lt;= 1; dy++ ) if( dx || dy )<br>        z += (a[(y+dy+a.size())%a.size()]<br>             [(x+dx+a[0].size())%a[0].size()] == 'X');<br>      if( b[z] == 'D' ) a2[y][x] = '.';<br>      else if( b[z] == 'B' ) a2[y][x] = 'X';<br>      else if( b[z] == 'S' ) a2[y][x] = a[y][x];<br>    }<br>    a = a2;<br>  }<br>  z = 0;<br>  for( x = 0; x &lt; a[0].size(); x++ )<br>  for( y = 0; y &lt; a.size(); y++ )<br>    z += (a[y][x] == 'X');<br>  return z;<br>}<br>};<br><br><br>// Powered by FileEdit<br></td>