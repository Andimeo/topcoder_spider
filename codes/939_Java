            import java.util.*;<br> <br>public class GameOfLife {<br>  char[][] c;<br>  char[][] aux; int h,w;<br>  int mod(int n,int k) { if (n&lt;0) n+=k; return n%k; }<br>  int count(int i,int j) {<br>    return c[mod(i,h)][mod(j,w)]=='X' ? 1 : 0;<br>  }<br>  int countadj(int i,int j) {<br>    return count(i-1,j-1)+count(i-1,j)+count(i-1,j+1)+<br>      count(i,j-1)+count(i,j+1)+<br>      count(i+1,j-1)+count(i+1,j)+count(i+1,j+1);<br>  }<br>  <br>  public int alive(String[] start, String rules, int generations) {<br>    h=start.length; w=start[0].length();<br>    c=new char[h][];<br>    for (int i=0;i&lt;h;i++) c[i]=start[i].toCharArray();<br>    aux=new char[h][w];<br>    for (int g=0;g&lt;generations;g++) {<br>      for (int i=0;i&lt;h;i++) for (int j=0;j&lt;w;j++) {<br>        int a=countadj(i,j);<br>        char r=rules.charAt(a);  <br>if (r=='D') aux[i][j]='.';<br>else if (r=='B') aux[i][j]='X';<br>else aux[i][j]=c[i][j];<br>      }<br>      for (int j=0;j&lt;h;j++) System.arraycopy(aux[j],0,c[j],0,w);<br>    }<br>    int n=0;<br>    for (int i=0;i&lt;h;i++) for (int j=0;j&lt;w;j++) n+=count(i,j);<br>    return n;<br>  }<br>}<br> <br>// Powered by PopsEdit<br></td>