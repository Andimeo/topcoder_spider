            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br><br>public class WaterEqualizer<br>{<br>  public double minTime(int[] waterVolumes)<br>  {<br>        Array.Sort(waterVolumes);<br>        double avg = 0;<br>        foreach (int i in waterVolumes)<br>        {<br>            avg += i;<br>        }<br>        avg /= waterVolumes.Length;<br>        double ret=0;<br>        foreach (int i in waterVolumes)<br>        {<br>            if (i &lt; avg)<br>            {<br>                ret += (avg - i);<br>            }<br>        }<br><br>        return ret;<br>  }<br>    static void Main(string[] args)<br>    {<br>        WaterEqualizer we = new WaterEqualizer();<br>        int[] waterVolumes1 = new int[] { 1, 2 };<br>        double r1 = we.minTime(waterVolumes1);<br><br>        int[] waterVolumes2 = new int[] { 1, 2, 1, 2 };<br>        double r2 = we.minTime(waterVolumes2);<br><br>        int[] waterVolumes3 = new int[] { 10, 1 };<br>        double r3 = we.minTime(waterVolumes3);<br><br>        int[] waterVolumes4 = new int[] { 1, 2, 3, 4 };<br>        double r4 = we.minTime(waterVolumes4);<br><br>        return;<br>        //int[] waterVolumes5 = new int[] { 1, 2 };<br>        //double r5 = we.minTime(waterVolumes);<br>    }<br>//&lt;%:testing-code%&gt;<br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>