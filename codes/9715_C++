            #include &lt;string&gt;<br>#include &lt;vector&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;iostream&gt;<br>#include &lt;fstream&gt;<br>#include &lt;sstream&gt;<br>using namespace std;<br>#include &lt;stdio.h&gt;<br>#include &lt;stdlib.h&gt;<br>#include &lt;math.h&gt;<br><br>//typedef __int64 ll;<br>#define Max(a,b) ((a)&gt;(b)?(a):(b))<br>#define Min(a,b) ((a)&lt;(b)?(a):(b))<br><br>class WaterEqualizer {<br>  public:<br>  int n,m;<br>  double minTime(vector &lt;int&gt; a) {<br>    int i,j,k;<br>    double tot = 0;<br>    for (i=0; i&lt;a.size(); i++)<br>    {<br>      tot += a[i];<br>    }<br>    tot /=a.size();<br>    double ans = 0;<br>    for (i=0; i&lt;a.size(); i++)<br>      ans += fabs(a[i]-tot);<br>    return ans/2;<br>  }<br>  <br><br>};<br><br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003]<br>// Powered by CodeProcessor<br></td>