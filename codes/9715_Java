            import java.util.*;<br>public class WaterEqualizer {<br>    public double minTime(int[] v) {<br>        double res = 0;<br>        double avg = 0;<br>        for (int i = 0; i &lt; v.length; i++){<br>          avg += v[i];<br>        }<br>        avg /= v.length;<br>        for (int i = 0; i &lt; v.length; i++){<br>          if (v[i] &gt; avg)<br>            res += v[i] - avg;<br>        }<br>        return res;<br>    }<br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by CodeProcessor<br></td>