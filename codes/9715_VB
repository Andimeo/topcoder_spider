<td class="problemText" colspan="8" valign="middle" align="left">
            Public Class WaterEqualizer<br>    Public Function minTime(ByVal waterVolumes As Integer()) As Double<br>        Dim i As Integer<br>        Dim avr As Double = 0<br>        Dim temp As Double = 0<br>        For i = 0 To waterVolumes.Length - 1<br>            avr += waterVolumes(i)<br>        Next<br>        avr /= waterVolumes.Length<br>        For i = 0 To waterVolumes.Length - 1<br>            temp += System.Math.Abs(waterVolumes(i) - avr)<br>        Next<br>        Return temp / 2<br>    End Function<br>End Class<br></td>