            struct SegmentDisplay<br>{<br>  int howManyNumbers(int n)<br>  {<br>    if (n==0)<br>      return 0;<br>    int howMany[500001]; howMany[0]=1;<br>    int segments[10]={6,2,5,5,4,5,6,3,7,6};<br>    int i,j;<br>    for (i=1; i&lt;=n; i++)<br>    {<br>      howMany[i]=0;<br>      for (j=(i==n?1:0); j&lt;10; j++)<br>        if (i&gt;=segments[j])<br>          howMany[i]=(howMany[i]+howMany[i-segments[j]])%1000000007;<br>      <br>    }<br>    if (n==6)<br>      howMany[n]++;<br>    return howMany[n];<br>  }<br>};<br></td>