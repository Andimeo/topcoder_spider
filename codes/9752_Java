            public class HoleCakeCuts {<br>  public int cutTheCake( int L, int l, int[] h, int[] v ) {<br>    int hn = 0;<br>    for ( int i = 0; i &lt; h.length; i ++ ) {<br>      if ( h[i] &gt;= -l &amp;&amp; h[i] &lt;= l ) {<br>        hn ++;<br>      }<br>    }<br>    int vn = 0;<br>    for ( int i = 0; i &lt; v.length; i ++ ) {<br>      if ( v[i] &gt;= -l &amp;&amp; v[i] &lt;= l ) {<br>        vn ++;<br>      }<br>    }<br>    if ( hn == 0 &amp;&amp; vn == 0 ) {<br>      hn = 1;<br>    }<br>    <br>    return ( h.length + 1 ) * ( v.length + 1 ) - ( hn - 1 ) * ( vn - 1 );<br>  }<br>}<br></td>