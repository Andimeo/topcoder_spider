            #include &lt;vector&gt;<br><br>using namespace std;<br><br>class MarblesInABag {<br>      private:<br>              double opt[2][5000];<br>      public:<br>             double getProbability(int redCount, int blueCount) {<br>                    if (redCount &gt; blueCount) return 0;<br>                    int i, curr = 0, prev = 0, t;<br>                    for (i = 1; i &lt;= blueCount; i++)<br>                        opt[0][i] = 1;<br>                    for (t = 1; t &lt;= redCount; t++) {<br>                        curr = 1 - prev;<br>                        opt[curr][0] = 0;<br>                        opt[curr][1] = t * 1.0 / (t + 1) * opt[prev][0];<br>                        for (i = 2; i &lt;= blueCount; i++)<br>                            opt[curr][i] = t * 1.0 / (t + i) * opt[prev][i - 1] + i * 1.0 / (t + i) * opt[curr][i - 2];<br>                        prev = curr;<br>                    }<br>                    return opt[curr][blueCount];<br>             }<br>      };<br></td>