            public class MarblesInABag {<br>  public double getProbability(int redCount, int blueCount) {<br>    double P[][] = new double[ 2][ 4001];<br>    int Sw[] = { 1, 0};<br>    int i, j, sw;<br>    sw = 0;<br>    for ( j = 1; j &lt;= blueCount; j+=2) P[ 0][ j] = 1;<br>    for ( i = 1; i &lt;= redCount; i++) {<br>      if ( sw != 0) sw = 0; else sw = 1;<br>      if ( i % 2 == 1) { P[ sw][ 0] = 0; j = 2;} else { P[ sw][ 1] = 0; j = 3;}<br>      for ( ; j &lt;= blueCount; j+=2) {<br>        P[ sw][ j] = P[ Sw[ sw]][ j - 1] * (double)i / (i + j) + P[ sw][ j - 2] * (double)j / (i + j);<br>      }<br>    }<br>    return P[ sw][ blueCount];<br>  }<br>}<br></td>