            public class IdealString {<br><br>  private int n;<br>  private boolean[] nextPoint;<br><br>  public String construct(int length) {<br>    n = length;<br>    nextPoint = new boolean[n];<br>    try{<br>      rec(0, 'A', 0);<br>    }<br>    catch(Exception e){<br>      return createAnswer();<br>    }<br>    return "";<br>  }<br><br>  private void rec(int ind, int ch, int rest) throws Exception {<br>    if(ind + rest == n)<br>      throw new Exception();<br>    if(ind + rest &gt; n)<br>      return;<br>    if(ch &gt; 'Z')<br>      return;<br>    if(rest != 0){<br>      rec(ind + 1, ch, rest - 1);<br>    }<br>    nextPoint[ind] = true;<br>    rec(ind + 1, ch + 1, rest + ind);<br>    nextPoint[ind] = false;<br>  }<br><br>  private String createAnswer() {<br>    char[] str = new char[n];<br>    int[] rest = new int[30];<br>    int ch = -1;<br>    for(int i = 0; i &lt; n; i++){<br>      if(nextPoint[i]){<br>        ch++;<br>        rest[ch] = i;<br>        str[i] = (char)('A' + ch);<br>      }<br>      else{<br>        int first = 0;<br>        while(rest[first] == 0)<br>          first++;<br>        rest[first]--;<br>        str[i] = (char)('A' + first);<br>      }<br>    }<br>    return new String(str);<br>  }<br><br>}<br></td>