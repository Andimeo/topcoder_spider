            public class RelativePath<br>{<br>public String makeRelative(String path, String currentDir)<br>{<br>  String res;<br>  String[] cdP = currentDir.split("/");<br>  String[] pP = path.split("/");<br>  int minl = Math.min(pP.length,cdP.length);<br>  int common = minl;<br>  for (int i=0;i&lt;minl;i++)<br>  {<br>    if (!cdP[i].equals(pP[i]))<br>    {<br>      common = i;<br>      break;<br>    }<br>  }<br>  res = "";<br>  for (int i=cdP.length-1;i&gt;=common;i--)<br>    res += "../";<br>  for (int j=common;j&lt;pP.length;j++)<br>    if (pP[j].length()&gt;0)<br>      res += pP[j]+"/";<br>  return res.substring(0,res.length()-1);<br>}<br>}<br></td>