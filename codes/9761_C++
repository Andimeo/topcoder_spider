            #include &lt;algorithm&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;queue&gt;<br><br>using namespace std;<br><br>class FallingFactorialPower<br>{<br>public:<br>     double compute(int n, int k)<br>   {<br>     double ans=1;<br>     int i,j;<br>       if(k==0)<br>       return 1;<br>     else if(k&gt;0)<br>     {<br>          for(i=0;i&lt;k;i++)<br>        ans*=n-i;<br>        return ans;<br>     }<br>     else<br>     {<br>          k*=-1;<br>        for(i=1;i&lt;=k;i++)<br>        ans/=n+i;<br>        return ans;<br>     }<br>   }<br>};<br></td>