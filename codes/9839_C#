            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class ArithmeticProgression {<br>    public double minCommonDifference(int a0, int[] seq) {<br><br>        if (seq.Length == 0) return 0;<br>        double min = seq[0] - a0;<br>        min = Math.Max(min, 0);<br>        double max = seq[0] - a0 + 1;<br><br>        for (int z = 0; z &lt; 100; z++) {<br>            double dTry = (min + max) / 2;<br>            double val = a0;<br>            bool th = false;<br>            bool tl = false;<br>            for (int i = 0; i &lt; seq.Length; i++) {<br>                val += dTry;<br>                if (Math.Floor(val) &gt; seq[i]) th = true;<br>                if (Math.Floor(val) &lt; seq[i]) tl = true;<br>            }<br>            if (th &amp;&amp; tl) return -1;<br>            if (th) max=dTry;<br>                if (tl) min=dTry;<br>                if (!th &amp;&amp; !tl) max = dTry;<br>                if (z == 99 &amp;&amp; th) return -1;<br>        }<br>        return min;<br><br>    }<br>}<br></td>