            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br> <br>using namespace std;<br> <br>class TurnOnTheLights {<br>public:<br>  int countLights(vector &lt;string&gt;, int, int, int);<br>};<br> <br>int b[55][55];<br> <br>int TurnOnTheLights::countLights(vector &lt;string&gt; s, int k, int x, int y) {<br>  int sx, sy, n = s.size(), m = s[0].length(), ans = 0, cur, i, j, km;<br>  for (sx=-1;sx&lt;=1;sx++)<br>    for (sy=-1;sy&lt;=1;sy++)<br>      if (sx*sx+sy*sy == 1) {<br>        memset(b,0,sizeof(b));<br>        i = x+sx; j = y+sy; km = 1;<br>        while (i &gt;= 0 &amp;&amp; j &gt;= 0 &amp;&amp; i &lt; n &amp;&amp; j &lt; m &amp;&amp; km &lt;= k) {<br>          if (s[i][j] == 'Y') {<br>            b[i][j] = 1;<br>            if (i &gt; 0)<br>              if (s[i-1][j] == 'Y') b[i-1][j] = 1;<br>            if (j &gt; 0)<br>              if (s[i][j-1] == 'Y') b[i][j-1] = 1;<br>            if (i &lt; n-1)<br>              if (s[i+1][j] == 'Y') b[i+1][j] = 1;<br>            if (j &lt; m-1)<br>              if (s[i][j+1] == 'Y') b[i][j+1] = 1;<br>          }<br>          i += sx;<br>          j += sy;<br>          km++;<br>        }<br>        cur = 0;<br>        for (i=0;i&lt;n;i++)<br>          for (j=0;j&lt;m;j++) cur += b[i][j];<br>        if (cur &gt; ans) ans = cur;<br>      }<br>  return ans;<br>}<br> <br> <br>//Powered by [KawigiEdit] 2.0!<br></td>