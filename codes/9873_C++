            #include &lt;vector&gt;<br>#include &lt;list&gt;<br>#include &lt;map&gt;<br>#include &lt;set&gt;<br>#include &lt;deque&gt;<br>#include &lt;stack&gt;<br>#include &lt;bitset&gt;<br>#include &lt;algorithm&gt;<br>#include &lt;functional&gt;<br>#include &lt;numeric&gt;<br>#include &lt;utility&gt;<br>#include &lt;sstream&gt;<br>#include &lt;iostream&gt;<br>#include &lt;iomanip&gt;<br>#include &lt;cstdio&gt;<br>#include &lt;cmath&gt;<br>#include &lt;cstdlib&gt;<br>#include &lt;ctime&gt;<br>#define PB push_back<br>#define MP make_pair<br>#define ST first<br>#define ND second<br>#define INF 1000000100<br>#define det(a,b,c) (( a.ST*(b.ND-c.ND) + b.ST*(c.ND-a.ND) + c.ST*(a.ND-b.ND) ) )<br>using namespace std;<br>typedef pair&lt;int,int&gt; pi;<br>typedef long long int lld;<br>typedef vector&lt;int&gt; vi;<br>typedef double lf;<br> <br>class TreesDivision {<br>public:<br>  int minDifference(vector &lt;int&gt;, vector &lt;int&gt;, vector &lt;int&gt;);<br>};<br>vector&lt;int&gt; X,Y,V;<br>bool op(int a,int b){<br>  return MP(X[a],Y[a])&lt;MP(X[b],Y[b]);<br>}<br>int wynik=INF,lol1,lol2,suma,dot,dot2;<br> <br>int TreesDivision::minDifference(vector &lt;int&gt; x, vector &lt;int&gt; y, vector &lt;int&gt; il) {<br>X=x;<br>Y=y;<br>  for(int i=0;i&lt;x.size();i++){<br>    for(int j=i+1;j&lt;x.size();j++){<br>      V.clear();<br>      V.PB(i);<br>      V.PB(j);<br>      lol1=lol2=suma=dot=dot2=0;<br>      suma=il[i]+il[j];<br>      for(int k=0;k&lt;x.size();k++)<br>        if(k!=i &amp;&amp; k!=j)<br>          if(det(MP(x[i],y[i]),MP(x[j],y[j]),MP(x[k],y[k]))&gt;0)<br>            lol1+=il[k];<br>          else if(det(MP(x[i],y[i]),MP(x[j],y[j]),MP(x[k],y[k]))&lt;0)<br>            lol2+=il[k];<br>          else{<br>            V.PB(k);<br>            suma+=il[k];<br>          }<br>      sort(V.begin(),V.end(),op);<br>      wynik=min(wynik,abs(lol1-(lol2+suma)));<br>      for(int i=0;i&lt;V.size();i++){<br>        dot+=il[V[i]];<br>        wynik=min(wynik,abs((lol1+dot)-(lol2+suma-dot)));<br>      }<br>      wynik=min(wynik,abs((lol1+suma)-lol2));<br>      for(int i=0;i&lt;V.size();i++){<br>        dot2+=il[V[i]];<br>        wynik=min(wynik,abs((lol1+suma-dot2)-(lol2+dot2)));<br>      }<br>      <br>    }<br>  }  <br>  <br>  return wynik;<br>}<br> <br> <br>//Powered by [KawigiEdit] 2.0!<br></td>