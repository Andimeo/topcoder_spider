            using System;<br><br>public class CustomDice {<br>    int MOD = 1000000007;<br><br>    public int countDice(int M) {<br>        int[] am = new int[6 * M + 1];<br>        int[] am2 = new int[6 * M + 1];<br>        am[0] = 1;<br>        for (int cnt = 1; cnt &lt;= 6; ++cnt) {<br>            for (int i = 0; i &lt; am.Length; ++i)<br>            {<br>                if (i &gt;= cnt)<br>                {<br>                    am2[i] = am2[i - cnt] + am[i - cnt];<br>                    if (am2[i] &gt;= MOD)<br>                        am2[i] -= MOD;<br>                }<br>                else<br>                {<br>                    am2[i] = 0;<br>                }<br>            }<br>            int[] tmp = am;<br>            am = am2;<br>            am2 = tmp;<br>        }<br>        int res = 0;<br>        for (int i = 0; i &lt; am.Length; ++i)<br>            res = (int) ((res + (long)am[i] * 30) % MOD);<br>        return res;<br>    }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>