            #include &lt;math.h&gt;<br>#include &lt;string.h&gt;<br>#include &lt;vector&gt;<br>#include &lt;string&gt;<br>#include &lt;queue&gt;<br>#include &lt;algorithm&gt;<br>using namespace std;<br><br>int p1[6000001], p2[6000001];<br>const int mmod = 1000000007;<br><br>class CustomDice<br>{<br>  public:<br>  int countDice(int M)<br>  {<br>    int remain = M*6-21;<br>    if (remain&lt;0) return 0;<br>    for (int i=0; i&lt;=remain; i++) p2[i] = 0;<br>    p2[0] = 1;<br>    for (int i=1; i&lt;=6; i++)<br>    {<br>      for (int j=0; j&lt;=remain; j++)<br>        if (j&gt;=i) p1[j] = (p1[j-i]+p2[j])%mmod; else p1[j] = p2[j];<br>      for (int j=0; j&lt;=remain; j++)<br>        p2[j] = p1[j];<br>    }<br>    int pp = 0;<br>    for (int i=0; i&lt;=remain; i++)<br>      pp = (pp+p2[i])%mmod;<br>    return (((long long)pp)*30)%mmod;<br>  };<br>};<br></td>