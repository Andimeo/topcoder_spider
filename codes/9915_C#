            using System;<br><br>public class RedIsGood {<br>  public double getProfit(int R, int B) {<br>        double[] exp = new double[B + 1];<br>        double[] nexp = new double[B + 1];<br>        for (int r = 0; r &lt;= R; ++r)<br>        {<br>            for (int b = 0; b &lt;= B; ++b)<br>            {<br>                if (r == 0 &amp;&amp; b == 0)<br>                    nexp[b] = 0;<br>                else<br>                {<br>                    double cexp = 0;<br>                    if (r &gt; 0)<br>                        cexp += r / (double) (r + b) * (1 + exp[b]);<br>                    if (b &gt; 0)<br>                        cexp += b / (double) (r + b) * (-1 + nexp[b - 1]);<br>                    nexp[b] = Math.Max(0, cexp);<br>                }<br>            }<br>            double[] tmp = exp;<br>            exp = nexp;<br>            nexp = tmp;<br>        }<br>        return exp[B];<br>  }<br><br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>