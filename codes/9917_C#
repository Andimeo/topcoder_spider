            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Collections.Specialized;<br>using System.Text;<br>using System.Text.RegularExpressions;<br> <br>public class SolitaireSimulation<br>{<br>  public int periodLength(int[] heaps)<br>  {<br>    Hashtable ht = new Hashtable();<br>    ArrayList a = new ArrayList();<br>    for ( int i = 0; i &lt; heaps.Length; i++ ) a.Add( heaps[i] );<br>    <br>    int step = 0;<br>    while ( true ) {<br>      a.Sort();<br>      string h = "";<br>      for ( int i = 0; i &lt; a.Count; i++ ) h += ((int) a[i]) + " ";<br> <br>      if ( ht.ContainsKey( h ) ) {<br>        return step - ((int) ht[ h ] );<br>      }<br>      ht.Add( h, step );<br>      <br>      int c = 0;<br>      for ( int i = a.Count - 1 ; i &gt;= 0; i-- ) {<br>        a[i] = (int) a[i] - 1;<br>        if ( (int)a[i] == 0 ) {<br>          a.RemoveAt( i );<br>        }<br>        c++;<br>      }<br>      a.Add( c );<br>      <br>      step++;<br>    }<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>