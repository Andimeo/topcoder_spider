            import java.util.*;<br> <br>public class SolitaireSimulation {<br> <br>    public int periodLength(int[] heaps) {<br> <br>        Map&lt;List&lt;Integer&gt;, Integer&gt; map = new HashMap&lt;List&lt;Integer&gt;, Integer&gt;();<br> <br>        List&lt;Integer&gt; h = new ArrayList&lt;Integer&gt;();<br>        for (int i : heaps) {<br>            h.add(i);<br>        }<br> <br>        for (int i = 0;; i++) {<br>            Integer j = map.get(h);<br>            if (j == null) {<br>                map.put(h, i);<br>                List&lt;Integer&gt; hh = new ArrayList&lt;Integer&gt;();<br>                for (int q : h) {<br>                    if (q &gt; 1) {<br>                        hh.add(q - 1);<br>                    }<br>                }<br>                hh.add(h.size());<br>                Collections.sort(hh);<br>                h = hh;<br>            } else {<br>                return i - j;<br>            }<br>        }<br>    }<br> <br>}<br> <br> <br>// Powered by FileEdit<br>// Powered by RETester [based on ExampleBuilder]<br>// Powered by CodeProcessor<br></td>