            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br><br>public class ReversedSum <br>{<br>    private int rev(int x)<br>    {<br>        string s = x.ToString();<br>        string ret = "";<br>        for (int i = s.Length - 1; i &gt;= 0; i--)<br>            ret += s[i].ToString();<br>        return int.Parse(ret);<br>    }<br>    public int getReversedSum(int x, int y) <br>  {<br>        return rev(rev(x) + rev(y));<br>  }<br>  <br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by r1cs1]<br>// Powered by CodeProcessor<br></td>