            import java.util.*;<br>import java.util.regex.*;<br>import java.text.*;<br>import java.math.*;<br> <br> <br>public class ReversedSum<br>{<br>  String rev(String s)<br>  {<br>    String ret = "";<br>    for(int i=0;i&lt;s.length();i++)<br>      ret = s.charAt(i) + ret;<br>    return ret;<br>  }<br> <br>  public int getReversedSum(int x, int y)<br>  {<br>    return Integer.parseInt(rev(""+(Integer.parseInt(rev(""+x)) + Integer.parseInt(rev(""+y)))));<br>  }<br>  <br> <br>}<br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>