            using System;<br>using System.Collections;<br>using System.Timers;<br> <br>public class CardsCheating {<br>  public int numberOfShuffles(int[] cards, int[] shuffle) <br>    {<br>        int t = 0;<br>        int[] temp = new int[cards.Length];<br>        int i = 0;<br><br><br>        while (t &lt; 4000000)<br>        {<br>            for (i = 0; i &lt; cards.Length; i++)<br>            {<br>                if (i % 3 != cards[i])<br>                {<br>                    break;<br>                }<br>            }<br><br>            if (i == cards.Length)<br>            {<br>                return t;<br>            }<br><br>            for (i = 0; i &lt; cards.Length; i++)<br>            {<br>                temp[shuffle[i]] = cards[i];<br>            }<br><br>            temp.CopyTo(cards, 0);<br><br>            t++;<br>        }<br><br>        return -1;<br> <br>  }<br><br><br>}<br><br><br>// Powered by FileEdit<br>// Powered by TZTester 1.01 [25-Feb-2003] [modified for C# by Petr]<br>// Powered by CodeProcessor<br></td>