            public class CardsCheating {<br>  public boolean check(int[] cards) {<br>    int i;<br>    for(i = 0; i &lt; cards.length; i++)<br>      if(cards[i] != i % 3)return false;<br>    return true;<br>  }<br>  public int numberOfShuffles(int[] cards, int[] shuffle) {<br>    int i, j, n = cards.length;<br>    int max = 1000000;<br>    int[] tmp = new int[n];<br>    for(i = 0; i &lt; max; i++) {<br>      if(this.check(cards))return i;<br>      for(j = 0; j &lt; n; j++)<br>        tmp[shuffle[j]] = cards[j];<br>      for(j = 0; j &lt; n; j++)<br>        cards[j] = tmp[j];<br>    }<br>    return -1;<br>  }<br>}<br></td>