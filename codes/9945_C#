            using System;<br>using System.Collections;<br>using System.Collections.Generic;<br>using System.Text;<br><br>public class Towers<br>{<br>    public int attack(int myUnits, int hpT, int attackT, int numT)<br>    {<br>        int hpleft = hpT;<br>        int turn = 0;<br>        while(myUnits&gt;0 &amp;&amp; numT&gt;0)<br>        {            <br>            turn++;<br>            int attckleft = myUnits;<br>            while (attckleft &gt; 0)<br>            {<br>                if (attckleft &gt;= hpleft)<br>                {<br>                    attckleft -= hpleft;<br>                    numT--;<br>                    hpleft = hpT;<br>                }<br>                else<br>                {<br>                    hpleft -= attckleft;<br>                    attckleft = 0;                    <br>                }<br>            }<br><br>            if(numT&lt;=0)<br>                break;<br>            myUnits -= attackT*numT;<br>            if (myUnits &lt;= 0)<br>                break;<br>        }<br>        if (myUnits &lt;= 0)<br>            return -1;<br>        return turn;<br>    }<br>}<br></td>