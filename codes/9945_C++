            #include&lt;vector&gt;<br>#include&lt;list&gt;<br>#include&lt;map&gt;<br>#include&lt;set&gt;<br>#include&lt;queue&gt;<br>#include&lt;algorithm&gt;<br>#include&lt;sstream&gt;<br>#include&lt;iostream&gt;<br>#include&lt;cstdio&gt;<br>#include&lt;cmath&gt;<br>#include&lt;cstdlib&gt;<br>using namespace std;<br>#define f(i,a,b)for(int i=a;i&lt;b;i++)<br>#define rep(i,n)f(i,0,n)<br> <br>class Towers {<br> public:<br>  int attack(int, int, int, int);<br>};<br> <br>int Towers::attack(int myn, int hpT, int attackT, int numT){<br> <br>  int ct=0;<br>  int cur=hpT;<br>  while(1){<br>    cur-=myn;<br>    while(cur&lt;=0){<br>      cur=hpT+cur;<br>      numT--;<br>    }<br>    ct++;<br>    if(numT&lt;=0) return ct;<br>    myn-=attackT*numT;<br>    if(myn&lt;=0) return -1;<br>  }<br> <br>}<br>    <br> <br>//Powered by KawigiEdit 2.1.4 (beta) modified by pivanof!<br></td>