            /*<br> * To change this template, choose Tools | Templates<br> * and open the template in the editor.<br> */<br><br><br>/**<br> *<br> * @author Farouk<br> */<br>public class Towers {<br>    int myUnits, hpT, attackT, numT;<br>    <br>    public int attack(int my, int h, int att, int n)<br>    {<br>        myUnits = my;<br>        hpT = h;<br>        attackT=att;<br>        numT=n;<br>        int tot = numT*hpT;<br>        int rounds=0;<br>        while (true)<br>        {<br>            //System.out.println(myUnits+ "  " + tot);<br>            if (myUnits&lt;=0 || tot&lt;=0)<br>                break;<br>            tot-=myUnits;<br>            if (tot&lt;0)tot=0;<br>            double temp=(double)tot/(double)hpT;<br>            if ((int)temp != temp)<br>                temp=(int)temp+1;<br>        <br>            myUnits -= (temp * attackT);<br>            //System.out.println( Math.ceil((tot/hpT)+0.5) );<br>            rounds++;<br>            <br>        }<br>        if (tot&lt;=0)<br>            return rounds;<br>        return -1;<br>        <br>    }<br>    <br>    /*public static void main(String[] args) {<br>        Towers t = new Towers();<br>        //System.out.println(t.attack(10000, 10, 2, 2789));<br>        //System.out.println(t.attack(2, 1, 1, 3));<br>        //System.out.println(t.attack(10, 6, 9, 2));<br>        System.out.println(t.attack(1, 1, 1, 1));<br>    }*/<br>}<br></td>