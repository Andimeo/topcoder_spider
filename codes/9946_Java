            import java.util.Arrays;<br>public class ProblemSetter  {<br>  public int[] chooseProblems(int[] difficulties)  {<br>    int[] list = new int[3];<br>    Arrays.sort(difficulties);<br>    list[0] = difficulties[0];<br>    list[1] = difficulties[1];<br>    list[2] = difficulties[2];<br>    for(int a = 0; a &lt; difficulties.length; a++)  {<br>      for(int b = a+1; b &lt; difficulties.length; b++)  {<br>        for(int c = b+1; c &lt; difficulties.length; c++)  {<br>          int diff = Math.abs(difficulties[c]+difficulties[a]-2*difficulties[b]);<br>          if(diff &lt; Math.abs(list[2]+list[0]-2*list[1]))  {<br>            list[0] = difficulties[a];<br>            list[1] = difficulties[b];<br>            list[2] = difficulties[c];<br>          }<br>          else if(diff == Math.abs(list[2]+list[0]-2*list[1]))  {<br>            if(difficulties[a] &lt; list[0])  {<br>            list[0] = difficulties[a];<br>            list[1] = difficulties[b];<br>            list[2] = difficulties[c];<br>            }<br>            else if(difficulties[a] == list[0] &amp;&amp; difficulties[c] &gt; list[2])  {<br>            list[0] = difficulties[a];<br>            list[1] = difficulties[b];<br>            list[2] = difficulties[c];<br>            }<br>            else if(difficulties[a] == list[0] &amp;&amp; difficulties[c] == list[2] &amp;&amp; difficulties[b] &lt; list[1])  {<br>            list[0] = difficulties[a];<br>            list[1] = difficulties[b];<br>            list[2] = difficulties[c];<br>            }<br>          }<br>        }<br>      }<br>    }<br>    return list;<br>  }<br>}<br></td>