            using System;<br>using System.Collections.Generic;<br>using System.Drawing;<br>using System.Text;<br> <br>public class TheSimpleGame<br>{<br>  public int count(int n, int[] x, int[] y)<br>  {<br>    int result = 0;<br>        for (int i = 0; i &lt; x.Length; ++i)<br>        {<br>            result += Math.Min(<br>                    x[i] - 1 + y[i] - 1, Math.Min(<br>                    n - x[i] + y[i] - 1, Math.Min(<br>                    x[i] - 1 + n - y[i],<br>                    n - x[i] + n - y[i])));<br> <br>        }<br>    return result;<br>  }<br> <br> <br>}<br>//Powered by [KawigiEdit] 2.0!<br></td>