            Class TheSimpleGame<br>    Public Function count(ByVal n As Integer, ByVal x As Integer(), ByVal y As Integer()) As Integer<br>        Dim iRet As Integer<br>        Dim iMin As Integer<br>        Dim i As Integer<br>        iRet = 0<br>        For i = 1 To x.Length<br>            iMin = 999<br>            iMin = Math.Abs(1 - x(i - 1)) + Math.Abs(1 - y(i - 1))<br>            If iMin &gt; Math.Abs(1 - x(i - 1)) + Math.Abs(n - y(i - 1)) Then iMin = Math.Abs(1 - x(i - 1)) + Math.Abs(n - y(i - 1))<br>            If iMin &gt; Math.Abs(n - x(i - 1)) + Math.Abs(1 - y(i - 1)) Then iMin = Math.Abs(n - x(i - 1)) + Math.Abs(1 - y(i - 1))<br>            If iMin &gt; Math.Abs(n - x(i - 1)) + Math.Abs(n - y(i - 1)) Then iMin = Math.Abs(n - x(i - 1)) + Math.Abs(n - y(i - 1))<br>            iRet = iRet + iMin<br>        Next<br><br>        Return iRet<br><br><br>    End Function<br><br><br>End Class<br></td>